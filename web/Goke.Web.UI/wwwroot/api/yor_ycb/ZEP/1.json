    "name": "Sefaniah",
    "commonName": "Sefaniah",
    "title": "Ìwé Wòlíì Sefaniah",
    "order": 36,
    "numberOfChapters": 3,
    "sha256": "f96cfb86cd0ded9080c5dbb49d47564737f4d3c738a9e3a6bc2f799837710882",
