    "translationId": "yor_ycb",
    "name": "Obadiah",
    "commonName": "Obadiah",
    "title": "Ìwé Wòlíì Obadiah",
    "order": 31,
    "numberOfChapters": 1,
    "sha256": "3ddb5e6bd4e42808e74c33a6801c66fbd5d54d6bb3b78bcce6864dc3a76f00f0",
    "firstChapterApiLink": "/api/yor_ycb/OBA/1.json",
