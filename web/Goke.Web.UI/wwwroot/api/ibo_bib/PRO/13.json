  "chapter": {
    "number": 13,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Nwa maara ihe na-ege ntị na ndụmọdụ nna ya",
            "poem": 1
          },
          {
            "text": "ma onye na-akwa emo adịghị ege ntị nʼịba mba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Onye na-eme ezi ihe ga-esite nʼokwu ọnụ ya nweta ụgwọ ọrụ,",
            "poem": 1
          },
          {
            "text": "ma ndị na-aghọgbu ibe ha ga-anata ihe ike dịka ụgwọ ọrụ ha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mmadụ zuruoke bụ onye na-ejide ire ya aka!",
            "poem": 1
          },
          {
            "noteId": 1545
          },
          {
            "text": "Ma onye ekwuruekwu na-ewetara onwe ya mbibi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ndị umengwụ na-achọ ọtụtụ ihe ma ọ dịghị ihe ha na-enweta;",
            "poem": 1
          },
          {
            "text": "ma onye na-arụsị ọrụ ike na-enweta ihe niile ọ chọrọ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Onye ezi omume kpọrọ ụgha asị,",
            "poem": 1
          },
          {
            "text": "ma okwu ọnụ onye na-emebi iwu",
            "poem": 2
          },
          {
            "text": "na-ewetara ya ihere na nkọcha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ezi omume mmadụ na-abara ya uru na ndụ ya niile,",
            "poem": 1
          },
          {
            "text": "ma ajọ omume ndị mmehie na-ala ha nʼiyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ọ dị mmadụ na-eme ka ọ bụ ọgaranya maọbụ onye ụkpa.",
            "poem": 1
          },
          {
            "text": "Ma ọ dịkwa mmadụ na-eme ka ọ bụ onye ụkpa maọbụ ọgaranya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ọgaranya nwere ike jiri ego ya gbapụta onwe ya,",
            "poem": 1
          },
          {
            "text": "ma ogbenye adịghị azaghachi mba banyere imerụ ya ahụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ìhè onye ezi omume na-enwupụ enwupụ,",
            "poem": 1
          },
          {
            "text": "ma oriọna onye mmebi iwu ga-anyụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Nganga na-eweta esemokwu,",
            "poem": 1
          },
          {
            "text": "ma a na-ahụ amamihe nʼime ndụ ndị na-anata ndụmọdụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Akụ a kpatara ngwangwa na-emebikwa ngwangwa;",
            "poem": 1
          },
          {
            "text": "ma akụ sitere nʼịrụsị ọrụ ike na-eto eto.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Nchere a na-echere ogologo oge maka imezu olileanya e nwere na-egbu obi,",
            "poem": 1
          },
          {
            "text": "mgbe ihe a na-eche mezuru, oke ọṅụ na-adị.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Onye na-elelị ntụziaka anya ga-akwụ ụgwọ nʼihi ya,",
            "poem": 1
          },
          {
            "text": "ma onye na-atụ egwu ihe enyere nʼiwu ga-anata ụgwọ ọrụ ya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Nkuzi nke onye maara ihe bụ isi iyi nke ndụ,",
            "poem": 1
          },
          {
            "text": "nke na-eme ka mmadụ ghara ịma nʼọnya ọnwụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ezi nghọta na-eweta ihuọma,",
            "poem": 1
          },
          {
            "text": "ma ụzọ nke ndị na-ekwesighị ntụkwasị obi na-eduba ha na mbibi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Onye nwere uche na-eji ọmụma ihe nʼarụ ọrụ,",
            "poem": 1
          },
          {
            "text": "ma ndị nzuzu na-egosipụta enweghị uche ya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Onyeozi ajọ omume na-adaba na nsogbu,",
            "poem": 1
          },
          {
            "text": "ma onyeozi kwesiri ntụkwasị obi na-eweta ọgwụgwọ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Onye na-ajụ ịdọ aka na ntị ga-anwụ nʼụkpa na nʼihere;",
            "poem": 1
          },
          {
            "text": "ma onye na-anabata ịdọ aka na ntị ka a ga-asọpụrụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Mgbe ihe a na-ele anya mezuru ọ na-atọ mkpụrụobi ụtọ,",
            "poem": 1
          },
          {
            "text": "ma ndị nzuzu kpọrọ isite nʼajọ ihe wezuga onwe ha asị.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Na-eso ndị maara ihe ka ị ghọọ onye mara ihe,",
            "poem": 1
          },
          {
            "text": "nʼihi na onye na-eso ndị nzuzu na-aba na nsogbu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Nsogbu bụ ihe na-esogharị ndị mmehie,",
            "poem": 1
          },
          {
            "text": "ma ngọzị na-esogharị ndị ezi omume.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mgbe ezi mmadụ nwụrụ, ọ na-ahapụrụ ụmụ ya na ụmụ ụmụ ya akụ,",
            "poem": 1
          },
          {
            "text": "ma mgbe onye mmehie nwụrụ, akụ ya na-abụ nke ndị ezi omume.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ubi onye ogbenye pụrụ inwe ọtụtụ ihe oriri,",
            "poem": 1
          },
          {
            "text": "ma ikpe na-ezighị ezi na-azachapụ ya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Onye ọbụla na-adọghị ụmụ ya aka na ntị, na-egosi na ọ hụghị ha nʼanya;",
            "poem": 1
          },
          {
            "text": "ma onye hụrụ ha nʼanya, ga-adọsi ha aka na ntị ike.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Onye ezi omume na-eri nri ruo na nriju afọ onwe ya,",
            "poem": 1
          },
          {
            "text": "ma nri na-akọ nʼafọ onye ajọ omume.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
