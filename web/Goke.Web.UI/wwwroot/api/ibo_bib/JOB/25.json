  "chapter": {
    "number": 25,
    "content": [
      {
        "type": "heading",
        "content": [
          "Okwu Bildad"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Mgbe ahụ, Bildad onye Shua zara sị:"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ike ọchịchị na oke egwu bụ nke Chineke;",
            "poem": 1
          },
          {
            "text": "Ọ bụ ya na-eme ka udo dịrị nʼeluigwe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Onye pụrụ ịgụta usuu ndị agha ya ọnụ?",
            "poem": 1
          },
          {
            "text": "Onye kwa ka ìhè ya na-adịghị enwukwasị?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mmadụ ọ ga-esi aṅaa bụrụ onye ezi omume nʼihu Chineke?",
            "poem": 1
          },
          {
            "text": "Mmadụ nwanyị mụrụ ọ ga-esi aṅaa dị ọcha?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Lee, ọ bụladị ọnwa adịghị achawapụta,",
            "poem": 1
          },
          {
            "text": "ọzọ kpakpando adịghị ọcha nʼanya ya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "ka ọfọdụzie nwa mmadụ efu mụrụ, nke bụ naanị ikpuru,",
            "poem": 1
          },
          {
            "text": "mmadụ, nke bụ naanị idide.”",
            "poem": 2
          }
        ]
      }
    ],
