  "chapter": {
    "number": 17,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mmụọ m tiwara etiwa,",
            "poem": 1
          },
          {
            "text": "ụbọchị m niile dị mkpụmkpụ,",
            "poem": 2
          },
          {
            "text": "ili na-echere ịnabata m.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Nʼezie ndị na-akwa emo gbara m gburugburu;",
            "poem": 1
          },
          {
            "text": "anya m na-elekwasịkwa mkpasu iwe ha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Debere m ihe ebe nʼebe gị Chineke nọ.",
            "poem": 1
          },
          {
            "text": "Olee onye ọzọ pụrụ ịnara m nʼakaebe?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "I mechiela uche ha ka ha ghara inwe nghọta;",
            "poem": 1
          },
          {
            "text": "ya mere, i gaghị ekwe ka ha nwee mmeri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ọ bụrụ na mmadụ ekwujọọ enyi ya ka o were nweta uru dị nʼime ya,",
            "poem": 1
          },
          {
            "text": "anya ụmụ ya ga-ada mba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Chineke emeela ka m bụrụ okwu ilu nye onye ọbụla,",
            "poem": 1
          },
          {
            "text": "meekwa ka m bụrụ onye ha na-agbụsa asọ mmiri nʼihu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Anya m na-ahụ inyogho inyogho nʼihi iru ụjụ;",
            "poem": 1
          },
          {
            "text": "ahụ m aghọọla onyinyo nke ihe m bụ na mbụ.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ndị na-eme ihe ziri ezi na-akụja mgbe ha hụrụ nke a;",
            "poem": 1
          },
          {
            "text": "ndị aka ha dị ọcha na-enwe mkpali megide ndị ajọ omume.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ma otu ọbụla ọ dị, ndị ezi omume ga-aga nʼihu nʼiso ụzọ ha,",
            "poem": 1
          },
          {
            "text": "ndị aka ha dị ọcha ga-aga nʼihu nʼịdị ike.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Ma bịanụ, unu niile, bidonụ okwu unu ọzọ!",
            "poem": 1
          },
          {
            "text": "Agaghị m achọta onye maara ihe nʼetiti unu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ụbọchị m niile agafeela, atụmatụ m abụrụla ihe lara nʼiyi.",
            "poem": 1
          },
          {
            "text": "Ma ọchịchọ nke obi m",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "na-edo abalị nʼọnọdụ ehihie;",
            "poem": 1
          },
          {
            "text": "nʼihu ọchịchịrị ka ìhè dị nso.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ọ bụrụ na ebe obibi m na-ele anya ya bụ ili,",
            "poem": 1
          },
          {
            "text": "ọ bụrụ na m agbasaa",
            "poem": 2
          },
          {
            "noteId": 1111
          },
          {
            "text": "ihe ndina m nʼelu ọchịchịrị,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "a sikwa na m asị ire ure, ‘Nna m ka ị bụ,’",
            "poem": 1
          },
          {
            "text": "maọbụ sị ikpuru ‘Nne m’ maọbụ ‘Nwanne m nwanyị,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ebeekwa ka olileanya m dị?",
            "poem": 1
          },
          {
            "text": "Onye pụrụ ịhụ ma m nwere olileanya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Olileanya m ọ ga-arịda ruo nʼọnụ ụzọ ama nke ọnwụ?",
            "poem": 1
          },
          {
            "text": "Anyị ga-esokọta rịdaruo nʼuzuzu?”",
            "poem": 2
          }
        ]
      }
    ],
