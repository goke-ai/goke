        }
      },
      {
        "noteId": 762,
        "caller": "+",
        "text": "Ko kuwa fasa ƙoƙon kansa",
        "reference": {
          "chapter": 2,
          "verse": 16
        }
      },
      {
        "noteId": 763,
        "caller": "+",
        "text": "Wato, reshen Nilu",
        "reference": {
          "chapter": 2,
          "verse": 18
        }
      },
      {
