  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "heading",
        "content": [
          "Isra’ila ya yashe Allah"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Maganar Ubangiji ta zo mini cewa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "“Tafi ka yi shela a kunnuwar Urushalima cewa,",
          {
            "text": "“ ‘Na tuna da amincin ƙuruciyarki,",
            "poem": 1
          },
          {
            "text": "yadda kamar amarya kika ƙaunace ni",
            "poem": 2
          },
          {
            "text": "kika kuma bi ni cikin hamada,",
            "poem": 1
          },
          {
            "text": "cikin ƙasar da ba a yi shuka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Isra’ila tsattsarka ce ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "nunan fari na girbinsa;",
            "poem": 2
          },
          {
            "text": "dukan waɗanda suka cinye ta an same su da laifi,",
            "poem": 1
          },
          {
            "text": "masifa kuwa ta same su,’ ”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka saurari maganar Ubangiji, ya gidan Yaƙub,",
            "poem": 1
          },
          {
            "text": "dukanku zuriyar gidan Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Wane laifi ne kakanninku sun same ni da shi,",
            "poem": 1
          },
          {
            "text": "da suka tsaya nesa da ni?",
            "poem": 2
          },
          {
            "text": "Sun bi gumakan banza",
            "poem": 1
          },
          {
            "text": "su kansu suka kuma zama banza da kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ba su yi tambaya, ‘Ina Ubangiji,",
            "poem": 1
          },
          {
            "text": "wanda ya fitar da su daga Masar",
            "poem": 2
          },
          {
            "text": "ya bishe su cikin jeji",
            "poem": 1
          },
          {
            "text": "cikin hamada da kwazazzabai",
            "poem": 2
          },
          {
            "text": "ƙasa mai fări da kuma duhu,",
            "poem": 1
          },
          {
            "text": "ƙasar da ba kowa mai ratsa ta ba kowa kuma mai zama a cikinta?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na kawo ku zuwa ƙasa mai albarka",
            "poem": 1
          },
          {
            "text": "don ku ci amfaninta da abubuwa masu yalwar da take bayarwa.",
            "poem": 2
          },
          {
            "text": "Amma kuka zo kuka ƙazantar da ƙasata",
            "poem": 1
          },
          {
            "text": "kuka kuma mai da gādona abin ƙyama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Firistoci ba su yi tambaya,",
            "poem": 1
          },
          {
            "text": "‘Ina Ubangiji ba.’",
            "poem": 2
          },
          {
            "text": "Waɗanda suke amfani da doka ba su san ni ba;",
            "poem": 1
          },
          {
            "text": "shugabanni suka yi mini tawaye.",
            "poem": 2
          },
          {
            "text": "Annabawa suka yi annabci ta wurin Ba’al,",
            "poem": 1
          },
          {
            "text": "suna bin gumakan banza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Saboda haka ina sāke tuhumarku,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          },
          {
            "text": "“Zan kuma tuhumi ’ya’ya ’ya’yanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku ƙetare zuwa tsibiran Kittim",
            "poem": 1
          },
          {
            "noteId": 760
          },
          {
            "text": "ku gani,",
            "poem": 1
          },
          {
            "text": "ku aika zuwa Kedar ku duba da kyau;",
            "poem": 2
          },
          {
            "text": "ku ga ko an taɓa yin wani abu haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Akwai wata al’ummar da ta canja allolinta?",
            "poem": 1
          },
          {
            "text": "(Duk da haka su ba alloli ba ne sam.)",
            "poem": 2
          },
          {
            "text": "Amma mutanena sun musayar da ɗaukakarsu",
            "poem": 1
          },
          {
            "text": "da gumakan banza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku girgiza saboda wannan, ya sammai,",
            "poem": 1
          },
          {
            "text": "ku kuma razana don tsoro mai girma,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Mutanena sun aikata zunubai guda biyu.",
            "poem": 1
          },
          {
            "text": "Sun rabu da ni,",
            "poem": 1
          },
          {
            "text": "ni da nake maɓulɓular ruwan rai,",
            "poem": 2
          },
          {
            "text": "sun kuma haƙa tankunan ruwansu,",
            "poem": 1
          },
          {
            "text": "tankuna ruwan da suka fashe da ba za su iya riƙe ruwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Isra’ila bawa ne, bawa ne ta wurin haihuwa?",
            "poem": 1
          },
          {
            "text": "Me ya sa ya zama ganima?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zakoki sun yi ruri;",
            "poem": 1
          },
          {
            "text": "sun yi masa ruri.",
            "poem": 2
          },
          {
            "text": "Sun lalatar da ƙasarsa;",
            "poem": 1
          },
          {
            "text": "an ƙone garuruwansa aka kuma watse daga ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Haka ma, mutanen Memfis",
            "poem": 1
          },
          {
            "noteId": 761
          },
          {
            "text": "da Tafanes",
            "poem": 1
          },
          {
            "text": "sun aske rawanin kanka",
            "poem": 2
          },
          {
            "noteId": 762
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ba kai ne ba ka jawo wa kanka ba",
            "poem": 1
          },
          {
            "text": "ta wurin rabuwa da Ubangiji Allahnka",
            "poem": 2
          },
          {
            "text": "sa’ad da ya bi da kai a hanya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "To, me ya sa za ka Masar",
            "poem": 1
          },
          {
            "text": "don shan ruwa daga Shihor?",
            "poem": 2
          },
          {
            "noteId": 763
          },
          {
            "text": "Kuma me ya sa za ka Assuriya",
            "poem": 1
          },
          {
            "text": "don shan ruwa daga Kogi?",
            "poem": 2
          },
          {
            "noteId": 764
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Muguntarka za tă hukunta ka;",
            "poem": 1
          },
          {
            "text": "jan bayanka zai tsawata maka.",
            "poem": 2
          },
          {
            "text": "Sai ka lura ka kuma gane",
            "poem": 1
          },
          {
            "text": "yaya mugu da kuma ɗaci suke a gare ka",
            "poem": 2
          },
          {
            "text": "sa’ad da ka rabu da Ubangiji Allahnka",
            "poem": 1
          },
          {
            "text": "kuma ba ka tsorona,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Tun da daɗewa ka karya karkiyarka",
            "poem": 1
          },
          {
            "text": "ka kuma tsintsinke sarƙoƙinka;",
            "poem": 2
          },
          {
            "text": "sai ka ce, ‘Ba zan bauta maka ba!’",
            "poem": 2
          },
          {
            "text": "Tabbatacce, a kan kowane tudu mai tsayi",
            "poem": 1
          },
          {
            "text": "da kuma a ƙarƙashin kowane ɗanyen itace",
            "poem": 2
          },
          {
            "text": "ka kwanta kamar karuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Na shuka ka kamar zaɓaɓɓen inabi",
            "poem": 1
          },
          {
            "text": "iri mai kyau da kuma wanda za a dogara a kai.",
            "poem": 2
          },
          {
            "text": "Yaya kuma ka juya kana gāba da ni",
            "poem": 1
          },
          {
            "text": "ka lalace, ka zama inabin jeji?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ko da yake ka wanke kanka da sabulu",
            "poem": 1
          },
          {
            "text": "ka yi amfani da sabulu mai yawa,",
            "poem": 2
          },
          {
            "text": "duk da haka har yanzu tabon laifinka yana nan a gabana,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji Mai Iko Duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "“Yaya za ka ce, ‘Ban ƙazantu ba;",
            "poem": 1
          },
          {
            "text": "ban bi Ba’al ba’?",
            "poem": 2
          },
          {
            "text": "Duba yadda ka yi a cikin kwari;",
            "poem": 1
          },
          {
            "text": "ka ga abin da ka yi.",
            "poem": 2
          },
          {
            "text": "Kai kamar makwaɗaciyar raƙuma ce mai zafin gudu",
            "poem": 1
          },
          {
            "text": "kana gudu nan da can,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "kamar jakar jejin da ta saba da hamada,",
            "poem": 1
          },
          {
            "text": "mai busar iska cikin son barbaranta",
            "poem": 2
          },
          {
            "text": "sa’ad da take son barbara wa zai iya hana ta?",
            "poem": 2
          },
          {
            "text": "Jakin da yake nemanta, ba ya bukatar wahalar da kansa;",
            "poem": 1
          },
          {
            "text": "a lokacin barbara za a same ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ka yi gudu har ƙafafunka su zama ba takalma",
            "poem": 1
          },
          {
            "text": "maƙogwaronka kuma ya bushe.",
            "poem": 2
          },
          {
            "text": "Amma sai ka ce, ‘Ba amfani!",
            "poem": 1
          },
          {
            "text": "Ina ƙaunar baƙin alloli",
            "poem": 2
          },
          {
            "text": "kuma dole in bi su.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "“Kamar yadda akan kunyatar da ɓarawo sa’ad da aka kama shi,",
            "poem": 1
          },
          {
            "text": "haka gidan Isra’ila zai sha kunya,",
            "poem": 2
          },
          {
            "text": "su, sarakunansu da shugabanninsu,",
            "poem": 1
          },
          {
            "text": "firistocinsu da kuma annabawansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Kuna ce wa itace, ‘Kai ne mahaifina,’",
            "poem": 1
          },
          {
            "text": "ga dutse kuma, ‘Kai ne ka haife ni.’",
            "poem": 2
          },
          {
            "text": "Sun juye mini bayansu",
            "poem": 1
          },
          {
            "text": "ba fuskokinsu ba;",
            "poem": 2
          },
          {
            "text": "duk da haka sa’ad da suna cikin wahala, sukan ce,",
            "poem": 1
          },
          {
            "text": "‘Zo ka cece mu!’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "To ina allolin da kuka yi wa kanku?",
            "poem": 1
          },
          {
            "text": "Bari su zo in suna iya cetonku",
            "poem": 2
          },
          {
            "text": "sa’ad da kuke cikin wahala!",
            "poem": 2
          },
          {
            "text": "Gama kuna da alloli masu yawa",
            "poem": 1
          },
          {
            "text": "kamar yadda kuke da garuruwa, ya Yahuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "“Me ya sa kuke tuhumana?",
            "poem": 1
          },
          {
            "text": "Dukanku kun yi mini tawaye,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "“A banza na hukunta mutanenku;",
            "poem": 1
          },
          {
            "text": "ba su yi gyara ba.",
            "poem": 2
          },
          {
            "text": "Takobinku ya cinye annabawanku",
            "poem": 1
          },
          {
            "text": "kamar zaki mai jin yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          "“Ku na wannan zamani, ku saurari maganar Ubangiji.",
          {
            "text": "“Na zama wa Isra’ila hamada ne",
            "poem": 1
          },
          {
            "text": "ko ƙasa mai babban duhu?",
            "poem": 2
          },
          {
            "text": "Me ya sa mutanena suke cewa, ‘Muna da ’yanci mu yi ta yawo;",
            "poem": 1
          },
          {
            "text": "ba za mu ƙara zuwa wurinka ba’?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Budurwa za tă manta da kayan adonta",
            "poem": 1
          },
          {
            "text": "amarya ta manta da kayan adon aurenta?",
            "poem": 2
          },
          {
            "text": "Duk da haka mutanena sun manta da ni,",
            "poem": 1
          },
          {
            "text": "kwanaki ba iyaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Kuna da azanci sosai a bin masoya!",
            "poem": 1
          },
          {
            "text": "Kai, ko mafiya muni cikin mata tana iya koya daga hanyoyinku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "A rigunanku mutane kan sami",
            "poem": 1
          },
          {
            "text": "jinin matalauta marasa laifi,",
            "poem": 2
          },
          {
            "text": "ko da yake ba ku kama su suna fasawa su shiga ba.",
            "poem": 2
          },
          {
            "text": "Duk da haka",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "kuna cewa, ‘Ba ni da laifi;",
            "poem": 2
          },
          {
            "text": "ba ya fushi da ni.’",
            "poem": 2
          },
          {
            "text": "Amma zan zartar da hukunci a kanku",
            "poem": 1
          },
          {
            "text": "domin kun ce, ‘Ban yi zunubi ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Don me kuke yawo da yawa haka,",
            "poem": 1
          },
          {
            "text": "kuna ta canjin hanyoyinku?",
            "poem": 2
          },
          {
            "text": "Masar za tă kunyata ku",
            "poem": 1
          },
          {
            "text": "yadda kuka sha kunya a wurin Assuriya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Za ku kuma bar wurin",
            "poem": 1
          },
          {
            "text": "da hannuwanku a kanku,",
            "poem": 2
          },
          {
            "text": "gama Ubangiji ya ƙi waɗanda kuka amince da su;",
            "poem": 1
          },
          {
            "text": "ba za ku zama abin taimako a gare su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      }
    ],
