  "chapter": {
    "number": 9,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Da ma kaina maɓulɓulan ruwa ne",
            "poem": 1
          },
          {
            "text": "idanuna kuma maɓulɓulan hawaye!",
            "poem": 2
          },
          {
            "text": "Da sai in yi kuka dare da rana",
            "poem": 1
          },
          {
            "text": "saboda mutanena da aka kashe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Da ma a hamada",
            "poem": 1
          },
          {
            "text": "ina da wurin da matafiye za su sauka,",
            "poem": 2
          },
          {
            "text": "don in bar mutanena",
            "poem": 1
          },
          {
            "text": "in tafi in bar su;",
            "poem": 2
          },
          {
            "text": "gama dukansu mazinata ne,",
            "poem": 1
          },
          {
            "text": "taron mutane marasa aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Sun tanƙwasa harshensu",
            "poem": 1
          },
          {
            "text": "kamar baka, don su harba ƙarya;",
            "poem": 2
          },
          {
            "text": "ba da gaskiya ba ne",
            "poem": 1
          },
          {
            "text": "suke nasara a cikin ƙasar.",
            "poem": 2
          },
          {
            "text": "Sukan tashi daga wannan zunubi zuwa wancan;",
            "poem": 1
          },
          {
            "text": "ba su san ni ba,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ka yi hankali da abokanka;",
            "poem": 1
          },
          {
            "text": "kada ka amince da ’yan’uwanka.",
            "poem": 2
          },
          {
            "text": "Gama kowane ɗan’uwa munafuki ne,",
            "poem": 1
          },
          {
            "text": "kowane aboki kuma mai kushe ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Aboki kan ruɗi aboki,",
            "poem": 1
          },
          {
            "text": "ba mai faɗar gaskiya.",
            "poem": 2
          },
          {
            "text": "Sun koya wa harshensu faɗar ƙarya;",
            "poem": 1
          },
          {
            "text": "sun gajiyar da kansu da yin zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kai",
            "poem": 1
          },
          {
            "noteId": 768
          },
          {
            "text": "kana zama a tsakiyar ruɗu;",
            "poem": 1
          },
          {
            "text": "cikin ruɗunsu sun ƙi su san ni,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          "Saboda haka ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Ga shi zan tace in kuma gwada su,",
            "poem": 1
          },
          {
            "text": "gama me kuwa zan yi",
            "poem": 2
          },
          {
            "text": "saboda zunubin mutanena?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Harshensu kibiya ce mai dafi;",
            "poem": 1
          },
          {
            "text": "yana magana da ruɗu.",
            "poem": 2
          },
          {
            "text": "Da bakinsa kowa yana maganar alheri da maƙwabcinsa,",
            "poem": 1
          },
          {
            "text": "amma a zuciyarsa ya sa masa tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bai kamata in hukunta su saboda wannan ba?”",
            "poem": 1
          },
          {
            "text": "In ji Ubangiji.",
            "poem": 2
          },
          {
            "text": "“Bai kamata in ɗau fansa",
            "poem": 1
          },
          {
            "text": "a kan irin al’umma kamar wannan ba?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Zan yi kuka in yi kururuwa saboda duwatsu",
            "poem": 1
          },
          {
            "text": "in kuma yi makoki game da wuraren kiwon hamada.",
            "poem": 2
          },
          {
            "text": "Sun zama kango ba wanda yake bi cikinta,",
            "poem": 1
          },
          {
            "text": "ba a kuma jin kukan shanu.",
            "poem": 2
          },
          {
            "text": "Tsuntsaye sararin sama sun gudu",
            "poem": 1
          },
          {
            "text": "namun jeji ma duk sun watse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Zan mai da Urushalima tsibin kufai,",
            "poem": 1
          },
          {
            "text": "wurin zaman diloli;",
            "poem": 2
          },
          {
            "text": "zan kuma lalace garuruwan Yahuda",
            "poem": 1
          },
          {
            "text": "saboda haka ba wanda zai zauna a can.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          "Wane mutum ne yana da isashiyar hikimar fahimtar wannan? Wa Ubangiji ya umarta da zai iya yin bayani? Me ya sa aka lalace ƙasar ta zama kufai kamar hamada da ba wanda zai iya ratsa ta?"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          "Ubangiji ya ce, “Domin sun bar dokata, wadda na sa a gabansu; ba su yi biyayya da ni ko su bi dokata ba."
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          "A maimako, sun bi taurin zuciyarsu; suka bi Ba’al, yadda kakanninsu suka koya musu.”"
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          "Saboda haka, ga abin da Ubangiji Maɗaukaki, Allah na Isra’ila yana cewa, “Ga shi zan sa wannan mutane su ci abinci mai ɗaci su kuma sha ruwan dafi."
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          "Zan watsar da su a cikin al’ummai da su da kakanninsu ba su sani ba, zan kuma fafare su da takobi sai na hallaka su.”"
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          "Ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Ku lura yanzu! Ku kira mata masu makoki su zo",
            "poem": 1
          },
          {
            "text": "ku aika wa gwanaye a cikinsu su zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Bari su zo da sauri",
            "poem": 1
          },
          {
            "text": "su yi kuka a kanmu",
            "poem": 2
          },
          {
            "text": "sai idanunmu sun cika da hawaye",
            "poem": 1
          },
          {
            "text": "giranmu kuma su jiƙe sharkaf.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "An ji karar kuka daga Sihiyona cewa,",
            "poem": 1
          },
          {
            "text": "‘Duba yadda muka lalace!",
            "poem": 2
          },
          {
            "text": "Duba irin babban kunyar da muka sha!",
            "poem": 2
          },
          {
            "text": "Dole mu bar ƙasar",
            "poem": 1
          },
          {
            "text": "domin gidajenmu sun lalace.’ ”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Yanzu, ya mata, ku ji maganar Ubangiji;",
            "poem": 1
          },
          {
            "text": "ku buɗe kunnuwanku ga maganar bakina.",
            "poem": 2
          },
          {
            "text": "Ku koya wa ’yan matanku yadda za su yi kuka;",
            "poem": 1
          },
          {
            "text": "ku koya wa juna makoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Mutuwa ta haura ta tagoginmu",
            "poem": 1
          },
          {
            "text": "ta kuma shiga katangarmu;",
            "poem": 2
          },
          {
            "text": "ta karkashe ’ya’ya a tituna",
            "poem": 1
          },
          {
            "text": "ta kuma karkashe samari a dandali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          "Ka ce, “Ga abin da Ubangiji ya furta,",
          {
            "text": "“ ‘Gawawwakin mutane za su fāɗi",
            "poem": 1
          },
          {
            "text": "kamar juji a fili,",
            "poem": 2
          },
          {
            "text": "kamar hatsin da aka yanka a bayan mai girbi,",
            "poem": 1
          },
          {
            "text": "da ba mai tara su.’ ”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Kada mai hikima ya yi fariya da hikimarsa",
            "poem": 1
          },
          {
            "text": "ko mai ƙarfi ya yi fariya da ƙarfinsa",
            "poem": 2
          },
          {
            "text": "ko mai arziki ya yi fariya da arzikinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "amma bari shi wanda yake taƙama ya yi taƙama da wannan,",
            "poem": 1
          },
          {
            "text": "cewa ya fahimci ya kuma san ni,",
            "poem": 2
          },
          {
            "text": "cewa ni ne Ubangiji, wanda yake yin alheri,",
            "poem": 2
          },
          {
            "text": "gaskiya da kuma adalci a duniya,",
            "poem": 2
          },
          {
            "text": "gama a waɗannan ne nake jin daɗi,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          "“Kwanaki suna zuwa,” in ji Ubangiji, “sa’ad da zan hukunta dukan waɗanda aka yi musu kaciya kawai a jiki,"
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          "Masar, Yahuda, Edom, Ammon, Mowab da dukan waɗanda suke zaune a hamada a wurare masu nisa.",
          {
            "noteId": 769
          },
          "Gama dukan waɗannan al’ummai marasa kaciya ne, har dukan gidan Isra’ila ma marasa kaciya ne a zuciya.”"
        ]
      }
    ],
