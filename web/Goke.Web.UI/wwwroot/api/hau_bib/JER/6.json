  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "heading",
        "content": [
          "Abokan gāba sun kewaye Urushalima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ku gudu neman mafaka, mutanen Benyamin!",
            "poem": 1
          },
          {
            "text": "Ku gudu daga Urushalima!",
            "poem": 2
          },
          {
            "text": "Ku busa ƙaho a Tekowa!",
            "poem": 1
          },
          {
            "text": "Ku ba da alama a Bet-Hakkerem!",
            "poem": 2
          },
          {
            "text": "Gama masifa tana zuwa daga arewa,",
            "poem": 2
          },
          {
            "text": "mummunar hallaka ce kuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan hallaka Diyar Sihiyona,",
            "poem": 1
          },
          {
            "text": "kyakkyawa da kuma mai laulayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Makiyaya da garkunansu za su taso mata;",
            "poem": 1
          },
          {
            "text": "za su kafa tentunansu kewaye da ita,",
            "poem": 2
          },
          {
            "text": "kowanne yana lura da sashensa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Mu shirya don yaƙi da ita!",
            "poem": 1
          },
          {
            "text": "Ku tashi, bari mu fāɗa mata da tsakar rana!",
            "poem": 2
          },
          {
            "text": "Amma, kaito, rana tana fāɗuwa,",
            "poem": 1
          },
          {
            "text": "inuwar yamma kuwa sai ƙaran tsawo take.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Saboda haka ku tashi, bari mu fāɗa mata da dare",
            "poem": 1
          },
          {
            "text": "mu rurrushe kagaranta!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          "Ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Ku sassare itatuwan",
            "poem": 1
          },
          {
            "text": "ku tula ƙasa kewaye da Urushalima.",
            "poem": 2
          },
          {
            "text": "Dole a hukunta wannan birni;",
            "poem": 1
          },
          {
            "text": "saboda ya cika da zalunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kamar yadda rijiya takan ba da ruwarta,",
            "poem": 1
          },
          {
            "text": "haka birnin yake da muguntarsa.",
            "poem": 2
          },
          {
            "text": "Ana jin labarin rikici da hallaka a cikinsa;",
            "poem": 1
          },
          {
            "text": "ciwonsa da mikinsa kullum suna a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ki ji gargaɗi, ya Urushalima,",
            "poem": 1
          },
          {
            "text": "ko kuwa in juya daga gare ki",
            "poem": 2
          },
          {
            "text": "in mai da ƙasarki kufai",
            "poem": 1
          },
          {
            "text": "don kada wani ya zauna a cikinta.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          "Ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Bari su yi kalan raguwar Isra’ila",
            "poem": 1
          },
          {
            "text": "a yi kalan sarai yadda ake yi wa inabi;",
            "poem": 2
          },
          {
            "text": "ka sāke miƙa hannunka a kan rassan,",
            "poem": 1
          },
          {
            "text": "kamar mai tattara inabi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ga wa zan yi magana in kuma gargaɗar?",
            "poem": 1
          },
          {
            "text": "Wa zai saurare ni?",
            "poem": 2
          },
          {
            "text": "Kunnuwansu sun toshe",
            "poem": 1
          },
          {
            "noteId": 767
          },
          {
            "text": "don kada su ji.",
            "poem": 2
          },
          {
            "text": "Maganar Ubangiji ta zama abin zargi a gare su;",
            "poem": 1
          },
          {
            "text": "ba sa jin daɗinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma ina cike da fushin Ubangiji,",
            "poem": 1
          },
          {
            "text": "kuma ba na iya kannewa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Ka kwararo shi a kan yara a titi",
            "poem": 1
          },
          {
            "text": "da kuma a kan samarin da suka tattaru;",
            "poem": 2
          },
          {
            "text": "za a kama miji da mata a cikinsa,",
            "poem": 1
          },
          {
            "text": "tsofaffi da suka tsufa tukub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Za a ba da gidajensu ga waɗansu,",
            "poem": 1
          },
          {
            "text": "tare da gonakinsu da matansu,",
            "poem": 2
          },
          {
            "text": "sa’ad da na miƙa hannuna",
            "poem": 1
          },
          {
            "text": "gāba da waɗanda suke zama a ƙasar,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Daga ƙarami zuwa babba,",
            "poem": 1
          },
          {
            "text": "dukansu masu haɗama ne don riba;",
            "poem": 2
          },
          {
            "text": "har da annabawa da firistoci,",
            "poem": 1
          },
          {
            "text": "dukansu suna aikata rashin gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sukan ɗaura mikin mutanena",
            "poem": 1
          },
          {
            "text": "sai ka ce mikin ba shi da matsala.",
            "poem": 2
          },
          {
            "text": "Suna cewa, ‘Lafiya, Lafiya,’",
            "poem": 1
          },
          {
            "text": "alhali kuwa ba lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Suna jin kunyar halinsu na banƙyama?",
            "poem": 1
          },
          {
            "text": "A’a, ba sa jin kunya sam;",
            "poem": 2
          },
          {
            "text": "ba su ma san yadda za su soke kai ba.",
            "poem": 2
          },
          {
            "text": "Saboda haka za su fāɗi tare da fāɗaɗɗu;",
            "poem": 1
          },
          {
            "text": "za a hamɓarar da su sa’ad da na hukunta su,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Ku tsaya kan hanyoyi, ku duba;",
            "poem": 1
          },
          {
            "text": "ku nemi hanyoyin dā,",
            "poem": 2
          },
          {
            "text": "ku tambaya inda hanyar mai kyau take, ku yi tafiya a kanta,",
            "poem": 1
          },
          {
            "text": "za ku kuwa sami hutu wa rayukanku.",
            "poem": 2
          },
          {
            "text": "Amma kun ce, ‘Ba za mu bi ta ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Na naɗa muku masu tsaro a kanku na kuma ce,",
            "poem": 1
          },
          {
            "text": "‘Ku saurari karan ƙaho!’",
            "poem": 2
          },
          {
            "text": "Amma kuka ce, ‘Ba za mu saurara ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Saboda haka ku, ya al’ummai;",
            "poem": 1
          },
          {
            "text": "ku lura Ya shaidu,",
            "poem": 2
          },
          {
            "text": "abin da zai faru da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ki ji, ya duniya.",
            "poem": 1
          },
          {
            "text": "Zan kawo masifa a kan waɗannan mutane,",
            "poem": 1
          },
          {
            "text": "sakayyar ƙulle-ƙullensu,",
            "poem": 2
          },
          {
            "text": "domin ba su saurari maganata ba",
            "poem": 1
          },
          {
            "text": "suka kuma ƙi dokata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Babu riba a kawo mini turare daga Sheba",
            "poem": 1
          },
          {
            "text": "ko rake mai zaƙi daga ƙasa mai nisa?",
            "poem": 2
          },
          {
            "text": "Ba zan karɓi hadayunku na ƙonawa ba;",
            "poem": 1
          },
          {
            "text": "ba na jin daɗin sadakokinku.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          "Saboda haka ga abin da Ubangiji yana cewa,",
          {
            "text": "“Zan sa abin tuntuɓe gaban mutanena.",
            "poem": 1
          },
          {
            "text": "Mahaifi da ’ya’yansa maza za su yi tuntuɓe a kan juna;",
            "poem": 2
          },
          {
            "text": "maƙwabci da abokansa za su hallaka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Duba, sojoji suna zuwa",
            "poem": 1
          },
          {
            "text": "daga ƙasar arewa;",
            "poem": 2
          },
          {
            "text": "babbar al’umma ce ta yunƙuro",
            "poem": 1
          },
          {
            "text": "daga iyakokin duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Suna riƙe da baka da māshi;",
            "poem": 1
          },
          {
            "text": "mugaye ne kuma marasa tausayi.",
            "poem": 2
          },
          {
            "text": "Motsinsu kamar ƙugin teku ne",
            "poem": 1
          },
          {
            "text": "yayinda suke hawan dawakansu;",
            "poem": 2
          },
          {
            "text": "suna zuwa a jere kamar wanda ya yi shirin yaƙi",
            "poem": 1
          },
          {
            "text": "don su fāɗa miki, ya Diyar Sihiyona.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mun ji labari a kansu,",
            "poem": 1
          },
          {
            "text": "hannuwanmu kuwa suka yi laƙwas.",
            "poem": 2
          },
          {
            "text": "Azaba ta kama mu,",
            "poem": 1
          },
          {
            "text": "zafi kamar na mace mai naƙuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ku fita zuwa gonaki",
            "poem": 1
          },
          {
            "text": "ko ku yi tafiya a hanyoyi,",
            "poem": 2
          },
          {
            "text": "gama abokin gāba yana da takobi,",
            "poem": 1
          },
          {
            "text": "kuma akwai razana ko’ina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ya mutanena, ku sanya tufafin makoki",
            "poem": 1
          },
          {
            "text": "ku yi birgima a toka;",
            "poem": 2
          },
          {
            "text": "ku yi kuka mai zafi",
            "poem": 1
          },
          {
            "text": "irin wanda akan yi wa ɗa tilo,",
            "poem": 2
          },
          {
            "text": "gama nan da nan mai hallakarwa",
            "poem": 1
          },
          {
            "text": "zai auko mana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Na maishe ka mai jarrabawar ƙarfe",
            "poem": 1
          },
          {
            "text": "mutanena ne kuwa ƙarfen,",
            "poem": 2
          },
          {
            "text": "don ka lura",
            "poem": 1
          },
          {
            "text": "ka kuma gwada hanyoyinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Su duka masu taurinkai ne, ’yan tawaye,",
            "poem": 1
          },
          {
            "text": "suna yawo suna baza jita-jita.",
            "poem": 2
          },
          {
            "text": "Su tagulla ne da ƙarfe;",
            "poem": 1
          },
          {
            "text": "dukansu lalatattu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Mazuga yana zuga da ƙarfi",
            "poem": 1
          },
          {
            "text": "don yă ƙone dalma da wuta,",
            "poem": 2
          },
          {
            "text": "amma tacewa yana tafiya a banza;",
            "poem": 2
          },
          {
            "text": "ba a fitar da mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ana ce da su azurfar da aka ƙi,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji ya ƙi su.”",
            "poem": 2
          }
        ]
      }
    ],
