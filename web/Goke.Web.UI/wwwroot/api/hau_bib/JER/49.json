  "chapter": {
    "number": 49,
    "content": [
      {
        "type": "heading",
        "content": [
          "Saƙo game da Ammon"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Game da Ammonawa.",
          {
            "lineBreak": true
          },
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Isra’ila ba shi da ’ya’ya maza ne?",
            "poem": 1
          },
          {
            "text": "Ba shi da magāda ne?",
            "poem": 2
          },
          {
            "text": "To, me ya sa Molek",
            "poem": 1
          },
          {
            "noteId": 820
          },
          {
            "text": "ya mallaki Gad?",
            "poem": 1
          },
          {
            "text": "Me ya sa mutanensa suka zama a garuruwansa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Amma kwanaki suna zuwa,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji,",
            "poem": 2
          },
          {
            "text": "“sa’ad da zan yi kirarin yaƙi",
            "poem": 1
          },
          {
            "text": "a kan Rabba ta Ammonawa;",
            "poem": 2
          },
          {
            "text": "zai zama tarin juji,",
            "poem": 1
          },
          {
            "text": "za a sa wuta a ƙauyukan da suke kewayenta.",
            "poem": 2
          },
          {
            "text": "Sa’an nan Isra’ila zai kori",
            "poem": 1
          },
          {
            "text": "waɗanda suka kore shi,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Ki yi kuka, ya Heshbon, gama an hallaka Ai!",
            "poem": 1
          },
          {
            "text": "Ku tā da murya ku yi kuka, ya mazaunan Rabba!",
            "poem": 2
          },
          {
            "text": "Ku sa tufafin makoki;",
            "poem": 1
          },
          {
            "text": "ku ruga nan da can a cikin katanga,",
            "poem": 2
          },
          {
            "text": "gama Molek zai tafi bauta,",
            "poem": 1
          },
          {
            "text": "tare da firistocinsa da kuma fadawansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Me ya sa kuke taƙama da kwarurukanku,",
            "poem": 1
          },
          {
            "text": "taƙama da kwarurukanku masu amfani?",
            "poem": 2
          },
          {
            "text": "Ya ke diya marar aminci,",
            "poem": 1
          },
          {
            "text": "kin dogara a wadatarki kika kuma ce,",
            "poem": 2
          },
          {
            "text": "‘Wa zai iya fāɗa mini?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zan kawo razana a kanki",
            "poem": 1
          },
          {
            "text": "daga waɗanda suke kewaye da ke,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji Maɗaukaki.",
            "poem": 2
          },
          {
            "text": "“Za a kore kowannenku,",
            "poem": 1
          },
          {
            "text": "babu wani da zai tattara masu gudun hijira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Duk da haka, daga baya, zan maido da wadatar Ammonawa,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Saƙo game da Edom"
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          "Game da Edom.",
          {
            "lineBreak": true
          },
          "Ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Babu sauran hikima a Teman ne?",
            "poem": 1
          },
          {
            "text": "Shawara ta ɓace daga masu basira ne?",
            "poem": 2
          },
          {
            "text": "Hikimarsu ta ruɓe ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku juya ku gudu, ku ɓuya a cikin kogwanni masu zurfi,",
            "poem": 1
          },
          {
            "text": "ku da kuke zama a Dedan,",
            "poem": 2
          },
          {
            "text": "gama zan kawo masifa a kan Isuwa",
            "poem": 1
          },
          {
            "text": "a lokacin da zan hukunta shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In masu tsinkar ’ya’yan inabi suka zo maka,",
            "poem": 1
          },
          {
            "text": "ba za su rage ’ya’yan inabi kaɗan ba?",
            "poem": 1
          },
          {
            "text": "In ɓarayi suka zo da dare,",
            "poem": 1
          },
          {
            "text": "ba za su sata abin da kawai suke bukata ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Amma zan washe Isuwa sarai;",
            "poem": 1
          },
          {
            "text": "zan bubbuɗe wuraren ɓuyarsa,",
            "poem": 2
          },
          {
            "text": "don kada yă ɓoye kansa.",
            "poem": 2
          },
          {
            "text": "’Ya’yansa, danginsa da maƙwabtansa za su hallaka,",
            "poem": 1
          },
          {
            "text": "ba kuwa zai ƙara kasancewa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka bar marayunka; zan tsare ransu.",
            "poem": 1
          },
          {
            "text": "Gwaurayenka kuma za su dogara a gare ni.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          "Ga abin da Ubangiji yana cewa, “In waɗanda ba su dace su sha kwaf ɗin ba suka sha shi, me ya sa za ka kuɓuta? Ba za ka kuɓuta ba, sai ka sha shi."
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          "Na rantse da kaina,” in ji Ubangiji, “cewa Bozra za tă zama kufai da kuma abin tsoro, abin dariya da abin la’ana; kuma dukan garuruwanta za su kasance kufai har abada.”"
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Na ji saƙo daga Ubangiji cewa;",
            "poem": 1
          },
          {
            "text": "an aiki jakada zuwa ga al’ummai ya ce,",
            "poem": 2
          },
          {
            "text": "“Ku tattara kanku don ku fāɗa mata!",
            "poem": 1
          },
          {
            "text": "Ku tashi don yaƙi!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Yanzu zan mai da kai ƙanƙani a cikin al’ummai",
            "poem": 1
          },
          {
            "text": "abin reni a cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Tsoron da ka sa ake ji",
            "poem": 1
          },
          {
            "text": "da kuma girman kan zuciyarka ya ruɗe ka,",
            "poem": 2
          },
          {
            "text": "kai da kake zama a kogon dutse,",
            "poem": 1
          },
          {
            "text": "kai da kake kan tudu.",
            "poem": 2
          },
          {
            "text": "Ko da yake ka gina wa kanka sheƙa can bisa kamar na gaggafa,",
            "poem": 1
          },
          {
            "text": "daga can zan sauko da kai ƙasa,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Edom za tă zama abin tsoro;",
            "poem": 1
          },
          {
            "text": "dukan wanda ya wuce zai giggice ya yi tsaki",
            "poem": 2
          },
          {
            "text": "saboda dukan mikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kamar yadda aka tumɓuke Sodom da Gomorra,",
            "poem": 1
          },
          {
            "text": "tare da garuruwan da suke maƙwabtaka da su,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji,",
            "poem": 2
          },
          {
            "text": "“haka ba wanda zai zauna a can;",
            "poem": 1
          },
          {
            "text": "ba wani da zai zauna a cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Kamar zaki mai haurawa daga kurmin Urdun",
            "poem": 1
          },
          {
            "text": "zuwa wurin kiwo mai kyau,",
            "poem": 2
          },
          {
            "text": "zan kori Edom daga ƙasarta nan da nan.",
            "poem": 1
          },
          {
            "text": "Wane ne zaɓaɓɓen da zan naɗa don wannan?",
            "poem": 2
          },
          {
            "text": "Wane ne yake kama da ni kuma wa zai kalubalance ni?",
            "poem": 1
          },
          {
            "text": "Kuma wane makiyayi ne zai yi gāba da ni?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Saboda haka, ku ji abin da Ubangiji ya shirya a kan Edom,",
            "poem": 1
          },
          {
            "text": "abin da ya nufa wa waɗanda suke zama a Teman.",
            "poem": 2
          },
          {
            "text": "Za a ja ƙanana na garken tumaki a tafi;",
            "poem": 2
          },
          {
            "text": "zai hallaka wurin kiwonsu sarai saboda su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Amon fāɗuwarsu zai sa ƙasa ta girgiza;",
            "poem": 1
          },
          {
            "text": "za a kuma ji muryar kukansu a Jan Teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Duba! Gaggafa tana firiya tana kuma saukowa,",
            "poem": 1
          },
          {
            "text": "tana buɗe fikafikanta a bisa Bozra.",
            "poem": 2
          },
          {
            "text": "A wannan rana zukatan jarumawan Edom",
            "poem": 1
          },
          {
            "text": "za su zama kamar macen da take naƙuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Saƙo game da Damaskus"
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "Game da Damaskus.",
          {
            "text": "“Hamat da Arfad sun giggice,",
            "poem": 1
          },
          {
            "text": "gama sun ji mummunar labari.",
            "poem": 2
          },
          {
            "text": "Suna damuwa,",
            "poem": 1
          },
          {
            "text": "sun damu kamar tekun da baya hutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Damaskus ta karai",
            "poem": 1
          },
          {
            "text": "ta juya don ta gudu",
            "poem": 2
          },
          {
            "text": "tsoro kuma ya kama ta;",
            "poem": 2
          },
          {
            "text": "wahala da zafi sun kama ta,",
            "poem": 2
          },
          {
            "text": "zafi kamar na mace mai naƙuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Me ya sa ba a tafi aka bar sanannen birnin nan ba,",
            "poem": 1
          },
          {
            "text": "birnin da nake jin daɗi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Tabbatacce, samarinta za su fāɗi a tituna;",
            "poem": 1
          },
          {
            "text": "dukan sojojinta za su yi shiru a wannan rana,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Zan cinna wa katangar Damaskus wuta;",
            "poem": 1
          },
          {
            "text": "za tă ci kagaran Ben-Hadad.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Saƙo game da Kedar da Hazor"
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          "Game da Kedar da mulkokin Hazor, waɗanda Nebukadnezzar sarkin Babilon ya fāɗa wa.",
          {
            "lineBreak": true
          },
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Tashi, ku fāɗa wa Kedar",
            "poem": 1
          },
          {
            "text": "ku kuma hallaka mutanen Gabas.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Za a ƙwace tentunansu da garkunansu;",
            "poem": 1
          },
          {
            "text": "za a tafi da mafakanta",
            "poem": 2
          },
          {
            "text": "tare da dukan kayayyakinsu da raƙumansu.",
            "poem": 2
          },
          {
            "text": "Mutane za su yi musu ihu,",
            "poem": 1
          },
          {
            "text": "‘Razana ko’ina!’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "“Ku yi maza ku gudu!",
            "poem": 1
          },
          {
            "text": "Ku zauna a kogo masu zurfi, ku da kuke zama a Hazor,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          },
          {
            "text": "“Nebukadnezzar sarkin Babilon ya shirya muku maƙarƙashiya;",
            "poem": 1
          },
          {
            "text": "ya ƙulla maƙarƙashiya a kanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "“Ku tashi ku kuma fāɗa wa al’umma da sauƙi",
            "poem": 1
          },
          {
            "text": "wadda take zama da ƙarfin hali,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji,",
            "poem": 2
          },
          {
            "text": "“al’ummar da ba ta da ƙofofi ko ƙyamare;",
            "poem": 1
          },
          {
            "text": "mutanenta suna zama su kaɗai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Za a washe raƙumansu,",
            "poem": 1
          },
          {
            "text": "garkunansu mai girma za su zama ganima.",
            "poem": 2
          },
          {
            "text": "Zan watsar da waɗanda suke a wurare masu nesa a ko’ina",
            "poem": 1
          },
          {
            "text": "zan kuma kawo musu masifa a kowane gefe,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "“Hazor za tă zama mazaunin diloli,",
            "poem": 1
          },
          {
            "text": "kufai har abada.",
            "poem": 2
          },
          {
            "text": "Ba wanda zai zauna a can;",
            "poem": 1
          },
          {
            "text": "ba wanda zai zauna a cikinta.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Saƙo game da Elam"
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          "Ga maganar Ubangiji da ta zo wa Irmiya annabi game da Elam, a farkon mulkin Zedekiya sarkin Yahuda."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          "Ga abin da Ubangiji Maɗaukaki yana cewa,",
          {
            "text": "“Ga shi, zan karye ƙarfin Elam,",
            "poem": 1
          },
          {
            "text": "zaunannen ƙarfinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Zan kawo a kan Elam a kusurwoyi huɗu",
            "poem": 1
          },
          {
            "text": "daga kusurwoyi huɗu na duniya;",
            "poem": 2
          },
          {
            "text": "zan watsar da su zuwa kusurwoyi huɗu,",
            "poem": 1
          },
          {
            "text": "kuma ba al’ummar",
            "poem": 2
          },
          {
            "text": "da masu gudun hijirar Elam ba za su kai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Zan ragargaza Elam a gaban maƙiyansu,",
            "poem": 1
          },
          {
            "text": "a gaban waɗanda suke neman ransu;",
            "poem": 2
          },
          {
            "text": "zan kawo masifa a kansu,",
            "poem": 1
          },
          {
            "text": "da zafin fushina,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          },
          {
            "text": "“Zan runtume su da takobi",
            "poem": 1
          },
          {
            "text": "sai na kawo ƙarshensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Zan sa kursiyina a Elam",
            "poem": 1
          },
          {
            "text": "in kuma hallaka sarkinta da fadawanta,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
