  "chapter": {
    "number": 33,
    "content": [
      {
        "type": "heading",
        "content": [
          "Musa ya albarkaci kabilu"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Wannan ita ce albarkar da Musa mutumin Allah ya furta a kan Isra’ilawa, kafin yă rasu."
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "Ya ce,",
          {
            "text": "“Ubangiji ya zo daga Sinai",
            "poem": 1
          },
          {
            "text": "ya haskaka a bisansu daga Seyir;",
            "poem": 2
          },
          {
            "text": "ya haskaka daga Dutsen Faran.",
            "poem": 2
          },
          {
            "text": "Ya zo tare da dubban tsarkakansa",
            "poem": 1
          },
          {
            "text": "daga kudu, daga gangara dutsensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Tabbatacce kai ne wanda yake ƙaunar mutane;",
            "poem": 1
          },
          {
            "text": "dukan tsarkaka suna a hannunka.",
            "poem": 2
          },
          {
            "text": "A ƙafafunka, duk suka rusuna,",
            "poem": 1
          },
          {
            "text": "daga wurinka kuma suka karɓi umarni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "dokar Musa ta ba mu dokoki,",
            "poem": 1
          },
          {
            "text": "mallakar taron Yaƙub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Shi ne sarki a bisa Yeshurun",
            "poem": 1
          },
          {
            "text": "sa’ad da shugabannin mutane suka taru,",
            "poem": 2
          },
          {
            "text": "tare da kabilan Isra’ila.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Bari Ruben yă rayu, kada yă mutu,",
            "poem": 1
          },
          {
            "text": "kada",
            "poem": 1
          },
          {
            "noteId": 293
          },
          {
            "text": "mutanensa su zama kaɗan.”",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          "Ya kuma faɗa wannan game da Yahuda,",
          {
            "text": "“Ka ji, ya Ubangiji, kukan Yahuda;",
            "poem": 1
          },
          {
            "text": "ka kawo shi wurin mutanensa.",
            "poem": 2
          },
          {
            "text": "Da hannuwansa ya kāre kansa.",
            "poem": 1
          },
          {
            "text": "Ka taimake shi a kan maƙiyansa!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          "Game da Lawi ya ce,",
          {
            "text": "“Tummim da Urim na",
            "poem": 1
          },
          {
            "text": "mutumin da ka nuna masa tagomashi ne.",
            "poem": 2
          },
          {
            "text": "Ka gwada shi a Massa;",
            "poem": 1
          },
          {
            "text": "ka yi faɗa da shi a ruwan Meriba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya yi zancen mahaifinsa da mahaifiyarsa ya ce,",
            "poem": 1
          },
          {
            "text": "‘Ban kula da su ba.’",
            "poem": 2
          },
          {
            "text": "Bai gane da ’yan’uwansa ba,",
            "poem": 1
          },
          {
            "text": "ko yă yarda da ’ya’yansa,",
            "poem": 2
          },
          {
            "text": "amma ya kiyaye maganarka",
            "poem": 1
          },
          {
            "text": "ya tsare alkawarinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya koyar da farillanka ga Yaƙub,",
            "poem": 1
          },
          {
            "text": "dokarka kuma ga Isra’ila.",
            "poem": 2
          },
          {
            "text": "Ya miƙa turare a gabanka",
            "poem": 1
          },
          {
            "text": "da kuma hadaya ta ƙonawa ɗungum a kan bagadenka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka albarkaci ɗaukan dabarunsa, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ka kuma ji daɗin aikin hannuwansa.",
            "poem": 2
          },
          {
            "text": "Ka murƙushe kwankwaso waɗanda suka tayar masa;",
            "poem": 1
          },
          {
            "text": "ka bugi abokan gābansa har sai ba su ƙara tashi ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          "Game da Benyamin ya ce,",
          {
            "text": "“Bari ƙaunataccen Ubangiji yă zauna lafiya kusa da shi,",
            "poem": 1
          },
          {
            "text": "gama yana tsare shi dukan yini,",
            "poem": 2
          },
          {
            "text": "wanda kuma Ubangiji yake ƙauna yana zama a tsakanin kafaɗunsa.”",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          "Game da Yusuf ya ce,",
          {
            "text": "“Bari Ubangiji yă albarkaci ƙasarsa",
            "poem": 1
          },
          {
            "text": "da raɓa mai daraja daga sama a bisa",
            "poem": 2
          },
          {
            "text": "da kuma zurfin ruwan da suke kwance a ƙarƙashi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "da abubuwa masu kyau da rana take kawo,",
            "poem": 1
          },
          {
            "text": "da kuma abubuwa mafi kyau da wata zai iya haifar;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "da zaɓaɓɓun kyautai na daɗaɗɗun duwatsu,",
            "poem": 1
          },
          {
            "text": "da kyawawan amfani na madawwaman tuddai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Tare da kyautai mafi kyau na duniya da cikarta,",
            "poem": 1
          },
          {
            "text": "da tagomashi na wanda yake zama a ƙaramin itace mai ƙonewa.",
            "poem": 2
          },
          {
            "text": "Bari duk waɗannan su zauna a kan Yusuf,",
            "poem": 1
          },
          {
            "text": "a goshin sarki a cikin ’yan’uwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Cikin daraja yana yi kamar ɗan fari na bijimi;",
            "poem": 1
          },
          {
            "text": "ƙahoninsa ƙahonin ɓauna ne.",
            "poem": 2
          },
          {
            "text": "Tare da su zai tukwiyi al’ummai,",
            "poem": 1
          },
          {
            "text": "har ma da waɗanda suke ƙarshen duniya.",
            "poem": 2
          },
          {
            "text": "Haka dubu dubban Efraim suke;",
            "poem": 1
          },
          {
            "text": "haka dubban Manasse suke.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          "Game da Zebulun ya ce,",
          {
            "text": "“Ka yi farin ciki, Zebulun, a fitowarka,",
            "poem": 1
          },
          {
            "text": "kai kuma Issakar, a cikin tentunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Za su kira mutane zuwa dutse,",
            "poem": 1
          },
          {
            "text": "a can za su miƙa hadayun adalci;",
            "poem": 2
          },
          {
            "text": "za su yi biki a yalwan tekuna,",
            "poem": 1
          },
          {
            "text": "a dukiyoyin da aka ɓoye a cikin yashi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          "Game da Gad ya ce,",
          {
            "text": "“Mai albarka ne wanda ya fadada mazaunin Gad!",
            "poem": 1
          },
          {
            "text": "Gad yana zama a can kamar zaki,",
            "poem": 2
          },
          {
            "text": "yana yayyage a hannu da kai.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ya zaɓi ƙasa mafi kyau wa kansa;",
            "poem": 1
          },
          {
            "text": "aka ajiye masa rabon shugaba.",
            "poem": 2
          },
          {
            "text": "Sa’ad da shugabannin mutane suka taru,",
            "poem": 1
          },
          {
            "text": "ya aikata adalcin Ubangiji",
            "poem": 2
          },
          {
            "text": "da kuma hukuncinsa game da Isra’ila.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          "Game da Dan ya ce,",
          {
            "text": "“Dan ɗan zaki ne,",
            "poem": 1
          },
          {
            "text": "yana tsalle daga Bashan.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "Game da Naftali ya ce,",
          {
            "text": "“Naftali ƙosasshe ne da tagomashin Ubangiji,",
            "poem": 1
          },
          {
            "text": "ya kuma cika albarkarsa;",
            "poem": 1
          },
          {
            "text": "zai gāji gefen kudu zuwa tafki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          "Game da Asher ya ce,",
          {
            "text": "“Mafi albarka na ’ya’yan, shi ne Asher;",
            "poem": 1
          },
          {
            "text": "bari yă sami tagomashi daga ’yan’uwansa,",
            "poem": 2
          },
          {
            "text": "bari kuma yă wanke ƙafafunsa a cikin mai.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Madogaran ƙofofinka za su zama ƙarfe da tagulla,",
            "poem": 1
          },
          {
            "text": "ƙarfinka kuma zai zama daidai da kwanakinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "“Babu wani kamar Allah na Yeshurun,",
            "poem": 1
          },
          {
            "text": "wanda yake hawa a bisa sammai don yă taimake ka",
            "poem": 2
          },
          {
            "text": "a kan gizagizai kuma a cikin darajarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Allah madawwami shi ne mafakarka,",
            "poem": 1
          },
          {
            "text": "a ƙarƙashina kuma madawwamin hannuwa ne.",
            "poem": 2
          },
          {
            "text": "Zai kore abokin gābanka a gabanka,",
            "poem": 1
          },
          {
            "text": "yana cewa, ‘Ka hallaka shi!’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Haka Isra’ila zai zauna lafiya shi kaɗai;",
            "poem": 1
          },
          {
            "text": "zuriyar Yaƙub a tsare",
            "poem": 2
          },
          {
            "text": "a ƙasar hatsi da sabon ruwan inabi,",
            "poem": 1
          },
          {
            "text": "inda sammai za su zuba raɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kai mai albarka ne, ya Isra’ila!",
            "poem": 1
          },
          {
            "text": "Wane ne yake kamar ka,",
            "poem": 2
          },
          {
            "text": "mutanen da Ubangiji ya ceta?",
            "poem": 2
          },
          {
            "text": "Shi ne mafakarka da mai taimakonka",
            "poem": 1
          },
          {
            "text": "da kuma takobinka mai ɗaukaka.",
            "poem": 2
          },
          {
            "text": "Abokan gābanka za su zo neman jinƙai a gabanka,",
            "poem": 1
          },
          {
            "text": "za ka kuwa tattake masujadansu.”",
            "poem": 2
          },
          {
            "noteId": 294
          }
        ]
      }
