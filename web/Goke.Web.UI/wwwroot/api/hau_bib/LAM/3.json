  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ni ne mutumin da ya ga azaba",
            "poem": 1
          },
          {
            "text": "ta wurin bulalar fushin Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya kore ni, ya sa na yi tafiya",
            "poem": 1
          },
          {
            "text": "a cikin duhu maimakon a cikin haske;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "ba shakka, ya juya mini baya, yana gāba da ni",
            "poem": 1
          },
          {
            "text": "sau da sau, dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya sa fatar jikina da naman jikina sun tsufa",
            "poem": 1
          },
          {
            "text": "ya kuma karya ƙasusuwana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ya yi mini kwanton ɓauna ya kuma kewaye ni",
            "poem": 1
          },
          {
            "text": "da baƙin ciki da kuma wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya sa na zauna a cikin duhu",
            "poem": 1
          },
          {
            "text": "kamar waɗanda suka mutu da jimawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya kewaye ni yadda ba zan iya gudu ba;",
            "poem": 1
          },
          {
            "text": "Ya daure ni da sarƙa mai nauyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ko lokacin da nake kira don neman taimako,",
            "poem": 1
          },
          {
            "text": "ba ya jin addu’ata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya tare hanyata da tubula na duwatsu;",
            "poem": 1
          },
          {
            "text": "ya sa hanyata ta karkace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kamar beyar da take a laɓe tana jira,",
            "poem": 1
          },
          {
            "text": "kamar zaki a ɓoye,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "ya janye ni daga kan hanya ya ɓatar da ni",
            "poem": 1
          },
          {
            "text": "ya bar ni ba taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ya ja kwarinsa",
            "poem": 1
          },
          {
            "text": "ya sa in zama abin baratarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ya harbi zuciyata",
            "poem": 1
          },
          {
            "text": "da kibiyoyin kwarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Na zama abin dariya ga mutanena duka;",
            "poem": 1
          },
          {
            "text": "suna yi mini ba’a cikin waƙa dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ya cika ni da kayan ɗaci",
            "poem": 1
          },
          {
            "text": "ya gundure ni da abinci mai ɗaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ya kakkarya haƙorana da tsakuwa;",
            "poem": 1
          },
          {
            "text": "ya tattake ni cikin ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "An hana ni salama;",
            "poem": 1
          },
          {
            "text": "na manta da ko mene ne ake kira wadata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Saboda haka na ce, “Darajata ta ƙare",
            "poem": 1
          },
          {
            "text": "da kuma duk abin da nake begen samu daga wurin Ubangiji.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Na tuna da azabata da kuma sintiri,",
            "poem": 1
          },
          {
            "text": "da na yi ta yi da ɗacin rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Na tuna su sosai,",
            "poem": 1
          },
          {
            "text": "sai kuma na ji ba daɗi a raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Duk da haka na tuna da wannan",
            "poem": 1
          },
          {
            "text": "na kuma sa bege ga nan gaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Domin ƙaunar Ubangiji ba mu hallaka ba;",
            "poem": 1
          },
          {
            "text": "gama jiyejiyanƙansa ba su ƙarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sababbi ne kowace safiya;",
            "poem": 1
          },
          {
            "text": "amincinka kuwa mai girma ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Na ce wa kaina, “Ubangiji shi ne nawa;",
            "poem": 1
          },
          {
            "text": "saboda haka zan jira shi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ubangiji mai alheri ne ga waɗanda suke da bege a cikinsa,",
            "poem": 1
          },
          {
            "text": "ga kuma wanda yake neman shi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "yana da kyau ka jira shiru",
            "poem": 1
          },
          {
            "text": "domin samun ceton Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Yana da kyau mutum yă sha wuya",
            "poem": 1
          },
          {
            "text": "tun yana yaro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Bari yă zauna shiru shi kaɗai,",
            "poem": 1
          },
          {
            "text": "gama haka Ubangiji ya sa yă yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Bari yă ɓoye fuskarsa cikin ƙura",
            "poem": 1
          },
          {
            "text": "kila akwai bege.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Bari yă ba da kumatunsa a mare shi,",
            "poem": 1
          },
          {
            "text": "yă kuma bari a ci masa mutunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Gama Ubangiji ba ya",
            "poem": 1
          },
          {
            "text": "yashe mutane har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Ko da ya kawo ɓacin rai, zai nuna tausayi sosai,",
            "poem": 1
          },
          {
            "text": "ƙaunarsa tana da yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Gama ba haka kawai yake kawo wahala",
            "poem": 1
          },
          {
            "text": "ko ɓacin rai ga ’yan adam ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Bai yarda a tattake",
            "poem": 1
          },
          {
            "text": "’yan kurkuku a ƙasa ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "ko kuma a danne wa mutum hakkinsa",
            "poem": 1
          },
          {
            "text": "a gaban Maɗaukaki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "ko kuma a danne wa mutum shari’ar gaskiya",
            "poem": 1
          },
          {
            "text": "ashe Ubangiji ba zai ga irin waɗannan abubuwa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Wane ne ya isa yă yi magana kuma ta cika",
            "poem": 1
          },
          {
            "text": "in ba Ubangiji ne ya umarta ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Ba daga bakin Maɗaukaki ne",
            "poem": 1
          },
          {
            "text": "bala’i da abubuwa masu kyau suke fitowa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Don mene ne wani mai rai zai yi gunaguni",
            "poem": 1
          },
          {
            "text": "sa’ad da aka ba shi horo domin zunubansa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Bari mu auna tafiyarmu mu gwada ta,",
            "poem": 1
          },
          {
            "text": "sai mu kuma koma ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Bari mu ɗaga zuciyarmu da hannuwanmu",
            "poem": 1
          },
          {
            "text": "ga Allah na cikin sama, mu ce,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "“Mun yi zunubi mun yi tawaye",
            "poem": 1
          },
          {
            "text": "ba ka kuwa gafarta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "“Ka rufe kanka da fushi, ka fafare mu;",
            "poem": 1
          },
          {
            "text": "ka karkashe mu ba tausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 44,
        "content": [
          {
            "text": "Ka rufe kanka da gajimare",
            "poem": 1
          },
          {
            "text": "don kada addu’armu ta kai wurinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 45,
        "content": [
          {
            "text": "Ka mai da mu tarkace da juji",
            "poem": 1
          },
          {
            "text": "a cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 46,
        "content": [
          {
            "text": "“Dukan maƙiyanmu suna ta yin mana magana",
            "poem": 1
          },
          {
            "text": "marar daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 47,
        "content": [
          {
            "text": "Muna cika da tsoro,",
            "poem": 1
          },
          {
            "text": "da lalatarwa da hallakarwa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 48,
        "content": [
          {
            "text": "Hawaye na kwararowa daga idanuna",
            "poem": 1
          },
          {
            "text": "domin an hallaka mutanena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 49,
        "content": [
          {
            "text": "Idanuna za su ci gaba da kwararowa da hawaye,",
            "poem": 1
          },
          {
            "text": "ba hutawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 50,
        "content": [
          {
            "text": "Har sai in Ubangiji ya duba",
            "poem": 1
          },
          {
            "text": "daga sama ya gani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 51,
        "content": [
          {
            "text": "Abin da nake gani yana kawo mini baƙin ciki",
            "poem": 1
          },
          {
            "text": "domin dukan matan birnina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 52,
        "content": [
          {
            "text": "Maƙiyana suna farauta ta",
            "poem": 1
          },
          {
            "text": "ba dalili kamar tsuntsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 53,
        "content": [
          {
            "text": "Sun yi ƙoƙari su kashe ni a cikin rami",
            "poem": 1
          },
          {
            "text": "suka kuma jajjefe ni da duwatsu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 54,
        "content": [
          {
            "text": "ruwaye suka rufe kaina,",
            "poem": 1
          },
          {
            "text": "sai na yi tunani cewa na kusa mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 55,
        "content": [
          {
            "text": "Na yi kira ga sunanka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "daga rami mai zurfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 56,
        "content": [
          {
            "text": "Ka ji roƙona, “Kada ka toshe kunnuwanka",
            "poem": 1
          },
          {
            "text": "ka ƙi jin roƙona na neman taimako.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 57,
        "content": [
          {
            "text": "Ka zo kusa lokacin da na kira ka,",
            "poem": 1
          },
          {
            "text": "kuma ka ce mini, “Kada ka ji tsoro.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 58,
        "content": [
          {
            "text": "Ya Ubangiji, ka goyi bayana;",
            "poem": 1
          },
          {
            "text": "ka fanshi raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 59,
        "content": [
          {
            "text": "Ya Ubangiji, ka ga inda aka yi mini ba daidai ba.",
            "poem": 1
          },
          {
            "text": "Ka shari’anta, ka ba ni gaskiya!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 60,
        "content": [
          {
            "text": "Ka ga zurfin ramakonsu,",
            "poem": 1
          },
          {
            "text": "da duk mugun shirin da suke yi mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 61,
        "content": [
          {
            "text": "Ya Ubangiji, ka ji zaginsu,",
            "poem": 1
          },
          {
            "text": "da duka mugun shirin da suke yi mini",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 62,
        "content": [
          {
            "text": "Abin da maƙiyana suke yin raɗa a kai",
            "poem": 1
          },
          {
            "text": "game da ni duk yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 63,
        "content": [
          {
            "text": "Dube su! A zaune ko a tsaye,",
            "poem": 1
          },
          {
            "text": "suna yi mini ba’a cikin waƙoƙinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 64,
        "content": [
          {
            "text": "Ka ba su abin da ya dace su samu, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "domin abin da hannuwansu suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 65,
        "content": [
          {
            "text": "Ka sa yana ta rufe zuciyarsu,",
            "poem": 1
          },
          {
            "text": "kuma bari la’anarka ta bi su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 66,
        "content": [
          {
            "text": "Ka fafare su cikin fushi",
            "poem": 1
          },
          {
            "text": "ka hallaka su daga cikin duniya ta Ubangiji.",
            "poem": 2
          }
