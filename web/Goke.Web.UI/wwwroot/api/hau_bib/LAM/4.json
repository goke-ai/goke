  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zinariya ta rasa kyanta,",
            "poem": 1
          },
          {
            "text": "hasken zinariya ya dushe!",
            "poem": 2
          },
          {
            "text": "An warwatsar da tsarkakakkun duwatsu",
            "poem": 1
          },
          {
            "text": "masu daraja a kan tituna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Dubi samarin Sihiyona masu daraja,",
            "poem": 1
          },
          {
            "text": "waɗanda a dā darajarsu ta isa nauyin zinariya,",
            "poem": 2
          },
          {
            "text": "yanzu ana ɗaukar su a matsayin tukwanen ƙasa,",
            "poem": 1
          },
          {
            "text": "aikin maginin tukwane!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko diloli suna ba ’ya’yansu nono su sha,",
            "poem": 1
          },
          {
            "text": "amma mutanena sun zama marasa zuciya",
            "poem": 2
          },
          {
            "text": "kamar jiminai a cikin jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Domin ƙishirwa",
            "poem": 1
          },
          {
            "text": "harshen jarirai ya manne a rufin bakinsu;",
            "poem": 2
          },
          {
            "text": "yaran suna roƙo a ba su burodi,",
            "poem": 1
          },
          {
            "text": "amma ba wanda ya ba su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Waɗanda a dā sukan ci abinci mai daɗi",
            "poem": 1
          },
          {
            "text": "yanzu su ne masu bara a tituna.",
            "poem": 2
          },
          {
            "text": "Waɗanda a dā suke sa kaya masu kyau",
            "poem": 1
          },
          {
            "text": "yanzu suna kwance a kan tarin toka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Horon mutanena",
            "poem": 1
          },
          {
            "text": "ya fi na Sodom girma,",
            "poem": 2
          },
          {
            "text": "wadda aka hallaka farat ɗaya",
            "poem": 1
          },
          {
            "text": "ba wani hannu da ya juya ya taimake ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "’Ya’yan sarakunansu sun fi ƙanƙara haske",
            "poem": 1
          },
          {
            "text": "sun kuma fi madara fari,",
            "poem": 2
          },
          {
            "text": "jikunansu sun fi murjani ja,",
            "poem": 1
          },
          {
            "text": "kyansu kamar shuɗin yakutu.",
            "poem": 2
          },
          {
            "noteId": 868
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Amma yanzu sun fi dare duhu;",
            "poem": 1
          },
          {
            "text": "ba a iya gane su a tituna.",
            "poem": 2
          },
          {
            "text": "Fatar jikinsu ta manne da ƙasusuwansu;",
            "poem": 1
          },
          {
            "text": "sun bushe kamar itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gara waɗanda aka kashe su da takobi",
            "poem": 1
          },
          {
            "text": "da waɗanda suke mutuwa da yunwa;",
            "poem": 2
          },
          {
            "text": "sun rame domin rashin abinci a gona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Da hannuwansu mata masu tausayi",
            "poem": 1
          },
          {
            "text": "sun dafa yaransu,",
            "poem": 2
          },
          {
            "text": "suka zama masu abinci",
            "poem": 1
          },
          {
            "text": "sa’ad da aka hallaka mutanena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji ya saki fushinsa;",
            "poem": 1
          },
          {
            "text": "ya zuba zafin fushinsa.",
            "poem": 2
          },
          {
            "text": "Ya hura wuta a Sihiyona",
            "poem": 1
          },
          {
            "text": "ta kuma cinye harsashin gininta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sarakunan duniya ba su gaskata ba,",
            "poem": 1
          },
          {
            "text": "haka ma mutanen duniya,",
            "poem": 2
          },
          {
            "text": "cewa magabta da maƙiya",
            "poem": 1
          },
          {
            "text": "za su iya shiga ƙofofin Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Amma ya faru domin zunuban annabawanta",
            "poem": 1
          },
          {
            "text": "da muguntar firistocinta,",
            "poem": 2
          },
          {
            "text": "waɗanda suka zub",
            "poem": 1
          },
          {
            "text": "da jinin masu adalci a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yanzu suna yawo barkatai a tituna",
            "poem": 1
          },
          {
            "text": "kamar makafi.",
            "poem": 2
          },
          {
            "text": "Sun ƙazantu da jini",
            "poem": 1
          },
          {
            "text": "yadda ba wanda zai kuskura ya taɓa rigunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Ku tafi! Ba ku da tsabta!” Haka mutane suke ihu suke ce musu.",
            "poem": 1
          },
          {
            "text": "“Ku tashi daga nan! Ku tashi daga nan! Kada ku taɓa mu!”",
            "poem": 2
          },
          {
            "text": "Sa’ad da suka gudu suna yawo,",
            "poem": 1
          },
          {
            "text": "mutanen waɗansu ƙasashe suka ce,",
            "poem": 2
          },
          {
            "text": "“Ba za su ci gaba da zama a nan ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ubangiji kansa ya warwatsa su;",
            "poem": 1
          },
          {
            "text": "ya daina duban su.",
            "poem": 2
          },
          {
            "text": "Ba a ba firistoci girma,",
            "poem": 1
          },
          {
            "text": "ba su ba dattawa gata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Idanunmu sun gaji,",
            "poem": 1
          },
          {
            "text": "suna ta dubawa ko taimako zai zo;",
            "poem": 2
          },
          {
            "text": "mu sa ido ko za mu ga",
            "poem": 1
          },
          {
            "text": "ƙasar da za tă iya taimakon mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ana bin sawunmu,",
            "poem": 1
          },
          {
            "text": "ba za mu iya tafiya kan tituna ba.",
            "poem": 2
          },
          {
            "text": "Ƙarshenmu ya kusa, kwanakinmu sun ƙare,",
            "poem": 1
          },
          {
            "text": "gama ƙarshenmu ya zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Masu fafarar mu sun fi gaggafa",
            "poem": 1
          },
          {
            "text": "mai firiya a sararin sama sauri;",
            "poem": 2
          },
          {
            "text": "sun fafare mu a kan duwatsu",
            "poem": 1
          },
          {
            "text": "suna fakon mu a jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Shafaffe na Ubangiji, numfashin ranmu,",
            "poem": 1
          },
          {
            "text": "ya fāɗi cikin tarkonsu.",
            "poem": 2
          },
          {
            "text": "Muna tunani cewa za mu iya rayuwa",
            "poem": 1
          },
          {
            "text": "cikin sauran mutane a ƙarƙashin inuwarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ku yi murna da farin ciki, ya Diyar Edom,",
            "poem": 1
          },
          {
            "text": "ke mai zama a ƙasar Uz.",
            "poem": 2
          },
          {
            "text": "Amma ke ma za a ba ki kwaf;",
            "poem": 1
          },
          {
            "text": "za ki bugu ki zama tsirara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ya Diyar Sihiyona, hukuncinki zai ƙare;",
            "poem": 1
          },
          {
            "text": "ba zai sa zaman bautarki yă yi tsayi ba.",
            "poem": 2
          },
          {
            "text": "Amma ya Diyar Edom, zai hukunta zunubinki",
            "poem": 1
          },
          {
            "text": "yă tona tsiraicinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
