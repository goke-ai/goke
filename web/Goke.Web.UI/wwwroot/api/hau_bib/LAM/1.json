  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yanzu birnin ya zama babu kowa a ciki,",
            "poem": 1
          },
          {
            "text": "birnin da a dā yake cike da mutane!",
            "poem": 2
          },
          {
            "text": "Yanzu birnin ya zama kamar gwauruwa,",
            "poem": 1
          },
          {
            "text": "wadda a dā babba ce ita a cikin ƙasashe!",
            "poem": 2
          },
          {
            "text": "Ita da take sarauniya a cikin larduna",
            "poem": 1
          },
          {
            "text": "yanzu ta zama baiwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Tana yin kuka mai zafi da dare,",
            "poem": 1
          },
          {
            "text": "hawaye na gangara a kan kumatunta.",
            "poem": 2
          },
          {
            "text": "A cikin masoyanta duka",
            "poem": 1
          },
          {
            "text": "babu wanda ya yi mata ta’aziyya.",
            "poem": 2
          },
          {
            "text": "Duk abokanta sun yashe ta;",
            "poem": 1
          },
          {
            "text": "sun zama abokan gābanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bayan wahala da baƙin ciki,",
            "poem": 1
          },
          {
            "text": "Yahuda ta tafi bauta.",
            "poem": 2
          },
          {
            "text": "Ta zauna a cikin ƙasashe,",
            "poem": 1
          },
          {
            "text": "ba tă samu wurin hutawa ba.",
            "poem": 2
          },
          {
            "text": "Duk masu fafararta sun same ta",
            "poem": 1
          },
          {
            "text": "sa’ad da take cikin matuƙar ɓacin rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Hanyoyin zuwa Sihiyona suna makoki,",
            "poem": 1
          },
          {
            "text": "gama ba wanda ya zo bikin da ta shirya.",
            "poem": 2
          },
          {
            "text": "Ba kowa a hanyoyin shiganta.",
            "poem": 1
          },
          {
            "text": "Firistocinta suna gurnani,",
            "poem": 2
          },
          {
            "text": "’yan matana kuma suna wahala,",
            "poem": 1
          },
          {
            "text": "kuma tana cikin shan wahala ƙwarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Maƙiyanta sun zama shugabanninta;",
            "poem": 1
          },
          {
            "text": "Abokan gābanta suna da kwanciyar rai.",
            "poem": 2
          },
          {
            "text": "Ubangiji ya kawo mata ɓacin rai",
            "poem": 1
          },
          {
            "text": "domin yawan zunubanta.",
            "poem": 2
          },
          {
            "text": "’Ya’yanta sun tafi bauta,",
            "poem": 1
          },
          {
            "text": "a ƙarƙashin maƙiyanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Diyar Sihiyona ba ta",
            "poem": 1
          },
          {
            "text": "da sauran daraja.",
            "poem": 2
          },
          {
            "text": "’Ya’yan sarakunanta sun zama kamar bareyi",
            "poem": 1
          },
          {
            "text": "waɗanda suka rasa wurin kiwo;",
            "poem": 2
          },
          {
            "text": "cikin rashin ƙarfi suka guje",
            "poem": 1
          },
          {
            "text": "wa masu fafararsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "A cikin kwanakin da take shan wahala take kuma yawo",
            "poem": 1
          },
          {
            "text": "Urushalima ta tuna da dukan dukiyar",
            "poem": 2
          },
          {
            "text": "da take da ita a kwanakin dā can.",
            "poem": 2
          },
          {
            "text": "Sa’ad da mutanenta suka faɗa cikin hannun abokan gābanta,",
            "poem": 1
          },
          {
            "text": "ba wanda ya taimake ta.",
            "poem": 2
          },
          {
            "text": "Maƙiyanta suka dube ta",
            "poem": 1
          },
          {
            "text": "suka yi mata dariya don hallakar da ta auko mata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Urushalima ta yi zunubi ƙwarai",
            "poem": 1
          },
          {
            "text": "saboda haka ta zama marar tsarki.",
            "poem": 2
          },
          {
            "text": "Dukan masu martaba ta sun raina ta,",
            "poem": 1
          },
          {
            "text": "gama sun ga tsiraicinta;",
            "poem": 2
          },
          {
            "text": "ita ma da kanta tana nishi da ƙyar",
            "poem": 1
          },
          {
            "text": "ta kuma juya baya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ƙazantarta ta manne wa rigunanta;",
            "poem": 1
          },
          {
            "text": "ba tă kula da nan gaba ba,",
            "poem": 2
          },
          {
            "text": "fāɗuwarta kuwa babban abu ne;",
            "poem": 1
          },
          {
            "text": "babu wanda zai yi mata ta’aziyya.",
            "poem": 2
          },
          {
            "text": "“Duba, ya Ubangiji, ka ga wahalata,",
            "poem": 1
          },
          {
            "text": "gama maƙiyi ya yi nasara.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Maƙiya ya kwashe",
            "poem": 1
          },
          {
            "text": "dukiyarta duka;",
            "poem": 2
          },
          {
            "text": "ta ga mutanen da ba su san Allah ba",
            "poem": 1
          },
          {
            "text": "sun shiga wuri mai tsarkinta",
            "poem": 2
          },
          {
            "text": "waɗanda ka hana su",
            "poem": 1
          },
          {
            "text": "shiga taron jama’arka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Dukan mutanenta suna nishi",
            "poem": 1
          },
          {
            "text": "da ƙyar suna neman burodi;",
            "poem": 2
          },
          {
            "text": "sun sayar da dukiyarsu don su samu abinci",
            "poem": 1
          },
          {
            "text": "don kada su mutu da yunwa.",
            "poem": 2
          },
          {
            "text": "“Ubangiji, ka duba ka gani,",
            "poem": 1
          },
          {
            "text": "gama an yashe ni.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ko wannan ba wani abu ba ne a wurinku, dukanku masu wucewa?",
            "poem": 1
          },
          {
            "text": "Ku duba ku gani.",
            "poem": 2
          },
          {
            "text": "Ko akwai wata wahala kamar",
            "poem": 1
          },
          {
            "text": "irin wadda nake sha,",
            "poem": 2
          },
          {
            "text": "wadda Ubangiji ya auko mini",
            "poem": 1
          },
          {
            "text": "a cikin zafin fushinsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Daga sama ya aiko da wuta,",
            "poem": 1
          },
          {
            "text": "ya aiko ta cikin ƙasusuwana.",
            "poem": 2
          },
          {
            "text": "Ya shimfiɗa raga a ƙafafuna",
            "poem": 1
          },
          {
            "text": "ya juyo da ni.",
            "poem": 2
          },
          {
            "text": "Ya bar ni ni kaɗai,",
            "poem": 1
          },
          {
            "text": "sumamme dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ya ɗaura zunubaina a wuyana;",
            "poem": 1
          },
          {
            "text": "aka naɗe su a hannuwansa.",
            "poem": 2
          },
          {
            "text": "Aka rataye su a wuyana",
            "poem": 1
          },
          {
            "text": "Ubangiji ya kwashe ƙarfina.",
            "poem": 2
          },
          {
            "text": "Ya bashe ni",
            "poem": 1
          },
          {
            "text": "ga waɗanda suka fi ni ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Ubangiji ya ƙi",
            "poem": 1
          },
          {
            "text": "duk mayaƙan da suke tare da ni;",
            "poem": 2
          },
          {
            "text": "ya sa wata runduna ta tayar mini",
            "poem": 1
          },
          {
            "text": "ta kuma tattake samarina.",
            "poem": 2
          },
          {
            "text": "Ubangiji ya tattake budurwa Diyar Yahuda",
            "poem": 1
          },
          {
            "text": "kamar ’ya’yan inabi a wurin matsewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Dalilin da ya sa nake kuka ke nan",
            "poem": 1
          },
          {
            "text": "idanuna kuma suna ta zubar da hawaye.",
            "poem": 2
          },
          {
            "text": "Babu wani a kusa da zai yi mini ta’aziyya,",
            "poem": 1
          },
          {
            "text": "ba wanda zai sabunta ruhuna.",
            "poem": 2
          },
          {
            "text": "’Ya’yana sun zama fakirai",
            "poem": 1
          },
          {
            "text": "domin maƙiyina ya yi nasara.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Sihiyona ta miƙa hannunta,",
            "poem": 1
          },
          {
            "text": "amma ba wani da zai yi mata ta’aziyya.",
            "poem": 2
          },
          {
            "text": "Ubangiji ya umarta cewa",
            "poem": 1
          },
          {
            "text": "maƙwabtansa za su zama maƙiyansa;",
            "poem": 2
          },
          {
            "text": "Urushalima ta zama",
            "poem": 1
          },
          {
            "text": "abar ƙyama a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Ubangiji mai adalci ne,",
            "poem": 1
          },
          {
            "text": "duk da haka na yi tawaye da umarninsa.",
            "poem": 2
          },
          {
            "text": "Ku saurara, jama’a duka;",
            "poem": 1
          },
          {
            "text": "ku dubi wahalar da nake sha.",
            "poem": 2
          },
          {
            "text": "Samarina da ’yan matana",
            "poem": 1
          },
          {
            "text": "duka sun tafi bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Na kira abokaina",
            "poem": 1
          },
          {
            "text": "amma sun yashe ni.",
            "poem": 2
          },
          {
            "text": "Firistocina da dattawana",
            "poem": 1
          },
          {
            "text": "sun hallaka a cikin birnin",
            "poem": 2
          },
          {
            "text": "yayinda suke neman abinci",
            "poem": 1
          },
          {
            "text": "don kada su mutu da yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Duba, Ubangiji, ka ga ƙuncin da nake ciki!",
            "poem": 1
          },
          {
            "text": "Ina shan azaba a raina,",
            "poem": 2
          },
          {
            "text": "ba ni da kwanciyar rai a cikin zuciyata,",
            "poem": 1
          },
          {
            "text": "domin na yi tawaye sosai.",
            "poem": 2
          },
          {
            "text": "A waje takobi na kisa;",
            "poem": 1
          },
          {
            "text": "a ciki kuma akwai mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Mutane suna ji ina nishi da ƙyar,",
            "poem": 1
          },
          {
            "text": "amma ba wanda zai yi mini ta’aziyya.",
            "poem": 2
          },
          {
            "text": "Dukan maƙiyana sun ji wahalar da nake ciki;",
            "poem": 1
          },
          {
            "text": "suna farin ciki da abin da ka yi.",
            "poem": 2
          },
          {
            "text": "Ka kawo ranan nan da ka sanar",
            "poem": 1
          },
          {
            "text": "domin su ma su zama kamar ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Bari ka ga muguntarsu duka;",
            "poem": 1
          },
          {
            "text": "ka yi musu",
            "poem": 2
          },
          {
            "text": "yadda ka yi mini",
            "poem": 1
          },
          {
            "text": "domin dukan zunubansu.",
            "poem": 2
          },
          {
            "text": "Nishina da yawa",
            "poem": 1
          },
          {
            "text": "kuma zuciyata ta gaji.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
