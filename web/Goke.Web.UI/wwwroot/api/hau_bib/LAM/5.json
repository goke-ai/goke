  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka tuna, ya Ubangiji, abin da ya faru da mu;",
            "poem": 1
          },
          {
            "text": "duba, ka ga kunyar da muka sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "An ba wa baƙi gādonmu,",
            "poem": 1
          },
          {
            "text": "gidajenmu kuma aka ba bare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mun zama marayu marasa ubanni,",
            "poem": 1
          },
          {
            "text": "uwayenmu kamar gwauraye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Dole mu sayi ruwan da muke sha;",
            "poem": 1
          },
          {
            "text": "sai mun biya mu sami itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Masu fafararmu sun kusa kama mu;",
            "poem": 1
          },
          {
            "text": "mun gaji kuma ba dama mu huta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mun miƙa kanmu ga Masar da Assuriya",
            "poem": 1
          },
          {
            "text": "don mu sami isashen abinci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kakanninmu sun yi zunubi",
            "poem": 1
          },
          {
            "text": "kuma ba sa nan yanzu,",
            "poem": 1
          },
          {
            "text": "mu ne aka bari muna shan hukuncinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bayi suna mulki a kanmu,",
            "poem": 1
          },
          {
            "text": "kuma ba wanda zai ’yantar da mu daga hannuwansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Muna samun burodi a bakin rayukanmu",
            "poem": 1
          },
          {
            "text": "domin takobin da yake a jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Fatar jikinmu ta yi zafi kamar murhu,",
            "poem": 1
          },
          {
            "text": "muna jin zazzaɓi domin yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "An yi wa mata fyaɗe a cikin Sihiyona,",
            "poem": 1
          },
          {
            "text": "da kuma budurwai a cikin garuruwan Yahuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "An rataye ’ya’yan sarakuna da hannuwansu;",
            "poem": 1
          },
          {
            "text": "ba a ba wa dattawa girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Samari suna faman yin niƙa;",
            "poem": 1
          },
          {
            "text": "yara kuma suna fama da ƙyar da nauyin kayan itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Dattawan sun bar ƙofar birnin,",
            "poem": 1
          },
          {
            "text": "samari sun daina rera waƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Farin ciki ya rabu da zuciyarmu;",
            "poem": 1
          },
          {
            "text": "rayuwarmu ta zama makoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Rawani ya fāɗi daga kanmu.",
            "poem": 1
          },
          {
            "text": "Kaiton mu gama mun yi zunubi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Domin wannan zuciyarmu ta yi sanyi;",
            "poem": 1
          },
          {
            "text": "domin waɗannan abubuwa idanunmu sun dushe",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "gama Tudun Sihiyona ya zama kufai,",
            "poem": 1
          },
          {
            "text": "sai diloli ke yawo a wurin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ya Ubangiji, kai ne mai iko har abada;",
            "poem": 1
          },
          {
            "text": "kursiyinka ya dawwama cikin dukan zamani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Don mene ne kake mantawa da mu koyaushe?",
            "poem": 1
          },
          {
            "text": "Me ya sa ka yashe mu da jimawa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka sāke jawo mu gare ka, ya Ubangiji, don mu komo;",
            "poem": 1
          },
          {
            "text": "ka sabunta kwanakinmu su zama kamar yadda suke a dā",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "sai dai in ka ƙi mu gaba ɗaya",
            "poem": 1
          },
          {
            "text": "kana fushi da mu fiye da yadda za a iya aunawa.",
            "poem": 2
          }
        ]
      }
    ],
