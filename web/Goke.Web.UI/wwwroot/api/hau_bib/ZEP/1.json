  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Maganar Ubangiji da ta zo wa Zefaniya ɗan Kushi, ɗan Gedaliya, ɗan Amariya, ɗan Hezekiya, a zamanin Yosiya ɗan Amon sarkin Yahuda."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "heading",
        "content": [
          "Gargaɗi a kan hallaka mai zuwa"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Zan hallaka kome",
            "poem": 1
          },
          {
            "text": "a fuskar duniya,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Zan hallaka mutane da dabbobi;",
            "poem": 1
          },
          {
            "text": "zan kuma hallaka tsuntsayen sama",
            "poem": 2
          },
          {
            "text": "da kifayen teku,",
            "poem": 2
          },
          {
            "text": "da gumakan da suke sa mugaye su yi tuntuɓe.”",
            "poem": 1
          },
          {
            "noteId": 1318
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Sa’ad da zan kawar da mutum daga fuskar duniya,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Zan miƙa hannuna gāba da Yahuda",
            "poem": 1
          },
          {
            "text": "da kuma dukan mazaunan Urushalima.",
            "poem": 2
          },
          {
            "text": "Zan datse raguwar Ba’al daga wannan wuri,",
            "poem": 1
          },
          {
            "text": "da sunayen firistocin gumaka da na marasa sanin Allah,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "waɗanda suka rusuna a kan rufin ɗaki",
            "poem": 1
          },
          {
            "text": "don su yi sujada ga rundunar taurari.",
            "poem": 2
          },
          {
            "text": "Waɗanda suka rusuna suka kuma yi rantsuwa da sunan Ubangiji",
            "poem": 1
          },
          {
            "text": "suke kuma rantsuwa da sunan Molek.",
            "poem": 2
          },
          {
            "noteId": 1319
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Waɗanda suka juya daga bin Ubangiji,",
            "poem": 1
          },
          {
            "text": "ba sa kuma neman Ubangiji ko su nemi nufinsa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ku yi shiru a gaban Ubangiji Mai Iko Duka,",
            "poem": 1
          },
          {
            "text": "gama ranar Ubangiji ta yi kusa.",
            "poem": 2
          },
          {
            "text": "Ubangiji ya shirya hadaya;",
            "poem": 1
          },
          {
            "text": "ya kuma tsarkake waɗanda ya gayyato.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“A ranar hadayar Ubangiji",
            "poem": 1
          },
          {
            "text": "zan hukunta sarakuna",
            "poem": 2
          },
          {
            "text": "da kuma ’ya’yan sarakuna",
            "poem": 2
          },
          {
            "text": "da duk waɗanda suke sanye",
            "poem": 1
          },
          {
            "text": "da rigunan ƙasashen waje.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "A wannan rana zan hukunta",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suke kauce taka madogarar ƙofa,",
            "poem": 2
          },
          {
            "noteId": 1320
          },
          {
            "text": "waɗanda suke cika haikalin allolinsu",
            "poem": 1
          },
          {
            "text": "da rikici da ruɗu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“A wannan rana,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji,",
            "poem": 2
          },
          {
            "text": "“Za a ji kuka daga Ƙofar Kifi,",
            "poem": 2
          },
          {
            "text": "kururuwa daga Sabon Mazauni,",
            "poem": 2
          },
          {
            "text": "da kuma amo mai ƙarfi daga tuddai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku yi kururuwa, ku da kuke zaune a yankin kasuwa;",
            "poem": 1
          },
          {
            "noteId": 1321
          },
          {
            "text": "za a hallaka dukan ’yan kasuwanku,",
            "poem": 2
          },
          {
            "text": "dukan waɗanda suke kasuwanci da azurfa za su lalace.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "A wannan lokaci zan bincike Urushalima da fitilu",
            "poem": 1
          },
          {
            "text": "in kuma hukunta waɗanda ba su kula ba,",
            "poem": 2
          },
          {
            "text": "waɗanda suke kamar ruwan inabin da aka bar a ƙasan tukunya,",
            "poem": 1
          },
          {
            "text": "waɗanda suke tsammani, ‘Ubangiji ba zai yi kome ba",
            "poem": 2
          },
          {
            "text": "nagari ko mummuna.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Za a washe dukiyarsu,",
            "poem": 1
          },
          {
            "text": "a rurrushe gidajensu.",
            "poem": 2
          },
          {
            "text": "Za su gina gidaje",
            "poem": 1
          },
          {
            "text": "amma ba za su zauna a ciki ba;",
            "poem": 2
          },
          {
            "text": "za su shuka inabi",
            "poem": 1
          },
          {
            "text": "amma ba za su sha ruwansa ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Babbar ranar Ubangiji ta yi kusa,",
            "poem": 1
          },
          {
            "text": "ta yi kusa kuma tana zuwa da sauri.",
            "poem": 2
          },
          {
            "text": "Ku saurara! Kukan ranar Ubangiji za tă yi zafi,",
            "poem": 1
          },
          {
            "text": "za a ji kururuwan jarumi a can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ranan nan za tă zama ranar fushi,",
            "poem": 1
          },
          {
            "text": "rana ce ta baƙin ciki da azaba,",
            "poem": 2
          },
          {
            "text": "rana ce ta tashin hankali da lalacewa,",
            "poem": 1
          },
          {
            "text": "ranar duhu baƙi ƙirin,",
            "poem": 2
          },
          {
            "text": "ranar gizagizai da baƙin duhu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "rana ce ta busa ƙaho da kururuwar yaƙi",
            "poem": 1
          },
          {
            "text": "gāba da birane masu mafaka,",
            "poem": 2
          },
          {
            "text": "da kuma kusurwar hasumiyoyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Zan kawo baƙin ciki a kan mutane",
            "poem": 1
          },
          {
            "text": "za su kuma yi tafiya kamar makafi,",
            "poem": 2
          },
          {
            "text": "domin sun yi wa Ubangiji zunubi.",
            "poem": 2
          },
          {
            "text": "Za a zubar da jininsu kamar ƙura",
            "poem": 1
          },
          {
            "text": "kayan cikinsu kuma kamar najasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Azurfarsu ko zinariyarsu",
            "poem": 1
          },
          {
            "text": "ba za su iya cetonsu ba",
            "poem": 2
          },
          {
            "text": "a ranar fushin Ubangiji.”",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "A cikin zafin kishinsa",
            "poem": 1
          },
          {
            "text": "za a hallaka dukan duniya",
            "poem": 2
          },
          {
            "text": "gama zai kawo ƙarshen dukan mazaunan duniya",
            "poem": 1
          },
          {
            "text": "nan da nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
