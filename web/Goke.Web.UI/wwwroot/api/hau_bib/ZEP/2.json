  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku tattaru, ku tattaru,",
            "poem": 1
          },
          {
            "text": "Ya ku al’umma marar kunya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "kafin ƙayyadadden lokacin nan yă zo",
            "poem": 1
          },
          {
            "text": "ranan nan kuma ta share ku kamar ƙaiƙayi",
            "poem": 2
          },
          {
            "text": "kuma kafin fushi mai tsanani na Ubangiji yă auko muku,",
            "poem": 1
          },
          {
            "text": "kafin ranar fushin Ubangiji ta auko muku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku nemi Ubangiji, dukanku ƙasashe masu tawali’u,",
            "poem": 1
          },
          {
            "text": "ku da kuke yin abin da ya umarta.",
            "poem": 2
          },
          {
            "text": "Ku nemi adalci da tawali’u;",
            "poem": 1
          },
          {
            "text": "mai yiwuwa ku sami mafaka a ranar fushin Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Filistiya"
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Za a yashe Gaza",
            "poem": 1
          },
          {
            "text": "a kuma bar Ashkelon kango.",
            "poem": 2
          },
          {
            "text": "Da tsakar rana Ashdod za tă zama babu kowa",
            "poem": 1
          },
          {
            "text": "a kuma tumɓuke Ekron.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Taku ta ƙare ku da kuke zama a bakin teku,",
            "poem": 1
          },
          {
            "text": "Ya ku mutanen Keretawa;",
            "poem": 2
          },
          {
            "text": "maganar Ubangiji tana gāba da ke,",
            "poem": 1
          },
          {
            "text": "Ya ke Kan’ana, ƙasar Filistiyawa.",
            "poem": 2
          },
          {
            "text": "“Zan hallaka ki",
            "poem": 1
          },
          {
            "text": "kuma babu abin da zai rage.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ƙasar da take a bakin teku, inda Keretawa",
            "poem": 1
          },
          {
            "noteId": 1322
          },
          {
            "text": "suke zaune,",
            "poem": 1
          },
          {
            "text": "za tă zama wurin da makiyaya da ta garken tumaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Za tă zama mallakar raguwar gidan Yahuda;",
            "poem": 1
          },
          {
            "text": "a can za su sami wurin kiwo.",
            "poem": 2
          },
          {
            "text": "Da yamma za su kwanta",
            "poem": 1
          },
          {
            "text": "a gidajen Ashkelon.",
            "poem": 2
          },
          {
            "text": "Ubangiji Allahnsu zai lura da su;",
            "poem": 1
          },
          {
            "text": "zai maido musu da martabarsu.",
            "poem": 2
          },
          {
            "noteId": 1323
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Mowab da Ammon"
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Na ji irin zagin da Mowab take yi,",
            "poem": 1
          },
          {
            "text": "da kuma ba’ar Ammonawa,",
            "poem": 2
          },
          {
            "text": "waɗanda suka zagi mutanena",
            "poem": 1
          },
          {
            "text": "suna kuma yi barazana a kan ƙasarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Saboda haka, muddin ina raye,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji Maɗaukaki,",
            "poem": 2
          },
          {
            "text": "Allah na Isra’ila,",
            "poem": 2
          },
          {
            "text": "“tabbatacce Mowab za tă zama kamar Sodom,",
            "poem": 1
          },
          {
            "text": "Ammonawa kuma kamar Gomorra,",
            "poem": 2
          },
          {
            "text": "ƙasa mai ciyayi da rammukan gishiri,",
            "poem": 1
          },
          {
            "text": "ƙasa marar amfani har abada.",
            "poem": 2
          },
          {
            "text": "Raguwar mutanena za su washe su;",
            "poem": 1
          },
          {
            "text": "waɗanda suka rage na al’ummata za su gāda ƙasarsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Wannan ne zai zama sakamakon girmankansu,",
            "poem": 1
          },
          {
            "text": "saboda zagi da kuma ba’ar da suka yi wa mutanen Ubangiji Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji zai zama abin tsoro a gare su",
            "poem": 1
          },
          {
            "text": "sa’ad da ya hallaka allolin ƙasar.",
            "poem": 2
          },
          {
            "text": "Al’ummai a kowane bakin teku za su yi masa sujada,",
            "poem": 1
          },
          {
            "text": "kowa a ƙasarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Kush"
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ku ma, ya Kushawa,",
            "poem": 1
          },
          {
            "noteId": 1324
          },
          {
            "text": "za a kashe ku da takobina.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Assuriya"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zai kuma miƙa hannunsa gāba da arewa",
            "poem": 1
          },
          {
            "text": "yă kuma hallaka Assuriya,",
            "poem": 2
          },
          {
            "text": "zai mai da Ninebe kango gaba ɗaya",
            "poem": 1
          },
          {
            "text": "ta kuma zama busasshiya kamar hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Garkuna za su kwanta a can,",
            "poem": 1
          },
          {
            "text": "da kowace irin halitta,",
            "poem": 2
          },
          {
            "text": "Mujiyar hamada da bushiya",
            "poem": 1
          },
          {
            "text": "za su zauna a kan ginshiƙanta.",
            "poem": 2
          },
          {
            "text": "Kukansu za tă ratsa tagogi,",
            "poem": 1
          },
          {
            "text": "ɓuraguzai za su tare ƙofofin shiga,",
            "poem": 2
          },
          {
            "text": "za a kware ginshiƙan al’ul.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Birnin da yake harka ke nan",
            "poem": 1
          },
          {
            "text": "da take zaune lafiya.",
            "poem": 2
          },
          {
            "text": "Ta ce wa kanta,",
            "poem": 1
          },
          {
            "text": "“Ni ce, kuma babu kamata.”",
            "poem": 2
          },
          {
            "text": "Dubi irin kangon da ta zama mana,",
            "poem": 1
          },
          {
            "text": "mazaunin namun jeji!",
            "poem": 2
          },
          {
            "text": "Duk wanda ya wuce ta sai ya yi mata tsaki",
            "poem": 1
          },
          {
            "text": "yana kaɗa kai.",
            "poem": 2
          }
        ]
      }
    ],
