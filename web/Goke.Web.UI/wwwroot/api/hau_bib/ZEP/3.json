  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Nan gaba na Urushalima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Taki ta ƙare, ke birnin mai danniya,",
            "poem": 1
          },
          {
            "text": "mai ’yan tawaye da kuma masu ƙazanta!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ba kya yi wa kowa biyayya,",
            "poem": 1
          },
          {
            "text": "ba kya kuma yarda da kuskurenki.",
            "poem": 2
          },
          {
            "text": "Ba kya dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ba kya kuma kusatowa kusa da Allahnki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sarakunanki ruri ne na zakoki,",
            "poem": 1
          },
          {
            "text": "shugabanninki kyarketan dare ne,",
            "poem": 2
          },
          {
            "text": "waɗanda ba sa rage kome don safe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Annabawanki mahaukata ne",
            "poem": 1
          },
          {
            "text": "mutanenki masu cin amana ne.",
            "poem": 2
          },
          {
            "text": "Firistocinki suna ƙazantar da Wurin Mai Tsarki",
            "poem": 1
          },
          {
            "text": "suna kuma keta dokoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji da yake cikinki mai adalci ne;",
            "poem": 1
          },
          {
            "text": "ba ya yin abin da ba daidai ba.",
            "poem": 2
          },
          {
            "text": "Kowace safiya yakan bayyana dokokinsa a fili,",
            "poem": 1
          },
          {
            "text": "kowace sabuwar rana kuma ba ya kāsawa,",
            "poem": 2
          },
          {
            "text": "duk da haka marasa adalci ba sa jin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Na daddatse al’ummai;",
            "poem": 1
          },
          {
            "text": "an kuma rurrushe kagararsu.",
            "poem": 2
          },
          {
            "text": "Na bar titunansu ba kowa,",
            "poem": 1
          },
          {
            "text": "ba mai ratsawa a ciki.",
            "poem": 2
          },
          {
            "text": "An ragargaza biranensu;",
            "poem": 1
          },
          {
            "text": "ba wanda za a bari, babu ko ɗaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na ce wa birnin,",
            "poem": 1
          },
          {
            "text": "‘Tabbatacce za ki ji tsorona",
            "poem": 2
          },
          {
            "text": "ki kuma yarda da gyara!’",
            "poem": 2
          },
          {
            "text": "Ta haka ba za a datse wurin zamanki ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa dukan hukuncena za su hau bisa kansu ba.",
            "poem": 2
          },
          {
            "text": "Amma har yanzu suna marmari",
            "poem": 1
          },
          {
            "text": "su yi rashin gaskiya a duk abin da suke yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Saboda haka ku jira ni,” in ji Ubangiji;",
            "poem": 1
          },
          {
            "text": "“a ranar da zan tsaya in ba da shaida,",
            "poem": 2
          },
          {
            "noteId": 1325
          },
          {
            "text": "Na yanke shawara in tattara dukan al’ummai,",
            "poem": 1
          },
          {
            "text": "in tattara mulkoki",
            "poem": 2
          },
          {
            "text": "in kuma zuba fushina a kansu,",
            "poem": 1
          },
          {
            "text": "da dukan zafin haushina.",
            "poem": 2
          },
          {
            "text": "Za a mamaye dukan duniya",
            "poem": 1
          },
          {
            "text": "da zafin fushina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Sa’an nan zan tsarkake leɓunan mutanen,",
            "poem": 1
          },
          {
            "text": "don dukansu su kira bisa ga sunan Ubangiji",
            "poem": 2
          },
          {
            "text": "su kuma yi masa hidima kafaɗa da kafaɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Tun daga ƙetaren rafuffukan Kush",
            "poem": 1
          },
          {
            "noteId": 1326
          },
          {
            "text": "masu yi mini sujada, mutanena da suke a warwatse,",
            "poem": 2
          },
          {
            "text": "za su kawo mini hadayu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "A wannan rana ba za ku sha kunya",
            "poem": 1
          },
          {
            "text": "saboda laifofin da kuka yi mini,",
            "poem": 2
          },
          {
            "text": "gama zan ɗauke wa wannan birni",
            "poem": 1
          },
          {
            "text": "waɗanda suke farin ciki cikin girmankansu.",
            "poem": 2
          },
          {
            "text": "Ba kuma za ka ƙara yin kallon reni",
            "poem": 1
          },
          {
            "text": "a tuduna mai tsarki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma zan zauna a cikinki",
            "poem": 1
          },
          {
            "text": "masu tawali’u da masu ƙasƙantar da kai,",
            "poem": 2
          },
          {
            "text": "waɗanda suke dogara ga sunan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Raguwar Isra’ila ba za su ƙara aikata abin da ba daidai ba,",
            "poem": 1
          },
          {
            "text": "ba za su faɗa ƙarya ba,",
            "poem": 2
          },
          {
            "text": "ba kuwa za a sami ruɗu a bakunansu ba.",
            "poem": 2
          },
          {
            "text": "Za su ci su kuma kwanta",
            "poem": 1
          },
          {
            "text": "kuma babu wanda zai ba su tsoro.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ki rera, ya Diyar Sihiyona;",
            "poem": 1
          },
          {
            "text": "ki tā da murya, ya Isra’ila!",
            "poem": 2
          },
          {
            "text": "Ki yi murna ki kuma yi farin ciki da dukan zuciyarki,",
            "poem": 1
          },
          {
            "text": "Ya Diyar Urushalima!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ubangiji ya ɗauke hukuncinki,",
            "poem": 1
          },
          {
            "text": "ya mai da abokan gābanki baya.",
            "poem": 2
          },
          {
            "text": "Ubangiji, Sarkin Isra’ila, yana tare da ke;",
            "poem": 1
          },
          {
            "text": "ba kuma za ki ƙara jin tsoron wani lahani ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "A wannan rana za su cewa Urushalima,",
            "poem": 1
          },
          {
            "text": "“Kada ki ji tsoro, ya Sihiyona;",
            "poem": 2
          },
          {
            "text": "kada ki bar hannuwanki su raunana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ubangiji Allahnki yana tare da ke,",
            "poem": 1
          },
          {
            "text": "mai iko ne don ceto.",
            "poem": 2
          },
          {
            "text": "Zai yi matuƙar farin ciki da ke,",
            "poem": 1
          },
          {
            "text": "zai rufe ki da ƙaunarsa,",
            "poem": 2
          },
          {
            "text": "zai yi farin ciki da ke ta wurin rerawa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Zan cire taƙaici daga gare ki",
            "poem": 1
          },
          {
            "text": "a ƙayyadaddun bukukkuwa;",
            "poem": 2
          },
          {
            "text": "su kaya ne da kuma zargi a gare ki.",
            "poem": 2
          },
          {
            "noteId": 1327
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "A wannan lokaci zan jijji wa",
            "poem": 1
          },
          {
            "text": "waɗanda suka danne ku;",
            "poem": 2
          },
          {
            "text": "zan kuɓutar da guragu",
            "poem": 1
          },
          {
            "text": "in kuma tattara waɗanda suke a warwatse.",
            "poem": 2
          },
          {
            "text": "Zan sa a yabe su a kuma girmama su",
            "poem": 1
          },
          {
            "text": "a kowace ƙasar da aka kunyatar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "A wannan lokaci zan tattara ku;",
            "poem": 1
          },
          {
            "text": "a wannan lokaci zan kawo ku gida,",
            "poem": 2
          },
          {
            "text": "zan sa a yabe ku a kuma girmama ku",
            "poem": 1
          },
          {
            "text": "a cikin dukan mutanen duniya",
            "poem": 2
          },
          {
            "text": "a sa’ad da na maido da arzikinku",
            "poem": 1
          },
          {
            "noteId": 1328
          },
          {
            "text": "a idanunku,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
