  "chapter": {
    "number": 13,
    "content": [
      {
        "type": "heading",
        "content": [
          "Fushin Ubangiji a kan Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sa’ad da Efraim ya yi magana, mutane sun yi rawan jiki;",
            "poem": 1
          },
          {
            "text": "an girmama shi a cikin Isra’ila.",
            "poem": 2
          },
          {
            "text": "Amma sai ya zama mai laifi na yin wa Ba’al sujada, ya kuwa mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yanzu sai yin zunubi a kai a kai suke;",
            "poem": 1
          },
          {
            "text": "suna yin gumaka wa kansu daga azurfansu,",
            "poem": 2
          },
          {
            "text": "da wayo suna sarrafa siffofi,",
            "poem": 1
          },
          {
            "text": "dukansu aikin masu aikin hannu ne.",
            "poem": 2
          },
          {
            "text": "Ana magana waɗannan mutane cewa,",
            "poem": 1
          },
          {
            "text": "“Suna miƙa hadayar mutum",
            "poem": 2
          },
          {
            "text": "su kuma sumbaci",
            "poem": 2
          },
          {
            "noteId": 645
          },
          {
            "text": "gumakan maruƙa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Saboda haka za su zama kamar hazon safiya,",
            "poem": 1
          },
          {
            "text": "kamar raɓar safen da yakan kakkaɓe,",
            "poem": 2
          },
          {
            "text": "kamar ƙaiƙayin da ake tankaɗe daga masussuka,",
            "poem": 2
          },
          {
            "text": "kamar hayaƙin da yake fita daga taga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Amma ni ne Ubangiji Allahnku,",
            "poem": 1
          },
          {
            "text": "wanda ya fitar da ku daga Masar.",
            "poem": 2
          },
          {
            "text": "Ba za ku yarda da wani Allah ba sai ni,",
            "poem": 1
          },
          {
            "text": "ba wani Mai Ceto in ban da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na lura da ku a hamada,",
            "poem": 1
          },
          {
            "text": "cikin ƙasar mai ƙunar zafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’ad da na ciyar da su sun ƙoshi;",
            "poem": 1
          },
          {
            "text": "sa’ad da suka ƙoshi, sai suka fara taƙama;",
            "poem": 2
          },
          {
            "text": "sai suka manta da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Saboda haka zan hau kansu kamar zaki,",
            "poem": 1
          },
          {
            "text": "zan ɓuya a bakin hanya kamar damisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kamar beyar da aka ƙwace mata ’ya’yanta,",
            "poem": 1
          },
          {
            "text": "zan fāɗa musu in ɓarke su.",
            "poem": 2
          },
          {
            "text": "Kamar zaki zan cinye su;",
            "poem": 1
          },
          {
            "text": "kamar naman jeji zan yayyage su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“An hallaka ku, ya Isra’ila,",
            "poem": 1
          },
          {
            "text": "domin kun tayar mini, kun tayar wa mai taimakonku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ina sarkinku, da zai cece ku?",
            "poem": 1
          },
          {
            "text": "Ina masu mulkinku cikin dukan garuruwanku,",
            "poem": 2
          },
          {
            "text": "waɗanda kuka ce,",
            "poem": 1
          },
          {
            "text": "‘Ba mu sarki da shugabanni’?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Saboda haka cikin fushina na ba ku sarki,",
            "poem": 1
          },
          {
            "text": "kuma cikin hasalata na ɗauke shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "An yi ajiyar laifin Efraim,",
            "poem": 1
          },
          {
            "text": "aka lissafta zunubansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Naƙuda ta zo masa kamar a mace mai haihuwa,",
            "poem": 1
          },
          {
            "text": "amma shi yaro ne marar hikima;",
            "poem": 2
          },
          {
            "text": "sa’ad da lokaci ya kai,",
            "poem": 1
          },
          {
            "text": "ba ya zuwa inda mahaifa ta buɗe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Zan fanshe su daga ikon kabari;",
            "poem": 1
          },
          {
            "text": "zan cece su daga mutuwa.",
            "poem": 2
          },
          {
            "text": "Ina annobanki, ya mutuwa?",
            "poem": 1
          },
          {
            "text": "Ina hallakarka, ya kabari?",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Ba zan ji tausayi ba,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ko da ma ya ci gaba cikin ’yan’uwansa.",
            "poem": 2
          },
          {
            "text": "Iskar gabas daga Ubangiji za tă zo,",
            "poem": 1
          },
          {
            "text": "tana hurawa daga hamada;",
            "poem": 2
          },
          {
            "text": "maɓulɓularsa za tă kafe",
            "poem": 1
          },
          {
            "text": "rijiyarsa kuma ta bushe.",
            "poem": 2
          },
          {
            "text": "Za a kwashi kaya masu daraja",
            "poem": 1
          },
          {
            "text": "na ɗakin ajiyarsa ganima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Dole mutanen Samariya su ɗauki laifinsu,",
            "poem": 1
          },
          {
            "text": "domin sun tayar wa Allahnsu.",
            "poem": 2
          },
          {
            "text": "Za a kashe su da takobi;",
            "poem": 1
          },
          {
            "text": "za a fyaɗa ƙananansu da ƙasa,",
            "poem": 2
          },
          {
            "text": "za a ɓarke matansu masu ciki.”",
            "poem": 2
          }
        ]
      }
    ],
