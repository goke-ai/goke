  "chapter": {
    "number": 11,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ƙaunar Allah domin Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Sa’ad da Isra’ila yake yaro, na ƙaunace shi,",
            "poem": 1
          },
          {
            "text": "daga Masar kuma na kira ɗana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Amma yawan kiran da na yi wa Isra’ila",
            "poem": 1
          },
          {
            "text": "haka nesa da ni da suke ta yi.",
            "poem": 2
          },
          {
            "text": "Suka miƙa hadaya ga Ba’al",
            "poem": 1
          },
          {
            "text": "suka kuma ƙona turare ga siffofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ni ne na koya wa Efraim tafiya",
            "poem": 1
          },
          {
            "text": "ina kama su da hannu;",
            "poem": 2
          },
          {
            "text": "amma ba su gane",
            "poem": 2
          },
          {
            "text": "cewa ni ne na warkar da su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Na bishe su da linzamin alheri da tausayi,",
            "poem": 1
          },
          {
            "text": "da ragamar ƙauna;",
            "poem": 2
          },
          {
            "text": "Na cire karkiya daga wuyansu",
            "poem": 1
          },
          {
            "text": "na kuma rusuna na ciyar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ba za su koma Masar ba",
            "poem": 1
          },
          {
            "text": "Assuriya kuma ba za tă yi mulki a bisansu ba",
            "poem": 2
          },
          {
            "text": "saboda sun ƙi su tuba ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Takuba za su yi ta wulgawa a biranensu,",
            "poem": 1
          },
          {
            "text": "za su hallaka sandunan ƙarafan ƙofofinsu",
            "poem": 2
          },
          {
            "text": "su kuma kawo ƙarshen ƙulle-ƙullensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Mutanena sun ƙudura su juye daga gare ni.",
            "poem": 1
          },
          {
            "text": "Ko da ma suka yi kira ga Mafi Ɗaukaka,",
            "poem": 2
          },
          {
            "text": "ta ko ƙaƙa ba zai girmama su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Yaya zan ba da kai, Efraim?",
            "poem": 1
          },
          {
            "text": "Yaya zan miƙa ka, Isra’ila?",
            "poem": 2
          },
          {
            "text": "Yaya zan yi da kai kamar Adma?",
            "poem": 1
          },
          {
            "text": "Yaya zan yi da kai kamar Zeboyim?",
            "poem": 2
          },
          {
            "text": "Zuciyata ta canja a cikina;",
            "poem": 1
          },
          {
            "text": "dukan tausayina ya huru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ba zan zartar da fushina mai zafi ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa zan juya in ragargaza Efraim ba.",
            "poem": 2
          },
          {
            "text": "Gama ni Allah ne, ba mutum ba,",
            "poem": 1
          },
          {
            "text": "Mai Tsarki a cikinku.",
            "poem": 2
          },
          {
            "text": "Ba zan zo cikin fushi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Za su bi Ubangiji;",
            "poem": 1
          },
          {
            "text": "zai yi ruri kamar zaki.",
            "poem": 2
          },
          {
            "text": "Sa’ad da ya yi ruri,",
            "poem": 1
          },
          {
            "text": "’ya’yansa za su zo da rawan jiki daga yamma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Za su zo da rawan jiki",
            "poem": 1
          },
          {
            "text": "kamar tsuntsaye daga Masar,",
            "poem": 2
          },
          {
            "text": "kamar kurciyoyi daga Assuriya.",
            "poem": 2
          },
          {
            "text": "Zan zaunar da su a cikin gidajensu,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Zunubin Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mutanen Efraim sun kewaye ni da ƙarairayi,",
            "poem": 1
          },
          {
            "text": "gidan Isra’ila da ruɗu.",
            "poem": 2
          },
          {
            "text": "Mutanen Yahuda kuma suna yi wa Allah ƙin ji,",
            "poem": 1
          },
          {
            "text": "har ma a kan Mai Tsarkin nan mai aminci.",
            "poem": 2
          }
        ]
      }
    ],
