  "chapter": {
    "number": 10,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Isra’ila kuringa ce mai yaɗuwa;",
            "poem": 1
          },
          {
            "text": "ya fitar da ’ya’ya wa kansa.",
            "poem": 2
          },
          {
            "text": "Yayinda ’ya’yan suka ƙaru,",
            "poem": 1
          },
          {
            "text": "ya gina ƙarin bagadai;",
            "poem": 2
          },
          {
            "text": "da ƙasarsa ta wadata,",
            "poem": 1
          },
          {
            "text": "ya yi wa keɓaɓɓun duwatsu ado.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zuciyarsu masu ruɗu ne,",
            "poem": 1
          },
          {
            "text": "yanzu kuwa dole su ɗauki laifinsu.",
            "poem": 2
          },
          {
            "text": "Ubangiji zai rushe bagadansu",
            "poem": 1
          },
          {
            "text": "yă kuma hallaka keɓaɓɓun duwatsunsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’an nan za su ce, “Ba mu da sarki",
            "poem": 1
          },
          {
            "text": "domin ba mu girmama Ubangiji ba.",
            "poem": 2
          },
          {
            "text": "Amma ko da ma muna da sarki,",
            "poem": 1
          },
          {
            "text": "me zai yi mana?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sun yi alkawura masu yawa,",
            "poem": 1
          },
          {
            "text": "suka yi rantsuwar ƙarya",
            "poem": 2
          },
          {
            "text": "da kuma yarjejjeniyoyi;",
            "poem": 2
          },
          {
            "text": "saboda haka ƙararraki suka taso",
            "poem": 1
          },
          {
            "text": "kamar ciyayi masu dafi da aka nome a gona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mutanen da suke zama a Samariya suna tsoro",
            "poem": 1
          },
          {
            "text": "saboda gunki maraƙin Bet-Awen.",
            "poem": 2
          },
          {
            "noteId": 641
          },
          {
            "text": "Mutanensa za su yi makokinsa,",
            "poem": 1
          },
          {
            "text": "haka ma firistocinsa matsafa,",
            "poem": 2
          },
          {
            "text": "waɗanda suka yi farin ciki a kan darajarsa,",
            "poem": 1
          },
          {
            "text": "don an ɗauke ta daga gare su aka kai ta zaman bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Za a ɗauke shi a kai Assuriya",
            "poem": 1
          },
          {
            "text": "kamar gandu wa babban sarki.",
            "poem": 2
          },
          {
            "text": "Efraim zai sha kunya;",
            "poem": 1
          },
          {
            "text": "Isra’ila zai sha kunya saboda gumakan itacensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Samariya da sarkinta za su ɓace",
            "poem": 1
          },
          {
            "text": "kamar kumfa a bisa ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Za a hallaka masujadai kan tudu na mugunta",
            "poem": 1
          },
          {
            "text": "zunubin Isra’ila ne.",
            "poem": 2
          },
          {
            "text": "Ƙayayuwa da sarƙaƙƙiya za su yi girma",
            "poem": 1
          },
          {
            "text": "su rufe bagadansu.",
            "poem": 2
          },
          {
            "text": "Sa’an nan za su ce wa duwatsu, “Ku rufe mu!”",
            "poem": 1
          },
          {
            "text": "Ga tuddai kuma, “Ku fāɗo a kanmu!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Tun daga kwanakin Gibeya, kun yi zunubi, ya Isra’ila,",
            "poem": 1
          },
          {
            "text": "a can kuwa kuka ci gaba.",
            "poem": 2
          },
          {
            "noteId": 642
          },
          {
            "text": "Yaƙi bai cimma",
            "poem": 1
          },
          {
            "text": "masu aikata mugunta a Gibeya ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sa’ad da na ga dama, zan hukunta su;",
            "poem": 1
          },
          {
            "text": "al’ummai za su taru su yi gāba da su",
            "poem": 2
          },
          {
            "text": "don su daure su saboda zunubansu da suka riɓanya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Efraim horarriyar karsana ce",
            "poem": 1
          },
          {
            "text": "mai son sussuka;",
            "poem": 2
          },
          {
            "text": "saboda haka zan sa karkiya",
            "poem": 1
          },
          {
            "text": "a kyakkyawan wuyanta.",
            "poem": 2
          },
          {
            "text": "Zan bi da Efraim,",
            "poem": 1
          },
          {
            "text": "Dole Yahuda yă yi noma,",
            "poem": 2
          },
          {
            "text": "dole kuma Yaƙub yă ja garman noma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku shuka wa kanku adalci,",
            "poem": 1
          },
          {
            "text": "ku girbe ’ya’yan jinƙai marar ƙarewa,",
            "poem": 2
          },
          {
            "text": "ku kuma nome ƙasar da ba a nome ba;",
            "poem": 1
          },
          {
            "text": "gama lokaci ne na neman Ubangiji,",
            "poem": 2
          },
          {
            "text": "sai ya zo",
            "poem": 1
          },
          {
            "text": "ya zubo adalci a kanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Amma kun shuka mugunta,",
            "poem": 1
          },
          {
            "text": "kuka girbe mugu",
            "poem": 2
          },
          {
            "text": "kuka ci ’ya’yan ruɗu.",
            "poem": 2
          },
          {
            "text": "Domin kun dogara da ƙarfinku",
            "poem": 1
          },
          {
            "text": "da kuma a jarumawanku masu yawa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "hayaniyar yaƙi za tă tashi gāba da mutanenku,",
            "poem": 1
          },
          {
            "text": "saboda a ragargaza kagaranku,",
            "poem": 2
          },
          {
            "text": "kamar yadda Shalman ya ragargaza Bet-Arbel a ranar yaƙi,",
            "poem": 1
          },
          {
            "text": "sa’ad da aka fyaɗa uwaye tare da ’ya’yansu da ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Haka zai faru da kai, ya Betel,",
            "poem": 1
          },
          {
            "text": "domin muguntarka ta yi yawa.",
            "poem": 2
          },
          {
            "text": "Sa’ad da wannan rana ta zo,",
            "poem": 1
          },
          {
            "text": "za a hallaka sarkin Isra’ila ƙaƙaf.",
            "poem": 2
          }
        ]
      }
    ],
