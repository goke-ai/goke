  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "heading",
        "content": [
          "Isra’ila marar tuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ku zo, mu koma ga Ubangiji.",
            "poem": 1
          },
          {
            "text": "Ya yayyage mu kucu-kucu",
            "poem": 1
          },
          {
            "text": "amma zai warkar da mu;",
            "poem": 2
          },
          {
            "text": "ya ji mana ciwo",
            "poem": 1
          },
          {
            "text": "amma zai daure mana miyakunmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bayan kwana biyu zai rayar da mu,",
            "poem": 1
          },
          {
            "text": "a rana ta uku zai tashe mu,",
            "poem": 2
          },
          {
            "text": "don mu rayu a gabansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari mu yarda da Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari mu nace gaba don mu yarda da shi.",
            "poem": 2
          },
          {
            "text": "Muddin rana tana fitowa,",
            "poem": 1
          },
          {
            "text": "zai bayyana;",
            "poem": 2
          },
          {
            "text": "zai zo mana kamar ruwan bazara,",
            "poem": 1
          },
          {
            "text": "kamar ruwan saman farko da yake jiƙe ƙasa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Me zan yi da kai Efraim?",
            "poem": 1
          },
          {
            "text": "Me zan yi da kai Yahuda?",
            "poem": 2
          },
          {
            "text": "Ƙaunarku tana kamar hazon safiya,",
            "poem": 1
          },
          {
            "text": "kamar raɓar safiya da takan ɓace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Saboda haka na yayyaga ku kucu-kucu tare da annabawana,",
            "poem": 1
          },
          {
            "text": "na kashe ku da kalmomin bakina;",
            "poem": 2
          },
          {
            "text": "hukuntaina sun haskaka kamar walƙiya a kanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama jinƙai nake bukata, ba hadaya ba,",
            "poem": 1
          },
          {
            "text": "ku kuma san Allah a maimakon hadayun ƙonawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kamar Adamu, sun tā da alkawari,",
            "poem": 1
          },
          {
            "text": "sun yi mini rashin aminci a can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Gileyad birni ce ta mugayen mutane,",
            "poem": 1
          },
          {
            "text": "da tabon alamun jini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kamar yadda mafasa sukan yi fakon mutum,",
            "poem": 1
          },
          {
            "text": "haka ƙungiyoyin firistoci suke;",
            "poem": 2
          },
          {
            "text": "suna kisa a hanya zuwa Shekem,",
            "poem": 1
          },
          {
            "text": "suna aikata laifofi bankunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Na ga wani abu mai bantsoro",
            "poem": 1
          },
          {
            "text": "a gidan Isra’ila.",
            "poem": 2
          },
          {
            "text": "A can Efraim ya miƙa wuya ga karuwanci",
            "poem": 1
          },
          {
            "text": "Isra’ila kuma ta ƙazantu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Ku kuma, ya mutanen Yahuda,",
            "poem": 1
          },
          {
            "text": "na shirya muku ranar girbi.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“A duk sa’ad da zan mayar da dukiya wa mutanena,",
            "poem": 1
          }
        ]
      }
    ],
