  "chapter": {
    "number": 12,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Efraim yana kiwo a kan iska;",
            "poem": 1
          },
          {
            "text": "yana fafarar iskar gabas dukan yini",
            "poem": 2
          },
          {
            "text": "yana riɓaɓɓanya ƙarairayi da rikici.",
            "poem": 2
          },
          {
            "text": "Ya yi yarjejjeniya da Assuriya",
            "poem": 1
          },
          {
            "text": "ya kuma aika wa Masar man zaitun.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji yana da ƙarar da zai kawo a kan Yahuda;",
            "poem": 1
          },
          {
            "text": "zai hukunta Yaƙub bisa ga hanyoyinsa",
            "poem": 2
          },
          {
            "text": "zai sāka masa bisa ga ayyukansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "A cikin mahaifa ya cafke ɗiɗɗigen ɗan’uwansa;",
            "poem": 1
          },
          {
            "text": "a matsayin mutum ya yi kokawa da Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya yi kokawa da mala’ika ya kuma rinjaye shi;",
            "poem": 1
          },
          {
            "text": "ya yi kuka ya kuma yi roƙo don tagomashi.",
            "poem": 2
          },
          {
            "text": "Ya same shi a Betel",
            "poem": 1
          },
          {
            "text": "ya kuma yi magana da shi a can,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji Allah Maɗaukaki,",
            "poem": 1
          },
          {
            "text": "Ubangiji ne sunansa sananne!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Amma dole ku koma ga Allahnku;",
            "poem": 1
          },
          {
            "text": "ku ci gaba da ƙauna da yin gaskiya,",
            "poem": 2
          },
          {
            "text": "ku kuma saurari Allahnku kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ɗan kasuwa yana amfani da mudu marar gaskiya;",
            "poem": 1
          },
          {
            "text": "yana jin daɗin cuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Efraim yana fariya yana cewa,",
            "poem": 1
          },
          {
            "text": "“Ni mai arziki ne ƙwarai; na azurta.",
            "poem": 2
          },
          {
            "text": "Da dukan wadatata ba za a sami",
            "poem": 1
          },
          {
            "text": "wani laifi ko zunubi a gare ni ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Ni ne Ubangiji Allahnku,",
            "poem": 1
          },
          {
            "text": "wanda ya fitar da ku daga",
            "poem": 2
          },
          {
            "noteId": 643
          },
          {
            "text": "Masar;",
            "poem": 2
          },
          {
            "text": "zan sa ku sāke zauna a tentuna,",
            "poem": 1
          },
          {
            "text": "kamar a kwanakin ƙayyadaddun bukukkuwanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Na yi magana da annabawa,",
            "poem": 1
          },
          {
            "text": "na ba su wahayi da yawa",
            "poem": 2
          },
          {
            "text": "na kuma ba da misalai ta wurinsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gileyad mugu ne?",
            "poem": 1
          },
          {
            "text": "Mutanensa mutanen banza ne!",
            "poem": 2
          },
          {
            "text": "Suna miƙa bijimai a Gilgal?",
            "poem": 1
          },
          {
            "text": "Bagadansu za su zama tsibin duwatsu.",
            "poem": 2
          },
          {
            "text": "A gonar da aka nome.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yaƙub ya gudu zuwa ƙasar Aram;",
            "poem": 1
          },
          {
            "noteId": 644
          },
          {
            "text": "Isra’ila ya yi bauta don yă sami mata,",
            "poem": 2
          },
          {
            "text": "domin kuma yă biya, sai da ya yi kiwon tumaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ubangiji ya yi amfani da annabi don yă fitar da Isra’ila daga Masar",
            "poem": 1
          },
          {
            "text": "ta wurin annabi ya lura da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Amma Efraim ya yi muguwar tsokana da ta sa ya yi fushi;",
            "poem": 1
          },
          {
            "text": "shugabansa zai ɗora musu hakkin jini a kansa",
            "poem": 2
          },
          {
            "text": "kuma zai sāka masa saboda wulaƙancinsa.",
            "poem": 2
          }
        ]
      }
    ],
