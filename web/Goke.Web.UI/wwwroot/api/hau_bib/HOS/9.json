  "chapter": {
    "number": 9,
    "content": [
      {
        "type": "heading",
        "content": [
          "Hukunci domin Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kada ku yi farin ciki, ya Isra’ila;",
            "poem": 1
          },
          {
            "text": "kada ku yi murna kamar waɗansu al’ummai.",
            "poem": 2
          },
          {
            "text": "Gama kun yi rashin aminci ga Allahnku;",
            "poem": 1
          },
          {
            "text": "kuna son hakkokin karuwa",
            "poem": 2
          },
          {
            "text": "a kowace masussuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Masussukai da wuraren matsin inabi ba za su ciyar da mutane ba;",
            "poem": 1
          },
          {
            "text": "sabon ruwan inabi zai kāsa musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba za su ci gaba da zama a ƙasar Ubangiji ba;",
            "poem": 1
          },
          {
            "text": "Efraim zai koma Masar",
            "poem": 2
          },
          {
            "text": "yă kuma ci abinci marar tsarki a Assuriya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba za su zuba hadayun ruwan inabi ga Ubangiji ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa hadayunsu za su gamshe shi ba.",
            "poem": 2
          },
          {
            "text": "Irin hadayun nan za su zama musu kamar burodin masu makoki;",
            "poem": 1
          },
          {
            "text": "duk wanda ya ci su zai ƙazantu.",
            "poem": 2
          },
          {
            "text": "Wannan abincin zai zama na kansu ne;",
            "poem": 1
          },
          {
            "text": "ba zai zo cikin haikalin Ubangiji ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Me za ku yi a ƙayyadaddiyar ranar bukukkuwarku,",
            "poem": 1
          },
          {
            "text": "a ranakun bikin Ubangiji?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ko da sun kuɓuta daga hallaka,",
            "poem": 1
          },
          {
            "text": "Masar za tă tattara su,",
            "poem": 2
          },
          {
            "text": "Memfis kuma za tă binne su.",
            "poem": 2
          },
          {
            "text": "Sarƙaƙƙiya za tă mamaye kayan azurfansu,",
            "poem": 1
          },
          {
            "text": "ƙayayyuwa su tsiro a cikin tentunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kwanakin hukunci suna zuwa,",
            "poem": 1
          },
          {
            "text": "kwanakin ba da lissafi suna a kusa.",
            "poem": 2
          },
          {
            "text": "Bari Isra’ila su san da wannan.",
            "poem": 2
          },
          {
            "text": "Saboda zunubanku sun yi yawa",
            "poem": 1
          },
          {
            "text": "ƙiyayyarku kuma ta yi yawa,",
            "poem": 2
          },
          {
            "text": "har ake ɗauka annabi wawa ne,",
            "poem": 2
          },
          {
            "text": "mutumin da aka iza kuwa mahaukaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Annabi, tare da Allahna,",
            "poem": 1
          },
          {
            "text": "su ne masu tsaro a bisa Efraim,",
            "poem": 2
          },
          {
            "noteId": 640
          },
          {
            "text": "duk da haka tarko na jiransa a dukan hanyoyi,",
            "poem": 1
          },
          {
            "text": "da kuma ƙiyayya a cikin gidan Allahnsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sun nutse da zurfi cikin lalaci,",
            "poem": 1
          },
          {
            "text": "kamar a kwanakin Gibeya.",
            "poem": 2
          },
          {
            "text": "Allah zai tuna da muguntarsu",
            "poem": 1
          },
          {
            "text": "yă kuma hukunta su saboda zunubansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Sa’ad da na sami Isra’ila,",
            "poem": 1
          },
          {
            "text": "ya zama kamar samun inabi a hamada;",
            "poem": 2
          },
          {
            "text": "sa’ad da na ga kakanninku,",
            "poem": 1
          },
          {
            "text": "ya zama kamar ganin ’ya’yan itace na farko a itacen ɓaure.",
            "poem": 2
          },
          {
            "text": "Amma sa’ad da suka zo Ba’al-Feyor,",
            "poem": 1
          },
          {
            "text": "suka keɓe kansu wa gumaka bankunya",
            "poem": 2
          },
          {
            "text": "sai suka zama abubuwan banƙyama kamar abubuwan da suke ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Darajar Efraim za tă yi firiya tă tafi kamar tsuntsu,",
            "poem": 1
          },
          {
            "text": "ba haihuwa, ba juna biyu, ba ɗaukar ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ko da sun yi renon ’ya’ya,",
            "poem": 1
          },
          {
            "text": "zan sa su yi baƙin cikin kowannensu.",
            "poem": 2
          },
          {
            "text": "Kaitonsu",
            "poem": 1
          },
          {
            "text": "sa’ad da na juya musu baya!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Na ga Efraim, kamar birnin Taya,",
            "poem": 1
          },
          {
            "text": "da aka kafa a wuri mai daɗi.",
            "poem": 2
          },
          {
            "text": "Amma Efraim zai fitar",
            "poem": 1
          },
          {
            "text": "da ’ya’yansu ga masu yanka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka ba su, ya Ubangiji",
            "poem": 1
          },
          {
            "text": "Me za ka ba su?",
            "poem": 2
          },
          {
            "text": "Ka ba su mahaifar da za su yi ɓarin ciki",
            "poem": 1
          },
          {
            "text": "da busassun nono.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Saboda dukan muguntarsu a Gilgal,",
            "poem": 1
          },
          {
            "text": "na ƙi su a can.",
            "poem": 2
          },
          {
            "text": "Saboda ayyukansu na zunubi,",
            "poem": 1
          },
          {
            "text": "zan kore su daga gidana.",
            "poem": 2
          },
          {
            "text": "Ba zan ƙara ƙaunace su ba;",
            "poem": 1
          },
          {
            "text": "dukan shugabanninsu ’yan tawaye ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "An ka da Efraim,",
            "poem": 1
          },
          {
            "text": "saiwarsu ta bushe,",
            "poem": 2
          },
          {
            "text": "ba sa ba da amfani.",
            "poem": 2
          },
          {
            "text": "Ko da sun haifi ’ya’ya",
            "poem": 1
          },
          {
            "text": "zan kashe waɗanda suka fi ƙauna.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Allahna zai ƙi su",
            "poem": 1
          },
          {
            "text": "saboda ba su yi masa biyayya ba;",
            "poem": 2
          },
          {
            "text": "za su zama masu yawo a cikin al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
