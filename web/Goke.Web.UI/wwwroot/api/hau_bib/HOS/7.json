  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "a duka sa’ad da zan warkar da Isra’ila,",
            "poem": 2
          },
          {
            "text": "zunuban Efraim za su tonu",
            "poem": 1
          },
          {
            "text": "za a kuma bayyana laifofin Samariya.",
            "poem": 2
          },
          {
            "text": "Suna ruɗu,",
            "poem": 1
          },
          {
            "text": "ɓarayi sukan fasa su shiga gidaje,",
            "poem": 2
          },
          {
            "text": "’yan fashi sukan yi fashi a tituna;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "amma ba su gane",
            "poem": 1
          },
          {
            "text": "cewa na tuna da dukan ayyukan muguntarsu ba.",
            "poem": 2
          },
          {
            "text": "Zunubansu sun kewaye su;",
            "poem": 1
          },
          {
            "text": "kullum suna a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Suna faranta wa sarki zuciya da muguntarsu,",
            "poem": 1
          },
          {
            "text": "shugabanni kuma da ƙarairayinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Dukansu mazinata ne",
            "poem": 1
          },
          {
            "text": "suna ƙuna kamar matoya",
            "poem": 2
          },
          {
            "text": "wadda mai gashin burodi ba ya bukata yă tura mata wuta",
            "poem": 1
          },
          {
            "text": "daga cuɗe kullu har kumburinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "A ranar bikin sarkinmu",
            "poem": 1
          },
          {
            "text": "shugabanni sukan bugu da ruwan inabi,",
            "poem": 2
          },
          {
            "text": "yă yi cuɗanya da masu ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zukatansu suna kamar matoya;",
            "poem": 1
          },
          {
            "text": "sukan kusace shi da wayo.",
            "poem": 2
          },
          {
            "text": "Muguwar aniyarsu takan yi ta ci dukan dare;",
            "poem": 1
          },
          {
            "text": "da safe sai ta ƙuna kamar harshen wuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dukansu suna da zafi kamar matoya;",
            "poem": 1
          },
          {
            "text": "suna kashe masu mulkinsu.",
            "poem": 2
          },
          {
            "text": "Dukan sarakunansu sukan fāɗi,",
            "poem": 1
          },
          {
            "text": "kuma babu waninsu da yake kira gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Efraim yana cuɗanya da al’ummai;",
            "poem": 1
          },
          {
            "text": "Efraim waina ne mai fāɗi da ba a juye ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Baƙi sun tsotse ƙarfinsa,",
            "poem": 1
          },
          {
            "text": "amma bai gane ba.",
            "poem": 2
          },
          {
            "text": "Gashi kansa ya cika da furfura,",
            "poem": 1
          },
          {
            "text": "amma bai lura ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Girmankan Isra’ila ya ba da shaida a kansa,",
            "poem": 1
          },
          {
            "text": "amma duk da haka",
            "poem": 2
          },
          {
            "text": "bai dawo ga Ubangiji Allahnsa",
            "poem": 1
          },
          {
            "text": "ko yă neme shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Efraim yana kama da kurciya,",
            "poem": 1
          },
          {
            "text": "marar wayo, marar hankali,",
            "poem": 2
          },
          {
            "text": "yanzu yana kira ga Masar,",
            "poem": 2
          },
          {
            "text": "yanzu yana juyewa ga Assuriya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa’ad da suka tafi, zan jefa ragata a kansu;",
            "poem": 1
          },
          {
            "text": "zai janye su ƙasa kamar tsuntsayen sararin sama.",
            "poem": 2
          },
          {
            "text": "Sa’ad da na ji suna tafiya tare,",
            "poem": 1
          },
          {
            "text": "zan kama su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kaitonsu,",
            "poem": 1
          },
          {
            "text": "domin sun kauce daga gare ni!",
            "poem": 2
          },
          {
            "text": "Hallaka za tă aukar musu,",
            "poem": 1
          },
          {
            "text": "domin sun tayar mini!",
            "poem": 2
          },
          {
            "text": "Na ƙudura in cece su",
            "poem": 1
          },
          {
            "text": "amma suna faɗar ƙarya a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ba sa yin mini kuka da zuciyarsu",
            "poem": 1
          },
          {
            "text": "amma suna ihu a kan gadajensu.",
            "poem": 2
          },
          {
            "text": "Sukan taru wurin ɗaya don hatsi da ruwan inabi",
            "poem": 1
          },
          {
            "text": "amma su juya mini baya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Na horar da su na kuma ƙarfafa su,",
            "poem": 1
          },
          {
            "text": "amma sun ƙulla mini maƙarƙashiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba sa juya ga Mafi Ɗaukaka;",
            "poem": 1
          },
          {
            "text": "suna kama da tanƙwararren baka.",
            "poem": 2
          },
          {
            "text": "Za a kashe shugabanninsu da takobi",
            "poem": 1
          },
          {
            "text": "saboda banzan maganganunsu.",
            "poem": 2
          },
          {
            "text": "Saboda wannan za a wulaƙanta su",
            "poem": 1
          },
          {
            "text": "a ƙasar Masar.",
            "poem": 2
          }
        ]
      }
    ],
