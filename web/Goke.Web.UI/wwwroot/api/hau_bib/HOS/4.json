  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "heading",
        "content": [
          "Tuhuma a kan Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku ji maganar Ubangiji, ku Isra’ilawa,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji yana da tuhumar da zai kawo",
            "poem": 2
          },
          {
            "text": "a kan ku waɗanda suke zama a ƙasar.",
            "poem": 2
          },
          {
            "text": "“Babu aminci, babu ƙauna,",
            "poem": 1
          },
          {
            "text": "babu yarda da Allah a cikin ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Akwai la’ana ce kawai,",
            "poem": 1
          },
          {
            "noteId": 637
          },
          {
            "text": "yin ƙarya da kisa,",
            "poem": 1
          },
          {
            "text": "yin sata da zina;",
            "poem": 2
          },
          {
            "text": "sun wuce gona da iri,",
            "poem": 1
          },
          {
            "text": "kisankai a kan kisankai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Saboda wannan ƙasar tana makoki,",
            "poem": 1
          },
          {
            "noteId": 638
          },
          {
            "text": "kuma dukan waɗanda suke zama a cikinta sun lalace;",
            "poem": 2
          },
          {
            "text": "namun jeji da tsuntsayen sararin sama",
            "poem": 1
          },
          {
            "text": "da kuma kifin teku suna mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Amma kada wani mutum yă kawo tuhuma,",
            "poem": 1
          },
          {
            "text": "kada wani mutum yă zargi wani,",
            "poem": 2
          },
          {
            "text": "gama mutanenka suna kama da waɗanda",
            "poem": 1
          },
          {
            "text": "suke kawo tuhume-tuhume a kan firist ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kuna tuntuɓe dare da rana,",
            "poem": 1
          },
          {
            "text": "annabawa ma suna tuntuɓe tare da ku.",
            "poem": 2
          },
          {
            "text": "Saboda haka zan hallaka mahaifiyarku,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "mutanena suna hallaka saboda jahilci.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Domin kun ƙi neman sani,",
            "poem": 1
          },
          {
            "text": "ni ma na ƙi ku a matsayin firistocina;",
            "poem": 2
          },
          {
            "text": "domin kun ƙyale dokar Allahnku,",
            "poem": 1
          },
          {
            "text": "ni ma zan ƙyale ’ya’yanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yawan ƙaruwar firistoci,",
            "poem": 1
          },
          {
            "text": "haka suke yawan zunubi a kaina;",
            "poem": 2
          },
          {
            "text": "sun yi musaya Ɗaukakarsu da wani abin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Suna ciyar da kansu a kan zunuban mutanena",
            "poem": 1
          },
          {
            "text": "suna kuma haɗamar muguntarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Zai kuwa zama, kamar yadda mutane suke, haka firistoci suke.",
            "poem": 1
          },
          {
            "text": "Zan hukunta dukansu saboda al’amuransu",
            "poem": 2
          },
          {
            "text": "in kuma sāka musu saboda ayyukansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Za su ci amma ba za su ƙoshi ba;",
            "poem": 1
          },
          {
            "text": "za su shiga karuwanci amma ba za su ƙaru ba,",
            "poem": 2
          },
          {
            "text": "gama sun rabu da Ubangiji",
            "poem": 1
          },
          {
            "text": "don su ba da kansu",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "ga karuwanci,",
            "poem": 2
          },
          {
            "text": "ga tsoho da kuma sabon ruwan inabi,",
            "poem": 1
          },
          {
            "text": "waɗanda suka ɗauke ganewar mutanena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sun nemi shawarar gunkin da aka yi da itace",
            "poem": 1
          },
          {
            "text": "suka kuwa sami amsa daga sanda.",
            "poem": 2
          },
          {
            "text": "Halin karuwanci yakan ɓad da su;",
            "poem": 1
          },
          {
            "text": "sun yi rashin aminci ga Allahnsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Suna miƙa hadaya a kan ƙwanƙolin duwatsu",
            "poem": 1
          },
          {
            "text": "suna kuma ƙone hadayu a kan tuddai,",
            "poem": 2
          },
          {
            "text": "a ƙarƙashin itatuwa oak, aduruku da katambiri,",
            "poem": 1
          },
          {
            "text": "inda inuwa take da daɗi.",
            "poem": 2
          },
          {
            "text": "Saboda haka ’ya’yanku mata suka juya wa karuwanci",
            "poem": 1
          },
          {
            "text": "surukanku mata kuma suka shiga yin zina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ba zan hukunta ’ya’yanku mata",
            "poem": 1
          },
          {
            "text": "sa’ad da suka juya ga yin karuwanci ba,",
            "poem": 2
          },
          {
            "text": "balle surukanku mata,",
            "poem": 1
          },
          {
            "text": "sa’ad da suka yi zina,",
            "poem": 2
          },
          {
            "text": "gama mazan da kansu suna ma’amala da karuwai",
            "poem": 1
          },
          {
            "text": "suna kuma miƙa hadaya tare da karuwai na masujada,",
            "poem": 2
          },
          {
            "text": "mutane marasa ganewa za su lalace!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Ko da yake kun yi zina, ya Isra’ila,",
            "poem": 1
          },
          {
            "text": "kada Yahuda ya yi laifi.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Kada ku tafi Gilgal;",
            "poem": 1
          },
          {
            "text": "kada ku haura zuwa Bet-Awen.",
            "poem": 2
          },
          {
            "noteId": 639
          },
          {
            "text": "Kuma kada ku rantse cewa, ‘Muddin Ubangiji yana a raye!’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Isra’ilawa masu taurinkai ne,",
            "poem": 1
          },
          {
            "text": "kamar karsana mai taurinkai.",
            "poem": 2
          },
          {
            "text": "Yaya Ubangiji zai iya kiwonsu",
            "poem": 1
          },
          {
            "text": "kamar tumaki a makiyaya mai ɗanyar ciyawa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Efraim ya haɗa kai da gumaka;",
            "poem": 1
          },
          {
            "text": "ku ƙyale shi kurum!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ko ma sa’ad da abin shansu ya ƙare,",
            "poem": 1
          },
          {
            "text": "sai suka ci gaba da karuwancinsu;",
            "poem": 2
          },
          {
            "text": "masu mulkinsu suna ƙaunar abin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Guguwa za tă share su,",
            "poem": 1
          },
          {
            "text": "hadayunsu kuma za su jawo musu abin kunya.",
            "poem": 2
          }
        ]
      }
    ],
