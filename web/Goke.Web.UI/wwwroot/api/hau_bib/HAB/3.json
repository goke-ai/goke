  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Addu’ar Habakkuk."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Addu’ar annabi Habakkuk. A kan shigiyont.",
            "descriptive": true
          },
          {
            "noteId": 581
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya Ubangiji, na ji irin shaharar da ka yi;",
            "poem": 1
          },
          {
            "text": "na yi al’ajabi game da ayyukanka, ya Ubangiji.",
            "poem": 2
          },
          {
            "text": "Ka maimaita su a kwanakinmu,",
            "poem": 1
          },
          {
            "text": "ka sanar da su a lokacinmu;",
            "poem": 2
          },
          {
            "text": "ka yi jinƙai ko a lokacin da kake fushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Allah ya zo daga Teman,",
            "poem": 1
          },
          {
            "text": "Mai Tsarkin nan daga Dutsen Faran. Sela",
            "poem": 2
          },
          {
            "noteId": 582
          },
          {
            "text": "Ɗaukakarsa ta rufe sammai",
            "poem": 1
          },
          {
            "text": "yabonsa kuma ya cika duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Darajarsa ta yi kamar fitowar rana;",
            "poem": 1
          },
          {
            "text": "ƙyalƙyali ya wulga daga hannunsa,",
            "poem": 2
          },
          {
            "text": "inda ikonsa yake a ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Annoba ta sha gabansa;",
            "poem": 1
          },
          {
            "text": "cuta kuma tana bin bayansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya tsaya, ya kuwa girgiza duniya;",
            "poem": 1
          },
          {
            "text": "ya duba, sai ya sa al’ummai suka yi rawan jiki.",
            "poem": 2
          },
          {
            "text": "Tsofaffin duwatsu sun wargaje",
            "poem": 1
          },
          {
            "text": "daɗaɗɗun tuddai kuma suka rurrushe.",
            "poem": 2
          },
          {
            "text": "Hanyoyinsa dawwammamu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na ga tentin Kushan cikin azaba;",
            "poem": 1
          },
          {
            "text": "wuraren zaman Midiyan cikin damuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka ji haushin koguna ne, ya Ubangiji?",
            "poem": 1
          },
          {
            "text": "Ko kuwa ka hasala da rafuffuka ne?",
            "poem": 2
          },
          {
            "text": "Ko ka yi fushi da teku ne",
            "poem": 1
          },
          {
            "text": "sa’ad da ka hau dawakanka",
            "poem": 2
          },
          {
            "text": "da kuma kekunan yaƙinka masu nasara?",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka ja bakanka,",
            "poem": 1
          },
          {
            "text": "ka nemi a ba ka kibiyoyi masu yawa. Sela",
            "poem": 2
          },
          {
            "text": "Ka raba duniya da koguna;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "duwatsu sun gan ka sai suka ƙame.",
            "poem": 2
          },
          {
            "text": "Ruwaye masu hauka sun yi ta fantsamawa;",
            "poem": 1
          },
          {
            "text": "zurfafa suka yi ruri",
            "poem": 2
          },
          {
            "text": "suka tā da raƙuman ruwansu sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Rana da wata suka tsaya cik a sammai",
            "poem": 1
          },
          {
            "text": "da ganin kibiyoyinka masu wucewa fyu,",
            "poem": 2
          },
          {
            "text": "da ganin hasken māshinka mai walƙiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Cikin hasala ka ratsa duniya",
            "poem": 1
          },
          {
            "text": "cikin fushi kuma ka tattake ƙasashe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka fito don ka fanshi mutanenka,",
            "poem": 1
          },
          {
            "text": "don ceci shafaffenka.",
            "poem": 2
          },
          {
            "text": "Ka ragargaza shugaban ƙasar mugaye,",
            "poem": 1
          },
          {
            "text": "ka tuɓe shi daga kai har ƙafa. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Da māshinsa ka soki kansa",
            "poem": 1
          },
          {
            "text": "sa’ad da jarumawansa suka fito don su tarwatse mu,",
            "poem": 2
          },
          {
            "text": "suna farin ciki sai ka ce masu shirin cinye",
            "poem": 1
          },
          {
            "text": "matalautan da suke a ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ka tattake teku da dawakanka,",
            "poem": 1
          },
          {
            "text": "kana kaɗa manyan ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Na ji sai zuciyata ta buga,",
            "poem": 1
          },
          {
            "text": "leɓunana sun yi rawa da jin murya;",
            "poem": 2
          },
          {
            "text": "ƙasusuwana suka ruɓe,",
            "poem": 1
          },
          {
            "text": "ƙafafuna kuma sun yi rawa.",
            "poem": 2
          },
          {
            "text": "Duk da haka zan jira da haƙuri ga ranar bala’i",
            "poem": 1
          },
          {
            "text": "ta zo a kan al’umman nan mai kawo mana hari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ko da yake itace ɓaure bai tohu ba,",
            "poem": 1
          },
          {
            "text": "ba kuma ’ya’ya a kuringar inabi,",
            "poem": 2
          },
          {
            "text": "ko da yake zaitun bai ba da amfani ba,",
            "poem": 1
          },
          {
            "text": "gonaki kuma ba su ba da abinci ba,",
            "poem": 2
          },
          {
            "text": "ko da yake babu tumaki a garke,",
            "poem": 1
          },
          {
            "text": "ba kuma shanu a turaku,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "duk da haka zan yi farin ciki da Ubangiji,",
            "poem": 1
          },
          {
            "text": "zan yi murna da Allah Mai Cetona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ubangiji Mai Iko Duka shi ne ƙarfina;",
            "poem": 1
          },
          {
            "text": "yakan mai da ƙafafuna kamar na barewa,",
            "poem": 2
          },
          {
            "text": "yakan sa in yi tafiya a wurare masu tsayi.",
            "poem": 2
          },
          {
            "text": "Domin mai bi da kaɗe-kaɗe. A kan kayan kiɗi masu tsirkiyata.",
            "descriptive": true
          }
        ]
      }
    ],
