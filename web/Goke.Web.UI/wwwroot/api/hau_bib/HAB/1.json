  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Saƙon da annabi Habakkuk ya karɓa."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "heading",
        "content": [
          "Habakkuk ya nuna damuwa"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Har yaushe, ya Ubangiji, zan yi kukan neman taimako,",
            "poem": 1
          },
          {
            "text": "amma ka ƙi ji?",
            "poem": 2
          },
          {
            "text": "Ina kuka a gare ka saboda zalunci",
            "poem": 1
          },
          {
            "text": "amma ba ka ce ufam ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Me ya sa ka bari ina ta kallon rashin gaskiya?",
            "poem": 1
          },
          {
            "text": "Me ya sa kake barin abin da ba daidai ba?",
            "poem": 2
          },
          {
            "text": "Hallaka da tashin hankali suna a gabana;",
            "poem": 1
          },
          {
            "text": "ga rashin jituwa da faɗa ko’ina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Saboda haka ba a bin doka,",
            "poem": 1
          },
          {
            "text": "shari’a kuma ba ta aiki.",
            "poem": 2
          },
          {
            "text": "Mugaye sun kewaye masu adalci",
            "poem": 1
          },
          {
            "text": "don a hana gaskiya tă yi aiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Amsar Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ka dubi al’ummai, ka gani,",
            "poem": 1
          },
          {
            "text": "ka sha mamaki.",
            "poem": 2
          },
          {
            "text": "Ga shi zan yi wani abu a kwanakinka,",
            "poem": 1
          },
          {
            "text": "wanda ko ma an faɗa maka",
            "poem": 2
          },
          {
            "text": "ba za ka gaskata ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zan tā da Babiloniyawa,",
            "poem": 1
          },
          {
            "noteId": 574
          },
          {
            "text": "waɗannan marasa hankali da kuma marasa tausayi; masu gajeren haƙuri,",
            "poem": 2
          },
          {
            "text": "waɗanda suke ratsa ko’ina a duniya",
            "poem": 1
          },
          {
            "text": "don su ƙwace wuraren zaman da ba nasu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Suna da bantsoro da firgitarwa;",
            "poem": 1
          },
          {
            "text": "dokoki da ƙa’idodinsu ne",
            "poem": 2
          },
          {
            "text": "kawai suka sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Dawakansu sun fi damisoshi sauri,",
            "poem": 1
          },
          {
            "text": "sun fi kyarketan yamma zafin rai.",
            "poem": 2
          },
          {
            "text": "Mahayansu suna zuwa a guje;",
            "poem": 1
          },
          {
            "text": "mahayansu daga nesa suka fito.",
            "poem": 2
          },
          {
            "text": "Suna firiya kamar ungulu mai sauka da gaggawa don yă ci mushe;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "duk sukan zo da nufin tā-da-na-zaune-tsaye.",
            "poem": 2
          },
          {
            "text": "Ana jin tsoronsu tun ma kafin su iso",
            "poem": 1
          },
          {
            "text": "suna tattara bayi kamar yashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sukan yi wa sarakuna ba’a",
            "poem": 1
          },
          {
            "text": "su kuma rena masu mulki.",
            "poem": 2
          },
          {
            "text": "Sukan yi wa dukan birane masu mafaka dariya;",
            "poem": 1
          },
          {
            "text": "sukan tara ƙasa su hau, su cinye abokan gābansu da yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sa’an nan su wuce da sauri kamar iska,",
            "poem": 1
          },
          {
            "text": "mutane ne masu laifi, waɗanda ƙarfinsu shi ne allahnsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Damuwa ta biyu ta Habakkuk"
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ya Ubangiji, ba tun fil azal kake ba?",
            "poem": 1
          },
          {
            "text": "Ya Allahna, Mai Tsarkina, ba za mu mutu ba.",
            "poem": 2
          },
          {
            "text": "Ya Ubangiji ka sanya su su tabbatar da hukunci;",
            "poem": 1
          },
          {
            "text": "Ya Dutse, ka naɗa su don su yi hukunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Idanunka masu tsarki ne da suka fi gaban duban mugunta;",
            "poem": 1
          },
          {
            "text": "ba ka amince da abin da ke ba daidai ba.",
            "poem": 2
          },
          {
            "text": "To, don me ka ƙyale munafukai suna cin karensu ba babbaka?",
            "poem": 1
          },
          {
            "text": "Me ya sa kake shiru sa’ad da mugaye",
            "poem": 2
          },
          {
            "text": "suke haɗiye adalai da suka fi su adalci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka mai da maza kamar kifin teku,",
            "poem": 1
          },
          {
            "text": "kamar halittun tekun da ba su da shugaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Mugu abokin gāba yakan kama su duka da ƙugiya,",
            "poem": 1
          },
          {
            "text": "yă jawo su waje da abin kamun kifinsa,",
            "poem": 2
          },
          {
            "text": "yă tattara su cikin ragarsa,",
            "poem": 1
          },
          {
            "text": "ta haka yakan yi murna da farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Saboda haka yakan yi hadaya wa abin kamun kifinsa",
            "poem": 1
          },
          {
            "text": "yă kuma ƙona turare wa ragarsa,",
            "poem": 2
          },
          {
            "text": "domin ta wurin abin kamun kifinsa ne yake yin rayuwar jin daɗi",
            "poem": 1
          },
          {
            "text": "yă kuma zaɓi irin abincin da yake so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zai ci gaba da juye abin kamun kifinsu ke nan,",
            "poem": 1
          },
          {
            "text": "suna hallaka al’ummai ba tausayi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
