  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ƙarshe ya zo"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Maganar Ubangiji ta zo gare ni cewa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "“Ɗan mutum, ga abin da Ubangiji Mai Iko Duka yake cewa wa ƙasar Isra’ila,",
          {
            "text": "“ ‘Ƙarshe ya zo! Ƙarshe ya zo",
            "poem": 1
          },
          {
            "text": "a kan kusurwoyi huɗu na ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ƙarshe yanzu yana a kanki.",
            "poem": 1
          },
          {
            "text": "Zan fashe fushina a kanki.",
            "poem": 2
          },
          {
            "text": "Zan shari’anta ki bisa ga halinki",
            "poem": 1
          },
          {
            "text": "in sāka miki kuma saboda dukan ayyukan banƙyamar da kika yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba zan dube ki da tausayi;",
            "poem": 1
          },
          {
            "text": "ko in ƙyale ki ba.",
            "poem": 2
          },
          {
            "text": "Tabbatacce zan sāka miki saboda halinki",
            "poem": 1
          },
          {
            "text": "da kuma ayyukanki masu banƙyama a cikinki.",
            "poem": 2
          },
          "Sa’an nan za ki san cewa ni ne Ubangiji.’"
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          "“Ga abin da Ubangiji Mai Iko Duka yana cewa,",
          {
            "text": "“ ‘Masifa! Masifar da ba a taɓa gani ba",
            "poem": 1
          },
          {
            "text": "tana zuwa.",
            "poem": 2
          },
          {
            "noteId": 327
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ƙarshe ya zo!",
            "poem": 1
          },
          {
            "text": "Ƙarshe ya zo!",
            "poem": 2
          },
          {
            "text": "Ya farka a kanki.",
            "poem": 1
          },
          {
            "text": "Ga shi, ya zo!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ƙaddara ta auko miki,",
            "poem": 1
          },
          {
            "text": "ya ke wadda ke zama cikin ƙasar.",
            "poem": 2
          },
          {
            "text": "Lokaci ya yi, rana ta gabato;",
            "poem": 1
          },
          {
            "text": "akwai fargaba, ba farin ciki ba, a kan duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ina gab da fasa hasalata a kanki",
            "poem": 1
          },
          {
            "text": "in kuma aukar da fushina a kanki;",
            "poem": 2
          },
          {
            "text": "zan shari’anta ke bisa ga halinki",
            "poem": 1
          },
          {
            "text": "in kuma sāka miki saboda dukan ayyukanki masu banƙyama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ba zan dube ki da tausayi",
            "poem": 1
          },
          {
            "text": "ko in ƙyale ke ba;",
            "poem": 2
          },
          {
            "text": "zan sāka miki bisa ga halinki",
            "poem": 1
          },
          {
            "text": "da kuma ayyukan masu banƙyama a cikinki.",
            "poem": 2
          },
          "Sa’an nan za ki san cewa ni ne Ubangiji wanda yake bugunki."
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“ ‘Ga shi ranar ta zo!",
            "poem": 1
          },
          {
            "text": "Ta iso!",
            "poem": 2
          },
          {
            "text": "Ƙaddararki ta keto,",
            "poem": 1
          },
          {
            "text": "sandar ta yi toho,",
            "poem": 2
          },
          {
            "text": "girman kai ya yi fure!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Rikici ya yi girma ya zama",
            "poem": 1
          },
          {
            "text": "sandar da za a hukunta mugunta;",
            "poem": 2
          },
          {
            "text": "babu wani daga cikin mutanen da za a bari,",
            "poem": 1
          },
          {
            "text": "babu wani dukiyarsu da za a bari,",
            "poem": 2
          },
          {
            "text": "babu wani abin amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Lokaci ya yi!",
            "poem": 1
          },
          {
            "text": "Ranar ta gabato!",
            "poem": 2
          },
          {
            "text": "Kada mai saya ya yi farin ciki",
            "poem": 1
          },
          {
            "text": "ko kuwa mai sayarwa ya yi baƙin ciki,",
            "poem": 2
          },
          {
            "text": "gama hasala tana a kan dukan jama’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mai sayarwa ba zai mayar da ƙasar da ya sayar tuntuni ba",
            "poem": 1
          },
          {
            "text": "muddin dukansu suna da rai, gama ba za a sauya wahayin da ya shafi dukan jama’a ba.",
            "poem": 2
          },
          {
            "text": "Saboda zunubansu, babu ɗayansu da zai adana ransa.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“ ‘Ko da yake suna busa ƙaho suna kuma shirya kome,",
            "poem": 1
          },
          {
            "text": "ba wanda zai tafi yaƙi, gama hasalata tana a kan dukan jama’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "A waje takobi ne,",
            "poem": 1
          },
          {
            "text": "a ciki annoba ne da yunwa;",
            "poem": 2
          },
          {
            "text": "waɗanda suke fili za su mutu ta wurin takobi,",
            "poem": 1
          },
          {
            "text": "waɗanda kuma suke cikin birni yunwa da annoba za su cinye su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Duk waɗanda suka tsira suka tsere za su kasance a cikin duwatsu,",
            "poem": 1
          },
          {
            "text": "suna kuka kamar kurciyoyin kwaruruka,",
            "poem": 2
          },
          {
            "text": "kowanne saboda zunubansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kowane hannu zai raunana,",
            "poem": 1
          },
          {
            "text": "kowace gwiwa kuma za tă zama marar ƙarfi kamar ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Za su sa tufafin makoki su kuma rufu da fargaba.",
            "poem": 1
          },
          {
            "text": "Fuskokinsu kuma za su rufu da kunya a kuma aske kawunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“ ‘Za su zubar da azurfarsu a tituna,",
            "poem": 1
          },
          {
            "text": "zinariyarsu kuma za tă zama ƙazantacciyar aba.",
            "poem": 2
          },
          {
            "text": "Azurfarsu da zinariyarsu ba za su iya cetonsu",
            "poem": 1
          },
          {
            "text": "a ranar hasalar Ubangiji ba.",
            "poem": 2
          },
          {
            "text": "Ba za su ƙosar da yunwansu ko su cika cikinsu da shi ba,",
            "poem": 1
          },
          {
            "text": "gama su ne sanadin tuntuɓensu cikin zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Sun yi fariya kyan kayan adonsu",
            "poem": 1
          },
          {
            "text": "suka kuma yi amfani da su don su yi gumakansu masu banƙyama,",
            "poem": 2
          },
          {
            "text": "da ƙazantattun abubuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Zan ba da su duka kamar ganima ga baƙi",
            "poem": 1
          },
          {
            "text": "da kuma kamar abin da aka washe ga mugayen duniya,",
            "poem": 2
          },
          {
            "text": "za su kuma ƙazantar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zan juye fuskata daga gare su,",
            "poem": 1
          },
          {
            "text": "za su kuwa ƙazantar da wurina mai daraja;",
            "poem": 2
          },
          {
            "text": "’yan fashi za su shiga",
            "poem": 1
          },
          {
            "text": "su kuma ƙazantar da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "“ ‘Ka shirya sarƙoƙi,",
            "poem": 1
          },
          {
            "text": "domin ƙasar ta cika da alhakin jini,",
            "poem": 2
          },
          {
            "text": "birnin kuma ya cika da rikici.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Zan kawo al’ummai mafi mugunta su mallaki gidajenku;",
            "poem": 1
          },
          {
            "text": "zan kawo ƙarshen fariyar masu ƙarfi,",
            "poem": 2
          },
          {
            "text": "Wurare Masu Tsarkinsu za su ƙazantu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’ad da wahala ta zo,",
            "poem": 1
          },
          {
            "text": "za su nemi salama, amma ba za su same ta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Masifa a kan masifa za su zo,",
            "poem": 1
          },
          {
            "text": "jita-jita kuma a kan jita-jita.",
            "poem": 2
          },
          {
            "text": "Za su yi ƙoƙarin samun wahayi daga annabi;",
            "poem": 1
          },
          {
            "text": "koyarwar doka ta wurin firist",
            "poem": 2
          },
          {
            "text": "za tă ɓace,",
            "poem": 1
          },
          {
            "text": "kamar yadda shawarar dattawa za tă ɓace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Sarki zai yi makoki, yerima zai fid da zuciya,",
            "poem": 1
          },
          {
            "text": "hannuwan mutanen ƙasar kuma za su yi rawa.",
            "poem": 2
          },
          {
            "text": "Zan sāka musu bisa ga ayyukansu, zan kuma hukunta su bisa ga ma’auninsu.",
            "poem": 1
          },
          "Sa’an nan za su san cewa ni ne Ubangiji.’ ”"
        ]
      }
