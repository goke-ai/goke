  "chapter": {
    "number": 19,
    "content": [
      {
        "type": "heading",
        "content": [
          "Makoki domin sarakunan Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "“Ka yi makoki game da sarakunan Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "ka ce,",
          {
            "text": "“ ‘Mahaifiyarki zakanya ce",
            "poem": 1
          },
          {
            "text": "cikin zakoki!",
            "poem": 2
          },
          {
            "text": "Takan kwanta cikin ’yan zakoki",
            "poem": 1
          },
          {
            "text": "ta kuma yi renon kwiyakwiyanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ta goyi ɗaya daga cikin kwiyakwiyanta,",
            "poem": 1
          },
          {
            "text": "ya yi girma ya zama zaki mai ƙarfi.",
            "poem": 2
          },
          {
            "text": "Ya koyi yayyage abin da ya yi farauta",
            "poem": 1
          },
          {
            "text": "yakan kuma cinye mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Al’ummai suka ji labarinsa,",
            "poem": 1
          },
          {
            "text": "aka kuma kama shi cikin raminsu.",
            "poem": 2
          },
          {
            "text": "Suka ja shi da ƙugiyoyi",
            "poem": 1
          },
          {
            "text": "zuwa ƙasar Masar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“ ‘Sa’ad da ta ga sa zuciyarta bai cika ba,",
            "poem": 1
          },
          {
            "text": "abin da take fata gani ya tafi,",
            "poem": 2
          },
          {
            "text": "sai ta ɗauki wani daga cikin kwiyakwiyanta",
            "poem": 1
          },
          {
            "text": "ta mai da shi zaki mai ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya yi ta yawo a cikin zakoki,",
            "poem": 1
          },
          {
            "text": "gama yanzu shi zaki ne mai ƙarfi.",
            "poem": 2
          },
          {
            "text": "Ya koyi yayyage abin da ya yi farauta",
            "poem": 1
          },
          {
            "text": "yakan kuma cinye mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya rurrushe kagaransu",
            "poem": 1
          },
          {
            "text": "ya kuma ragargaza biranensu.",
            "poem": 2
          },
          {
            "text": "Ƙasar da dukan waɗanda suke cikinta",
            "poem": 1
          },
          {
            "text": "sun tsorata da jin rurinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sai al’ummai suka tayar masa,",
            "poem": 1
          },
          {
            "text": "waɗannan daga yankunan da suke kewaye.",
            "poem": 2
          },
          {
            "text": "Suka yafa raga dominsa",
            "poem": 1
          },
          {
            "text": "ya kuwa fāɗa cikin raminsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Da ƙugiyoyi suka ja shi cikin keji",
            "poem": 1
          },
          {
            "text": "suka kawo shi wurin sarkin Babilon.",
            "poem": 2
          },
          {
            "text": "Suka sa shi cikin kurkuku,",
            "poem": 1
          },
          {
            "text": "saboda haka ba a ƙara jin rurinsa",
            "poem": 2
          },
          {
            "text": "a kan duwatsun Isra’ila ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“ ‘Mahaifiyarku kamar kuringa ce a cikin gonar inabi",
            "poem": 1
          },
          {
            "text": "da aka shuka kusa da ruwa;",
            "poem": 2
          },
          {
            "text": "ta ba da ’ya’ya da kuma cikakkun rassa",
            "poem": 1
          },
          {
            "text": "saboda yalwan ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Rassanta suka yi ƙarfi,",
            "poem": 1
          },
          {
            "text": "suka dace da sandar mai mulki.",
            "poem": 2
          },
          {
            "text": "Ta yi tsayi",
            "poem": 1
          },
          {
            "text": "zuwa sama",
            "poem": 2
          },
          {
            "text": "ana ganin ta saboda tsayinta",
            "poem": 1
          },
          {
            "text": "da kuma saboda yawan rassanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma aka tumɓuke ta cikin fushi",
            "poem": 1
          },
          {
            "text": "aka jefar da ita a ƙasa.",
            "poem": 2
          },
          {
            "text": "Iskar gabas ta sa ta yanƙwane,",
            "poem": 1
          },
          {
            "text": "aka kakkaɓe ’ya’yanta;",
            "poem": 2
          },
          {
            "text": "rassanta masu ƙarfi suka bushe",
            "poem": 1
          },
          {
            "text": "wuta kuma ta cinye su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Yanzu an shuka ta a hamada,",
            "poem": 1
          },
          {
            "text": "a busasshiyar ƙasa marar ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Wuta ta fito daga jikin rassanta",
            "poem": 1
          },
          {
            "text": "ta cinye ’ya’yanta.",
            "poem": 2
          },
          {
            "text": "Babu sauran reshe mai ƙarfin da ya rage a kanta",
            "poem": 1
          },
          {
            "text": "da ya dace da sandar mai mulki.’",
            "poem": 2
          },
          "Wannan waƙa ce kuma za a yi amfani da ita a matsayin makoki.”"
        ]
      }
    ],
