  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ni furen bi-rana ne na Sharon,",
            "poem": 1
          },
          {
            "text": "furen bi-rana na kwari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar furen bi-rana a cikin ƙayayyuwa",
            "poem": 1
          },
          {
            "text": "haka ƙaunatacciyata take a cikin ’yan mata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kamar itacen gawasa a cikin itatuwan jeji",
            "poem": 1
          },
          {
            "text": "haka ƙaunataccena yake a cikin samari.",
            "poem": 2
          },
          {
            "text": "Ina farin ciki in zauna a inuwarsa,",
            "poem": 1
          },
          {
            "text": "’ya’yan itacensa suna da daɗin ɗanɗanon da nake so",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya kai ni babban zauren da ake liyafa,",
            "poem": 1
          },
          {
            "text": "ƙauna ita ce tutarsa a gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka ƙarfafa ni da zabibi",
            "poem": 1
          },
          {
            "text": "ka wartsake ni da gawasa,",
            "poem": 2
          },
          {
            "text": "gama ina suma don ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Hannunsa na hagu yana a ƙarƙashin kaina,",
            "poem": 1
          },
          {
            "text": "hannunsa na dama kuma ya rungume ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "’Yan matan Urushalima, ku yi mini alkawari",
            "poem": 1
          },
          {
            "text": "da bareyi da ƙishimai na jeji.",
            "poem": 2
          },
          {
            "text": "Ba za ku tā da ko ku farka ƙauna ba",
            "poem": 1
          },
          {
            "text": "sai haka ya zama lalle.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Saurara! Ƙaunataccena!",
            "poem": 1
          },
          {
            "text": "Duba! Ga shi ya iso,",
            "poem": 2
          },
          {
            "text": "yana tsalle a duwatsu,",
            "poem": 1
          },
          {
            "text": "yana rawa a bisa tuddai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ƙaunataccena yana kama da barewa ko sagarin ƙishimi",
            "poem": 1
          },
          {
            "text": "Duba! Ga shi can tsaye a bayan katangarmu,",
            "poem": 2
          },
          {
            "text": "yana leƙe ta tagogi,",
            "poem": 1
          },
          {
            "text": "yana kallo ta cikin asabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ƙaunataccena ya yi magana ya ce mini,",
            "poem": 1
          },
          {
            "text": "“Tashi, ƙaunatacciyata,",
            "poem": 2
          },
          {
            "text": "kyakkyawata, ki zo tare da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Duba! Damina ta wuce;",
            "poem": 1
          },
          {
            "text": "ruwan sama ya ɗauke ya kuma ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Furanni sun hudo a duniya;",
            "poem": 1
          },
          {
            "text": "lokaci yin waƙa ya zo,",
            "poem": 2
          },
          {
            "text": "ana jin kukan kurciyoyi",
            "poem": 1
          },
          {
            "text": "ko’ina a ƙasarmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Itacen ɓaure ya fid da ’ya’yansa da sauri;",
            "poem": 1
          },
          {
            "text": "tohon inabi suna ba da ƙanshinsu.",
            "poem": 2
          },
          {
            "text": "Tashi, zo, ƙaunatacciyata;",
            "poem": 1
          },
          {
            "text": "kyakkyawata, zo tare da ni.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kurciyata a kogon dutse,",
            "poem": 1
          },
          {
            "text": "a wuraren ɓuya a gefen dutse,",
            "poem": 2
          },
          {
            "text": "nuna mini fuskarki,",
            "poem": 1
          },
          {
            "text": "bari in ji muryarki;",
            "poem": 2
          },
          {
            "text": "gama muryarki da daɗi take,",
            "poem": 1
          },
          {
            "text": "fuskarki kuma kyakkyawa ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kama mana ɓeraye,",
            "poem": 1
          },
          {
            "text": "ƙananan ɓerayen",
            "poem": 2
          },
          {
            "text": "da suke lalatar da gonakin inabi,",
            "poem": 1
          },
          {
            "text": "gonakin inabinmu da suke cikin yin fure.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ƙaunataccena nawa ne ni kuma tasa ce;",
            "poem": 1
          },
          {
            "text": "yana kiwon garkensa a cikin furannin bi-rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Sai gari ya waye",
            "poem": 1
          },
          {
            "text": "inuwa kuma ta watse,",
            "poem": 2
          },
          {
            "text": "ka juye, ƙaunataccena,",
            "poem": 1
          },
          {
            "text": "ka zama kamar barewa",
            "poem": 2
          },
          {
            "text": "ko kamar sagarin ƙishimi",
            "poem": 1
          },
          {
            "text": "a kan tuddai masu ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
