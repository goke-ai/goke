  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ƙafafunki a cikin takalma kyakkyawa ne,",
            "poem": 1
          },
          {
            "text": "Ya diyar sarki!",
            "poem": 2
          },
          {
            "text": "Tsarin ƙafafunki sun yi kamar kayan ado masu daraja,",
            "poem": 1
          },
          {
            "text": "aikin hannun gwanin sassaƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Cibinki kamar kwaf ne",
            "poem": 1
          },
          {
            "text": "da bai taɓa rasa gaurayayyen ruwan inabi ba.",
            "poem": 2
          },
          {
            "text": "Kwankwasonki ya yi kamar damin alkama",
            "poem": 1
          },
          {
            "text": "wanda furen bi-rana ya kewaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Nonanki sun yi kamar bareyi biyu,",
            "poem": 1
          },
          {
            "text": "tagwayen barewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wuyanki ya yi kamar hasumiyar hauren giwa.",
            "poem": 1
          },
          {
            "text": "Idanunki sun yi kamar tafkin Heshbon",
            "poem": 1
          },
          {
            "text": "kusa da ƙofar Bat Rabbim.",
            "poem": 2
          },
          {
            "text": "Hancinki ya yi kamar hasumiyar Lebanon",
            "poem": 1
          },
          {
            "text": "wadda take duban Damaskus.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kanki ya yi miki rawani kamar Dutsen Karmel.",
            "poem": 1
          },
          {
            "text": "Gashinki ya yi kamar shunayya;",
            "poem": 2
          },
          {
            "text": "yakan ɗauke hankalin sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kai! Ke kyakkyawa ce kuma kina sa ni jin daɗi,",
            "poem": 1
          },
          {
            "text": "Ya ƙaunatacciya, da farin cikin da kike kawo!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Tsayinki ya yi kamar itacen dabino,",
            "poem": 1
          },
          {
            "text": "kuma nonanki sun yi kamar ’ya’yan itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Na ce, “Zan hau itacen dabino;",
            "poem": 1
          },
          {
            "text": "zan kama ’ya’yansa.”",
            "poem": 2
          },
          {
            "text": "Bari nonanki su zama kamar nonna kuringa,",
            "poem": 1
          },
          {
            "text": "ƙanshin numfashinki ya yi kamar gawasa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "kuma bakinki ya yi kamar ruwan inabi mafi kyau.",
            "poem": 2
          },
          "Ƙaunatacciya",
          {
            "text": "Bari ruwan inabi yă wuce kai tsaye zuwa ga ƙaunataccena,",
            "poem": 1
          },
          {
            "text": "yana gudu a hankali a leɓuna da kuma haƙora.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ni ta ƙaunataccena ce,",
            "poem": 1
          },
          {
            "text": "kuma sha’awarsa domina ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka zo, ƙaunataccena, bari mu je bayan gari,",
            "poem": 1
          },
          {
            "text": "bari mu kwana a ƙauye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bari mu tafi gonar inabi da sassafe",
            "poem": 1
          },
          {
            "text": "don mu ga ko kuringar ta yi ’ya’ya,",
            "poem": 2
          },
          {
            "text": "ko furanninsu sun buɗe,",
            "poem": 1
          },
          {
            "text": "ko rumman sun yi fure,",
            "poem": 2
          },
          {
            "text": "a can zan nuna maka ƙaunata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Manta-uwa sun ba da ƙanshinsu,",
            "poem": 1
          },
          {
            "text": "a bakin ƙofa kuwa akwai kowane abinci mai daɗi,",
            "poem": 2
          },
          {
            "text": "sabo da tsoho,",
            "poem": 2
          },
          {
            "text": "da na ajiye dominka, ƙaunataccena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
