  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na zo lambuna, ’yar’uwata, amaryata;",
            "poem": 1
          },
          {
            "text": "na tattara mur nawa da kayan yajina.",
            "poem": 2
          },
          {
            "text": "Na sha zumana da kuma kakinsa",
            "poem": 1
          },
          {
            "text": "na sha ruwan inabina da kuma madarana.",
            "poem": 2
          },
          "Ƙawaye",
          {
            "text": "Ku ci, ku kuma sha, ya ku ƙawaye;",
            "poem": 1
          },
          {
            "text": "ku sha ku ƙoshi, ya ƙaunatattu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Na yi barci amma zuciyata tana a farke.",
            "poem": 1
          },
          {
            "text": "Ku saurara! Ƙaunataccena yana ƙwanƙwasa ƙofa.",
            "poem": 2
          },
          {
            "text": "“Buɗe mini, ’yar’uwata, ƙaunatacciyata,",
            "poem": 1
          },
          {
            "text": "kurciyata, marar laifina.",
            "poem": 2
          },
          {
            "text": "Kaina ya jiƙe da raɓa,",
            "poem": 1
          },
          {
            "text": "gashina ya yi danshin ɗiɗɗigar dare.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Na tuɓe rigata,",
            "poem": 1
          },
          {
            "text": "sai in sāke sa ta kuma?",
            "poem": 2
          },
          {
            "text": "Na wanke ƙafafuna,",
            "poem": 1
          },
          {
            "text": "sai in sāke ɓata su?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ƙaunataccena ya turo hannunsa ta cikin ramin ƙofar;",
            "poem": 1
          },
          {
            "text": "zuciyata ta fara juyayi a kansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na tashi don in buɗe wa ƙaunataccena,",
            "poem": 1
          },
          {
            "text": "sai hannuna ya jiƙe sharkaf da mur,",
            "poem": 2
          },
          {
            "text": "yatsotsina suna ɗiga da mur,",
            "poem": 1
          },
          {
            "text": "a hannuwan ƙofar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na buɗe wa ƙaunataccena ƙofa,",
            "poem": 1
          },
          {
            "text": "amma ƙaunataccena ba ya nan, ya riga ya tafi.",
            "poem": 2
          },
          {
            "text": "Zuciyata ta damu da tafiyarsa.",
            "poem": 1
          },
          {
            "text": "Na neme shi amma ban same shi ba.",
            "poem": 1
          },
          {
            "text": "Na yi ta kiransa amma bai amsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Masu gadi suka gamu da ni",
            "poem": 1
          },
          {
            "text": "yayinda suke kai kawo a cikin birni.",
            "poem": 2
          },
          {
            "text": "Suka yi mini dūka, suka yi mini rauni;",
            "poem": 1
          },
          {
            "text": "suka ƙwace gyalena",
            "poem": 2
          },
          {
            "text": "waɗannan masu gadin katanga!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "’Yan matan Urushalima, ina roƙonku,",
            "poem": 1
          },
          {
            "text": "in kun sami ƙaunataccena",
            "poem": 2
          },
          {
            "text": "me za ku ce masa?",
            "poem": 1
          },
          {
            "text": "Ku ce masa na suma saboda ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mafiya kyau a cikin mata",
            "poem": 1
          },
          {
            "text": "me ya sa ƙaunataccenki ya fi sauran?",
            "poem": 2
          },
          {
            "text": "Don me kike roƙonmu mu faɗa masa yadda kike ji?",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ƙaunataccena kyakkyawa ne ƙaƙƙarfa kuma,",
            "poem": 1
          },
          {
            "text": "da ƙyar a sami irinsa ɗaya a cikin dubu goma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kansa zinariya ce zalla;",
            "poem": 1
          },
          {
            "text": "gashinsa dogaye ne",
            "poem": 2
          },
          {
            "text": "baƙi wuluk kamar hankaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Idanunsa sun yi kamar na kurciyoyin",
            "poem": 1
          },
          {
            "text": "da suke kusa da ruwan rafi,",
            "poem": 2
          },
          {
            "text": "da aka wanke da madara",
            "poem": 1
          },
          {
            "text": "aka kuma kafa kamar kayan ado masu daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kumatunsa kamar lambun kayan yaji",
            "poem": 1
          },
          {
            "text": "suna ba da turare.",
            "poem": 2
          },
          {
            "text": "Leɓunansa sun yi kamar furen bi-rana",
            "poem": 1
          },
          {
            "text": "suna ɗiga da mur.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Hannuwansa kamar sandunan zinariyar",
            "poem": 1
          },
          {
            "text": "da aka sa musu duwatsu masu daraja.",
            "poem": 2
          },
          {
            "text": "Jikinsa ya yi kamar gogaggen hauren giwan",
            "poem": 1
          },
          {
            "text": "da aka yi masa ado da duwatsun saffaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ƙafafunsa sun yi kamar ginshiƙan dutsen alabastar",
            "poem": 1
          },
          {
            "text": "da aka kafa su a cikin rammukar zinariya.",
            "poem": 2
          },
          {
            "text": "Kamanninsa ya yi kamar Lebanon,",
            "poem": 1
          },
          {
            "text": "mafi kyau kamar itacen al’ul nasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Bakinsa zaƙi ne kansa;",
            "poem": 1
          },
          {
            "text": "komensa yana da kyau.",
            "poem": 2
          },
          {
            "text": "Haka ƙaunataccena, abokina, yake",
            "poem": 1
          },
          {
            "text": "’yan matan Urushalima.",
            "poem": 2
          }
        ]
      }
    ],
