  "chapter": {
    "number": 8,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Da a ce kai ɗan’uwa ne gare ni,",
            "poem": 1
          },
          {
            "text": "wanda nonon mahaifiyata sun shayar!",
            "poem": 2
          },
          {
            "text": "Da in na same ka a waje,",
            "poem": 1
          },
          {
            "text": "na sumbace ka,",
            "poem": 2
          },
          {
            "text": "babu wanda zai rena ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Da sai in bi da kai",
            "poem": 1
          },
          {
            "text": "in kawo ka gidan mahaifiyata,",
            "poem": 2
          },
          {
            "text": "ita da ta koyar da ni.",
            "poem": 2
          },
          {
            "text": "Da na ba ka ruwan inabi gaurayayye da kayan yaji ka sha,",
            "poem": 1
          },
          {
            "text": "zaƙin rumman nawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Hannunsa na hagu yana a ƙarƙashin kaina,",
            "poem": 1
          },
          {
            "text": "hannunsa na dama kuma ya rungume ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "’Yan matan Urushalima, ku yi mini alkawari.",
            "poem": 1
          },
          {
            "text": "Ba za ku tā da ko ku farka ƙauna ba",
            "poem": 2
          },
          {
            "text": "sai haka ya zama lalle.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wace ce wannan da take haurawa daga hamada",
            "poem": 1
          },
          {
            "text": "tana dogara a kan ƙaunataccenta?",
            "poem": 2
          },
          "Ƙaunatacciya",
          {
            "text": "A ƙarƙashin itacen gawasa na farkar da ke,",
            "poem": 1
          },
          {
            "text": "a wurin da aka haife ki,",
            "poem": 2
          },
          {
            "text": "wurin da mahaifiyarki ta haife ki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka sa ni kamar hatimi a zuciyarka,",
            "poem": 1
          },
          {
            "text": "kamar hatimi a hannunka;",
            "poem": 2
          },
          {
            "text": "gama ƙauna tana da ƙarfi kamar mutuwa,",
            "poem": 1
          },
          {
            "text": "kishinta yana kamar muguntar kabari,",
            "poem": 2
          },
          {
            "text": "yana ƙuna kamar wuta mai ci,",
            "poem": 1
          },
          {
            "text": "kamar gagarumar wuta.",
            "poem": 2
          },
          {
            "noteId": 1297
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ruwa da yawa ba zai iya kashe ƙauna ba,",
            "poem": 1
          },
          {
            "text": "koguna ba za su iya kwashe ta ba.",
            "poem": 2
          },
          {
            "text": "In wani zai bayar da",
            "poem": 1
          },
          {
            "text": "dukan dukiyar gidansa don ƙauna,",
            "poem": 2
          },
          {
            "text": "za a yi masa dariya ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Muna da ƙanuwa,",
            "poem": 1
          },
          {
            "text": "nonanta ba su riga sun yi girma ba.",
            "poem": 2
          },
          {
            "text": "Me za mu yi da ƙanuwarmu",
            "poem": 1
          },
          {
            "text": "a ranar da za a yi maganar sonta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Da a ce ita katanga ce,",
            "poem": 1
          },
          {
            "text": "da sai mu gina hasumiyar azurfa a kanta.",
            "poem": 2
          },
          {
            "text": "Da a ce ita ƙofa ce,",
            "poem": 1
          },
          {
            "text": "da sai mun yi mata ƙyauren itacen al’ul.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ni katanga ce",
            "poem": 1
          },
          {
            "text": "kuma nonaina sun yi kamar hasumiya.",
            "poem": 2
          },
          {
            "text": "Ta haka na zama idanunsa",
            "poem": 1
          },
          {
            "text": "kamar wanda yake kawo gamsuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Solomon ya kasance da gonar inabi a Ba’al-Hamon;",
            "poem": 1
          },
          {
            "text": "ya ba da hayar gonar inabi ga ’yan haya.",
            "poem": 2
          },
          {
            "text": "Kowanne zai biya shekel dubu na azurfa",
            "poem": 1
          },
          {
            "text": "don ’ya’yan inabin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma gonar inabina nawa ne da zan bayar;",
            "poem": 1
          },
          {
            "text": "shekel dubu naka ne, ya Solomon,",
            "poem": 2
          },
          {
            "text": "kuma ɗari biyu na waɗanda suke lura da ’ya’yan itatuwansa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ke da kike zaune a cikin lambu",
            "poem": 1
          },
          {
            "text": "da ƙawaye suna lura da ke,",
            "poem": 2
          },
          {
            "text": "bari in ji muryarki!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka zo, ƙaunataccena,",
            "poem": 1
          },
          {
            "text": "ka zama kamar barewa",
            "poem": 2
          },
          {
            "text": "ko kuwa kamar ’yar batsiya",
            "poem": 1
          },
          {
            "text": "a kan dutsen da kayan yaji suke a shimfiɗe.",
            "poem": 2
          }
        ]
      }
    ],
