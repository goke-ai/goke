  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ina ƙaunataccenki ya tafi,",
            "poem": 1
          },
          {
            "text": "yake mafiya kyau cikin mata?",
            "poem": 2
          },
          {
            "text": "Wace hanya ce ƙaunataccenki ya bi,",
            "poem": 1
          },
          {
            "text": "don mu taimake ki nemansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ƙaunataccena ya gangara zuwa lambunsa,",
            "poem": 1
          },
          {
            "text": "zuwa inda fangulan kayan yaji suke,",
            "poem": 2
          },
          {
            "text": "don yă yi kiwo a cikin lambun",
            "poem": 1
          },
          {
            "text": "don kuma yă tattara furen bi-rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ni na ƙaunataccena ce, ƙaunataccena kuma nawa ne;",
            "poem": 1
          },
          {
            "text": "yana kiwo a cikin furen bi-rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ke kyakkyawa ce, ƙaunatacciyata, kamar Tirza,",
            "poem": 1
          },
          {
            "text": "kyakkyawa kuma kamar Urushalima,",
            "poem": 2
          },
          {
            "text": "mai daraja kamar mayaƙa da tutoti.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ki kau da idanu daga gare ni;",
            "poem": 1
          },
          {
            "text": "gama suna rinjayata.",
            "poem": 2
          },
          {
            "text": "Gashinki yana kama da garken awakin",
            "poem": 1
          },
          {
            "text": "da suke gangarawa daga Gileyad.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Haƙoranki suna kama da garken tumakin",
            "poem": 1
          },
          {
            "text": "da suke haurawa daga inda aka yi musu wanka.",
            "poem": 2
          },
          {
            "text": "Kowanne yana tare da ɗan’uwansa;",
            "poem": 1
          },
          {
            "text": "babu waninsu da yake shi kaɗai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kumatunki sun yi kamar rumman",
            "poem": 1
          },
          {
            "text": "da aka tsaga biyu a cikin lulluɓinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sarauniyoyi sittin za su iya kasance a can,",
            "poem": 1
          },
          {
            "text": "da ƙwarƙwarai tamanin",
            "poem": 2
          },
          {
            "text": "da kuma budurwai da suka wuce ƙirge;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "amma kurciyata, cikakkiyata, dabam take,",
            "poem": 1
          },
          {
            "text": "tilo kuwa ga mahaifiyarta,",
            "poem": 2
          },
          {
            "text": "’yar lele ga wadda ta haife ta.",
            "poem": 2
          },
          {
            "text": "’Yan mata sun gan ta suka ce da ita mai albarka;",
            "poem": 1
          },
          {
            "text": "sarauniyoyi da ƙwarƙwarai sun yabe ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Wace ce wannan da ta bayyana sai ka ce ketowar alfijir?",
            "poem": 1
          },
          {
            "text": "Kyakkyawa kamar wata, mai haske kamar rana,",
            "poem": 2
          },
          {
            "text": "mai daraja kamar taurari a jere?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Na gangara zuwa cikin itatuwan almon",
            "poem": 1
          },
          {
            "text": "don in ga ƙananan itatuwan da suke girma a kwari,",
            "poem": 2
          },
          {
            "text": "don in ga ko inabi sun yi ’ya’ya",
            "poem": 1
          },
          {
            "text": "ko rumman suna fid da furanni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kafin in san wani abu,",
            "poem": 1
          },
          {
            "text": "sha’awarta ta sa ni a cikin keken yaƙin sarkin mutanena.",
            "poem": 2
          },
          {
            "noteId": 1296
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ki dawo, ki dawo, ya Bashulammiya;",
            "poem": 1
          },
          {
            "text": "ki dawo, ki dawo, don mu dube ki!",
            "poem": 2
          },
          "Ƙaunatacce",
          {
            "text": "Don me kuke duban Bashulammiya",
            "poem": 1
          },
          {
            "text": "sai ka ce rawar Mahanayim?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
    "footnotes": [
      {
