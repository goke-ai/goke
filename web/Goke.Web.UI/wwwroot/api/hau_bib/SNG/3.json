  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Dare farai a kan gadona",
            "poem": 1
          },
          {
            "text": "na nemi wanda zuciyata take ƙauna;",
            "poem": 2
          },
          {
            "text": "na neme shi amma ban same shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan tashi yanzu in zagaya gari,",
            "poem": 1
          },
          {
            "text": "in ratsa titunansa da dandalinsa;",
            "poem": 2
          },
          {
            "text": "zan nemi wanda zuciyata take ƙauna.",
            "poem": 1
          },
          {
            "text": "Saboda haka na neme shi, amma ban same shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Masu tsaro suka gamu da ni",
            "poem": 1
          },
          {
            "text": "yayinda suke kai kawo a cikin birni, sai na ce,",
            "poem": 2
          },
          {
            "text": "“Kun ga mini wanda zuciyata take ƙauna?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Rabuwata da su ke nan",
            "poem": 1
          },
          {
            "text": "sai na sami wanda zuciyata take ƙauna.",
            "poem": 2
          },
          {
            "text": "Na riƙe shi, ban yarda yă tafi ba",
            "poem": 1
          },
          {
            "text": "sai da na kawo shi gidan mahaifiyata,",
            "poem": 2
          },
          {
            "text": "zuwa ɗakin wadda ta yi cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "’Yan matan Urushalima, ku yi mini alkawari",
            "poem": 1
          },
          {
            "text": "da bareyi da ƙishimai na jeji.",
            "poem": 2
          },
          {
            "text": "Ba za ku tā da ko ku farka ƙauna ba",
            "poem": 1
          },
          {
            "text": "sai haka ya zama lalle.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Wane ne wannan mai zuwa daga hamada",
            "poem": 1
          },
          {
            "text": "kamar tunnuƙewar hayaƙi,",
            "poem": 2
          },
          {
            "text": "cike da ƙanshin turaren mur da lubban",
            "poem": 1
          },
          {
            "text": "da aka yi da kayan yajin ’yan kasuwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duba! Abin ɗaukar Solomon ne,",
            "poem": 1
          },
          {
            "text": "jarumawa sittin suke rakiya,",
            "poem": 2
          },
          {
            "text": "zaɓaɓɓun sojojin Isra’ila,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "dukansu suna saye da takobi",
            "poem": 1
          },
          {
            "text": "dukansu ƙwararru ne a yaƙi,",
            "poem": 2
          },
          {
            "text": "kowanne da takobinsa a rataye a gefensa,",
            "poem": 1
          },
          {
            "text": "a shirye don abubuwan bantsoro na dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sarki Solomon ya yi wa kansa abin ɗauka;",
            "poem": 1
          },
          {
            "text": "ya yi shi da katako daga Lebanon.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "An yi sandunansa da azurfa,",
            "poem": 1
          },
          {
            "text": "aka yi ƙasarsa da zinariya.",
            "poem": 2
          },
          {
            "text": "An lulluɓe wurin zaman da zanen shunayya,",
            "poem": 1
          },
          {
            "text": "’yan matan Urushalima sun yi mata irin yayen da ake yi na ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Fito, ku ’yan matan Sihiyona,",
            "poem": 1
          },
          {
            "text": "ku ga Sarki Solomon yana saye da rawani,",
            "poem": 2
          },
          {
            "text": "rawanin da mahaifiyarsa ta naɗa masa,",
            "poem": 2
          },
          {
            "text": "a ranar aurensa,",
            "poem": 1
          },
          {
            "text": "a ranar da zuciyarsa ta yi farin ciki.",
            "poem": 2
          }
        ]
      }
    ],
