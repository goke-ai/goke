  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ke kyakkyawa ce, ƙaunatacciyata!",
            "poem": 1
          },
          {
            "text": "Kai, ke kyakkyawa ce!",
            "poem": 2
          },
          {
            "text": "Idanunki sun yi kamar na kurciya a cikin lulluɓinki.",
            "poem": 2
          },
          {
            "text": "Gashinki ya yi kamar garken awaki",
            "poem": 1
          },
          {
            "text": "da suke gangarawa daga Dutsen Gileyad.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Haƙoranki sun yi kamar garken tumakin da ba a daɗe da yin musu sausaya ba,",
            "poem": 1
          },
          {
            "text": "da suke haurawa daga inda aka yi musu wanka.",
            "poem": 2
          },
          {
            "text": "Kowanne yana tare da ɗan’uwansa;",
            "poem": 1
          },
          {
            "text": "babu waninsu da yake shi kaɗai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Leɓunanki kamar zaren jan garura",
            "poem": 1
          },
          {
            "text": "bakinki yana da kyau.",
            "poem": 2
          },
          {
            "text": "Kumatunki sun yi kamar rumman",
            "poem": 1
          },
          {
            "text": "da aka tsaga biyu a cikin lulluɓinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wuyanki ya yi kamar hasumiyar Dawuda,",
            "poem": 1
          },
          {
            "text": "da aka gina da daraja;",
            "poem": 2
          },
          {
            "text": "a kansa an rataye garkuwoyi dubu,",
            "poem": 1
          },
          {
            "text": "dukansu garkuwoyin jarumawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Nonanki biyu sun yi kamar bareyi biyu,",
            "poem": 1
          },
          {
            "text": "kamar tagwayen barewa",
            "poem": 2
          },
          {
            "text": "da suke kiwo a cikin furen bi-rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sai gari ya waye",
            "poem": 1
          },
          {
            "text": "inuwa kuma ta watse,",
            "poem": 2
          },
          {
            "text": "zan je dutsen mur",
            "poem": 1
          },
          {
            "text": "da kuma tudun turare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk, ke kyakkyawa ce, ƙaunatacciyata;",
            "poem": 1
          },
          {
            "text": "babu wani lahani a cikinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ki tare da ni daga Lebanon, amaryata,",
            "poem": 1
          },
          {
            "text": "zo tare da ni daga Lebanon.",
            "poem": 2
          },
          {
            "text": "Ki gangara daga ƙwanƙolin Amana,",
            "poem": 1
          },
          {
            "text": "daga ƙwanƙolin Senir, ƙwanƙolin Hermon,",
            "poem": 2
          },
          {
            "text": "daga ramin zaki",
            "poem": 1
          },
          {
            "text": "da kuma dutsen da damisoshi suke zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kin saci zuciyata, ’yar’uwata, amaryata;",
            "poem": 1
          },
          {
            "text": "kin saci zuciyata",
            "poem": 2
          },
          {
            "text": "da hararar idanunki,",
            "poem": 1
          },
          {
            "text": "da dutse mai daraja guda na abin wuyanki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ƙaunarki abar farin ciki ne, ’yar’uwata, amaryata!",
            "poem": 1
          },
          {
            "text": "Ƙaunarki ta fi ruwan inabi gamsuwa,",
            "poem": 2
          },
          {
            "text": "ƙanshin turarenki kuma ya fi duk wani kayan yaji!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Leɓunanki suna zub da zaƙi kamar kakin zuma, amaryata;",
            "poem": 1
          },
          {
            "text": "madara da zuma suna a ƙarƙashin harshenki.",
            "poem": 2
          },
          {
            "text": "Ƙanshin rigunanki ya yi kamar na Lebanon.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ke lambu ne da aka kulle, ’yar’uwata, amaryata;",
            "poem": 1
          },
          {
            "text": "ke maɓulɓula ce da aka kewaye, maɓulɓular da aka rufe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Shuke-shukenki gonar rumman ne",
            "poem": 1
          },
          {
            "text": "da ’ya’yan itace masu kyau",
            "poem": 2
          },
          {
            "text": "na lalle da nardi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "nardi, da asfaran,",
            "poem": 2
          },
          {
            "text": "kalamus, da kirfa,",
            "poem": 2
          },
          {
            "text": "da kowane irin itacen turare,",
            "poem": 2
          },
          {
            "text": "da mur da aloyes",
            "poem": 2
          },
          {
            "text": "da kuma dukan kayan yaji masu kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ke lambun maɓulɓula ne,",
            "poem": 1
          },
          {
            "text": "rijiya mai ruwan da yake gudu",
            "poem": 2
          },
          {
            "text": "yana gangarawa daga Lebanon.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Farka, iskar arewa,",
            "poem": 1
          },
          {
            "text": "ki kuma zo, iskar kudu!",
            "poem": 2
          },
          {
            "text": "Hura a kan lambuna,",
            "poem": 1
          },
          {
            "text": "don ƙanshinsa yă bazu har waje.",
            "poem": 2
          },
          {
            "text": "Bari ƙaunataccena yă zo cikin lambunsa",
            "poem": 1
          },
          {
            "text": "yă ɗanɗana ’ya’yan itacensa mafi kyau.",
            "poem": 2
          }
        ]
      }
    ],
