  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Waƙar Waƙoƙin Solomon."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari yă sumbace ni da sumbar bakinsa,",
            "poem": 1
          },
          {
            "text": "gama ƙaunarka ta fi ruwan inabi zaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ƙanshin turarenka mai daɗi ne;",
            "poem": 1
          },
          {
            "text": "sunanka kuwa kamar turaren da aka tsiyaye ne.",
            "poem": 2
          },
          {
            "text": "Shi ya sa mata suke ƙaunarka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka ɗauke ni mu gudu, mu yi sauri!",
            "poem": 1
          },
          {
            "text": "Bari sarki yă kai ni gidansa.",
            "poem": 2
          },
          "Ƙawaye",
          {
            "text": "Muna farin ciki muna kuma murna tare da kai,",
            "poem": 1
          },
          {
            "text": "za mu yabi ƙaunarka fiye da ruwan inabi.",
            "poem": 2
          },
          "Ƙaunatacciya",
          {
            "text": "Daidai ne su girmama ka!",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ni baƙa ce, duk da haka kyakkyawa.",
            "poem": 1
          },
          {
            "text": "Ya ku ’yan matan Urushalima,",
            "poem": 2
          },
          {
            "text": "ni baƙa ce kamar tentunan Kedar,",
            "poem": 2
          },
          {
            "text": "kamar labulen tentin Solomon.",
            "poem": 2
          },
          {
            "noteId": 1295
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kada ku harare ni domin ni baƙa ce,",
            "poem": 1
          },
          {
            "text": "gama rana ta dafa ni na yi baƙa.",
            "poem": 2
          },
          {
            "text": "’Ya’yan mahaifiyata maza sun yi fushi da ni",
            "poem": 1
          },
          {
            "text": "suka sa ni aiki a gonakin inabi;",
            "poem": 2
          },
          {
            "text": "na ƙyale gonar inabi na kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Faɗa mini, kai da nake ƙauna, ina kake kiwon garkenka",
            "poem": 1
          },
          {
            "text": "kuma ina kake kai tumakinka su huta da tsakar rana.",
            "poem": 2
          },
          {
            "text": "Me ya sa zan kasance kamar macen da aka lulluɓe",
            "poem": 1
          },
          {
            "text": "kusa da garkunan abokanka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ke mafiya kyau a cikin mata, in ba ki sani ba,",
            "poem": 1
          },
          {
            "text": "to, ki dai bi labin da tumaki suke bi",
            "poem": 2
          },
          {
            "text": "ki yi kiwon ’yan awakinki",
            "poem": 1
          },
          {
            "text": "kusa da tentunan makiyaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ina kwatanta ke ƙaunatacciyata, da goɗiya",
            "poem": 1
          },
          {
            "text": "mai jan keken yaƙin kayan Fir’auna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "’Yan kunne sun ƙara wa kumatunki kyau,",
            "poem": 1
          },
          {
            "text": "wuyanki yana da jerin kayan wuya masu daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Za mu yi ’yan kunnenki na zinariya,",
            "poem": 1
          },
          {
            "text": "da adon azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yayinda sarki yake a teburinsa,",
            "poem": 1
          },
          {
            "text": "turarena ya bazu da ƙanshi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ƙaunataccena yana kamar ƙanshin mur a gare ni,",
            "poem": 1
          },
          {
            "text": "kwance a tsakanin ƙirjina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ƙaunataccena kamar tarin furanni jeji ne gare ni",
            "poem": 1
          },
          {
            "text": "daga gonakin inabin En Gedi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ke kyakkyawa ce, ƙaunatacciyata!",
            "poem": 1
          },
          {
            "text": "Kai, ke kyakkyawa ce!",
            "poem": 2
          },
          {
            "text": "Idanunki kamar na kurciya ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kai kyakkyawa ne, ƙaunataccena!",
            "poem": 1
          },
          {
            "text": "Kai, kana ɗaukan hankali!",
            "poem": 2
          },
          {
            "text": "Gadonmu koriyar ciyawa ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Al’ul su ne ginshiƙan gidanmu;",
            "poem": 1
          },
          {
            "text": "fir su ne katakan rufin gidanmu.",
            "poem": 2
          }
        ]
      }
    ],
