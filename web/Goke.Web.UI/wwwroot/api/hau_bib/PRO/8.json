  "chapter": {
    "number": 8,
    "content": [
      {
        "type": "heading",
        "content": [
          "Kiran hikima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Hikima ba ta yin kira ne?",
            "poem": 1
          },
          {
            "text": "Fahimi ba ya tā da muryarsa ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "A ƙwanƙoli a kan hanya,",
            "poem": 1
          },
          {
            "text": "inda hanyoyi suka haɗu, ta ɗauki matsayinta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "kusa da ƙofofin shiga cikin birni,",
            "poem": 1
          },
          {
            "text": "a mashigai, ta tā da murya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Gare ku, ya mutane, nake kira;",
            "poem": 1
          },
          {
            "text": "na tā da muryata ga dukan ’yan adam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku da kuke marasa azanci, ku yi hankali;",
            "poem": 1
          },
          {
            "text": "ku da kuke wawaye, ku nemi fahimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ku saurara, gama ina da abubuwa masu darajan da zan faɗa;",
            "poem": 1
          },
          {
            "text": "na buɗe leɓunana don in faɗa abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bakina yana magana abin da yake gaskiya,",
            "poem": 1
          },
          {
            "text": "gama leɓunana sun ƙi mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Dukan kalmomin bakina suna da adalci;",
            "poem": 1
          },
          {
            "text": "babu waninsu da ya karkace ko kuwa ƙarya ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ga mai tunani dukansu daidai ne;",
            "poem": 1
          },
          {
            "text": "ba su da laifi ga waɗanda suke da sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku zaɓi umarnina a maimakon azurfa,",
            "poem": 1
          },
          {
            "text": "sani a maimakon zinariya zalla,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "gama hikima ta fi lu’ulu’ai daraja,",
            "poem": 1
          },
          {
            "text": "kuma ba abin da kake sha’awa da za a kwatanta da ita.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ni, hikima, ina zama tare da hankali;",
            "poem": 1
          },
          {
            "text": "ina da sani da iya rarrabewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Jin tsoron Ubangiji shi ne ƙin mugunta;",
            "poem": 1
          },
          {
            "text": "ina ƙin girman kai da fariya,",
            "poem": 2
          },
          {
            "text": "halin mugunta da kuma muguwar magana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Shawara da yin tunani mai kyau nawa ne;",
            "poem": 1
          },
          {
            "text": "ina da fahimi da kuma iko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ta wurina sarakuna suke mulki",
            "poem": 1
          },
          {
            "text": "masu mulki kuma suke yin dokokin da suke da adalci;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "ta wurina sarakuna suke mulki,",
            "poem": 1
          },
          {
            "text": "da kuma dukan manyan mutanen da suke mulkin duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ina ƙaunar waɗanda suke ƙaunata,",
            "poem": 1
          },
          {
            "text": "kuma waɗanda suke nemana sukan same ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Tare da ni akwai wadata da girmamawa,",
            "poem": 1
          },
          {
            "text": "dukiya da wadata masu dawwama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "’Ya’yan itacena sun fi zinariya zalla;",
            "poem": 1
          },
          {
            "text": "amfanin gonar da nake bayar ya fi azurfa mafi kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ina tafiya a hanyar adalci,",
            "poem": 1
          },
          {
            "text": "a kan hanyoyin gaskiya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "ina ba da wadata ga waɗanda suke ƙaunata",
            "poem": 1
          },
          {
            "text": "ina sa wuraren ajiyarsu su cika.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Ubangiji ya kawo ni a matsayi na farko na ayyukansa,",
            "poem": 1
          },
          {
            "text": "kafin ayyukansa na tuntuni;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "an naɗa ni tun fil azal,",
            "poem": 1
          },
          {
            "text": "daga farko, kafin duniya ta kasance.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sa’ad da babu tekuna, aka haife ni,",
            "poem": 1
          },
          {
            "text": "sa’ad da babu maɓulɓulai masu ruwa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "kafin a kafa duwatsu a wurarensu,",
            "poem": 1
          },
          {
            "text": "kafin tuddai ma, an haife ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "kafin ya yi duniya ko gonaki",
            "poem": 1
          },
          {
            "text": "ko wata ƙurar duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ina nan sa’ad da ya kafa sammai a wurarensu,",
            "poem": 1
          },
          {
            "text": "sa’ad da ya shata sararin sama a kan fuskar zurfafa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "sa’ad da ya kafa gizagizai a bisa",
            "poem": 1
          },
          {
            "text": "ya kuma kafa maɓulɓulan zurfafa daram,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "sa’ad da ya ba wa teku iyakarsa",
            "poem": 1
          },
          {
            "text": "domin kada ruwaye su zarce umarninsa,",
            "poem": 2
          },
          {
            "text": "da kuma sa’ad da ya shata tussan duniya.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "A lokacin ni ne mai tsara abubuwa a gefensa.",
            "poem": 2
          },
          {
            "text": "Na cika da murna kowace rana,",
            "poem": 1
          },
          {
            "text": "kullum ina farin ciki a gabansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "ina farin ciki da dukan duniyarsa",
            "poem": 1
          },
          {
            "text": "ina murna da ’yan adam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "“Yanzu fa, ’ya’yana, ku saurare ni;",
            "poem": 1
          },
          {
            "text": "masu albarka ne waɗanda suke kiyaye hanyoyina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ku saurari umarnina ku kuma zama masu hikima;",
            "poem": 1
          },
          {
            "text": "kada ku ƙyale ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Mai albarka ne wanda ya saurare ni;",
            "poem": 1
          },
          {
            "text": "yana tsaro kullum a ƙofofina,",
            "poem": 2
          },
          {
            "text": "yana jira a ƙofar shigata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Gama duk wanda ya same ni ya sami rai",
            "poem": 1
          },
          {
            "text": "zai kuma sami tagomashi daga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Amma duk wanda ya kāsa samuna ya cuci kansa;",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suke ƙina suna ƙaunar mutuwa ke nan.”",
            "poem": 2
          }
        ]
      }
    ],
