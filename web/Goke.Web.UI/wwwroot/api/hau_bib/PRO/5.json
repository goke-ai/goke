  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "heading",
        "content": [
          "Gargaɗi a kan zina"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗana, ka mai da hankali ga hikimata",
            "poem": 1
          },
          {
            "text": "ka saurara da kyau ga kalmomin basirata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "don ka ci gaba da yin kome daidai",
            "poem": 1
          },
          {
            "text": "leɓunanka za su adana sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama leɓunan mazinaciya na ɗigan zuma,",
            "poem": 1
          },
          {
            "text": "maganarta tana da sulɓi fiye da mai;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "amma a ƙarshe tana da ɗaci kamar tafashiya,",
            "poem": 1
          },
          {
            "text": "mai ci kamar takobi mai kaifi biyu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ƙafafunta na kaiwa ga mutuwa;",
            "poem": 1
          },
          {
            "text": "sawunta na jagora kai tsaye zuwa kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ba ta wani tunanin rayuwa;",
            "poem": 1
          },
          {
            "text": "hanyoyinta karkatacce ne, amma ba tă sani ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yanzu fa, ’ya’yana, ku saurare ni;",
            "poem": 1
          },
          {
            "text": "kada ku juye daga abin da nake faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku yi nesa da hanyarta,",
            "poem": 1
          },
          {
            "text": "kana ku je kusa da ƙofar gidanta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "don kada ku ba da ƙarfi mafi kyau ga waɗansu",
            "poem": 1
          },
          {
            "text": "da kuma shekarunku ga wani marar imani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "don kada baƙi su yi biki a kan dukiyarku",
            "poem": 1
          },
          {
            "text": "wahalarku ta azurta gidan wani mutum dabam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "A ƙarshen rayuwarku za ku yi ta nishi,",
            "poem": 1
          },
          {
            "text": "sa’ad da namanku da jikinku suka zagwanye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Za ku ce, “Me ya sa na ƙi horo!",
            "poem": 1
          },
          {
            "text": "Me ya sa zuciyata ta ƙi gyara!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ban yi biyayya da malamaina ba",
            "poem": 1
          },
          {
            "text": "ko in saurari masu koyar da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Na zo gab da hallaka gaba ɗaya",
            "poem": 1
          },
          {
            "text": "a tsakiyar dukan taron.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ku sha ruwa daga tankinku,",
            "poem": 1
          },
          {
            "text": "ruwa mai gudu daga rijiyarku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "In maɓulɓulanku suka cika suna malala har waje,",
            "poem": 1
          },
          {
            "text": "rafuffukan ruwanku a dandalin jama’a?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Bari su zama naka kaɗai,",
            "poem": 1
          },
          {
            "text": "don kada ka raba da baƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Bari maɓulɓulanka ya zama mai albarka,",
            "poem": 1
          },
          {
            "text": "bari kuma ka yi farin ciki da matar ƙuruciyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ƙaunatacciyar mariri, barewa mai kyan gani,",
            "poem": 1
          },
          {
            "text": "bari mamanta su ishe ka kullum,",
            "poem": 2
          },
          {
            "text": "bari ƙaunarta ta ɗauke hankalinka kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ɗana, me ya sa za ka bari mazinaciya ta ɗauke maka hankali?",
            "poem": 1
          },
          {
            "text": "Don me za ka rungume matar wani?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Gama hanyar mutum a bayyane take a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "yana kuma lura da dukan hanyoyinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ayyukan mugunta na mugun mutum tarko ne gare shi;",
            "poem": 1
          },
          {
            "text": "igiyoyin zunubinsa za su daure shi kankan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Zai mutu saboda rashin ɗa’a",
            "poem": 1
          },
          {
            "text": "yawan wawancinsa zai sa yă kauce.",
            "poem": 2
          }
        ]
      }
    ],
