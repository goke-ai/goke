  "chapter": {
    "number": 17,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Gara ka ci busasshen burodi da kwanciyar rai kuma shiru",
            "poem": 1
          },
          {
            "text": "da ka je cin abinci a gidan da ke cike da biki amma da ɓacin rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bawa mai hikima zai yi mulki a kan da mai rashin kunya,",
            "poem": 1
          },
          {
            "text": "kuma zai raba gādo kamar ɗaya daga cikin ’yan’uwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ana gwajin azurfa da kuma zinariya da wuta,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji ne mai gwajin zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mugun mutum kan mai da hankali ga mugayen leɓuna;",
            "poem": 1
          },
          {
            "text": "maƙaryaci yakan kasa kunne ga harshen ƙarairayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duk wanda yake wa matalauta ba’a yana zagin Mahaliccinsu ne;",
            "poem": 1
          },
          {
            "text": "duk wanda ya yi murna akan masifar da ta sami wani za a hukunta shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Jikoki rawanin tsofaffi ne,",
            "poem": 1
          },
          {
            "text": "kuma iyaye su ne abin taƙamar ’ya’yansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Leɓunan basira ba su dace da wawa ba,",
            "poem": 1
          },
          {
            "text": "ya ma fi muni a ce mai mulki yana da leɓunan ƙarya!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Cin hanci kamar sihiri yake ga wanda yake ba da shi;",
            "poem": 1
          },
          {
            "text": "ko’ina ya juye, yakan yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk wanda ya rufe laifi yana inganta ƙauna ne,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya yi ta maimaita batu yakan raba abokai na kusa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Tsawata kan sa mutum ya koyi basira",
            "poem": 1
          },
          {
            "text": "fiye da abin da wawa zai koya ko da an dūke shi sau ɗari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Mugayen mutane sukan kuta tawaye da Allah;",
            "poem": 1
          },
          {
            "text": "za a aika manzo mutuwa a kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gara a haɗu da beyar da aka ƙwace wa ’ya’ya",
            "poem": 1
          },
          {
            "text": "fiye da a sadu da wawa cikin wautarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "In mutum ya sāka alheri da mugunta,",
            "poem": 1
          },
          {
            "text": "mugunta ba za tă taɓa barin gidansa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Farawar faɗa tana kamar ɓarkewa madatsar ruwa ne,",
            "poem": 1
          },
          {
            "text": "saboda haka ka bar batun kafin faɗa ta ɓarke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Baratar da mai laifi a kuma hukunta mai adalci,",
            "poem": 1
          },
          {
            "text": "Ubangiji ya ƙi su biyu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mene ne amfanin kuɗi a hannun wawa,",
            "poem": 1
          },
          {
            "text": "da yake ba shi da sha’awar samun hikima?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Aboki yakan yi ƙauna a koyaushe,",
            "poem": 1
          },
          {
            "text": "ɗan’uwa kuma, ai, don ɗaukar nawayar juna ne aka haife shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Mutumin da ba shi da azanci yakan ɗauki lamunin wani",
            "poem": 1
          },
          {
            "text": "ya kuma ɗauki nauyin biyan basusuwan maƙwabci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Duk mai son faɗa yana son zunubi,",
            "poem": 1
          },
          {
            "text": "duk wanda ya gina ƙofar shiga mai tsawo yana gayyatar hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutum mai muguwar zuciya ba ya cin gaba;",
            "poem": 1
          },
          {
            "text": "duk wanda yake da harshen ruɗu kan shiga wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kasance da wawa kamar ɗa yakan kawo baƙin ciki",
            "poem": 1
          },
          {
            "text": "babu farin ciki ga mahaifin wawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zuciya mai farin ciki magani ne mai kyau,",
            "poem": 1
          },
          {
            "text": "amma bakin rai kan busar da ƙasusuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Mugun mutum yakan karɓa cin hanci a asirce",
            "poem": 1
          },
          {
            "text": "don yă lalace yin adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mutum mai basira kan kafa idonsa a kan hikima,",
            "poem": 1
          },
          {
            "text": "amma idanun wawa suna a kan ƙarshen duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Da yake wawa yakan kawo baƙin ciki ga mahaifinsa",
            "poem": 1
          },
          {
            "text": "da ɓacin rai ga wanda ya haife shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ba shi da kyau a hukunta marar laifi,",
            "poem": 1
          },
          {
            "text": "ko a bulale shugaba saboda mutuncinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Mutum mai sani yakan yi la’akari da amfani da kalmomi,",
            "poem": 1
          },
          {
            "text": "mutum mai basira kuma natsattse ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ko wawa in bai buɗe bakinsa ba, za a zaci shi mai hikima ne,",
            "poem": 1
          },
          {
            "text": "da kuma mai basira inda ya ƙame bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
