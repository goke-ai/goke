  "chapter": {
    "number": 12,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Duk mai ƙaunar horo yana ƙaunar sani,",
            "poem": 1
          },
          {
            "text": "amma duk mai ƙin gyara wawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mutumin kirki kan sami tagomashi daga Ubangiji,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji yakan hukunta mai son yin wayo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba yadda mutum zai kahu ta wurin aikata mugunta,",
            "poem": 1
          },
          {
            "text": "amma ba za a tumɓuke adali ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mace mai halin kirki rawanin mijinta ne,",
            "poem": 1
          },
          {
            "text": "amma mace marar kunya tana kama da ciwo a ƙasusuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Shirye-shiryen masu adalci daidai ne,",
            "poem": 1
          },
          {
            "text": "amma shawarar mugaye ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kalmomin mugu sukan kwanta suna jira su yi kisankai,",
            "poem": 1
          },
          {
            "text": "amma jawabin masu aikata gaskiya kan kuɓutar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Akan tumɓuke mugaye ba a ƙara ganinsu,",
            "poem": 1
          },
          {
            "text": "amma gidan masu adalci kan tsaya daram.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Akan yabi mutum bisa ga hikimarsa,",
            "poem": 1
          },
          {
            "text": "amma mutane marasa azanci akan rena su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gara ka zama kai ba kome ba ne amma kana da bawa",
            "poem": 1
          },
          {
            "text": "da ka mai da kanka kai wani ne alhali kuwa ba ka da abinci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Mai adalci kan kula da bukatun dabbobinsa,",
            "poem": 1
          },
          {
            "text": "amma halaye mafi kyau na mugaye su ne ƙeta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Duk wanda ya nome gonarsa zai sami abinci a yalwace,",
            "poem": 1
          },
          {
            "text": "amma shi da yake naushin iska marar azanci ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mugaye suna sha’awar ganimar mugayen mutane,",
            "poem": 1
          },
          {
            "text": "amma saiwar masu adalci kan haɓaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mugun mutum kan fāɗa a tarkon maganarsa ta zunubi,",
            "poem": 1
          },
          {
            "text": "amma adali kan kuɓuta daga wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Daga abubuwan da suke fitowa daga leɓunansa mutum kan cika da abubuwa masu kyau",
            "poem": 1
          },
          {
            "text": "tabbatacce yadda aikin hannuwansa suke ba shi lada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Hanyar wawa daidai take a gare shi,",
            "poem": 1
          },
          {
            "text": "amma mai hikima kan saurari shawara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Wawa kan nuna fushinsa nan take,",
            "poem": 1
          },
          {
            "text": "amma mai la’akari kan ƙyale zargi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mashaidin gaskiya kan ba da shaidar gaskiya,",
            "poem": 1
          },
          {
            "text": "amma mashaidin ƙarya yana baza ƙarairayi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Maganganun rashin tunani sukan soki mutum kamar takobi,",
            "poem": 1
          },
          {
            "text": "amma harshen mai hikima kan kawo warkarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Leɓunan gaskiya kan dawwama har abada,",
            "poem": 1
          },
          {
            "text": "amma harshen ƙarya yakan dawwama na ɗan lokaci ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Akwai ruɗu a zukatan waɗanda suke ƙulla mugunta,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke aikata alheri za su yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba wani lahanin da zai sami masu adalci,",
            "poem": 1
          },
          {
            "text": "amma mugaye suna da nasu cike da wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar leɓunan masu ƙarya,",
            "poem": 1
          },
          {
            "text": "amma yana jin daɗin mutanen da suke masu gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Mai la’akari kan kiyaye saninsa wa kansa,",
            "poem": 1
          },
          {
            "text": "amma zuciyar wawa kan yi ta tallar wawanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Hannuwan masu aiki tuƙuru za su yi mulki,",
            "poem": 1
          },
          {
            "text": "amma ragwanci kan ƙarasa a aikin bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Zuciya mai damuwa takan naƙasar da mutum,",
            "poem": 1
          },
          {
            "text": "amma maganar alheri kan faranta masa rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Adali yakan yi hankali a abokantaka,",
            "poem": 1
          },
          {
            "text": "amma hanyar mugaye kan kai su ga kaucewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Rago ba ya gashin abin da ya kama daga farauta,",
            "poem": 1
          },
          {
            "text": "amma mai aiki tuƙuru yakan ɗauki mallakarsa da muhimmanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "A hanyar adalci akwai rai;",
            "poem": 1
          },
          {
            "text": "a wannan hanya akwai rashin mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
