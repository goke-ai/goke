  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Karin maganar Solomon ɗan Dawuda, sarkin Isra’ila."
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ga karin magana da za su taimake ka don samun hikima da horo;",
            "poem": 1
          },
          {
            "text": "don ganewa kalmomi masu zurfi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "don neman rayuwa ta horo da kuma ta hankali,",
            "poem": 1
          },
          {
            "text": "kana yin abin da yake daidai, mai adalci da kuma wanda ya dace;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "don sa marar azanci yă yi hankali,",
            "poem": 1
          },
          {
            "text": "yă sa matasa su sani, su kuma iya rarrabewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "bari masu hikima su saurara, su kuma ƙara ga saninsu,",
            "poem": 1
          },
          {
            "text": "bari masu tunani kuma su sami jagora,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "don su fahimci karin magana da kuma misalai,",
            "poem": 1
          },
          {
            "text": "kalmomi da kuma kacici-kacici masu hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Tsoron Ubangiji shi ne masomin ilimi,",
            "poem": 1
          },
          {
            "text": "amma wawaye",
            "poem": 2
          },
          {
            "noteId": 1116
          },
          {
            "text": "sun rena hikima da horo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Jan kunne game da jaraba"
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ɗana, ka saurari umarnin mahaifinka",
            "poem": 1
          },
          {
            "text": "kada kuma ka ƙyale koyarwar mahaifiyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Za su zama kayan ado don su inganta ka",
            "poem": 1
          },
          {
            "text": "da kuma sarƙar wuya don su yi wa wuyanka ado.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ɗana, in masu zunubi sun jarabce ka,",
            "poem": 1
          },
          {
            "text": "kada ka yarda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "In suka ce, “Zo mu tafi;",
            "poem": 1
          },
          {
            "text": "mu yi kwanton ɓauna, mu nemi wani mu kashe,",
            "poem": 2
          },
          {
            "text": "mu fāɗa wa marasa laifi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "mu haɗiye su da rai gaba ɗaya kamar kabari,",
            "poem": 1
          },
          {
            "text": "kamar waɗanda suke gangarawa zuwa rami;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "za mu sami dukiya masu daraja iri-iri,",
            "poem": 1
          },
          {
            "text": "mu kuma cika gidajenmu da ganima;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "ka haɗa kai da mu,",
            "poem": 1
          },
          {
            "text": "za mu kuwa raba abin da muka sato”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ɗana, kada ka tafi tare da su,",
            "poem": 1
          },
          {
            "text": "kada ka taka ƙafarka a hanyarsu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "gama ƙafafunsu kan yi sauri ga yin zunubi,",
            "poem": 1
          },
          {
            "text": "suna saurin yin kisankai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ba shi da amfani a kafa tarko",
            "poem": 1
          },
          {
            "text": "a idanun dukan tsuntsaye!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Waɗannan irin mutane kansu suke kafa wa tarko;",
            "poem": 1
          },
          {
            "text": "ba sa kama kome, sai rayukansu!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Dukan waɗanda suke neman ribar da ba a samu a hanya mai kyau;",
            "poem": 1
          },
          {
            "text": "ƙarshen wannan yakan ɗauke rayukansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Jan kunne game da ƙin hikima"
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Hikima tana kira da ƙarfi a kan titi,",
            "poem": 1
          },
          {
            "text": "tana ɗaga muryarta a dandalin taron jama’a;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "tana kira da ƙarfi a kan tituna masu surutu,",
            "poem": 1
          },
          {
            "noteId": 1117
          },
          {
            "text": "tana yin jawabinta a hanyoyin shiga gari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Har yaushe ku da kuke marasa azanci",
            "poem": 1
          },
          {
            "noteId": 1118
          },
          {
            "text": "za ku ci gaba a hanyoyinku marasa azanci?",
            "poem": 1
          },
          {
            "text": "Har yaushe ku masu ba’a za ku yi ta murna cikin ba’arku",
            "poem": 2
          },
          {
            "text": "wawaye kuma ku ƙi ilimi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Da a ce kun saurari tsawatata,",
            "poem": 1
          },
          {
            "text": "da na faɗa muku dukan abin da yake zuciyata",
            "poem": 2
          },
          {
            "text": "in kuma sanar da ku tunanina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Amma da yake kun ƙi ni sa’ad da na yi kira",
            "poem": 1
          },
          {
            "text": "ba kuma wanda ya saurara sa’ad da na miƙa hannuna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "da yake kun ƙi dukan shawarata",
            "poem": 1
          },
          {
            "text": "ba ku kuma yarda da tsawatata ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Zan yi muku dariya sa’ad da masifa ta same ku,",
            "poem": 1
          },
          {
            "text": "zan yi muku ba’a sa’ad da bala’i ya same ku,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "sa’ad da bala’i ya sha kanku kamar hadiri,",
            "poem": 1
          },
          {
            "text": "sa’ad da masifa ta share ku kamar guguwa,",
            "poem": 2
          },
          {
            "text": "sa’ad damuwa da wahala suka mamaye ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "“Sa’an nan za su kira gare ni amma ba zan amsa ba;",
            "poem": 1
          },
          {
            "text": "za su neme ni amma ba za su same ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Da yake sun ƙi sani",
            "poem": 1
          },
          {
            "text": "ba su kuwa zaɓi tsoron Ubangiji ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "da yake ba su karɓi shawarata ba",
            "poem": 1
          },
          {
            "text": "suka kuwa yi kunnen ƙashi ga tsawatata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "za su sami sakayyar abubuwan da suka yi",
            "poem": 1
          },
          {
            "text": "su kuma ƙoshi da sakayyar makircinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Gama rashin hankalin marasa azanci zai kashe su,",
            "poem": 1
          },
          {
            "text": "rashin kulawar wawaye kuma zai hallaka su;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "amma duk wanda ya saurare ni, zai zauna lafiya",
            "poem": 1
          },
          {
            "text": "yă kuma kasance da rai kwance, ba tare da tsoron lahani ba.”",
            "poem": 2
          }
        ]
      }
    ],
