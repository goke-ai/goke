  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "heading",
        "content": [
          "Gargaɗi a kan wawanci"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗana, in ka shirya tsaya wa maƙwabcinka don yă karɓi bashi,",
            "poem": 1
          },
          {
            "text": "in ka sa hannunka don ɗaukar lamunin wani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "in maganarka ta taɓa kama ka,",
            "poem": 1
          },
          {
            "text": "ko kalmomin bakinka sun zama maka tarko,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "to, sai ka yi haka, ɗana don ka ’yantar da kanka;",
            "poem": 1
          },
          {
            "text": "da yake ka shiga hannuwan maƙwabcinka,",
            "poem": 2
          },
          {
            "text": "ka tafi ka ƙasƙantar da kanka;",
            "poem": 1
          },
          {
            "text": "ka roƙi maƙwabcinka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka hana kanka barci,",
            "poem": 1
          },
          {
            "text": "ko gyangyaɗi a idanunka ma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka ’yantar da kanka, kamar barewa daga hannun mai farauta,",
            "poem": 1
          },
          {
            "text": "kamar tsuntsu daga tarkon mai kafa tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ku tafi wurin kyashi, ku ragwaye;",
            "poem": 1
          },
          {
            "text": "ku lura da hanyoyinsa ku zama masu hikima!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba shi da jagora",
            "poem": 1
          },
          {
            "text": "ba shugaba ko mai mulki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "duk da haka yakan yi tanade-tanadensa da rani",
            "poem": 1
          },
          {
            "text": "ya kuma tattara abincinsa a lokacin girbi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Har yaushe za ku kwanta a can, ku ragwaye?",
            "poem": 1
          },
          {
            "text": "Yaushe za ku farka daga barcinku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ɗan barci, ɗan gyangyaɗi,",
            "poem": 1
          },
          {
            "text": "ɗan naɗin hannuwa don a huta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "talauci kuwa zai zo kamar ’yan hari",
            "poem": 1
          },
          {
            "text": "rashi kuma kamar ɗan fashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sakare da mutumin banza",
            "poem": 1
          },
          {
            "text": "wanda yana yawo da magana banza a baki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "wanda yake ƙyifce da ido,",
            "poem": 2
          },
          {
            "text": "yana yi alama da ƙafafunsa",
            "poem": 2
          },
          {
            "text": "yana kuma nuni da yatsotsinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "wanda yake ƙulla mugunta da ruɗu a cikin zuciyarsa,",
            "poem": 2
          },
          {
            "text": "kullum yana tā-da-na-zaune-tsaye",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Saboda haka masifa za tă fāɗa farat ɗaya;",
            "poem": 1
          },
          {
            "text": "za a hallaka shi nan da nan, ba makawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          "Akwai abubuwa shida da Ubangiji ya ƙi, abubuwa bakwai da suke abin ƙyama gare shi,"
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          "duban reni, harshe mai ƙarya, hannuwa masu zub da jinin marar laifi,"
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          "zuciyar da take ƙulla mugayen dabaru, ƙafafun da suke sauri zuwa aikata mugunta,"
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          "mai shaidar ƙarya wanda yake zuba ƙarairayi, da kuma mutumin da yake tā-da-na-zaune-tsaye a cikin ’yan’uwa."
        ]
      },
      {
        "type": "heading",
        "content": [
          "Gargaɗi a kan zina"
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ɗana, ka kiyaye umarnan mahaifinka",
            "poem": 1
          },
          {
            "text": "kada kuma ka ƙyale koyarwar mahaifiyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka ɗaura su a zuciyarka har abada;",
            "poem": 1
          },
          {
            "text": "ka ɗaura su kewaye da wuyanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Sa’ad da kake tafiya, za su bishe ka;",
            "poem": 1
          },
          {
            "text": "sa’ad da kake barci, za su lura da kai;",
            "poem": 2
          },
          {
            "text": "sa’ad da ka farka, za su yi maka magana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Gama waɗannan umarnai fitila ne,",
            "poem": 1
          },
          {
            "text": "wannan koyarwa haske ne,",
            "poem": 2
          },
          {
            "text": "kuma gyare-gyaren horo",
            "poem": 2
          },
          {
            "text": "hanyar rayuwa ce,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "suna kiyaye ka daga mace marar ɗa’a",
            "poem": 1
          },
          {
            "text": "daga sulɓin harshen mace marar aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ka yi sha’awarta a cikin zuciyarka",
            "poem": 1
          },
          {
            "text": "kada ka bar ta tă ɗauki hankalinka da idanunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Gama karuwa takan mai da kai kamar burodin kyauta,",
            "poem": 1
          },
          {
            "text": "mazinaciya kuma takan farauci ranka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Mutum zai iya ɗiba wuta ya zuba a cinyarsa",
            "poem": 1
          },
          {
            "text": "ba tare da rigunansa sun ƙone ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Mutum zai iya yin tafi a garwashi wuta mai zafi",
            "poem": 1
          },
          {
            "text": "ba tare da ƙafafunsa sun ƙone ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Haka yake da wanda ya kwana da matar wani;",
            "poem": 1
          },
          {
            "text": "babu wanda ya taɓa ta da zai tafi babu hukunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Mutane ba sa ƙyale ɓarawo in ya yi sata",
            "poem": 1
          },
          {
            "text": "don yă ƙosar da yunwarsa sa’ad da yake jin yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Duk da haka in aka kama shi, dole yă biya sau bakwai",
            "poem": 1
          },
          {
            "text": "ko da yake abin zai ci dukan arzikin gidansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Amma mutumin da ya yi zina ba shi da hankali;",
            "poem": 1
          },
          {
            "text": "duk wanda ya yi haka yana hallaka kansa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Dūka da kunya ne za su zama rabonsa,",
            "poem": 1
          },
          {
            "text": "kuma kunyarsa za tă dawwama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Gama kishi kan tā da hasalar miji,",
            "poem": 1
          },
          {
            "text": "kuma ba zai ji tausayi ba sa’ad da yake ramawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Ba zai karɓi duk wata biya ba;",
            "poem": 1
          },
          {
            "text": "zai ƙi cin hanci, kome yawansu.",
            "poem": 2
          }
        ]
      }
    ],
