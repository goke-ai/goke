  "chapter": {
    "number": 28,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mugu yakan gudu ko babu wanda yake korarsa,",
            "poem": 1
          },
          {
            "text": "amma adalai suna da ƙarfin hali kamar zaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sa’ad da ƙasa ta yi tayarwa, takan kasance da masu mulki da yawa,",
            "poem": 1
          },
          {
            "text": "amma mai fahimi da sani kan mai da zaman lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mai mulkin da ya danne talakawa",
            "poem": 1
          },
          {
            "text": "yana kama da ruwan saman da ya lalatar da hatsi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Duk waɗanda ba sa bin doka yabon mugaye suke yi,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke yin biyayya da doka suna gāba da mugaye ke nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mugaye ba su san gaskiya ba,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke neman Ubangiji sun santa sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gara matalauci wanda yake tafiya babu abin zargi",
            "poem": 1
          },
          {
            "text": "da mai arziki wanda hanyoyinsa mugaye ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk wanda ya kiyaye doka ɗa ne mai la’akari,",
            "poem": 1
          },
          {
            "text": "amma wanda yake abokantaka da masu zari yakan jawo wa mahaifinsa kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk wanda ya tara dukiyarsa ta wurin ba da bashi da ruwan da ya wuce misali",
            "poem": 1
          },
          {
            "text": "yana tara wa wani ne wanda zai yi wa talakawa alheri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In wani ya yi kunnuwa ƙashi ga doka",
            "poem": 1
          },
          {
            "text": "ko addu’arsa ma abar ƙyama ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk wanda ya jagorance masu aikata gaskiya a hanyar mugunta",
            "poem": 1
          },
          {
            "text": "zai fāɗa cikin tarkonsa",
            "poem": 2
          },
          {
            "text": "amma marasa abin zargi za su sami gādo mai kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Mai arziki zai yi zato shi mai hikima ne a ganinsa,",
            "poem": 1
          },
          {
            "text": "amma matalauci mai basira ya fi shi sanin abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa’ad da adalai suka yi nasara, kowa yakan yi biki;",
            "poem": 1
          },
          {
            "text": "amma sa’ad da mugu ya samu shugabanci, mutane sukan yi ta ɓuya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duk wanda ya ɓoye zunubansa ba ya taɓa cin nasara,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya furta ya kuma ƙi su yakan sami jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Mai albarka ne mutumin da kullum yake jin tsoron Allah,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya taurare zuciyarsa yakan shiga wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kamar rurin zaki ko sanɗar beyar",
            "poem": 1
          },
          {
            "text": "haka mugun mutum mai mulki a kan mutane marasa ƙarfi yake.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mugu mai mulki ba shi da azanci,",
            "poem": 1
          },
          {
            "text": "amma duk wanda yake ƙin ƙazamar riba yakan yi tsawon rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mutumin da laifin kisa ya yi ta damunsa",
            "poem": 1
          },
          {
            "text": "zai zama mai gudu don tsoro har mutuwa;",
            "poem": 2
          },
          {
            "text": "kada wani ya taimake shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk wanda ya yi tafiya marar abin zargi zai zauna lafiya,",
            "poem": 1
          },
          {
            "text": "amma duk wanda hanyoyinsa mugaye ne zai fāɗi nan da nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Duk wanda ya nome gonarsa zai sami amfani a yalwace,",
            "poem": 1
          },
          {
            "text": "amma duk wanda yake zaman banza zai zama matalauci a koyaushe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutum mai aminci zai cika da albarka,",
            "poem": 1
          },
          {
            "text": "amma duk mai son yin arziki dare ɗaya zai sha hukunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Nuna sonkai ba shi da kyau,",
            "poem": 1
          },
          {
            "text": "duk da haka mutum zai aikata abin da ba daidai ba saboda ’yar ƙaramar rashawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mai rowa yana alla-alla ya yi arziki",
            "poem": 1
          },
          {
            "text": "bai san cewa talauci ne ke jiransa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk wanda ya tsawata wa wani mutum zai sami yabo a ƙarshe",
            "poem": 1
          },
          {
            "text": "fiye da wanda yake mai daɗin baki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Duk wanda ya yi wa mahaifin ko mahaifiyarsa sata",
            "poem": 1
          },
          {
            "text": "ya kuma ce, “Ai, ba laifi ba ne”",
            "poem": 2
          },
          {
            "text": "abokin mai hallakarwa ne shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Mai haɗama yakan jawo tā-da-na-zaune-tsaye,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya dogara ga Ubangiji zai yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Duk mai dogara ga kansa wawa ne,",
            "poem": 1
          },
          {
            "text": "amma duk wanda yake tafiya da hikima zai zauna lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Duk wanda yake bayarwa ga matalauta ba zai rasa kome ba,",
            "poem": 1
          },
          {
            "text": "amma duk wanda bai kula da su ba yana samu la’ana masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Sa’ad da mugu ya samu shugabanci, mutane sukan yi ta ɓuya;",
            "poem": 1
          },
          {
            "text": "amma sa’ad da mugu ya hallaka, adali kan ci gaba cikin arziki da lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
