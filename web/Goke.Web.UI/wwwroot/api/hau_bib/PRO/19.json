  "chapter": {
    "number": 19,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Gara matalauci wanda yake marar laifi",
            "poem": 1
          },
          {
            "text": "da wawa wanda leɓunansa masu ƙarya ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ba shi da kyau ka kasance da niyya babu sani,",
            "poem": 1
          },
          {
            "text": "ko ka kasance mai garaje ka ɓace hanya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Wautar mutum kan lalatar da ransa,",
            "poem": 1
          },
          {
            "text": "duk da haka zuciyarsa kan ba wa Ubangiji laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wadata kan kawo abokai da yawa,",
            "poem": 1
          },
          {
            "text": "amma abokin matalauci kan bar shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mai ba da shaidar ƙarya ba zai tafi babu hukunci ba,",
            "poem": 1
          },
          {
            "text": "kuma duk wanda ya baza ƙarairayi ba zai kuɓuta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kowa na ƙoƙari ya sami farin jini wurin mai mulki,",
            "poem": 1
          },
          {
            "text": "kuma kowa na so a ce shi abokin mutumin nan mai yawan kyauta ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "’Yan’uwan matalauci sukan guje shi,",
            "poem": 1
          },
          {
            "text": "balle abokansa, su ma za su guje shi.",
            "poem": 2
          },
          {
            "text": "Ko da yake matalaucin yana binsu yana roƙo,",
            "poem": 1
          },
          {
            "text": "ba zai sam su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk wanda ya sami hikima yana ƙaunar ransa;",
            "poem": 1
          },
          {
            "text": "duka wanda yake jin daɗi fahimi kan ci gaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mai shaidar ƙarya ba zai tafi babu hukunci ba,",
            "poem": 1
          },
          {
            "text": "kuma duk mai baza ƙarairayi zai hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Bai dace da wawa ya yi rayuwa cikin jin daɗi ba,",
            "poem": 1
          },
          {
            "text": "haka ya fi muni bawa ya yi mulki a kan sarki!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Hikimar mutum kan ba shi haƙuri;",
            "poem": 1
          },
          {
            "text": "ɗaukakarsa ce ya ƙyale laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Fushin sarki yana kama da rurin zaki,",
            "poem": 1
          },
          {
            "text": "amma tagomashinsa yana kama da raba a kan ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wawan yaro lalacin mahaifinsa ne,",
            "poem": 1
          },
          {
            "text": "mace mai yawan faɗa tana kama da ɗiɗɗigar ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ana gādon dawakai da wadata daga iyaye ne,",
            "poem": 1
          },
          {
            "text": "amma mace mai basira daga Ubangiji ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ragwanci kan jawo zurfin barci,",
            "poem": 1
          },
          {
            "text": "mutum mai sanyin jiki kuma yana tare da yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Duk wanda ya bi umarnai kan tsare ransa,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya ƙi binsu zai mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Duk wanda yake kirki ga matalauta yana ba wa Ubangiji bashi ne,",
            "poem": 1
          },
          {
            "text": "zai kuwa sami lada game da abin da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ka hori ɗanka, gama yin haka akwai sa zuciya;",
            "poem": 1
          },
          {
            "text": "kada ka goyi baya lalacewarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Dole mai zafin rai yă biya tara;",
            "poem": 1
          },
          {
            "text": "in ka fisshe shi sau ɗaya, to, sai ka sāke yin haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka kasa kunne ga shawara ka kuma yarda da umarni,",
            "poem": 1
          },
          {
            "text": "a ƙarshe kuwa za ka yi hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Da yawa ne shirye-shiryen zuciyar mutum,",
            "poem": 1
          },
          {
            "text": "amma manufar Ubangiji ce takan cika.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Abin da mutum yake sha’awa shi ne ƙauna marar ƙarewa;",
            "poem": 1
          },
          {
            "noteId": 1121
          },
          {
            "text": "gara ka zama matalauci da ka zama maƙaryaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Tsoron Ubangiji yakan kai ga rai.",
            "poem": 1
          },
          {
            "text": "Sa’an nan mutum ya sami biyan bukata, ba abin da zai cuce shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Rago kan sa hannunsa a kwano",
            "poem": 1
          },
          {
            "text": "ba ya ma iya ɗaga shi ya kai bakinsa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ka bulale mai ba’a, marasa azanci kuwa za su yi la’akari;",
            "poem": 1
          },
          {
            "text": "ka tsawata wa mai basira, zai kuwa ƙara sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Duk wanda ya yi wa mahaifinsa fashi ya kuma kori mahaifiyarsa",
            "poem": 1
          },
          {
            "text": "ɗa ne da kan kawo kunya da wulaƙanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "In ka daina jin umarni, ɗana,",
            "poem": 1
          },
          {
            "text": "za ka kuwa kauce daga kalmomin sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Mai shaidar da yake malalaci yana wa shari’a ba’a ne,",
            "poem": 1
          },
          {
            "text": "bakin mugaye kuma na haɗiye mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "An shirya tara saboda masu ba’a ne,",
            "poem": 1
          },
          {
            "text": "dūka kuma saboda bayan wawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
