  "chapter": {
    "number": 27,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kada ka yi fariya a kan gobe",
            "poem": 1
          },
          {
            "text": "gama ba san abin da ranar za tă kawo ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka bar wani ya yabe ka, ba kai kanka ba;",
            "poem": 1
          },
          {
            "text": "wani dabam, ba leɓunanka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Dutse yana da nauyi yashi kuma wahala ce,",
            "poem": 1
          },
          {
            "text": "amma tsokanar wawa ta fi su duka nauyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Fushi mugun abu ne mai hallakarwa,",
            "poem": 1
          },
          {
            "text": "amma wa zai iya tsaya a gaban kishi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gara tsawatawar da ake yi a fili",
            "poem": 1
          },
          {
            "text": "da ƙaunar da ake yi a ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Za a iya amince da rauni daga aboki,",
            "poem": 1
          },
          {
            "text": "amma abokin gāba ko da ya sumbace ka kada ka sake da shi!",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk wanda ya ƙoshi da zuma, ba ya marmarinsa kuma",
            "poem": 1
          },
          {
            "text": "amma wanda yake yunwa ko abin da yake da ɗaci ma zai ji shi da zaƙi.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kamar tsuntsun da ya ɓace daga sheƙarsa",
            "poem": 1
          },
          {
            "text": "haka yake da mutumin da ya bar gidansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Man shafawa mai ƙanshi da kuma turare kan faranta zuciya,",
            "poem": 1
          },
          {
            "text": "gaisuwar amini kuma takan fito daga shawarar kirki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kada ka manta da abokinka da kuma abokin mahaifinka,",
            "poem": 1
          },
          {
            "text": "kuma kada ka tafi gidan ɗan’uwanka sa’ad da masifa ta same ka,",
            "poem": 2
          },
          {
            "text": "gara ka je wurin maƙwabci na kusa da ka je wurin ɗan’uwan da yake da nisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka zama mai hikima, ɗana, ka kuma faranta mini zuciya;",
            "poem": 1
          },
          {
            "text": "zan iya amsa kowace irin suƙar da wani zai yi mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mai basira kan hango hatsari ya kuma kauce,",
            "poem": 1
          },
          {
            "text": "marar azanci zai yi ta kutsa kai ciki, daga baya ya yi da na sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "A karɓe rigunan wanda ya ɗauki lamunin baƙo;",
            "poem": 1
          },
          {
            "text": "a riƙe shi jingina in ya yi shi don mace marar aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In mutum ya albarkaci maƙwabcinsa da murya mai ƙarfi da sassafe,",
            "poem": 1
          },
          {
            "text": "za a ɗauka shi a matsayin la’ana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Mace mai fitina kamar",
            "poem": 1
          },
          {
            "text": "ɗiɗɗigar ruwa take ba ƙaƙƙautawa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "hana ta yana kamar yin ƙoƙari tsai da iska ne",
            "poem": 1
          },
          {
            "text": "ko yin ƙoƙarin cafke mai a tafin hannunka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kamar yadda ƙarfe kan wasa ƙarfe",
            "poem": 1
          },
          {
            "text": "haka mutum kan koyi daga mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk wanda ya lura da itacen ɓaure, zai ci ’ya’yansa,",
            "poem": 1
          },
          {
            "text": "kuma duk wanda ya lura da maigidansa za a girmama shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kamar yadda ruwa kan nuna yadda fuska take,",
            "poem": 1
          },
          {
            "text": "haka zuciyar mutum kan nuna irin mutumin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutuwa da Hallaka",
            "poem": 1
          },
          {
            "noteId": 1124
          },
          {
            "text": "ba sa ƙoshi,",
            "poem": 1
          },
          {
            "text": "haka idanun mutum ba sa ƙoshi da gani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ana gwajin azurfa da kuma zinariya da wuta,",
            "poem": 1
          },
          {
            "text": "amma akan gwada mutum ta wurin yabon da ya samu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ko da ka daka wawa a turmi,",
            "poem": 1
          },
          {
            "text": "kana daka shi kamar hatsi da taɓarya,",
            "poem": 2
          },
          {
            "text": "ba za ka fid da wauta daga gare shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ka tabbata ka san lafiyar garken tumakinka,",
            "poem": 1
          },
          {
            "text": "ka mai da hankali ga garken shanunka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "domin dukiya ba ta dawwama har abada,",
            "poem": 1
          },
          {
            "text": "ba a kuma kasance da rawani daga tsara zuwa tsara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’ad da aka yanki ingirci sabon toho kuma ya bayyana",
            "poem": 1
          },
          {
            "text": "aka kuma tattara ciyawa daga tuddai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "gashin raguna za su tanada maka tufafi,",
            "poem": 1
          },
          {
            "text": "za ka iya sayi gonaki masu kyau da kuɗin awaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Za ka kasance da madarar awaki mai yawa",
            "poem": 1
          },
          {
            "text": "don ka ciyar da kanka da kuma iyalinka",
            "poem": 2
          },
          {
            "text": "ka kuma inganta bayinka mata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
