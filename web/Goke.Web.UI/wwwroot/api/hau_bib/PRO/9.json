  "chapter": {
    "number": 9,
    "content": [
      {
        "type": "heading",
        "content": [
          "Gayyatar hikima da gayyatar wawanci"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Hikima ta gina gidanta;",
            "poem": 1
          },
          {
            "text": "ta yi ginshiƙansa bakwai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ta shirya abincinta gauraye da ruwan inabinta;",
            "poem": 1
          },
          {
            "text": "ta kuma shirya teburinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ta aiki bayinta mata, tana kuma kira",
            "poem": 1
          },
          {
            "text": "daga wurare masu tsayi na birnin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Bari dukan waɗanda suke marasa azanci su zo nan ciki!”",
            "poem": 1
          },
          {
            "text": "Tana faɗa wa marasa hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ku zo, ku ci abincina",
            "poem": 1
          },
          {
            "text": "da ruwan inabin da na gauraye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ku bar hanyoyinku marasa hankali za ku kuwa rayu;",
            "poem": 1
          },
          {
            "text": "yi tafiya a hanyar fahimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Duk wanda ya yi wa mai ba’a gyara yana gayyatar zagi",
            "poem": 1
          },
          {
            "text": "duk wanda ya tsawata wa mugu yakan gamu da cin mutunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ka tsawata wa masu ba’a gama za su ƙi ka;",
            "poem": 1
          },
          {
            "text": "ka tsawata wa mai hikima zai kuwa ƙaunace ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka koya wa mai hikima zai kuwa ƙara hikima;",
            "poem": 1
          },
          {
            "text": "ka koya wa mai adalci zai kuwa ƙara koyonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Tsoron Ubangiji shi ne mafarin hikima,",
            "poem": 1
          },
          {
            "text": "sanin Mai Tsarki kuwa fahimi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama ta wurina kwanakinka za su yi yawa,",
            "poem": 1
          },
          {
            "text": "za a kuwa ƙara wa ranka shekaru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "In kana da hikima, hikimarka za tă ba ka lada;",
            "poem": 1
          },
          {
            "text": "in kai mai ba’a ne, kai kaɗai za ka sha wahala.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wawancin mace a bayyane yake;",
            "poem": 1
          },
          {
            "text": "ba ta da ɗa’a kuma ba ta da sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Takan zauna a ƙofar gidanta,",
            "poem": 1
          },
          {
            "text": "a wurin zama a wurin mafi tsayi na birni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "tana kira ga masu wucewa,",
            "poem": 1
          },
          {
            "text": "waɗanda suke tafiya kai tsaye a hanyarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Bari dukan waɗanda suke marasa azanci su zo cikin nan!”",
            "poem": 1
          },
          {
            "text": "Tana ce wa marasa hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Ruwan da aka sata ya fi daɗi;",
            "poem": 1
          },
          {
            "text": "abincin da aka ci a ɓoye ya fi daɗi!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Amma ba su san cewa matattu suna a can ba,",
            "poem": 1
          },
          {
            "text": "cewa baƙinta suna a can cikin zurfin kabari ba.",
            "poem": 2
          }
        ]
      }
    ],
