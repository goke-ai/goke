  "chapter": {
    "number": 29,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mutumin da ya ci gaba da taurinkai bayan an kwaɓe shi",
            "poem": 1
          },
          {
            "text": "ba da daɗewa ba zai hallaka ba makawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sa’ad da masu adalci suke cin nasara, mutane kan yi farin ciki",
            "poem": 1
          },
          {
            "text": "sa’ad da mugaye suke mulki, mutane kan yi nishi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duk mai ƙaunar hikima kan kawo wa mahaifinsa farin ciki,",
            "poem": 1
          },
          {
            "text": "amma wanda yake ma’amala da karuwai kan lalatar da dukiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ta wurin yin adalci sarki kan sa ƙasa tă yi ƙarƙo",
            "poem": 1
          },
          {
            "text": "amma duk mai haɗama don cin hanci kan rushe ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duk wanda yake wa maƙwabcinsa daɗin baki",
            "poem": 1
          },
          {
            "text": "yana sa wa ƙafafunsa tarko ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mugun mutum tarko ne ta wurin zunubinsa,",
            "poem": 1
          },
          {
            "text": "amma mai adalci zai iya rera ya kuma yi murna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Masu adalci sun damu game da adalci don talakawa,",
            "poem": 1
          },
          {
            "text": "amma mugaye ba su da wannan damuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Masu ba’a kan kuta faɗa a birni,",
            "poem": 1
          },
          {
            "text": "amma masu hikima sukan kwantar da fushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In mai hikima ya je wurin shari’a da wawa,",
            "poem": 1
          },
          {
            "text": "wawa kan yi ta fushi yana ta dariya, ba kuwa za a sami salama ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Masu kisankai sukan ƙi mutum mai mutunci",
            "poem": 1
          },
          {
            "text": "su kuma nema su kashe mai aikata gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Wawa yakan nuna fushinsa a fili,",
            "poem": 1
          },
          {
            "text": "amma mai hikima kan kanne fushinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "In mai mulki yana sauraran ƙarairayi,",
            "poem": 1
          },
          {
            "text": "dukan ma’aikatansa za su zama mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Matalauci da azzalumi suna da wannan abu ɗaya.",
            "poem": 1
          },
          {
            "text": "Ubangiji ne yake ba dukansu gani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In sarki yana hukunta talakawa da adalci",
            "poem": 1
          },
          {
            "text": "kursiyinsa kullum zai kasance lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sandar gyara kan ba da hikima,",
            "poem": 1
          },
          {
            "text": "amma yaron da aka bari ba horo kan jawo kunya ga mahaifiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Sa’ad da mugaye suke cin nasara, haka zunubi zai yi ta ƙaruwa,",
            "poem": 1
          },
          {
            "text": "amma masu adalci za su ga fāɗuwar waɗannan mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ka hori ɗanka, zai kuwa ba ka salama;",
            "poem": 1
          },
          {
            "text": "zai ba ka farin cikin da kake so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Inda ba wahayi, mutane kan kangare;",
            "poem": 1
          },
          {
            "text": "amma masu albarka ne waɗanda suke kiyaye doka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba a yi wa bawa gyara ta wurin magana kawai;",
            "poem": 1
          },
          {
            "text": "ko da ya fahimta ma, ba zai kula ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka ga mutum mai yin magana da garaje?",
            "poem": 1
          },
          {
            "text": "To, gara a sa zuciya ga wawa da a sa zuciya gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "In mutum ya yi wa bawansa shagwaɓa tun yana yaro,",
            "poem": 1
          },
          {
            "text": "zai jawo baƙin ciki a ƙarshe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mutum mai cika fushi yakan tā da faɗa,",
            "poem": 1
          },
          {
            "text": "mai zafin rai kuma kan yi zunubai masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Fariyar mutum kan jawo masa ƙasƙanci",
            "poem": 1
          },
          {
            "text": "amma mai sauƙinkai kan sami girmamawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Duk wanda yake abokin ɓarawo abokin gāban kansa ne;",
            "poem": 1
          },
          {
            "text": "yana jin sa yana ta rantsuwa, amma bai isa ya ce kome ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Jin tsoron mutum tarko ne,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya dogara ga Ubangiji zai zauna lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Mutane sukan nemi samun farin jini daga wurin sarki,",
            "poem": 1
          },
          {
            "text": "amma daga wurin Ubangiji ne mutum kan sami adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Masu adalci suna ƙyamar masu rashin gaskiya;",
            "poem": 1
          },
          {
            "text": "mugaye sukan yi ƙyamar masu aikata gaskiya.",
            "poem": 2
          }
        ]
      }
    ],
