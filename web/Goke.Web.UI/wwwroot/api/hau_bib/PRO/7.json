  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "heading",
        "content": [
          "Gargaɗi A kan mazinaciya"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗana, ka kiyaye kalmomina",
            "poem": 1
          },
          {
            "text": "ka kuma ajiye umarnaina a cikinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka kiyaye umarnaina za ka kuwa rayu;",
            "poem": 1
          },
          {
            "text": "ka tsare koyarwata kamar ƙwayar idonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka daure su a yatsotsinka;",
            "poem": 1
          },
          {
            "text": "ka rubuta su a allon zuciyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka faɗa wa hikima, “Ke ’yar’uwata ce,”",
            "poem": 1
          },
          {
            "text": "ka kuma kira fahimi danginka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "za su kiyaye ka daga mazinaciya,",
            "poem": 1
          },
          {
            "text": "daga mace marar aminci da kalmominta masu ɗaukan hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "A tagar gidana",
            "poem": 1
          },
          {
            "text": "na leƙa ta labule mai rammuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sai na gani a cikin marasa azanci,",
            "poem": 1
          },
          {
            "text": "na lura a cikin samari,",
            "poem": 2
          },
          {
            "text": "wani matashi wanda ba shi da hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yana gangarawa a titi kusa da kusurwarta,",
            "poem": 1
          },
          {
            "text": "yana tafiya a gefen wajen gidanta",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "da magariba, yayinda rana tana fāɗuwa,",
            "poem": 1
          },
          {
            "text": "yayinda duhun dare yana farawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sai ga mace ta fito don ta sadu da shi,",
            "poem": 1
          },
          {
            "text": "saye da riga kamar karuwa shirye kuma don ta yaudare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "(Ba ta jin tsoro, ko kuma kunya,",
            "poem": 1
          },
          {
            "text": "ƙafafunta ba sa zama a gida;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "wani lokaci a titi, wani lokaci a dandali,",
            "poem": 1
          },
          {
            "text": "tana yawo a kowace kusurwa.)",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sai ta kama shi ta rungume shi",
            "poem": 1
          },
          {
            "text": "da duban soyayya a fuskarta ta ce,",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ina da hadaya ta salama a gida;",
            "poem": 1
          },
          {
            "text": "yau zan cika alkawarina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Saboda haka na fito don in sadu da kai;",
            "poem": 1
          },
          {
            "text": "na neme ka na kuma same ka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Na lulluɓe gadona",
            "poem": 1
          },
          {
            "text": "da lili masu launi dabam-dabam daga Masar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Na yayyafa turare a gadona",
            "poem": 1
          },
          {
            "text": "da mur, aloyes da kuma kirfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zo, mu sha zurfin ƙauna har safe;",
            "poem": 1
          },
          {
            "text": "bari mu ji wa ranmu daɗi da ƙauna!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Mijina ba ya gida;",
            "poem": 1
          },
          {
            "text": "ya yi tafiya mai nisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ya ɗauki jakarsa cike da kuɗi",
            "poem": 1
          },
          {
            "text": "ba zai kuwa dawo gida ba sai tsakiyar wata.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Da kalmomin rarrashi ta sa ya kauce;",
            "poem": 1
          },
          {
            "text": "ta ɗauki hankalinsa da sulɓin maganarta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Nan take, ya bi ta",
            "poem": 1
          },
          {
            "text": "kamar saniyar da za a kai mayanka,",
            "poem": 2
          },
          {
            "text": "kamar wawa zuwa wurin da za a ba shi horo",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "sai da kibiya ta soki hantarsa,",
            "poem": 2
          },
          {
            "text": "kamar tsuntsun da ya ruga cikin tarko,",
            "poem": 1
          },
          {
            "text": "ba tare da sani zai zama sanadin ransa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Yanzu fa, ’ya’yana, ku saurare ni;",
            "poem": 1
          },
          {
            "text": "ku kasa kunne ga abin da nake faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ku bar zuciyarku ta juya zuwa hanyoyinta",
            "poem": 1
          },
          {
            "text": "ko ku kauce zuwa hanyoyinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ta zama sanadin fāɗuwar yawanci;",
            "poem": 1
          },
          {
            "text": "kisan da ta yi ba ta ƙidayuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Gidanta babbar hanya ce zuwa kabari",
            "poem": 1
          },
          {
            "text": "mai yin jagora zuwa ɗakunan lahira.",
            "poem": 2
          }
        ]
      }
    ],
