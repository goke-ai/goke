  "chapter": {
    "number": 31,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Maganganun Sarki Lemuwel, magana ce horarriya",
          {
            "noteId": 1126
          },
          "mahaifiyarsa ta koya masa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ka saurara, ya ɗana! Ka saurara, ɗan cikina!",
            "poem": 1
          },
          {
            "text": "Ka saurara, ya ɗan amshin addu’ata!",
            "poem": 2
          },
          {
            "noteId": 1127
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kada ka ba da ƙarfinka a kan mata,",
            "poem": 1
          },
          {
            "text": "ƙarfinka ga waɗanda suka hallaka sarakuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ba na sarakuna ba ne, ya Lemuwel,",
            "poem": 1
          },
          {
            "text": "ba na sarakuna ba ne su sha ruwan inabi,",
            "poem": 2
          },
          {
            "text": "ba na masu mulki ba ne su yi marmarin barasa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "don kada su sha su manta da abin da doka ta umarta,",
            "poem": 1
          },
          {
            "text": "su hana wa waɗanda aka danne hakkinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "A ba da barasa ga waɗanda suke cikin halin ƙaƙa naka yi,",
            "poem": 1
          },
          {
            "text": "ruwan inabi ga waɗanda suke cikin wahala;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "bari su sha su manta da talaucinsu",
            "poem": 1
          },
          {
            "text": "kada kuma su ƙara tunawa da ɓacin ransu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Yi magana domin bebaye,",
            "poem": 1
          },
          {
            "text": "domin hakkin dukan waɗanda suke naƙasassu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yi magana a kuma yi shari’ar adalci;",
            "poem": 1
          },
          {
            "text": "a tsare hakkin talakawa da masu bukata.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "noteId": 1128
          },
          {
            "text": "Wa yake iya samun mace mai halin kirki?",
            "poem": 1
          },
          {
            "text": "Darajarta ta fi ta lu’ulu’ai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Mijinta yana da cikakken amincewa da ita",
            "poem": 1
          },
          {
            "text": "kuma ba ya rasa wani abu mai daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Takan yi masa alheri ba mugunta ba,",
            "poem": 1
          },
          {
            "text": "dukan kwanakin ranta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Takan zaɓi ulu da lilin",
            "poem": 1
          },
          {
            "text": "ta yi ta saƙa da hannuwanta da farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ita kamar jirgin ’yan kasuwa ne",
            "poem": 1
          },
          {
            "text": "tana kawo abincinta daga nesa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Takan farka tun da sauran duhu;",
            "poem": 1
          },
          {
            "text": "ta tanada wa iyalinta abinci",
            "poem": 2
          },
          {
            "text": "ta kuma shirya wa ’yan matan gidanta ayyukan da za su yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Takan lura da gona sosai ta kuma saye ta;",
            "poem": 1
          },
          {
            "text": "daga abin da take samu na kuɗin shiga take shuka gonar inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Takan himmantu tă yi aikinta tuƙuru;",
            "poem": 1
          },
          {
            "text": "hannuwanta suna da ƙarfi domin ayyukanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Takan tabbata akwai riba a kasuwancinta,",
            "poem": 1
          },
          {
            "text": "kuma fitilarta ba ya mutuwa da dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Da hannunta take riƙe abin kaɗi",
            "poem": 1
          },
          {
            "text": "ta kuma kama abin saƙa da yatsotsinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Takan marabci talakawa",
            "poem": 1
          },
          {
            "text": "takan kuma taimaki masu bukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sa’ad da ƙanƙara ta fāɗi, ba ta jin tsoro saboda gidanta;",
            "poem": 1
          },
          {
            "text": "gama dukansu suna da tufafi masu kauri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Takan yi wa gadonta kayan shimfiɗa;",
            "poem": 1
          },
          {
            "text": "tufafinta kuma na lilin ne mai laushi na shunayya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ana girmama mijinta a ƙofar shiga birni",
            "poem": 1
          },
          {
            "text": "inda yakan zauna a cikin dattawan gari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Takan yi riguna na lilin ta sayar;",
            "poem": 1
          },
          {
            "text": "takan kuma sayar wa ’yan kasuwa da ɗamara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ƙarfi da mutunci su ne suturarta;",
            "poem": 1
          },
          {
            "text": "za tă iya yin dariyar kwanaki masu zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Tana magana da hikima,",
            "poem": 1
          },
          {
            "text": "kuma umarnai mai aminci yana a harshenta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Tana lura da sha’anin gidanta",
            "poem": 1
          },
          {
            "text": "kuma ba ta cin abincin ƙyuya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "’Ya’yanta sukan tashi su ce da ita mai albarka;",
            "poem": 1
          },
          {
            "text": "haka mijinta ma, yakan kuma yabe ta yana cewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "“Mata da yawa suna yin abubuwan yabo,",
            "poem": 1
          },
          {
            "text": "amma ke kin fi su duka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Kayan tsari yana ruɗu, kyau kuma kan shuɗe;",
            "poem": 1
          },
          {
            "text": "amma mace mai tsoron Ubangiji abar yabo ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Ka ba ta ladar da ya dace tă samo wa kanta,",
            "poem": 1
          },
          {
            "text": "bari kuma ayyukanta su kawo mata yabo a ƙofar shiga birni.",
            "poem": 2
          }
        ]
      }
    ],
