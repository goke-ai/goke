  "chapter": {
    "number": 21,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A hannun Ubangiji zuciyar sarki kamar ruwan rafi ne",
            "poem": 1
          },
          {
            "text": "wanda yake bi da shi duk inda ya so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mutum zai yi tunani hanyoyinsa daidai suke,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji yakan auna zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Yin abin da yake daidai da kuma nagari",
            "poem": 1
          },
          {
            "text": "Ubangiji ya fi yarda da shi fiye da hadaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Girmankai da fariya,",
            "poem": 1
          },
          {
            "text": "su ne fitilar mugaye, wannan kuwa zunubi ne!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Shirye-shiryen mai aiki tuƙuru kan kai ga riba",
            "poem": 1
          },
          {
            "text": "in kuwa ka cika gaggawa zai kai ga talauci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Dukiyar da aka samu ta wurin harshe mai yin ƙarya",
            "poem": 1
          },
          {
            "text": "tarin tururi ne da kuma mugun tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Rikicin mugaye zai yi gāba da su,",
            "poem": 1
          },
          {
            "text": "gama sun ƙi su yi abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Hanyar mai laifi karkatacciya ce,",
            "poem": 1
          },
          {
            "text": "amma halin marar laifi sukan aikata gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gara a zauna a kusurwar rufin ɗaki",
            "poem": 1
          },
          {
            "text": "da a zauna a gida ɗaya da mace mai fitina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Mugun mutum yakan zaƙu ya aikata mugunta;",
            "poem": 1
          },
          {
            "text": "maƙwabcinsa ba ya samun jinƙai daga gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sa’ad da aka hukunta mai ba’a marasa azanci suka yi wayo;",
            "poem": 1
          },
          {
            "text": "sa’ad da aka yi wa mai hikima umarni yakan sami sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mai Adalci kan lura da gidan mugu",
            "poem": 1
          },
          {
            "text": "kan kuma zama sanadin lalacin mugu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "In mutum ya toshe kunnuwansa ga kukan matalauci,",
            "poem": 1
          },
          {
            "text": "shi ma zai yi kukan neman taimako ba kuwa zai sami amsa ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kyautar da aka yi a asirce takan kwantar da fushi,",
            "poem": 1
          },
          {
            "text": "kuma cin hancin da aka rufe a cikin riga kan tā da fushi mai tsanani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sa’ad da aka yi adalci, yakan kawo farin ciki ga mai adalci",
            "poem": 1
          },
          {
            "text": "amma fargaba ga masu aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mutumin da ya kauce daga hanyar fahimi",
            "poem": 1
          },
          {
            "text": "kan zo ga hutu a ƙungiyar matattu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Duk mai son jin daɗi zai zama matalauci;",
            "poem": 1
          },
          {
            "text": "duk mai son ruwan inabi da mai ba zai taɓa zama mai arziki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Mugu kan zama abin fansa don adali,",
            "poem": 1
          },
          {
            "text": "marar aminci kuma don mai aikata gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Gara a zauna a hamada",
            "poem": 1
          },
          {
            "text": "da a zauna da mace mai fitina da kuma mugun hali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "A gidan mai hikima akwai wuraren ajiya na abinci da mai masu kyau,",
            "poem": 1
          },
          {
            "text": "amma wawa kan cinye duk abin da yake da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Duk wanda ya nemi adalci da ƙauna",
            "poem": 1
          },
          {
            "text": "kan sami rai, wadata da girmamawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mutum mai hikima kan fāɗa wa birnin jarumawa",
            "poem": 1
          },
          {
            "text": "ya kuma rushe katangar da suka dogara a kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk wanda yake lura da bakinsa da kuma harshensa",
            "poem": 1
          },
          {
            "text": "kan kiyaye kansa daga masifa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mai girmankai da kuma mai fariya, “Mai ba’a” ne sunansa;",
            "poem": 1
          },
          {
            "text": "yana yin abubuwa da girmankai ainun.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Marmarin rago zai zama mutuwarsa,",
            "poem": 1
          },
          {
            "text": "domin hannuwansa sun ƙi su yi aiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Dukan yini yana marmari ya sami ƙari,",
            "poem": 1
          },
          {
            "text": "amma mai adalci yakan bayar hannu sake.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Hadayar mugaye abin ƙyama ne,",
            "poem": 1
          },
          {
            "text": "balle ma in aka kawo da mugun nufi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Mai ba da shaidar ƙarya zai hallaka,",
            "poem": 1
          },
          {
            "text": "kuma duk wanda ya saurare shi zai hallaka har abada.",
            "poem": 2
          },
          {
            "noteId": 1122
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Mugun mutum kan yi tsayin daka,",
            "poem": 1
          },
          {
            "text": "amma mai aikata gaskiya kan yi tunani a kan abin da yake yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Babu hikima, babu tunani, babu shirin",
            "poem": 1
          },
          {
            "text": "da zai yi nasara a kan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Akan shirya doki domin ranar yaƙi,",
            "poem": 1
          },
          {
            "text": "amma nasara tana ga Ubangiji ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
