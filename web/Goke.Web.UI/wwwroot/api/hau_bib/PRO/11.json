  "chapter": {
    "number": 11,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar ma’aunan zamba,",
            "poem": 1
          },
          {
            "text": "amma ma’aunin da suke daidai ne abin farin cikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sa’ad da girman kai ya zo, sai shan kunya ta zo,",
            "poem": 1
          },
          {
            "text": "amma hikima kan zo tare da ƙasƙantar da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mutuncin masu aikata gaskiya takan bi da su,",
            "poem": 1
          },
          {
            "text": "amma marasa aminci sukan hallaka ta wurin cin amanar da suke yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Dukiya ba ta da amfani a ranar fushi,",
            "poem": 1
          },
          {
            "text": "amma adalci kan yi ceto daga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Adalcin marasa laifi kan miƙe hanyarsu,",
            "poem": 1
          },
          {
            "text": "amma akan ƙasƙantar da mugaye ta wurin muguntarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Adalcin masu aikata gaskiya kan cece su,",
            "poem": 1
          },
          {
            "text": "amma rashin aminci tarko ne ga mugayen sha’awace-sha’awace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sa’ad da mugu ya mutu, sa zuciyarsa kan hallaka;",
            "poem": 1
          },
          {
            "text": "dukan abin da ya sa zuciya daga ikonsa ba ya amfana kome.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Akan kuɓutar da mai adalci daga wahala,",
            "poem": 1
          },
          {
            "text": "sai ta dawo wa mugu a maimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Da bakinsa marar sanin Allah kan hallaka maƙwabcinsa,",
            "poem": 1
          },
          {
            "text": "amma ta wurin sani mai adalci kan kuɓuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sa’ad da adali ya yi nasara, birnin kan yi farin ciki;",
            "poem": 1
          },
          {
            "text": "sa’ad da mugu ya hallaka, akwai sowa ta farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ta wurin albarkar mai aikata gaskiya birni kan ƙasaita,",
            "poem": 1
          },
          {
            "text": "amma ta wurin bakin mugu akan hallaka birnin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mutum da ba shi da azanci kan ki maƙwabci,",
            "poem": 1
          },
          {
            "text": "amma mutum mai fahimi kan ƙame harshensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gulma yakan lalace yarda,",
            "poem": 1
          },
          {
            "text": "amma mutum mai aminci kan kiyaye asiri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Saboda rashin jagora al’umma takan fāɗi,",
            "poem": 1
          },
          {
            "text": "amma masu ba da shawara da yawa kan tabbatar da nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Duk wanda ya ɗauki lamunin wani tabbatacce zai sha wahala,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya ƙi ya sa hannu a ɗaukar lamuni ba ruwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mace mai hankali na samu bangirma,",
            "poem": 1
          },
          {
            "text": "amma azzalumai za su sami dukiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mutumin kirki kan ribance kansa,",
            "poem": 1
          },
          {
            "text": "amma mugu kan kawo wa kansa wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Mugun mutum kan sami albashin ƙarya",
            "poem": 1
          },
          {
            "text": "amma shi da ya shuka adalci zai girbe lada tabbatacce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Mutum mai adalci da gaske yakan sami rai,",
            "poem": 1
          },
          {
            "text": "amma shi da ya duƙufa ga aikata mugunta kan tarar da mutuwarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar mutane masu muguwar zuciya",
            "poem": 1
          },
          {
            "text": "amma yana jin daɗin waɗanda hanyoyinsu ba su da laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka tabbata da wannan. Mugaye ba za su tafi babu hukunci ba,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke masu adalci za su tafi babu hukunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Kamar zinariya a hancin alade",
            "poem": 1
          },
          {
            "text": "haka kyan mace wadda ba ta da hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sha’awar adalai kan ƙare kawai a aikata alheri,",
            "poem": 1
          },
          {
            "text": "amma sa zuciyar mugaye kan ƙarasa kawai a fushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Wani mutum kan bayar hannu sake, duk da haka yakan sami fiye;",
            "poem": 1
          },
          {
            "text": "wani yakan riƙe abin da ba nasa ba, amma sai ya ƙarasa cikin talauci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Mutum mai kyauta zai azurta;",
            "poem": 1
          },
          {
            "text": "shi da yakan taimake waɗansu, za a taimake shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Mutane kan la’anci mai ɓoye hatsi yana jira ya yi tsada,",
            "poem": 1
          },
          {
            "text": "amma albarka kan zauna a kan wanda yake niyya ya sayar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Duk mai nema alheri kan sami alheri,",
            "poem": 1
          },
          {
            "text": "amma mugu kan zo wa wanda yake nemansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Duk wanda ya dogara ga arzikinsa zai fāɗi,",
            "poem": 1
          },
          {
            "text": "amma adali zai yi nasara kamar koren ganye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Duk wanda ya kawo wahala wa iyalinsa zai gāji iska kawai,",
            "poem": 1
          },
          {
            "text": "kuma wawa zai zama bawan masu hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "’Ya’yan itacen adali itacen rai ne,",
            "poem": 1
          },
          {
            "text": "kuma duk mai samun rayuka mai hikima ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "In masu adalci sun sami abin da ya dace da su a duniya,",
            "poem": 1
          },
          {
            "text": "yaya zai zama ga marasa sanin Allah da kuma masu zunubi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
