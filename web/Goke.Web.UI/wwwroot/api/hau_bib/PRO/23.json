  "chapter": {
    "number": 23,
    "content": [
      {
        "type": "heading",
        "content": [
          "Faɗi 7"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sa’ad da ka zauna domin cin abinci da mai mulki,",
            "poem": 1
          },
          {
            "text": "ka lura sosai da abin da yake gabanka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "ka kuma sa wuƙa a maƙogwaronka",
            "poem": 1
          },
          {
            "text": "in kai mai ci da yawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kada ka yi marmarin abincinsa mai daɗi",
            "poem": 1
          },
          {
            "text": "gama wannan abinci ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 8"
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kada ka gajiyar da kanka don ka yi arziki;",
            "poem": 1
          },
          {
            "text": "ka kasance da hikimar dainawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Da ƙyiftawar ido a kan wadata ta ɓace,",
            "poem": 1
          },
          {
            "text": "gama tabbatacce sukan yi fikafikai",
            "poem": 2
          },
          {
            "text": "sukan tashi sama kamar gaggafa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 9"
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kada ka ci abincin mai rowa,",
            "poem": 1
          },
          {
            "text": "kada ka yi marmarin abincinsa mai daɗi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "gama shi wani irin mutum ne",
            "poem": 1
          },
          {
            "text": "wanda kullum yana tunani game da tsadar abincin.",
            "poem": 2
          },
          {
            "noteId": 1123
          },
          {
            "text": "Zai ce maka, “Ci ka sha,”",
            "poem": 1
          },
          {
            "text": "amma zuciyarsa ba ta tare da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Za ka yi amai ɗan abin da ka ci",
            "poem": 1
          },
          {
            "text": "dukan daɗin bakinka kuwa zai tafi a banza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 10"
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka yi magana da wawa,",
            "poem": 1
          },
          {
            "text": "gama zai yi wa maganar hikimarka ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 11"
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kada ka kawar da shaidar iyaka ta dā",
            "poem": 1
          },
          {
            "text": "ko ka ɗiba gonar marayu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "gama mai Kāriyarsu yana da ƙarfi;",
            "poem": 1
          },
          {
            "text": "zai kuwa yi magana dominsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 12"
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka mai da hankali ga umarni",
            "poem": 1
          },
          {
            "text": "ka kuma kasa kunne ga kalmomin sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 13"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kada ka bar yaro ba horo;",
            "poem": 1
          },
          {
            "text": "in ka yi masa horo da sanda, ba zai mutu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka hukunta shi da sanda",
            "poem": 1
          },
          {
            "text": "ka ceci ransa daga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 14"
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ɗana, in zuciyarka mai hikima ce,",
            "poem": 1
          },
          {
            "text": "to, zuciyata za tă yi murna;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "cikin cikina zai yi farin ciki",
            "poem": 1
          },
          {
            "text": "in leɓunanka suna maganar abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 15"
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka bar zuciyarka tă yi ƙyashin masu zunubi,",
            "poem": 1
          },
          {
            "text": "amma kullum tsoron Ubangiji za ka yi kishi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Tabbatacce akwai sa zuciya ta nan gaba dominka,",
            "poem": 1
          },
          {
            "text": "kuma sa zuciyarka ba za tă zama a banza ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 16"
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ka saurara, ɗana, ka zama mai hikima,",
            "poem": 1
          },
          {
            "text": "ka kafa zuciyarka a hanyar da take daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kada ka haɗa kai da waɗanda suke shan ruwan inabi da yawa",
            "poem": 1
          },
          {
            "text": "ko masu haɗama kansu da abinci,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "gama bugaggu da ruwan inabi da masu yawan ci sukan zama matalauta,",
            "poem": 1
          },
          {
            "text": "gama jiri yakan yi musu sutura da tsummoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 17"
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ka kasa kunne ga mahaifinka, wanda ya ba ka rai,",
            "poem": 1
          },
          {
            "text": "kada kuwa ka rena mahaifiyarka sa’ad da ta tsufa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ka saye gaskiya kada kuwa ka sayar da ita;",
            "poem": 1
          },
          {
            "text": "ka nemi hikima, horo da fahimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mahaifin adali yana da farin ciki sosai;",
            "poem": 1
          },
          {
            "text": "duk wanda yake da ɗa mai hikima yakan ji daɗinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Bari mahaifinka da mahaifiyarka su yi murna;",
            "poem": 1
          },
          {
            "text": "bari wadda ta haife ka tă yi farin ciki!",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 18"
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ɗana, ka ba ni zuciyarka",
            "poem": 1
          },
          {
            "text": "bari kuma idanunka su kiyaye hanyoyina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "gama karuwa rami ne mai zurfi",
            "poem": 1
          },
          {
            "text": "mace marar aminci matsattsiyar rijiya ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kamar ’yan fashi, takan kwanta tana jira",
            "poem": 1
          },
          {
            "text": "tana kuma ninka rashin aminci a cikin maza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 19"
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Wa yake wayyo? Wa yake baƙin ciki?",
            "poem": 1
          },
          {
            "text": "Wa yake neman fada? Wa yake gunaguni?",
            "poem": 1
          },
          {
            "text": "Wa yake da raunuka ba dalili? Wa yake da jan idanu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Waɗanda suke daɗe suna shan ruwan inabi,",
            "poem": 1
          },
          {
            "text": "waɗanda suke neman ƙoƙon damammen ruwan inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Kada ka ƙyifce ido a ruwan inabi sa’ad da ya yi ja,",
            "poem": 1
          },
          {
            "text": "sa’ad da yana da kyan gani a cikin ƙwarya,",
            "poem": 2
          },
          {
            "text": "sa’ad da yana gangarawa sumul a maƙogwaro!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "A ƙarshe yana sara kamar maciji",
            "poem": 1
          },
          {
            "text": "da kuma dafi kamar gamsheƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Idanunka za su riƙa gane-gane,",
            "poem": 1
          },
          {
            "text": "zuciyarka kuma za su riƙa tunani abubuwa masu rikitarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Za ka zama kamar wanda yake barci a tsakiyar tekuna,",
            "poem": 1
          },
          {
            "text": "kwance a sama itacen jirgin ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Za ka ce “Sun buge ni, amma ban ji ciwo ba!",
            "poem": 1
          },
          {
            "text": "Sun daddoke ni, amma ba na jin zafinsa!",
            "poem": 2
          },
          {
            "text": "Yaushe zan farka",
            "poem": 1
          },
          {
            "text": "don in ƙara shan wani?”",
            "poem": 2
          }
        ]
      }
    ],
