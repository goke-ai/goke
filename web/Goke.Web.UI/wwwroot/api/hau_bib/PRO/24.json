  "chapter": {
    "number": 24,
    "content": [
      {
        "type": "heading",
        "content": [
          "Faɗi 20"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kada ka yi ƙyashin mugaye,",
            "poem": 1
          },
          {
            "text": "kada ka yi sha’awar ƙungiyarsu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "gama leɓunansu suna maganar tā-da-na-zaune-tsaye ne.",
            "poem": 1
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 21"
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ta wurin hikima ce ake gina gida,",
            "poem": 1
          },
          {
            "text": "kuma ta wurin fahimi ake kafa ta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ta wurin sani ɗakunanta sukan cika",
            "poem": 1
          },
          {
            "text": "da kyawawan kayayyaki masu daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 22"
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mutum mai hikima yana da iko sosai,",
            "poem": 1
          },
          {
            "text": "kuma mutum mai sani yakan ƙaru da ƙarfi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "don yin yaƙi kana bukatar bishewa,",
            "poem": 1
          },
          {
            "text": "kuma don ka yi nasara kana bukatar mashawarta masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 23"
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Hikima ta yi wa wawa nisa ƙwarai",
            "poem": 1
          },
          {
            "text": "a cikin taro a ƙofar gari ba shi da ta cewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 24"
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk mai ƙulla mugunta",
            "poem": 1
          },
          {
            "text": "za a ɗauka shi mai kuta hargitsi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Makircin wawa zunubi ne,",
            "poem": 1
          },
          {
            "text": "mutane kuma sukan yi ƙyamar mai ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 25"
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "In ba ka da ƙarfi a lokacin wahala,",
            "poem": 1
          },
          {
            "text": "ka tabbatar kai marar ƙarfi ne sosai!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka kuɓutar da waɗanda ake ja zuwa inda za a kashe su;",
            "poem": 1
          },
          {
            "text": "ka riƙe waɗanda suke tangaɗi zuwa wajen yanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "In kuka ce, “Ai, ba mu san wani abu a kai wannan ba,”",
            "poem": 1
          },
          {
            "text": "shi da yake awon ba shi da zuciyar ganewa ne?",
            "poem": 2
          },
          {
            "text": "Shi da yake tsare ranka bai sani ba ne?",
            "poem": 1
          },
          {
            "text": "Ba zai sāka wa kowane mutum bisa ga abin da ya aikata ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 26"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka sha zuma, ɗana, ka sha zuma gama tana da kyau;",
            "poem": 1
          },
          {
            "text": "zuma daga kaki yana da zaƙi a harshenka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka kuma san cewa hikima tana da zaƙi ga rai;",
            "poem": 1
          },
          {
            "text": "in ka same ta, akwai sa zuciya ta nan gaba dominka,",
            "poem": 2
          },
          {
            "text": "kuma sa zuciyarka ba za tă zama a banza ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 27"
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kada ka kwanta kana fako kamar ɗan iska don ƙwace gidan adali,",
            "poem": 1
          },
          {
            "text": "kada ka ƙwace masa wurin zama;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "gama ko da adali ya fāɗi sau bakwai, yakan tashi kuma,",
            "poem": 1
          },
          {
            "text": "amma bala’i kan kwantar da mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 28"
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka yi dariya sa’ad da abokin gāba ya fāɗi;",
            "poem": 1
          },
          {
            "text": "sa’ad da ya yi tuntuɓe, kada ka yi farin ciki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "in ba haka ba in Ubangiji ya gani ba zai amince ba",
            "poem": 1
          },
          {
            "text": "ya kuma juye fushinsa daga gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 29"
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kada ka ji tsoro saboda masu mugunta",
            "poem": 1
          },
          {
            "text": "ko ka yi ƙyashin mugaye,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "gama mugu ba shi da zuciya ta nan gaba,",
            "poem": 1
          },
          {
            "text": "kuma fitilar mugaye za tă mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 30"
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka ji tsoron Ubangiji da kuma sarki, ɗana,",
            "poem": 1
          },
          {
            "text": "kuma kada ka haɗa kai da masu tayarwa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "gama za a tura waɗannan biyu zuwa hallaka nan da nan,",
            "poem": 1
          },
          {
            "text": "kuma wa ya sani irin bala’in da za su iya kawowa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "Waɗannan ma maganganun masu hikima ne,",
          {
            "text": "Nunan sonkai a shari’a ba shi da kyau.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Duk wanda ya ce wa mai laifi, “Ba ka da laifi”,",
            "poem": 1
          },
          {
            "text": "mutane za su la’ance shi al’umma kuma za tă ce ba a san shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Amma zai zama da lafiya ga duk waɗanda suka hukunta masu laifi,",
            "poem": 1
          },
          {
            "text": "kuma babban albarka zai zo a kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Amsa da take ta gaskiya",
            "poem": 1
          },
          {
            "text": "tana kamar sumba a leɓuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ka gama aikinka",
            "poem": 1
          },
          {
            "text": "ka kuma shirya gonakinka;",
            "poem": 2
          },
          {
            "text": "bayan haka, ka gina gidanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kada ka ba da shaida a kan maƙwabcinka ba tare da isashen dalili ba,",
            "poem": 1
          },
          {
            "text": "ko ka yi amfani da leɓunanka ka yi ruɗu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kada ka ce, “Zan yi masa kamar yadda ya yi mini;",
            "poem": 1
          },
          {
            "text": "zan rama abin da wannan mutum ya yi mini.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Na wuce cikin gonar rago,",
            "poem": 1
          },
          {
            "text": "na wuce cikin gonar inabin mutumin da ba shi da azanci;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "ƙayayyuwa sun yi girma ko’ina,",
            "poem": 1
          },
          {
            "text": "ciyayi sun rufe ƙasar,",
            "poem": 2
          },
          {
            "text": "katangar duwatsu duk ta rushe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Na yi tunani a zuciyata",
            "poem": 1
          },
          {
            "text": "na kuwa koyi darasi daga abin da na gani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ɗan barci, ɗan gyangyaɗi,",
            "poem": 1
          },
          {
            "text": "ɗan naɗin hannuwa don a huta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "sai talauci ya shigo maka kamar ’yan fashi",
            "poem": 1
          },
          {
            "text": "rashi kuma ya zo maka kamar mai hari.",
            "poem": 2
          }
        ]
      }
    ],
