  "chapter": {
    "number": 14,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mace mai hikima kan gina gidanta,",
            "poem": 1
          },
          {
            "text": "amma da hannunta wawiya takan rushe shi ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Wanda tafiyarsa ta aikata gaskiya ce kan ji tsoron Ubangiji,",
            "poem": 1
          },
          {
            "text": "amma wanda hanyoyinsa ba a kan gaskiya ba ne yakan rena shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Maganar wawa kan kawo sanda a bayansa,",
            "poem": 1
          },
          {
            "text": "amma leɓunan masu hikima kan tsare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Inda ba shanu, wurin sa wa dabbobi abinci zai kasance ba kome,",
            "poem": 1
          },
          {
            "text": "amma daga ƙarfin saniya ce yalwar girbi kan fito.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mashaidi na gaskiya ba ya ruɗu,",
            "poem": 1
          },
          {
            "text": "amma mashaidin ƙarya kan baza ƙarairayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mai ba’a kan nemi hikima amma ba ya samun kome,",
            "poem": 1
          },
          {
            "text": "amma sani kan zo a sawwaƙe ga mai basira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka guji wawa,",
            "poem": 1
          },
          {
            "text": "gama ba za ka sami sani a leɓunansa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Hikima masu la’akari shi ne su yi tunani a kan hanyoyinsu,",
            "poem": 1
          },
          {
            "text": "amma wautar wawaye ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Wawaye kan yi ba’a a gyaran zunubi,",
            "poem": 1
          },
          {
            "text": "amma fatan alheri yana samuwa a cikin masu aikata gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kowace zuciya ta san ɓacin ranta,",
            "poem": 1
          },
          {
            "text": "kuma babu wani dabam da zai yi rabon jin daɗinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Za a rushe gidan mugu,",
            "poem": 1
          },
          {
            "text": "amma tentin mai aikata gaskiya zai haɓaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Akwai hanyar da ta yi kamar tana daidai ga mutum,",
            "poem": 1
          },
          {
            "text": "amma a ƙarshe takan kai ga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ko cikin dariya zuciya takan yi ciwo,",
            "poem": 1
          },
          {
            "text": "kuma farin ciki kan iya ƙarasa a baƙin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Marasa bangaskiya za su sami sakamako cikakke saboda hanyoyinsu,",
            "poem": 1
          },
          {
            "text": "kuma mutumin kirki zai sami lada saboda nasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Marar azanci kan gaskata kome,",
            "poem": 1
          },
          {
            "text": "amma mai la’akari kan yi tunani game da matakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mai hikima kan ji tsoron Ubangiji ya kuma guji mugunta,",
            "poem": 1
          },
          {
            "text": "amma wawa yana da girman kai yakan yi kome da garaje.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mutum mai saurin fushi yakan yi ayyukan wauta,",
            "poem": 1
          },
          {
            "text": "akan kuma ƙi mai son nuna wayo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Marar azanci kan gāji wauta,",
            "poem": 1
          },
          {
            "text": "amma mai la’akari kan sami rawanin sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Masu mugunta za su rusuna a gaban masu kirki,",
            "poem": 1
          },
          {
            "text": "mugaye kuma za su yi haka a ƙofofin adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Maƙwabta sukan gudu daga matalauta,",
            "poem": 1
          },
          {
            "text": "amma masu arziki suna da abokai da yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Duk wanda ya rena maƙwabci ya yi zunubi,",
            "poem": 1
          },
          {
            "text": "amma mai albarka ne wanda yake alheri ga mabukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ba waɗanda suke ƙulla mugunta sukan kauce ba?",
            "poem": 1
          },
          {
            "text": "Amma waɗanda suke ƙulla abin da yake mai kyau sukan sami ƙauna da aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk aiki tuƙuru yakan kawo riba,",
            "poem": 1
          },
          {
            "text": "amma zama kana surutu kan kai ga talauci kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Dukiyar masu hikima ita ce rawaninsu,",
            "poem": 1
          },
          {
            "text": "amma wautar wawaye kan haifar da wauta ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Mashaidin gaskiya kan ceci rayuka,",
            "poem": 1
          },
          {
            "text": "amma mashaidin ƙarya mai ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Duk mai tsoron Ubangiji yana da zaunannen mafaka,",
            "poem": 1
          },
          {
            "text": "kuma ga ’ya’yansa zai zama mafaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Tsoron Ubangiji shi ne maɓulɓular rai",
            "poem": 1
          },
          {
            "text": "yakan juye mutum daga tarkon mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Yawan mutane shi ne ɗaukakar sarki,",
            "poem": 1
          },
          {
            "text": "amma in ba tare da mabiya ba sarki ba kome ba ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Mutum mai haƙuri yana da fahimi mai yawa,",
            "poem": 1
          },
          {
            "text": "amma mai saurin fushi yakan nuna wautarsa a fili.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Zuciya mai salama kan ba jiki rai,",
            "poem": 1
          },
          {
            "text": "amma kishi kan sa ƙasusuwa su yi ciwo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Duk wanda ya zalunci matalauci ya zagi Mahaliccinsu ke nan,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya yi alheri ga mabukata yana girmama Allah ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Sa’ad bala’i ya auku, mugaye kan fāɗi,",
            "poem": 1
          },
          {
            "text": "amma ko a mutuwa masu adalci suna da mafaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Hikima tana a zuciyar mai azanci,",
            "poem": 1
          },
          {
            "text": "kuma ko a cikin wawaye takan sa a santa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Adalci yakan ɗaukaka al’umma,",
            "poem": 1
          },
          {
            "text": "amma zunubi kan kawo kunya ga kowane mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Sarki yakan yi murna a kan bawa mai hikima,",
            "poem": 1
          },
          {
            "text": "amma bawa marar kunya kan jawo fushinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
