  "chapter": {
    "number": 10,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Karin maganar Solomon.",
          {
            "text": "Ɗa mai hikima yakan kawo wa mahaifinsa farin ciki,",
            "poem": 1
          },
          {
            "text": "amma wawan ɗa kan sa wa mahaifiyarsa baƙin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Dukiyar da aka samu a hanyar da ba tă dace ba, ba ta da albarka,",
            "poem": 1
          },
          {
            "text": "amma adalci kan ceci mutum daga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ubangiji ba ya barin mai adalci da yunwa",
            "poem": 1
          },
          {
            "text": "amma yakan lalace burin mugu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ragwanci kan sa mutum yă zama matalauci,",
            "poem": 1
          },
          {
            "text": "amma aiki tuƙuru kan ba da dukiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Shi da ya tattara hatsi da rani ɗa ne mai hikima,",
            "poem": 1
          },
          {
            "text": "amma shi da yakan yi barci a lokacin girbi ɗa ne wanda ya zama abin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Albarka kan zauna a kan mai adalci kamar rawani,",
            "poem": 1
          },
          {
            "text": "amma rikici kan sha bakin mugu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Tunawa da mai adalci albarka ne",
            "poem": 1
          },
          {
            "text": "amma sunan mugu zai ruɓe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Mai hikima a zuciya yakan yarda da umarni",
            "poem": 1
          },
          {
            "text": "amma surutun wawa kan kai ga lalaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mai mutunci yana tafiya lafiya,",
            "poem": 1
          },
          {
            "text": "amma shi da yake tafiya a karkatattun hanyoyi za a kama shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Shi da ya ƙyifta ido da mugunta kan jawo baƙin ciki",
            "poem": 1
          },
          {
            "text": "surutun wawa kuma kan zo da lalaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bakin adali maɓulɓulan rai ne,",
            "poem": 1
          },
          {
            "text": "amma kalmar mugun takan ɓoye makircinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ƙiyayya kan haddasa wahala,",
            "poem": 1
          },
          {
            "text": "amma ƙauna kan rufe dukan laifofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ana samun hikima a leɓunan masu fahimi,",
            "poem": 1
          },
          {
            "text": "amma bulala domin bayan marasa azanci ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Mai hikima kan yi ajiyar sani,",
            "poem": 1
          },
          {
            "text": "amma bakin wawa kan gayyaci lalaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Dukiyar masu arziki yakan zama mafakar birninsu,",
            "poem": 1
          },
          {
            "text": "amma talauci shi ne lalacin matalauci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Hakkin adalai kan kawo musu rai,",
            "poem": 1
          },
          {
            "text": "amma albashin mugaye kan kawo musu hukunci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Duk wanda ya mai da hankali ga horo kan nuna hanyar rai,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya ƙyale gyara kan sa waɗansu su kauce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk wanda ya ɓoye ƙiyayyarsa yana da ƙarya a leɓunansa,",
            "poem": 1
          },
          {
            "text": "duk kuma wanda yake baza ƙarairayi wawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Sa’ad da magana ta yi yawa, ba a rasa zunubi a ciki,",
            "poem": 1
          },
          {
            "text": "amma shi da ya ƙame harshensa mai hikima ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Harshen adali azurfa ce zalla,",
            "poem": 1
          },
          {
            "text": "amma zuciyar mugu ba ta da wani amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Leɓunan adalai kan amfane yawanci,",
            "poem": 1
          },
          {
            "text": "amma wawa kan mutu saboda rashin azanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Albarkar Ubangiji kan kawo wadata,",
            "poem": 1
          },
          {
            "text": "ba ya kuma ƙara wahala a kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Wawa yakan ji daɗi halin mugunta,",
            "poem": 1
          },
          {
            "text": "amma mutum mai fahimi kan ji daɗin hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Abin da mugu ke tsoro shi ne zai same shi;",
            "poem": 1
          },
          {
            "text": "abin da adali ke bukata yakan sami biyan bukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’ad da hadiri ya taso, yakan watsar da mugaye,",
            "poem": 1
          },
          {
            "text": "amma adalai za su tsaya daram har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Kamar yadda ruwan tsami yake ga haƙora hayaƙi kuma ga idanu,",
            "poem": 1
          },
          {
            "text": "haka malalaci yake ga wanda ya aike shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Tsoron Ubangiji kan ƙara tsawon rai,",
            "poem": 1
          },
          {
            "text": "amma akan gajartar da shekarun mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Abin da adali yake sa rai yakan kai ga farin ciki,",
            "poem": 2
          },
          {
            "text": "amma sa zuciyar mugu ba ya haifar da kome.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Hanyar Ubangiji mafaka ce ga adalai",
            "poem": 1
          },
          {
            "text": "amma lalaci ne ga waɗanda suke aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ba za a taɓa tumɓuke masu adalci ba,",
            "poem": 1
          },
          {
            "text": "amma mugaye ba za su ci gaba da kasance a ƙasar ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Bakin adalai kan fitar da hikima,",
            "poem": 1
          },
          {
            "text": "amma za a dakatar da mugun harshe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Leɓunan adalai sun san abin da ya dace,",
            "poem": 1
          },
          {
            "text": "amma bakunan mugaye sun san abin da yake mugu ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
