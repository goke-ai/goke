  "chapter": {
    "number": 13,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗa mai hikima yakan mai da hankali ga umarnin mahaifinsa,",
            "poem": 1
          },
          {
            "text": "amma mai ba’a ba ya sauraran kwaɓi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Daga abin da ya fito leɓunan mutum ne mutum kan ji daɗin abubuwa masu kyau,",
            "poem": 1
          },
          {
            "text": "amma marar aminci yakan ƙosa ya tā-da-na-zaune-tsaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duk mai lura da leɓunansa yakan lura da ransa,",
            "poem": 1
          },
          {
            "text": "amma duk mai magana da haushi zai kai ga lalaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Rago ya ƙosa ya sami wani abu ainun amma ba ya samun kome,",
            "poem": 1
          },
          {
            "text": "amma sha’awar mai aiki tuƙuru yakan ƙoshi sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Adali yana ƙin abin da yake ƙarya,",
            "poem": 1
          },
          {
            "text": "amma mugu kan jawo kunya da ƙasƙanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Adalci yakan lura da mutum mai mutunci,",
            "poem": 1
          },
          {
            "text": "amma mugunta takan sha kan mai zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Wani mutum yakan ɗauki kansa mai arziki ne, alhali ba shi da kome,",
            "poem": 1
          },
          {
            "text": "wani ya ɗauki kansa shi matalauci ne, alhali shi mawadaci ne ƙwarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Arzikin mutum zai iya kuɓutar da ransa,",
            "poem": 1
          },
          {
            "text": "amma matalauci ba ya jin barazana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Hasken masu adalci kan haskaka ƙwarai,",
            "poem": 1
          },
          {
            "text": "amma fitilar mugaye mutuwa take.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Girmankai kan jawo faɗa ne kawai,",
            "poem": 1
          },
          {
            "text": "amma hikima tana samuwa a waɗanda suke jin shawara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kuɗin da aka same su a rashin gaskiya yakan ɓace da sauri,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya tara kuɗi kaɗan-kaɗan za su yi ta ƙaruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa zuciyar da aka ɗaga zuwa gaba kan sa zuciya tă yi ciwo,",
            "poem": 1
          },
          {
            "text": "amma marmarin da aka ƙosar yana kamar itacen rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duk wanda ya rena umarni zai ɗanɗana ƙodarsa,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya yi biyayya da umarni zai sami lada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Koyarwar mai hikima maɓulɓulan rai ne,",
            "poem": 1
          },
          {
            "text": "mai juyar da mutum daga tarkon mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Fahimta mai kyau kan sami tagomashi,",
            "poem": 1
          },
          {
            "text": "amma hanyar marar aminci tana da wuya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kowane mai azanci yakan nuna sani,",
            "poem": 1
          },
          {
            "text": "amma wawa yakan yi tallen wawancinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mugun ɗan saƙo kan shiga wahala,",
            "poem": 1
          },
          {
            "text": "amma jakadan da mai aminci yakan kawo warkarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk wanda ya ƙyale horo yakan kai ga talauci da kuma kunya,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya karɓi gyara yakan sami girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Marmarin da aka cika yana da daɗi ga rai,",
            "poem": 1
          },
          {
            "text": "amma wawa yana ƙyamar juyewa daga mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Shi da yake tafiya tare da masu hikima yakan ƙaru da hikima,",
            "poem": 1
          },
          {
            "text": "amma abokin wawaye zai yi fama da lahani.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Rashin sa’a kan fafare mai zunubi,",
            "poem": 1
          },
          {
            "text": "amma wadata ce ladar adali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mutumin kirki kan bar gādo wa ’ya’ya ’ya’yansa,",
            "poem": 1
          },
          {
            "text": "amma arzikin mai zunubi ajiye ne da aka yi wa mai adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Gonar matalauci za tă iya ba da abinci a yalwace,",
            "poem": 1
          },
          {
            "text": "amma rashin adalci kan share shi tas.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Duk wanda ba ya horon ɗansa ba ƙaunarsa yake yi ba,",
            "poem": 1
          },
          {
            "text": "amma duk mai ƙaunarsa yakan kula ya hore shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Masu adalci sukan ci isashen abinci,",
            "poem": 1
          },
          {
            "text": "amma cikin mugaye na fama da yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
