  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ƙarin ribar hikima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗana, kada ka manta da koyarwata,",
            "poem": 1
          },
          {
            "text": "amma ka kiyaye umarnaina a cikin zuciyarka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "gama za su ƙara maka tsawon rai da shekaru masu yawa",
            "poem": 1
          },
          {
            "text": "su kuma kawo maka wadata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kada ka bar ƙauna da aminci su rabu da kai;",
            "poem": 1
          },
          {
            "text": "ka ɗaura su kewaye da wuyanka,",
            "poem": 2
          },
          {
            "text": "ka rubuta su a allon zuciyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sa’an nan za ka sami tagomashi da kuma suna mai kyau",
            "poem": 1
          },
          {
            "text": "a gaban Allah da kuma a gaban mutane.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka dogara ga Ubangiji da dukan zuciyarka",
            "poem": 1
          },
          {
            "text": "kada kuma ka dangana ga ganewarka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "cikin dukan hanyoyinka ka amince da shi,",
            "poem": 1
          },
          {
            "text": "zai kuwa sa hanyoyinka su miƙe.",
            "poem": 2
          },
          {
            "noteId": 1120
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kada ka zama mai hikima a ganinka;",
            "poem": 1
          },
          {
            "text": "ka ji tsoron Ubangiji ka kuma guji mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Wannan zai ba wa jikinka lafiya",
            "poem": 1
          },
          {
            "text": "yă kuma adana ƙasusuwanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka girmama Ubangiji da dukan dukiyarka,",
            "poem": 1
          },
          {
            "text": "ta wurin miƙa masa nunan fari na dukan amfanin gonarka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "ta haka rumbunanka za su cika har su zuba,",
            "poem": 1
          },
          {
            "text": "randunanka kuma su cika har baki da sabon ruwan inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ɗana, kada ka rena horon Ubangiji",
            "poem": 1
          },
          {
            "text": "kada kuma ka ƙi tsawatawarsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "domin Ubangiji yakan hori waɗanda yake ƙauna,",
            "poem": 1
          },
          {
            "text": "kamar yadda mahaifi yake yin wa ɗa da yake fariya da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mai albarka ne mutumin da ya sami hikima,",
            "poem": 1
          },
          {
            "text": "mutumin da ya sami fahimi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "gama ta fi azurfa riba",
            "poem": 1
          },
          {
            "text": "tana kuma da amfani fiye da zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ta fi lu’ulu’u daraja;",
            "poem": 1
          },
          {
            "text": "ba a kwatanta abin da ka fi sha’awa da ita.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Tsawon rai yana a cikin hannunta na dama;",
            "poem": 1
          },
          {
            "text": "a hannunta na hagu kuwa akwai arziki da bangirma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Hanyoyinta hanyoyi ne masu daɗi,",
            "poem": 1
          },
          {
            "text": "dukan hanyoyinta kuma salama ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ita itacen rai ne ga waɗanda suka rungume ta;",
            "poem": 1
          },
          {
            "text": "waɗanda suke riƙe da ta za su zama masu albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ta wurin hikima Ubangiji ya kafa harsashin duniya,",
            "poem": 1
          },
          {
            "text": "ta wurin fahimi ya shirya sammai inda suke;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "ta wurin sani aka rarraba zurfafa,",
            "poem": 1
          },
          {
            "text": "gizagizai kuma suka zubo raɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ɗana, ka riƙe sahihiyar shari’a da kuma basira,",
            "poem": 1
          },
          {
            "text": "kada ka bar su su rabu da kai;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "za su zama rai a gare ka,",
            "poem": 1
          },
          {
            "text": "abin adon da zai gyara wuyanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sa’an nan za ka bi hanyarka lafiya,",
            "poem": 1
          },
          {
            "text": "ƙafarka kuwa ba zai yi tuntuɓe ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "sa’ad da ka kwanta, ba za ka ji tsoro ba;",
            "poem": 1
          },
          {
            "text": "sa’ad da ka kwanta, barci zai yi maka daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ka ji tsoron masifar da za tă faru farat ɗaya",
            "poem": 1
          },
          {
            "text": "ko lalacin da yakan auka wa mugaye,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "gama Ubangiji zai zama ƙarfin halinka",
            "poem": 1
          },
          {
            "text": "zai kuwa kiyaye ƙafarka daga fāɗawa a tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Kada ka ƙi yin alheri ga duk wanda ya dace,",
            "poem": 1
          },
          {
            "text": "sa’ad da kana iya yin haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kada ka ce wa maƙwabcinka",
            "poem": 1
          },
          {
            "text": "“Ka yă dakata sai gobe,”",
            "poem": 2
          },
          {
            "text": "idan kana iya taimakonsa yanzu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kada ka shirya kome da zai cuci maƙwabcinka,",
            "poem": 1
          },
          {
            "text": "wanda yake zama da aminci kusa da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Kada ka zargi mutum ba dalili,",
            "poem": 1
          },
          {
            "text": "sa’ad da bai yi laifi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Kada ka ji kishin mai tā-da-na-zaune-tsaye",
            "poem": 1
          },
          {
            "text": "ko ka yi sha’awar aikata ayyukansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Gama Ubangiji yana ƙyama mai aikata mugunta",
            "poem": 1
          },
          {
            "text": "amma yakan rungumi adalin da ya amince da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "La’anar Ubangiji tana a gidan mugaye,",
            "poem": 1
          },
          {
            "text": "amma yakan albarkaci gidan adali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Yakan yi wa masu girman kai ba’a",
            "poem": 1
          },
          {
            "text": "amma yakan yi wa mai sauƙinkai alheri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Masu hikima sukan sami kyakkyawan suna,",
            "poem": 1
          },
          {
            "text": "amma wawaye sukan ƙara wa kansu shan kunya.",
            "poem": 2
          }
        ]
      }
    ],
