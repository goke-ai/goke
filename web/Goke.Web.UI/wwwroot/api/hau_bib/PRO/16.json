  "chapter": {
    "number": 16,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ga mutum ne shirye-shiryen zuciya suke,",
            "poem": 1
          },
          {
            "text": "amma daga Ubangiji ne amshin harshe kan zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Dukan hanyoyin mutum sukan yi kamar marar laifi ne gare shi,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji yakan auna manufofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka miƙa wa Ubangiji dukan abin da kake yi,",
            "poem": 1
          },
          {
            "text": "shirye-shiryenka kuwa za su yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ubangiji yana yin kome domin amfaninsa,",
            "poem": 1
          },
          {
            "text": "har ma da mugaye domin ranar masifa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar dukan zuciya mai girman kai.",
            "poem": 1
          },
          {
            "text": "Ka tabbata da wannan. Ba za su kuɓuta daga hukunci ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ta wurin ƙauna da aminci akan yi kafarar zunubi;",
            "poem": 1
          },
          {
            "text": "ta wurin tsoron Ubangiji mutum kan guji mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sa’ad da hanyoyin mutum sun gamshi Ubangiji,",
            "poem": 1
          },
          {
            "text": "yakan sa abokan gāban mutumin ma su zauna lafiya da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Gara ka sami kaɗan ta hanyar adalci",
            "poem": 1
          },
          {
            "text": "da sami riba mai yawa ta hanyar rashin gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "’Yan Adam sukan yi shirye-shiryensu a zukatansu,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji ne yake da ikon cika matakansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Leɓunan sarki kan yi magana kamar ta wurin ikon Allah,",
            "poem": 1
          },
          {
            "text": "kuma bai kamata bakinsa ya yi kuskure a yanke shari’a ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ma’aunai da magwajin gaskiya daga Ubangiji ne;",
            "poem": 1
          },
          {
            "text": "dukan ma’aunai da suke cikin jaka yinsa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sarakuna suna ƙyamar abin da ba shi da kyau,",
            "poem": 1
          },
          {
            "text": "gama an kafa kujerar sarauta ta wurin adalci ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sarakuna sukan ji daɗi leɓuna masu yin gaskiya;",
            "poem": 1
          },
          {
            "text": "sukan darjanta mutumin da yake faɗin gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Fushin sarki ɗan saƙon mutuwa ne,",
            "poem": 1
          },
          {
            "text": "amma mai hikima yakan faranta masa rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sa’ad da fuskar sarki ta haska, yana nufin rai ke nan;",
            "poem": 1
          },
          {
            "text": "tagomashinsa yana kamar girgijen ruwa a bazara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ya ma fi kyau ka sami hikima fiye da zinariya,",
            "poem": 1
          },
          {
            "text": "ka zaɓi fahimi a maimakon azurfa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Buɗaɗɗiyar hanyar masu aikata gaskiya kan guje wa mugunta;",
            "poem": 1
          },
          {
            "text": "duk wanda yake lura da hanyarsa yakan lura da ransa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Girmankai yakan zo kafin hallaka,",
            "poem": 1
          },
          {
            "text": "girman kai yakan zo kafin fāɗuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Gara ka zama ɗaya daga cikin matalauta masu sauƙinkai,",
            "poem": 1
          },
          {
            "text": "da ka raba ganima da masu girman kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Duk wanda ya mai da hankali ga umarni yakan yi nasara,",
            "poem": 1
          },
          {
            "text": "kuma mai albarka ne wanda yake dogara ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Akan ce da masu hikima a zuciya hazikai,",
            "poem": 1
          },
          {
            "text": "kuma kalmomi masu daɗi kan inganta umarni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Fahimi shi ne maɓulɓular rai ga waɗanda suke da shi,",
            "poem": 1
          },
          {
            "text": "amma wauta kan kawo hukunci ga wawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Zuciyar mai hikima kan bi da bakinsa,",
            "poem": 1
          },
          {
            "text": "kuma leɓunansa kan inganta umarni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Kalmomi masu daɗi suna kama da kakin zuma,",
            "poem": 1
          },
          {
            "text": "mai zaƙi ga rai da kuma warkarwa ga ƙasusuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Akwai hanyar da ta yi kamar daidai ga mutum,",
            "poem": 1
          },
          {
            "text": "amma a ƙarshe takan kai ga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Marmarin cin abinci yakan yi wa ɗan ƙodago aiki;",
            "poem": 1
          },
          {
            "text": "yunwarsa kan sa ya ci gaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Mutumin banza yakan ƙulla mugunta,",
            "poem": 1
          },
          {
            "text": "kuma jawabinsa yana kama da wuta mai ƙuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Fitinannen mutum yakan zuga tashin hankali,",
            "poem": 1
          },
          {
            "text": "mai gulma kuma yakan raba abokai na kusa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Mutum mai tā-da-na-zaune-tsaye yakan ruɗi maƙwabcinsa",
            "poem": 1
          },
          {
            "text": "ya kai shi a hanyar da ba ta da kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Duk wanda ya ƙyifce da idonsa yana ƙulla maƙarƙashiya ce;",
            "poem": 1
          },
          {
            "text": "duk wanda ya murguɗa leɓunansa yana niyya aikata mugunta ke nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Furfura rawani ne mai daraja;",
            "poem": 1
          },
          {
            "text": "akan same ta ta wurin yin rayuwa ta adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Gara ka zama mai haƙuri da ka zama jarumi,",
            "poem": 1
          },
          {
            "text": "ya fi kyau ka iya mallakar kanka fiye da mallakar birane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Akan jefa ƙuri’a a kan cinya,",
            "poem": 1
          },
          {
            "text": "amma kowace shawara mai kyau daga Ubangiji ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
