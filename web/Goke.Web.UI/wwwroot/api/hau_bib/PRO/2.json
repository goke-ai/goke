  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ribar ɗa’ar hikima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ɗana, in ka yarda da kalmomina",
            "poem": 1
          },
          {
            "text": "ka kuma ajiye umarnaina a cikinka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "kana kasa kunne ga abin da yake na hikima,",
            "poem": 1
          },
          {
            "text": "kana kuma yin ƙoƙari ka fahimce shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "in kuma ka kira ga tsinkaya",
            "poem": 1
          },
          {
            "text": "ka kuma kira da ƙarfi don ganewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "in ka neme shi yadda ake neman azurfa",
            "poem": 1
          },
          {
            "text": "ka kuma neme shi kamar yadda ake neman ɓoyayyiyar dukiya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "to, za ka gane tsoron Ubangiji",
            "poem": 1
          },
          {
            "text": "ka kuma sami sanin Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama Ubangiji yana ba da hikima,",
            "poem": 1
          },
          {
            "text": "daga bakinsa kuma, sani da ganewa sukan fito.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yana riƙe da nasara a ma’aji don masu yin gaskiya,",
            "poem": 1
          },
          {
            "text": "shi ne mafaka ga waɗanda tafiyarsu ba ta da laifi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "gama yana tsare abin da masu adalci suke bukata",
            "poem": 1
          },
          {
            "text": "yana kuma tsare hanyar amintattunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sa’an nan za ku fahimci abin da yake daidai da abin da yake na adalci",
            "poem": 1
          },
          {
            "text": "da abin da yake gaskiya, da kowace hanya mai kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama hikima za tă shiga cikin zuciyarka,",
            "poem": 1
          },
          {
            "text": "sani kuma zai faranta maka rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Tsinkaya za tă tsare ka,",
            "poem": 1
          },
          {
            "text": "ganewa kuma za tă yi maka jagora.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Hikima za tă cece ka daga hanyoyin mugayen mutane,",
            "poem": 1
          },
          {
            "text": "daga kalmomin mutane masu ɓatanci,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "waɗanda suke barin miƙaƙƙun hanyoyi",
            "poem": 1
          },
          {
            "text": "don su yi tafiya a hanyoyi masu duhu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "waɗanda suke jin daɗin yin abin da ba shi da kyau",
            "poem": 1
          },
          {
            "text": "suna kuma farin ciki a mugayen ɓatanci,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "waɗanda hanyoyinsu karkatattu ne",
            "poem": 1
          },
          {
            "text": "waɗanda kuma suke cuku-cuku a hanyoyinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Zai kiyaye ku kuma daga mazinaciya,",
            "poem": 1
          },
          {
            "text": "daga mace mai lalata, mai ƙoƙarin kama ka da daɗin bakinta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "wadda ta bar mijin ƙuruciyarta",
            "poem": 1
          },
          {
            "text": "ta kuma ƙyale alkawarin da ta yi a gaban Allah.",
            "poem": 2
          },
          {
            "noteId": 1119
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Gama gidanta yana kai ga mutuwa",
            "poem": 1
          },
          {
            "text": "hanyarta kuma ga ruhohin matattu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Duk wanda ya ziyarce ta ba ya ƙara komowa",
            "poem": 1
          },
          {
            "text": "ba zai ƙara komowa ga hanyar rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Don haka dole ku yi tafiya a hanyoyin mutanen kirki",
            "poem": 1
          },
          {
            "text": "ku kuma yi ta bi hanyoyin adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Gama masu aikata gaskiya za su zauna a cikin ƙasar,",
            "poem": 1
          },
          {
            "text": "marasa laifi kuma za su kasance a cikinta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "amma za a fid da mugaye daga ƙasar,",
            "poem": 1
          },
          {
            "text": "za a tumɓuke marasa aminci kuma daga gare ta.",
            "poem": 2
          }
        ]
      }
    ],
