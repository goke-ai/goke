  "chapter": {
    "number": 15,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Amsa da tattausar harshe kan kwantar da fushi,",
            "poem": 1
          },
          {
            "text": "amma magana da kakkausan harshe kan kuta fushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Harshen mai hikima kan yi zance mai kyau a kan sani,",
            "poem": 1
          },
          {
            "text": "amma bakin wawa kan fitar da wauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Idanun Ubangiji suna a ko’ina,",
            "poem": 1
          },
          {
            "text": "suna lura da masu aikata mugunta da masu aikata alheri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Harshen da ya kawo warkarwa shi ne itacen rai,",
            "poem": 1
          },
          {
            "text": "amma harshe mai ƙarya kan ragargaza zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wawa yakan ƙi kulawa da horon da mahaifinsa yake masa,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya yarda da gyara kan nuna azanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gidan adali yana da dukiya mai yawa,",
            "poem": 1
          },
          {
            "text": "amma albashin mugaye kan kawo musu wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Leɓunan masu hikima sukan baza sani;",
            "poem": 1
          },
          {
            "text": "ba haka zukatan wawaye suke ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar hadayar mugaye,",
            "poem": 1
          },
          {
            "text": "amma addu’ar masu aikata gaskiya kan sa ya ji daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ubangiji yana ƙin hanyar mugaye",
            "poem": 1
          },
          {
            "text": "amma yana ƙaunar waɗanda suke neman adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Horo mai tsanani yana jiran duk wanda ya bar hanya;",
            "poem": 1
          },
          {
            "text": "wanda ya ƙi gyara zai mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Mutuwa da Hallaka suna nan a fili a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "balle fa zukatan mutane!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mai yin ba’a yakan ƙi gyara;",
            "poem": 1
          },
          {
            "text": "ba zai nemi shawara mai hikima ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zuciya mai farin ciki kan sa fuska tă yi haske,",
            "poem": 1
          },
          {
            "text": "amma ciwon zuciya kan ragargaza rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zuciya mai la’akari kan nemi sani,",
            "poem": 1
          },
          {
            "text": "amma bakin wawa wauta ce ke ciyar da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Dukan kwanakin mutumin da ake danniya fama yake yi,",
            "poem": 1
          },
          {
            "text": "amma zuciya mai farin ciki yana yin biki kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Gara a kasance da kaɗan da tsoron Ubangiji",
            "poem": 1
          },
          {
            "text": "da a kasance da arziki mai yawa game da wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gara a ci abincin kayan ganye inda akwai ƙauna",
            "poem": 1
          },
          {
            "text": "da a ci kiwotaccen saniya inda ƙiyayya take.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Mutum mai zafin rai kan kawo faɗa,",
            "poem": 1
          },
          {
            "text": "amma mutum mai haƙuri kan kwantar da faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "An tare hanyar rago da ƙayayyuwa,",
            "poem": 1
          },
          {
            "text": "amma hanyar mai aikata gaskiya buɗaɗɗiyar hanya ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ɗa mai hikima kan kawo farin ciki wa mahaifinsa,",
            "poem": 1
          },
          {
            "text": "amma wawa yakan rena mahaifiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Wauta kan sa mutum marar azanci ya yi farin ciki,",
            "poem": 1
          },
          {
            "text": "amma mai basira kan kiyaye abin da yake yi daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Shirye-shirye sukan lalace saboda rashin neman shawara,",
            "poem": 1
          },
          {
            "text": "amma tare da mashawarta masu yawa za su yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Mutum yakan yi farin ciki a ba da amsar da take daidai,",
            "poem": 1
          },
          {
            "text": "kuma ina misali a yi magana a lokacin da ya dace!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Hanyar rai na yin jagora ya haura wa masu hikima",
            "poem": 1
          },
          {
            "text": "don ta kiyaye shi daga gangarawa zuwa kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ubangiji yakan rushe gidan mai girman kai",
            "poem": 1
          },
          {
            "text": "amma yakan kiyaye iyakokin gwauruwa daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ubangiji yana ƙyamar tunanin mugaye,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke da tunani masu tsabta yakan ji daɗinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Mutum mai haɗama kan kawo wahala ga iyalinsa,",
            "poem": 1
          },
          {
            "text": "amma wanda yake ƙin cin hanci zai rayu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Zuciyar mai adalci takan auna amsoshinta,",
            "poem": 1
          },
          {
            "text": "amma bakin mugu yakan fitar da mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ubangiji yana nesa da mugaye",
            "poem": 1
          },
          {
            "text": "amma yakan ji addu’ar adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Fuska mai fara’a takan kawo farin ciki ga zuciya,",
            "poem": 1
          },
          {
            "text": "kuma labari mai daɗi na kawo lafiya ga ƙasusuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Duk wanda ya mai da hankali sa’ad da ake tsawata masa",
            "poem": 1
          },
          {
            "text": "ba zai kasance dabam a cikin masu hikima ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Duk waɗanda suka ƙi horon sun rena kansu ke nan,",
            "poem": 1
          },
          {
            "text": "amma duk waɗanda sun yarda da gyara sukan ƙara basira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Tsoron Ubangiji yakan koya wa mutum hikima,",
            "poem": 1
          },
          {
            "text": "kuma sauƙinkai kan zo kafin girmamawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
