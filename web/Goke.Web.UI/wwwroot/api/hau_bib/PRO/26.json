  "chapter": {
    "number": 26,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kamar ƙanƙara a rani ko ruwan sama a lokacin girbi,",
            "poem": 1
          },
          {
            "text": "haka girmamawa bai dace da wawa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar gwara mai yawo ko alallaka mai firiya,",
            "poem": 2
          },
          {
            "text": "haka yake da la’anar da ba tă dace tă kama ka ba take.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bulala don doki, linzami don jaki,",
            "poem": 1
          },
          {
            "text": "sanda kuma don bayan wawaye!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kada ka amsa wa wawa bisa ga wautarsa,",
            "poem": 1
          },
          {
            "text": "in ba haka ba kai kanka za ka zama kamar sa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka amsa wa wawa bisa ga wautarsa,",
            "poem": 1
          },
          {
            "text": "in ba haka ba zai ga kansa mai hikima ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kamar datsewar ƙafafun wani ko shan dafi",
            "poem": 1
          },
          {
            "text": "haka yake da a aika da saƙo ta hannun wawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kamar ƙafafun gurgun da suka yi laƙwas",
            "poem": 1
          },
          {
            "text": "haka karin magana yake a bakin wawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kamar ɗaura dutse a majajjawa",
            "poem": 1
          },
          {
            "text": "haka yake da girmama wawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kamar suƙar ƙaya a hannun wanda ya bugu",
            "poem": 1
          },
          {
            "text": "haka karin magana yake a bakin wawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kamar maharbi wanda yake jin wa kowa rauni",
            "poem": 1
          },
          {
            "text": "haka yake da duk wanda ya yi hayan wawa ko wani mai wucewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kamar yadda kare kan koma ga amansa,",
            "poem": 1
          },
          {
            "text": "haka wawa kan maimaita wautarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gwamma riƙaƙƙen wawa",
            "poem": 1
          },
          {
            "text": "da mutum mai ganin kansa mai hikima ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Rago yakan ce, “Akwai zaki a kan hanya,",
            "poem": 1
          },
          {
            "text": "zaki mai faɗa yana yawo a tituna!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kamar yadda ƙofa kan juya a ƙyaurensa,",
            "poem": 1
          },
          {
            "text": "haka rago yake jujjuya a gadonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Rago kan sa hannunsa a kwano",
            "poem": 1
          },
          {
            "text": "ba ya ma iya ɗaga shi ya kai bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Rago yana gani yana da hikima",
            "poem": 1
          },
          {
            "text": "fiye da mutane bakwai da suke ba da amsa da dalilai a kan ra’ayinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kamar wani da ya kama kare a kunnuwa",
            "poem": 1
          },
          {
            "text": "haka yake da mai wucewa da ya tsoma baki a faɗan da ba ruwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kamar yadda mahaukaci yake harbin",
            "poem": 1
          },
          {
            "text": "cukwimai ko kibiyoyi masu dafi",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "haka yake da mutumin da ya ruɗe maƙwabci",
            "poem": 1
          },
          {
            "text": "sa’an nan ya ce, “Wasa ne kawai nake yi!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "In ba itace wuta takan mutu;",
            "poem": 1
          },
          {
            "text": "haka kuma in ba mai gulma ba za a yi faɗa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kamar yadda gawayi yake ga murhu, itace kuma ga wuta,",
            "poem": 1
          },
          {
            "text": "haka mutum mai neman faɗa yake ga faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Kalmomin mai gulma suna kama da burodi mai daɗi;",
            "poem": 1
          },
          {
            "text": "sukan gangara can cikin cikin mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Kamar kaskon da aka dalaye da azurfar da ba a tace ba",
            "poem": 1
          },
          {
            "text": "haka leɓuna masu mugun zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mai yin ƙiyayya yakan ɓoye kansa da maganar bakinsa,",
            "poem": 1
          },
          {
            "text": "amma a cikin zuciyarsa yana cike da munafunci",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ko da jawabinsa ya ɗauki hankali, kada ka gaskata shi,",
            "poem": 1
          },
          {
            "text": "gama abubuwa ƙyama guda bakwai sun cika zuciyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Wataƙila ya ɓoye ƙiyayyarsa da ƙarya,",
            "poem": 1
          },
          {
            "text": "duk da haka za a tone muguntarsa a cikin taro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "In mutum ya haƙa rami, shi zai fāɗi a ciki;",
            "poem": 1
          },
          {
            "text": "in mutum ya mirgino dutse, dutsen zai mirgine a kansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Harshe mai faɗin ƙarya yana ƙin waɗanda yake ɓata musu rai,",
            "poem": 1
          },
          {
            "text": "daɗin baki kuma yakan aikata ɓarna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
