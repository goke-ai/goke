  "chapter": {
    "number": 25,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Waɗannan ƙarin karin maganar Solomon ne waɗanda mutanen Hezekiya sarkin Yahuda suka tara."
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ɗaukakar Allah ce a ɓoye batun;",
            "poem": 1
          },
          {
            "text": "a bayyana batun kuwa ɗaukakar sarakuna ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kamar yadda sammai suna can bisa duniya kuma tana da zurfi,",
            "poem": 1
          },
          {
            "text": "haka zukatan sarakuna suka wuce a bincika.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka tace azurfa",
            "poem": 1
          },
          {
            "text": "sai kayan su fito don maƙerin azurfa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "ka cire mugaye daga gaban sarki,",
            "poem": 1
          },
          {
            "text": "kursiyinsa kuwa zai kahu ta wurin adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kada ka ɗaukaka kanka a gaban sarki,",
            "poem": 1
          },
          {
            "text": "kada kuma ka nemi wa kanka wuri a cikin manyan mutane;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "gara ya ce maka, “Ka hauro nan,”",
            "poem": 1
          },
          {
            "text": "da a ƙasƙantar da kai a gaban wani mai makami.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Abin da ka gani da idanunka",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "kada ka yi garaje kai ƙara a majalisa,",
            "poem": 2
          },
          {
            "text": "gama me za ka yi a ƙarshe",
            "poem": 1
          },
          {
            "text": "in maƙwabcinka ya ba ka kunya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In kai da maƙwabcinka kuka yi gardama,",
            "poem": 1
          },
          {
            "text": "kada ka tona asirin wani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "in ba haka ba duk wanda ya ji zai kunyata ka",
            "poem": 1
          },
          {
            "text": "ba za ka kuma taɓa rabuwa da wannan mummuna suna ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kalmar da aka faɗa daidai",
            "poem": 1
          },
          {
            "text": "tana kamar zubin zinariyar da aka yi a mazubin azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kamar ’yan kunnen zinariya ko kuwa kayan ado na zinariya zalla",
            "poem": 1
          },
          {
            "text": "haka yake da tsawatawar mai hikima ga kunne mai saurarawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kamar sanyin ƙanƙara a lokacin girbi",
            "poem": 1
          },
          {
            "text": "haka ɗan saƙo mai aminci wanda aka aika;",
            "poem": 2
          },
          {
            "text": "ya wartsakar da ran waɗanda suka aike shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kamar gizagizai da kuma iska marar ruwan sama",
            "poem": 1
          },
          {
            "text": "haka mutumin da yake fariya a kan kyautan da ba ya bayarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ta wurin haƙuri akan rinjaye mai mulki,",
            "poem": 1
          },
          {
            "text": "magana mai hankali kan karye ƙashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "In ka sami zuma, ka sha isashe kawai,",
            "poem": 1
          },
          {
            "text": "in ya yi yawa, za ka yi amai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka cika ziyarar gidan maƙwabcinka",
            "poem": 1
          },
          {
            "text": "yawan ganinka zai sa ya ƙi ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kamar sanda ko takobi ko kibiya mai tsini",
            "poem": 1
          },
          {
            "text": "haka yake da mutumin da yake ba da shaidar ƙarya a kan maƙwabcinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kamar haƙori mai ciwo ko yin tafiya da gurguwar ƙafa",
            "poem": 1
          },
          {
            "text": "haka yake ga mai dogara da marasa aminci a lokacin wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kamar wanda ya tuɓe riga a ranar da ake sanyi,",
            "poem": 1
          },
          {
            "text": "ko kuwa kamar zuba ruwan tsami a kanwa,",
            "poem": 2
          },
          {
            "text": "haka yake da mai rera waƙoƙi ga mai baƙin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "In abokin gābanka yana jin yunwa, ka ba shi abinci ya ci;",
            "poem": 1
          },
          {
            "text": "in yana jin ƙishi, ka ba shi ruwa ya sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ta yin haka, za ka tara garwashin wuta mai ci a kansa,",
            "poem": 1
          },
          {
            "text": "Ubangiji kuma zai sāka maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Kamar yadda iskar arewa kan kawo ruwan sama,",
            "poem": 1
          },
          {
            "text": "haka jita-jita kan kawo fushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Gara a zauna a kusurwar rufin ɗaki",
            "poem": 1
          },
          {
            "text": "da a zauna a gida ɗaya da mace mai fitina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kamar ruwan sanyi ga ran da ya gaji",
            "poem": 1
          },
          {
            "text": "haka yake da jin labari mai daɗi daga ƙasa mai nisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Kamar rafi mai laka ko rijiyar da ta gurɓace",
            "poem": 1
          },
          {
            "text": "haka yake da mai adalci wanda ya miƙa wuya ga mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ba shi da kyau ka sha zuma da yawa,",
            "poem": 1
          },
          {
            "text": "haka ma ba shi da kyau ka nemi girma wa kanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kamar birni da katangarsa sun rushe",
            "poem": 1
          },
          {
            "text": "haka yake da mutumin da ba ya iya danne fushinsa.",
            "poem": 2
          }
        ]
      }
    ],
