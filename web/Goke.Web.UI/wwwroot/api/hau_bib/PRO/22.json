  "chapter": {
    "number": 22,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "An fi son suna mai kyau fiye da wadata mai yawa;",
            "poem": 1
          },
          {
            "text": "tagomashi kuma ya fi azurfa ko zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mawadaci da matalauci suna da abu guda.",
            "poem": 1
          },
          {
            "text": "Ubangiji ne Mahaliccinsu duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mai basira kan ga damuwa tana zuwa yă nemi mafaka,",
            "poem": 1
          },
          {
            "text": "amma marar azanci kan yi ta tafiya yă kuma sha wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sauƙinkai da tsoron Ubangiji",
            "poem": 1
          },
          {
            "text": "sukan kawo wadata da girmamawa da kuma rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "A hanyoyin mugu akwai kaya da tarko,",
            "poem": 1
          },
          {
            "text": "amma duk wanda ya kiyaye ransa kan kauce musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka hori yaro a hanyar da ya kamata yă bi,",
            "poem": 1
          },
          {
            "text": "kuma sa’ad da ya tsufa ba zai bar ta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Mawadaci yakan yi mulki a kan matalauci,",
            "poem": 1
          },
          {
            "text": "mai cin bashi kuwa bawan mai ba da bashi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk wanda ya shuka mugunta yakan girbe wahala,",
            "poem": 1
          },
          {
            "text": "za a kuma hallaka sandar fushinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mai bayarwa hannu sake shi kansa zai sami albarka,",
            "poem": 1
          },
          {
            "text": "gama yakan raba abincinsa da matalauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka hori mai ba’a, hatsaniya kuwa za tă yi waje;",
            "poem": 1
          },
          {
            "text": "fitina da zargi kuma za su ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Duk mai son tsabtar zuciya wanda kuma jawabinsa mai alheri ne",
            "poem": 1
          },
          {
            "text": "zai zama aminin sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Idanun Ubangiji na lura da sani,",
            "poem": 1
          },
          {
            "text": "amma yakan ƙi kalmomin marar aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Rago kan ce, “Akwai zaki a waje!”",
            "poem": 1
          },
          {
            "text": "Ko kuma “Za a kashe ni a tituna!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bakin mazinaciya rami ne mai zurfi;",
            "poem": 1
          },
          {
            "text": "duk wanda yake a ƙarƙashin fushin Ubangiji zai fāɗa a ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Wauta tana da yawa a zuciyar yara,",
            "poem": 1
          },
          {
            "text": "amma sandar horo zai kore ta nesa da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Duk wanda yake danne matalauta don yă azurta",
            "poem": 1
          },
          {
            "text": "kuma duk wanda yake kyauta ga mawadata, dukansu kan talauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 1"
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ka kasa kunne ka kuma saurara ga maganganu masu hikima;",
            "poem": 1
          },
          {
            "text": "ka yi amfani da abin da nake koyarwa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "gama yana da daɗi sa’ad da ka kiyaye su a zuciyarka",
            "poem": 1
          },
          {
            "text": "ka kuma kasance da su a shirye a leɓunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Domin dogarawarka ta kasance ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ina koya maka yau, har kai ma.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ban rubuta maka maganganu talatin ba,",
            "poem": 1
          },
          {
            "text": "maganganun shawara da sani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "ina koya maka gaskiya da kalmomin da za ka dogara a kai,",
            "poem": 1
          },
          {
            "text": "saboda ka iya ba da amsa daidai",
            "poem": 2
          },
          {
            "text": "ga duk wanda ya aike ka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 2"
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Kada ka zalunci matalauta a kan suna matalauta",
            "poem": 1
          },
          {
            "text": "kada kuma ka ƙwari wanda ba shi da mai taimako a gaban shari’a,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "gama Ubangiji zai yi magana dominsu",
            "poem": 1
          },
          {
            "text": "zai kuwa washe waɗanda suka washe su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 3"
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Kada ka yi abokantaka da mai zafin rai,",
            "poem": 1
          },
          {
            "text": "kada ka haɗa kai da wanda ba shi da wuya ya yi fushi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "in ba haka ba za ka koyi hanyoyinsa",
            "poem": 1
          },
          {
            "text": "ka kuma sa kanka a tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 4"
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Kada ka zama mai ɗaukar lamuni",
            "poem": 1
          },
          {
            "text": "ko ka ba da jingina saboda bashi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "gama in ka kāsa biya",
            "poem": 1
          },
          {
            "text": "za a ƙwace gadon da kake kwanciya a kai ma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 5"
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kada ka matsar da shaidar kan iyakar",
            "poem": 1
          },
          {
            "text": "da kakanninka suka kafa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Faɗi 6"
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kana ganin mutumin da yake da gwaninta a cikin aikinsa?",
            "poem": 1
          },
          {
            "text": "Zai yi wa sarakuna hidima;",
            "poem": 2
          },
          {
            "text": "ba zai yi hidima wa mutanen da ba su iya ba.",
            "poem": 2
          }
        ]
      }
    ],
