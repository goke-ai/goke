  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "heading",
        "content": [
          "Hikima ce mafi girma duka"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku saurara ’ya’yana ga koyarwar mahaifinku;",
            "poem": 1
          },
          {
            "text": "ku mai da hankali, ku sami fahimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ina ba ku sahihiyar koyarwa,",
            "poem": 1
          },
          {
            "text": "saboda haka kada ku ƙyale koyarwata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da nake yaro a gidan mahaifina,",
            "poem": 1
          },
          {
            "text": "yaro kaɗai kuma na mahaifiyata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ya koya mini ya ce,",
            "poem": 1
          },
          {
            "text": "“Ka riƙe kalmomina da dukan zuciyarka;",
            "poem": 2
          },
          {
            "text": "ka kiyaye umarnaina za ka kuwa rayu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka nemi hikima, ka nemi fahimi;",
            "poem": 1
          },
          {
            "text": "kada ka manta da kalmomina ko ka kauce daga gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kada ka ƙyale hikima, za tă kuwa tsare ka;",
            "poem": 1
          },
          {
            "text": "ka ƙaunace ta, za tă kuwa lura da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Hikima ce mafi girma duka; saboda haka ka nemi hikima.",
            "poem": 1
          },
          {
            "text": "Ko da za tă ci duk abin da kake da shi, ka dai nemi fahimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka ƙaunace ta, za tă ɗaukaka ka;",
            "poem": 1
          },
          {
            "text": "ka rungume ta, za tă kuwa girmama ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Za tă zama kayan ado da za su inganta kanka",
            "poem": 1
          },
          {
            "text": "tă kuma zamar maka rawanin ɗaukaka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka saurara, ɗana, ka yarda da abin da na faɗa,",
            "poem": 1
          },
          {
            "text": "shekarun rayuwarka kuwa za su zama masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Na bishe ka a hanyar hikima",
            "poem": 1
          },
          {
            "text": "na kuma jagorance ka a miƙaƙƙun hanyoyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa’ad da kake tafiya, ba abin da zai sa ka tuntuɓe;",
            "poem": 1
          },
          {
            "text": "sa’ad da kake gudu, ba za ka fāɗi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka riƙe umarni, kada ka bari yă kuɓuce;",
            "poem": 1
          },
          {
            "text": "ka tsare shi sosai, gama ranka ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kada ka sa ƙafa a kan hanyar mugaye",
            "poem": 1
          },
          {
            "text": "kada ka bi gurbin mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ka guji mugunta, kada ka yi tafiya a kanta;",
            "poem": 1
          },
          {
            "text": "juya daga gare ta ka yi tafiyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Mugaye ba sa iya barci, sai sun aikata mugunta;",
            "poem": 1
          },
          {
            "text": "ba su barci sai sun cuci wani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mugunta da ta’adi",
            "poem": 1
          },
          {
            "text": "kamar ci da sha suke a gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Hanyar adali kamar fitowar rana ce,",
            "poem": 1
          },
          {
            "text": "sai ƙara haske take yi, har ta kai tsaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Amma hanyar mugaye kamar zurfin duhu ne;",
            "poem": 1
          },
          {
            "text": "ba sa sanin abin da ya sa suke tuntuɓe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ɗana, ka kula da abin da nake faɗa,",
            "poem": 1
          },
          {
            "text": "ka saurara sosai ga kalmomina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kada ka bari su rabu da kai,",
            "poem": 1
          },
          {
            "text": "ka kiyaye su a cikin zuciyarka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "gama rai ne ga waɗanda suke nemansu",
            "poem": 1
          },
          {
            "text": "da kuma lafiya ga dukan jikin mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Fiye da kome duka, ka tsare zuciyarka,",
            "poem": 1
          },
          {
            "text": "gama maɓulɓulan ruwan rijiyar rai ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka kau da muguwar magana daga bakinka;",
            "poem": 1
          },
          {
            "text": "ka yi nesa da magana marar kyau daga leɓunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Bari idanunka su dubi gaba sosai,",
            "poem": 1
          },
          {
            "text": "ka kafa idanunka kai tsaye a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ka san inda ƙafafunka suke takawa",
            "poem": 1
          },
          {
            "text": "ka bi hanyoyin da suke daram kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Kada ka kauce dama ko hagu;",
            "poem": 1
          },
          {
            "text": "ka kiyaye ƙafarka daga mugunta.",
            "poem": 2
          }
        ]
      }
    ],
