  "chapter": {
    "number": 18,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mutumin da ba ya abokantaka yakan nema ya cika burinsa ne kaɗai;",
            "poem": 1
          },
          {
            "text": "yakan ƙi yarda da kowace maganar da take daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Wawa ba ya sha’awa ya sami fahimta",
            "poem": 1
          },
          {
            "text": "amma abin da yake so ya yi kaɗai, shi ne ya ba da ra’ayinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da mugunci ya zo, reni ma kan zo,",
            "poem": 1
          },
          {
            "text": "haka kuma sa’ad da kunya ta zo, shan kunya kan biyo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kalmomin bakin mutum suna da zurfi kamar ruwaye,",
            "poem": 1
          },
          {
            "text": "amma maɓulɓulan hikima rafi ne mai gudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba shi da kyau ka yi wa mugu alheri",
            "poem": 1
          },
          {
            "text": "ko ka hana wa marar laifi adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Leɓunan wawa kan jawo masa faɗa,",
            "poem": 1
          },
          {
            "text": "bakinsa kuma kan gayyaci dūka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bakin wawa lalatar da kansa yake yi",
            "poem": 1
          },
          {
            "text": "leɓunansa kuma tarko ne ga ransa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kalmomin mai gulma kamar abinci mai daɗi suke;",
            "poem": 1
          },
          {
            "text": "sukan gangara zuwa can cikin gaɓoɓin mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Wanda yake ragwanci a aikinsa",
            "poem": 1
          },
          {
            "text": "ɗan’uwa ne ga wanda yakan lalatar da abubuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sunan Ubangiji hasumiya ce mai ƙarfi;",
            "poem": 1
          },
          {
            "text": "masu adalci kan gudu zuwa wurinta don su zauna lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Dukiyar masu arziki ita ce birninsu mai katanga;",
            "poem": 1
          },
          {
            "text": "suna gani cewa ba za a iya huda katangar ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kafin fāɗuwarsa zuciyar mutum takan yi girman kai,",
            "poem": 1
          },
          {
            "text": "amma sauƙinkai kan zo kafin girmamawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duk wanda yakan ba da amsa kafin ya saurara,",
            "poem": 1
          },
          {
            "text": "wannan wauta ce da kuma abin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sa rai da mutum ke yi kan taimake shi sa’ad da yake ciwo,",
            "poem": 1
          },
          {
            "text": "amma in ya karai, to, tasa ta ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zuciya mai la’akari kan nemi sani;",
            "poem": 1
          },
          {
            "text": "kunnuwan mai hikima kan bincika don yă koya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kyauta kan buɗe hanya wa mai bayarwa",
            "poem": 1
          },
          {
            "text": "yakan kuma kai shi a gaban babban mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Wanda ya fara mai da jawabi yakan zama kamar shi ne mai gaskiya,",
            "poem": 1
          },
          {
            "text": "sai wani ya fito ya yi masa tambaya tukuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Jefa ƙuri’a kan daidaita tsakanin masu faɗa",
            "poem": 1
          },
          {
            "text": "ta kuma ajiye masu faɗan a rabe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ɗan’uwan da aka yi wa laifi ya fi birni mai katanga wuyan shiryawa,",
            "poem": 1
          },
          {
            "text": "kuma faɗace-faɗace suna kama da ƙofofin ƙarfe na fada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Daga abin da baki ya furta ne cikin mutum kan cika;",
            "poem": 1
          },
          {
            "text": "girbi daga leɓunansa kuma yakan ƙoshi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Harshe yana da ikon rai da mutuwa,",
            "poem": 1
          },
          {
            "text": "kuma waɗanda suke ƙaunarsa za su ci amfaninsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Duk wanda ya sami mace ya sami abu mai kyau",
            "poem": 1
          },
          {
            "text": "ya kuma sami tagomashi daga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Matalauci kan yi roƙo da taushi,",
            "poem": 1
          },
          {
            "text": "amma mawadaci kan amsa da kakkausar murya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Mutum mai abokai masu yawa kan lalace,",
            "poem": 1
          },
          {
            "text": "amma akwai abokin da yakan manne kurkusa fiye da ɗan’uwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
