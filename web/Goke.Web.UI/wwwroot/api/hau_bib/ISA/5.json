  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "heading",
        "content": [
          "Waƙar gonar inabi"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan rera waƙa wa ƙaunataccena",
            "poem": 1
          },
          {
            "text": "waƙa game da gonar inabinsa.",
            "poem": 2
          },
          {
            "text": "Ƙaunataccena yana da gonar inabi",
            "poem": 1
          },
          {
            "text": "a gefen tudu mai dausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya haƙa ƙasa ya kuma tsintsince duwatsun",
            "poem": 1
          },
          {
            "text": "ya shuka mata inabi mafi kyau.",
            "poem": 2
          },
          {
            "text": "Ya gina hasumiyar tsaro a cikinta",
            "poem": 1
          },
          {
            "text": "ya kuma shirya wurin matsin ruwan inabi.",
            "poem": 2
          },
          {
            "text": "Sa’an nan ya sa rai ga samun girbi mai kyau na inabin,",
            "poem": 1
          },
          {
            "text": "amma sai ga shi inabin ya ba da munanan ’ya’ya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Yanzu fa ku mazauna cikin Urushalima da mutanen Yahuda,",
            "poem": 1
          },
          {
            "text": "ku shari’anta tsakanina da gonar inabina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Me kuma ya rage da za a yi wa gonar inabina",
            "poem": 1
          },
          {
            "text": "fiye da abin da na yi mata?",
            "poem": 2
          },
          {
            "text": "Da na nemi inabi masu kyau,",
            "poem": 1
          },
          {
            "text": "me ya sa ta ba da munana ’ya’ya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Yanzu zan faɗa muku",
            "poem": 1
          },
          {
            "text": "abin da zan yi da gonar inabina.",
            "poem": 2
          },
          {
            "text": "Zan cire katangar da ta kewaye ta,",
            "poem": 1
          },
          {
            "text": "za tă kuwa lalace;",
            "poem": 2
          },
          {
            "text": "zan rushe bangonta,",
            "poem": 1
          },
          {
            "text": "za a kuwa tattake ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zan mai da ita kango,",
            "poem": 1
          },
          {
            "text": "ba zan aske ta ba, ba kuwa zan nome ta ba,",
            "poem": 2
          },
          {
            "text": "sarƙaƙƙiya da ƙayayyuwa kuwa za su yi girma a can",
            "poem": 2
          },
          {
            "text": "Zan umarci gizagizai",
            "poem": 1
          },
          {
            "text": "kada su yi ruwan sama a kanta.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Gonar inabin Ubangiji Maɗaukaki",
            "poem": 1
          },
          {
            "text": "ita ce gidan Isra’ila,",
            "poem": 2
          },
          {
            "text": "mutanen Yahuda kuma",
            "poem": 1
          },
          {
            "text": "su ne lambun farin cikinsa.",
            "poem": 2
          },
          {
            "text": "Yana kuma nema ganin gaskiya, amma sai ga zub da jini;",
            "poem": 1
          },
          {
            "text": "yana neman adalci, amma sai ga shi kukan azaba yake ji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Kaito da hukunce-hukunce"
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kaitonku ku waɗanda kuke ƙara wa kanku gidaje",
            "poem": 1
          },
          {
            "text": "kuke kuma haɗa gonaki da gonaki",
            "poem": 2
          },
          {
            "text": "har babu sauran filin da ya rage",
            "poem": 1
          },
          {
            "text": "ku kuma zauna ku kaɗai a ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          "Ubangiji Maɗaukaki ya furta a kunnuwana,",
          {
            "text": "“Tabbatacce manyan gidajen za su zama kango,",
            "poem": 1
          },
          {
            "text": "za a bar kyawawan gidajen nan ba kowa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kadada goma na gonar inabi zai ba da garwan ruwan inabi ɗaya kaɗai,",
            "poem": 1
          },
          {
            "text": "mudu guda na iri kuma zai ba da efa na hatsi guda kurum.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kaiton waɗanda suke tashi da sassafe",
            "poem": 1
          },
          {
            "text": "don su nufi wurin shaye-shaye,",
            "poem": 2
          },
          {
            "text": "waɗanda suke raba dare",
            "poem": 1
          },
          {
            "text": "har sai sun bugu da ruwan inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Suna kaɗa garaya, da molaye a bukukkuwansu,",
            "poem": 1
          },
          {
            "text": "ganguna da busa da ruwan inabi,",
            "poem": 2
          },
          {
            "text": "amma ba su kula da ayyukan Ubangiji ba,",
            "poem": 1
          },
          {
            "text": "ba sa biyayya ga aikin hannuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Saboda haka mutanena za su yi zaman bauta",
            "poem": 1
          },
          {
            "text": "domin rashin fahimi;",
            "poem": 2
          },
          {
            "text": "manyan mutanensu za su mutu da yunwa",
            "poem": 1
          },
          {
            "text": "talakawansu kuma su mutu da ƙishirwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Saboda haka kabari ya fadada marmarinsa",
            "poem": 1
          },
          {
            "text": "ya kuma buɗe bakinsa babu iyaka;",
            "poem": 2
          },
          {
            "text": "cikinsa manyan mutanensu da talakawansu za su gangara",
            "poem": 1
          },
          {
            "text": "tare da dukan masu hayaniyarsu da masu murnansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ta haka za a ƙasƙantar da mutum",
            "poem": 1
          },
          {
            "text": "kuma za a ƙasƙantar da ’yan adam,",
            "poem": 2
          },
          {
            "text": "za a ƙasƙanta da masu girman kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Amma Ubangiji Maɗaukaki zai sami ɗaukaka ta wurin aikata gaskiya,",
            "poem": 1
          },
          {
            "text": "kuma Allah mai tsarki zai nuna kansa ta wurin adalcinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Sa’an nan tumaki za su yi kiwo kamar yadda suke yi a wurin kiwonsu;",
            "poem": 1
          },
          {
            "text": "raguna za su yi kiwo cikin abubuwa masu kyau da suka lalace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kaiton waɗanda suke jan zunubi da igiyar ruɗu,",
            "poem": 1
          },
          {
            "text": "da kuma mugunta da igiyoyin keken yaƙin,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "waɗanda suke cewa, “Bari Allah yă gaggauta,",
            "poem": 1
          },
          {
            "text": "bari yă hanzarta aikinsa",
            "poem": 2
          },
          {
            "text": "don mu gani.",
            "poem": 2
          },
          {
            "text": "Bari yă iso,",
            "poem": 1
          },
          {
            "text": "bari shirin Mai Tsarkin nan na Isra’ila yă zo,",
            "poem": 2
          },
          {
            "text": "don mu sani.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kaiton waɗanda suke ce da mugunta nagarta",
            "poem": 1
          },
          {
            "text": "nagarta kuma mugunta,",
            "poem": 2
          },
          {
            "text": "waɗanda suke mai da duhu haske",
            "poem": 1
          },
          {
            "text": "haske kuma duhu,",
            "poem": 2
          },
          {
            "text": "waɗanda suke mai da ɗaci zaƙi",
            "poem": 1
          },
          {
            "text": "zaƙi kuma ɗaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kaiton waɗanda suke tsammani suna da hikima",
            "poem": 1
          },
          {
            "text": "da kuma wayo a idonsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Kaiton waɗanda suke jarumawa a shan ruwan inabi",
            "poem": 1
          },
          {
            "text": "da gwanaye a haɗin abubuwan sha,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "waɗanda suke ƙyale masu laifi don sun ba da cin hanci,",
            "poem": 1
          },
          {
            "text": "amma su hana a yi gaskiya wa marasa laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Saboda haka kamar yadda harshen wuta yakan lashe kara",
            "poem": 1
          },
          {
            "text": "kuma kamar yadda busasshiyar ciyawa takan ƙone ƙurmus a cikin wuta,",
            "poem": 2
          },
          {
            "text": "haka saiwarsu za su ruɓa",
            "poem": 1
          },
          {
            "text": "iska kuma ta hura furanninsu kamar ƙura;",
            "poem": 2
          },
          {
            "text": "gama sun ƙi dokar Ubangiji Maɗaukaki",
            "poem": 1
          },
          {
            "text": "suka kuma ƙyale maganar Mai Tsarkin nan na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Saboda haka fushin Ubangiji ya yi ƙuna a kan mutanensa;",
            "poem": 1
          },
          {
            "text": "ya ɗaga hannunsa ya kuma buge su.",
            "poem": 2
          },
          {
            "text": "Duwatsu sun jijjigu,",
            "poem": 1
          },
          {
            "text": "gawawwaki kuwa suka zama kamar juji a tituna.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Saboda wannan duka, fushinsa bai huce ba,",
            "poem": 1
          },
          {
            "text": "bai kuwa janye hannunsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ya ɗaga tuta don al’ummai masu nisa,",
            "poem": 1
          },
          {
            "text": "ya yi feɗuwa wa waɗanda suke a iyakar duniya.",
            "poem": 2
          },
          {
            "text": "Ga shi sun iso,",
            "poem": 1
          },
          {
            "text": "da sauri da kuma gaggawa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Babu ko ɗayansu da ya gaji ko ya yi tuntuɓe,",
            "poem": 1
          },
          {
            "text": "babu ko ɗaya da ya yi gyangyaɗi ko barci;",
            "poem": 2
          },
          {
            "text": "babu abin ɗamarar da ya kunce a gindi,",
            "poem": 1
          },
          {
            "text": "ba igiyar takalmin da ta tsinke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kibiyoyinsu masu tsini ne,",
            "poem": 1
          },
          {
            "text": "an ɗaura dukan bakkunansu;",
            "poem": 2
          },
          {
            "text": "kofatan dawakansu sun yi kamar dutsen ƙanƙara,",
            "poem": 1
          },
          {
            "text": "ƙafafun keken yaƙinsu kamar guguwa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Rurinsu ya yi kamar na zaki,",
            "poem": 1
          },
          {
            "text": "suna ruri kamar ’yan zakoki;",
            "poem": 2
          },
          {
            "text": "suna yin gurnani yayinda suke kamun abin da suke farauta",
            "poem": 1
          },
          {
            "text": "su ɗauke shi ba mai ƙwace shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "A wannan rana za su yi ta ruri a kansa",
            "poem": 1
          },
          {
            "text": "kamar rurin teku.",
            "poem": 2
          },
          {
            "text": "Kuma in wani ya dubi ƙasar,",
            "poem": 1
          },
          {
            "text": "zai ga duhu da damuwa;",
            "poem": 2
          },
          {
            "text": "haske ma zai zama duhu ta wurin gizagizai.",
            "poem": 2
          }
        ]
      }
    ],
