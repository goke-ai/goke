  "chapter": {
    "number": 45,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ga abin da Ubangiji ya faɗa wa shafaffensa,",
            "poem": 1
          },
          {
            "text": "ga Sairus, wanda hannun damansa yana riƙe da shi",
            "poem": 2
          },
          {
            "text": "don yă ci al’ummai a gabansa",
            "poem": 1
          },
          {
            "text": "ya kuma tuɓe makaman sarakuna,",
            "poem": 2
          },
          {
            "text": "don yă buɗe ƙofofi a gabansa",
            "poem": 1
          },
          {
            "text": "don kada a kulle ƙofofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan sha gabanka",
            "poem": 1
          },
          {
            "text": "in baje duwatsu;",
            "poem": 2
          },
          {
            "text": "zan farfashe ƙofofin tagulla",
            "poem": 1
          },
          {
            "text": "in kuma kakkarye ƙyamaren ƙarfe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Zan ba ka dukiyar duhu,",
            "poem": 1
          },
          {
            "text": "arzikin da aka ajiye a asirtattun wurare,",
            "poem": 2
          },
          {
            "text": "saboda ka san cewa ni ne Ubangiji,",
            "poem": 1
          },
          {
            "text": "Allah na Isra’ila, wanda ya kira ka da suna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Saboda sunan Yaƙub bawana,",
            "poem": 1
          },
          {
            "text": "Isra’ila zaɓaɓɓena,",
            "poem": 2
          },
          {
            "text": "na kira ka da suna",
            "poem": 1
          },
          {
            "text": "na ba ka matsayin bangirma,",
            "poem": 2
          },
          {
            "text": "ko da yake ba ka san ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ni ne Ubangiji, kuma babu wani;",
            "poem": 1
          },
          {
            "text": "in ban da ni babu wani Allah.",
            "poem": 2
          },
          {
            "text": "Zan ƙarfafa ka,",
            "poem": 1
          },
          {
            "text": "ko da yake ba ka san ni ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "saboda daga fitowar rana",
            "poem": 1
          },
          {
            "text": "har zuwa fāɗuwarta",
            "poem": 2
          },
          {
            "text": "mutane za su san cewa babu wani in ban da ni.",
            "poem": 1
          },
          {
            "text": "Ni ne Ubangiji, kuma babu wani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ni ne na siffanta haske na kuma halicci duhu,",
            "poem": 1
          },
          {
            "text": "ni ne nake ba da nasara in kuma jawo bala’i;",
            "poem": 2
          },
          {
            "text": "ni, Ubangiji ne ke aikata dukan waɗannan abubuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Ku sammai, ku sauko da adalci kamar ruwan sama;",
            "poem": 1
          },
          {
            "text": "bari gizagizai su zubar da yayyafi kamar adalci.",
            "poem": 2
          },
          {
            "text": "Bari ƙasa ta buɗe,",
            "poem": 1
          },
          {
            "text": "bari ceto ya tsiro,",
            "poem": 2
          },
          {
            "text": "bari adalci ya yi girma tare da shi;",
            "poem": 2
          },
          {
            "text": "ni, Ubangijine, na sa ya faru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Kaitonka mai gardama da Wanda ya yi ka,",
            "poem": 1
          },
          {
            "text": "da wanda yake kasko a cikin kasko a ƙasa.",
            "poem": 2
          },
          {
            "text": "Yumɓu ya iya ce wa magini,",
            "poem": 1
          },
          {
            "text": "‘Me kake yi?’",
            "poem": 2
          },
          {
            "text": "Aikinka na iya cewa,",
            "poem": 1
          },
          {
            "text": "‘Ba shi da hannuwa’?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kaiton wanda yake cewa mahaifinsa,",
            "poem": 1
          },
          {
            "text": "‘Me ka manta?’",
            "poem": 2
          },
          {
            "text": "Ko kuwa ga mahaifiyarsa,",
            "poem": 1
          },
          {
            "text": "‘Me kin haifa?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Ga abin da Ubangiji yana cewa,",
            "poem": 1
          },
          {
            "text": "Mai Tsarkin nan na Isra’ila, da kuma Mahaliccinsa.",
            "poem": 2
          },
          {
            "text": "Game da abubuwan da ke zuwa,",
            "poem": 1
          },
          {
            "text": "kun tambaye ni game da ’ya’yana,",
            "poem": 2
          },
          {
            "text": "ko kuwa kun ba ni umarni game da aikin hannuwana?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ai, ni ne wanda ya yi duniya",
            "poem": 1
          },
          {
            "text": "na kuma halicci mutum a kanta.",
            "poem": 2
          },
          {
            "text": "Hannuwana ne sun miƙe sammai;",
            "poem": 1
          },
          {
            "text": "na umarci rundunar sararin sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zan tā da Sairus",
            "poem": 1
          },
          {
            "noteId": 696
          },
          {
            "text": "cikin adalcina.",
            "poem": 1
          },
          {
            "text": "Zan sa dukan hanyoyinsa su miƙe.",
            "poem": 2
          },
          {
            "text": "Zai sāke gina birnina",
            "poem": 1
          },
          {
            "text": "ya kuma ’yantar da mutanena masu bautar talala,",
            "poem": 2
          },
          {
            "text": "amma ba don wata haya ko lada ba,",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji Maɗaukaki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Kayayyakin Masar da hajar Kush,",
            "poem": 1
          },
          {
            "noteId": 697
          },
          {
            "text": "da waɗannan dogayen Sabenawa,",
            "poem": 2
          },
          {
            "text": "za su ƙetaro zuwa wurinku",
            "poem": 1
          },
          {
            "text": "za su kuma zama naku;",
            "poem": 2
          },
          {
            "text": "za su bi bayanku,",
            "poem": 1
          },
          {
            "text": "suna zuwa cikin sarƙoƙi.",
            "poem": 2
          },
          {
            "text": "Za su rusuna a gabanku",
            "poem": 1
          },
          {
            "text": "su roƙe ku, suna cewa,",
            "poem": 2
          },
          {
            "text": "‘Tabbas Allah yana tare da ku, babu kuma wani;",
            "poem": 1
          },
          {
            "text": "babu wani allah.’ ”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Tabbatacce kai ne Allah wanda ya ɓoye kanka,",
            "poem": 1
          },
          {
            "text": "Ya Allah da Mai Ceton Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Dukan masu yin gumaka za su sha kunya;",
            "poem": 1
          },
          {
            "text": "za su fita da kunya gaba ɗaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Amma Ubangiji zai ceci Isra’ila",
            "poem": 1
          },
          {
            "text": "da madawwamin ceto;",
            "poem": 2
          },
          {
            "text": "ba za ku sāke shan kunya ko ƙasƙanci ba,",
            "poem": 1
          },
          {
            "text": "har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Gama ga abin da Ubangiji yana cewa,",
            "poem": 1
          },
          {
            "text": "shi da ya halicci sammai,",
            "poem": 1
          },
          {
            "text": "shi ne Allah;",
            "poem": 2
          },
          {
            "text": "shi da ya sarrafa ya kuma yi duniya,",
            "poem": 2
          },
          {
            "text": "ya kafa ta;",
            "poem": 2
          },
          {
            "text": "bai halicce ta don ta zama ba kome ba,",
            "poem": 1
          },
          {
            "text": "amma ya yi ta don a zauna a ciki,",
            "poem": 2
          },
          {
            "text": "ya ce,",
            "poem": 1
          },
          {
            "text": "“Ni ne Ubangiji,",
            "poem": 1
          },
          {
            "text": "kuma babu wani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ban yi magana asirce ba,",
            "poem": 1
          },
          {
            "text": "daga wani wuri a ƙasar duhu ba;",
            "poem": 2
          },
          {
            "text": "ban faɗa wa zuriyar Yaƙub,",
            "poem": 1
          },
          {
            "text": "‘Ku neme ni a banza ba.’",
            "poem": 2
          },
          {
            "text": "Ni, Ubangiji maganar gaskiya nake yi;",
            "poem": 1
          },
          {
            "text": "na furta abin da yake daidai.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Ku tattaru ku zo;",
            "poem": 1
          },
          {
            "text": "ku taru, ku masu gudun hijira daga al’ummai.",
            "poem": 2
          },
          {
            "text": "Masu jahilci ne waɗanda suke ɗaukan gumakan katakai suna yawo,",
            "poem": 1
          },
          {
            "text": "waɗanda suke addu’a ga allolin da ba za su cece su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Furta abin da zai kasance, ku gabatar da shi,",
            "poem": 1
          },
          {
            "text": "bari su yi shawara tare.",
            "poem": 2
          },
          {
            "text": "Wa ya faɗa wannan tuntuni,",
            "poem": 1
          },
          {
            "text": "wa ya yi shelar sa a kwanakin dā?",
            "poem": 2
          },
          {
            "text": "Ba ni ba ne, Ubangiji?",
            "poem": 1
          },
          {
            "text": "Kuma babu Allah in ban da ni,",
            "poem": 2
          },
          {
            "text": "Allah mai adalci da kuma Mai Ceto;",
            "poem": 1
          },
          {
            "text": "babu wani sai ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Ku juyo gare ni ku sami ceto,",
            "poem": 1
          },
          {
            "text": "dukanku iyakokin duniya;",
            "poem": 2
          },
          {
            "text": "gama ni ne Allah,",
            "poem": 2
          },
          {
            "text": "kuma babu wani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Da kaina na rantse,",
            "poem": 1
          },
          {
            "text": "bakina ya furta cikin dukan mutunci",
            "poem": 2
          },
          {
            "text": "kalmar da ba za a janye ba.",
            "poem": 2
          },
          {
            "text": "A gabana kowace gwiwa za tă durƙusa;",
            "poem": 1
          },
          {
            "text": "ta wurina kowane harshe zai rantse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Za su yi zance game da ni su ce, ‘A cikin Ubangiji kaɗai",
            "poem": 1
          },
          {
            "text": "akwai adalci da kuma ƙarfafawa.’ ”",
            "poem": 2
          },
          {
            "text": "Duk wanda ya yi fushi da shi",
            "poem": 1
          },
          {
            "text": "zai zo wurinsa ya kuma sha kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Amma a cikin Ubangiji dukan zuriyar Isra’ila",
            "poem": 1
          },
          {
            "text": "za su sami adalci za su kuwa yi yabo.",
            "poem": 2
          }
        ]
      }
    ],
