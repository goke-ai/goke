  "chapter": {
    "number": 40,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ta’aziyya don mutanen Allah"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ta’aziyya, ku ta’azantu mutanena,",
            "poem": 1
          },
          {
            "text": "in ji Allahnku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yi magana mai kwantar da rai ga Urushalima,",
            "poem": 1
          },
          {
            "text": "ku kuma furta mata",
            "poem": 2
          },
          {
            "text": "cewa aiki mai zafinta ya isa,",
            "poem": 1
          },
          {
            "text": "cewa an fanshi zunubinta,",
            "poem": 2
          },
          {
            "text": "cewa ta karɓi daga hannun Ubangiji",
            "poem": 1
          },
          {
            "text": "ninki biyu saboda dukan zunubanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Muryar wani tana kira cewa,",
            "poem": 1
          },
          {
            "text": "“A cikin hamada ku shirya",
            "poem": 1
          },
          {
            "text": "hanya saboda Ubangiji;",
            "poem": 2
          },
          {
            "noteId": 691
          },
          {
            "text": "ku miƙe manyan hanyoyi domin Allahnmu",
            "poem": 1
          },
          {
            "text": "a cikin jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Za a cike kowane kwari,",
            "poem": 1
          },
          {
            "text": "a baje kowane dutse da kowane tudu;",
            "poem": 2
          },
          {
            "text": "za a mayar da karkatattun wurare su zama sumul,",
            "poem": 1
          },
          {
            "text": "munanan wurare kuma su zama da kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Za a kuma bayyana ɗaukakar Ubangiji,",
            "poem": 1
          },
          {
            "text": "dukan mutane kuwa za su gan ta.",
            "poem": 2
          },
          {
            "text": "Gama Ubangiji da kansa ne ya yi magana.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Muryar tana cewa, “Ka yi shela.”",
            "poem": 1
          },
          {
            "text": "Na kuwa ce, “Me zan yi shelar?”",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Dukan mutane kamar ciyawa suke,",
            "poem": 1
          },
          {
            "text": "kuma dukan ɗaukakarsu kamar furannin jeji ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ciyawa takan yanƙwane, furanni kuma su yi yaushi,",
            "poem": 1
          },
          {
            "text": "domin Ubangiji ya hura iska a kansu.",
            "poem": 2
          },
          {
            "text": "Tabbatacce mutane ciyawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Hakika ciyawa takan yanƙwane, furanni kuma su yi yaushi,",
            "poem": 1
          },
          {
            "text": "amma maganar Allahnmu tana nan daram har abada.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kai da ka kawo labari mai daɗi wa Sihiyona,",
            "poem": 1
          },
          {
            "text": "ka haura a bisa dutse.",
            "poem": 2
          },
          {
            "text": "Kai da ka kawo labari mai daɗi wa Urushalima,",
            "poem": 1
          },
          {
            "noteId": 692
          },
          {
            "text": "ka tā da muryarka ka yi ihu,",
            "poem": 2
          },
          {
            "text": "ka ɗaga ta, kada ka ji tsoro;",
            "poem": 1
          },
          {
            "text": "faɗa wa garuruwan Yahuda,",
            "poem": 2
          },
          {
            "text": "“Ga Allahnku!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duba, Ubangiji Mai Iko Duka yana zuwa da iko,",
            "poem": 1
          },
          {
            "text": "hannunsa kuma yana yin mulki dominsa.",
            "poem": 2
          },
          {
            "text": "Duba, ladarsa tana tare da shi,",
            "poem": 1
          },
          {
            "text": "sakamakonsa kuma na rakiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yakan lura da garkensa kamar makiyayi.",
            "poem": 1
          },
          {
            "text": "Yakan tattara tumaki wuri ɗaya",
            "poem": 2
          },
          {
            "text": "yă riƙe su kurkusa da ƙirjinsa;",
            "poem": 1
          },
          {
            "text": "a hankali kuma yakan bi da masu ba da mama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Wane ne ya auna ruwaye a tafin hannunsa,",
            "poem": 1
          },
          {
            "text": "ko kuwa ya gwada tsawon sammai da fāɗin tafin hannunsa?",
            "poem": 2
          },
          {
            "text": "Wane ne ya riƙe ƙurar ƙasa a kwando,",
            "poem": 1
          },
          {
            "text": "ko kuwa ya auna nauyin duwatsu a magwaji,",
            "poem": 2
          },
          {
            "text": "tuddai kuma a ma’auni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wane ne ya fahimci zuciyar",
            "poem": 1
          },
          {
            "noteId": 693
          },
          {
            "text": "Ubangiji,",
            "poem": 1
          },
          {
            "text": "ko kuwa ya koya masa a matsayin mashawarcinsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Wane ne Ubangiji ya nemi shawararsa don yă ganar da shi,",
            "poem": 1
          },
          {
            "text": "wane ne kuma ya koya masa hanyar da ta dace?",
            "poem": 2
          },
          {
            "text": "Wane ne ya koya masa sani",
            "poem": 1
          },
          {
            "text": "ko ya nuna masa hanyar fahimta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Tabbatacce al’ummai suna kama da ɗigon ruwa a cikin bokiti",
            "poem": 1
          },
          {
            "text": "an ɗauke su a matsayin ƙura a kan magwaji;",
            "poem": 2
          },
          {
            "text": "yakan auna tsibirai sai ka ce ƙura mai laushi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Itatuwan Lebanon ba su isa a yi wutar bagade da su ba,",
            "poem": 1
          },
          {
            "text": "balle dabbobinsa su isa yin hadayun ƙonawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "A gabansa dukan al’ummai ba kome ba ne;",
            "poem": 1
          },
          {
            "text": "ya ɗauke su ba a bakin kome ba",
            "poem": 2
          },
          {
            "text": "kuma banza ne kurum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "To, ga wane ne za ka kwatanta Allah?",
            "poem": 1
          },
          {
            "text": "Wace siffa za ka kwatanta shi da ita?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Gunki dai, maƙeri kan yi zubinsa,",
            "poem": 1
          },
          {
            "text": "maƙerin zinariya kuma yă ƙera shi da zinariya",
            "poem": 2
          },
          {
            "text": "yă kuma sarrafa masa sarƙoƙin azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutumin da talauci ya sha kansa da ba zai iya miƙa irin hadayar nan ba",
            "poem": 1
          },
          {
            "text": "kan zaɓi itacen da ba zai ruɓe ba.",
            "poem": 2
          },
          {
            "text": "Yakan nemi gwanin sassaƙa",
            "poem": 1
          },
          {
            "text": "don yă sassaƙa masa gunkin da ba zai fāɗi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba ku sani ba?",
            "poem": 1
          },
          {
            "text": "Ba ku taɓa ji ba?",
            "poem": 2
          },
          {
            "text": "Ba a faɗa muku daga farko ba?",
            "poem": 1
          },
          {
            "text": "Ba ku fahimta ba tun kafawar duniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana zaune a kursiyi a bisa iyakar duniya,",
            "poem": 1
          },
          {
            "text": "kuma mutanenta suna kama da fāra.",
            "poem": 2
          },
          {
            "text": "Ya miƙa sammai kamar rumfa,",
            "poem": 1
          },
          {
            "text": "ya kuma shimfiɗa su kamar tentin da za a zauna a ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Yakan mai da sarakuna ba kome ba",
            "poem": 1
          },
          {
            "text": "yă mai da masu mulkin wannan duniya wofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ba da jimawa ba bayan an shuka su,",
            "poem": 1
          },
          {
            "text": "ba da jimawa ba bayan an dasa su,",
            "poem": 2
          },
          {
            "text": "ba da jimawa ba bayan sun yi saiwa a ƙasa,",
            "poem": 2
          },
          {
            "text": "sai yă hura musu iska su yanƙwane,",
            "poem": 1
          },
          {
            "text": "guguwa kuma ta kwashe su kamar yayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "“Ga wa za ku kwatanta ni?",
            "poem": 1
          },
          {
            "text": "Ko kuwa wa yake daidai da ni?” In ji Mai Tsarkin nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ku ɗaga idanunku ku duba sammai.",
            "poem": 1
          },
          {
            "text": "Wane ne ya halicce dukan waɗannan?",
            "poem": 2
          },
          {
            "text": "Wane ne ya fitar da rundunar taurari ɗaya-ɗaya,",
            "poem": 1
          },
          {
            "text": "yana kiransu, kowanne da sunansa.",
            "poem": 2
          },
          {
            "text": "Saboda ikonsa mai girma da kuma ƙarfinsa mai girma,",
            "poem": 1
          },
          {
            "text": "babu ko ɗayansu da ya ɓace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ya Yaƙub, ya Isra’ila, me ya sa kake ce",
            "poem": 1
          },
          {
            "text": "kana kuma gunaguni cewa,",
            "poem": 2
          },
          {
            "text": "“Hanyata tana a ɓoye daga Ubangiji;",
            "poem": 1
          },
          {
            "text": "Allah bai kula da abin da yake damuna ba”?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ba ku sani ba?",
            "poem": 1
          },
          {
            "text": "Ba ku ji ba?",
            "poem": 2
          },
          {
            "text": "Ubangiji madawwamin Allah ne,",
            "poem": 1
          },
          {
            "text": "Mahaliccin iyakokin duniya.",
            "poem": 2
          },
          {
            "text": "Ba zai taɓa gaji ko yă kasala ba,",
            "poem": 1
          },
          {
            "text": "kuma fahimtarsa ya wuce gaban ganewar mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Yakan ba da ƙarfi ga waɗanda suka gaji",
            "poem": 1
          },
          {
            "text": "yă kuma ƙara ƙarfi ga marasa ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ko matasa ma kan gaji su kuma kasala,",
            "poem": 1
          },
          {
            "text": "samari kuma kan yi tuntuɓe su fāɗi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "amma waɗanda suka dogara ga Ubangiji",
            "poem": 1
          },
          {
            "text": "za su sabunta ƙarfinsu.",
            "poem": 2
          },
          {
            "text": "Za su yi firiya da fikafikai kamar gaggafa;",
            "poem": 1
          },
          {
            "text": "za su kuma yi gudu ba kuwa za su gaji ba,",
            "poem": 2
          },
          {
            "text": "za su yi tafiya ba kuwa za su kasala ba.",
            "poem": 2
          }
        ]
      }
    ],
