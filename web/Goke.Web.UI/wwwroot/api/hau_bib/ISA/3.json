  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Urushalima da Yahuda"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yanzu ka duba fa, Ubangiji,",
            "poem": 1
          },
          {
            "text": "Ubangiji Maɗaukaki,",
            "poem": 2
          },
          {
            "text": "yana shirin yă ɗauke kowane tanadi da taimako",
            "poem": 1
          },
          {
            "text": "daga Urushalima da Yahuda",
            "poem": 2
          },
          {
            "text": "dukan tanade-tanaden abinci da kuma dukan tanade-tanaden ruwa,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "jarumi, da soja,",
            "poem": 2
          },
          {
            "text": "alƙali da annabi",
            "poem": 1
          },
          {
            "text": "masu duba da dattijo,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "shugaban sojojin hamsin da mutum mai makami,",
            "poem": 1
          },
          {
            "text": "mai ba da shawara, gwanin sarrafa abubuwa da mai gwanintan dabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Zan sa ’yan yara su zama shugabanninsu;",
            "poem": 1
          },
          {
            "text": "’yan yara kurum za su yi mulkinsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mutane za su zalunci juna",
            "poem": 1
          },
          {
            "text": "mutum da mutum, maƙwabci da maƙwabci.",
            "poem": 2
          },
          {
            "text": "Yara za su rena tsofaffi,",
            "poem": 1
          },
          {
            "text": "ƙasƙantacce zai rena mai daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mutum zai kama ɗaya daga cikin ’yan’uwansa",
            "poem": 1
          },
          {
            "text": "a gidan mahaifinsa ya ce,",
            "poem": 2
          },
          {
            "text": "“Kana da abin sawa, ka zama shugabanmu;",
            "poem": 1
          },
          {
            "text": "wannan kango kuma yă zama a ƙarƙashinka!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Amma a ranan nan zai tā da murya ya ce,",
            "poem": 1
          },
          {
            "text": "“Ba ni ba dai.",
            "poem": 2
          },
          {
            "text": "Ba ni da abinci ko abin sawa a gidana;",
            "poem": 1
          },
          {
            "text": "kada ka mai da ni shugaban mutane.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Urushalima tana tangaɗi,",
            "poem": 1
          },
          {
            "text": "Yahuda yana fāɗuwa;",
            "poem": 2
          },
          {
            "text": "maganganunsu da ayyukansu suna gāba da Ubangiji,",
            "poem": 1
          },
          {
            "text": "suna rena ɗaukakar kasancewarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Fuskokinsu shaidu ne a kansu;",
            "poem": 1
          },
          {
            "text": "suna nuna zunubinsu a fili kamar yadda Sodom ya yi;",
            "poem": 2
          },
          {
            "text": "ba sa ma ɓoye shi.",
            "poem": 2
          },
          {
            "text": "Kaitonsu!",
            "poem": 1
          },
          {
            "text": "Sun jawo wa kansu masifa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku faɗa wa masu adalci cewa kome zai zama musu da kyau,",
            "poem": 1
          },
          {
            "text": "gama za su ji daɗin aikin da hannuwansu suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kaiton masu mugunta! Masifa tana a kansu!",
            "poem": 1
          },
          {
            "text": "Za a rama abin da hannuwansu suka yi.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Matasa suna zalunta mutanena,",
            "poem": 1
          },
          {
            "text": "mata suna mulki a bisansu.",
            "poem": 2
          },
          {
            "text": "Ya mutanena, jagorarinku suna ɓad da ku;",
            "poem": 1
          },
          {
            "text": "suna karkatar da ku daga hanya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ubangiji ya ɗauki mazauninsa a cikin ɗakin shari’a;",
            "poem": 1
          },
          {
            "text": "ya tashi don yă shari’anta mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ubangiji yana shari’a",
            "poem": 1
          },
          {
            "text": "da dattawa da kuma shugabannin mutanensa,",
            "poem": 2
          },
          {
            "text": "“Ku ne kuka lalace gonar inabina;",
            "poem": 1
          },
          {
            "text": "ganimar talakawa suna a gidajenku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ina dalilin da kuke marmatsa mutanena",
            "poem": 1
          },
          {
            "text": "kuna gurgurje fuskokin talakawa?”",
            "poem": 2
          },
          {
            "text": "Ni Ubangiji Maɗaukaki na faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ubangiji ya ce,",
            "poem": 1
          },
          {
            "text": "“Matan Sihiyona suna da girman kai,",
            "poem": 2
          },
          {
            "text": "suna tafiya da wuya a miƙe,",
            "poem": 1
          },
          {
            "text": "da idanu masu yaudara,",
            "poem": 2
          },
          {
            "text": "suna takawa ɗaya-ɗaya a hankali,",
            "poem": 1
          },
          {
            "text": "da mundaye a ƙafafunsu, suna cas-cas.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Saboda haka Ubangiji zai kawo gyambuna a kawunan matan Sihiyona;",
            "poem": 1
          },
          {
            "text": "Ubangiji zai sa a aske kawunansu, a bar su ƙwal.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          "A wannan rana Ubangiji zai ƙwace abin da suke taƙama da shi, mundayensu, ɗankwalin kansu da abin wuyansu,"
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          "’yan kunnensu, kwandagansu da lulluɓinsu,"
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          "kitsonsu, sarƙar da suke sa wa damatsansu da ɗamararsu, kwalabai turare da layu,"
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          "da ƙawanen da suka sa a yatsotsinsu da hancinsu,"
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          "tufafi masu kyau, da manyan rigunansu, da mayafansu, da jakar kuɗinsu"
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "da madubi, da kuma tufafin lilin da adikai, da gyale."
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "A maimakon ƙanshi, wari ne za a ji;",
            "poem": 1
          },
          {
            "text": "a maimakon abin ɗamara, igiya ce za a samu;",
            "poem": 2
          },
          {
            "text": "a maimakon kyakkyawan gashi, sanƙo za su kasance da shi a kai;",
            "poem": 1
          },
          {
            "text": "a maimakon tufafi masu kyau, za su sa tsummoki;",
            "poem": 2
          },
          {
            "text": "a maimakon kyau, za su zama munana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Mazanku za su mutu ta wurin takobi,",
            "poem": 1
          },
          {
            "text": "jarumawanku za su mutu a yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ƙofofin Sihiyona za su yi makoki su kuma yi kuka;",
            "poem": 1
          },
          {
            "text": "za tă zama wofi, za tă zauna a ƙasa.",
            "poem": 2
          }
        ]
      }
    ],
