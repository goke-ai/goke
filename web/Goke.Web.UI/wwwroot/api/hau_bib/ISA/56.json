  "chapter": {
    "number": 56,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ceto domin waɗansu"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ga abin da Ubangiji yana cewa,",
          {
            "text": "“Ku riƙe gaskiya",
            "poem": 1
          },
          {
            "text": "ku yi abin da yake daidai,",
            "poem": 2
          },
          {
            "text": "gama cetona yana kusa",
            "poem": 1
          },
          {
            "text": "za a kuma bayyana adalcina nan da nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mai albarka ne mutumin da ya aikata wannan,",
            "poem": 1
          },
          {
            "text": "mutumin da ya riƙe kam",
            "poem": 2
          },
          {
            "text": "yana kiyaye Asabbaci ba tare da ƙazantar da shi ba,",
            "poem": 2
          },
          {
            "text": "yana kuma kiyaye kansa daga yin mugun abu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kada baƙon da ya miƙa kansa ga Ubangiji ya ce,",
            "poem": 1
          },
          {
            "text": "“Ai Ubangiji zai ware ni daga mutanensa.”",
            "poem": 2
          },
          {
            "text": "Kada kuma wani bābā ya yi gunaguni cewa,",
            "poem": 1
          },
          {
            "text": "“Ni busasshen itace ne kawai.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          "Gama ga abin da Ubangiji ya faɗa,",
          {
            "text": "“Wa bābānnin da suna kiyaye Asabbatai,",
            "poem": 1
          },
          {
            "text": "waɗanda suka zaɓi yin abin da ya gamshe ni",
            "poem": 2
          },
          {
            "text": "suna kuma riƙe da alkawarina kankan,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "a gare su cikin haikalina da kuma bangayensa",
            "poem": 1
          },
          {
            "text": "zan ba da matuni da kuma suna",
            "poem": 2
          },
          {
            "text": "mafi kyau fiye da ’ya’ya maza da kuma ’ya’ya mata;",
            "poem": 2
          },
          {
            "text": "zan ba su madawwamin sunan",
            "poem": 1
          },
          {
            "text": "da ba za a raba su da shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Baƙin da suka miƙa kansu ga Ubangiji",
            "poem": 1
          },
          {
            "text": "don su bauta masa,",
            "poem": 2
          },
          {
            "text": "su kuma ƙaunaci sunan Ubangiji,",
            "poem": 1
          },
          {
            "text": "waɗanda kuma suke yin masa sujada,",
            "poem": 2
          },
          {
            "text": "duk waɗanda suka kiyaye Asabbaci ba tare da ƙazantar da shi ba",
            "poem": 1
          },
          {
            "text": "suka kuma riƙe alkawarina kankan,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "waɗannan ne zan kai tsattsarkan dutsena",
            "poem": 1
          },
          {
            "text": "in sa su yi farin ciki a gidana na addu’a.",
            "poem": 2
          },
          {
            "text": "Hadayunsu na ƙonawa da sadakokinsu",
            "poem": 1
          },
          {
            "text": "za su zama abin karɓa a bagadena;",
            "poem": 2
          },
          {
            "text": "gama za a ce da gidana",
            "poem": 1
          },
          {
            "text": "gidan addu’a domin dukan al’ummai.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji Mai Iko Duka ya furta cewa,",
            "poem": 1
          },
          {
            "text": "zai tattara korarru na Isra’ila,",
            "poem": 2
          },
          {
            "text": "“Zan ƙara tattaro waɗansu",
            "poem": 1
          },
          {
            "text": "bayan waɗanda na riga na tattara.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Zargin da Allah ya yi a kan mugaye"
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku zo, dukanku namun jeji,",
            "poem": 1
          },
          {
            "text": "ku zo ku ci, dukanku namun jeji!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Matsaran Isra’ila makafi ne,",
            "poem": 1
          },
          {
            "text": "dukansu jahilai ne;",
            "poem": 2
          },
          {
            "text": "dukansu bebayen karnuka ne",
            "poem": 1
          },
          {
            "text": "ba za su iya haushi ba;",
            "poem": 2
          },
          {
            "text": "suna kwance ne kawai suna mafarki,",
            "poem": 1
          },
          {
            "text": "suna son barci ba dama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Su karnuka ne masu kwaɗayi;",
            "poem": 1
          },
          {
            "text": "ba su taɓa ƙoshi.",
            "poem": 2
          },
          {
            "text": "Su makiyaya ne marasa ganewa;",
            "poem": 1
          },
          {
            "text": "duk sun nufi inda suka ga dama,",
            "poem": 2
          },
          {
            "text": "kowa yana nemar wa kansa riba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kowanne yakan ce, “Zo, bari in samo ruwan inabi!",
            "poem": 1
          },
          {
            "text": "Bari mu cika cikinmu da barasa!",
            "poem": 2
          },
          {
            "text": "Gobe ma zai zama kamar yau,",
            "poem": 1
          },
          {
            "text": "ko ma fiye da haka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
