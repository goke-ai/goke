  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "heading",
        "content": [
          "Dutsen Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ga abin da Ishaya ɗan Amoz ya gani game da Yahuda da Urushalima."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "A kwanaki masu zuwa",
          {
            "text": "za a kafa dutsen haikalin Ubangiji",
            "poem": 1
          },
          {
            "text": "a matsayin babba cikin duwatsu;",
            "poem": 2
          },
          {
            "text": "za a daga shi bisa tuddai,",
            "poem": 1
          },
          {
            "text": "kuma dukan al’ummai za su bumbunto zuwa gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          "Mutane da yawa za su zo su ce,",
          {
            "text": "“Ku zo, bari mu haura zuwa dutsen Ubangiji,",
            "poem": 1
          },
          {
            "text": "zuwa gidan Allah na Yaƙub.",
            "poem": 2
          },
          {
            "text": "Zai koya mana hanyoyinsa,",
            "poem": 1
          },
          {
            "text": "domin mu yi tafiya cikin hanyoyinsa.”",
            "poem": 2
          },
          {
            "text": "Dokar za tă fito daga Sihiyona,",
            "poem": 1
          },
          {
            "text": "maganar Ubangiji daga Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zai shari’anta tsakanin al’ummai",
            "poem": 1
          },
          {
            "text": "zai kuma sulhunta faɗar mutane masu yawa.",
            "poem": 2
          },
          {
            "text": "Za su mai da takubansu su zama garemani",
            "poem": 1
          },
          {
            "text": "māsunsu su zama wuƙaƙen askin itatuwa.",
            "poem": 2
          },
          {
            "text": "Al’umma ba za tă ƙara ɗauki takobi a kan al’umma ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa za su ƙara yin horarwar yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ki zo, ya gidan Yaƙub,",
            "poem": 1
          },
          {
            "text": "bari mu yi tafiya a hasken Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ranar Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka rabu da mutanenka,",
            "poem": 1
          },
          {
            "text": "gidan Yaƙub.",
            "poem": 2
          },
          {
            "text": "Sun cika da ayyukan sihiri da aka kawo daga Gabas;",
            "poem": 1
          },
          {
            "text": "suna yin duba kamar Filistiyawa",
            "poem": 2
          },
          {
            "text": "suna tafa hannuwa tare da marasa sanin Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ƙasarsu ta cika da azurfa da zinariya;",
            "poem": 1
          },
          {
            "text": "dukiyarsu kuma ba iyaka.",
            "poem": 2
          },
          {
            "text": "Ƙasarsu ta cika da dawakai;",
            "poem": 1
          },
          {
            "text": "kekunan yaƙinsu kuma ba iyaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙasarsu ta cika da gumaka;",
            "poem": 1
          },
          {
            "text": "sukan rusuna ga aikin hannuwansu,",
            "poem": 2
          },
          {
            "text": "ga abin da yatsotsinsu suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Saboda an jawo mutum ƙasa",
            "poem": 1
          },
          {
            "text": "aka kuma ƙasƙantar da ɗan adam,",
            "poem": 2
          },
          {
            "text": "kada ku gafarta musu.",
            "poem": 2
          },
          {
            "noteId": 648
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku tafi cikin duwatsu,",
            "poem": 1
          },
          {
            "text": "ku ɓuya cikin ƙasa",
            "poem": 2
          },
          {
            "text": "daga razanar Ubangiji",
            "poem": 2
          },
          {
            "text": "da kuma darajar ɗaukakarsa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Za a ƙasƙantar da mai girman kai",
            "poem": 1
          },
          {
            "text": "za a kuma lalatar da fariyar masu ɗaga kai;",
            "poem": 2
          },
          {
            "text": "Ubangiji kaɗai za a ɗaukaka a wannan rana.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ubangiji Maɗaukaki yana da rana ajiye",
            "poem": 1
          },
          {
            "text": "domin dukan masu girman kai da masu fariya",
            "poem": 2
          },
          {
            "text": "domin dukan waɗanda aka ɗaukaka",
            "poem": 2
          },
          {
            "text": "(zai kuwa ƙasƙantar da su),",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "domin dukan al’ul na Lebanon, masu tsayi da masu fariya,",
            "poem": 1
          },
          {
            "text": "da kuma dukan itatuwan oak na Bashan,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "domin dukan dogayen duwatsu",
            "poem": 1
          },
          {
            "text": "da kuma tuddai masu tsayi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "domin kowace doguwar hasumiya",
            "poem": 1
          },
          {
            "text": "da kowace katanga mai ƙarfi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "domin kowane jirgin ruwan kasuwanci",
            "poem": 1
          },
          {
            "noteId": 649
          },
          {
            "text": "da kuma jirgi mafi girma mafi kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Za a jawo mai girman kai ƙasa",
            "poem": 1
          },
          {
            "text": "a kuma ƙasƙantar da mai ɗaga kai;",
            "poem": 2
          },
          {
            "text": "Ubangiji kaɗai za a ɗaukaka a wannan rana,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "za a kuma kawar da gumaka ƙaƙaf.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Mutane za su gudu zuwa kogwannin duwatsu",
            "poem": 1
          },
          {
            "text": "da kuma ramummuka a ƙasa",
            "poem": 2
          },
          {
            "text": "daga razanar Ubangiji",
            "poem": 1
          },
          {
            "text": "da kuma darajar ɗaukakarsa,",
            "poem": 2
          },
          {
            "text": "sa’ad da ya tashi don yă girgiza duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "A wannan rana mutane za su zubar wa",
            "poem": 1
          },
          {
            "text": "jaba da jamage",
            "poem": 2
          },
          {
            "text": "gumakansu na azurfa da gumakansu na zinariya",
            "poem": 1
          },
          {
            "text": "da suka yi don su bauta musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Za su gudu zuwa kogwannin duwatsu",
            "poem": 1
          },
          {
            "text": "da kuma zuwa tsagaggun duwatsu",
            "poem": 2
          },
          {
            "text": "daga razanar Ubangiji",
            "poem": 1
          },
          {
            "text": "da kuma darajar ɗaukakarsa,",
            "poem": 2
          },
          {
            "text": "sa’ad da ya tashi don yă girgiza duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ku daina dogara ga mutum,",
            "poem": 1
          },
          {
            "text": "wanda numfashi ne kawai yake da shi a hancinsa.",
            "poem": 2
          },
          {
            "text": "Wace daraja gare shi?",
            "poem": 1
          }
        ]
      }
    ],
