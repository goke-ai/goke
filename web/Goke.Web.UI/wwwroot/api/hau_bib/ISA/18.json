  "chapter": {
    "number": 18,
    "content": [
      {
        "type": "heading",
        "content": [
          "Annabci a kan Kush"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kaiton ƙasar da ake jin ƙarar fikafikai",
            "poem": 1
          },
          {
            "noteId": 669
          },
          {
            "text": "a bakin kogunan Kush,",
            "poem": 2
          },
          {
            "noteId": 670
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "wadda ta aiko da jakadu ta teku",
            "poem": 1
          },
          {
            "text": "cikin jiragen ruwan da aka yi da kyauro a bisa ruwa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ku tafi, ku ’yan saƙo masu sauri,",
            "poem": 1
          },
          {
            "text": "zuwa ga dogayen mutane masu sulɓin jiki,",
            "poem": 2
          },
          {
            "text": "zuwa ga mutanen da ake jin tsoro a ko’ina,",
            "poem": 2
          },
          {
            "text": "al’umma mai ƙarfin iko tana jawabin da ba a saba ji ba,",
            "poem": 1
          },
          {
            "text": "mai ƙasar da koguna suka raba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku dukan mutanen duniya,",
            "poem": 1
          },
          {
            "text": "ku da kuke zama a duniya,",
            "poem": 2
          },
          {
            "text": "sa’ad da aka ɗaga tutar a kan duwatsu,",
            "poem": 1
          },
          {
            "text": "za ku gan shi,",
            "poem": 2
          },
          {
            "text": "sa’ad da kuma aka busa ƙaho,",
            "poem": 1
          },
          {
            "text": "za ku ji shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ga abin da Ubangiji ya faɗa mini,",
            "poem": 1
          },
          {
            "text": "“Zan yi shiru in kuma duba a hankali daga mazaunina,",
            "poem": 2
          },
          {
            "text": "kamar ƙuna mai zafi a hasken rana,",
            "poem": 1
          },
          {
            "text": "kamar girgijen raba a lokacin girbi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama kafin girbi, sa’ad da furanni suka karkaɗe",
            "poem": 1
          },
          {
            "text": "furanni kuma suka zama ’ya’yan inabin da suka nuna,",
            "poem": 2
          },
          {
            "text": "zai faffalle rassan kuringar inabi da wuƙa,",
            "poem": 1
          },
          {
            "text": "ya yanke ya kuma kwashe rassan da suka bazu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Duk za a bar su wa tsuntsayen dutse su ci",
            "poem": 1
          },
          {
            "text": "da kuma namun jeji;",
            "poem": 2
          },
          {
            "text": "tsuntsaye kuma za su ci rani a kansu,",
            "poem": 1
          },
          {
            "text": "namun jeji kuma za su yi damina a kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          "A wannan lokaci za a kawo kyautai wa Ubangiji Maɗaukaki",
          {
            "text": "daga dogayen mutane masu sulɓin jiki,",
            "poem": 1
          },
          {
            "text": "daga mutanen da ake jin tsoro a ko’ina,",
            "poem": 2
          },
          {
            "text": "al’umma mai ƙarfin iko na jawabin da ba a saba ji ba,",
            "poem": 1
          },
          {
            "text": "mai ƙasar da koguna suka raba.",
            "poem": 2
          },
          "Za a kawo kyautai zuwa Dutsen Sihiyona, wurin da Sunan Ubangiji Maɗaukaki yake."
        ]
      }
    ],
