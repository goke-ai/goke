  "chapter": {
    "number": 61,
    "content": [
      {
        "type": "heading",
        "content": [
          "Shekarar tagomashin Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ruhun Ubangiji Mai Iko Duka yana a kaina,",
            "poem": 1
          },
          {
            "text": "domin Ubangiji ya shafe ni",
            "poem": 2
          },
          {
            "text": "domin in yi wa’azi labari mai daɗi ga matalauta.",
            "poem": 2
          },
          {
            "text": "Ya aiko ni in warkar da waɗanda suka karai a zuci,",
            "poem": 1
          },
          {
            "text": "don in yi shelar ’yanci don ɗaurarru",
            "poem": 2
          },
          {
            "text": "in kuma kunce ’yan kurkuku daga duhu",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "don in yi shelar shekarar tagomashin Ubangiji",
            "poem": 1
          },
          {
            "text": "da kuma ranar ɗaukan fansar Allahnmu,",
            "poem": 2
          },
          {
            "text": "don in ta’azantar da dukan waɗanda suke makoki,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "in tanada wa waɗanda suke baƙin ciki a Sihiyona,",
            "poem": 2
          },
          {
            "text": "in maido musu rawani mai kyau",
            "poem": 1
          },
          {
            "text": "a maimako na toka,",
            "poem": 2
          },
          {
            "text": "man murna",
            "poem": 1
          },
          {
            "text": "a maimako na makoki,",
            "poem": 2
          },
          {
            "text": "da kuma rigar yabo",
            "poem": 1
          },
          {
            "text": "a maimako na ruhun fid da zuciya.",
            "poem": 2
          },
          {
            "text": "Za a ce da su itatuwan oak na adalci,",
            "poem": 1
          },
          {
            "text": "shukin Ubangiji",
            "poem": 2
          },
          {
            "text": "don bayyana darajarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Za su sāke gina kufai na dā",
            "poem": 1
          },
          {
            "text": "su raya wurare da aka lalace tun da daɗewa;",
            "poem": 2
          },
          {
            "text": "za su sabunta biranen da aka rurrushe",
            "poem": 1
          },
          {
            "text": "da aka lalace tun zamanai masu yawa da suka wuce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Baƙi za su yi kiwon garkunanki;",
            "poem": 1
          },
          {
            "text": "baƙi za su yi miki noman gonaki da gonakin inabinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Za a kuma kira ku firistocin Ubangiji,",
            "poem": 1
          },
          {
            "text": "za a kira ku masu hidimar Allahnmu.",
            "poem": 2
          },
          {
            "text": "Za ku ci wadatar waɗansu al’ummai,",
            "poem": 1
          },
          {
            "text": "kuma a cikin dukiyarsu za ku yi taƙama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "A maimakon kunyarsu",
            "poem": 1
          },
          {
            "text": "mutanena za su sami rabi riɓi biyu,",
            "poem": 2
          },
          {
            "text": "a maimakon wulaƙanci",
            "poem": 1
          },
          {
            "text": "za su yi farin ciki cikin gādonsu;",
            "poem": 2
          },
          {
            "text": "ta haka za su gāji rabo riɓi biyu a ƙasarsu,",
            "poem": 1
          },
          {
            "text": "da kuma madawwamin farin ciki zai zama nasu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Gama ni, Ubangiji, ina ƙaunar adalci;",
            "poem": 1
          },
          {
            "text": "na ƙi fashi da aikata laifi.",
            "poem": 2
          },
          {
            "text": "Cikin adalcina zan sāka musu",
            "poem": 1
          },
          {
            "text": "in kuma yi madawwamin alkawari da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Za a san da zuriyarsu a cikin al’ummai",
            "poem": 1
          },
          {
            "text": "’ya’yansu kuma a cikin mutane.",
            "poem": 2
          },
          {
            "text": "Dukan waɗanda suka gan su za su san",
            "poem": 1
          },
          {
            "text": "cewa su mutane ne da Ubangiji ya sa wa albarka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ina jin daɗi ƙwarai a cikin Ubangiji;",
            "poem": 1
          },
          {
            "text": "raina yana farin ciki a cikin Allahna.",
            "poem": 2
          },
          {
            "text": "Gama ya suturce ni da rigunan ceto",
            "poem": 1
          },
          {
            "text": "ya yi mini ado da rigar adalci,",
            "poem": 2
          },
          {
            "text": "yadda ango yakan yi wa kansa ado kamar firist",
            "poem": 1
          },
          {
            "text": "kamar kuma yadda amarya takan sha ado da duwatsunta masu daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama kamar yadda ƙasa takan sa tsire-tsire su tohu",
            "poem": 1
          },
          {
            "text": "lambu kuma ya sa iri ya yi girma,",
            "poem": 2
          },
          {
            "text": "haka Ubangiji Mai Iko Duka zai sa adalci da yabo",
            "poem": 1
          },
          {
            "text": "su tsiro a gaban dukan al’ummai.",
            "poem": 2
          }
        ]
      }
    ],
