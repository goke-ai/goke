  "chapter": {
    "number": 62,
    "content": [
      {
        "type": "heading",
        "content": [
          "Sabon sunan Sihiyona"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Saboda Sihiyona ba zan yi shiru ba,",
            "poem": 1
          },
          {
            "text": "saboda Urushalima ba zan huta ba,",
            "poem": 2
          },
          {
            "text": "sai adalcinta ya haskaka kamar hasken safiya,",
            "poem": 1
          },
          {
            "text": "cetonta kuma ya haskaka kamar fitila mai haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Al’ummai za su ga adalcinki,",
            "poem": 1
          },
          {
            "text": "sarakuna kuma za su ga ɗaukakarki;",
            "poem": 2
          },
          {
            "text": "za a kira ki da sabon suna",
            "poem": 1
          },
          {
            "text": "sunan da bakin Ubangiji zai ambata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za ki zama rawanin daraja a hannun Ubangiji,",
            "poem": 1
          },
          {
            "text": "rawanin sarauta a hannun Allahnki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba za a ƙara ce da ke Yasasshiya ba,",
            "poem": 1
          },
          {
            "text": "ko a kira ƙasarki Kango.",
            "poem": 2
          },
          {
            "text": "Amma za a ce da ke Hefziba",
            "poem": 1
          },
          {
            "noteId": 711
          },
          {
            "text": "ƙasarki kuma Bewula;",
            "poem": 2
          },
          {
            "noteId": 712
          },
          {
            "text": "gama Ubangiji zai ji daɗinki,",
            "poem": 1
          },
          {
            "text": "ƙasarki kuma za tă yi aure.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kamar yadda saurayi kan auri yarinya,",
            "poem": 1
          },
          {
            "text": "haka ’ya’yanki maza",
            "poem": 2
          },
          {
            "noteId": 713
          },
          {
            "text": "za su aure ki;",
            "poem": 2
          },
          {
            "text": "kamar kuma yadda ango yakan yi farin ciki da amaryarsa,",
            "poem": 2
          },
          {
            "text": "haka Allahnki zai yi farin ciki da ke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na sa matsara a kan katangarki, ya Urushalima;",
            "poem": 1
          },
          {
            "text": "ba za su taɓa yin shiru ba, dare da rana.",
            "poem": 2
          },
          {
            "text": "Ku da kuke kira bisa sunan Ubangiji,",
            "poem": 1
          },
          {
            "text": "kada ku ba kanku hutu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "kuma kada ku ba shi hutu sai ya kafa Urushalima",
            "poem": 1
          },
          {
            "text": "ya kuma mai da ita yabon duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji ya rantse da hannunsa na dama",
            "poem": 1
          },
          {
            "text": "ta hannunsa kuma mai iko cewa,",
            "poem": 2
          },
          {
            "text": "“Ba zan ƙara ba da hatsinki",
            "poem": 1
          },
          {
            "text": "ya zama abinci ga abokan gābanki ba,",
            "poem": 2
          },
          {
            "text": "baƙi kuma ba za su ƙara shan ruwan inabin",
            "poem": 1
          },
          {
            "text": "wanda kika sha wahala samu ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "amma waɗanda suka girbe shi za su ci shi",
            "poem": 1
          },
          {
            "text": "su kuma yabi Ubangiji,",
            "poem": 2
          },
          {
            "text": "waɗanda kuma suka tattara ’ya’yan inabi za su sha shi",
            "poem": 2
          },
          {
            "text": "a filayen wurina mai tsarki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku wuce, ku wuce ƙofofi!",
            "poem": 1
          },
          {
            "text": "Ku shirya hanya saboda mutane.",
            "poem": 2
          },
          {
            "text": "Ku gina, ku gina babbar hanya!",
            "poem": 1
          },
          {
            "text": "Ku kawar da duwatsu.",
            "poem": 2
          },
          {
            "text": "Ku ɗaga tuta saboda al’ummai.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji ya yi shela",
            "poem": 1
          },
          {
            "text": "ga iyakokin duniya cewa,",
            "poem": 2
          },
          {
            "text": "“Faɗa wa Diyar Sihiyona,",
            "poem": 1
          },
          {
            "text": "‘Ga Mai Cetonki yana zuwa!",
            "poem": 2
          },
          {
            "text": "Ga ladarsa tana tare da shi,",
            "poem": 1
          },
          {
            "text": "sakamakonsa yana raka shi.’ ”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Za a ce da shi Tsattsarkar Mutane,",
            "poem": 1
          },
          {
            "text": "Fansassu na Ubangiji;",
            "poem": 2
          },
          {
            "text": "za a kuma ce da ke Wadda Aka Nema",
            "poem": 1
          },
          {
            "text": "Birnin da Ba Za a Ƙara Yashe ta ba.",
            "poem": 2
          }
        ]
      }
    ],
