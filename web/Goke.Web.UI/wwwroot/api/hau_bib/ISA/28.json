  "chapter": {
    "number": 28,
    "content": [
      {
        "type": "heading",
        "content": [
          "Kaiton Efraim"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kaito ga wannan rawani, girman kai na mashayan Efraim,",
            "poem": 1
          },
          {
            "text": "ga fure mai yanƙwanewa, darajar kyansa,",
            "poem": 2
          },
          {
            "text": "da aka sa a kan kwari mai ba da amfani,",
            "poem": 1
          },
          {
            "text": "ga birnin nan, wadda take girman kan waɗanda aka ƙasƙantar da ruwan inabinsu!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Duba, Ubangiji yana da wanda yake da iko da kuma ƙarfi.",
            "poem": 1
          },
          {
            "text": "Kamar dutsen ƙanƙara da kuma iska mai ɓarna,",
            "poem": 2
          },
          {
            "text": "kamar kwararowar ruwa da rigyawa mai kirmewa,",
            "poem": 1
          },
          {
            "text": "zai jefa shi har ƙasa da ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za a tattaka wannan rawani,",
            "poem": 1
          },
          {
            "text": "girman kai na mashayan Efraim da ƙafa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wannan fure mai yanƙwanewa, darajarar kyansa,",
            "poem": 1
          },
          {
            "text": "da aka sa a kan kwari mai ba da amfani,",
            "poem": 2
          },
          {
            "text": "zai zama kamar ’ya’yan ɓaure, nunan fari,",
            "poem": 1
          },
          {
            "text": "da zarar wani ya gani ya kuma tsinka,",
            "poem": 2
          },
          {
            "text": "zai haɗiye shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "A wannan rana Ubangiji Maɗaukaki",
            "poem": 1
          },
          {
            "text": "zai zama rawani mai daraja",
            "poem": 2
          },
          {
            "text": "kyakkyawan rawani",
            "poem": 1
          },
          {
            "text": "wa mutanensa da suka ragu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zai zama ruhun adalci",
            "poem": 1
          },
          {
            "text": "gare shi wanda yake zaune a kujerar shari’a,",
            "poem": 2
          },
          {
            "text": "wurin samun ƙarfi",
            "poem": 1
          },
          {
            "text": "ga waɗanda suka kori abokan gāban da suka fāɗa musu da yaƙi a ƙofofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Da waɗannan kuma masu tangaɗi saboda sun sha ruwan inabi",
            "poem": 1
          },
          {
            "text": "suke jiri don sun sha barasa",
            "poem": 2
          },
          {
            "text": "Firistoci da annabawa suna tangaɗi saboda sun sha barasa",
            "poem": 1
          },
          {
            "text": "sun kuma yi tatur da ruwan inabi;",
            "poem": 2
          },
          {
            "text": "suna jiri saboda sun sha barasa,",
            "poem": 1
          },
          {
            "text": "suna tangaɗi sa’ad da suke ganin wahayi,",
            "poem": 2
          },
          {
            "text": "suna tuntuɓe sa’ad da suke ba da shawara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk amai ya rufe teburori",
            "poem": 1
          },
          {
            "text": "kuma babu wani wurin da ba a ɓata ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Wane ne yake so ya koyar?",
            "poem": 1
          },
          {
            "text": "Ga wa yake bayyana saƙonsa?",
            "poem": 2
          },
          {
            "text": "Ga yaran da aka yaye,",
            "poem": 1
          },
          {
            "text": "ga waɗanda ba a daɗe da yayewa ba ne?",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama haka yake.",
            "poem": 1
          },
          {
            "text": "Yi ka kuma yi, yi ka kuma yi,",
            "poem": 2
          },
          {
            "text": "mulki a kan mulki, mulki a kan mulki;",
            "poem": 2
          },
          {
            "noteId": 683
          },
          {
            "text": "nan kaɗan, can kaɗan.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "To da kyau, da leɓunan baƙi da ku harsunan da ba sani ba",
            "poem": 1
          },
          {
            "text": "Allah zai yi magana da wannan mutane,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "waɗanda zai ce,",
            "poem": 1
          },
          {
            "text": "“Wannan shi ne wurin hutu, bari waɗanda suka gaji su huta”;",
            "poem": 2
          },
          {
            "text": "da kuma, “Wannan shi ne wurin wartsakewa”",
            "poem": 1
          },
          {
            "text": "amma sun ƙi su saurara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Saboda haka fa, maganar Ubangiji gare su za tă zama,",
            "poem": 1
          },
          {
            "text": "Yi ka kuma yi, yi ka kuma yi,",
            "poem": 1
          },
          {
            "text": "mulki akan mulki, mulki a kan mulki;",
            "poem": 2
          },
          {
            "text": "nan kaɗan, can kaɗan,",
            "poem": 2
          },
          {
            "text": "domin su tafi su kuma fāɗi da baya,",
            "poem": 1
          },
          {
            "text": "su ji rauni a kuma kama su da tarko, a kai su zaman bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Saboda haka ku saurari maganar Ubangiji, ku masu ba’a",
            "poem": 1
          },
          {
            "text": "ku da kuke mulkin wannan mutane a Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kuna fariya cewa, “Mun yi alkawari da mutuwa,",
            "poem": 1
          },
          {
            "text": "mun kuma yi yarjejjeniya da kabari.",
            "poem": 2
          },
          {
            "text": "Sa’ad da zafi ya ratsa,",
            "poem": 1
          },
          {
            "text": "ba zai taɓa mu ba,",
            "poem": 2
          },
          {
            "text": "gama mun mai da ƙarya mafakarmu",
            "poem": 1
          },
          {
            "noteId": 684
          },
          {
            "text": "ruɗu kuma wurin ɓuyanmu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          "Saboda haka ga abin da Ubangiji Mai Iko Duka ya ce,",
          {
            "text": "“Duba, na kafa dutse a Sihiyona,",
            "poem": 1
          },
          {
            "text": "dutsen da aka gwada,",
            "poem": 2
          },
          {
            "text": "dutsen kusurwa mai daraja don tabbataccen tushe;",
            "poem": 1
          },
          {
            "text": "wanda ya dogara gare shi ba zai taɓa shan kunya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zan mai da gaskiya igiyar gwaji",
            "poem": 1
          },
          {
            "text": "adalci kuma ɗan katakon gwajin ginin;",
            "poem": 2
          },
          {
            "text": "ƙanƙara za tă share mafakarku,",
            "poem": 1
          },
          {
            "text": "ƙarya, da ruwa kuma za su mamaye maɓuyanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Za a soke alkawarinku da mutuwa;",
            "poem": 1
          },
          {
            "text": "yarjejjeniyarku da kabari ba zai zaunu ba.",
            "poem": 2
          },
          {
            "text": "Sa’ad da zafi mai ɓarna ya ratsa,",
            "poem": 1
          },
          {
            "text": "zai hallaka ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "A duk sa’ad da ya zo;",
            "poem": 1
          },
          {
            "text": "ko da safiya, ko dare ko kuma da rana,",
            "poem": 2
          },
          {
            "text": "zai yi ta ratsawa yana kwasanku.”",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Za ku zama kamar mutumin",
            "poem": 1
          },
          {
            "text": "da ya zama abin karin magana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "wanda ya yi ƙoƙari yă kwanta a gajeren gado,",
            "poem": 1
          },
          {
            "text": "yă kuma rufa da ɗan siririn bargo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ubangiji zai tashi kamar yadda ya yi a Dutsen Feratsim,",
            "poem": 1
          },
          {
            "text": "zai tā da kansa kamar a Kwarin Gibeyon",
            "poem": 2
          },
          {
            "text": "don yă aikata aikinsa, aikinsa da ba a saba gani ba,",
            "poem": 1
          },
          {
            "text": "yă kuma yi aikinsa, baƙon aikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yanzu ku daina ba’arku,",
            "poem": 1
          },
          {
            "text": "in ba haka ba sarƙoƙinku za su ƙara nauyi;",
            "poem": 2
          },
          {
            "text": "Ubangiji, Ubangiji Maɗaukaki, ya faɗa mini",
            "poem": 1
          },
          {
            "text": "game da hallakar da aka ƙaddara a kan dukan ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ku saurara ku kuma ji muryata;",
            "poem": 1
          },
          {
            "text": "ku kasa kunne ku kuma ji abin da na faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sa’ad da manomi ya yi noma don shuki, yakan ci gaba da noma ne?",
            "poem": 1
          },
          {
            "text": "Yakan ci gaba da sara yana yin kunyoyi a ƙasa ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’ad da ya shirya wuri da kyau,",
            "poem": 1
          },
          {
            "text": "ba yakan shuka kanumfari ya kuma yayyafa ɗaɗɗoya ba?",
            "poem": 2
          },
          {
            "text": "Ba yakan shuka alkama a kunyoyinsa",
            "poem": 1
          },
          {
            "noteId": 685
          },
          {
            "text": "sha’ir a kunyoyinsa,",
            "poem": 2
          },
          {
            "noteId": 686
          },
          {
            "text": "tamba kuma a filinsa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Allahnsa ya umarce shi",
            "poem": 1
          },
          {
            "text": "ya kuma koya masa hanyar da take daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ba a bugan kanumfari da ƙaton sanda",
            "poem": 1
          },
          {
            "text": "ko a yi ta jujjuye ƙafar keke a kan ɗaɗɗoya;",
            "poem": 2
          },
          {
            "text": "akan buga kanumfari da siririn sanda",
            "poem": 1
          },
          {
            "text": "ɗaɗɗoya kuma da tsumagiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Dole a niƙa hatsi don a yi burodi;",
            "poem": 1
          },
          {
            "text": "saboda haka mutum ba zai yi ta bugun alkama, har yă ɓata tsabar ba.",
            "poem": 2
          },
          {
            "text": "Ya san yadda zai sussuke alkamarsa,",
            "poem": 1
          },
          {
            "text": "ba tare da ya ɓata tsabarta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Dukan wannan hikimar takan zo daga Ubangiji Maɗaukaki ne,",
            "poem": 1
          },
          {
            "text": "shi da yake mashawarci mai banmamaki, mafifici kuma cikin hikima.",
            "poem": 2
          }
        ]
      }
    ],
