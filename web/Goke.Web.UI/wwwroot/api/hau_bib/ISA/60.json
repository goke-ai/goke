  "chapter": {
    "number": 60,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ɗaukakar Sihiyona"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ki tashi, ki haskaka, gama haskenki ya zo,",
            "poem": 1
          },
          {
            "text": "ɗaukakar Ubangiji ya taso a kanki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Duba, duhu ya rufe duniya",
            "poem": 1
          },
          {
            "text": "duhu mai kauri kuma yana bisa mutane,",
            "poem": 2
          },
          {
            "text": "amma Ubangiji ya taso a kanki",
            "poem": 1
          },
          {
            "text": "ɗaukakarsa kuma ya bayyana a bisanki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Al’ummai za su zo wurin haskenki,",
            "poem": 1
          },
          {
            "text": "sarakuna kuma zuwa asubahin sabon yininki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ki ɗaga idanunki ki duba kewaye da ke.",
            "poem": 1
          },
          {
            "text": "Duka sun tattaru suka kuma zo wurinki;",
            "poem": 2
          },
          {
            "text": "’ya’yanki maza daga nesa,",
            "poem": 1
          },
          {
            "text": "ana kuma ɗaukan ’ya’yanki mata a hannu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sa’an nan za ki duba ki kuma haskaka",
            "poem": 1
          },
          {
            "text": "zuciyarki zai motsa ya kuma cika da farin ciki;",
            "poem": 2
          },
          {
            "text": "za a kawo miki wadata daga tekuna,",
            "poem": 1
          },
          {
            "text": "za a kawo miki arzikin al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Manyan ayarin raƙuma za su cika ƙasar,",
            "poem": 1
          },
          {
            "text": "ƙananan raƙuma ke nan daga Midiyan da Efa.",
            "poem": 2
          },
          {
            "text": "Daga Sheba kuma duka za su zo,",
            "poem": 2
          },
          {
            "text": "suna ɗauke da zinariya da turare",
            "poem": 2
          },
          {
            "text": "suna shelar yabon Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dukan garkunan Kedar za su taru a wurinki",
            "poem": 1
          },
          {
            "text": "ragunan Nebayiwot za su yi miki hidima;",
            "poem": 2
          },
          {
            "text": "za a karɓe su kamar hadayu a kan bagadenki,",
            "poem": 1
          },
          {
            "text": "zan kuma darjanta haikalina mai ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Su wane ne waɗannan da suke firiya kamar gizagizai,",
            "poem": 1
          },
          {
            "text": "kamar kurciyoyi suna zuwa sheƙarsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Babu shakka tsibirai suna dogara gare ni;",
            "poem": 1
          },
          {
            "text": "jiragen Tarshish kuma su ne a gaba,",
            "poem": 2
          },
          {
            "text": "suna kawo ’ya’yanki maza daga nesa,",
            "poem": 1
          },
          {
            "text": "tare da azurfa da zinariya,",
            "poem": 2
          },
          {
            "text": "domin su girmama Ubangiji Allahnki,",
            "poem": 1
          },
          {
            "text": "Mai Tsarkin nan na Isra’ila,",
            "poem": 2
          },
          {
            "text": "gama ya cika ki da daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Baƙi za su sāke gina katangarki,",
            "poem": 1
          },
          {
            "text": "sarakunansu kuma za su yi miki hidima.",
            "poem": 2
          },
          {
            "text": "Ko da yake a cikin fushi na buge ki,",
            "poem": 1
          },
          {
            "text": "da tagomashi zan yi miki jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ƙofofinki kullum za su kasance a buɗe,",
            "poem": 1
          },
          {
            "text": "ba za a ƙara rufe su da rana ko da dare ba,",
            "poem": 2
          },
          {
            "text": "saboda mutane su kawo miki dukiyar al’ummai,",
            "poem": 1
          },
          {
            "text": "sarakunansu za su kasance a gaba a jerin gwanon nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gama al’umma ko masarautar da ba tă bauta miki ba, za tă hallaka;",
            "poem": 1
          },
          {
            "text": "za tă lalace sarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Darajar Lebanon za tă zo wurinki,",
            "poem": 1
          },
          {
            "text": "itatuwan fir da dai ire-irensu da kuma itatuwan saifires duka",
            "poem": 2
          },
          {
            "text": "za su zo don su ƙayatar da wurina mai tsarki;",
            "poem": 2
          },
          {
            "text": "zan kuma ɗaukaka wurin ƙafafuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "’Ya’ya maza masu zaluntarku za su zo suna rusunawa a gabanki;",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suka rena ki za su rusuna a ƙafafunki",
            "poem": 2
          },
          {
            "text": "su kuma ce da ke Birnin Ubangiji,",
            "poem": 1
          },
          {
            "text": "Sihiyona na Mai Tsarkin nan na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Ko da yake an yashe ki aka kuma ƙi ki,",
            "poem": 1
          },
          {
            "text": "har babu wani da ya ratsa a cikinki,",
            "poem": 2
          },
          {
            "text": "zan mai da ke madawwamiyar abar taƙama",
            "poem": 1
          },
          {
            "text": "da kuma farin cikin dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Za ki sha madarar al’ummai",
            "poem": 1
          },
          {
            "text": "a kuma shayar da ke da nonon sarauta.",
            "poem": 2
          },
          {
            "text": "Sa’an nan za ki san cewa ni, Ubangiji, ni ne Mai Cetonki,",
            "poem": 1
          },
          {
            "text": "Mai Fansarki, Mai Ikon nan na Yaƙub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "A maimakon tagulla zan kawo zinariya,",
            "poem": 1
          },
          {
            "text": "azurfa kuma a maimakon baƙin ƙarfe.",
            "poem": 2
          },
          {
            "text": "A maimakon katako zan kawo tagulla,",
            "poem": 1
          },
          {
            "text": "baƙin ƙarfe kuma a maimakon duwatsu.",
            "poem": 2
          },
          {
            "text": "Zan sa salama ta zama gwamnarki",
            "poem": 1
          },
          {
            "text": "adalci kuma mai mulkinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ba za a ƙara jin hayaniyar tashin hankali a ƙasarki ba,",
            "poem": 1
          },
          {
            "text": "balle lalacewa ko hallaka a cikin iyakokinki,",
            "poem": 2
          },
          {
            "text": "amma za ki kira katangarki Ceto",
            "poem": 1
          },
          {
            "text": "ƙofofinki kuma Yabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Rana ba za tă ƙara zama haskenki a yini ba,",
            "poem": 1
          },
          {
            "text": "balle hasken wata ya haskaka a kanki,",
            "poem": 2
          },
          {
            "text": "gama Ubangiji zai zama madawwamin haskenki,",
            "poem": 1
          },
          {
            "text": "Allahnki kuma zai zama ɗaukakarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ranarki ba za tă ƙara fāɗuwa ba",
            "poem": 1
          },
          {
            "text": "watanki kuma ba zai ƙara shuɗewa ba;",
            "poem": 2
          },
          {
            "text": "Ubangiji zai zama madawwamin haskenki,",
            "poem": 1
          },
          {
            "text": "kwanakin baƙin cikinki za su ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sa’an nan dukan mutanenki za su zama masu adalci",
            "poem": 1
          },
          {
            "text": "za su kuma mallaki ƙasar har abada.",
            "poem": 2
          },
          {
            "text": "Su ne reshen da na shuka,",
            "poem": 1
          },
          {
            "text": "aikin hannuwana,",
            "poem": 2
          },
          {
            "text": "don nuna darajata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Mafi ƙanƙanta a cikinki za tă zama dubu,",
            "poem": 1
          },
          {
            "text": "ƙarami zai zama al’umma mai girma.",
            "poem": 2
          },
          {
            "text": "Ni ne Ubangiji,",
            "poem": 1
          },
          {
            "text": "cikin lokacinsa zan yi haka da sauri.”",
            "poem": 2
          }
        ]
      }
    ],
