  "chapter": {
    "number": 14,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji zai yi wa Yaƙub jinƙai;",
            "poem": 1
          },
          {
            "text": "zai sāke zaɓi Isra’ila",
            "poem": 2
          },
          {
            "text": "yă kuma zaunar da su a ƙasarsu.",
            "poem": 2
          },
          {
            "text": "Baƙi ma za su zo su zauna tare da su",
            "poem": 1
          },
          {
            "text": "su haɗa kai da gidan Yaƙub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Al’ummai za su ɗauke su",
            "poem": 1
          },
          {
            "text": "su kuma kawo wurin da yake nasu.",
            "poem": 2
          },
          {
            "text": "Gidan Isra’ila kuwa za tă mallaki al’ummai",
            "poem": 1
          },
          {
            "text": "a matsayin bayi maza da mata a ƙasar Ubangiji.",
            "poem": 2
          },
          {
            "text": "Za su mai da waɗanda suka kama su su zama kamammu",
            "poem": 1
          },
          {
            "text": "su kuma yi mulki a kan waɗanda suka taɓa danne su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          "A ranar da Ubangiji ya hutashe ku daga wahala da azaba da muguwar bauta,"
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          "za ku yi wa sarkin Babilon wannan ba’a.",
          {
            "text": "Mai danniya ya zo ga ƙarshe!",
            "poem": 1
          },
          {
            "text": "Dubi yadda fushinsa ya ƙare!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji ya karye sandar mugaye,",
            "poem": 1
          },
          {
            "text": "sandan mulkin masu mulki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "wanda cikin fushi ya kashe mutane",
            "poem": 1
          },
          {
            "text": "da bugu marar ƙarewa,",
            "poem": 2
          },
          {
            "text": "kuma cikin fushi ya mamaye al’ummai",
            "poem": 1
          },
          {
            "text": "da fushi ba ƙaƙƙautawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dukan ƙasashe suna hutawa suna kuma cikin salama;",
            "poem": 1
          },
          {
            "text": "sun ɓarke da waƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Har itatuwan fir ma da kuma al’ul na Lebanon",
            "poem": 1
          },
          {
            "text": "suna murna a kanka suna cewa,",
            "poem": 2
          },
          {
            "text": "“Yanzu da aka ƙasƙantar da kai,",
            "poem": 1
          },
          {
            "text": "babu wani mai yankan katakon da ya zo yă yanka mu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kabari a ƙarƙashi duk ya shirya",
            "poem": 1
          },
          {
            "text": "don yă sadu da kai a zuwanka;",
            "poem": 2
          },
          {
            "text": "yana tā da ruhohin da suka rasu don su gaishe ka,",
            "poem": 1
          },
          {
            "text": "dukan waɗanda sun taɓa zama shugabanni a duniya;",
            "poem": 2
          },
          {
            "text": "ya sa suka tashi daga kujerun sarauta,",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suke sarakuna a kan al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk za su amsa,",
            "poem": 1
          },
          {
            "text": "za su ce maka,",
            "poem": 2
          },
          {
            "text": "“Ashe kai ma raunana ne, kamar mu;",
            "poem": 1
          },
          {
            "text": "ka zama kamar mu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "An yi ƙasa da dukan alfarmarka zuwa kabari,",
            "poem": 1
          },
          {
            "text": "tare da surutan garayunka;",
            "poem": 2
          },
          {
            "text": "tsutsotsi sun bazu a ƙarƙashinka",
            "poem": 1
          },
          {
            "text": "tsutsotsi kuma suka rufe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yaya aka yi ka fāɗo daga sama",
            "poem": 1
          },
          {
            "text": "Ya tauraron safiya, ɗan hasken asuba!",
            "poem": 2
          },
          {
            "text": "An fyaɗa ka da ƙasa,",
            "poem": 1
          },
          {
            "text": "kai da ka taɓa ƙasƙantar da al’ummai!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka yi tunani a ranka ka ce,",
            "poem": 1
          },
          {
            "text": "“Zan hau zuwa sama;",
            "poem": 2
          },
          {
            "text": "zan ɗaga kursiyina",
            "poem": 1
          },
          {
            "text": "sama da taurarin Allah;",
            "poem": 2
          },
          {
            "text": "zan zauna a kursiyi a kan dutsen taro,",
            "poem": 1
          },
          {
            "text": "a can ƙurewar saman dutse mai tsarki.",
            "poem": 2
          },
          {
            "noteId": 666
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zan haura can bisa gizagizai;",
            "poem": 1
          },
          {
            "text": "zan mai da kaina kamar Mafi Ɗaukaka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma ga shi an gangara da kai zuwa kabari,",
            "poem": 1
          },
          {
            "text": "zuwa zurfafan rami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Waɗanda suka gan ka sun zura maka ido,",
            "poem": 1
          },
          {
            "text": "suna tunani abin da zai same ka.",
            "poem": 2
          },
          {
            "text": "“Wannan mutumin ne ya girgiza duniya",
            "poem": 1
          },
          {
            "text": "ya kuma sa mulkoki suka razana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "mutumin da ya mai da duniya ta zama hamada,",
            "poem": 1
          },
          {
            "text": "wanda ya tumɓuke biranenta",
            "poem": 2
          },
          {
            "text": "bai kuma bar kamammunsa suka tafi ba?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Dukan sarakunan duniya suna kwance a mace,",
            "poem": 1
          },
          {
            "text": "kowa a kabarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Amma an jefar da kabarinka",
            "poem": 1
          },
          {
            "text": "kamar reshen da aka ƙi;",
            "poem": 2
          },
          {
            "text": "an rufe ka da waɗanda aka kashe,",
            "poem": 1
          },
          {
            "text": "tare da waɗanda aka soke da takobi,",
            "poem": 2
          },
          {
            "text": "waɗanda suka gangara zuwa duwatsun rami.",
            "poem": 2
          },
          {
            "text": "Kamar gawar da aka tattake da ƙafa,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "ba za a haɗa ka tare da su a jana’iza ba,",
            "poem": 2
          },
          {
            "text": "gama ka hallaka ƙasarka",
            "poem": 1
          },
          {
            "text": "ka kuma kashe mutanenka.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ba za a ƙara ambaci",
            "poem": 1
          },
          {
            "text": "zuriyarka masu aikata mugunta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "A shirya wuri don a yayyanka ’ya’yansa maza",
            "poem": 1
          },
          {
            "text": "saboda zunuban kakanninsu;",
            "poem": 2
          },
          {
            "text": "kada a reno su su gāji ƙasar",
            "poem": 1
          },
          {
            "text": "su cika duniya da biranensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Zan yi gāba da su,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji Maɗaukaki.",
            "poem": 2
          },
          {
            "text": "“Zan kau da sunan Babilon da waɗanda suka rage da rai a cikinta,",
            "poem": 1
          },
          {
            "text": "’ya’yanta da zuriyarta,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "“Zan mai da ita wuri domin mujiyoyi",
            "poem": 1
          },
          {
            "text": "da kuma fadama;",
            "poem": 2
          },
          {
            "text": "zan share ta da tsintsiyar hallaka,”",
            "poem": 1
          },
          {
            "text": "Ni Ubangiji Maɗaukaki na faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Annabci a kan Assuriya"
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          "Ubangiji Maɗaukaki ya rantse,",
          {
            "text": "“Tabbatacce, kamar yadda na riga na shirya, haka zai kasance,",
            "poem": 1
          },
          {
            "text": "kuma kamar yadda na nufa, haka zai zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Zan ragargazar da Assuriya a cikin ƙasata;",
            "poem": 1
          },
          {
            "text": "a kan duwatsuna zan tattake shi.",
            "poem": 2
          },
          {
            "text": "Za a ɗauke nauyin da ya sa wa mutanena,",
            "poem": 1
          },
          {
            "text": "a kuma ɗauke nauyinsa daga kafaɗunsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Wannan shi ne shirin da na yi domin dukan duniya;",
            "poem": 1
          },
          {
            "text": "wannan shi ne hannun da aka miƙa a bisa dukan al’ummai ke nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Gama Ubangiji Maɗaukaki ya ƙudura ya yi wannan, wa kuwa zai hana shi?",
            "poem": 1
          },
          {
            "text": "Ya riga ya miƙa hannunsa, wa zai komar da shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Annabci a kan Filistiyawa"
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          "Wannan abin da Allah ya yi magana ya zo ne a shekarar da Sarki Ahaz ya mutu."
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kada ku yi farin ciki, dukanku Filistiyawa,",
            "poem": 1
          },
          {
            "text": "cewa sandar da ta buge ku ta karye;",
            "poem": 2
          },
          {
            "text": "daga saiwar wannan maciji wani mugun maciji mai dafi zai taso,",
            "poem": 1
          },
          {
            "text": "’ya’yansa za su zama wani maciji masu dafi mai tashi sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Mafi talauci na matalauta zai sami wurin kiwo,",
            "poem": 1
          },
          {
            "text": "mabukata kuma za su kwana lafiya.",
            "poem": 2
          },
          {
            "text": "Amma zan hallakar da saiwarka da matsananciyar yunwa;",
            "poem": 1
          },
          {
            "text": "za tă kashe naka da suka rage da rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Ki yi ihu, ya ke ƙofa! Yi kururuwa, ya ke birni!",
            "poem": 1
          },
          {
            "text": "Ku razana, dukanku Filistiyawa!",
            "poem": 2
          },
          {
            "text": "Ƙunshin hayaƙi yana tasowa daga arewa,",
            "poem": 1
          },
          {
            "text": "kuma babu matsorata a cikin sojojinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Wace amsa ce za a bayar",
            "poem": 1
          },
          {
            "text": "wa jakadun wannan al’umma?",
            "poem": 2
          },
          {
            "text": "“Ubangiji ya kafa Sihiyona,",
            "poem": 1
          },
          {
            "text": "kuma a cikinta mutanensa masu shan azaba za su sami mafaka.”",
            "poem": 2
          }
        ]
      }
    ],
