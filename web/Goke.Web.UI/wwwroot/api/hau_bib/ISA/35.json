  "chapter": {
    "number": 35,
    "content": [
      {
        "type": "heading",
        "content": [
          "Farin cikin waɗanda aka ceta"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Hamada da ƙeƙasasshiyar ƙasa za su yi murna;",
            "poem": 1
          },
          {
            "text": "jeji zai yi farin ciki ya kuma hudo.",
            "poem": 2
          },
          {
            "text": "Kamar fure,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "zai buɗu ya hudo;",
            "poem": 1
          },
          {
            "text": "zai yi farin ciki mai girma ya kuma yi sowa don farin ciki.",
            "poem": 2
          },
          {
            "text": "Za a maido wa Lebanon da darajarta,",
            "poem": 1
          },
          {
            "text": "darajar Karmel da Sharon;",
            "poem": 2
          },
          {
            "text": "za su ga ɗaukakar Ubangiji,",
            "poem": 1
          },
          {
            "text": "darajar Allahnmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku ƙarfafa hannuwa marasa ƙarfi,",
            "poem": 1
          },
          {
            "text": "ku ƙarfafa gwiwoyin da suka gaji;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ku faɗa wa waɗanda suka karai a zukata,",
            "poem": 1
          },
          {
            "text": "“Ku yi ƙarfin hali, kada ku ji tsoro;",
            "poem": 2
          },
          {
            "text": "Allahnku zai zo,",
            "poem": 1
          },
          {
            "text": "zai zo domin ya ɗau fansa;",
            "poem": 2
          },
          {
            "text": "da ramuwar Allah",
            "poem": 1
          },
          {
            "text": "zai zo don yă cece ku.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sa’an nan idanun makafi za su buɗe",
            "poem": 1
          },
          {
            "text": "kunnuwan kurame kuma su ji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’an nan guragu za su yi tsalle kamar barewa,",
            "poem": 1
          },
          {
            "text": "bebaye kuma su yi sowa don farin ciki.",
            "poem": 2
          },
          {
            "text": "Ruwa zai kwararo daga jeji",
            "poem": 1
          },
          {
            "text": "rafuffuka kuma a cikin hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yashi mai ƙuna zai zama tafki,",
            "poem": 1
          },
          {
            "text": "ƙeƙasasshiyar ƙasa kuma za tă cika da maɓulɓulan rafuffuka.",
            "poem": 2
          },
          {
            "text": "A mazaunin diloli, inda suka taɓa zama,",
            "poem": 1
          },
          {
            "text": "ciyawa da iwa da kyauro za su yi girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kuma babbar hanya za tă kasance a can;",
            "poem": 1
          },
          {
            "text": "za a ce ta ita Hanyar Mai Tsarki.",
            "poem": 2
          },
          {
            "text": "Marasa tsarki ba za su yi tafiya a kanta ba;",
            "poem": 1
          },
          {
            "text": "za tă zama domin waɗanda suka yi tafiya a wannan Hanya ce;",
            "poem": 2
          },
          {
            "text": "mugaye da wawaye ba za su yi ta yawo a kanta ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Zaki ba zai kasance a can ba,",
            "poem": 1
          },
          {
            "text": "balle wani naman jeji mai faɗa ya haura kanta;",
            "poem": 2
          },
          {
            "text": "ba za a same su a can ba.",
            "poem": 2
          },
          {
            "text": "Amma fansassu ne kaɗai za su yi tafiya a can,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "kuma fansassu na Ubangiji za su komo.",
            "poem": 2
          },
          {
            "text": "Za su shiga Sihiyona da rerawa;",
            "poem": 1
          },
          {
            "text": "matuƙar farin ciki zai mamaye su.",
            "poem": 2
          },
          {
            "text": "Murna da farin ciki za su sha kansu,",
            "poem": 1
          },
          {
            "text": "baƙin ciki kuma da nishi za su gudu.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
