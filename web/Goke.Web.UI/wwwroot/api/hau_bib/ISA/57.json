  "chapter": {
    "number": 57,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mai adalci yakan mutu,",
            "poem": 1
          },
          {
            "text": "ba kuwa wanda yakan yi tunani a zuciyarsa;",
            "poem": 2
          },
          {
            "text": "an kwashe mutanen kirki,",
            "poem": 1
          },
          {
            "text": "ba kuwa wanda ya fahimta",
            "poem": 2
          },
          {
            "text": "cewa an kwashe masu adalci",
            "poem": 1
          },
          {
            "text": "don a tsame su daga mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Waɗanda suke aikata abin da yake daidai",
            "poem": 1
          },
          {
            "text": "sukan shiga da salama;",
            "poem": 2
          },
          {
            "text": "sukan huta yayinda suka kwanta cikin kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Amma ku, ku matso nan, ku ’ya’ya maza na masu sihiri,",
            "poem": 1
          },
          {
            "text": "ku zuriyar mazinata da karuwai!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wane ne kuke yi wa ba’a?",
            "poem": 1
          },
          {
            "text": "Ga wa kuke masa gwalo",
            "poem": 2
          },
          {
            "text": "kuna kuma fitar da harshe?",
            "poem": 2
          },
          {
            "text": "Ashe, ku ba tarin ’yan tawaye ba ne,",
            "poem": 1
          },
          {
            "text": "zuriyar maƙaryata?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kuna cike da muguwar sha’awa mai ƙonawa a cikin itatuwan oak",
            "poem": 1
          },
          {
            "text": "da kuma a ƙarƙashin kowane itace mai inuwa;",
            "poem": 2
          },
          {
            "text": "kuna miƙa hadayar ’ya’yanku a rafuffuka",
            "poem": 1
          },
          {
            "text": "da kuma a ƙarƙashin tsagaggun duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gumakan da suke cikin duwatsu masu sulɓi su ne rabonku;",
            "poem": 1
          },
          {
            "text": "su ɗin, su ne rabonku.",
            "poem": 2
          },
          {
            "text": "I, gare su kuka kwarara hadayu na sha",
            "poem": 1
          },
          {
            "text": "kuka kuma miƙa hadayu na gari.",
            "poem": 2
          },
          {
            "text": "Saboda waɗannan abubuwa, zan yi haƙuri?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kun yi gadonku a dogayen duwatsu masu tsayi da kuma a tudu mai tsawo;",
            "poem": 1
          },
          {
            "text": "a can kuka haura don ku miƙa hadayunku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "A bayan ƙofofi da madogaran ƙofofi",
            "poem": 1
          },
          {
            "text": "kuka kafa alamun gumakanku.",
            "poem": 2
          },
          {
            "text": "Kuka yashe ni, kuka kware gadonku,",
            "poem": 1
          },
          {
            "text": "kuka kwanta a kansa kuka fadada shi;",
            "poem": 2
          },
          {
            "text": "kuka kuma ƙulla yarjejjeniya da waɗanda kuke ƙaunar gadajensu,",
            "poem": 1
          },
          {
            "text": "kuka dubi tsiraicinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kuka tafi wurin Molek",
            "poem": 1
          },
          {
            "noteId": 707
          },
          {
            "text": "da man zaitun",
            "poem": 1
          },
          {
            "text": "kuka kuma riɓaɓɓanya turarenku.",
            "poem": 2
          },
          {
            "text": "Kuka aika jakadunku",
            "poem": 1
          },
          {
            "noteId": 708
          },
          {
            "text": "can da nisa;",
            "poem": 1
          },
          {
            "text": "kuka gangara zuwa cikin kabari kansa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kuka gaji cikin dukan al’amuranku,",
            "poem": 1
          },
          {
            "text": "amma ba ku iya cewa, ‘Aikin banza ne ba.’",
            "poem": 2
          },
          {
            "text": "Kuka sami sabuntar ƙarfinku,",
            "poem": 1
          },
          {
            "text": "ta haka ba ku suma ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Wa ya sa ku fargaba, kuna jin tsoro",
            "poem": 1
          },
          {
            "text": "har kuka yi mini ƙarya,",
            "poem": 2
          },
          {
            "text": "ba ku kuma tuna da ni ba",
            "poem": 1
          },
          {
            "text": "balle ku yi tunanin wannan a zukatanku?",
            "poem": 2
          },
          {
            "text": "Ba don na daɗe ina shiru ba ne",
            "poem": 1
          },
          {
            "text": "ya sa ba kwa tsorona?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Zan bayyana adalcinku da kuma ayyukanku,",
            "poem": 1
          },
          {
            "text": "ba kuwa za su amfane ku ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sa’ad da kuka nemi taimako,",
            "poem": 1
          },
          {
            "text": "bari tarin gumakanku su cece ku!",
            "poem": 2
          },
          {
            "text": "Iska za tă kwashe dukansu tă tafi,",
            "poem": 1
          },
          {
            "text": "ɗan numfashi kawai zai hura su.",
            "poem": 2
          },
          {
            "text": "Amma mutumin da ya mai da ni mafakarsa",
            "poem": 1
          },
          {
            "text": "zai gāji ƙasar",
            "poem": 2
          },
          {
            "text": "ya kuma mallaki dutsena mai tsarki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ta’aziyya don mai tuba"
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          "Za a kuma ce,",
          {
            "text": "“Ku gina, ku gina, ku gyara hanya!",
            "poem": 1
          },
          {
            "text": "Ku kawar da abubuwan sa tuntuɓe a hanyar mutanena.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Gama abin da Maɗaukaki da kuma Mai daraja ya faɗa",
            "poem": 1
          },
          {
            "text": "wanda yake raye har abada, wanda sunansa mai tsarki ne,",
            "poem": 2
          },
          {
            "text": "“Ina zama a bisa da kuma a tsattsarkan wuri,",
            "poem": 1
          },
          {
            "text": "amma kuma tare da shi wanda yake mai halin tuba mai tawali’u a ruhu,",
            "poem": 2
          },
          {
            "text": "don in farfaɗo da ruhu mai tawali’u",
            "poem": 1
          },
          {
            "text": "in kuma farfaɗo da zuciyar mai halin tuba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba zan tuhume su har abada ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa kullum zai yi fushi ba,",
            "poem": 2
          },
          {
            "text": "gama a haka ruhun mutumin zan yi suma a gabana,",
            "poem": 1
          },
          {
            "text": "shi numfashin mutumin da na halitta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Na yi fushi saboda kwaɗayin zunubinsa;",
            "poem": 1
          },
          {
            "text": "na yi masa horo, na kuma ɓoye fuskata saboda fushi,",
            "poem": 2
          },
          {
            "text": "duk da haka ya ci gaba da ayyukan zunubinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Na ga al’amuransa, amma zan warkar da shi;",
            "poem": 1
          },
          {
            "text": "zan bi da shi in mayar da ta’aziyya a gare shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "ina ƙirƙiro yabo a leɓunan masu makoki a Isra’ila.",
            "poem": 1
          },
          {
            "text": "Salama, salama, ga waɗanda suke nesa da kuma kusa,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji. “Zan kuma warkar da su.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Amma mugaye suna kama da tumbatsar teku,",
            "poem": 1
          },
          {
            "text": "wanda ba ya natsuwa,",
            "poem": 2
          },
          {
            "text": "wanda raƙumansa sukan kawo gurɓacewa da tabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Babu salama ga mugaye,” in ji Allahna.",
            "poem": 1
          }
        ]
      }
    ],
