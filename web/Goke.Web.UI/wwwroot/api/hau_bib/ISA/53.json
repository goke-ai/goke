  "chapter": {
    "number": 53,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Wa ya gaskata saƙonmu",
            "poem": 1
          },
          {
            "text": "kuma ga wa hannun Ubangiji ya bayyana?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya yi girma kamar dashe marar ƙarfi,",
            "poem": 1
          },
          {
            "text": "kamar saiwa kuma daga ƙeƙasasshiyar ƙasa.",
            "poem": 2
          },
          {
            "text": "Ba shi da kyan gani ko wani makamin da zai ja hankalinmu,",
            "poem": 1
          },
          {
            "text": "babu wani abin da yake da shi da zai sa mu yi sha’awarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mutane suka rena shi suka ƙi shi,",
            "poem": 1
          },
          {
            "text": "mutum ne cike da baƙin ciki, ya kuma saba da wahala.",
            "poem": 2
          },
          {
            "text": "Kamar wanda mutane suna ɓuya fuskokinsu daga gare shi",
            "poem": 1
          },
          {
            "text": "aka rena shi aka yi banza da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Tabbatacce ya ɗauki cututtukanmu",
            "poem": 1
          },
          {
            "text": "ya kuma daure da baƙin cikinmu",
            "poem": 2
          },
          {
            "text": "duk da haka muka ɗauka Allah ya hukunta shi ne,",
            "poem": 1
          },
          {
            "text": "ya buge shi ya kuma sa ya sha azaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Amma aka yi masa rauni saboda laifofinmu,",
            "poem": 1
          },
          {
            "text": "aka ƙuje shi saboda kurakuranmu;",
            "poem": 2
          },
          {
            "text": "hukuncin da ya kawo mana salama ya kasance a kansa,",
            "poem": 2
          },
          {
            "text": "kuma ta wurin mikinsa ya sa muka warke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Dukanmu, muna kama da tumakin da suka ɓata,",
            "poem": 1
          },
          {
            "text": "kowannenmu ya kama hanyarsa;",
            "poem": 2
          },
          {
            "text": "Ubangiji kuwa ya sa hukunci ya auko a kansa",
            "poem": 1
          },
          {
            "text": "hukuncin da ya wajaba a kanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Aka wulaƙanta shi aka kuma yi masa azaba,",
            "poem": 1
          },
          {
            "text": "duk da haka bai buɗe bakinsa ba;",
            "poem": 2
          },
          {
            "text": "aka kai shi kamar ɗan rago zuwa wurin yanka,",
            "poem": 1
          },
          {
            "text": "kuma kamar tunkiya a gaban masu askinta tana shiru,",
            "poem": 2
          },
          {
            "text": "haka bai buɗe bakinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Da wulaƙanci",
            "poem": 1
          },
          {
            "noteId": 703
          },
          {
            "text": "da kuma hukunci aka ɗauke shi aka tafi.",
            "poem": 1
          },
          {
            "text": "Wa kuwa zai yi maganar zuriyarsa?",
            "poem": 2
          },
          {
            "text": "Gama an kawar da shi daga ƙasar masu rai;",
            "poem": 2
          },
          {
            "text": "saboda laifin mutanena aka kashe shi.",
            "poem": 2
          },
          {
            "noteId": 704
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Aka yi jana’izarsa tare da mugaye,",
            "poem": 1
          },
          {
            "text": "aka binne shi tare da masu arziki,",
            "poem": 2
          },
          {
            "text": "ko da yake bai taɓa yin wani tashin hankali ba,",
            "poem": 1
          },
          {
            "text": "ko a sami ƙarya a bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk da haka nufin Ubangiji ne a ƙuje shi yă kuma sa yă sha wahala,",
            "poem": 1
          },
          {
            "text": "kuma ko da yake Ubangiji ya sa ransa ya zama hadaya don zunubi,",
            "poem": 2
          },
          {
            "text": "zai ga zuriyarsa zai kuma kawo masa tsawon rai,",
            "poem": 1
          },
          {
            "text": "nufin Ubangiji kuma zai yi nasara a hannunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bayan wahalar ransa,",
            "poem": 1
          },
          {
            "text": "zai ga hasken rai, ya kuma gamsu;",
            "poem": 2
          },
          {
            "text": "ta wurin saninsa bawana mai adalci zai ’yantar da mutane masu yawa,",
            "poem": 1
          },
          {
            "text": "zai kuma ɗauki laifofinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Saboda haka zan ba shi rabo tare da manya,",
            "poem": 1
          },
          {
            "text": "zai kuma raba ganima tare da masu ƙarfi,",
            "poem": 2
          },
          {
            "text": "domin ya ba da ransa har mutuwa,",
            "poem": 1
          },
          {
            "text": "aka kuma lissafta shi tare da masu laifofi.",
            "poem": 2
          },
          {
            "text": "Gama ya ɗauki zunubin mutane masu yawa,",
            "poem": 1
          },
          {
            "text": "ya kuma yi roƙo saboda laifofinsu.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 703,
        "caller": "+",
        "text": "Ko kuma Daga kamawa",
        "reference": {
