  "chapter": {
    "number": 41,
    "content": [
      {
        "type": "heading",
        "content": [
          "Mai taimakon Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ku yi shiru a gabana, ku tsibirai!",
            "poem": 1
          },
          {
            "text": "Bari al’ummai su sabunta ƙarfinsu!",
            "poem": 2
          },
          {
            "text": "Bari su zo gaba su yi magana;",
            "poem": 1
          },
          {
            "text": "bari mu sadu a wurin shari’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Wa ya zuga wannan daga gabas,",
            "poem": 1
          },
          {
            "text": "yana kiransa cikin adalci ga yin hidima?",
            "poem": 2
          },
          {
            "noteId": 694
          },
          {
            "text": "Ya miƙa masa al’ummai",
            "poem": 1
          },
          {
            "text": "ya kuma yi nasara da sarakuna a gabansa.",
            "poem": 2
          },
          {
            "text": "Ya mai da su ƙura da takobinsa,",
            "poem": 1
          },
          {
            "text": "zuwa inda iska ke hurawa ta wurin bugun da ya yi musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya fafare su ya kuma yi tafiyarsa lafiya ƙalau,",
            "poem": 1
          },
          {
            "text": "a hanyar da ƙafafunsa ba su taɓa bi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wane ne ya taɓa yin haka ya kuma sa ya faru,",
            "poem": 1
          },
          {
            "text": "yana kira ga tsararraki daga farko?",
            "poem": 2
          },
          {
            "text": "Ni, Ubangiji ina can tun farkonsu",
            "poem": 1
          },
          {
            "text": "ni kuma ina can har ƙarshe, Ni ne shi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Tsibirai sun gan shi suka kuma ji tsoro;",
            "poem": 1
          },
          {
            "text": "iyakokin duniya sun yi rawar jiki.",
            "poem": 2
          },
          {
            "text": "Suka kusato suka kuma zo gaba;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "kowa na taimakon wani",
            "poem": 2
          },
          {
            "text": "yana ce wa ɗan’uwansa, “Ka ƙarfafa!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Masassaƙi yakan ƙarfafa maƙerin zinariya,",
            "poem": 1
          },
          {
            "text": "kuma shi mai gyara da guduma ya yi sumul",
            "poem": 2
          },
          {
            "text": "yakan ƙarfafa mai harhaɗawa.",
            "poem": 2
          },
          {
            "text": "Ya ce game da haɗin, “Ya yi kyau.”",
            "poem": 1
          },
          {
            "text": "Yakan buga ƙusoshi su riƙe gunkin don kada yă fāɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Amma kai, ya Isra’ila, bawana,",
            "poem": 1
          },
          {
            "text": "Yaƙub, wanda na zaɓa,",
            "poem": 2
          },
          {
            "text": "zuriyar Ibrahim abokina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "na ɗauke ka daga iyakar duniya,",
            "poem": 1
          },
          {
            "text": "daga kusurwoyi masu nesa na kira ka.",
            "poem": 2
          },
          {
            "text": "Na ce, ‘Kai bawana ne’;",
            "poem": 1
          },
          {
            "text": "na zaɓe ka ban kuwa ƙi ka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Saboda haka kada ka ji tsoro, gama ina tare da kai;",
            "poem": 1
          },
          {
            "text": "kada ka karai, gama ni ne Allahnka.",
            "poem": 2
          },
          {
            "text": "Zan ƙarfafa ka in kuma taimake ka;",
            "poem": 1
          },
          {
            "text": "zan riƙe ka da hannun damana mai adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Duk wanda ya yi fushi da kai",
            "poem": 1
          },
          {
            "text": "tabbatacce zai sha kunya da ƙasƙanci;",
            "poem": 2
          },
          {
            "text": "waɗanda suka yi hamayya da kai",
            "poem": 1
          },
          {
            "text": "za su zama kamar ba kome ba su kuma hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ko ka nemi abokan gābanka,",
            "poem": 1
          },
          {
            "text": "ba za ka same su ba.",
            "poem": 2
          },
          {
            "text": "Waɗanda suke yaƙi da kai",
            "poem": 1
          },
          {
            "text": "za su zama kamar ba kome ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama ni ne Ubangiji Allahnka,",
            "poem": 1
          },
          {
            "text": "wanda ya riƙe ka da hannun damana",
            "poem": 2
          },
          {
            "text": "ya kuma ce maka, Kada ka ji tsoro;",
            "poem": 2
          },
          {
            "text": "zan taimake ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kada ka ji tsoro, ya Yaƙub marar ƙarfi,",
            "poem": 1
          },
          {
            "text": "ya ƙaramin Isra’ila,",
            "poem": 2
          },
          {
            "text": "gama ni kaina zan taimake ka,” in ji Ubangiji,",
            "poem": 1
          },
          {
            "text": "Mai Fansarka, Mai Tsarkin nan na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Duba, zan sa ka cikin abin sussuka,",
            "poem": 1
          },
          {
            "text": "saboda kuma mai kaifi mai haƙora da yawa.",
            "poem": 2
          },
          {
            "text": "Za ka yi sussukar duwatsu ka ragargaza su,",
            "poem": 1
          },
          {
            "text": "ka kuma farfashe tuddai su zama kamar yayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Za ka tankaɗe su, iska kuma ta kwashe su,",
            "poem": 1
          },
          {
            "text": "guguwa kuma za tă warwatsa su.",
            "poem": 2
          },
          {
            "text": "Amma za ka yi farin ciki a cikin Ubangiji",
            "poem": 1
          },
          {
            "text": "ka kuma ɗaukaka a cikin Mai Tsarkin nan na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Matalauta da mabukata suna neman ruwa,",
            "poem": 1
          },
          {
            "text": "amma babu kome;",
            "poem": 2
          },
          {
            "text": "harsunansu sun bushe saboda ƙishi.",
            "poem": 2
          },
          {
            "text": "Amma Ni Ubangiji zan amsa musu;",
            "poem": 1
          },
          {
            "text": "Ni, Allah na Isra’ila, ba zan yashe su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zan sa koguna su malalo a ƙeƙasassun tuddai,",
            "poem": 1
          },
          {
            "text": "maɓulɓulan ruwa kuma a kwaruruka.",
            "poem": 2
          },
          {
            "text": "Zan mai da hamada tafkunan ruwa,",
            "poem": 1
          },
          {
            "text": "busasshiyar ƙasa kuma ta zama maɓulɓulan ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Zan sa a hamada ta tsiro da",
            "poem": 1
          },
          {
            "text": "al’ul da itacen ƙirya, da itacen ci-zaƙi, da zaitun.",
            "poem": 2
          },
          {
            "text": "Zan sa itace mai girma a ƙasashe masu sanyi ya tsiro a ƙeƙasasshiyar ƙasa,",
            "poem": 1
          },
          {
            "text": "tare da fir da kuma saifires,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "don mutane su gani su kuma sani,",
            "poem": 1
          },
          {
            "text": "su lura su kuma fahimci,",
            "poem": 2
          },
          {
            "text": "cewa hannun Ubangiji ne ya aikata haka,",
            "poem": 1
          },
          {
            "text": "cewa Mai Tsarkin nan na Isra’ila ya sa abin ya faru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Ka gabatar da damuwarka,” in ji Ubangiji.",
            "poem": 1
          },
          {
            "text": "“Ka kawo gardandaminka,” in ji Sarki na Yaƙub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Ka shigar da gumakanka don su faɗa mana",
            "poem": 1
          },
          {
            "text": "abin da zai faru.",
            "poem": 2
          },
          {
            "text": "Faɗa mana abubuwan da suka riga suka faru,",
            "poem": 1
          },
          {
            "text": "domin mu lura da su",
            "poem": 2
          },
          {
            "text": "mu kuma san abin da zai faru a ƙarshe.",
            "poem": 2
          },
          {
            "text": "Ko kuwa ku furta mana abubuwan da za su faru,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "faɗa mana abin da nan gaba ta ƙunsa,",
            "poem": 2
          },
          {
            "text": "don mu san cewa ku alloli ne.",
            "poem": 2
          },
          {
            "text": "Ku yi wani abu, mai kyau ko mummuna,",
            "poem": 1
          },
          {
            "text": "don mu ji tsoro da fargaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Amma ku ba kome ba ne",
            "poem": 1
          },
          {
            "text": "kuma ayyukanku banza da wofi ne;",
            "poem": 2
          },
          {
            "text": "duk wanda ya zaɓe ku abin ƙyama ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "“Na zuga wani daga arewa, ya kuwa zo,",
            "poem": 1
          },
          {
            "text": "wani daga inda rana ke fitowa wanda yake kira bisa sunana.",
            "poem": 2
          },
          {
            "text": "Yana takawa a kan masu mulki kamar da taɓarya,",
            "poem": 1
          },
          {
            "text": "sai ka ce maginin tukwane yana taka laka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Wa ya faɗi wannan tun daga farko, don mu sani,",
            "poem": 1
          },
          {
            "text": "ko kafin ya faru, don mu ce, ‘Ya faɗi daidai’?",
            "poem": 2
          },
          {
            "text": "Ba wanda ya faɗa wannan,",
            "poem": 1
          },
          {
            "text": "ba wanda ya riga faɗe shi,",
            "poem": 2
          },
          {
            "text": "ba wanda ya ji wata magana daga gare ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ni ne na farkon da ya ce wa Sihiyona, ‘Duba, ga su nan!’",
            "poem": 1
          },
          {
            "text": "Na ba wa Urushalima saƙon labari mai daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Na duba amma ba kowa",
            "poem": 1
          },
          {
            "text": "ba wani a cikinsu da zai ba da shawara,",
            "poem": 2
          },
          {
            "text": "ba wani da zai ba da amsa sa’ad da na tambaye su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Duba, dukansu masu ƙarya ne!",
            "poem": 1
          },
          {
            "text": "Ayyukansu ba su da riba;",
            "poem": 2
          },
          {
            "text": "siffofinsu iska ne kawai da ruɗami.",
            "poem": 2
          }
        ]
      }
    ],
