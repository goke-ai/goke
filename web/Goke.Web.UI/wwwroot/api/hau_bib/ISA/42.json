  "chapter": {
    "number": 42,
    "content": [
      {
        "type": "heading",
        "content": [
          "Bawan Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ga bawana, wanda na ɗaukaka,",
            "poem": 1
          },
          {
            "text": "zaɓaɓɓen nan nawa wanda nake jin daɗi;",
            "poem": 2
          },
          {
            "text": "Zan sa Ruhuna a cikinsa",
            "poem": 1
          },
          {
            "text": "zai kuwa kawo adalci ga al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ba zai yi ihu ko ya tā da murya,",
            "poem": 1
          },
          {
            "text": "ko ya daga muryarsa a tituna ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Iwan da ta tanƙware ba zai karye ba,",
            "poem": 1
          },
          {
            "text": "ba zai kashe lagwani mai hayaƙi ba.",
            "poem": 2
          },
          {
            "text": "Cikin aminci zai kawo adalci;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ba zai kāsa ko ya karai ba",
            "poem": 2
          },
          {
            "text": "sai ya kafa adalci a duniya.",
            "poem": 1
          },
          {
            "text": "Cikin dokarsa tsibirai za su sa zuciya.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ga abin da Allah Ubangiji ya ce,",
            "poem": 1
          },
          {
            "text": "shi da ya halicci sammai ya kuma miƙe su,",
            "poem": 1
          },
          {
            "text": "wanda ya shimfiɗa duniya da dukan abin da ya fito cikinta,",
            "poem": 2
          },
          {
            "text": "wanda ya ba wa mutanenta numfashi,",
            "poem": 1
          },
          {
            "text": "da rai ga waɗanda suke tafiya a kanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Ni Ubangiji, na kira ka cikin adalci;",
            "poem": 1
          },
          {
            "text": "zan riƙe hannunka.",
            "poem": 2
          },
          {
            "text": "Zan kiyaye ka in kuma sa ka",
            "poem": 1
          },
          {
            "text": "zama alkawari ga mutane",
            "poem": 2
          },
          {
            "text": "haske kuma ga Al’ummai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "don ka buɗe idanun makafi",
            "poem": 1
          },
          {
            "text": "ka ’yantar da kamammu daga kurkuku",
            "poem": 2
          },
          {
            "text": "kuma kunce ɗaurarrun kurkuku masu zama cikin duhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Ni ne Ubangiji; sunana ke nan!",
            "poem": 1
          },
          {
            "text": "Ba zan ba da ɗaukakata ga wani ba ko yabona ga gumaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duba, abubuwan da sun tabbata,",
            "poem": 1
          },
          {
            "text": "sababbin abubuwa kuwa nake furtawa;",
            "poem": 2
          },
          {
            "text": "kafin ma su soma faruwa",
            "poem": 1
          },
          {
            "text": "na sanar da su gare ku.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Waƙar yabo ga Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku rera sabuwar waƙa ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ku yi yabonsa daga iyakar duniya,",
            "poem": 2
          },
          {
            "text": "ku da kuka gangara zuwa teku, da kome da yake cikinsa,",
            "poem": 1
          },
          {
            "text": "ku tsibirai, da waɗanda suke zama a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bari hamada da garuruwanta su tā da muryoyinsu;",
            "poem": 1
          },
          {
            "text": "bari wuraren zaman da Kedar ke zama su yi farin ciki.",
            "poem": 2
          },
          {
            "text": "Bari mutanen Sela su rera don farin ciki;",
            "poem": 1
          },
          {
            "text": "bari su yi sowa daga ƙwanƙolin duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bari su ɗaukaka Ubangiji",
            "poem": 1
          },
          {
            "text": "su kuma yi shelar yabonsa a tsibirai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ubangiji zai fita ya yi yaƙi kamar mai ƙarfi,",
            "poem": 1
          },
          {
            "text": "kamar jarumi zai yi himma;",
            "poem": 2
          },
          {
            "text": "da ihu zai tā da kirarin yaƙi",
            "poem": 1
          },
          {
            "text": "zai kuma yi nasara a kan abokan gābansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Na daɗe ina shiru,",
            "poem": 1
          },
          {
            "text": "na yi shiru na kuma ƙame kaina.",
            "poem": 2
          },
          {
            "text": "Amma yanzu, kamar mace mai naƙuda,",
            "poem": 1
          },
          {
            "text": "na yi ƙara, ina nishi ina kuma haki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zan lalatar da duwatsu da tuddai",
            "poem": 1
          },
          {
            "text": "in busar da dukan itatuwansu;",
            "poem": 2
          },
          {
            "text": "zan mai da koguna su zama tsibirai",
            "poem": 1
          },
          {
            "text": "in kuma busar da tafkuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Zan yi wa makafi jagora a hanyoyin da ba su taɓa sani ba,",
            "poem": 1
          },
          {
            "text": "a hanyoyin da ba a saba ba zan bishe su;",
            "poem": 2
          },
          {
            "text": "zan mai da duhu ya zama haske a gabansu",
            "poem": 1
          },
          {
            "text": "in kuma mai da ƙasa mai kururrumai ta zama sumul.",
            "poem": 2
          },
          {
            "text": "Abubuwan da zan yi ke nan;",
            "poem": 1
          },
          {
            "text": "ba zan yashe su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Amma waɗanda suka dogara ga gumaka,",
            "poem": 1
          },
          {
            "text": "waɗanda suke ce wa siffofi, ‘Ku ne allolinmu,’",
            "poem": 2
          },
          {
            "text": "za a mai da su baya da kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Isra’ila makaho da kuma kurma"
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Ka ji, kai kurma;",
            "poem": 1
          },
          {
            "text": "duba, kai makaho, ka kuma gani!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Wane ne makaho in ba bawana ba,",
            "poem": 1
          },
          {
            "text": "da kuma kurma in ba ɗan aikan da na aika ba?",
            "poem": 2
          },
          {
            "text": "Wane ne makaho kamar wanda ya miƙa kai gare ni,",
            "poem": 1
          },
          {
            "text": "makaho kamar bawan Ubangiji?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kun ga abubuwa masu yawa, amma ba ku kula ba;",
            "poem": 1
          },
          {
            "text": "kunnuwanku suna a buɗe, amma ba kwa jin wani abu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yakan gamsar da Ubangiji",
            "poem": 1
          },
          {
            "text": "saboda adalcinsa",
            "poem": 2
          },
          {
            "text": "ya sa dokarsa ta zama mai girma da kuma mai ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Amma ga mutanen da aka washe aka kuma kwashe ganima,",
            "poem": 1
          },
          {
            "text": "an yi wa dukansu tarko a cikin rammuka",
            "poem": 2
          },
          {
            "text": "ko kuma an ɓoye su cikin kurkuku.",
            "poem": 2
          },
          {
            "text": "Sun zama ganima,",
            "poem": 1
          },
          {
            "text": "babu wani da zai kuɓutar da su;",
            "poem": 2
          },
          {
            "text": "an mai da su ganima,",
            "poem": 1
          },
          {
            "text": "ba wanda zai ce, “Mayar da su.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Wane ne a cikinku zai saurari wannan",
            "poem": 1
          },
          {
            "text": "ko ya kasa kunne sosai a cikin kwanaki masu zuwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Wa ya ba da Yaƙub don yă zama ganima",
            "poem": 1
          },
          {
            "text": "Isra’ila kuma ga masu kwasar ganima?",
            "poem": 2
          },
          {
            "text": "Ba Ubangiji ba ne,",
            "poem": 1
          },
          {
            "text": "wanda kuka yi wa zunubi?",
            "poem": 2
          },
          {
            "text": "Gama ba su bi hanyoyinsa ba;",
            "poem": 1
          },
          {
            "text": "ba su yi biyayya da dokarsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Saboda haka ya zuba musu zafin fushinsa,",
            "poem": 1
          },
          {
            "text": "yaƙi mai tsanani.",
            "poem": 2
          },
          {
            "text": "Ya rufe su cikin harsunan wuta, duk da haka ba su gane ba;",
            "poem": 1
          },
          {
            "text": "ya cinye su, amma ba su koyi kome ba.",
            "poem": 2
          }
        ]
      }
    ],
