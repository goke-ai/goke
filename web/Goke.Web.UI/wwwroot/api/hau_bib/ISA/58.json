  "chapter": {
    "number": 58,
    "content": [
      {
        "type": "heading",
        "content": [
          "Azumi na gaskiya"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ku yi ihu da ƙarfi, ba ƙaƙƙautawa.",
            "poem": 1
          },
          {
            "text": "Ku tā da muryarku kamar busar ƙaho.",
            "poem": 2
          },
          {
            "text": "Ku furta wa mutanena tawayensu",
            "poem": 1
          },
          {
            "text": "da kuma ga gidan Yaƙub zunubansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Gama kowace rana suna nemana;",
            "poem": 1
          },
          {
            "text": "suna marmarin sanin hanyoyina,",
            "poem": 2
          },
          {
            "text": "sai ka ce al’ummar da take yin abin da yake daidai",
            "poem": 1
          },
          {
            "text": "ba ta kuma yashe umarnan Allahnta ba.",
            "poem": 2
          },
          {
            "text": "Sun nemi shawarwaran da suke daidai daga gare ni",
            "poem": 1
          },
          {
            "text": "suna kuma marmari Allah ya zo kusa da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Suna cewa, ‘Don me muka yi azumi,",
            "poem": 1
          },
          {
            "text": "ba ka kuma gani ba?",
            "poem": 2
          },
          {
            "text": "Me ya sa muka ƙasƙantar da kanmu,",
            "poem": 1
          },
          {
            "text": "ba ka kuma lura da wannan ba?’",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Duk da haka a ranar azuminku, kuna yi yadda kuka ga dama",
            "poem": 1
          },
          {
            "text": "kuna kuma zaluntar dukan ma’aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Azuminku yakan ƙare a faɗa da kuma hargitsi,",
            "poem": 1
          },
          {
            "text": "kuna ta naushin juna da mugayen naushe-naushe.",
            "poem": 2
          },
          {
            "text": "Ba za ku iya azumi kamar yadda kuke yi a yau",
            "poem": 1
          },
          {
            "text": "ku zaci za a ji muryarku can sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Irin azumin da na zaɓa ke nan,",
            "poem": 1
          },
          {
            "text": "rana guda kawai don mutum ya ƙasƙantar da kansa?",
            "poem": 2
          },
          {
            "text": "Sunkuyar da kanku kamar iwa kawai",
            "poem": 1
          },
          {
            "text": "kuna kuma kwance a tsummoki da toka?",
            "poem": 2
          },
          {
            "text": "Abin da kuke kira azumi ke nan",
            "poem": 1
          },
          {
            "text": "rana yardajje ga Ubangiji?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Irin azumin da na zaɓa shi ne,",
            "poem": 1
          },
          {
            "text": "a kunce sarƙoƙin rashin adalci",
            "poem": 1
          },
          {
            "text": "a kuma kunce igiyoyin karkiya,",
            "poem": 2
          },
          {
            "text": "a ’yantar da waɗanda ake zalunta",
            "poem": 1
          },
          {
            "text": "a kuma kakkarye kowace karkiya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba shi ne ku rarraba abincinku da mayunwata",
            "poem": 1
          },
          {
            "text": "ku kuma tanada wa matalauta masu yawo mahalli,",
            "poem": 2
          },
          {
            "text": "sa’ad da kuka ga wanda yake tsirara, ku yi masa sutura,",
            "poem": 1
          },
          {
            "text": "kada kuma ku ba wa namanku da jininku baya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sa’an nan haskenku zai keto kamar ketowar alfijir,",
            "poem": 1
          },
          {
            "text": "warkarwarku kuma zai bayyana nan da nan;",
            "poem": 2
          },
          {
            "text": "sa’an nan adalcinku",
            "poem": 1
          },
          {
            "noteId": 709
          },
          {
            "text": "zai tafi a gabanku,",
            "poem": 1
          },
          {
            "text": "ɗaukakar Ubangiji kuma zai tsare ku daga baya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sa’an nan za ku yi kira, Ubangiji kuma zai amsa;",
            "poem": 1
          },
          {
            "text": "za ku yi kuka don neman taimako, zai kuwa ce ga ni nan.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“In kuka kawar da karkiyar zalunci,",
            "poem": 1
          },
          {
            "text": "kuka daina nuna wa juna yatsa da kuma faɗar mugayen maganganu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "in kuma kuka ɗauki lokaci kuka ƙosar da mayunwata",
            "poem": 1
          },
          {
            "text": "kuka kuma biya bukatun waɗanda suke shan tsanani,",
            "poem": 2
          },
          {
            "text": "sa’an nan ne haskenku zai haskaka cikin duhu",
            "poem": 1
          },
          {
            "text": "darenku kuma zai zama kamar tsakar rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji zai bishe ku kullum;",
            "poem": 1
          },
          {
            "text": "zai biya muku bukatunku a ƙasa mai zafin rana",
            "poem": 2
          },
          {
            "text": "ya kuma ƙarfafa ƙasusuwanku.",
            "poem": 2
          },
          {
            "text": "Za ku zama kamar lambun da aka yi masa banruwa,",
            "poem": 1
          },
          {
            "text": "kamar rafin da ruwansa ba ya ƙafewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mutanenku za su sāke gina kufai na da",
            "poem": 1
          },
          {
            "text": "su kuma daga tsofaffin harsashai;",
            "poem": 2
          },
          {
            "text": "za a ce da ku Masu Gyaran Katangar da ta Rushe,",
            "poem": 1
          },
          {
            "text": "Masu Farfaɗo da Tituna da kuma Wuraren zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“In kun kiyaye ƙafafunku daga take Asabbaci",
            "poem": 1
          },
          {
            "text": "da kuma daga aikata abin da kuka gan dama a ranata mai tsarki,",
            "poem": 2
          },
          {
            "text": "in kuka kira Asabbaci ranar murna",
            "poem": 1
          },
          {
            "text": "rana mai tsarki ta Ubangiji kuma mai bangirma,",
            "poem": 2
          },
          {
            "text": "in kuka girmama ta ta wurin ƙin yin abin da kuka gan dama",
            "poem": 2
          },
          {
            "text": "da kuma yin al’amuranku ko yin mugayen maganganu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "sa’an nan za ku yi farin ciki a cikin Ubangiji,",
            "poem": 1
          },
          {
            "text": "zan kuma sa ku a kan maɗaukaka ƙasashe",
            "poem": 2
          },
          {
            "text": "ku kuma yi biki a gādon mahaifinku Yaƙub.”",
            "poem": 2
          },
          {
            "text": "Ni Ubangiji ne na faɗa.",
            "poem": 2
          }
        ]
      }
    ],
