  "chapter": {
    "number": 47,
    "content": [
      {
        "type": "heading",
        "content": [
          "Fāɗuwar Babilon"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ki gangara, ki zauna a ƙura,",
            "poem": 1
          },
          {
            "text": "Budurwa Diyar Babilon;",
            "poem": 2
          },
          {
            "text": "ki zauna a ƙasa ba tare da rawani ba,",
            "poem": 2
          },
          {
            "text": "Diyar Babiloniyawa.",
            "poem": 2
          },
          {
            "noteId": 699
          },
          {
            "text": "Ba za a ƙara kira ke marar ƙarfi ’yar gata ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ɗauki dutsen niƙa ki niƙa gari;",
            "poem": 1
          },
          {
            "text": "ki kware lulluɓinki.",
            "poem": 2
          },
          {
            "text": "Ki ɗaga fatarinki ki bar ƙafafunki tsirara,",
            "poem": 1
          },
          {
            "text": "ki kuma yi ta ratsa cikin rafuffuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Tsirararki zai bayyana",
            "poem": 1
          },
          {
            "text": "za a kuma buɗe kunyarki.",
            "poem": 2
          },
          {
            "text": "Zan ɗauki fansa;",
            "poem": 1
          },
          {
            "text": "ba zan bar wani ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mai Fansarmu, Ubangiji Maɗaukaki shi ne sunansa,",
            "poem": 1
          },
          {
            "text": "shi ne Mai Tsarkin nan na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Zauna shiru, tafi cikin duhu,",
            "poem": 1
          },
          {
            "text": "Diyar Babiloniya;",
            "poem": 2
          },
          {
            "text": "ba za a ƙara kira ke",
            "poem": 1
          },
          {
            "text": "sarauniyar masarautai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na yi fushi da mutanena",
            "poem": 1
          },
          {
            "text": "na ƙazantar da gādona;",
            "poem": 2
          },
          {
            "text": "na ba su ga hannunki,",
            "poem": 1
          },
          {
            "text": "ba ki kuwa nuna musu jinƙai ba.",
            "poem": 2
          },
          {
            "text": "Har ma da tsofaffi",
            "poem": 1
          },
          {
            "text": "kin jibga musu kaya masu nauyi sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kika ce, ‘Zan ci gaba har abada,",
            "poem": 1
          },
          {
            "text": "madawwamiyar sarauniya!’",
            "poem": 2
          },
          {
            "text": "Amma ba ki lura da waɗannan abubuwa",
            "poem": 1
          },
          {
            "text": "ko ki yi la’akari a kan abin da zai faru ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“To, yanzu fa, ki kasa kunne, ke mai ƙaunar nishaɗi,",
            "poem": 1
          },
          {
            "text": "mai zama da rai kwance",
            "poem": 2
          },
          {
            "text": "kina kuma ce wa kanki,",
            "poem": 1
          },
          {
            "text": "‘Ni ce, kuma babu wani in ban da ni.",
            "poem": 2
          },
          {
            "text": "Ba zan taɓa zama gwauruwa",
            "poem": 1
          },
          {
            "text": "ko in sha wahalar rashin ’ya’ya ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk waɗannan za su sha kanki",
            "poem": 1
          },
          {
            "text": "cikin farat ɗaya, a rana guda,",
            "poem": 2
          },
          {
            "text": "rashin ’ya’ya da gwauranci.",
            "poem": 2
          },
          {
            "text": "Za su zo a kanki da cikakken minzani,",
            "poem": 1
          },
          {
            "text": "duk da yawan masu dubanki",
            "poem": 2
          },
          {
            "text": "da kuma dukan sihirinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kin dogara a muguntarki",
            "poem": 1
          },
          {
            "text": "kika kuma ce, ‘Babu wanda ya gan ni.’",
            "poem": 2
          },
          {
            "text": "Hikimarki da saninki sun ɓad da ke",
            "poem": 1
          },
          {
            "text": "sa’ad da kika ce wa kanki, ‘Ni ce, kuma babu wani in ban da ni.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bala’i zai fāɗo a kanki,",
            "poem": 1
          },
          {
            "text": "kuma ba za ki san yadda za ki rinjaye shi yă janye ba.",
            "poem": 2
          },
          {
            "text": "Masifa za tă fāɗo a kanki",
            "poem": 1
          },
          {
            "text": "da ba za ki iya tsai da ita da kuɗin fansa ba;",
            "poem": 2
          },
          {
            "text": "lalacewar da ba ki taɓa mafarkinta ba",
            "poem": 1
          },
          {
            "text": "za tă auko miki nan da nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ki dai ci gaba, da sihirinki",
            "poem": 1
          },
          {
            "text": "da kuma makarunki masu yawa,",
            "poem": 2
          },
          {
            "text": "waɗanda kika yi ta wahala tun kina jaririya.",
            "poem": 2
          },
          {
            "text": "Mai yiwuwa ki yi nasara,",
            "poem": 1
          },
          {
            "text": "mai yiwuwa ki jawo fargaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Dukan shawarwarin da kika samu sun dai gajiyar da ke ne kawai!",
            "poem": 1
          },
          {
            "text": "Bari masananki na taurari su zo gaba,",
            "poem": 2
          },
          {
            "text": "waɗannan masu zāna taswirar sammai suna kuma faɗa miki dukan abin da zai faru da ke wata-wata,",
            "poem": 1
          },
          {
            "text": "bari su cece ki daga abin da zai faru da ke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Tabbas suna kama da bunnu;",
            "poem": 1
          },
          {
            "text": "wuta za tă cinye su ƙaf.",
            "poem": 2
          },
          {
            "text": "Ba za su ma iya ceton kansu",
            "poem": 1
          },
          {
            "text": "daga ikon wutar ba.",
            "poem": 2
          },
          {
            "text": "Ba wutar da wani zai ji ɗumi;",
            "poem": 1
          },
          {
            "text": "ba wutar da za a zauna kusa da ita.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Abin da za su iya yi miki ke nan kawai,",
            "poem": 1
          },
          {
            "text": "waɗannan da kika yi ta fama da su",
            "poem": 2
          },
          {
            "text": "kika kuma yi ciniki da su tun kina jaririya.",
            "poem": 2
          },
          {
            "text": "Kowannensu zai tafi cikin kuskurensa;",
            "poem": 1
          },
          {
            "text": "babu ko ɗayan da zai cece ki.",
            "poem": 2
          }
        ]
      }
    ],
