  "chapter": {
    "number": 32,
    "content": [
      {
        "type": "heading",
        "content": [
          "Mulkin adalci"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Duba, sarki zai yi mulki cikin adalci",
            "poem": 1
          },
          {
            "text": "masu mulki kuma su yi mulki da adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kowane mutum zai zama kamar wurin fakewa daga iska",
            "poem": 1
          },
          {
            "text": "mafaka kuma daga hadari,",
            "poem": 2
          },
          {
            "text": "kamar rafuffukan ruwa a hamada",
            "poem": 1
          },
          {
            "text": "da kuma inuwar babban dutse a ƙeƙasasshiyar ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’an nan idanun waɗanda suka gani ba za su ƙara rufewa ba,",
            "poem": 1
          },
          {
            "text": "kunnuwan waɗanda suka ji kuma za su saurara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zuciya marasa haƙuri za su sani su kuma fahimta,",
            "poem": 1
          },
          {
            "text": "harshen masu ana’ana kuma zai sāke su yi magana sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba za a ƙara ce da wawa mai girma ba",
            "poem": 1
          },
          {
            "text": "ko kuwa a ɗaukaka mazambaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama wawa maganar wauta yakan yi,",
            "poem": 1
          },
          {
            "text": "zuciyarsa ta cika da mugunta,",
            "poem": 2
          },
          {
            "text": "yana aikata abubuwan rashin sanin Allah",
            "poem": 1
          },
          {
            "text": "yana baza kurakurai game da Ubangiji;",
            "poem": 2
          },
          {
            "text": "yana barin mayunwata da yunwa",
            "poem": 1
          },
          {
            "text": "ya kuma hana masu ƙishirwa ruwan sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Matakan mazambaci mugaye ne,",
            "poem": 1
          },
          {
            "text": "yana ƙulla mugayen shirye-shirye",
            "poem": 2
          },
          {
            "text": "don yă hallaka talakawa da ƙarairayi,",
            "poem": 1
          },
          {
            "text": "ko sa’ad da roƙon mai bukata da gaskiya ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Amma mutumin kirki kan yi shirye-shirye masu kirki,",
            "poem": 1
          },
          {
            "text": "kuma yakan tsaya a kan ayyukan kirki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Matan Urushalima"
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku matan da kuke zaman jin daɗi,",
            "poem": 1
          },
          {
            "text": "ku tashi ku saurare ni;",
            "poem": 2
          },
          {
            "text": "ku ’yan matan da kuke tsammani kuna da kāriya,",
            "poem": 1
          },
          {
            "text": "ku ji abin da zan faɗa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Cikin ɗan lokaci ƙasa da shekara guda",
            "poem": 1
          },
          {
            "text": "ku da kuke tsammani kuna da kāriya za ku yi rawar jiki;",
            "poem": 2
          },
          {
            "text": "girbin ’ya’yan inabi zai kāsa,",
            "poem": 1
          },
          {
            "text": "girbin ’ya’yan itatuwa kuma ba zai zo ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku yi rawar jiki, ku mata masu jin daɗi,",
            "poem": 1
          },
          {
            "text": "ku sha wahala, ku ’yan matan da kuke tsammani kuna da kāriya!",
            "poem": 2
          },
          {
            "text": "Ku tuɓe rigunanku,",
            "poem": 1
          },
          {
            "text": "ku ɗaura tsummoki a kwankwasonku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku bugi ƙirjinku don gonaki masu kyau",
            "poem": 1
          },
          {
            "text": "don ’ya’yan inabi",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "da kuma don ƙasar mutanena,",
            "poem": 1
          },
          {
            "text": "da ƙasar da ƙayayyuwa da sarƙaƙƙiya ne suka yi girma,",
            "poem": 2
          },
          {
            "text": "I, ku yi kuka saboda dukan gidajen da dā ake biki",
            "poem": 1
          },
          {
            "text": "da kuma domin wannan birnin da dā ake murna a ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Za a ƙyale kagarar,",
            "poem": 1
          },
          {
            "text": "a gudu a bar birnin da dā ake hayaniya;",
            "poem": 2
          },
          {
            "text": "mafaka da hasumiyar tsaro za su zama kango har abada,",
            "poem": 2
          },
          {
            "text": "jin daɗin jakuna, makiyaya don garkuna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "sai an zubo Ruhu a kanmu daga sama,",
            "poem": 1
          },
          {
            "text": "hamada kuma ta zama ƙasar mai taƙi,",
            "poem": 2
          },
          {
            "text": "gona mai taƙi kuma ta zama kamar kurmi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Aikin gaskiya zai zauna a hamada",
            "poem": 1
          },
          {
            "text": "adalci kuma zai zauna a ƙasa mai taƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Aikin adalci zai zama salama;",
            "poem": 1
          },
          {
            "text": "tasirin adalci zai zama natsuwa da tabbaci har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Mutanena za su zauna lafiya a wuraren salama,",
            "poem": 1
          },
          {
            "text": "a gidaje masu kāriya,",
            "poem": 2
          },
          {
            "text": "a wuraren hutun da babu fitina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ko da yake ƙanƙara za tă fāɗo a jeji,",
            "poem": 1
          },
          {
            "text": "a kuma rurrushe birni gaba ɗaya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "zai zama muku da albarka,",
            "poem": 1
          },
          {
            "text": "ku da kuke shuki iri kusa da kowane rafi,",
            "poem": 2
          },
          {
            "text": "kuna kuma barin lafiyayyiyar makiyaya domin shanu da jakunanku.",
            "poem": 2
          }
        ]
      }
    ],
