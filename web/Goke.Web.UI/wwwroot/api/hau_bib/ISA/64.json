  "chapter": {
    "number": 64,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Da ma za ka tsage sammai ka sauko,",
            "poem": 1
          },
          {
            "text": "ai, da duwatsu za su yi rawar jiki a gabanka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar sa’ad da wuta takan ci rassa",
            "poem": 1
          },
          {
            "text": "ta sa ruwa ya tafasa,",
            "poem": 2
          },
          {
            "text": "ka sauko ka sanar da sunanka ga abokan gābanka",
            "poem": 1
          },
          {
            "text": "ka kuma sa al’ummai su yi rawan jiki a gabanka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama sa’ad da ka aikata abubuwan bantsoron da ba mu sa tsammani ba,",
            "poem": 1
          },
          {
            "text": "ka sauko, duwatsu kuma suka yi rawar jiki a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Tun fil azal babu wanda ya taɓa ji,",
            "poem": 1
          },
          {
            "text": "babu kunnen da ya gane,",
            "poem": 2
          },
          {
            "text": "babu idon da ya ga wani Allah in ban da kai,",
            "poem": 1
          },
          {
            "text": "wanda ya aikata waɗannan al’amura a madadin waɗanda suke sa zuciya a gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kakan taimaki waɗanda suke murnan yin abin da yake daidai,",
            "poem": 1
          },
          {
            "text": "waɗanda sukan tuna da hanyoyinka.",
            "poem": 2
          },
          {
            "text": "Amma sa’ad da muka ci gaba da yin zunubi,",
            "poem": 1
          },
          {
            "text": "kakan yi fushi.",
            "poem": 2
          },
          {
            "text": "Ta yaya za mu sami ceto ke nan?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Dukanmu mun zama kamar wanda yake marar tsabta,",
            "poem": 1
          },
          {
            "text": "kuma dukan ayyukanmu masu adalci sun zama kamar ƙazaman tsummoki;",
            "poem": 2
          },
          {
            "text": "duk mun zama kamar busasshen ganye,",
            "poem": 1
          },
          {
            "text": "kamar iska haka zunubanmu sukan share mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Babu wanda yake kira bisa sunanka",
            "poem": 1
          },
          {
            "text": "ko ya yi ƙoƙarin riƙe ka;",
            "poem": 2
          },
          {
            "text": "gama ka ɓoye fuskarka daga gare mu",
            "poem": 1
          },
          {
            "text": "ka kuma sa muka lalace saboda zunubanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk da haka, Ubangiji, kai ne Ubanmu.",
            "poem": 1
          },
          {
            "text": "Mu yumɓu ne, kai kuma mai ginin tukwane;",
            "poem": 2
          },
          {
            "text": "dukanmu aikin hannunka ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka yi fushi fiye da kima, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "kada ka tuna da zunubanmu har abada.",
            "poem": 2
          },
          {
            "text": "Da ma ka dube mu, muna roƙonka,",
            "poem": 1
          },
          {
            "text": "gama dukanmu mutanenka ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Biranenka masu tsarki sun zama hamada;",
            "poem": 1
          },
          {
            "text": "har Sihiyona ma ta zama hamada; Urushalima ta zama kango.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Haikalinmu mai tsarki da kuma mai daraja, inda kakanninmu suka yabe ka,",
            "poem": 1
          },
          {
            "text": "an ƙone da wuta,",
            "poem": 2
          },
          {
            "text": "kuma dukan abubuwan da muke ƙauna sun lalace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bayan dukan wannan, ya Ubangiji, ba za ka yi wani abu ba?",
            "poem": 1
          },
          {
            "text": "Za ka yi shiru ka hore mu fiye da kima?",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
