  "chapter": {
    "number": 44,
    "content": [
      {
        "type": "heading",
        "content": [
          "Isra’ila zaɓaɓɓe"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Amma yanzu ka saurara, ya Yaƙub, bawana,",
            "poem": 1
          },
          {
            "text": "Isra’ila, wanda zaɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ga abin da Ubangiji yana cewa,",
            "poem": 1
          },
          {
            "text": "shi wanda ya yi ka, wanda ya siffanta ka a cikin mahaifa,",
            "poem": 2
          },
          {
            "text": "wanda kuma zai taimake ka.",
            "poem": 2
          },
          {
            "text": "Kada ka ji tsoro, ya Yaƙub, bawana,",
            "poem": 1
          },
          {
            "text": "Yeshurun, wanda na zaɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama zan zuba ruwa a ƙeƙasasshiyar ƙasa,",
            "poem": 1
          },
          {
            "text": "rafuffuka kuma a busasshiyar ƙasa;",
            "poem": 2
          },
          {
            "text": "zan ba da Ruhuna ga ’ya’yanka,",
            "poem": 1
          },
          {
            "text": "albarkata kuma ga zuriyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Za su tsiro kamar ciyawa a wuriyar ruwa,",
            "poem": 1
          },
          {
            "text": "kamar kurmi kusa da rafuffuka masu gudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wani zai ce, ‘Ni na Ubangiji ne’;",
            "poem": 1
          },
          {
            "text": "wani kuma zai kira kansa da sunan Yaƙub;",
            "poem": 2
          },
          {
            "text": "har yanzu wani zai rubuta a hannunsa, ‘Na Ubangiji,’",
            "poem": 2
          },
          {
            "text": "ya kuma ɗauki sunan Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ubangiji, ba gumaka ba"
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Ga abin da Ubangiji yana cewa,",
            "poem": 1
          },
          {
            "text": "Sarki da kuma Mai Fansar Isra’ila, Ubangiji Maɗaukaki.",
            "poem": 2
          },
          {
            "text": "Ni ne farko ni ne kuma ƙarshe;",
            "poem": 1
          },
          {
            "text": "in ban da ni babu wani Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Wane ne kuwa kama da ni? Ya faɗa a ji.",
            "poem": 1
          },
          {
            "text": "Bari yă yi shela ya kuma nuna shi a gabana",
            "poem": 2
          },
          {
            "text": "mene ne ya faru tun da na kafa mutanena na dā,",
            "poem": 1
          },
          {
            "text": "mene ne kuma bai riga ya faru ba,",
            "poem": 2
          },
          {
            "text": "I, bari yă faɗa abin da zai zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ku firgita kada kuma ku ji tsoro.",
            "poem": 1
          },
          {
            "text": "Ban furta wannan na kuma yi faɗar haka tuntuni ba?",
            "poem": 2
          },
          {
            "text": "Ku ne shaiduna. Akwai wani Allah in ban da ni?",
            "poem": 1
          },
          {
            "text": "A’a, babu wani Dutse; ban san da wani ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk masu yin gumaka ba kome ba ne,",
            "poem": 1
          },
          {
            "text": "da kuma abubuwan da suke ɗauka da daraja banza ne.",
            "poem": 2
          },
          {
            "text": "Waɗanda za su yi magana a madadinsu makafi ne;",
            "poem": 1
          },
          {
            "text": "jahilai ne, marasa kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Waɗanda suke siffanta allah su kuma yi zubin gunki,",
            "poem": 1
          },
          {
            "text": "waɗanda ba za su yi musu ribar kome ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Shi da irinsa za su sha kunya;",
            "poem": 1
          },
          {
            "text": "masu sassaƙa ba kome ba mutane ne kurum.",
            "poem": 2
          },
          {
            "text": "Bari su tattaru su ɗauki matsayinsu;",
            "poem": 1
          },
          {
            "text": "za su firgita su kuma sha mummunan kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Maƙeri yakan ɗauki kayan aiki",
            "poem": 1
          },
          {
            "text": "ya yi aiki da shi a cikin garwashi;",
            "poem": 2
          },
          {
            "text": "ya ƙera gunki da guduma,",
            "poem": 1
          },
          {
            "text": "ya gyara shi da hannuwansa masu ƙarfi.",
            "poem": 2
          },
          {
            "text": "Yakan ji yunwa ya kuma rasa ƙarfi;",
            "poem": 1
          },
          {
            "text": "yakan sha ruwa ya kuma ji gajiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kafinta yakan gwada katako",
            "poem": 1
          },
          {
            "text": "yă kuma zāna siffar da alli;",
            "poem": 2
          },
          {
            "text": "yă goge shi da kayan aiki",
            "poem": 1
          },
          {
            "text": "yă kuma zāna shi da alƙalami.",
            "poem": 2
          },
          {
            "text": "Yă siffanta shi a kamannin mutum,",
            "poem": 1
          },
          {
            "text": "mutum cikin dukan darajarsa,",
            "poem": 2
          },
          {
            "text": "don yă ajiye shi a cikin masujada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yakan ka da itacen saifires, ko kuwa ya ɗauki saifires ko oak.",
            "poem": 1
          },
          {
            "text": "Yă bar shi yă yi girma a cikin itatuwan kurmi,",
            "poem": 1
          },
          {
            "text": "ko yă shuka itacen fir, ruwan sama kuma yă sa yă yi girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Abin hura wutar mutum ne;",
            "poem": 1
          },
          {
            "text": "yakan ɗebi waɗansu yă hura wuta don yă ji ɗumi,",
            "poem": 2
          },
          {
            "text": "ya hura wuta yă gasa burodi.",
            "poem": 2
          },
          {
            "text": "Amma yakan ƙera zinariya yă kuma yi masa sujada;",
            "poem": 1
          },
          {
            "text": "yakan yi gunki sa’an nan yă rusuna masa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Rabin katakon yakan ƙone a wuta;",
            "poem": 1
          },
          {
            "text": "a kansa yakan dafa abincinsa,",
            "poem": 2
          },
          {
            "text": "yă gasa namansa yă kuma ci sai ya ƙoshi.",
            "poem": 2
          },
          {
            "text": "Yakan ji ɗumi yă kuma ce,",
            "poem": 1
          },
          {
            "text": "“Aha! Na ji ɗumi; na gan wutar.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Da sauran itacen yakan yi allah, gunkinsa;",
            "poem": 1
          },
          {
            "text": "yă rusuna masa yă kuma yi sujada.",
            "poem": 2
          },
          {
            "text": "Yakan yi masa addu’a yă ce,",
            "poem": 1
          },
          {
            "text": "“Ka cece ni; kai ne allahna.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ba su san kome ba, ba su fahimci kome ba;",
            "poem": 1
          },
          {
            "text": "an rufe idanunsu don kada su gani,",
            "poem": 2
          },
          {
            "text": "tunaninsu kuma a rufe don kada su fahimta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba wanda yakan dakata ya yi tunani,",
            "poem": 1
          },
          {
            "text": "ba wanda yake da sani ko fahimi ya ce,",
            "poem": 2
          },
          {
            "text": "“Da rabinsa na yi amfani da shi don hura wuta;",
            "poem": 1
          },
          {
            "text": "na ma gasa burodi a kan garwashinsa,",
            "poem": 2
          },
          {
            "text": "na gasa nama na kuma ci.",
            "poem": 2
          },
          {
            "text": "Ya kamata in yi abin ƙyama daga abin da ya rage?",
            "poem": 1
          },
          {
            "text": "Ya kamata in rusuna wa guntun katako?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Yana cin toka, zuciyar da ta ruɗe tana ɓad da shi;",
            "poem": 1
          },
          {
            "text": "ba zai iya cece kansa ba, ko ya ce,",
            "poem": 2
          },
          {
            "text": "“Wannan abin da yake hannun dama na ba ƙarya ba ne?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Tuna da waɗannan abubuwa, ya Yaƙub,",
            "poem": 1
          },
          {
            "text": "gama kai bawana ne, ya Isra’ila.",
            "poem": 2
          },
          {
            "text": "Na yi ka, kai bawana ne;",
            "poem": 1
          },
          {
            "text": "Ya Isra’ila, ba zan manta da kai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Na shafe laifofinka kamar girgije,",
            "poem": 1
          },
          {
            "text": "zunubanka kamar hazon safe.",
            "poem": 2
          },
          {
            "text": "Ka komo wurina,",
            "poem": 1
          },
          {
            "text": "gama na kuɓutar da kai.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ku rera don farin ciki, ya sammai, gama Ubangiji ya aikata wannan;",
            "poem": 1
          },
          {
            "text": "ku yi sowa, ya duniya a ƙarƙashi.",
            "poem": 2
          },
          {
            "text": "Ku ɓarke da waƙoƙi, ku duwatsu,",
            "poem": 1
          },
          {
            "text": "ku jeji da dukan itatuwanku,",
            "poem": 2
          },
          {
            "text": "gama Ubangiji ya kuɓutar da Yaƙub,",
            "poem": 1
          },
          {
            "text": "ya nuna ɗaukakarsa a cikin Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Za a zauna a Urushalima"
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "“Ga abin da Ubangiji yana cewa,",
            "poem": 1
          },
          {
            "text": "Mai Fansarka, wanda ya yi ka a cikin mahaifa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“Ni ne Ubangiji,",
            "poem": 1
          },
          {
            "text": "wanda ya yi dukan abubuwa,",
            "poem": 2
          },
          {
            "text": "wanda ya shimfiɗa sammai",
            "poem": 2
          },
          {
            "text": "ya kuma kafa harsashen duniya da kansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "wanda ya sassāke alamun annabawan ƙarya",
            "poem": 1
          },
          {
            "text": "ya masu duba suka zama wawaye,",
            "poem": 2
          },
          {
            "text": "wanda ya tumɓuke koyon masu hikima",
            "poem": 1
          },
          {
            "text": "ya mai da shi banza,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "wanda ya tabbatar da maganganun bayinsa",
            "poem": 1
          },
          {
            "text": "ya kuma cika annabce-annabcen ’yan aikansa,",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "“wanda ya ce game da Urushalima, ‘Za a zauna a cikinta,’",
            "poem": 1
          },
          {
            "text": "game da garuruwan Yahuda, ‘Za a gina su,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "wanda ya ce wa zurfin ruwaye, ‘Ku bushe,",
            "poem": 1
          },
          {
            "text": "zan kuma busar da rafuffukanku,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "wanda ya yi zancen Sairus ya ce, ‘Shi ne makiyayina",
            "poem": 1
          },
          {
            "text": "zan kuma cika dukan abin da na gan dama;",
            "poem": 2
          },
          {
            "text": "zai yi zancen Urushalima cewa, “Bari a sāke gina ta,”",
            "poem": 2
          },
          {
            "text": "game da haikali kuma cewa, “Bari a kafa harsashinsa.” ’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
