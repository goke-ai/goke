  "chapter": {
    "number": 24,
    "content": [
      {
        "type": "heading",
        "content": [
          "Yin kaca-kaca da duniyar da Ubangiji zai yi"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Duba, Ubangiji zai wofinta duniya",
            "poem": 1
          },
          {
            "text": "ya kuma yi kaca-kaca da ita;",
            "poem": 2
          },
          {
            "text": "zai ɓata fuskarta",
            "poem": 1
          },
          {
            "text": "ya watsar da mazaunanta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "zai zama abu ɗaya",
            "poem": 1
          },
          {
            "text": "ga firist kamar yadda yake ga mutane,",
            "poem": 2
          },
          {
            "text": "ga maigida kamar yadda yake ga bawa,",
            "poem": 2
          },
          {
            "text": "ga uwargijiya kamar yadda yake ga baiwa,",
            "poem": 2
          },
          {
            "text": "ga mai sayarwa kamar yadda yake ga mai saya,",
            "poem": 2
          },
          {
            "text": "ga mai karɓan rance kamar yadda yake ga mai ba da rance,",
            "poem": 2
          },
          {
            "text": "ga mai karɓan bashi kamar yadda yake ga mai ba da bashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za a wofinta duniya ƙaƙaf",
            "poem": 1
          },
          {
            "text": "a kuma washe ta sarai.",
            "poem": 2
          },
          {
            "text": "Ubangiji ne ya faɗa haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Duniya ta bushe ta kuma yanƙwane,",
            "poem": 1
          },
          {
            "text": "duniya tana shan azaba ta kuma raunana,",
            "poem": 2
          },
          {
            "text": "masu daraja na duniya suna shan azaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duniya ta ƙazantu ta wurin mutanenta",
            "poem": 1
          },
          {
            "text": "sun ƙi yin biyayya da dokoki,",
            "poem": 2
          },
          {
            "text": "sun keta farillai",
            "poem": 1
          },
          {
            "text": "suka kuma karya madawwamin alkawari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda haka la’ana za tă auko wa duniya;",
            "poem": 1
          },
          {
            "text": "dole mutanenta su ɗauki hakkin laifinsu.",
            "poem": 2
          },
          {
            "text": "Saboda haka aka ƙone mazaunan duniya,",
            "poem": 1
          },
          {
            "text": "kuma kaɗan ne kurum suka rage.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sabon ruwan inabi ya bushe kuringar inabi kuma sun yanƙwane;",
            "poem": 1
          },
          {
            "text": "dukan masu farin ciki suna nishi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kaɗe-kaɗen garayu sun yi shiru,",
            "poem": 1
          },
          {
            "text": "surutun masu murna ya daina,",
            "poem": 2
          },
          {
            "text": "garayan farin ciki ya yi shiru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Babu sauran shan ruwan inabi suna rera waƙa;",
            "poem": 1
          },
          {
            "text": "barasa ya zama da ɗaci ga masu shanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Birnin da aka birkice ta zama kango;",
            "poem": 1
          },
          {
            "text": "an kulle ƙofar shiga kowane gida.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "A tituna suna kukan neman ruwan inabi;",
            "poem": 1
          },
          {
            "text": "dukan farin ciki ya dawo baƙin ciki,",
            "poem": 2
          },
          {
            "text": "an hana dukan kaɗe-kaɗe a duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "An bar birnin kango,",
            "poem": 1
          },
          {
            "text": "aka yi kaca-kaca da ƙofofinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Haka zai zama a duniya",
            "poem": 1
          },
          {
            "text": "da kuma a cikin al’ummai,",
            "poem": 2
          },
          {
            "text": "kamar sa’ad da akan karkaɗe itacen zaitun,",
            "poem": 1
          },
          {
            "text": "ko kuma kamar sa’ad da ake barin kala bayan an girbe inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sun daga muryoyinsu, sun yi sowa ta farin ciki;",
            "poem": 1
          },
          {
            "text": "daga yamma sun furta darajar Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Saboda haka a gabas sun ɗaukaka Ubangiji,",
            "poem": 1
          },
          {
            "text": "a ɗaukaka sunan Ubangiji, Allah na Isra’ila,",
            "poem": 2
          },
          {
            "text": "a cikin tsibiran teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Daga iyakokin duniya mun ji waƙoƙi,",
            "poem": 1
          },
          {
            "text": "“Ɗaukaka ga Mai Adalcin nan.”",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Amma na ce, “Na lalace, na lalace!",
            "poem": 1
          },
          {
            "text": "Kaitona!",
            "poem": 2
          },
          {
            "text": "Munafukai sun ci amana!",
            "poem": 1
          },
          {
            "text": "Da munafunci munafukai sun ci amana!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Razana da rami da tarko suna jiranku,",
            "poem": 1
          },
          {
            "text": "Ya mutanen duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk wanda ya yi ƙoƙarin tserewa daga ƙarar razana",
            "poem": 1
          },
          {
            "text": "zai fāɗa cikin rami;",
            "poem": 2
          },
          {
            "text": "wanda kuma ya tsere daga rami",
            "poem": 1
          },
          {
            "text": "za a kama shi a tarko.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "An buɗe ƙofofin ambaliyar ruwan sama,",
            "poem": 1
          },
          {
            "text": "harsashen ginin duniya suna rawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "An tsage duniya,",
            "poem": 1
          },
          {
            "text": "duniya ta farfashe ta wage,",
            "poem": 2
          },
          {
            "text": "an girgiza duniya ƙwarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Duniya tana tangaɗi kamar mashayi,",
            "poem": 1
          },
          {
            "text": "tana lilo kamar rumfa a cikin iska;",
            "poem": 2
          },
          {
            "text": "laifin tayarwarta ya yi nauyi sosai",
            "poem": 1
          },
          {
            "text": "har ta fāɗi ba kuwa za tă ƙara tashi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "A wannan rana Ubangiji zai hukunta",
            "poem": 1
          },
          {
            "text": "ikokin da suke cikin sama",
            "poem": 2
          },
          {
            "text": "da kuma sarakunan da suke a duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Za a tattara su tare",
            "poem": 1
          },
          {
            "text": "kamar ɗaurarru a kurkuku;",
            "poem": 2
          },
          {
            "text": "za a rufe su a kurkuku",
            "poem": 2
          },
          {
            "text": "a kuma hukunta su",
            "poem": 2
          },
          {
            "noteId": 678
          },
          {
            "text": "bayan kwanaki masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sa’an nan wata zai ruɗe, rana ta ji kunya;",
            "poem": 1
          },
          {
            "text": "gama Ubangiji Maɗaukaki zai yi mulki",
            "poem": 2
          },
          {
            "text": "a kan Dutsen Sihiyona da kuma a cikin Urushalima,",
            "poem": 2
          },
          {
            "text": "da kuma a gaban dattawanta, da ɗaukaka.",
            "poem": 2
          }
        ]
      }
    ],
