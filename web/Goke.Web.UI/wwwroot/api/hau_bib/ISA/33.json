  "chapter": {
    "number": 33,
    "content": [
      {
        "type": "heading",
        "content": [
          "Damuwa da taimako"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kaitonka, ya kai mai hallakarwa,",
            "poem": 1
          },
          {
            "text": "kai da ba a hallakar da kai ba!",
            "poem": 2
          },
          {
            "text": "Kaitonka, ya maciya amana,",
            "poem": 1
          },
          {
            "text": "kai da ba a ci amanarka ba!",
            "poem": 2
          },
          {
            "text": "Sa’ad da ka daina hallakarwa,",
            "poem": 1
          },
          {
            "text": "za a hallaka ka;",
            "poem": 2
          },
          {
            "text": "sa’ad da ka daina cin amana,",
            "poem": 1
          },
          {
            "text": "za a ci amanarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya Ubangiji, ka yi mana jinƙai;",
            "poem": 1
          },
          {
            "text": "muna marmarinka.",
            "poem": 2
          },
          {
            "text": "Ka zama ƙarfinmu kowace safiya,",
            "poem": 1
          },
          {
            "text": "cetonmu a lokacin damuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Da tsawar muryarka, mutane za su gudu;",
            "poem": 1
          },
          {
            "text": "sa’ad da ka tashi, al’ummai za su watse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ganimarku, ya al’ummai ƙanana fāri sun girbe;",
            "poem": 1
          },
          {
            "text": "kamar tarin fārin da mutane sun fāɗa wa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji da girma yake, gama yana zaune a bisa;",
            "poem": 1
          },
          {
            "text": "zai cika Sihiyona cikin gaskiya da adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zai zama tabbataccen harsashi na koyaushe,",
            "poem": 1
          },
          {
            "text": "ma’ajin ceto da hikima da sani a yalwace;",
            "poem": 2
          },
          {
            "text": "tsoron Ubangiji shi ne mabuɗin wannan dukiya.",
            "poem": 2
          },
          {
            "noteId": 690
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duba, jarumawansu suna kuka da ƙarfi a tituna;",
            "poem": 1
          },
          {
            "text": "jakadun salama suna kuka mai zafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "An gudu an bar manyan hanyoyi,",
            "poem": 1
          },
          {
            "text": "babu matafiye a kan hanyoyi.",
            "poem": 2
          },
          {
            "text": "Aka keta yarjejjeniya,",
            "poem": 1
          },
          {
            "text": "an rena shaidunsa",
            "poem": 2
          },
          {
            "text": "ba a kuwa ganin girman kowa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ƙasa tana kuka an kuma gudu an bar ta,",
            "poem": 1
          },
          {
            "text": "Lebanon ta sha kunya ta kuma yanƙwane;",
            "poem": 2
          },
          {
            "text": "Sharon ta zama kamar Araba,",
            "poem": 2
          },
          {
            "text": "Bashan da Karmel sun kakkaɓe ganyayensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Yanzu zan tashi,” in ji Ubangiji.",
            "poem": 1
          },
          {
            "text": "“Yanzu ne za a ɗaukaka ni;",
            "poem": 2
          },
          {
            "text": "yanzu za a ɗaga ni sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kun yi cikin yayi,",
            "poem": 1
          },
          {
            "text": "kuka haifi kara;",
            "poem": 2
          },
          {
            "text": "numfashinku wuta ne da zai cinye ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Za a ƙone mutane kamar da ƙuna farar ƙasa;",
            "poem": 1
          },
          {
            "text": "kamar ƙayayyuwan da aka sare aka kuma sa musu wuta.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ku da kuke da nesa, ku ji abin da na yi;",
            "poem": 1
          },
          {
            "text": "ku da kuke kusa, ku san ikona!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Masu zunubi a Sihiyona sun firgita;",
            "poem": 1
          },
          {
            "text": "rawar jiki ya kama marasa sanin Allah suna cewa,",
            "poem": 2
          },
          {
            "text": "“Wane ne a cikinmu zai iya zama da wuta mai ci?",
            "poem": 1
          },
          {
            "text": "Wane ne a cikinmu zai iya zama da madawwamiyar ƙonewa?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Shi da yake tafiya cikin adalci",
            "poem": 1
          },
          {
            "text": "yana kuma magana abin da yake daidai,",
            "poem": 2
          },
          {
            "text": "wanda yake ƙin riba daga cuta",
            "poem": 1
          },
          {
            "text": "yana kuma kiyaye hannunsa daga karɓan cin hanci,",
            "poem": 2
          },
          {
            "text": "wanda yake hana kunnuwansa daga ƙulla kisa",
            "poem": 1
          },
          {
            "text": "ya kuma rufe idanunsa a kan tunanin aikata mugunta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "shi ne mutumin da zai zauna a bisa,",
            "poem": 1
          },
          {
            "text": "wanda mafakarsa za tă zama kagarar dutse.",
            "poem": 2
          },
          {
            "text": "Za a tanada abincinsa, kuma ruwa ba zai kāsa masa ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Idanunku za su ga sarki a cikin kyansa",
            "poem": 1
          },
          {
            "text": "ku kuma hangi ƙasar da take shimfiɗe can da nisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Cikin tunaninku za ku yi tunani firgitar da ta faru tun dā kuna cewa,",
            "poem": 1
          },
          {
            "text": "“Ina hafsan nan?",
            "poem": 2
          },
          {
            "text": "Ina wannan wanda yake karɓar haraji?",
            "poem": 2
          },
          {
            "text": "Ina hafsan da yake lura da hasumiyoyi?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba za ku ƙara ganin waɗannan mutane masu girman kai kuma ba,",
            "poem": 1
          },
          {
            "text": "waɗannan mutane masu magana da harshen da ba ku fahimta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ku duba Sihiyona, birnin shagulgulanmu;",
            "poem": 1
          },
          {
            "text": "idanunku za su ga Urushalima,",
            "poem": 2
          },
          {
            "text": "mazauni mai lafiya, tentin da ba za a taɓa gusar ba;",
            "poem": 2
          },
          {
            "text": "wanda ba a taɓa tumɓuke turakunsa ba,",
            "poem": 1
          },
          {
            "text": "ko a tsinke igiyoyinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "A can Ubangiji zai zama Mai Iko Duka namu.",
            "poem": 1
          },
          {
            "text": "Zai zama kamar inda manyan koguna da rafuffuka suke.",
            "poem": 2
          },
          {
            "text": "Matuƙan jirgin ruwa ba za su kai wurinsu ba,",
            "poem": 1
          },
          {
            "text": "manyan jiragen ruwa ba za su yi zirga-zirga a kansu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Gama Ubangiji ne alƙalinmu,",
            "poem": 1
          },
          {
            "text": "Ubangiji ne mai ba mu dokoki,",
            "poem": 2
          },
          {
            "text": "Ubangiji ne sarkinmu;",
            "poem": 1
          },
          {
            "text": "shi ne wanda zai cece mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Maɗaurinku sun kunce",
            "poem": 1
          },
          {
            "text": "ƙarfafan itacen jirgin ba su da kāriya,",
            "poem": 2
          },
          {
            "text": "fikafikan jirgin ba su buɗu ba.",
            "poem": 2
          },
          {
            "text": "Ta haka za a raba yalwar ganima",
            "poem": 1
          },
          {
            "text": "har ma guragu za su kwashe ganimar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ba wani mazauna a Sihiyona da zai ce, “Ina ciwo”;",
            "poem": 1
          },
          {
            "text": "za a kuma gafarta zunuban waɗanda suke zama a can.",
            "poem": 2
          }
        ]
      }
    ],
