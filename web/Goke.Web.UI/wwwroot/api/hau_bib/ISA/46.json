  "chapter": {
    "number": 46,
    "content": [
      {
        "type": "heading",
        "content": [
          "Allolin Babilon"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Bel ya rusuna, Nebo ya durƙusa ƙasa;",
            "poem": 1
          },
          {
            "text": "ana ɗaukan gumakansu a kan dabbobi ne.",
            "poem": 2
          },
          {
            "noteId": 698
          },
          {
            "text": "Siffofin da ake yawo da su nawaya ne,",
            "poem": 2
          },
          {
            "text": "kayan nauyi masu gajiyarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sun durƙusa suka kuma rusuna tare;",
            "poem": 1
          },
          {
            "text": "ba su iya kuɓutar da nauyin kaya",
            "poem": 2
          },
          {
            "text": "su kansu sukan tafi bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Ku kasa kunne gare ni, ya ku gidan Yaƙub,",
            "poem": 1
          },
          {
            "text": "dukanku waɗanda kuka rage na gidan Isra’ila,",
            "poem": 2
          },
          {
            "text": "ku da na lura da ku tun da aka yi cikinku,",
            "poem": 1
          },
          {
            "text": "na kuma riƙe ku tun haihuwarku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Har lokacin da kuka tsufa kuka yi furfura",
            "poem": 1
          },
          {
            "text": "ni ne shi, ni ne shi wanda zai lura da ku.",
            "poem": 2
          },
          {
            "text": "Na yi ku zan kuma riƙe ku;",
            "poem": 1
          },
          {
            "text": "zan lura da ku",
            "poem": 2
          },
          {
            "text": "in kuma kuɓutar da ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Da wa za ku kwatanta ni ko ku ɗauka daidai da ni?",
            "poem": 1
          },
          {
            "text": "Da wa nake kama da har da za ku kwatanta ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Waɗansu sukan zubar da zinariya daga jaka",
            "poem": 1
          },
          {
            "text": "su kuma auna azurfa a ma’auni;",
            "poem": 2
          },
          {
            "text": "sukan yi haya maƙerin zinariya don yă ƙera allah,",
            "poem": 1
          },
          {
            "text": "su kuma rusuna su yi masa sujada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sukan daga shi a kafaɗunsu su kuma ɗauke shi;",
            "poem": 1
          },
          {
            "text": "sukan kafa shi a tsaye a wurinsa, a can kuwa zai tsaya.",
            "poem": 2
          },
          {
            "text": "Daga wannan wuri ba zai iya gusawa ba.",
            "poem": 2
          },
          {
            "text": "Ko da wani ya nemi taimakonsa, ba ya amsawa;",
            "poem": 1
          },
          {
            "text": "ba zai iya cetonsa daga wahala ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Ku tuna da wannan, ku sa shi a zuciya,",
            "poem": 1
          },
          {
            "text": "ku riƙe shi a zuciya, ku ’yan tawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku tuna da abubuwan da suka riga suka faru, waɗannan na tun dā;",
            "poem": 1
          },
          {
            "text": "ni ne Allah, kuma babu wani;",
            "poem": 2
          },
          {
            "text": "ni ne Allah kuma babu wani kamar ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Nakan sanar da ƙarshe tun daga farko,",
            "poem": 1
          },
          {
            "text": "daga fil azal, abin da yake zuwa nan gaba.",
            "poem": 2
          },
          {
            "text": "Na ce nufina zai tabbata,",
            "poem": 1
          },
          {
            "text": "kuma zan aikata dukan abin da na gan dama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Daga gabas na kira tsuntsun da yake farauta;",
            "poem": 1
          },
          {
            "text": "daga can ƙasa mai nesa, wani mutumin da zai cika nufina.",
            "poem": 2
          },
          {
            "text": "Abin da na riga na faɗa, shi zan sa ya faru;",
            "poem": 1
          },
          {
            "text": "abin da na shirya, shi zan aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku kasa kunne, ku masu taurinkai,",
            "poem": 1
          },
          {
            "text": "ku da kuke nesa da adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ina kawo adalcina kusa,",
            "poem": 1
          },
          {
            "text": "ba shi da nisa;",
            "poem": 2
          },
          {
            "text": "kuma cetona ba zai jinkirta ba.",
            "poem": 2
          },
          {
            "text": "Zan yi wa Sihiyona ceto, darajata ga Isra’ila.",
            "poem": 1
          }
        ]
      }
    ],
