  "chapter": {
    "number": 15,
    "content": [
      {
        "type": "heading",
        "content": [
          "Annabci a kan Mowab"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Abin da Allah ya yi magana a kan Mowab shi ne,",
          {
            "text": "An lalatar da Ar a Mowab,",
            "poem": 1
          },
          {
            "text": "an hallaka ta da dare!",
            "poem": 2
          },
          {
            "text": "An lalatar da Kir a Mowab,",
            "poem": 1
          },
          {
            "text": "an hallaka ta da dare!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Dibon ya haura zuwa haikalinta,",
            "poem": 1
          },
          {
            "text": "zuwa masujadan kan tudu don tă yi kuka;",
            "poem": 2
          },
          {
            "text": "Mowab ta yi ihu a kan Nebo da Medeba.",
            "poem": 2
          },
          {
            "text": "An aske kowane kai",
            "poem": 1
          },
          {
            "text": "an kuma yanke kowane gemu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "A tituna sun sa tsummoki a jikunansu;",
            "poem": 1
          },
          {
            "text": "a kan rufin ɗakuna da kuma dandalin taruwa",
            "poem": 2
          },
          {
            "text": "dukansu sai makoki suke yi,",
            "poem": 1
          },
          {
            "text": "sun kwanta suna kuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Heshbon da Eleyale sun yi kuka da ƙarfi,",
            "poem": 1
          },
          {
            "text": "aka ji muryoyinsu ko’ina har zuwa Yahaz.",
            "poem": 2
          },
          {
            "text": "Saboda haka mayaƙan Mowab suka yi kuka da ƙarfi,",
            "poem": 1
          },
          {
            "text": "har zuciyarsu ta karai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zuciyata ta yi kuka a kan Mowab;",
            "poem": 1
          },
          {
            "text": "mutanenta sun gudu har zuwa Zowar,",
            "poem": 2
          },
          {
            "text": "har zuwa Eglat Shelishiya.",
            "poem": 2
          },
          {
            "text": "Sun haura zuwa Luhit,",
            "poem": 2
          },
          {
            "text": "suna tafe suna kuka;",
            "poem": 2
          },
          {
            "text": "a kan hanyar zuwa Horonayim",
            "poem": 1
          },
          {
            "text": "suna makoki saboda hallakawarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ruwayen Nimrim sun ƙafe",
            "poem": 1
          },
          {
            "text": "ciyayin kuma sun bushe;",
            "poem": 2
          },
          {
            "text": "tsire-tsire duk sun ɓace",
            "poem": 1
          },
          {
            "text": "babu sauran ɗanyen abu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Saboda haka dukiyar da suka tara suka kuma ajiye",
            "poem": 1
          },
          {
            "text": "sun ɗauka suka ƙetare Rafin Arabim da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙugin kukansu ya kai ko’ina a iyakar Mowab;",
            "poem": 1
          },
          {
            "text": "kururuwarsu ta kai har zuwa Eglayim,",
            "poem": 2
          },
          {
            "text": "makokinsu ya kai har zuwa Beyer-Elim.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ruwayen Dimon sun cika da jini,",
            "poem": 1
          },
          {
            "text": "amma zan yi ƙari a kan Dimon,",
            "poem": 2
          },
          {
            "text": "zan kawo zaki a kan masu gudu na Mowab",
            "poem": 1
          },
          {
            "text": "da kuma a kan waɗanda suka ragu a ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      }
