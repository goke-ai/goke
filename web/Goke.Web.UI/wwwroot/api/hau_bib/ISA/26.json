  "chapter": {
    "number": 26,
    "content": [
      {
        "type": "heading",
        "content": [
          "Waƙar yabo"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "A wannan rana za a rera wannan waƙa a ƙasar Yahuda.",
          {
            "text": "Muna da birni mai ƙarfi;",
            "poem": 1
          },
          {
            "text": "Allah yake ceton",
            "poem": 2
          },
          {
            "text": "katanga da kuma kagarunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "A buɗe ƙofofi",
            "poem": 1
          },
          {
            "text": "saboda al’umma mai adalci ta shiga,",
            "poem": 2
          },
          {
            "text": "al’ummar da mai aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za ka kiyaye shi da cikakken salama",
            "poem": 1
          },
          {
            "text": "shi wanda ya kafa zuciyarsa gare ka,",
            "poem": 2
          },
          {
            "text": "domin ya dogara a gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama shi Ubangiji, ne madawwamin Dutse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Yakan ƙasƙantar da waɗanda suke zama a bisa",
            "poem": 1
          },
          {
            "text": "ya kawar da birni mai alfarma ƙasa;",
            "poem": 2
          },
          {
            "text": "ya rusa ta har ƙasa",
            "poem": 2
          },
          {
            "text": "ya jefar da ita cikin ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ƙafafu sukan tattake ta,",
            "poem": 1
          },
          {
            "text": "ƙafafu waɗanda aka zalunta,",
            "poem": 2
          },
          {
            "text": "wato, sawun matalauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Hanyar masu adalci sumul take;",
            "poem": 1
          },
          {
            "text": "Ya Mai Aikata Gaskiya, ka sa hanyar masu adalci ta yi sumul.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "I, Ubangiji, cikin tafiya a hanyar dokokinka,",
            "poem": 1
          },
          {
            "noteId": 680
          },
          {
            "text": "muna sa zuciya gare ka;",
            "poem": 2
          },
          {
            "text": "sunanka da tunani a kanka",
            "poem": 1
          },
          {
            "text": "su ne marmarin zukatanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Raina yana marmarinka da dare;",
            "poem": 1
          },
          {
            "text": "da safe kuma raina yana son ganinka.",
            "poem": 2
          },
          {
            "text": "Sa’ad da hukunce-hukuncenka suka sauko duniya,",
            "poem": 1
          },
          {
            "text": "mutanen duniya kan koyi adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ko da yake akan nuna wa mugaye alheri,",
            "poem": 1
          },
          {
            "text": "ba sa koyi adalci;",
            "poem": 2
          },
          {
            "text": "har ma a ƙasar masu aikata gaskiya sukan ci gaba da aikata mugunta",
            "poem": 1
          },
          {
            "text": "ba sa ganin girmar darajar Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ya Ubangiji an ɗaga hannunka sama,",
            "poem": 1
          },
          {
            "text": "amma ba sa ganinsa.",
            "poem": 2
          },
          {
            "text": "Bari su ga himmarka don mutanenka su kuma sha kunya;",
            "poem": 1
          },
          {
            "text": "bari wutar da aka ajiye don abokan gābanka ta cinye su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ubangiji ka kafa salama dominmu;",
            "poem": 1
          },
          {
            "text": "duk abin da muka iya yi kai ne ka yi mana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ya Ubangiji, Allahnmu, waɗansu iyayengiji ban da kai sun yi mulki a kanmu,",
            "poem": 1
          },
          {
            "text": "amma sunanka kaɗai muka girmama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yanzu duk sun mutu, ba za su ƙara rayuwa ba;",
            "poem": 1
          },
          {
            "text": "waɗannan ruhohin da suka rasu ba za su tashi ba.",
            "poem": 2
          },
          {
            "text": "Ka hukunta su ka kuma kawo su ga hallaka;",
            "poem": 1
          },
          {
            "text": "ka sa ba za a ƙara tunawa da su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ka fadada al’umma, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ka fadada al’umma.",
            "poem": 2
          },
          {
            "text": "Ka samo wa kanka ɗaukaka;",
            "poem": 1
          },
          {
            "text": "ka fadada dukan iyakokin ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ubangiji, sun zo gare ka a cikin damuwarsu;",
            "poem": 1
          },
          {
            "text": "sa’ad da ka hore su,",
            "poem": 2
          },
          {
            "text": "da ƙyar suna iya yin addu’a.",
            "poem": 2
          },
          {
            "noteId": 681
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kamar mace mai ciki da take gab da haihuwa",
            "poem": 1
          },
          {
            "text": "takan yi ta murɗawa tana kuka saboda zafi,",
            "poem": 2
          },
          {
            "text": "haka muka kasance a gabanka, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Muna da ciki, mun yi ta murɗewa saboda zafi,",
            "poem": 1
          },
          {
            "text": "amma mun haifi iska.",
            "poem": 2
          },
          {
            "text": "Ba mu kawo ceto ga duniya ba;",
            "poem": 1
          },
          {
            "text": "ba mu haifi mutanen duniya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Amma matattunka za su rayu;",
            "poem": 1
          },
          {
            "text": "jikunansu za su tashi.",
            "poem": 2
          },
          {
            "text": "Ku da kuke zama a ƙura,",
            "poem": 1
          },
          {
            "text": "ku farka ku kuma yi sowa don farin ciki.",
            "poem": 2
          },
          {
            "text": "Raɓarka kamar raɓar safiya ce;",
            "poem": 1
          },
          {
            "text": "duniya za tă haifi matattunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ku tafi, mutanena, ku shiga ɗakunanku",
            "poem": 1
          },
          {
            "text": "ku kuma kulle ƙofofi;",
            "poem": 2
          },
          {
            "text": "ku ɓoye kanku na ɗan lokaci",
            "poem": 1
          },
          {
            "text": "sai ya huce fushinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Duba, Ubangiji yana fitowa daga mazauninsa",
            "poem": 1
          },
          {
            "text": "don yă hukunta mutanen duniya saboda zunubansu.",
            "poem": 2
          },
          {
            "text": "Duniya za tă bayyana zub da jinin da aka yi a kanta;",
            "poem": 1
          },
          {
            "text": "ba za tă ƙara ɓoye waɗanda aka kashe a cikinta ba.",
            "poem": 2
          }
        ]
      }
    ],
