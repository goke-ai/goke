  "chapter": {
    "number": 52,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ki farka, ki farka, ya Sihiyona,",
            "poem": 1
          },
          {
            "text": "ki sanya wa kanki ƙarfi.",
            "poem": 2
          },
          {
            "text": "Ki sa rigarki na daraja,",
            "poem": 1
          },
          {
            "text": "Ya Urushalima, birni mai tsarki.",
            "poem": 2
          },
          {
            "text": "Marasa kaciya da maƙazanta",
            "poem": 1
          },
          {
            "text": "ba za su shi cikinki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ki kakkaɓe ƙurarki;",
            "poem": 1
          },
          {
            "text": "ki tashi, ki zauna a kursiyinki, ya Urushalima.",
            "poem": 2
          },
          {
            "text": "Ki ’yantar da kanki daga sarƙoƙi a wuyanki,",
            "poem": 1
          },
          {
            "text": "Ke kamammiyar Diyar Sihiyona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          "Gama ga abin Ubangiji yana cewa,",
          {
            "text": "“An sayar da ke ba da kuɗi ba,",
            "poem": 1
          },
          {
            "text": "kuma ba da kuɗi za a fanshe ki ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          "Gama ga abin da Ubangiji Mai Iko Duka yana cewa,",
          {
            "text": "“Da farko mutanena suka gangara zuwa Masar don su zauna;",
            "poem": 1
          },
          {
            "text": "a baya-bayan nan, Assuriya sun zalunce su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          "“Yanzu kuma me nake da shi a nan?”",
          {
            "text": "In ji Ubangiji.",
            "poem": 2
          },
          {
            "text": "“Gama an kwashe mutanena ba a bakin kome ba",
            "poem": 1
          },
          {
            "text": "kuma waɗanda suka mallake su sun yi musu ba’a,",
            "poem": 2
          },
          {
            "text": "Kullum ana cin gaba da yin wa sunana saɓo.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda haka mutanena za su san sunana;",
            "poem": 1
          },
          {
            "text": "saboda haka a wannan rana za su san",
            "poem": 2
          },
          {
            "text": "cewa ni ne wanda ya faɗa wannan.",
            "poem": 1
          },
          {
            "text": "I, ni ne.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Me ya fi wannan kyau a kan duwatsu",
            "poem": 1
          },
          {
            "text": "a ga ƙafafu na masu kawo labari mai daɗi",
            "poem": 2
          },
          {
            "text": "waɗanda suke shelar salama,",
            "poem": 1
          },
          {
            "text": "waɗanda suke kawo labari mai daɗi,",
            "poem": 2
          },
          {
            "text": "waɗanda suke shelar ceto,",
            "poem": 2
          },
          {
            "text": "waɗanda suke ce wa Sihiyona,",
            "poem": 1
          },
          {
            "text": "“Allahnki yana mulki!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ki kasa kunne! Masu tsaronki sun tā da muryoyinsu;",
            "poem": 1
          },
          {
            "text": "tare sun yi sowa ta farin ciki.",
            "poem": 2
          },
          {
            "text": "Sa’ad da Ubangiji ya komo Sihiyona,",
            "poem": 1
          },
          {
            "text": "za su gan shi da idanunsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku ɓarke cikin waƙoƙin farin ciki gaba ɗaya,",
            "poem": 1
          },
          {
            "text": "kangonki na Urushalima,",
            "poem": 2
          },
          {
            "text": "gama Ubangiji ya ta’azantar da mutanensa,",
            "poem": 1
          },
          {
            "text": "ya fanshi Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ubangiji zai nuna hannunsa mai tsarki a fili",
            "poem": 1
          },
          {
            "text": "a idanun dukan al’ummai,",
            "poem": 2
          },
          {
            "text": "da kuma dukan iyakokin duniya za su gani",
            "poem": 1
          },
          {
            "text": "ceton Allahnmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku fita, ku fita daga can!",
            "poem": 1
          },
          {
            "text": "Kada ku taɓa wani abu marar tsarki!",
            "poem": 2
          },
          {
            "text": "Ku fita daga cikinta ku zama da tsarki,",
            "poem": 1
          },
          {
            "text": "ku da kuke ɗaukan kayan aikin Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma ba za ku fita a gaggauce ba",
            "poem": 1
          },
          {
            "text": "ko ku tafi da gudu;",
            "poem": 2
          },
          {
            "text": "gama Ubangiji zai ja gabanku,",
            "poem": 1
          },
          {
            "text": "Allah na Isra’ila zai kasance mai tsaron bayanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Wahala da kuma ɗaukakar bawan"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duba, bawana zai aikata abubuwa da hikima;",
            "poem": 1
          },
          {
            "noteId": 702
          },
          {
            "text": "za a tā da shi a kuma ɗaga shi da ɗaukaka ƙwarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kamar dai yadda aka kasance da mutane masu yawa waɗanda suka giggice sa’ad da suka gan shi,",
            "poem": 1
          },
          {
            "text": "kamanninsa ya lalace ƙwarai fiye da na kowane mutum",
            "poem": 2
          },
          {
            "text": "siffarsa kuma ta yi muni fiye da yadda ta mutum take,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "haka zai ba al’ummai masu yawa mamaki,",
            "poem": 1
          },
          {
            "text": "sarakuna kuma za su riƙe bakunansu don mamaki.",
            "poem": 2
          },
          {
            "text": "Gama abin da ba a faɗa musu ba, shi za su gani,",
            "poem": 1
          },
          {
            "text": "kuma abin da ba su ji ba, shi za su fahimta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
