  "chapter": {
    "number": 63,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ranar ɗaukan fansa da kuma ceto na Allah"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Wane ne wannan mai zuwa daga Edom,",
            "poem": 1
          },
          {
            "text": "daga Bozra, saye da jajjayen rigunarsa?",
            "poem": 2
          },
          {
            "text": "Wane ne wannan, sanye cikin daraja,",
            "poem": 1
          },
          {
            "text": "tafe cikin girmar ƙarfinsa?",
            "poem": 2
          },
          {
            "text": "“Ni ne, mai magana cikin adalci,",
            "poem": 1
          },
          {
            "text": "mai ikon ceto.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Me ya sa rigunanka suka yi ja,",
            "poem": 1
          },
          {
            "text": "sai ka ce na wanda yake tattaka ’ya’yan inabi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Na tattake ’ya’yan inabi ni kaɗai;",
            "poem": 1
          },
          {
            "text": "cikin al’ummai kuma babu wani tare da ni.",
            "poem": 2
          },
          {
            "text": "Na tattake su cikin fushina",
            "poem": 1
          },
          {
            "text": "Na matse su cikin hasalata;",
            "poem": 2
          },
          {
            "text": "jininsu ya fantsamar wa rigunana,",
            "poem": 1
          },
          {
            "text": "na kuma ɓata dukan tufafina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama ranar ɗaukan fansa tana a cikin zuciyata,",
            "poem": 1
          },
          {
            "text": "kuma shekarar fansata ta zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na duba, amma babu wanda zai taimaka,",
            "poem": 1
          },
          {
            "text": "na yi mamaki cewa ba wanda ya goyi baya;",
            "poem": 2
          },
          {
            "text": "saboda haka hannuna ya yi mini ceto,",
            "poem": 1
          },
          {
            "text": "fushina kuma ya rayar da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na tattake al’ummai cikin fushina;",
            "poem": 1
          },
          {
            "text": "cikin hasalata kuma na sa sun bugu",
            "poem": 2
          },
          {
            "text": "na kuma zub da jininsu a ƙasa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Yabo da addu’a"
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zan ba da labarin alherin Ubangiji,",
            "poem": 1
          },
          {
            "text": "ayyukan da suka sa a yabe shi,",
            "poem": 2
          },
          {
            "text": "bisa ga dukan abubuwan da Ubangiji ya yi mana,",
            "poem": 2
          },
          {
            "text": "I, ayyuka masu kyan da ya yi",
            "poem": 1
          },
          {
            "text": "domin gidan Isra’ila,",
            "poem": 2
          },
          {
            "text": "bisa ga jinƙansa da yawan alheransa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya ce, “Babu shakka su mutanena ne,",
            "poem": 1
          },
          {
            "text": "’ya’ya maza waɗanda ba za su ruɗe ni ba”;",
            "poem": 2
          },
          {
            "text": "ta haka ya zama Mai Cetonsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Cikin dukan damuwarsu shi ma ya damu,",
            "poem": 1
          },
          {
            "text": "mala’ikan da yake gabansa ya cece su.",
            "poem": 2
          },
          {
            "text": "Cikin ƙauna da jinƙai ya fanshe su;",
            "poem": 1
          },
          {
            "text": "ya kuma ɗaga su ya riƙe su",
            "poem": 2
          },
          {
            "text": "dukan kwanakin dā",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk da haka suka yi tawaye",
            "poem": 1
          },
          {
            "text": "suka ɓata wa Ruhu Mai Tsarki rai.",
            "poem": 2
          },
          {
            "text": "Saboda haka ya juya ya kuma zama abokin gābansu",
            "poem": 1
          },
          {
            "text": "shi kansa kuma ya yaƙe su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sa’an nan mutanensa suka tuna",
            "poem": 1
          },
          {
            "noteId": 714
          },
          {
            "text": "kwanakin dā,",
            "poem": 1
          },
          {
            "text": "kwanakin Musa da mutanensa,",
            "poem": 2
          },
          {
            "text": "ina yake shi wanda ya fitar da su ta teku,",
            "poem": 1
          },
          {
            "text": "da makiyayan garkensa?",
            "poem": 2
          },
          {
            "text": "Ina shi yake wanda ya sa",
            "poem": 1
          },
          {
            "text": "Ruhunsa Mai Tsarki a cikinsu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "wanda ya aika hannu ɗaukakarsa mai iko",
            "poem": 1
          },
          {
            "text": "ya kasance a hannun dama na Musa,",
            "poem": 2
          },
          {
            "text": "wanda ya raba ruwaye a gabansu,",
            "poem": 1
          },
          {
            "text": "don yă sami wa kansa madawwamin suna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "wanda ya bishe su cikin zurfafa?",
            "poem": 1
          },
          {
            "text": "Kamar doki a fili,",
            "poem": 1
          },
          {
            "text": "ba su yi tuntuɓe ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "kamar shanun da suke gangarawa zuwa kwari,",
            "poem": 1
          },
          {
            "text": "haka Ruhun Ubangiji ya ba su hutu.",
            "poem": 2
          },
          {
            "text": "Ga yadda ka bishe mutanenka",
            "poem": 1
          },
          {
            "text": "don ka ba wa kanka suna mai ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ka duba daga sama ka gani",
            "poem": 1
          },
          {
            "text": "daga kursiyinka da yake bisa, mai tsarki da kuma mai ɗaukaka.",
            "poem": 2
          },
          {
            "text": "Ina kishinka da kuma ikonka?",
            "poem": 1
          },
          {
            "text": "Ka janye juyayi da kuma tausayin da kake yi mana daga gare mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Amma kai Ubanmu ne,",
            "poem": 1
          },
          {
            "text": "ko Ibrahim bai san mu ba",
            "poem": 2
          },
          {
            "text": "Isra’ila kuma bai yarda da mu ba;",
            "poem": 2
          },
          {
            "text": "kai, ya Ubangiji, kai ne Ubanmu,",
            "poem": 1
          },
          {
            "text": "Mai Fansarmu tun fil azal ne sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Don me, ya Ubangiji, ka sa muna barin hanyoyinka",
            "poem": 1
          },
          {
            "text": "muka kuma taurare zukatanmu don kada mu girmama ka?",
            "poem": 2
          },
          {
            "text": "Ka komo domin darajar bayinka,",
            "poem": 1
          },
          {
            "text": "kabilan da suke abin gādonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Gama a ɗan lokaci mutanenka suka mallaki wurinka mai tsarki,",
            "poem": 1
          },
          {
            "text": "amma yanzu abokan gābanmu sun tattake wurinka mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Mu naka tun fil azal;",
            "poem": 1
          },
          {
            "text": "ba ka taɓa yin mulki a kansu ba,",
            "poem": 2
          },
          {
            "text": "ba a taɓa kira su da sunanka ba.",
            "poem": 2
          },
          {
            "noteId": 715
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      }
