  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Kaiton Ninebe"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kaiton birni mai zub da jini,",
            "poem": 1
          },
          {
            "text": "wadda take cike da ƙarairayi,",
            "poem": 2
          },
          {
            "text": "cike da ganima,",
            "poem": 1
          },
          {
            "text": "wadda ba a rasa masu fāɗawa cikin wahala!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku ji karar bulala",
            "poem": 1
          },
          {
            "text": "da kwaramniyar ƙafafu,",
            "poem": 2
          },
          {
            "text": "da sukuwar dawakai",
            "poem": 1
          },
          {
            "text": "da girgizar kekunan yaƙi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mahaya dawakai sun kunno kai,",
            "poem": 1
          },
          {
            "text": "takuba suna walƙiya,",
            "poem": 2
          },
          {
            "text": "māsu kuma suna ƙyali;",
            "poem": 2
          },
          {
            "text": "ga ɗumbun da aka kashe",
            "poem": 1
          },
          {
            "text": "ga tsibin matattu,",
            "poem": 2
          },
          {
            "text": "gawawwaki ba iyaka,",
            "poem": 1
          },
          {
            "text": "mutane suna tuntuɓe da gawawwaki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "duk saboda yawan sha’awace-sha’awacen karuwa,",
            "poem": 1
          },
          {
            "text": "mai daɗin baki, uwargidan maita,",
            "poem": 2
          },
          {
            "text": "wadda ta ɓad da al’ummai ta wurin karuwancinta",
            "poem": 1
          },
          {
            "text": "ta kuma ɓad da mutane ta wurin maitancinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ina gāba da ke,” in ji Ubangiji Maɗaukaki.",
            "poem": 1
          },
          {
            "text": "“Zan kware fatarinki a idonki.",
            "poem": 2
          },
          {
            "text": "Zan nuna wa al’ummai tsiraicinki,",
            "poem": 1
          },
          {
            "text": "masarautai kuma kunyarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zan watsa miki ƙazanta,",
            "poem": 1
          },
          {
            "text": "in yi miki wulaƙanci",
            "poem": 2
          },
          {
            "text": "in kuma mai da ke abin reni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk wanda ya gan ki zai gudu daga gare ki yana cewa,",
            "poem": 1
          },
          {
            "text": "‘Ninebe ta lalace, wa zai yi makoki domin ta?’",
            "poem": 2
          },
          {
            "text": "Ina zan sami wani wanda zai yi miki ta’aziyya?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kin fi Tebes",
            "poem": 1
          },
          {
            "noteId": 1077
          },
          {
            "text": "ne",
            "poem": 1
          },
          {
            "text": "da take a bakin Nilu,",
            "poem": 2
          },
          {
            "text": "da ruwa yake kewaye da ita?",
            "poem": 2
          },
          {
            "text": "Rafi shi ne kāriyarta,",
            "poem": 1
          },
          {
            "text": "ruwanta kuma katanga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kush",
            "poem": 1
          },
          {
            "noteId": 1078
          },
          {
            "text": "da kuma Masar su ne ƙarfinta marar iyaka;",
            "poem": 1
          },
          {
            "text": "Fut da Libiya suna cikin mataimakanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk da haka an tafi da ita",
            "poem": 1
          },
          {
            "text": "ta kuma tafi bauta.",
            "poem": 2
          },
          {
            "text": "Aka fyaɗa ƙanananta da ƙasa",
            "poem": 1
          },
          {
            "text": "aka yayyanka su gunduwa-gunduwa a kan kowane titi.",
            "poem": 2
          },
          {
            "text": "Aka jefa ƙuri’a a kan manyan mutanenta,",
            "poem": 1
          },
          {
            "text": "aka daure manyan mutanenta da sarƙoƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ke ma za ki bugu,",
            "poem": 1
          },
          {
            "text": "za ki ɓuya.",
            "poem": 2
          },
          {
            "text": "Ki kuma nemi mafaka daga wurin abokin gāba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Dukan kagarunki suna kama da itatuwan ɓaure",
            "poem": 1
          },
          {
            "text": "da ’ya’yansu da suka nuna.",
            "poem": 2
          },
          {
            "text": "Da an girgiza,",
            "poem": 1
          },
          {
            "text": "sai ɓaure su zuba a bakin mai sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Dubi mayaƙanki,",
            "poem": 1
          },
          {
            "text": "duk mata ne!",
            "poem": 2
          },
          {
            "text": "Ƙofofin ƙasarki",
            "poem": 1
          },
          {
            "text": "a buɗe suke ga abokan gābanki,",
            "poem": 2
          },
          {
            "text": "wuta ta cinye madogaransu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ki ja ruwa gama za a kewaye ki da yaƙi.",
            "poem": 1
          },
          {
            "text": "Ki ƙara ƙarfin kagaranki!",
            "poem": 2
          },
          {
            "text": "Ki kwaɓa laka,",
            "poem": 2
          },
          {
            "text": "ki sassaƙa turmi",
            "poem": 2
          },
          {
            "text": "ki gyara abin yin tubali!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "A can wuta za tă cinye ki;",
            "poem": 1
          },
          {
            "text": "takobi zai sare ki,",
            "poem": 2
          },
          {
            "text": "kuma kamar fāra, za a cinye ki.",
            "poem": 2
          },
          {
            "text": "Ki riɓaɓɓanya kamar fāra,",
            "poem": 1
          },
          {
            "text": "ki riɓaɓɓanya kamar fārin ɗango!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kin ƙara yawan masu kasuwancinki",
            "poem": 1
          },
          {
            "text": "har sai da suka fi taurarin sama.",
            "poem": 2
          },
          {
            "text": "Amma kamar fāra sun cinye ƙasar",
            "poem": 1
          },
          {
            "text": "sa’an nan suka tashi, suka tafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Masu tsaronki suna kama da fāri ɗango,",
            "poem": 1
          },
          {
            "text": "shugabanninki sun yi cincirindo kamar fārin ɗango",
            "poem": 2
          },
          {
            "text": "da suka sauka a kan bango a rana mai sanyi,",
            "poem": 1
          },
          {
            "text": "amma da rana ta fito, duk za su tashi su tafi,",
            "poem": 2
          },
          {
            "text": "ba kuma wanda ya san inda suka nufa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ya sarkin Assuriya, makiyayanka",
            "poem": 1
          },
          {
            "noteId": 1079
          },
          {
            "text": "sun yi barci;",
            "poem": 1
          },
          {
            "text": "manyan mutanenka sun kwanta su huta.",
            "poem": 2
          },
          {
            "text": "An watsar da mutanenka a cikin duwatsu,",
            "poem": 1
          },
          {
            "text": "ba wanda zai tattaro su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba abin da zai warkar da rauninka;",
            "poem": 1
          },
          {
            "text": "rauninka ya yi muni.",
            "poem": 2
          },
          {
            "text": "Duk wanda ya ji labarinka",
            "poem": 1
          },
          {
            "text": "zai tafa hannuwansa saboda farin cikin fāɗuwarka,",
            "poem": 2
          },
          {
            "text": "gama wane ne bai ji",
            "poem": 1
          },
          {
            "text": "jiki a hannunka ba?",
            "poem": 2
          }
        ]
      }
    ],
