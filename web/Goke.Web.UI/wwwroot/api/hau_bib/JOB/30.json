  "chapter": {
    "number": 30,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Amma yanzu suna yi mini ba’a",
            "poem": 1
          },
          {
            "text": "waɗanda na girme su,",
            "poem": 2
          },
          {
            "text": "waɗanda iyayensu maza ba su isa",
            "poem": 1
          },
          {
            "text": "su zama karnukan kiwon garken tumakina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ina amfani ƙarfin hannuwansu gare ni,",
            "poem": 1
          },
          {
            "text": "tun da ba su da sauran kuzari?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duk sun rame don rashi da yunwa,",
            "poem": 1
          },
          {
            "text": "suna yawo a gaigayar ƙasa",
            "poem": 2
          },
          {
            "text": "a kufai da dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "A cikin jeji suna tsinkar ganyaye marasa daɗi,",
            "poem": 1
          },
          {
            "text": "jijiyoyin itacen kwakwa ne abincinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "An kore su daga cikin mutanensu,",
            "poem": 1
          },
          {
            "text": "aka yi musu ihu kamar ɓarayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "An sa dole su zauna a kwazazzabai da kuma",
            "poem": 1
          },
          {
            "text": "cikin kogunan duwatsu da kuma cikin ramummuka cikin ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Suka yi ta kuka kamar dabbobi a jeji,",
            "poem": 1
          },
          {
            "text": "suka taru a ƙarƙashin sarƙaƙƙiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Mutane marasa hankali marasa suna,",
            "poem": 1
          },
          {
            "text": "an kore su daga ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Yanzu kuma ’ya’yansu maza su suke yi mini ba’a cikin waƙa",
            "poem": 1
          },
          {
            "text": "na zama abin banza a gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Suna ƙyamata suna guduna;",
            "poem": 1
          },
          {
            "text": "suna tofa mini miyau a fuska.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yanzu da Allah ya kunce bakana ya ba ni wahala",
            "poem": 1
          },
          {
            "text": "sun raba ni da mutuncina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "A hannun damana ’yan tā-da-na-zaune-tsaye sun tayar;",
            "poem": 1
          },
          {
            "text": "sun sa tarko a ƙafafuna,",
            "poem": 2
          },
          {
            "text": "sun yi shirin hallaka ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sun ɓata mini hanyata;",
            "poem": 1
          },
          {
            "text": "sun yi nasara cikin hallaka ni,",
            "poem": 2
          },
          {
            "text": "ba tare da wani ya taimake su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Suka nufo ni daga kowane gefe;",
            "poem": 1
          },
          {
            "text": "suka auko mini da dukan ƙarfinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Tsoro ya rufe ni;",
            "poem": 1
          },
          {
            "text": "an kawar mini mutuncina kamar da iska,",
            "poem": 2
          },
          {
            "text": "dukiyata ta watse kamar girgije.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Yanzu raina yana ƙarewa;",
            "poem": 1
          },
          {
            "text": "kwanakin wahala sun kama ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Dare ya huda ƙasusuwana;",
            "poem": 1
          },
          {
            "text": "ina ta shan azaba ba hutawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "A cikin girman ikonsa Allah ya zama kamar riga a jikina;",
            "poem": 1
          },
          {
            "text": "ya shaƙe ni kamar wuyan rigata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ya jefa ni cikin laka,",
            "poem": 1
          },
          {
            "text": "na zama ba kome ba sai ƙura da toka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Na yi kuka gare ka ya Allah, amma ba ka amsa mini ba.",
            "poem": 1
          },
          {
            "text": "Na tashi tsaye, amma sai ka dube ni kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka dube ni ba tausayi;",
            "poem": 1
          },
          {
            "text": "Ka kai mini hari da ƙarfin hannunka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ka ɗaga ni sama ka ɗora ni a kan iska;",
            "poem": 1
          },
          {
            "text": "ka jujjuya ni cikin hadari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Na san za ka sauko da ni ga mutuwa",
            "poem": 1
          },
          {
            "text": "zuwa wurin da kowane mai rai zai je.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "“Ba shakka ba mai ɗora hannu a kan mutumin da yake cikin wahala.",
            "poem": 1
          },
          {
            "text": "Lokacin da ya yi kukan neman taimako a cikin wahalarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ashe ban yi kuka domin waɗanda suke cikin damuwa ba?",
            "poem": 1
          },
          {
            "text": "Ko zuciyata ba tă yi baƙin ciki domin matalauta ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Duk da haka sa’ad da nake begen abu mai kyau,",
            "poem": 1
          },
          {
            "text": "mugun abu ne ya zo;",
            "poem": 2
          },
          {
            "text": "Sa’ad da nake neman haske, sai duhu ya zo.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Zuciyata ba tă daina ƙuna ba;",
            "poem": 1
          },
          {
            "text": "ina fuskantar kwanakin wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Na yi baƙi ƙirin, amma ba rana ce ta ƙona ni ba.",
            "poem": 1
          },
          {
            "text": "Na tsaya a cikin mutane, na kuma yi kuka don taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Na zama ɗan’uwan diloli,",
            "poem": 1
          },
          {
            "text": "na zama abokan mujiyoyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Fatar jikina ta yi baƙi tana ɓarewa;",
            "poem": 1
          },
          {
            "text": "jikina yana ƙuna da zazzaɓi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Garayata ta zama ta makoki,",
            "poem": 1
          },
          {
            "text": "sarewata kuma ta zama ta kuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
