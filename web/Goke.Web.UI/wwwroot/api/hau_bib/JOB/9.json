  "chapter": {
    "number": 9,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Lalle, na san wannan gaskiya ne.",
            "poem": 1
          },
          {
            "text": "Amma ta yaya mutum zai iya zama mai adalci a gaban Allah?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko da mutum yana so yă yi gardama da shi,",
            "poem": 1
          },
          {
            "text": "ba zai taɓa amsa masa ba ko da sau ɗaya cikin dubu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Hikimarsa tana da zurfi, ikonsa yana da yawa.",
            "poem": 1
          },
          {
            "text": "Wane ne ya taɓa yin faɗa da shi har ya yi nasara?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Yana matsar da manyan duwatsu kafin su sani",
            "poem": 1
          },
          {
            "text": "kuma yana juya su cikin fushinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yana girgiza ƙasa,",
            "poem": 1
          },
          {
            "text": "yana girgiza harsashenta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yana magana da rana sai ta ƙi yin haske;",
            "poem": 1
          },
          {
            "text": "yana hana taurari yin haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Shi kaɗai ya shimfiɗa sammai",
            "poem": 1
          },
          {
            "text": "ya kuma yi tafiya a kan raƙuman ruwan teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Shi ne ya halicci Mafarauci da Kare da Zomo, da Kaza,",
            "poem": 1
          },
          {
            "text": "da ’Ya’yanta da tarin taurari a sama, da taurarin kudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Yana yin abubuwan banmamaki waɗanda ba a iya ganewa,",
            "poem": 1
          },
          {
            "text": "mu’ujizai waɗanda ba a iya ƙirgawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ba na iya ganinsa lokacin da ya wuce ni;",
            "poem": 1
          },
          {
            "text": "ba na sani ya wuce lokacin da ya wuce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Wane ne ya isa yă hana shi in ya ƙwace abu?",
            "poem": 1
          },
          {
            "text": "Wa zai ce masa, ‘Me kake yi?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Allah ba ya danne fushinsa;",
            "poem": 1
          },
          {
            "text": "ko dodannin ruwan da ake kira ayarin Rahab ya tattake su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ta yaya zan iya yin faɗa da shi?",
            "poem": 1
          },
          {
            "text": "Ina zan iya samun kalmomin da zan yi gardama da shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ko da yake ba ni da laifi, ba zan iya amsa masa ba;",
            "poem": 1
          },
          {
            "text": "sai dai roƙon jinƙai zan iya yi ga mahukuncina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko da na yi kira gare shi ya amsa mini,",
            "poem": 1
          },
          {
            "text": "ban yarda cewa zai saurare ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zai sa hadari yă danne ni",
            "poem": 1
          },
          {
            "text": "yă ƙara mini ciwona ba dalili.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ba zai bari in yi numfashi ba,",
            "poem": 1
          },
          {
            "text": "sai dai yă ƙara mini azaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "In maganar ƙarfi ne, shi babban mai ƙarfi ne!",
            "poem": 1
          },
          {
            "text": "In kuma maganar shari’a ne, wa zai kai kararsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ko da ni marar ƙarfi ne, bakina ya isa yă sa in zama mai laifi;",
            "poem": 1
          },
          {
            "text": "in ba ni da laifi, zai sa in yi laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Ko da yake ba ni da laifi,",
            "poem": 1
          },
          {
            "text": "ban damu da kaina ba;",
            "poem": 2
          },
          {
            "text": "na rena raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ba bambanci; shi ya sa na ce,",
            "poem": 1
          },
          {
            "text": "‘Yana hallaka marasa laifi da kuma mugaye.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Lokacin da bala’i ya kawo ga mutuwa,",
            "poem": 1
          },
          {
            "text": "yakan yi dariyar baƙin cikin marasa laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Lokacin da ƙasa ta faɗa a hannun mugaye,",
            "poem": 1
          },
          {
            "text": "yakan rufe idanun masu shari’a.",
            "poem": 2
          },
          {
            "text": "In ba shi ba wa zai yi wannan?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "“Kwanakina sun fi mai gudu wucewa da sauri;",
            "poem": 1
          },
          {
            "text": "suna firiya babu wani abin jin daɗi a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Suna wucewa kamar jirgin ruwan da aka yi da kyauro,",
            "poem": 1
          },
          {
            "text": "kamar jahurma da ta kai wa namanta cafka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "‘In na ce zan manta da abin da yake damu na,",
            "poem": 1
          },
          {
            "text": "zan yi murmushi in daina nuna ɓacin rai,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "duk da haka ina tsoron duk wahalata,",
            "poem": 1
          },
          {
            "text": "domin na san ba za ka ɗauke ni marar laifi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Tun da an riga an ɗauke ni mai laifi,",
            "poem": 1
          },
          {
            "text": "duk ƙoƙarina a banza yake.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ko da na wanke jikina duka da sabulu,",
            "poem": 1
          },
          {
            "text": "na wanke hannuwana kuma da soda,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "duk da haka za ka jefa ni cikin ƙazamin wuri,",
            "poem": 1
          },
          {
            "text": "yadda ko rigunan jikina ma za su ƙi ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "“Shi ba mutum ba ne kamar ni wanda zan iya amsa masa,",
            "poem": 1
          },
          {
            "text": "har da za mu yi faɗa da juna a wurin shari’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "In da akwai wanda zai iya shiga tsakaninmu,",
            "poem": 1
          },
          {
            "text": "ya ɗora hannunsa a kanmu tare,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "wani wanda zai sa Allah yă daina duka na,",
            "poem": 1
          },
          {
            "text": "don yă daina ba ni tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Sa’an nan ne zan iya yin magana ba tare da jin tsoronsa ba,",
            "poem": 1
          },
          {
            "text": "amma a yadda nake a yanzu ba zan iya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
