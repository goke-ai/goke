  "chapter": {
    "number": 12,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ba shakka ku ne mutanen nan,",
            "poem": 1
          },
          {
            "text": "hikima za tă mutu tare da ku!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Amma ni ma ina da hankali kamar ku;",
            "poem": 1
          },
          {
            "text": "ba ku fi ni ba.",
            "poem": 2
          },
          {
            "text": "Wane ne bai san duk waɗannan abubuwan ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Na zama abin dariya ga abokaina,",
            "poem": 1
          },
          {
            "text": "ko da yake na yi kira ga Allah ya kuwa amsa mini,",
            "poem": 2
          },
          {
            "text": "duk da haka suka yi mini riya ko da yake ni mai adalci ne kuma marar laifi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mutanen da ba su da damuwa suna jin daɗin ganin waɗanda",
            "poem": 1
          },
          {
            "text": "suke dab da fāɗuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Amma wurin zaman ’yan fashi yana nan ba mai damunsu,",
            "poem": 1
          },
          {
            "text": "waɗanda kuma suke saɓa wa Allah suna zamansu lafiya,",
            "poem": 2
          },
          {
            "text": "har ma da masu ɗaukar allahnsu a hannuwansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Amma ka tambayi dabbobi, za su kuma koya maka,",
            "poem": 1
          },
          {
            "text": "ko kuma tsuntsayen sararin sama kuma za su gaya maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ko ka yi magana da duniya, za tă kuma koya maka,",
            "poem": 1
          },
          {
            "text": "ko kuma ka bar kifin teku su sanar da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Wane ne cikin waɗannan bai san",
            "poem": 1
          },
          {
            "text": "cewa hannun Ubangiji ne ya yi wannan ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ran kowace halitta yana a hannunsa,",
            "poem": 1
          },
          {
            "text": "haka kuma numfashin dukan ’yan adam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ko kunne ba ya gwada kalmomi",
            "poem": 1
          },
          {
            "text": "kamar yadda harshe yake ɗanɗana abinci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ko ba a wurin tsofaffi ake samun hikima ba?",
            "poem": 1
          },
          {
            "text": "Ba tsawon rai yana kawo ganewa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Allah ne mai iko da kuma hikima,",
            "poem": 1
          },
          {
            "text": "shawara da ganewa nasa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Abin da ya rushe ba a iya ginawa ba;",
            "poem": 1
          },
          {
            "text": "in ya kulle mutum ba a iya buɗe shi a sake shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idan ya hana ruwan sama, za a yi fări;",
            "poem": 1
          },
          {
            "text": "in kuma ya saki ruwa za a yi ambaliya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Shi ne mai ƙarfi da kuma mai nasara;",
            "poem": 1
          },
          {
            "text": "mai ruɗi da wanda aka ruɗa, duk nasa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Yakan sa mashawarta su zama marasa hikima",
            "poem": 1
          },
          {
            "text": "yă kuma sa wawaye su zama masu shari’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yana cire sarƙar da sarakuna suka ɗaura",
            "poem": 1
          },
          {
            "text": "yă kuma ɗaura musu wata tsumma a kwankwaso.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Yakan ƙasƙantar da firistoci",
            "poem": 1
          },
          {
            "text": "yă kuma tumɓuke masu ikon da aka kafa tun da daɗewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Yana sa amintattun mashawarta su yi shiru",
            "poem": 1
          },
          {
            "text": "yakan kawar da hikimar dattawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yakan sa masu iko su ji kunya",
            "poem": 1
          },
          {
            "text": "yă kuma ƙwace ƙarfin masu ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana buɗe abubuwan da suke cikin duhu",
            "poem": 1
          },
          {
            "text": "yă kuma kawo haske a wuraren da ba haske;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "yana sa al’ummai su zama manya, sai kuma yă hallaka su;",
            "poem": 1
          },
          {
            "text": "yana sa al’ummai su ƙasaita, yă kuma watsar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Yana hana shugabannin duniya ganewa;",
            "poem": 1
          },
          {
            "text": "Ya bar su su yi ta makuwa, su ruɗe, su ɓata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Suna lallube cikin duhu ba haske;",
            "poem": 1
          },
          {
            "text": "yă sa su yi ta tangaɗi kamar bugaggu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
