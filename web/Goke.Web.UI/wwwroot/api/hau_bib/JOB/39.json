  "chapter": {
    "number": 39,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ka san lokacin da awakin kan dutse suke haihuwa?",
            "poem": 1
          },
          {
            "text": "Ko ka taɓa lura da yadda batsiya take haihuwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kana ƙirga watanni nawa suke yi kafin su haihu?",
            "poem": 1
          },
          {
            "text": "Ka san lokacin da suke haihuwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Suna kwanciya su haifi ’ya’yansu;",
            "poem": 1
          },
          {
            "text": "naƙudarsu ta ƙare bayan sun haihu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "’Ya’yansu suna girma kuma suna girma cikin ƙarfi a jeji;",
            "poem": 1
          },
          {
            "text": "sukan tafi ba su dawowa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Wane ne yake sakin jakin dawa yă bar shi?",
            "poem": 1
          },
          {
            "text": "Wane ne yake kunce igiyoyinsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na sa jeji yă zama gidansa",
            "poem": 1
          },
          {
            "text": "ƙasar gishiri kuma ta zama wurin zamansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yana dariyar hargitsin da yake faruwa a cikin gari;",
            "poem": 1
          },
          {
            "text": "ba ya jin tsawar mai tuƙa shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yana kiwo a kan tuddai don abincinsa",
            "poem": 1
          },
          {
            "text": "yana neman kowane ɗanyen abu mai ruwan ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Ko ɓauna zai yarda yă zauna a wurin sa wa dabbobi abinci?",
            "poem": 1
          },
          {
            "text": "Zai tsaya a ɗakin dabbobinka da dare?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ko za ka iya daure shi da igiya a kwarin kunya?",
            "poem": 1
          },
          {
            "text": "Zai yi maka buɗar gonarka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ko za ka dogara da shi don yawan ƙarfinsa?",
            "poem": 1
          },
          {
            "text": "Za ka bar masa nauyin aikinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ko za ka amince da shi yă kawo maka hatsinka gida",
            "poem": 1
          },
          {
            "text": "yă tattara shi a masussuka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Fikafikan jimina suna bugawa cike da farin ciki",
            "poem": 1
          },
          {
            "text": "amma ba za su gwada kansu da fikafikan da na shamuwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Tana sa ƙwai nata a ƙasa",
            "poem": 1
          },
          {
            "text": "kuma ta bar su su yi ɗumi a cikin ƙasa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ba tă damu ko za a taka su a fasa su,",
            "poem": 1
          },
          {
            "text": "ko waɗansu manyan dabbobi za su tattake su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Tana tsananta wa ’ya’yanta kamar ba nata ba",
            "poem": 1
          },
          {
            "text": "ba tă damu da wahalar da ta sha ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gama Allah bai ba ta hikima ba",
            "poem": 1
          },
          {
            "text": "ko kuma iya fahimta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk da haka sa’ad da ta buɗe fikafikanta ta shara da gudu",
            "poem": 1
          },
          {
            "text": "tana yi wa doki da mai hawansa dariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Ko kai ne kake ba doki ƙarfinsa",
            "poem": 1
          },
          {
            "text": "kai kake rufe wuyansa da geza mai yawa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ko kai kake sa shi yă yi tsalle kamar fāra,",
            "poem": 1
          },
          {
            "text": "ba ya jin tsoro sai dai a ji tsoronsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yana takawa da ƙarfi",
            "poem": 1
          },
          {
            "text": "yana jin daɗin ƙarfinsa yana shiga filin yaƙi gabagadi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana yi wa tsoro dariya",
            "poem": 1
          },
          {
            "text": "ba ya jin tsoron kome; ba ya guje wa takobi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Kwari a baka yana lilo a gabansa",
            "poem": 1
          },
          {
            "text": "kibiya da māshi suna wuce kansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Yana kartar ƙasa da ƙarfi;",
            "poem": 1
          },
          {
            "text": "ba ya iya tsayawa tsab sa’ad da ya ji busar ƙaho.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Da jin ƙarar ƙaho sai ya ce, ‘Yauwa!’",
            "poem": 1
          },
          {
            "text": "Ya ji ƙanshin yaƙi daga nesa,",
            "poem": 2
          },
          {
            "text": "da ihun shugabannin yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "“Ko ta wurin hikimarka ce shirwa take firiya",
            "poem": 1
          },
          {
            "text": "take kuma baza fikafikanta zuwa kudu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ko da umarninka ne shaho yake firiya",
            "poem": 1
          },
          {
            "text": "ya kuma yi sheƙarsa a can sama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Yana zama a kan dutse yă zauna a wurin da dare;",
            "poem": 1
          },
          {
            "text": "cikin duwatsu ne wurin zamansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Daga can yake neman abincinsa;",
            "poem": 1
          },
          {
            "text": "idanunsa suna gani daga nesa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "’Ya’yansa suna shan jini,",
            "poem": 1
          },
          {
            "text": "inda akwai waɗanda aka kashe nan za a same shi.”",
            "poem": 2
          }
        ]
      }
    ],
