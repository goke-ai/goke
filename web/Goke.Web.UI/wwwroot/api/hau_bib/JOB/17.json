  "chapter": {
    "number": 17,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na karaya,",
            "poem": 1
          },
          {
            "text": "kwanakina sun kusa ƙarewa,",
            "poem": 2
          },
          {
            "text": "kabari yana jirana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ba shakka masu yi mini ba’a suna kewaye da ni;",
            "poem": 1
          },
          {
            "text": "idanuna suna ganin tsokanar da suke yi mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Ya Allah, ka ba ni abin da ka yi mini alkawari.",
            "poem": 1
          },
          {
            "text": "Wane ne zai kāre ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka rufe zuciyarsu yadda ba za su iya ganewa ba,",
            "poem": 1
          },
          {
            "text": "saboda haka ba za ka bari su yi nasara ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "In mutum ya juya wa abokansa baya don a ba shi wata lada",
            "poem": 1
          },
          {
            "text": "’ya’yansa za su makance.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Allah ya sa na zama abin da kowa yake magana a kai",
            "poem": 1
          },
          {
            "text": "wanda kowa yake tofa wa miyau a fuska.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Idanuna ba sa gani sosai don baƙin ciki;",
            "poem": 1
          },
          {
            "text": "jikina ya zama kamar inuwa kawai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Mutanen da suke masu adalci wannan abu ya ba su tsoro;",
            "poem": 1
          },
          {
            "text": "marasa laifi sun tayar wa marasa tsoron Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk da haka, masu adalci za su ci gaba da tafiya a kan hanyarsu,",
            "poem": 1
          },
          {
            "text": "waɗanda hannuwansu suke da tsabta kuma za su ƙara ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Amma ku zo dukanku, ku sāke gwadawa!",
            "poem": 1
          },
          {
            "text": "Ba zan sami mutum ɗaya mai hikima ba a cikinku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kwanakina sun wuce, shirye-shiryena sun ɓaci",
            "poem": 1
          },
          {
            "text": "haka kuma abubuwan da zuciyata take so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mutanen nan sun juya rana ta zama dare.",
            "poem": 1
          },
          {
            "text": "A tsakiyar duhu suka ce, ‘Haske yana kusa.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "In kabari ne begen da nake da shi kaɗai,",
            "poem": 1
          },
          {
            "text": "in na shimfiɗa gadona a cikin duhu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In na ce wa kabari, ‘Kai ne mahaifina,’",
            "poem": 1
          },
          {
            "text": "tsutsa kuma ke ce, ‘Mahaifiyata’ ko ‘’yar’uwata,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "To, ina begena yake?",
            "poem": 1
          },
          {
            "text": "Wane ne zai iya ganin wani bege domina?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko begena zai tafi tare da ni zuwa kabari ne?",
            "poem": 1
          },
          {
            "text": "Ko tare za a bizne mu cikin ƙura?”",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
