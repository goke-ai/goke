  "chapter": {
    "number": 35,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Elihu ya ce,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ko kana tsammani wannan gaskiya ne?",
            "poem": 1
          },
          {
            "text": "Kana cewa, ‘Ni mai adalci ne a gaban Allah.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duk da haka kana tambayarsa cewa, ‘Wace riba nake da ita,",
            "poem": 1
          },
          {
            "text": "kuma mene ne zan samu ta wurin ƙin yin zunubi?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Zan so in ba ka amsa",
            "poem": 1
          },
          {
            "text": "kai tare da abokanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku ɗaga kai ku dubi sama ku gani;",
            "poem": 1
          },
          {
            "text": "ku dubi gizagizai a samanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "In kun yi zunubi ta yaya wannan zai shafi Allah?",
            "poem": 1
          },
          {
            "text": "In zunubanku sun yi yawa, me wannan zai yi masa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "In kuna da adalci, me kuka ba shi,",
            "poem": 1
          },
          {
            "text": "ko kuma me ya karɓa daga hannunku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Muguntarku takan shafi mutum kamar ku ne kaɗai,",
            "poem": 1
          },
          {
            "text": "adalcinku kuma yakan shafi ’yan adam ne kaɗai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Mutane suna kuka don yawan zalunci;",
            "poem": 1
          },
          {
            "text": "suna roƙo don taimako daga hannu mai ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Amma ba wanda ya ce, ‘Ina Allah wanda ya halicce ni,",
            "poem": 1
          },
          {
            "text": "mai ba da waƙoƙi cikin dare,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "wanda ya fi koya mana fiye da dabbobin duniya",
            "poem": 1
          },
          {
            "text": "ya kuma sa muka fi tsuntsayen cikin iska hikima.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ba ya amsawa lokacin da mutane suka yi kira don taimako",
            "poem": 1
          },
          {
            "text": "domin girman kan mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Lalle Allah ba ya sauraron roƙonsu na wofi;",
            "poem": 1
          },
          {
            "text": "Maɗaukaki ba ya kula da roƙonsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ta yaya zai saurara sosai ko zai saurara",
            "poem": 1
          },
          {
            "text": "lokacin da kake cewa ba ka ganinsa,",
            "poem": 2
          },
          {
            "text": "cewa ka kawo ƙara a wurinsa",
            "poem": 1
          },
          {
            "text": "kuma dole ka jira shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kuma ka ce, ba ya ba da horo cikin fushinsa",
            "poem": 1
          },
          {
            "text": "ko kaɗan ba ya kula da mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Saboda haka Ayuba ya buɗe baki yana magana barkatai;",
            "poem": 1
          },
          {
            "text": "yana ta yawan magana ba tare da sani ba.”",
            "poem": 2
          }
        ]
      }
    ],
