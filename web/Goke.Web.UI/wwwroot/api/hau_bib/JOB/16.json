  "chapter": {
    "number": 16,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Na ji abubuwa da yawa kamar waɗannan;",
            "poem": 1
          },
          {
            "text": "dukanku ba ku iya ta’aziyya ba!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Dogayen surutanku ba sa ƙare ne?",
            "poem": 1
          },
          {
            "text": "Me yake sa kuke ta yin waɗannan surutai har kuke cin gaba da yin gardama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ni ma zan iya yin maganganu kamar yadda kuke yi",
            "poem": 1
          },
          {
            "text": "in da kuna cikin halin da nake;",
            "poem": 2
          },
          {
            "text": "zan iya faɗar duk abubuwan da kuke faɗi,",
            "poem": 1
          },
          {
            "text": "in kaɗa muku kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Amma bakina zai ƙarfafa ku;",
            "poem": 1
          },
          {
            "text": "ta’aziyyar da za tă fito daga bakina za tă kawar muku da ɓacin zuciyarku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Duk da haka in na yi magana, ba na samun sauƙi;",
            "poem": 1
          },
          {
            "text": "in ma na yi shiru zafin ba ya tafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba shakka ya Allah ka gajiyar da ni;",
            "poem": 1
          },
          {
            "text": "ka ɓata gidana gaba ɗaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka daure ni, ya kuma zama shaida;",
            "poem": 1
          },
          {
            "text": "yadda na rame sai ƙasusuwa, wannan ya sa ake gani kamar don ni mai zunubi ne shi ya sa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Allah ya kai mini hari ya yi kaca-kaca da ni cikin fushinsa",
            "poem": 1
          },
          {
            "text": "yana cizon haƙoransa don fushin da yake yi da ni;",
            "poem": 2
          },
          {
            "text": "ya zura mini ido.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Mutane suka buɗe baki suka yi mini riyar reni;",
            "poem": 1
          },
          {
            "text": "suka yi mini ba’a",
            "poem": 2
          },
          {
            "text": "suka haɗu suka tayar mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Allah ya bashe ni ga mugayen mutane,",
            "poem": 1
          },
          {
            "text": "ya jefa ni hannun mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Dā ina zamana lafiya kome yana tafiya daidai;",
            "poem": 1
          },
          {
            "text": "amma ya ragargaza ni; ya shaƙe ni a wuya;",
            "poem": 2
          },
          {
            "text": "ya murƙushe ni na zama abin barata gare shi;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "maharbansa sun kewaye ni.",
            "poem": 2
          },
          {
            "text": "Ba tausayi, ya soke ni a ƙodata",
            "poem": 1
          },
          {
            "text": "har jini ya zuba a ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ya ji mini rauni a kai a kai",
            "poem": 1
          },
          {
            "text": "ya auko mini kamar mai yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Ina makoki saye da tsummoki",
            "poem": 1
          },
          {
            "text": "na ɓoye fuskata a cikin ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Fuskata ta yi ja don kuka",
            "poem": 1
          },
          {
            "text": "idanuna sun kukumbura;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "duk da haka hannuwana ba su aikata ɓarna ba",
            "poem": 1
          },
          {
            "text": "kuma addu’ata mai tsabta ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Ya duniya, kada ki ɓoye jinina;",
            "poem": 1
          },
          {
            "text": "bari yă yi kuka a madadina!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ko yanzu haka shaidata tana sama;",
            "poem": 1
          },
          {
            "text": "wanda zai tsaya mini yana sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Shi mai yin roƙo a madadina abokina ne",
            "poem": 1
          },
          {
            "text": "yayinda nake kuka ga Allah;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "a madadin mutum ya yi roƙo ga Allah",
            "poem": 1
          },
          {
            "text": "kamar yadda mutum yakan yi roƙo domin abokinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Shekaru kaɗan suka rage",
            "poem": 1
          },
          {
            "text": "in kama hanyar da ba a komawa.",
            "poem": 2
          }
        ]
      }
    ],
