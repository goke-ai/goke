  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Da kawai za a iya auna wahalata",
            "poem": 1
          },
          {
            "text": "a kuma sa ɓacin raina a ma’auni!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba shakka da sun fi yashin teku nauyi,",
            "poem": 1
          },
          {
            "text": "shi ya sa nake magana haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kibiyoyin Maɗaukaki suna a kaina,",
            "poem": 1
          },
          {
            "text": "ruhuna yana shan dafinsa;",
            "poem": 2
          },
          {
            "text": "fushin Allah ya sauka a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Jaki yakan yi kuka sa’ad da ya sami ciyawar ci,",
            "poem": 1
          },
          {
            "text": "ko saniya takan yi kuka in ta sami abincinta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Akan cin abinci marar ɗanɗano ba tare da an sa gishiri ba,",
            "poem": 1
          },
          {
            "text": "ko akwai wani ƙanshin daɗi a cikin farin ruwan ƙwai?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na ƙi in taɓa shi;",
            "poem": 1
          },
          {
            "text": "irin wannan abinci zai sa ni rashin lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Kash, da ma Allah zai ba ni abin da nake fatar samu,",
            "poem": 1
          },
          {
            "text": "da ma Allah zai biya mini bukatata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "wato, Allah yă kashe ni,",
            "poem": 1
          },
          {
            "text": "yă miƙa hannunsa yă yanke raina!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Da sai in ji daɗi",
            "poem": 1
          },
          {
            "text": "duk zafin da nake sha",
            "poem": 2
          },
          {
            "text": "ban hana maganar Mai Tsarkin nan cika ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Wane ƙarfi nake da shi, har da zan ci gaba da sa zuciya?",
            "poem": 1
          },
          {
            "text": "Wane sa zuciya ne zai sa in yi haƙuri?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Da ƙarfin dutse aka yi ni ne?",
            "poem": 1
          },
          {
            "text": "Ko jikina tagulla ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ina da wani ikon da zan iya taimakon kai na ne,",
            "poem": 1
          },
          {
            "text": "yanzu da aka kore nasara daga gare ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Duk wanda ya ƙi yă yi alheri ga aboki",
            "poem": 1
          },
          {
            "text": "ya rabu ta tsoron Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma ’yan’uwana sun nuna ba zan iya dogara gare su ba,",
            "poem": 1
          },
          {
            "text": "kamar rafin da yakan bushe da rani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "kamar rafin da yakan cika a lokacin ƙanƙara,",
            "poem": 1
          },
          {
            "text": "yă kuma kumbura kamar ƙanƙarar da ta narke,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "amma da rani sai yă bushe,",
            "poem": 1
          },
          {
            "text": "lokacin zafi ba a samun ruwa yana gudu a wurin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ayari sukan bar hanyarsu;",
            "poem": 1
          },
          {
            "text": "sukan yi ta neman wurin da za su sami ruwa, su kāsa samu har su mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ayarin Tema sun nemi ruwa,",
            "poem": 1
          },
          {
            "text": "matafiya ’yan kasuwa Sheba sun nema cike da begen samu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ransu ya ɓace, domin sun sa zuciya sosai;",
            "poem": 1
          },
          {
            "text": "sa’ad da suka kai wurin kuwa ba su sami abin da suka sa zuciyar samu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yanzu kuma kun nuna mini ba ku iya taimako;",
            "poem": 1
          },
          {
            "text": "kun ga abin bantsoro kuka tsorata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ko na taɓa cewa, ‘Ku ba da wani abu a madadina,",
            "poem": 1
          },
          {
            "text": "ko na roƙe ku, ku ba da wani abu domina daga cikin dukiyarku,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "ko kuma kun taɓa kuɓutar da ni daga hannun maƙiyina,",
            "poem": 1
          },
          {
            "text": "ko kun taɓa ƙwato ni daga hannun marasa kirki’?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "“Ku koya mini, zan yi shiru;",
            "poem": 1
          },
          {
            "text": "ku nuna mini inda ban yi daidai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Faɗar gaskiya tana da zafi!",
            "poem": 1
          },
          {
            "text": "Amma ina amfanin gardamar da kuke yi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ko kuna so ku gyara abin da na faɗi ne,",
            "poem": 1
          },
          {
            "text": "ku mai da magana wanda yake cikin wahala ta zama ta wofi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Kukan yi ƙuri’a a kan marayu",
            "poem": 1
          },
          {
            "text": "ku kuma sayar da abokinku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "“Amma yanzu ku dube ni da kyau,",
            "poem": 1
          },
          {
            "text": "zan yi muku ƙarya ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ku bi a hankali, kada ku ɗora mini laifi;",
            "poem": 1
          },
          {
            "text": "ku sāke dubawa, gama ba ni da laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ko akwai wata mugunta a bakina?",
            "poem": 1
          },
          {
            "text": "Bakina ba zai iya rarrabewa tsakanin gaskiya da ƙarya ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
