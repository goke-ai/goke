  "chapter": {
    "number": 10,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Na gaji da rayuwa;",
            "poem": 1
          },
          {
            "text": "saboda haka bari in faɗi zuciyata gabagadi",
            "poem": 2
          },
          {
            "text": "yadda raina yake jin ba daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan ce wa Allah, kada ka hukunta ni,",
            "poem": 1
          },
          {
            "text": "amma ka gaya mini laifin da na yi maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kana jin daɗin ba ni wahala,",
            "poem": 1
          },
          {
            "text": "don me ka yashe ni, abin da ka halitta da hannunka,",
            "poem": 2
          },
          {
            "text": "yayinda kake murmushi game da shirye-shiryen mugaye?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Idanunka irin na mutum ne?",
            "poem": 1
          },
          {
            "text": "Kana gani yadda mutum yake gani ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kwanakinka kamar na mutane ne,",
            "poem": 1
          },
          {
            "text": "ko shekarunka kamar na mutane ne",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "da za ka neme ni da laifi",
            "poem": 1
          },
          {
            "text": "ka hukunta ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ko da yake ka san ba ni da laifi,",
            "poem": 1
          },
          {
            "text": "kuma ba wanda zai iya cetona daga hannunka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Da hannuwanka ka ƙera ni, kai ka halicce ni.",
            "poem": 1
          },
          {
            "text": "Yanzu kuma kai za ka juya ka hallaka ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka tuna cewa ka mulmula ni kamar yumɓu.",
            "poem": 1
          },
          {
            "text": "Yanzu za ka mai da ni in zama ƙura kuma?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba kai ka zuba ni kamar madara ba,",
            "poem": 1
          },
          {
            "text": "na daskare kamar cuku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka rufe ni da tsoka da fata,",
            "poem": 1
          },
          {
            "text": "ka harhaɗa ni da ƙasusuwa da jijiyoyi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka ba ni rai ka kuma yi mini alheri,",
            "poem": 1
          },
          {
            "text": "kuma cikin tanadinka ka kula da ruhuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Amma wannan shi ne abin da ka ɓoye a zuciyarka,",
            "poem": 1
          },
          {
            "text": "na kuma san abin da yake cikin zuciyarka ke nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In na yi zunubi kana kallo na",
            "poem": 1
          },
          {
            "text": "kuma ba za ka fasa ba ni horo ba don laifin da na yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idan ina da laifi, kaitona!",
            "poem": 1
          },
          {
            "text": "Ko da ba ni da laifi, ba zan iya ɗaga fuskata ba,",
            "poem": 2
          },
          {
            "text": "gama kunya ta ishe ni",
            "poem": 1
          },
          {
            "text": "duk ɓacin rai ya ishe ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "In na ɗaga kaina, za ka neme ni kamar zaki",
            "poem": 1
          },
          {
            "text": "ka sāke nuna al’ajabin ikonka a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kana sāke kawo sababbin waɗanda za su ba da shaida a kaina",
            "poem": 1
          },
          {
            "text": "kana ƙara haushinka a kaina;",
            "poem": 2
          },
          {
            "text": "kana ƙara kawo mini hari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Me ya sa ka fito da ni daga cikin uwata?",
            "poem": 1
          },
          {
            "text": "Da ma na mutu kafin a haife ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Da ma ba a halicce ni ba,",
            "poem": 1
          },
          {
            "text": "da na mutu tun daga cikin cikin uwata na wuce zuwa kabari!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "’Yan kwanakina ba su kusa ƙarewa ba ne?",
            "poem": 1
          },
          {
            "text": "Ka rabu da ni don in ɗan samu sukuni na ɗan lokaci",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "kafin in koma inda na fito,",
            "poem": 1
          },
          {
            "text": "ƙasa mai duhu da inuwa sosai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "zuwa ƙasa mai duhun gaske,",
            "poem": 1
          },
          {
            "text": "da inuwa da hargitsi,",
            "poem": 2
          },
          {
            "text": "inda haske yake kamar duhu.”",
            "poem": 2
          }
        ]
      }
    ],
