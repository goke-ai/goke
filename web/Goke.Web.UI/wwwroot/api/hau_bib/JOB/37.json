  "chapter": {
    "number": 37,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Wannan ya sa gabana ya fāɗi,",
            "poem": 1
          },
          {
            "text": "zuciyata ta yi tsalle.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka saurara! Ka saurari rurin muryarsa,",
            "poem": 1
          },
          {
            "text": "tsawar da take fita daga bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya saki walƙiyarsa, a ƙarƙashin dukan sammai",
            "poem": 1
          },
          {
            "text": "ya kuma aika ta ko’ina a cikin duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bayan wannan sai ƙarar rurinsa ta biyo;",
            "poem": 1
          },
          {
            "text": "Ya tsawata da muryarsa mai girma.",
            "poem": 2
          },
          {
            "text": "Sa’ad da ya sāke yin tsawa",
            "poem": 1
          },
          {
            "text": "ba ya rage wani abu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Muryar Allah tana tsawatawa a hanyoyi masu ban al’ajabi;",
            "poem": 1
          },
          {
            "text": "yana yin manyan abubuwa waɗanda sun wuce ganewarmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yakan ce wa dusar ƙanƙara, ‘Fāɗo a kan duniya,’",
            "poem": 1
          },
          {
            "text": "ya kuma ce wa ruwa, ‘Zubo da ƙarfi.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Domin dukan mutanen da ya halitta za su san aikinsa,",
            "poem": 1
          },
          {
            "text": "ya hana kowane mutum yin wahalar aiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Dabbobi sun ɓoye;",
            "poem": 1
          },
          {
            "text": "sun zauna cikin kogunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Guguwa tana fitowa daga inda take,",
            "poem": 1
          },
          {
            "text": "sanyi kuma daga iska mai sanyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Da numfashinsa Allah yana samar da ƙanƙara",
            "poem": 1
          },
          {
            "text": "sai manyan ruwaye su zama ƙanƙara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yana cika gizagizai da lema;",
            "poem": 1
          },
          {
            "text": "yana baza walƙiyarsa ta cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bisa ga bishewarsa suke juyawa",
            "poem": 1
          },
          {
            "text": "a kan fuskar duniya,",
            "poem": 2
          },
          {
            "text": "suna yin dukan abin da ya",
            "poem": 1
          },
          {
            "text": "umarce su su yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Yana aiko da ruwa domin horon mutane,",
            "poem": 1
          },
          {
            "text": "ko kuma don yă jiƙa duniya yă kuma nuna ƙaunarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ka saurari wannan Ayuba;",
            "poem": 1
          },
          {
            "text": "ka tsaya ka dubi abubuwan al’ajabi na Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ko ka san yadda Allah yake iko da gizagizai",
            "poem": 1
          },
          {
            "text": "ya kuma sa walƙiyarsa ta haskaka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko ka san yadda gizagizai suke tsayawa cik a sararin sama,",
            "poem": 1
          },
          {
            "text": "waɗannan abubuwa al’ajabi na mai cikakken sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kai mai sa kaya don ka ji ɗumi lokacin da",
            "poem": 1
          },
          {
            "text": "iska mai sanyi take hurawa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "ko za ka iya shimfiɗa sararin sama tare da shi",
            "poem": 1
          },
          {
            "text": "da ƙarfi kamar madubi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Gaya mana abin da ya kamata mu ce masa;",
            "poem": 1
          },
          {
            "text": "ba za mu iya kawo ƙara ba domin duhunmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ko za a gaya masa cewa ina so in yi magana?",
            "poem": 1
          },
          {
            "text": "Ko wani zai nemi a haɗiye shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yanzu ba wanda zai iya kallon rana,",
            "poem": 1
          },
          {
            "text": "yadda take da haske a sararin sama",
            "poem": 2
          },
          {
            "text": "bayan iska ta share ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana fitowa daga arewa da haske na zinariya,",
            "poem": 1
          },
          {
            "text": "Allah yana zuwa da ɗaukaka mai ban al’ajabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Maɗaukaki ya fi ƙarfin ganewarmu,",
            "poem": 1
          },
          {
            "text": "shi babban mai iko ne, mai gaskiya da babban adalci,",
            "poem": 2
          },
          {
            "text": "ba ya cutar mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Saboda haka, mutane suke girmama shi,",
            "poem": 1
          },
          {
            "text": "ko bai kula da waɗanda suke gani su masu hikima ba ne?”",
            "poem": 2
          }
        ]
      }
    ],
