  "chapter": {
    "number": 33,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Amma yanzu, Ayuba, ka saurari abin da zan ce;",
            "poem": 1
          },
          {
            "text": "ka sa hankali ga kowane abin da zan faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan yi magana;",
            "poem": 1
          },
          {
            "text": "kalmomina suna dab da fitowa daga bakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Abin da zan faɗa gaskiya ne daga cikin zuciyata;",
            "poem": 1
          },
          {
            "text": "bakina zai faɗi gaskiyar abin da na sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ruhun Allah ne ya yi ni;",
            "poem": 1
          },
          {
            "text": "numfashin Maɗaukaki ya ba ni rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka amsa mini in za ka iya;",
            "poem": 1
          },
          {
            "text": "ka yi shirin fuskanta ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ni kamar ka nake a gaban Allah;",
            "poem": 1
          },
          {
            "text": "ni ma daga ƙasa aka yi ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kada ka ji tsorona,",
            "poem": 1
          },
          {
            "text": "ba abin da zai fi ƙarfinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Amma ka faɗa na ji,",
            "poem": 1
          },
          {
            "text": "na ji daidai abin da ka faɗa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "‘ni mai tsarki ne marar zunubi;",
            "poem": 1
          },
          {
            "text": "ina da tsabta kuma ba ni da laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Duk da haka Allah ya same ni da laifi;",
            "poem": 1
          },
          {
            "text": "ya ɗauke ni maƙiyinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "ya daure ƙafafuna da sarƙa;",
            "poem": 1
          },
          {
            "text": "yana tsaron duk inda na bi.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Amma na gaya maka, a nan ba ka yi daidai ba,",
            "poem": 1
          },
          {
            "text": "gama Allah ya fi mutum girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Don me ka yi masa gunaguni",
            "poem": 1
          },
          {
            "text": "cewa ba ya amsa tambayoyin mutum?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Gama Allah yana magana,",
            "poem": 1
          },
          {
            "text": "yanzu ga wannan hanya, yanzu kuma ga wata hanya",
            "poem": 2
          },
          {
            "text": "ko da yake ba lalle mutum yă lura ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "A cikin mafarki, cikin wahayi da dare,",
            "poem": 1
          },
          {
            "text": "sa’ad da barci mai zurfi ya fāɗo a kan mutane",
            "poem": 2
          },
          {
            "text": "lokacin da suke cikin barci kan gadajensu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "mai yiwuwa yă yi musu magana a cikin kunnuwansu",
            "poem": 1
          },
          {
            "text": "yă razana su da gargaɗinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "don a juyar da su daga abin da yake yi da ba daidai ba",
            "poem": 1
          },
          {
            "text": "a kuma hana su daga girman kai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "don a kāre su daga fāɗuwa cikin rami,",
            "poem": 1
          },
          {
            "text": "a kāre su daga hallaka ta wurin takobi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Ko kuma mutum yă sha horo",
            "poem": 1
          },
          {
            "text": "ta wurin kwanciya da ciwo da rashin jin daɗi cikin ƙasusuwansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "yadda zai ji ƙyamar abinci,",
            "poem": 1
          },
          {
            "text": "har yă ƙi son abinci mafi daɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Naman jikinsa ya lalace ba wani abu mai kyau a ciki",
            "poem": 1
          },
          {
            "text": "kuma ƙasusuwansa da suke a rufe da tsoka yanzu duk sun fito.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ransa yana matsawa kusa da rami,",
            "poem": 1
          },
          {
            "text": "ransa kuma kusa da ’yan aikan mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk da haka, in akwai mala’ika a gefensa kamar matsakanci,",
            "poem": 1
          },
          {
            "text": "ɗaya daga cikin dubu,",
            "poem": 2
          },
          {
            "text": "da zai gaya wa mutum abin da yake daidai gare shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "yă yi masa alheri yă ce,",
            "poem": 1
          },
          {
            "text": "‘Kada ka bari yă fāɗa cikin rami,",
            "poem": 2
          },
          {
            "text": "na samu fansa dominsa.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’an nan fatar jikinsa za tă zama sabuwa kamar ta jariri;",
            "poem": 1
          },
          {
            "text": "za tă zama kamar lokacin da yake matashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ya yi addu’a ga Allah ya kuwa samu alheri a wurinsa,",
            "poem": 1
          },
          {
            "text": "yana ganin fuskar Allah yana kuma yin sowa don murna;",
            "poem": 2
          },
          {
            "text": "Allah ya mayar da shi ya zama mai adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Sa’an nan sai ya zo wurin, wurin mutane ya ce,",
            "poem": 1
          },
          {
            "text": "‘Na yi zunubi, na kauce wa abin da yake daidai,",
            "poem": 2
          },
          {
            "text": "amma ban samu abin da ya kamata in samu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ya fanshi raina daga fāɗawa cikin rami,",
            "poem": 1
          },
          {
            "text": "kuma zan rayu in ji daɗin hasken.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "“Allah ya yi wa mutum duk waɗannan,",
            "poem": 1
          },
          {
            "text": "sau biyu, har ma sau uku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ya juyo da ransa daga fāɗawa cikin rami,",
            "poem": 1
          },
          {
            "text": "don hasken rai ya haskaka a kansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "“Ka sa hankali da kyau, Ayuba, ka saurare ni;",
            "poem": 1
          },
          {
            "text": "ka yi shiru zan yi magana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "In kana da abin da za ka ce, ka amsa mini;",
            "poem": 1
          },
          {
            "text": "yi magana, domin ina so in ’yantar da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Amma in ba haka ba, sai ka saurare ni;",
            "poem": 1
          },
          {
            "text": "yi shiru, zan kuma koya maka hikima.”",
            "poem": 2
          }
        ]
      }
    ],
