  "chapter": {
    "number": 11,
    "content": [
      {
        "type": "heading",
        "content": [
          "Zofar"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan Zofar mutumin Na’ama ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Duk surutun nan ba za a amsa maka ba?",
            "poem": 1
          },
          {
            "text": "Ko mai surutun nan marar laifi ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko maganganun nan naka marasa amfani za su sa mutane su yi maka shiru?",
            "poem": 1
          },
          {
            "text": "Ba wanda zai kwaɓe ka lokacin da kake faɗar maganar da ba daidai ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka ce wa Allah, ‘Abin da na gaskata ba laifi ba ne",
            "poem": 1
          },
          {
            "text": "kuma ni mai tsabta ne a gabanka.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Da ma Allah zai yi magana,",
            "poem": 1
          },
          {
            "text": "yă buɗe baki yă faɗi wani abin da ka yi da ba daidai ba",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "yă kuma buɗe maka asirin hikima,",
            "poem": 1
          },
          {
            "text": "gama hikima ta gaskiya tana da gefe biyu.",
            "poem": 2
          },
          {
            "text": "Ka san wannan, Allah ya riga ya manta da waɗansu zunubanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ko za ka iya gane al’amuran Allah?",
            "poem": 1
          },
          {
            "text": "Ko za ka iya gane girman asirin Maɗaukaki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sun fi nisan sama tudu, me za ka iya yi?",
            "poem": 1
          },
          {
            "text": "Sun fi zurfin kabari zurfi, me za ka sani?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Tsayinsu ya fi tsawon duniya",
            "poem": 1
          },
          {
            "text": "da kuma fāɗin teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“In ya zo ya kulle ka a kurkuku",
            "poem": 1
          },
          {
            "text": "ya ce kai mai laifi ne, wa zai hana shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ba shakka yana iya gane mutanen da suke marasa gaskiya;",
            "poem": 1
          },
          {
            "text": "kuma in ya ga abin da yake mugu, ba ya kula ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma daƙiƙin mutum ba ya taɓa zama mai hikima",
            "poem": 1
          },
          {
            "text": "kamar dai a ce ba a taɓa haihuwar ɗan aholaki horarre.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Duk da haka in ka miƙa masa zuciyarka,",
            "poem": 1
          },
          {
            "text": "ka kuma miƙa hannuwanka gare shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "in ka kawar da zunubin da yake hannunka,",
            "poem": 1
          },
          {
            "text": "ba ka bar zunubi ya kasance tare da kai ba",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "shi ne za ka iya ɗaga fuskarka ba tare da jin kunya ba;",
            "poem": 1
          },
          {
            "text": "za ka tsaya da ƙarfi kuma ba za ka ji tsoro ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba shakka za ka manta da wahalolinka,",
            "poem": 1
          },
          {
            "text": "za ka tuna da su kamar yadda ruwa yake wucewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Rayuwarka za tă fi hasken rana haske,",
            "poem": 1
          },
          {
            "text": "duhu kuma zai zama kamar safiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Za ka zauna lafiya, domin akwai bege;",
            "poem": 1
          },
          {
            "text": "za ka duba kewaye da kai ka huta cikin kwanciyar rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Za ka kwanta, ba wanda zai sa ka ji tsoro,",
            "poem": 1
          },
          {
            "text": "da yawa za su zo neman taimako a wurinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Amma idanun mugaye ba za su iya gani ba,",
            "poem": 1
          },
          {
            "text": "kuma ba za su iya tserewa ba;",
            "poem": 2
          },
          {
            "text": "begensu zai zama na mutuwa.”",
            "poem": 2
          }
        ]
      }
    ],
