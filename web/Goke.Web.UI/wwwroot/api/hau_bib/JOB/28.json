  "chapter": {
    "number": 28,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Akwai ramin azurfa",
            "poem": 1
          },
          {
            "text": "akwai kuma wurin da ake tace zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Daga cikin ƙasa ake ciro ƙarfe,",
            "poem": 1
          },
          {
            "text": "ana kuma narkar da tagulla daga cikin dutse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Mutum ya kawo ƙarshen duhu;",
            "poem": 1
          },
          {
            "text": "yakan bincike zuzzurfar iyaka,",
            "poem": 2
          },
          {
            "text": "yana neman duwatsu a wuri mafi duhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Nesa da inda mutane suke zama,",
            "poem": 1
          },
          {
            "text": "yakan huda rami yă yi abin lilo,",
            "poem": 2
          },
          {
            "text": "a wurin da mutane ba sa bi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Cikin ƙasa inda ake samun abinci,",
            "poem": 1
          },
          {
            "text": "a ƙarƙashinta kuwa zafi ne kamar wuta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "akwai duwatsu masu daraja a cikin duwatsunta,",
            "poem": 1
          },
          {
            "text": "akwai kuma zinariya a cikin ƙurarta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Tsuntsu mai farauta bai san hanyarta ba,",
            "poem": 1
          },
          {
            "text": "ba shahon da ya taɓa ganin ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Manyan namun jeji ba su taɓa binta ba,",
            "poem": 1
          },
          {
            "text": "ba zakin da ya taɓa binta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Hannun mutum ya iya sarrafa ƙanƙarar duwatsu,",
            "poem": 1
          },
          {
            "text": "yă kuma tumɓuke tushen duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Yana tona rami a cikin duwatsu",
            "poem": 1
          },
          {
            "text": "idanunsa suna ganin dukan dukiyar da ke cikin duwatsun.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yana nema daga ina ruwan rafi yake ɓulɓulowa",
            "poem": 1
          },
          {
            "text": "yana kuma binciko abubuwan da suke a ɓoye yă kawo su cikin haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma a ina ne za a iya samun hikima?",
            "poem": 1
          },
          {
            "text": "Ina fahimta take zama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mutum bai gane muhimmancinta ba,",
            "poem": 1
          },
          {
            "text": "ba a samunta a ƙasar masu rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zurfi ya ce, “Ba ta wurina”;",
            "poem": 1
          },
          {
            "text": "teku ya ce, “Ba ta wurina.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ba irin zinariyar da za tă iya sayenta,",
            "poem": 1
          },
          {
            "text": "ko kuma a iya auna nauyinta da azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba za a iya sayenta da zinariyar Ofir,",
            "poem": 1
          },
          {
            "text": "ko sauran duwatsu masu daraja ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zinariya da madubi ba za su iya gwada kansu da ita ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa za a iya musayarta da abubuwan da aka yi da zinariya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kada ma a ce murjani da duwatsu masu walƙiya;",
            "poem": 1
          },
          {
            "text": "farashin hikima ya fi na lu’ulu’ai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba za a iya daidaita darajarta da duwatsun Tofaz na Kush ba,",
            "poem": 1
          },
          {
            "text": "zallar zinariya ma ba tă isa ta saye ta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“To, daga ina ke nan hikima ta fito?",
            "poem": 1
          },
          {
            "text": "Ina fahimta take zama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "An ɓoye ta daga idanun kowane abu mai rai,",
            "poem": 1
          },
          {
            "text": "har tsuntsayen sararin sama ma an ɓoye masu ita.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Hallaka da mutuwa suna cewa,",
            "poem": 1
          },
          {
            "text": "‘Jita-jitarta kaɗai muke ji.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Allah ya gane hanyar zuwa wurinta.",
            "poem": 1
          },
          {
            "text": "Shi ne kaɗai ya san inda take zama,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Gama yana ganin iyakar duniya",
            "poem": 1
          },
          {
            "text": "kuma yana ganin duk abin da yake ƙarƙashin sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Lokacin da ya yi iska ya sa ta hura,",
            "poem": 1
          },
          {
            "text": "ya kuma auna ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Lokacin da ya yi wa ruwan sama doka",
            "poem": 1
          },
          {
            "text": "da kuma hanya domin walƙiya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "sai ya dubi hikima ya auna ta;",
            "poem": 1
          },
          {
            "text": "ya tabbatar da ita, ya gwada ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ya kuma ce wa mutum,",
            "poem": 1
          },
          {
            "text": "‘Tsoron Ubangiji shi ne hikima,",
            "poem": 2
          },
          {
            "text": "kuma guje wa mugunta shi ne fahimi.’ ”",
            "poem": 2
          }
        ]
      }
    ],
