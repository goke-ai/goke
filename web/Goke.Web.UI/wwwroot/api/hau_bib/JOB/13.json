  "chapter": {
    "number": 13,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Idanuna sun ga waɗannan duka,",
            "poem": 1
          },
          {
            "text": "kunnuwana sun ji sun kuma gane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Abin da kuka sani, ni ma na sani;",
            "poem": 1
          },
          {
            "text": "ba ku fi ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Amma ina so in yi magana da Maɗaukaki,",
            "poem": 1
          },
          {
            "text": "in kai kukana wurin Allah kai tsaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku kuma kun ishe ni da ƙarairayi;",
            "poem": 1
          },
          {
            "text": "ku likitocin wofi ne, dukanku!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "In da za ku yi shiru gaba ɗaya!",
            "poem": 1
          },
          {
            "text": "Zai zama muku hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ku ji gardamata yanzu;",
            "poem": 1
          },
          {
            "text": "ku ji roƙon da zai fito daga bakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Za ku iya yin muguwar magana a madadin Allah?",
            "poem": 1
          },
          {
            "text": "Ko za ku yi ƙarya a madadinsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ko za ku nuna masa sonkai?",
            "poem": 1
          },
          {
            "text": "Ko za ku yi gardama a madadinsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In ya bincike ku zai tarar ba ku da laifi?",
            "poem": 1
          },
          {
            "text": "Ko za ku iya ruɗe shi yadda za ku ruɗi mutane?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba shakka zai kwaɓe ku",
            "poem": 1
          },
          {
            "text": "in kun nuna sonkai a ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ko ikonsa ba ya ba ku tsoro?",
            "poem": 1
          },
          {
            "text": "Tsoronsa ba zai auka muku ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Duk surutanku kamar toka suke;",
            "poem": 1
          },
          {
            "text": "kāriyarku na yimɓu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Ku yi shiru zan yi magana;",
            "poem": 1
          },
          {
            "text": "sa’an nan abin da zai same ni yă same ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Don me na sa kaina cikin hatsari",
            "poem": 1
          },
          {
            "text": "na yi kasada da raina?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ko da zai kashe ni ne, begena a cikinsa zai kasance;",
            "poem": 1
          },
          {
            "text": "ba shakka zan kāre kaina a gabansa",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "lalle wannan zai kawo mini kuɓuta",
            "poem": 1
          },
          {
            "text": "gama ba wani marar tsoron Allah da zai iya zuwa wurinsa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ku saurara da kyau ku ji abin da zan faɗa;",
            "poem": 1
          },
          {
            "text": "bari kunnuwanku su ji abin da zan ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yanzu da na shirya ƙarata,",
            "poem": 1
          },
          {
            "text": "na san za a ce ba ni da laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ko wani zai ce ga laifin da na yi?",
            "poem": 1
          },
          {
            "text": "In an same ni da laifi, zan yi shiru in mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Kai dai biya mini waɗannan bukatu biyu kawai ya Allah,",
            "poem": 1
          },
          {
            "text": "ba zan kuwa ɓoye daga gare ka ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka janye hannunka nesa da ni,",
            "poem": 1
          },
          {
            "text": "ka daina ba ni tsoro da bantsoronka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Sa’an nan ka kira ni, zan kuwa amsa,",
            "poem": 1
          },
          {
            "text": "ko kuma ka bar ni in yi magana sai ka amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Abubuwa nawa na yi waɗanda ba daidai ba, kuma zunubi ne?",
            "poem": 1
          },
          {
            "text": "Ka nuna mini laifina da zunubina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Don me ka ɓoye mini fuskarka;",
            "poem": 1
          },
          {
            "text": "ka kuma sa na zama kamar maƙiyinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ko za a wahalar da ganye wanda iska take hurawa?",
            "poem": 1
          },
          {
            "text": "Ko za ka bi busasshiyar ciyawa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Gama ka rubuta abubuwa marasa daɗi game da ni;",
            "poem": 1
          },
          {
            "text": "ka sa na yi gādon zunuban ƙuruciyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ka daure ƙafafuna da sarƙa;",
            "poem": 1
          },
          {
            "text": "kana kallon duk inda na taka",
            "poem": 2
          },
          {
            "text": "ta wurin sa shaida a tafin ƙafafuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "“Haka mutum yake lalacewa kamar ruɓaɓɓen abu,",
            "poem": 1
          },
          {
            "text": "kamar rigar da asu ya cinye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
