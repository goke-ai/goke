  "chapter": {
    "number": 27,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ayuba kuwa ya ci gaba da magana,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Na rantse da Allah mai rai, wanda ya danne mini gaskiyata,",
            "poem": 1
          },
          {
            "text": "Maɗaukaki, wanda ya sa nake cikin ɗacin rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Muddin ina da rai a cikina",
            "poem": 1
          },
          {
            "text": "kuma numfashin Allah yana cikin hancina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "bakina ba zai faɗi mugun abu ba,",
            "poem": 1
          },
          {
            "text": "harshena kuma ba zai yi ƙarya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba zan taɓa yarda cewa kuna da gaskiya ba;",
            "poem": 1
          },
          {
            "text": "har in mutu, ba zan daina kāre mutuncina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zan ci gaba da adalcina, ba zan fasa ba;",
            "poem": 1
          },
          {
            "text": "lamirina ba zai taɓa yashe ni ba, dukan kwanakin raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Bari maƙiyana su zama kamar mugaye,",
            "poem": 1
          },
          {
            "text": "masu gāba da ni kuma su zama kamar marasa adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Gama wane bege marar tsoron Allah yake da shi,",
            "poem": 1
          },
          {
            "text": "lokacin da aka datse shi, lokacin da Allah ya ɗauke ransa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ko Allah yana sauraron kukansa",
            "poem": 1
          },
          {
            "text": "lokacin da ƙunci ya auko masa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ko zai sami farin ciki daga Maɗaukaki?",
            "poem": 1
          },
          {
            "text": "Ko zai yi kira ga Allah a kowane lokaci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Zan koya muku game da ikon Allah;",
            "poem": 1
          },
          {
            "text": "ba zan ɓoye hanyoyin Maɗaukaki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Duk kun ga wannan ku da kanku",
            "poem": 1
          },
          {
            "text": "saboda haka me ya sa kuke maganganun nan marasa ma’ana?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Ga abin da mugaye za su samu",
            "poem": 1
          },
          {
            "text": "gādon da azzalumi zai samu daga Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kome yawan ’ya’yansa, takobi za tă gama da su;",
            "poem": 1
          },
          {
            "text": "zuriyarsa ba za su taɓa samun isashen abinci ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Waɗanda suka tsira annoba za tă kashe su,",
            "poem": 1
          },
          {
            "text": "kuma gwaurayensu ba za su yi kukan mutuwarsu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko da yake ya tara azurfa kamar ƙasa,",
            "poem": 1
          },
          {
            "text": "tufafi kuma kamar tarin ƙasa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "abin da ya tara masu adalci za su sa",
            "poem": 1
          },
          {
            "text": "marasa laifi za su raba azurfarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Gidan da ya gina kamar gidan gizo-gizo,",
            "poem": 1
          },
          {
            "text": "kamar bukkar mai tsaro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Attajiri zai kwanta, amma daga wannan shi ke nan;",
            "poem": 1
          },
          {
            "text": "lokacin da zai buɗe idanunsa, kome ya tafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Tsoro zai kwashe shi kamar ambaliyar ruwa;",
            "poem": 1
          },
          {
            "text": "Da dare iska za tă tafi da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Iskar gabas za tă tafi da shi; shi ke nan ya ƙare;",
            "poem": 1
          },
          {
            "text": "za tă share shi daga wurinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Za tă murɗe shi ba tausayi,",
            "poem": 1
          },
          {
            "text": "lokacin da yake guje wa ikon iskar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Zai tafa hannu yă yi tsaki",
            "poem": 1
          },
          {
            "text": "yă kawar da shi daga wurinsa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
