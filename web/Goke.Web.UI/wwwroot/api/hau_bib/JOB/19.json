  "chapter": {
    "number": 19,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Har yaushe za ku yi ta ba ni azaba",
            "poem": 1
          },
          {
            "text": "ku kuma murƙushe ni da maganganunku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Yanzu sau goma ke nan kuna wulaƙanta ni,",
            "poem": 1
          },
          {
            "text": "kuna kai mini hari na rashin kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "In gaskiya ne na yi laifi,",
            "poem": 1
          },
          {
            "text": "kuskurena ya rage nawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "In kuwa za ku ɗaukaka kanku a kaina",
            "poem": 1
          },
          {
            "text": "kuna ɗauka wahalar da nake sha domin na yi laifi ne,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "sai ku san cewa Allah ya yi mini ba daidai ba",
            "poem": 1
          },
          {
            "text": "ya kewaye ni da ragarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ko da yake na yi kuka cewa, ‘An yi mini ba daidai ba!’ Ba a amsa mini ba;",
            "poem": 1
          },
          {
            "text": "ko da yake na nemi taimako, ba a yi adalci ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya tare mini hanya yadda ba zan iya wucewa ba;",
            "poem": 1
          },
          {
            "text": "ya rufe hanyata da duhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya cire darajar da nake da ita,",
            "poem": 1
          },
          {
            "text": "ya kuma cire rawani daga kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya yi kaca-kaca da ni har sai da na ƙare;",
            "poem": 1
          },
          {
            "text": "ya tuge begen da nake da shi kamar itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yana jin haushina",
            "poem": 1
          },
          {
            "text": "ya lissafta ni cikin maƙiyansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Rundunarsa ta zo da ƙarfi;",
            "poem": 1
          },
          {
            "text": "suka kafa sansani kewaye da ni,",
            "poem": 2
          },
          {
            "text": "suka zagaye tentina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Ya raba ni da ’yan’uwana maza;",
            "poem": 1
          },
          {
            "text": "abokaina sun zama baƙi gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Dangina sun tafi;",
            "poem": 1
          },
          {
            "text": "abokaina na kurkusa sun manta da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Waɗanda sukan ziyarce ni,",
            "poem": 1
          },
          {
            "text": "da masu yi mini aiki mata sun ɗauke ni baƙo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Na kira bawana, amma bai amsa ba,",
            "poem": 1
          },
          {
            "text": "ko da yake na roƙe shi da bakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Numfashina yana ɓata wa matata rai;",
            "poem": 1
          },
          {
            "text": "’yan’uwana sun ƙi ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Har ’yan yara suna rena ni;",
            "poem": 1
          },
          {
            "text": "in sun gan ni sai su fara yi mini riyar reni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Duk abokaina sun yashe ni;",
            "poem": 1
          },
          {
            "text": "waɗanda nake ƙauna sun zama ba sa ƙaunata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ni ba kome ba ne sai dai fata da ƙashi,",
            "poem": 1
          },
          {
            "text": "da ƙyar na tsira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Ku tausaya mini, abokaina, ku ji tausayina,",
            "poem": 1
          },
          {
            "text": "gama hannun Allah ya sauko a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Don me kuke fafarata kamar yadda Allah yake yi?",
            "poem": 1
          },
          {
            "text": "Ba ku gaji da yagar fatata ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "“Kash, da ma a ce ana rubuta maganganuna,",
            "poem": 1
          },
          {
            "text": "da an rubuta su a littafi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "a rubuta su da ƙarfe a kan dutse",
            "poem": 1
          },
          {
            "text": "don su dawwama har abada!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Na san wanda zai fanshe ni yana nan da rai,",
            "poem": 1
          },
          {
            "text": "kuma a ƙarshe zai tsaya a kan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Kuma bayan an hallaka fatata,",
            "poem": 1
          },
          {
            "text": "duk da haka a cikin jiki zan ga Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Zan gan shi da kaina",
            "poem": 1
          },
          {
            "text": "da idanuna, Ni, ba wani ba ne.",
            "poem": 2
          },
          {
            "text": "Zuciyata ta cika da wannan tunani!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "“In kuka ce, ‘Za ku ci gaba da matsa mini,",
            "poem": 1
          },
          {
            "text": "tun da shi ne tushen damuwa,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "sai ku ma ku ji tsoron takobin;",
            "poem": 1
          },
          {
            "text": "gama fushi yakan kawo hukunci ta wurin takobi,",
            "poem": 2
          },
          {
            "text": "sa’an nan za ku san cewa akwai shari’a.”",
            "poem": 2
          }
        ]
      }
    ],
