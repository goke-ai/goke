  "chapter": {
    "number": 26,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Yadda ka taimaki marar ƙarfi!",
            "poem": 1
          },
          {
            "text": "Yadda ka ceci marar ƙarfi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka ba marar hikima shawara!",
            "poem": 1
          },
          {
            "text": "Ka nuna kana da ilimi sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wane ne ya taimake ka ka yi waɗannan maganganu?",
            "poem": 1
          },
          {
            "text": "Kuma ruhun wane ne ya yi magana ta bakinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Matattu suna cikin azaba, waɗanda suke ƙarƙashin ruwaye",
            "poem": 1
          },
          {
            "text": "da dukan mazauna cikin ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mutuwa tsirara take a gaban Allah;",
            "poem": 1
          },
          {
            "text": "haka kuma hallaka take a buɗe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya shimfiɗa arewancin sararin sama a sarari;",
            "poem": 1
          },
          {
            "text": "ya rataye duniya ba a jikin wani abu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya naɗe ruwaye a cikin gizagizansa,",
            "poem": 1
          },
          {
            "text": "duk da haka girgijen bai yage saboda nauyi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya rufe fuskar wata,",
            "poem": 1
          },
          {
            "text": "ya shimfiɗa gizagizai a kan shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "ya zāna iyakar fuskar ruwa",
            "poem": 1
          },
          {
            "text": "a kan iyakar da take tsakanin duhu da haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Madogaran sama sun girgiza,",
            "poem": 1
          },
          {
            "text": "saboda tsawatawarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Da ikonsa ya kwantar da teku;",
            "poem": 1
          },
          {
            "text": "da hikimarsa ya hallaka dodon ruwan nan Rahab.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Da numfashinsa ya sa sararin sama ya yi kyau",
            "poem": 1
          },
          {
            "text": "da hannunsa ya soke macijin nan mai gudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Waɗannan kaɗan ke nan daga cikin ayyukansa masu yawa.",
            "poem": 1
          },
          {
            "text": "Kaɗan kawai muke ji game da shi!",
            "poem": 2
          },
          {
            "text": "Wane ne kuwa yake iya gane tsawar ikonsa?”",
            "poem": 2
          }
        ]
      }
    ],
