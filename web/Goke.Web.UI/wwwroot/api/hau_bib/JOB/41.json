  "chapter": {
    "number": 41,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ko za ka iya kama dodon ruwa da ƙugiyar kamar kifi",
            "poem": 1
          },
          {
            "text": "ko kuma ka daure harshenta da igiya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Za ka iya sa igiya a cikin hancinta",
            "poem": 1
          },
          {
            "text": "ko kuma ka huda muƙamuƙanta da ƙugiya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za tă ci gaba da roƙonka ka yi mata jinƙai?",
            "poem": 1
          },
          {
            "text": "Ko za tă yi maka magana a hankali?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Za tă yi yarjejjeniya da kai",
            "poem": 1
          },
          {
            "text": "don ka ɗauke ta tă zama baiwa gare ka dukan kwanakin ranta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Za ka yi wasa da ita kamar yadda za ka yi da tsuntsu?",
            "poem": 1
          },
          {
            "text": "Ko za ka daure ta da tsirkiya domin bayinka mata?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "’Yan kasuwa za su saye ta",
            "poem": 1
          },
          {
            "text": "ko za su raba ta a tsakaninsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ko za ka iya huda fatarta da kibiya",
            "poem": 1
          },
          {
            "text": "ka kuma huda kansa da māsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "In ka ɗora hannunka sau ɗaya a kanta",
            "poem": 1
          },
          {
            "text": "za ka tuna da yaƙin da ba za ka sāke yi ba!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk ƙoƙarin kama ta banza ne;",
            "poem": 1
          },
          {
            "text": "ganin ta kawai abin tsoro ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba wanda ya isa yă tsokane ta.",
            "poem": 1
          },
          {
            "text": "Wane ne kuma ya isa yă yi tsayayya da ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Wane ne yake bi na bashi da dole in biya?",
            "poem": 1
          },
          {
            "text": "Duk abin da yake ƙarƙashin sama nawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ba zan daina magana game da gaɓoɓinta ba",
            "poem": 1
          },
          {
            "text": "ƙarfinta da kuma kyan kamanninta ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wa zai iya tuɓe mata mayafinta?",
            "poem": 1
          },
          {
            "text": "Wa zai iya shiga tsakanin ɓawonta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Wa zai iya buɗe ƙofofin bakinta?",
            "poem": 1
          },
          {
            "text": "Haƙoranta ma abin tsoro ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "An rufe bayanta da jerin garkuwoyi",
            "poem": 1
          },
          {
            "text": "aka manne su sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Suna kurkusa da juna yadda",
            "poem": 1
          },
          {
            "text": "da ƙyar iska take iya wucewa tsakani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "An haɗa su da juna",
            "poem": 1
          },
          {
            "text": "sun mannu da juna kuma ba za a iya raba su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Numfashinta yana fitar da wuta;",
            "poem": 1
          },
          {
            "text": "idanunta kamar hasken zuwan safe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Wuta tana fitowa daga bakinta;",
            "poem": 1
          },
          {
            "text": "tartsatsin wuta suna fitowa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Hayaƙi yana fitowa daga hancinta",
            "poem": 1
          },
          {
            "text": "kamar daga tukunya mai tafasa a kan wutar itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Numfashinta yana sa garwashi yă kama wuta,",
            "poem": 1
          },
          {
            "text": "harshen wuta yana fita daga bakinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Akwai ƙarfi a cikin wuyanta;",
            "poem": 1
          },
          {
            "text": "razana tana wucewa a gabanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Namanta yana da kauri a manne da juna;",
            "poem": 1
          },
          {
            "text": "naman yana da tauri ba ya matsawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ƙirjinta yana da ƙarfi kamar dutse,",
            "poem": 1
          },
          {
            "text": "da ƙarfi kamar dutsen niƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Sa’ad da ta tashi, manya suna tsorata;",
            "poem": 1
          },
          {
            "text": "suna ja da baya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Takobi ba ta iya yankanta,",
            "poem": 1
          },
          {
            "text": "kibiya ko māshi ba sa iya huda ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ƙarfe kamar kara ne a wurinta",
            "poem": 1
          },
          {
            "text": "tagulla kuma kamar ruɓaɓɓen katako ne a wurinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Māsu ba su sa ta tă gudu;",
            "poem": 1
          },
          {
            "text": "jifar majajjawa kamar na ciyawa ne gare ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Kulki a gare ta kamar ciyawa ne,",
            "poem": 1
          },
          {
            "text": "tana dariyar wucewar māshi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Cikinta yana rufe a ɓawo masu ƙarfi,",
            "poem": 1
          },
          {
            "text": "tana kabtar ƙasa in tana tafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Tana sa zurfin kogi yă tafasa kamar tukunya,",
            "poem": 1
          },
          {
            "text": "ta kuma sa teku yă zama kamar tukunyar man shafawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "A bayanta ya bar haske",
            "poem": 1
          },
          {
            "text": "kamar zurfin ruwan da yana kumfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ba wani abu kamar ta a duniya,",
            "poem": 1
          },
          {
            "text": "halitta marar tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Tana rena duk masu girman kai.",
            "poem": 1
          },
          {
            "text": "Ita take mulki kan duk masu girman kai.”",
            "poem": 2
          }
        ]
      }
    ],
