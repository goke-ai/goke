  "chapter": {
    "number": 25,
    "content": [
      {
        "type": "heading",
        "content": [
          "Bildad"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Bildad mutumin Shuwa ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Mulki na Allah ne, dole a ji tsoronsa;",
            "poem": 1
          },
          {
            "text": "yana tafiyar da kome yadda ya kamata a cikin sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za a iya ƙirga rundunarsa?",
            "poem": 1
          },
          {
            "text": "A kan wane ne ba ya haska haskensa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ta yaya mutum zai iya zama mai adalci a gaban Allah?",
            "poem": 1
          },
          {
            "text": "Ta yaya mutumin da mace ta haifa zai zama mai tsarki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "In har wata da taurari",
            "poem": 1
          },
          {
            "text": "ba su da tsarki a idanunsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "mutum fa? Ai, wannan tsutsa ne, ɗan ƙwaro kawai.",
            "poem": 1
          },
          {
            "text": "Me mutum ya daɗa a gaban Allah!”",
            "poem": 2
          }
        ]
      }
    ],
