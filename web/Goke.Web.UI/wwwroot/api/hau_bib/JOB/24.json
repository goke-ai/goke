  "chapter": {
    "number": 24,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Domin me Maɗaukaki ba zai sa ranar shari’a ba?",
            "poem": 1
          },
          {
            "text": "Don me waɗanda suka san shi suke faman samun irin ranakun nan?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mugaye suna satar fili ta wurin matsar da duwatsun da aka yi iyaka da su;",
            "poem": 1
          },
          {
            "text": "suna satar dabbobi su kuma yi kiwon su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Suna ƙwace wa marayu jakunansu",
            "poem": 1
          },
          {
            "text": "suna kuma ƙwace wa gwauruwa sa don suna binta bashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Suna ture matalauta daga hanya",
            "poem": 1
          },
          {
            "text": "suna kuma sa dole matalautan ƙasar su ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kamar jakunan jeji a hamada,",
            "poem": 1
          },
          {
            "text": "matalauta suna aikin neman abinci",
            "poem": 2
          },
          {
            "text": "gonaki marasa amfani suna tanada abinci wa ’ya’yansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Suna girbi a gonakin da ba nasu ba,",
            "poem": 1
          },
          {
            "text": "suna yin kala a gonar inabi ta mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Don ba su da tufafi, sukan kwana tsirara;",
            "poem": 1
          },
          {
            "text": "ba su da wani abin da zai rufe su cikin sanyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sun jiƙe sharkaf da ruwan da yake kwararowa daga duwatsu,",
            "poem": 1
          },
          {
            "text": "sun rungume duwatsu don rashin wurin fakewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ana ƙwace jinjiri mai shan mama;",
            "poem": 1
          },
          {
            "text": "ana ƙwace ɗan yaron matalauci don biyan bashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Don ba su da tufafi suna yawo tsirara;",
            "poem": 1
          },
          {
            "text": "suna dakon dammunan hatsi",
            "poem": 2
          },
          {
            "text": "amma duk da haka suna cikin shan yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suna matse zaitun a cikin kunyoyi",
            "poem": 1
          },
          {
            "text": "suna kuma matse ruwan inabi daga ’ya’yan inabi, duk da haka suna fama da ƙishi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ana jin nishin masu mutuwa daga birni,",
            "poem": 1
          },
          {
            "text": "kuma rayukan waɗanda aka ji musu rauni suna kuka suna kira don taimako.",
            "poem": 2
          },
          {
            "text": "Amma bai ba wani laifi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Akwai waɗanda suke yi wa haske tawaye,",
            "poem": 1
          },
          {
            "text": "waɗanda ba su san hanyoyinsa ba",
            "poem": 2
          },
          {
            "text": "ko kuma ba su taɓa bin hanyoyinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sa’ad da hasken yini ya tafi, mai kisankai yakan tashi;",
            "poem": 1
          },
          {
            "text": "yă je yă kashe matalauta da masu bukata;",
            "poem": 2
          },
          {
            "text": "a cikin dare yake shigowa kamar ɓarawo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idanun mazinaci suna jiran yamma ta yi sosai;",
            "poem": 1
          },
          {
            "text": "yana tunani cewa, ‘Ba wanda zai gan ni,’",
            "poem": 2
          },
          {
            "text": "sai kuma yă ɓoye fuskarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Cikin duhu mutane suna fasa gidaje,",
            "poem": 1
          },
          {
            "text": "amma da rana sukan kulle kansu;",
            "poem": 2
          },
          {
            "text": "ba sa so wani abu yă haɗa su da haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gama dukansu, duhu mai yawa shi ne safiyarsu;",
            "poem": 1
          },
          {
            "text": "suna abokantaka da razanar duhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Duk da haka kamar abu marar nauyi suke a kan ruwa;",
            "poem": 1
          },
          {
            "text": "gefen ƙasar da suke, an la’anta ta,",
            "poem": 2
          },
          {
            "text": "yadda ba wanda yake zuwa gonar inabinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kamar yadda zafi da fări suke shanye ƙanƙarar da ta narke,",
            "poem": 1
          },
          {
            "text": "haka kabari zai ƙwace waɗanda suka yi zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Waɗanda suka haife su za su manta da su,",
            "poem": 1
          },
          {
            "text": "tsutsotsi za su cinye su;",
            "poem": 2
          },
          {
            "text": "ba za a sāke tunawa da mugaye ba",
            "poem": 1
          },
          {
            "text": "amma an sare su kamar itace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Suna cutar macen da ba ta da ɗa,",
            "poem": 1
          },
          {
            "text": "suna nuna wa gwauruwa rashin alheri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Amma Allah cikin ikonsa yakan kawar da masu ƙarfi,",
            "poem": 1
          },
          {
            "text": "ko da yake sun yi ƙarfi, ba su da tabbacin rayuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Mai yiwuwa zai bar su su zauna cikin kwanciyar hankali,",
            "poem": 1
          },
          {
            "text": "amma idanunsa suna kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sukan samu cin nasara na ɗan lokaci,",
            "poem": 1
          },
          {
            "text": "amma kuma za su ɓace; za su fāɗi",
            "poem": 2
          },
          {
            "text": "a tattara su kamar sauran; za a datse su kamar kan hatsi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "“In wannan ba haka ba ne,",
            "poem": 1
          },
          {
            "text": "wane ne zai shaida ƙarya nake yi har yă ƙi yarda da maganata?”",
            "poem": 2
          }
        ]
      }
    ],
