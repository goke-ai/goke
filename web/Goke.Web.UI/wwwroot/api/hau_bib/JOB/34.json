  "chapter": {
    "number": 34,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan Elihu ya ce,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ku ji maganata, ku masu hikima;",
            "poem": 1
          },
          {
            "text": "ku saurare ni, ku masu ilimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama kunne yana rarrabe magana",
            "poem": 1
          },
          {
            "text": "kamar yadda harshe yake ɗanɗana abinci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari mu zaɓi abin da yake daidai,",
            "poem": 1
          },
          {
            "text": "bari mu koyi abin da yake mai kyau tare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ayuba ya ce, ‘Ba ni da laifi,",
            "poem": 1
          },
          {
            "text": "amma Allah ya hana mini hakkina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ko da yake ina da gaskiya,",
            "poem": 1
          },
          {
            "text": "an ɗauke ni maƙaryaci;",
            "poem": 2
          },
          {
            "text": "ko da yake ba ni da laifi,",
            "poem": 1
          },
          {
            "text": "kibiyoyinsa sun ji mini ciwo wanda ba ya warkewa.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Wane mutum ne kamar Ayuba,",
            "poem": 1
          },
          {
            "text": "wanda yake shan ba’a kamar ruwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yana abokantaka da masu aikata mugunta;",
            "poem": 1
          },
          {
            "text": "yana cuɗanya da mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gama ya ce, ‘Ba ribar da mutum zai samu",
            "poem": 1
          },
          {
            "text": "lokacin da yake ƙoƙari yă faranta wa Allah zuciya.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Saboda haka ku saurare ni, ku masu ganewa.",
            "poem": 1
          },
          {
            "text": "Ko kaɗan Allah ba ya mugunta,",
            "poem": 2
          },
          {
            "text": "Maɗaukaki ba ya kuskure.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yana biyan mutum bisa ga abin da ya yi;",
            "poem": 1
          },
          {
            "text": "yana kawo masa abin da ayyukansa suka jawo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ba zai yiwu Allah yă yi ba daidai ba,",
            "poem": 1
          },
          {
            "text": "Maɗaukaki ba zai yi shari’a marar gaskiya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wane ne ya ba shi iko yă lura da duniya?",
            "poem": 1
          },
          {
            "text": "Wane ne ya ba shi iko kan dukan duniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In nufinsa ne",
            "poem": 1
          },
          {
            "text": "ya kuma janye ruhunsa da numfashinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "’yan adam duka za su hallaka tare,",
            "poem": 1
          },
          {
            "text": "mutum kuma zai koma ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“In kana da ganewa sai ka saurari wannan;",
            "poem": 1
          },
          {
            "text": "ka saurari abin da zan ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Maƙiyin gaskiya zai iya yin mulki?",
            "poem": 1
          },
          {
            "text": "Za ka iya ba mai gaskiya, Maɗaukaki laifi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ba shi ne ya ce wa sarakuna, ‘Ba ku da amfani ba,’",
            "poem": 1
          },
          {
            "text": "ya ce wa manya ‘Ku mugaye ne,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "wanda ba ya nuna sonkai ga ’ya’yan sarki",
            "poem": 1
          },
          {
            "text": "kuma ba ya goyon bayan masu arziki a kan matalauta,",
            "poem": 2
          },
          {
            "text": "gama dukansu shi ya yi su da hannuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Suna mutuwa nan take, a cikin tsakiyar dare;",
            "poem": 1
          },
          {
            "text": "an girgiza mutanen amma sun wuce;",
            "poem": 2
          },
          {
            "text": "an taɓa manya amma ba da hannun mutum ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Idanunsa suna kan al’amuran mutane;",
            "poem": 1
          },
          {
            "text": "yana ganin tafiyarsu duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Babu wuri mai duhu, babu inuwa mai duhu,",
            "poem": 1
          },
          {
            "text": "inda masu aikata mugunta za su ɓoye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Allah ba ya bukata yă ci gaba da bincike mutane,",
            "poem": 1
          },
          {
            "text": "har da za su zo gabansa don yă shari’anta su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ba tare da tambaya ba yana ragargaza masu iko,",
            "poem": 1
          },
          {
            "text": "yă kuma sa waɗansu a wurinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Gama yana sane da abubuwan da suke yi,",
            "poem": 1
          },
          {
            "text": "yana hamɓarar da su da dare a kuma ragargaza su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Yana ba su horo, don muguntarsu,",
            "poem": 1
          },
          {
            "text": "inda kowa zai gan su,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "domin sun juya daga binsa,",
            "poem": 1
          },
          {
            "text": "kuma ba su kula da hanyoyinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Sun sa kukan matalauta ya kai wurinsa",
            "poem": 1
          },
          {
            "text": "yadda ya kai ga jin kukan masu bukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Amma in ya yi shiru, wa zai ba shi laifi?",
            "poem": 1
          },
          {
            "text": "In ya ɓoye fuskarsa, wa zai gan shi?",
            "poem": 2
          },
          {
            "text": "Duk da haka shi yake da iko kan mutum da al’umma duka,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "yana hana wanda bai san Allah ba yă yi mulki,",
            "poem": 2
          },
          {
            "text": "ya hana shi sa wa mutane tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "“A ce mutum ya ce wa Allah, ‘Na yi laifi,",
            "poem": 1
          },
          {
            "text": "amma ba zan sāke saɓa wa wani ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Ka koya mini abin da ba zan iya gani ba;",
            "poem": 1
          },
          {
            "text": "in na yi ba daidai ba, ba zan sāke yi ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ya kamata Allah yă yi maka bisa ga abin da ka ce ne,",
            "poem": 1
          },
          {
            "text": "sa’ad da ka ƙi ka tuba?",
            "poem": 2
          },
          {
            "text": "Dole kai ka zaɓa, ba ni ba;",
            "poem": 1
          },
          {
            "text": "yanzu ka gaya mini abin da ka sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "“Mutane masu ganewa za su ce,",
            "poem": 1
          },
          {
            "text": "masu hikima waɗanda suka ji ni za su ce mini,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "‘Ayuba ya yi magana cikin rashin sani;",
            "poem": 1
          },
          {
            "text": "maganganunsa na marar hikima ne.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Kash, da za a gwada Ayuba har ƙarshe,",
            "poem": 1
          },
          {
            "text": "domin yana ba da amsa kamar mugun mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Ya ƙara tawaye a kan zunubansa;",
            "poem": 1
          },
          {
            "text": "ya tafa hannuwansa na reni a cikinmu",
            "poem": 2
          },
          {
            "text": "ya kuma ƙara yawan maganganunsa ga Allah.”",
            "poem": 2
          }
        ]
      }
    ],
