  "chapter": {
    "number": 8,
    "content": [
      {
        "type": "heading",
        "content": [
          "Bildad"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Bildad mutumin Shuwa ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Har yaushe za ka gama faɗa waɗannan abubuwa?",
            "poem": 1
          },
          {
            "text": "Maganganunka ba su da amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Allah ba mai shari’ar gaskiya ba ne?",
            "poem": 1
          },
          {
            "text": "Ko Maɗaukaki yakan yi abin da ba daidai ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Lokacin da ’ya’yansa suka yi masa zunubi,",
            "poem": 1
          },
          {
            "text": "yakan bar su su sha wahalar da zunubi yake kawowa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Amma in za ka dubi Allah",
            "poem": 1
          },
          {
            "text": "ka roƙi Maɗaukaki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "in kai mai tsarki ne, kuma mai adalci,",
            "poem": 1
          },
          {
            "text": "ko yanzu ma zai taimake ka,",
            "poem": 2
          },
          {
            "text": "yă mayar maka iyalinka da farin cikinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ko da yake za ka fara da kaɗan,",
            "poem": 1
          },
          {
            "text": "duk da haka za ka gama da samu mai yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Tambayi na gaba da kai",
            "poem": 1
          },
          {
            "text": "ka ji abin da iyayenka suka koya",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "gama jiya kaɗai aka haife mu ba mu san kome ba,",
            "poem": 1
          },
          {
            "text": "kuma kwanakinmu a duniya masu wucewa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba za su bishe ka su kuma gaya maka abin da za ka yi ba?",
            "poem": 1
          },
          {
            "text": "Ba za su yi magana daga cikin hikimar da suke da ita ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ko kyauro zai iya yi girma a wurin da ba ruwa?",
            "poem": 1
          },
          {
            "text": "Ko za tă taɓa iya yin girma ba tare da ruwa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yayinda take girma ba a yanka ta,",
            "poem": 1
          },
          {
            "text": "takan mutu da sauri fiye da ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Abin da yake faruwa ke nan da duk wanda yake mantawa da Allah;",
            "poem": 1
          },
          {
            "text": "waɗanda ba su da Allah, ba su da bege.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Abin da yake dogara a kai ba shi da ƙarfi;",
            "poem": 1
          },
          {
            "text": "abin da yake dogara a kai yanar gizo ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ya jingina ga yanar gizo, amma ba ta tare shi,",
            "poem": 1
          },
          {
            "text": "sun kama ta, amma ba za tă taimake su tsayawa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Yana kama da shukar da aka ba ta ruwa sosai lokacin da akwai rana sosai,",
            "poem": 1
          },
          {
            "text": "tana yaɗuwa da kyau;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "shukar tana bin yaɗuwa, jijiyoyinta suna nannaɗe duwatsu,",
            "poem": 1
          },
          {
            "text": "suna neman wurin da za su kama sosai a cikin duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Amma lokacin da aka tuge shukar daga wurin da take,",
            "poem": 1
          },
          {
            "text": "wurin ba zai san da ita kuma ba, wurin zai ce, ‘Ban taɓa ganin ki ba.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba shakka shukar ta mutu ke nan,",
            "poem": 1
          },
          {
            "text": "kuma waɗansu za su tsiro a wurin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Ba shakka, Allah ba ya ƙin marar laifi,",
            "poem": 1
          },
          {
            "text": "ko kuma yă ƙarfafa masu aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sai dai yă cika bakinka da dariya,",
            "poem": 1
          },
          {
            "text": "yă sa ka yi sowa ta murna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Maƙiyanka za su sha kunya,",
            "poem": 1
          },
          {
            "text": "za a kawar da tentin mugaye.”",
            "poem": 2
          }
        ]
      }
    ],
