  "chapter": {
    "number": 38,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ubangiji ya yi magana"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan Ubangiji ya amsa wa Ayuba. Ya ce,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Wane ne wannan da yake ɓata mini shawarata",
            "poem": 1
          },
          {
            "text": "da surutan wofi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka sha ɗamara kamar namiji;",
            "poem": 1
          },
          {
            "text": "zan yi maka tambaya,",
            "poem": 2
          },
          {
            "text": "za ka kuwa amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Kana ina lokacin da na aza harsashen duniya?",
            "poem": 1
          },
          {
            "text": "Gaya mini, in ka sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wane ne ya zāna girmanta? Ba shakka ka sani!",
            "poem": 1
          },
          {
            "text": "Wane ne ya ja layin aunawa a kanta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "A kan me aka kafa tushenta,",
            "poem": 1
          },
          {
            "text": "ko kuma wa ya sa dutsen kan kusurwarta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "yayinda taurarin safe suke waƙa tare",
            "poem": 1
          },
          {
            "text": "dukan mala’iku kuma suka yi sowa don farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Wane ne ya rufe teku a bayan ƙofofi,",
            "poem": 1
          },
          {
            "text": "lokacin da ya burtsatso daga cikin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Lokacin da na yi wa gizagizai riga",
            "poem": 1
          },
          {
            "text": "na kuma naɗe su a cikin duhu sosai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "sa’ad da na yi masa iyaka na",
            "poem": 1
          },
          {
            "text": "sa masa ƙofofi da wurin kullewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sa’ad da na ce ga iyakar inda za ka kai,",
            "poem": 1
          },
          {
            "text": "ga inda raƙuman ruwanka za su tsaya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ko ka taɓa ba safiya umarni",
            "poem": 1
          },
          {
            "text": "ko kuma ka sa asuba ta fito,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "don ta kama gefen duniya",
            "poem": 1
          },
          {
            "text": "ta kakkaɓe mugaye daga cikinta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ƙasa ta sāke siffa kamar laka da aka yi wa hatimi;",
            "poem": 1
          },
          {
            "text": "ta fito a fili kamar riga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "An hana mugaye haskensu,",
            "poem": 1
          },
          {
            "text": "hannun da suka ɗaga an karya shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Ko ka taɓa tafiya zuwa maɓulɓulan teku,",
            "poem": 1
          },
          {
            "text": "ko kuma ka taɓa zuwa cikin zurfin lungun teku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ko an taɓa nuna maka ƙofar mutuwa?",
            "poem": 1
          },
          {
            "text": "Ko ka taɓa ganin ƙofar inuwar duhun mutuwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ko ka gane fāɗin duniya?",
            "poem": 1
          },
          {
            "text": "Gaya mini, in ka san wannan duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Ina ne hanyar zuwa gidan haske?",
            "poem": 1
          },
          {
            "text": "Kuma a ina duhu yake zama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ko za ka iya kai su wurarensu?",
            "poem": 1
          },
          {
            "text": "Ka san hanyar zuwa wurin da suke zama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba shakka ka sani, gama an riga an haife ka a lokacin!",
            "poem": 1
          },
          {
            "text": "Ka yi shekaru da yawa kana rayuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Ka taɓa shiga rumbunan dusar ƙanƙara",
            "poem": 1
          },
          {
            "text": "ko ka taɓa ganin rumbunan ƙanƙara",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "waɗanda nake ajiya domin lokacin wahala,",
            "poem": 1
          },
          {
            "text": "domin kwanakin yaƙi da faɗa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ina ne hanyar zuwa wurin da ake samun walƙiya,",
            "poem": 1
          },
          {
            "text": "ko kuma inda daga nan ne ake watsa iskar gabas zuwa ko’ina cikin duniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Wane ne ya yanka hanyar wucewar ruwa,",
            "poem": 1
          },
          {
            "text": "da kuma hanyar walƙiyar tsawa",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "don ba da ruwa a ƙasar da ba kowa a wurin",
            "poem": 1
          },
          {
            "text": "jeji inda ba mai zama ciki",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "don a ƙosar da wurin da ya bushe",
            "poem": 1
          },
          {
            "text": "a sa ciyawa ta tsiro a can?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ruwan sama yana da mahaifi?",
            "poem": 1
          },
          {
            "text": "Wa ya zama mahaifin raɓa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Daga cikin wane ne aka haifi ƙanƙara?",
            "poem": 1
          },
          {
            "text": "Wane ne ya haifi jaura daga sammai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "lokacin da ruwa ya zama da ƙarfi kamar dutse,",
            "poem": 1
          },
          {
            "text": "lokacin da saman ruwa ya daskare?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "“Za ka iya daure kyakkyawar kaza da ’ya’yanta?",
            "poem": 1
          },
          {
            "text": "Ko za ka iya kunce igiyoyin mafarauci da kare da zomo?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Za ka iya tattara taurari bisa ga lokacinsu",
            "poem": 1
          },
          {
            "text": "ko kuma ka bi da beyar da ’ya’yanta zuwa waje?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ka san dokokin sammai?",
            "poem": 1
          },
          {
            "text": "Ko za ka iya faɗar dangantakar Allah da duniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "“Za ka iya tsawata wa gizagizai",
            "poem": 1
          },
          {
            "text": "ka kuma rufe kanka da ambaliyar ruwa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Kai ne kake aika walƙiya da tsawa zuwa inda suke zuwa?",
            "poem": 1
          },
          {
            "text": "Ko suna zuwa wurinka su ce, ‘Ga mu nan mun zo?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Wane ne yake cika zuciya da hikima",
            "poem": 1
          },
          {
            "text": "ko kuma yake ba zuciya ganewa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Wane ne yake da hikimar iya ƙirga gizagizai?",
            "poem": 1
          },
          {
            "text": "Wane ne zai iya karkato bakunan tulunan sammai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "sa’ad da ƙura ta yi yawa",
            "poem": 1
          },
          {
            "text": "ta daskare a wuri ɗaya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "“Za ka iya farauto wa zakanya nama,",
            "poem": 1
          },
          {
            "text": "ka kuma kawar wa zakoki yunwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Lokacin da suka kwanta cikin kogunansu,",
            "poem": 1
          },
          {
            "text": "ko kuma lokacin da suke a wurin ɓuyansu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Wane ne yake ba hankaka abinci",
            "poem": 1
          },
          {
            "text": "lokacin da ’ya’yansa suke kuka ga Allah,",
            "poem": 2
          },
          {
            "text": "kuma suna yawo don rashin abinci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
