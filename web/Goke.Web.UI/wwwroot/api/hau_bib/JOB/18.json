  "chapter": {
    "number": 18,
    "content": [
      {
        "type": "heading",
        "content": [
          "Bildad"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Bildad mutumin Shuwa ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Yaushe za ka gama maganganun nan?",
            "poem": 1
          },
          {
            "text": "Ka dawo da hankalinka sa’an nan za mu iya yin magana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Don me muke kamar shanu a wurinka,",
            "poem": 1
          },
          {
            "text": "ka ɗauke mu mutanen wofi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kai da ka yayyage kanka don haushi,",
            "poem": 1
          },
          {
            "text": "za a yashe duniya saboda kai ne?",
            "poem": 2
          },
          {
            "text": "Ko kuma duwatsu za su matsa daga wurinsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“An kashe fitilar mugu;",
            "poem": 1
          },
          {
            "text": "harshen wutarsa ya daina ci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Wutar cikin tentinsa ta zama duhu;",
            "poem": 1
          },
          {
            "text": "fitilar da take kusa da shi ta mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ƙarfin takawarsa ya ragu;",
            "poem": 1
          },
          {
            "text": "dabararsa ta ja fāɗuwarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙafafunsa sun kai shi cikin raga,",
            "poem": 1
          },
          {
            "text": "yana ta yawo a cikin ragar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Tarko ya kama ɗiɗɗigensa;",
            "poem": 1
          },
          {
            "text": "tarko ya riƙe shi kam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "An ɓoye masa igiya da za tă zarge shi a ƙasa;",
            "poem": 1
          },
          {
            "text": "an sa masa tarko a kan hanyar da zai bi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Tsoro duk ya kewaye shi ta kowane gefe",
            "poem": 1
          },
          {
            "text": "yana bin shi duk inda ya je.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Masifa tana jiransa;",
            "poem": 1
          },
          {
            "text": "bala’i yana shirye yă fāɗa masa a lokacin da zai fāɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ya cinye wani sashe na gaɓar jikinsa;",
            "poem": 1
          },
          {
            "text": "ɗan fari na mutuwa ya cinye ƙafafunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "An yage shi daga zaman lafiyar da yake yi a cikin tentinsa",
            "poem": 1
          },
          {
            "text": "aka sa shi tsoro sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Wuta ta cinye tentinsa;",
            "poem": 1
          },
          {
            "text": "farar wuta ta rufe wurin da yake zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Jijiyoyinsa sun bushe a ƙasa",
            "poem": 1
          },
          {
            "text": "rassansa sun mutu a sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "An manta da shi a duniya;",
            "poem": 1
          },
          {
            "text": "ba wanda yake ƙara tunawa da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "An tura shi daga cikin haske zuwa cikin duhu,",
            "poem": 1
          },
          {
            "text": "an kore shi daga duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba shi da ’ya’ya ko zuriya cikin mutanensa,",
            "poem": 1
          },
          {
            "text": "ba sauran wanda yake a raye a wurin da ya taɓa zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutanen Yamma suna mamakin abin da ya faru da shi;",
            "poem": 1
          },
          {
            "text": "tsoro ya kama mutanen gabas.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba shakka haka wurin zaman mugun mutum yake,",
            "poem": 1
          },
          {
            "text": "haka wurin zaman wanda bai san Allah ba yake.”",
            "poem": 2
          }
        ]
      }
    ],
