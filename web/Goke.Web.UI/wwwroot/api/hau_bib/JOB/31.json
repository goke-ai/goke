  },
  "chapter": {
    "number": 31,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Na yi alkawari da idanuna",
            "poem": 1
          },
          {
            "text": "kada su dubi budurwa da muguwar sha’awa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Gama mene ne rabon mutum daga Allah a sama,",
            "poem": 1
          },
          {
            "text": "gādonsa daga Maɗaukaki a sama?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba masifa ba ne domin mugaye,",
            "poem": 1
          },
          {
            "text": "hallaka kuma ga waɗanda suka yi ba daidai ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bai ga hanyoyina ba ne",
            "poem": 1
          },
          {
            "text": "bai ƙirga kowace takawata ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“In da na yi tafiya cikin rashin gaskiya",
            "poem": 1
          },
          {
            "text": "ko kuma ƙafata ta yi sauri zuwa yin ƙarya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari Allah yă auna a kan ma’auni na gaskiya",
            "poem": 1
          },
          {
            "text": "zai kuma san cewa ni marar laifi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "In takawata ta kauce daga hanya,",
            "poem": 1
          },
          {
            "text": "in zuciyata ta bi abin da idanuna ke so,",
            "poem": 2
          },
          {
            "text": "ko kuma in hannuwana suna da laifi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "bari waɗansu su ci abin da na shuka,",
            "poem": 1
          },
          {
            "text": "kuma bari a tuge amfanin gonata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“In sha’awar mace ya shiga mini zuciya,",
            "poem": 1
          },
          {
            "text": "ko kuma na laɓe a ƙofar maƙwabcina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "sai matata ta niƙa hatsin wani",
            "poem": 1
          },
          {
            "text": "kuma waɗansu maza su kwana da ita.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama wannan zai zama abin kunya,",
            "poem": 1
          },
          {
            "text": "zunubin da za a yi shari’a a kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Wuta ce take ƙuna har ta hallakar;",
            "poem": 1
          },
          {
            "text": "za tă cinye saiwar abin da na shuka ƙurmus.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“In da na danne wa bayina maza da mata hakkinsu,",
            "poem": 1
          },
          {
            "text": "sa’ad da suke da damuwa da ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "me zan yi lokacin da Allah ya tuhume ni?",
            "poem": 1
          },
          {
            "text": "Me zan ce lokacin da ya tambaye ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Shi wanda ya yi ni a cikin uwata ba shi ne ya yi su ba?",
            "poem": 1
          },
          {
            "text": "Ba shi ne ya yi mu a cikin uwayenmu ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“In na hana wa matalauta abin da suke so,",
            "poem": 1
          },
          {
            "text": "ko kuma in sa idanun gwauruwa su yi nauyi don kuka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "in na ajiye burodina don kaina kaɗai,",
            "poem": 1
          },
          {
            "text": "ban kuwa ba wa marayu abinci sa’ad da suke jin yunwa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "amma tun suna tasowa na lura da su,",
            "poem": 1
          },
          {
            "text": "kamar yadda mahaifi zai lura da ɗa, kuma tun da aka haife ni ina lura da gwauruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "In da na ga wani yana mutuwa don rashin sutura,",
            "poem": 1
          },
          {
            "text": "ko wani mai bukata da ba shi da riga,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "kuma zuciyarsa ba tă gode mini ba",
            "poem": 1
          },
          {
            "text": "don na yi masa sutura da gashin tumakina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "in na ɗaga hannuna don in cuci maraya,",
            "poem": 1
          },
          {
            "text": "domin na san in na faɗa za a ji ni a wurin masu shari’a,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "bari hannuna yă guntule daga kafaɗata,",
            "poem": 1
          },
          {
            "text": "bari yă tsinke daga inda aka haɗa shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Gama ina jin tsoron hallaka daga Allah,",
            "poem": 1
          },
          {
            "text": "kuma domin tsoron ɗaukakarsa ba zan iya yin waɗannan abubuwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "“In na dogara ga zinariya",
            "poem": 1
          },
          {
            "text": "ko kuma na ce wa zallan zinariya, ‘Gare ki nake dogara,’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "in na yi fahariya don yawan dukiyata,",
            "poem": 1
          },
          {
            "text": "arzikin da hannuwana suka samu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "In na dubi rana cikin haskenta,",
            "poem": 1
          },
          {
            "text": "ko kuma wata yana tafiyarsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "zuciyata ta jarrabtu gare su a ɓoye,",
            "poem": 1
          },
          {
            "text": "hannuna kuma ya sumbace su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Waɗannan ma za su zama zunubin da za a shari’anta ke nan",
            "poem": 1
          },
          {
            "text": "don zai zama na yi wa Allah na sama rashin aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "“In na yi murna domin mugun abu ya faru da maƙiyina;",
            "poem": 1
          },
          {
            "text": "ko kuma domin wahala ta same shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "ban bar bakina yă yi zunubi",
            "poem": 1
          },
          {
            "text": "ta wurin la’anta shi ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "in mutanen gidana ba su taɓa cewa,",
            "poem": 1
          },
          {
            "text": "‘Wane ne bai ƙoshi da naman Ayuba ba?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Ba baƙon da ya taɓa kwana a titi,",
            "poem": 1
          },
          {
            "text": "gama koyaushe ƙofata tana buɗe domin matafiya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "in na ɓoye zunubina yadda mutane",
            "poem": 1
          },
          {
            "noteId": 849
          },
          {
            "text": "suke yi,",
            "poem": 1
          },
          {
            "text": "ta wurin ɓoye laifina a cikin zuciyata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "domin ina tsoron taron mutane",
            "poem": 1
          },
          {
            "text": "kuma ina tsoron wulaƙancin da dangina za su yi mini,",
            "poem": 2
          },
          {
            "text": "sai na yi shiru kuma ban fita waje ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "(“Kash, da ina da wanda zai ji ni!",
            "poem": 1
          },
          {
            "text": "Na sa hannu ga abin da na faɗa don kāre kaina,",
            "poem": 2
          },
          {
            "text": "bari Maɗaukaki yă amsa mini; bari mai tuhumata da laifi yă yi ƙarata a rubuce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Ba shakka sai in ɗora a kafaɗata,",
            "poem": 1
          },
          {
            "text": "zan aza a kaina kamar rawani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Zan ba shi lissafin duk abin da na taɓa yi;",
            "poem": 1
          },
          {
            "text": "zan zo gabansa kamar ɗan sarki.)",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "“In ƙasata tana kuka da ni",
            "poem": 1
          },
          {
            "text": "kunyoyinta duk sun cika da hawaye,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "in na kwashe amfaninta ban biya ba",
            "poem": 1
          },
          {
            "text": "ko kuma na kashe masu ita,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "bari ƙaya ta fito a maimakon alkama",
            "poem": 1
          },
          {
            "text": "ciyawa kuma a maimakon sha’ir.”",
            "poem": 2
          },
          "Maganar Ayuba ta ƙare."
        ]
      },
      {
        "type": "line_break"
      }
