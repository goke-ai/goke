  "chapter": {
    "number": 20,
    "content": [
      {
        "type": "heading",
        "content": [
          "Zofar"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Zofar mutumin Na’ama ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Tunanin da ya dame ni ya sa dole in amsa",
            "poem": 1
          },
          {
            "text": "domin abin ya dame ni sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Na ji wani zargin da ka yi mini na reni,",
            "poem": 1
          },
          {
            "text": "kuma yadda na gane, shi ya sa zan ba da amsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ba shakka ka san yadda abin yake tuntuni,",
            "poem": 1
          },
          {
            "text": "tun da aka sa mutum cikin duniya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "mugun mutum bai taɓa daɗewa ba,",
            "poem": 1
          },
          {
            "text": "farin cikin mutum na ɗan gajeren lokaci ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ko da ya ƙasaita ya kai sararin sama,",
            "poem": 1
          },
          {
            "text": "kansa kuma yana taɓa gizagizai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zai hallaka har abada, kamar bayan gidansa;",
            "poem": 1
          },
          {
            "text": "waɗanda suka gan shi za su ce, ‘Ina yake?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kamar mafarki haka zai ɓace, ba za a ƙara ganinsa ba",
            "poem": 1
          },
          {
            "text": "zai ɓace kamar wahayi da dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Idon da ya gan shi ba zai ƙara ganinsa ba;",
            "poem": 1
          },
          {
            "text": "wurin zamansa ba zai sāke ganinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dole ’ya’yansa su mayar wa matalauta abin da ya kamata;",
            "poem": 1
          },
          {
            "text": "dole hannuwansa su mayar da dukiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Jin ƙarfi da ya cika ƙasusuwansa",
            "poem": 1
          },
          {
            "text": "zai kwantar da shi a cikin ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ko da yake mugunta tana da daɗi a bakinsa",
            "poem": 1
          },
          {
            "text": "kuma yana ɓoye ta a harshensa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "ko da yake ba zai iya rabuwa da ita ba,",
            "poem": 1
          },
          {
            "text": "yana kuma ajiye ta a bakinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "duk da haka abincin da ya ci zai zama da tsami a cikin cikinsa;",
            "poem": 1
          },
          {
            "text": "zai zama kamar dafin maciji a cikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zai haras da dukiyar da ya haɗiye;",
            "poem": 1
          },
          {
            "text": "Allah zai sa cikinsa yă haras da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Zai sha dafin maciji;",
            "poem": 1
          },
          {
            "text": "sarar maciji mai dafi za tă tashe shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ba zai ji daɗin koguna da rafuffuka",
            "poem": 1
          },
          {
            "text": "masu kwarara da zuma da madara ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Dole yă ba da abin da ya yi gumi kafin yă samu,",
            "poem": 1
          },
          {
            "text": "ba zai ci ba; ba zai ji daɗin ribar da ya samu daga kasuwancinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Gama ya ci zalin talakawa ya bar su cikin wahala;",
            "poem": 1
          },
          {
            "text": "ya ƙwace gidajen da ba shi ya gina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Ba shakka ba zai samu abin da yake ƙoƙarin samu ba,",
            "poem": 1
          },
          {
            "text": "dukiyarsa ba za tă cece shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba abin da ya ragu da zai ɗauka;",
            "poem": 1
          },
          {
            "text": "arzikinsa ba zai dawwama ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana cikin samun arziki, ɓacin rai zai auka masa;",
            "poem": 1
          },
          {
            "text": "ƙunci mai ƙarfi zai zo masa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Lokacin da ya cika cikinsa,",
            "poem": 1
          },
          {
            "text": "Allah zai zuba fushinsa a kansa,",
            "poem": 2
          },
          {
            "text": "zai daddaka shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ko da yake yana guje wa makamin ƙarfe,",
            "poem": 1
          },
          {
            "text": "kibiya mai bakin tagulla za tă huda shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Zai zāre ta daga bayansa,",
            "poem": 1
          },
          {
            "text": "tsinin zai fita daga hantarsa;",
            "poem": 2
          },
          {
            "text": "tsoro zai cika shi;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "duhu kawai yake jiran dukiyarsa.",
            "poem": 2
          },
          {
            "text": "Wutar da ba a fifita ba za tă cinye shi",
            "poem": 1
          },
          {
            "text": "ta kuma ƙona duk abin da ya rage a tentinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Sammai za su fallasa laifinsa;",
            "poem": 1
          },
          {
            "text": "duniya za tă yi gāba da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ambaliyar ruwa za tă tafi da gidansa,",
            "poem": 1
          },
          {
            "text": "ruwaye masu gudu a ranar fushin Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Abin da Allah zai sa yă faru da mugu ke nan,",
            "poem": 1
          },
          {
            "text": "gādon da Allah ya ba shi ke nan.”",
            "poem": 2
          }
        ]
      }
    ],
