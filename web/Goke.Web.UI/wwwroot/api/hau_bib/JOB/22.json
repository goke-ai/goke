  "chapter": {
    "number": 22,
    "content": [
      {
        "type": "heading",
        "content": [
          "Elifaz"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Elifaz mutumin Teman ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Mutum yana iya zama da amfani a wurin Allah?",
            "poem": 1
          },
          {
            "text": "Mai hikima ma zai iya zama da amfani a wurin shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Wane daɗi Allah zai ji in kai mai adalci ne?",
            "poem": 1
          },
          {
            "text": "Wace riba zai samu in rayuwarka marar laifi ce?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ko don kana tsoron Allah shi ya sa ya kwaɓe ka",
            "poem": 1
          },
          {
            "text": "ya kuma bari haka yă same ka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba muguntarka ce ta yi yawa ba?",
            "poem": 1
          },
          {
            "text": "Ba zunubanka ne ba iyaka ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka sa ɗan’uwanka yă biya ka bashin da kake binsa ba dalili;",
            "poem": 1
          },
          {
            "text": "ka ƙwace wa mutanen rigunansu ka bar su tsirara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba ka ba masu jin ƙishirwa su sha ba",
            "poem": 1
          },
          {
            "text": "kuma ka hana wa masu jin yunwa abinci su ci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ko da yake kai mai ƙarfi ne, ka mallaki ƙasa,",
            "poem": 1
          },
          {
            "text": "mutum mai martaba kuma, kana zama cikin ƙasarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka kori gwauraye hannu wofi,",
            "poem": 1
          },
          {
            "text": "ka kuma karya ƙarfin marayu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Shi ya sa kake kewaye da tarkuna,",
            "poem": 1
          },
          {
            "text": "shi ya sa ka cika da tsoron mugun abin da zai auko maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "An yi duhu ƙwarai, har ba ka iya gani,",
            "poem": 1
          },
          {
            "text": "shi ya sa ambaliyar ruwa ta rufe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ba Allah ne a can sama ba?",
            "poem": 1
          },
          {
            "text": "Dubi yadda taurarin sama suke can nesa a sama!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duk da haka ka ce, ‘Me Allah ya sani?",
            "poem": 1
          },
          {
            "text": "A cikin duhu ne yake shari’a?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Gajimare ya rufe shi, saboda haka ba ya ganinmu",
            "poem": 1
          },
          {
            "text": "lokacin da yake takawa a cikin sammai.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Za ka ci gaba da bin tsohuwar hanyar",
            "poem": 1
          },
          {
            "text": "da mugayen mutane suka bi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "An ɗauke su kafin lokacinsu yă cika,",
            "poem": 1
          },
          {
            "text": "ruwa ya share tushensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Suka ce wa Allah, ‘Ka rabu da mu!",
            "poem": 1
          },
          {
            "text": "Me Maɗaukaki zai yi mana?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Duk da haka kuwa shi ne ya cika gidajensu da abubuwa masu kyau,",
            "poem": 1
          },
          {
            "text": "saboda haka ba ruwana da shawarar mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Masu adalci suna gani ana hallaka mugaye, suna jin daɗi;",
            "poem": 1
          },
          {
            "text": "marasa laifi suna yi musu ba’a, suna cewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "‘Ba shakka an hallaka maƙiyanmu,",
            "poem": 1
          },
          {
            "text": "wuta kuma ta ƙona dukiyarsu.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Ka miƙa kanka ga Allah ka samu salamarsa;",
            "poem": 1
          },
          {
            "text": "ta haka ne arziki zai zo maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ka bi umarnin da zai fito daga bakinsa",
            "poem": 1
          },
          {
            "text": "kuma ka riƙe maganarsa a cikin zuciyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "In ka komo ga Maɗaukaki, za ka warke.",
            "poem": 1
          },
          {
            "text": "In ka kawar da mugunta daga cikin gidanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka jefar da zinariyarka a ƙasa,",
            "poem": 1
          },
          {
            "text": "ka jefar da zinariyar Ofir da ka fi so a cikin duwatsu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "sa’an nan ne Maɗaukaki zai zama zinariyarka,",
            "poem": 1
          },
          {
            "text": "zai zama azurfa mafi kyau a wurinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ba shakka a lokacin ne za ka sami farin ciki",
            "poem": 1
          },
          {
            "text": "daga wurin Maɗaukaki,",
            "poem": 2
          },
          {
            "text": "ku kuma ɗaga idanunku ga Allah",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Za ka yi addu’a zuwa gare shi, zai kuwa ji ka,",
            "poem": 1
          },
          {
            "text": "kuma za ka cika alkawuranka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Abin da ka zaɓa za ka yi za ka yi nasara a ciki,",
            "poem": 1
          },
          {
            "text": "haske kuma zai haskaka hanyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Sa’ad da aka ƙasƙantar da mutane ka kuma ce, ‘A ɗaga su!’",
            "poem": 1
          },
          {
            "text": "Sa’an nan zai ceci masu tawali’u.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Zai ceci wanda ma yake mai laifi,",
            "poem": 1
          },
          {
            "text": "wanda zai tsirar da shi ta wurin tsabtar hannuwanka.”",
            "poem": 2
          }
        ]
      }
    ],
