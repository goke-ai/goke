  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "heading",
        "content": [
          "Elifaz"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Elifaz mutumin Teman ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“In wani ya yi maka magana, za ka ji haushi?",
            "poem": 1
          },
          {
            "text": "Amma wa zai iya yin shiru?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka tuna yadda ka yi wa mutane da yawa magana,",
            "poem": 1
          },
          {
            "text": "yadda ka ƙarfafa hannuwa marasa ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Maganarka ta ƙarfafa waɗanda suka yi tuntuɓe;",
            "poem": 1
          },
          {
            "text": "ka ƙarfafa gwiwoyin da suka rasa ƙarfinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Amma yanzu wahala ta zo maka, sai ka karaya;",
            "poem": 1
          },
          {
            "text": "wahala ta sa ka rikice.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ashe bai kamata ka dogara ga Allahnka ba,",
            "poem": 1
          },
          {
            "text": "amincinka kuma yă zama begenka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ka duba ka gani yanzu. Wane marar laifi ne ya taɓa hallaka?",
            "poem": 1
          },
          {
            "text": "Ko an taɓa hallaka masu adalci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Na kula cewa waɗanda suke huɗa gonar mugunta,",
            "poem": 1
          },
          {
            "text": "da waɗanda suke shuka mugunta, su ne suke girbe mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "A sa’a ɗaya Allah yake hallaka su,",
            "poem": 1
          },
          {
            "text": "cikin fushinsa yakan hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Zakoki suna ruri suna gurnani;",
            "poem": 1
          },
          {
            "text": "duk da haka an karya haƙoran manyan zakoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Zakoki suna mutuwa domin ba dabbar da za su kashe su ci,",
            "poem": 1
          },
          {
            "text": "’ya’yan zakanya kuma sun watse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Asirce aka gaya mini maganan nan,",
            "poem": 1
          },
          {
            "text": "da ƙyar kunnuwana suka iya ji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Cikin mafarki da tsakar dare,",
            "poem": 1
          },
          {
            "text": "lokacin kowa yana zurfin barci, na sami saƙon nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Tsoro da fargaba suka kama ni",
            "poem": 1
          },
          {
            "text": "har duk ƙasusuwan jikina suka yi ta rawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Wani iska ya taɓa mini fuska,",
            "poem": 1
          },
          {
            "text": "sai tsigar jikina ta tashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ya tsaya cik,",
            "poem": 1
          },
          {
            "text": "amma ban iya sani ko mene ne ba.",
            "poem": 2
          },
          {
            "text": "Wani abu ya tsaya a gabana,",
            "poem": 1
          },
          {
            "text": "na kuma ji murya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "‘Ko zai yiwu mutum yă fi Allah adalci,",
            "poem": 1
          },
          {
            "text": "ko kuma mutum yă fi wanda ya halicce shi tsarki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "In Allah bai yarda da bayinsa ba,",
            "poem": 1
          },
          {
            "text": "in ya sami mala’ikunsa da laifi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "to, su wane ne mutane masu zama a gidan da aka yi da laka,",
            "poem": 1
          },
          {
            "text": "waɗanda da ƙura aka yi harsashensu,",
            "poem": 2
          },
          {
            "text": "waɗanda za a iya murƙushe su kamar asu!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Tsakanin safe da yamma mai yiwuwa ne ragargaza su;",
            "poem": 1
          },
          {
            "text": "farat ɗaya, su mutu har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba a tuge igiyar tentinsu,",
            "poem": 1
          },
          {
            "text": "don su mutu ba tare da hikima ba?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
