  "chapter": {
    "number": 15,
    "content": [
      {
        "type": "heading",
        "content": [
          "Elifaz"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Elifaz mutumin Teman ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Mutum mai hikima zai amsa da surutai marasa kan gado",
            "poem": 1
          },
          {
            "text": "ko yă cika cikinsa da iskar gabas?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko zai yi gardama da maganganun wofi",
            "poem": 1
          },
          {
            "text": "maganganu marasa amfani?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Amma ka ma rena Allah",
            "poem": 1
          },
          {
            "text": "ka hana a yi addu’a gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zunubanka ne suke gaya maka abin da za ka ce;",
            "poem": 1
          },
          {
            "text": "kana magana kamar mai wayo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bakinka zai kai ka yă baro, ba nawa ba;",
            "poem": 1
          },
          {
            "text": "maganar bakinka za tă juya a kanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Kai ne mutum na farko da aka fara haihuwa?",
            "poem": 1
          },
          {
            "text": "Ko kai ne aka fara halitta kafin tuddai?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kana sauraron shawarar Allah?",
            "poem": 1
          },
          {
            "text": "Ko kana gani kai kaɗai ne mai hikima?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Me ka sani da ba mu sani ba?",
            "poem": 1
          },
          {
            "text": "Wane fahimi kake da shi da ba mu da shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Masu furfura da tsofaffi suna gefenmu",
            "poem": 1
          },
          {
            "text": "mutanen da sun girme babanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ta’aziyyar Allah ba tă ishe ka ba.",
            "poem": 1
          },
          {
            "text": "Maganarsa mai laushi ba tă ishe ka ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Don me ka bar zuciyarka ta kwashe ka,",
            "poem": 1
          },
          {
            "text": "kuma don me idanunka suke haske,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "har kake fushi da Allah",
            "poem": 1
          },
          {
            "text": "kake kuma faɗar waɗannan maganganu daga bakinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Mene ne mutum, har da zai zama da tsarki,",
            "poem": 1
          },
          {
            "text": "ko kuma mace ta haife shi, har yă iya zama mai adalci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "In Allah bai nuna amincewa ga tsarkakansa ba,",
            "poem": 1
          },
          {
            "text": "in har sammai ba su da tsarki a idonsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "mutum fa, wanda yake da mugunta da lalacewa,",
            "poem": 1
          },
          {
            "text": "wanda yake shan mugunta kamar ruwa!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Ka saurare ni, zan kuma yi maka bayani;",
            "poem": 1
          },
          {
            "text": "bari in gaya maka abin da na gani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "abin da masu hikima suka ce,",
            "poem": 1
          },
          {
            "text": "ba tare da sun ɓoye wani abu da suka samu daga wurin iyayensu ba",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "(waɗanda su ne masu ƙasar",
            "poem": 1
          },
          {
            "text": "kafin baƙi su shigo ƙasar).",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Dukan kwanakin ransa mugu yana shan wahala,",
            "poem": 1
          },
          {
            "text": "wahala kaɗai zai yi ta sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ƙara mai bantsoro za tă cika kunnuwansa",
            "poem": 1
          },
          {
            "text": "’yan fashi za su kai masa hari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yana jin tsoron duhu",
            "poem": 1
          },
          {
            "text": "domin za a kashe shi da takobi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Yana ta yawo, abinci don ungulaye;",
            "poem": 1
          },
          {
            "noteId": 848
          },
          {
            "text": "ya san ranar duhu tana kusa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ɓacin rai da baƙin ciki sun cika shi,",
            "poem": 1
          },
          {
            "text": "kamar sarkin da yake shirin yaƙi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "domin ya nuna wa Allah yatsa",
            "poem": 1
          },
          {
            "text": "ya rena Allah Maɗaukaki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "ya tasar masa da faɗa",
            "poem": 1
          },
          {
            "text": "da garkuwa mai kauri da kuma ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Ko da yake fuskarsa ta cika da kumatu",
            "poem": 1
          },
          {
            "text": "kuma yana da tsoka ko’ina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "zai yi gādon garuruwan da suka lalace,",
            "poem": 1
          },
          {
            "text": "da kuma gidajen da ba wanda yake zama a ciki,",
            "poem": 2
          },
          {
            "text": "gidajen da sun zama tarkace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ba zai sāke zama mai arziki ba, dukiyarsa ba za tă dawwama ba,",
            "poem": 1
          },
          {
            "text": "abin da ya mallaka kuma ba zai bazu a ƙasar ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ba zai tsere wa duhu ba;",
            "poem": 1
          },
          {
            "text": "wuta za tă ƙona rassansa,",
            "poem": 2
          },
          {
            "text": "kuma numfashi daga bakin Allah zai hallaka shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Kada yă ruɗi kansa ta wurin dogara ga abin da ba shi da amfani",
            "poem": 1
          },
          {
            "text": "domin ba zai samu wani abu ba daga ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Kafin lokacinsa yă cika, za a gama biyansa duka,",
            "poem": 1
          },
          {
            "text": "kuma rassansa ba za su ba da amfani ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Zai zama kamar itacen inabi wanda ’ya’yansa suka kakkaɓe kafin su nuna,",
            "poem": 1
          },
          {
            "text": "kamar itacen zaitun zai zubar da furensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Gama marasa tsoron Allah za su zama marasa ba da ’ya’ya,",
            "poem": 1
          },
          {
            "text": "wuta kuma za tă ƙona tenti na masu son cin hanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Suna yin cikin rikici su kuma haifi mugunta;",
            "poem": 1
          },
          {
            "text": "cikinsu yana cike da ruɗami.”",
            "poem": 2
          }
        ]
      }
    ],
