  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Ka yi kira in kana so, amma wa zai amsa maka?",
            "poem": 1
          },
          {
            "text": "Wurin waɗanne tsarkaka za ka juya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Fushi yana kashe wawa,",
            "poem": 1
          },
          {
            "text": "ƙyashi kuma yana kashe marar azanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ni ma na ga wawa yana cin gaba,",
            "poem": 1
          },
          {
            "text": "amma nan da nan gidansa ya zama la’ananne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "’Ya’yansa suna cikin hatsari,",
            "poem": 1
          },
          {
            "text": "ba wanda zai tsaya musu a gaban alƙali,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "mayunwata sun kwashe girbinsa,",
            "poem": 1
          },
          {
            "text": "har abubuwan da suke cikin ƙaya,",
            "poem": 2
          },
          {
            "text": "masu jin ƙishirwa kuma suna zuba ido ga dukiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama ba daga cikin ƙasa wahala take fitowa ba,",
            "poem": 1
          },
          {
            "text": "ko kuma bala’i daga ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk da haka an haifi mutum don wahala ne,",
            "poem": 1
          },
          {
            "text": "kamar yadda ba shakka tartsatsin wuta yake tashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Amma da a ce ni ne, da zan roƙi Allah;",
            "poem": 1
          },
          {
            "text": "zan gaya masa damuwata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yana yin abubuwan al’ajabi waɗanda ba a ganewa,",
            "poem": 1
          },
          {
            "text": "mu’ujizai waɗanda ba a ƙirgawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Yana zuba ruwan sama a ƙasa;",
            "poem": 1
          },
          {
            "text": "yana zuba ruwa a gonaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yana ɗaukaka masu sauƙinkai,",
            "poem": 1
          },
          {
            "text": "yana kāre waɗanda suke makoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yana dagula shirye-shiryen masu wayo",
            "poem": 1
          },
          {
            "text": "don kada su yi nasara cikin abubuwan da suke shirin yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Yana kama masu wayo cikin wayonsu,",
            "poem": 1
          },
          {
            "text": "yana kawar da shirye-shiryensu ba za su yi nasara ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Da rana sukan yi karo da duhu;",
            "poem": 1
          },
          {
            "text": "da rana ma suna lallube kamar a duhun dare suke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Yana ceton matalauta daga takobin da za tă kashe su da shi;",
            "poem": 1
          },
          {
            "text": "yana cetonsu daga hannun waɗanda suka fi su ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Saboda haka matalauta suna da bege,",
            "poem": 1
          },
          {
            "text": "rashin gaskiya kuma ta yi shiru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Mai albarka ne wanda Allah yake yi masa gyara in mutumin ya yi kuskure;",
            "poem": 1
          },
          {
            "text": "saboda haka kada ka guje wa horon Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ko da yake yana sa ciwo, shi ne kuma yake warkar da ciwon;",
            "poem": 1
          },
          {
            "text": "ciwon da ya ji maka, shi da kansa zai warkar da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Zai cece ka daga bala’o’i guda shida;",
            "poem": 1
          },
          {
            "text": "har bakwai ma ba abin da zai same ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Lokacin yunwa yana tsare ka daga mutuwa,",
            "poem": 1
          },
          {
            "text": "a cikin yaƙi kuma yana kāre ka daga sarar takobi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Zai kāre ka daga ɓata suna,",
            "poem": 1
          },
          {
            "text": "kuma ba ka bukata ka ji tsoro in hallaka ta zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Za ka yi wa hallaka da yunwa dariya;",
            "poem": 1
          },
          {
            "text": "kuma ba ka bukata ka ji tsoron manyan namun jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Gama za ka zauna lafiya da duwatsu a gonaki,",
            "poem": 1
          },
          {
            "text": "kuma manyan namun jeji za su yi zaman salama da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Za ka zauna lafiya a cikin tenti naka,",
            "poem": 1
          },
          {
            "text": "za ka ƙirga kayanka za ka samu kome na nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Za ka san cewa ’ya’yanka za su zama da yawa,",
            "poem": 1
          },
          {
            "text": "zuriyarka kuma kamar ciyawa a ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Za ka yi kyakkyawan tsufa kafin ka mutu,",
            "poem": 1
          },
          {
            "text": "kamar yadda ake tara dammuna a lokacin girbi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Mun yi nazarin wannan, kuma gaskiya ne.",
            "poem": 1
          },
          {
            "text": "Saboda haka ka ji, ka kuma yi amfani da shi.”",
            "poem": 2
          }
        ]
      }
    ],
