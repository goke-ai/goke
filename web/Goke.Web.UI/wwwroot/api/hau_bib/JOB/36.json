  "chapter": {
    "number": 36,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Elihu ya ci gaba,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ka ɗan ƙara haƙuri da ni kaɗan,",
            "poem": 1
          },
          {
            "text": "zan kuma nuna maka cewa akwai sauran abubuwan da zan faɗa a madadin Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Daga nesa na sami sanina;",
            "poem": 1
          },
          {
            "text": "zan nuna cewa Mahaliccina shi mai gaskiya ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Abin da zan gaya maka ba ƙarya ba ne;",
            "poem": 1
          },
          {
            "text": "mai cikakken sani yana tare da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Allah mai iko ne, amma ba ya rena mutane;",
            "poem": 1
          },
          {
            "text": "shi mai girma ne cikin manufarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ba ya barin mugaye da rai",
            "poem": 1
          },
          {
            "text": "sai dai yana ba waɗanda ake tsanantawa hakkinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba ya fasa duban masu adalci;",
            "poem": 1
          },
          {
            "text": "yana sa su tare da sarakuna",
            "poem": 2
          },
          {
            "text": "yana ɗaukaka su har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Amma in mutane suna daure da sarƙoƙi,",
            "poem": 1
          },
          {
            "text": "ƙunci kuma ya daure su,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "yana gaya musu abin da suka yi,",
            "poem": 1
          },
          {
            "text": "cewa sun yi zunubi da girman kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Yana sa su saurari gyara yă kuma umarce su",
            "poem": 1
          },
          {
            "text": "su tuba daga muguntarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "In sun yi biyayya suka bauta masa,",
            "poem": 1
          },
          {
            "text": "za su yi rayuwa dukan kwanakinsu cikin wadata",
            "poem": 2
          },
          {
            "text": "shekarunsu kuma cikin kwanciyar zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma in ba su saurara ba,",
            "poem": 1
          },
          {
            "text": "za su hallaka da takobi",
            "poem": 2
          },
          {
            "text": "kuma za su mutu ba ilimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Waɗanda ba su da Allah a zuciyarsu su ne suke riƙe fushi;",
            "poem": 1
          },
          {
            "text": "ko sa’ad da ya ba su horo, ba su neman taimakonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Suna mutuwa tun suna matasa,",
            "poem": 1
          },
          {
            "text": "cikin ƙazamar rayuwar karuwanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma yana kuɓutar da masu wahala;",
            "poem": 1
          },
          {
            "text": "yana magana da su cikin wahalarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Yana so yă rinjaye ka daga haƙoran ƙunci,",
            "poem": 1
          },
          {
            "text": "zuwa wuri mai sauƙi inda ba matsi",
            "poem": 2
          },
          {
            "text": "zuwa teburinka cike da abincin da kake so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Amma yanzu an cika ka da hukuncin da ya kamata a yi wa mugaye;",
            "poem": 1
          },
          {
            "text": "shari’a da kuma gaskiya sun kama ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ka yi hankali kada wani yă ruɗe ka da arziki;",
            "poem": 1
          },
          {
            "text": "kada ka bar toshiya ta sa ka juya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Dukiyarka",
            "poem": 1
          },
          {
            "text": "ko dukan yawan ƙoƙarinka",
            "poem": 2
          },
          {
            "text": "sun isa su riƙe ka su hana ka shan ƙunci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kada ka yi marmari dare yă yi,",
            "poem": 1
          },
          {
            "text": "don a fitar da mutane daga gidajensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka kula kada ka juya ga mugunta,",
            "poem": 1
          },
          {
            "text": "abin da ka fi so fiye da wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“An ɗaukaka Allah cikin ikonsa.",
            "poem": 1
          },
          {
            "text": "Wane ne malami kamar sa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Wane ne ya nuna masa hanyar da zai bi,",
            "poem": 1
          },
          {
            "text": "ko kuma wane ne ya ce masa, ‘Ba ka yi daidai ba?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka tuna ka ɗaukaka aikinsa,",
            "poem": 1
          },
          {
            "text": "waɗanda mutane suka yaba a cikin waƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Dukan ’yan adam sun gani;",
            "poem": 1
          },
          {
            "text": "mutane sun hanga daga nesa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Allah mai girma ne,",
            "poem": 1
          },
          {
            "text": "ya wuce ganewarmu!",
            "poem": 2
          },
          {
            "text": "Yawan shekarunsa ba su bincikuwa.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Yana sa ruwa yă zama tururi",
            "poem": 1
          },
          {
            "text": "yă zubo daga sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Gizagizai suna zubo da raɓarsu",
            "poem": 1
          },
          {
            "text": "kuma ruwan sama yana zubowa ’yan adam a wadace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Wane ne zai iya gane yadda ya shimfiɗa gizagizai",
            "poem": 1
          },
          {
            "text": "yadda yake tsawa daga wurin zamansa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Dubi yadda ya baza walƙiyarsa kewaye da shi,",
            "poem": 1
          },
          {
            "text": "tana haskaka zurfin teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Haka yake mulkin al’ummai",
            "poem": 1
          },
          {
            "text": "yana kuma tanada abinci a wadace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Yana cika hannuwansa da walƙiya",
            "poem": 1
          },
          {
            "text": "kuma yana ba ta umarni tă fāɗi a inda ya yi nufi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Tsawarsa tana nuna cewa babbar iska da ruwa suna zuwa;",
            "poem": 1
          },
          {
            "text": "ko shanu sun san da zuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
