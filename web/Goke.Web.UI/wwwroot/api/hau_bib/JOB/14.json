  "chapter": {
    "number": 14,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Mutum haihuwar mace",
            "poem": 1
          },
          {
            "text": "kwanakinsa kaɗan ne, kuma cike da wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yana tasowa kamar fure yana kuma shuɗewa;",
            "poem": 1
          },
          {
            "text": "kamar inuwa, ba ya daɗewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Za ka zura ido a kan irin wannan ne?",
            "poem": 1
          },
          {
            "text": "Za ka kawo shi gaba don ka yi masa shari’a?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Wane ne zai iya kawo abin da yake da tsarki daga cikin abu marar tsarki?",
            "poem": 1
          },
          {
            "text": "Babu!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "An lissafta kwanakin mutum;",
            "poem": 1
          },
          {
            "text": "ka riga ka ɗibar masa watanni,",
            "poem": 2
          },
          {
            "text": "ka yi masa iyaka, ba zai iya wuce iyakar ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda haka ka kawar da kanka daga gare shi,",
            "poem": 1
          },
          {
            "text": "ka rabu da shi har sai ya cika lokacinsa kamar mutumin da aka ɗauki hayarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Aƙalla itace yana da bege.",
            "poem": 1
          },
          {
            "text": "In an sare shi, zai sāke tsira,",
            "poem": 2
          },
          {
            "text": "zai tohu da kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ko da jijiyoyin itacen sun tsufa a cikin ƙasa",
            "poem": 1
          },
          {
            "text": "kuma kututturensa ya mutu a cikin ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Daga ya ji ƙanshin ruwa zai tohu",
            "poem": 1
          },
          {
            "text": "yă yi tsiro kamar shuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Amma mutum yana mutuwa a bizne shi;",
            "poem": 1
          },
          {
            "text": "daga ya ja numfashinsa na ƙarshe, shi ke nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kamar yadda ruwa yake bushewa a teku ko a gaɓar rafi",
            "poem": 1
          },
          {
            "text": "sai wurin yă bushe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "haka mutum zai kwanta ba zai tashi ba;",
            "poem": 1
          },
          {
            "text": "har sai duniya ta shuɗe",
            "poem": 2
          },
          {
            "text": "mutane ba za su farka ba, ba za su tashi daga barcinsu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Da ma za ka ɓoye ni a cikin kabari",
            "poem": 1
          },
          {
            "text": "ka ɓoye ni har sai fushinka ya wuce!",
            "poem": 2
          },
          {
            "text": "In da za ka keɓe mini lokaci",
            "poem": 1
          },
          {
            "text": "sa’an nan ka tuna da ni!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "In mutum ya mutu, ko zai sāke rayuwa?",
            "poem": 1
          },
          {
            "text": "In haka ne zan daure",
            "poem": 2
          },
          {
            "text": "kwanakin da nake shan wahala har su wuce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Za ka kira zan kuwa amsa maka;",
            "poem": 1
          },
          {
            "text": "za ka yi marmarin abin da hannunka ya halitta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba shakka a lokacin ne za ka lura da matakaina",
            "poem": 1
          },
          {
            "text": "amma ba za ka kula da zunubaina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Za a daure laifofina a cikin jaka;",
            "poem": 1
          },
          {
            "text": "za ka rufe zunubaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Amma kamar yadda manyan duwatsu suke fāɗuwa",
            "poem": 1
          },
          {
            "text": "su farfashe su kuma gusa daga wurarensu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "yadda ruwa yakan zaizaye duwatsu",
            "poem": 1
          },
          {
            "text": "ruwa mai ƙarfi kuma yă kwashe turɓayar ƙasa,",
            "poem": 2
          },
          {
            "text": "haka kake barin mutum ba bege.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka sha ƙarfinsa gaba ɗaya, sai ya ɓace,",
            "poem": 1
          },
          {
            "text": "ka sauya yanayinsa ka kuma kore shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ko an martaba ’ya’yansa maza, ba zai sani ba;",
            "poem": 1
          },
          {
            "text": "Ko an wulaƙanta su, ba zai gani ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zafin jikinsa kaɗai yake ji",
            "poem": 1
          },
          {
            "text": "yana kuka wa kansa ne kaɗai.”",
            "poem": 2
          }
        ]
      }
    ],
