  "chapter": {
    "number": 21,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ku saurare ni da kyau;",
            "poem": 1
          },
          {
            "text": "bari wannan yă zama ta’aziyyar da za ku ba ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku ba ni zarafi in yi magana,",
            "poem": 1
          },
          {
            "text": "bayan na gama sai ku yi ba’arku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“A wurin mutum ne na kawo kukana?",
            "poem": 1
          },
          {
            "text": "Don me ba zan kāsa haƙuri ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku dube ni, ku kuma yi mamaki;",
            "poem": 1
          },
          {
            "text": "ku rufe bakina da hannunku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Lokacin da na yi tunanin wannan,",
            "poem": 1
          },
          {
            "text": "sai in ji tsoro; jikina yă fara rawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Don me mugaye suke rayuwa har su tsufa,",
            "poem": 1
          },
          {
            "text": "suna kuma ƙaruwa da iko?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Suna ganin ’ya’yansu suna girma,",
            "poem": 1
          },
          {
            "text": "suna ganin jikokinsu suna tasowa a kan idanunsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gidajensu suna zama cikin lafiya ba ruwansu da fargaba.",
            "poem": 1
          },
          {
            "text": "Kuma Allah ba ya ba su horo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Shanunsu ba sa fasa haihuwa;",
            "poem": 1
          },
          {
            "text": "suna haihuwa ba sa yin ɓari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suna aika ’ya’yansu kamar garke;",
            "poem": 1
          },
          {
            "text": "’ya’yansu suna guje-guje da tsalle-tsalle.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Suna rera da kayan kiɗa na ganga da garaya;",
            "poem": 1
          },
          {
            "text": "suna jin daɗin busar sarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Suna yin rayuwarsu cikin arziki",
            "poem": 1
          },
          {
            "text": "kuma su mutu cikin salama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Duk da haka suna ce wa Allah, ‘Ka rabu da mu.’",
            "poem": 1
          },
          {
            "text": "Ba ma so mu san hanyoyinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Wane ne Maɗaukaki har da za mu bauta masa?",
            "poem": 1
          },
          {
            "text": "Wace riba za mu samu ta wurin yin addu’a gare shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Amma arzikinsu ba a hannunsu yake ba",
            "poem": 1
          },
          {
            "text": "saboda haka ba ruwana da shawarar mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Duk da haka, sau nawa fitilar mugu take mutuwa?",
            "poem": 1
          },
          {
            "text": "Sau nawa bala’i yake auka masa,",
            "poem": 2
          },
          {
            "text": "ko Allah ya taɓa hukunta mugu cikin fushi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Sau nawa suke zama kamar tattaka a iska,",
            "poem": 1
          },
          {
            "text": "ko kuma kamar ƙura da iskar hadari take kwashewa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "An ce ‘Allah yana tara wa ’ya’yan mutum horon da zai ba mutumin.’",
            "poem": 1
          },
          {
            "text": "Bari yă ba mutumin horo don yă san ya yi haka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Bari idanunsa su ga yadda zai hallaka;",
            "poem": 1
          },
          {
            "text": "bari yă sha daga fushin Maɗaukaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ko zai damu da iyalin da ya bari a baya",
            "poem": 1
          },
          {
            "text": "sa’ad da kwanakinsa suka ƙare?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Wani zai iya koya wa Allah ilimi",
            "poem": 1
          },
          {
            "text": "tun da yana shari’anta har da waɗanda suke manya masu iko?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Wani mutum zai mutu cikin jin daɗi",
            "poem": 1
          },
          {
            "text": "da kwanciyar hankali,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "jikinsa ɓulɓul,",
            "poem": 1
          },
          {
            "text": "ƙasusuwansa da alamar ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Wani kuma zai mutu cikin ɗacin rai,",
            "poem": 1
          },
          {
            "text": "bai taɓa jin daɗin wani abu mai kyau ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Dukansu kuwa za a bizne su a ƙasa,",
            "poem": 1
          },
          {
            "text": "kuma tsutsotsi za su cinye su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Na san duk abin da kuke tunani,",
            "poem": 1
          },
          {
            "text": "yadda za ku saɓa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kuna cewa, ‘Yanzu ina gidan babban mutumin nan,",
            "poem": 1
          },
          {
            "text": "tenti wurin da mugaye suke zama?’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ba ku taɓa tambayar waɗanda suke tafiya ba?",
            "poem": 1
          },
          {
            "text": "Ba ku kula da labaransu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "cewa an kāre mugu daga ranar bala’i,",
            "poem": 1
          },
          {
            "text": "an kāre shi daga ranar fushi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Wane ne yake gaya masa abin da ya yi?",
            "poem": 1
          },
          {
            "text": "Wane ne yake rama abin da ya yi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Za a bizne shi a kabari,",
            "poem": 1
          },
          {
            "text": "a kuma yi tsaron kabarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Akan mai da ƙasa a kan gawarsa a hankali;",
            "poem": 1
          },
          {
            "text": "dukan jama’a suna binsa,",
            "poem": 2
          },
          {
            "text": "da yawa kuma suna gabansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "“Saboda haka ta yaya za ku iya yi mini ta’aziyya",
            "poem": 1
          },
          {
            "text": "da surutan banzan nan naku? Babu wani abu cikin amsarku sai ƙarya!”",
            "poem": 2
          }
        ]
      }
    ],
