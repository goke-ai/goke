  "chapter": {
    "number": 23,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan Ayuba ya amsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ko a yau, ina kuka mai zafi;",
            "poem": 1
          },
          {
            "text": "hannunsa yana da nauyi duk da nishin da nake yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Da a ce na san inda zan same shi;",
            "poem": 1
          },
          {
            "text": "da a ce zan iya zuwa wurin da yake zama!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zan kai damuwata wurinsa",
            "poem": 1
          },
          {
            "text": "in yi gardama da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zan nemi in san abin da zai ce mini,",
            "poem": 1
          },
          {
            "text": "in kuma auna abin da zai ce mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zai yi gardama da ni da ikonsa mai girma?",
            "poem": 1
          },
          {
            "text": "Babu, ba zai zarge ni da laifi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Mai adalci ne zai kawo ƙara a wurinsa,",
            "poem": 1
          },
          {
            "text": "kuma zan samu kuɓuta daga wurin mai shari’an nan har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Amma in na je gabas, ba ya wurin;",
            "poem": 1
          },
          {
            "text": "in na je yamma, ba zan same shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sa’ad da yake aiki a arewa, ba ni ganinsa;",
            "poem": 1
          },
          {
            "text": "sa’ad da ya juya zuwa kudu, ba na ganinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Amma ya san hanyar da nake bi;",
            "poem": 1
          },
          {
            "text": "sa’ad da ya gwada ni zan fito kamar zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ƙafafuna suna bin ƙafafunsa kurkusa;",
            "poem": 1
          },
          {
            "text": "na bi hanyarsa ba tare da na juya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ban fasa bin dokokin da ya bayar ba;",
            "poem": 1
          },
          {
            "text": "na riƙe maganarsa da muhimmanci fiye da abincin yau da gobe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Amma ya tsaya shi kaɗai, kuma wa ya isa yă ja da shi?",
            "poem": 1
          },
          {
            "text": "Yana yin abin da yake so.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yana yi mini abin da ya shirya yă yi mini,",
            "poem": 1
          },
          {
            "text": "kuma yana da sauran irinsu a ajiye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Shi ya sa na tsorata a gabansa;",
            "poem": 1
          },
          {
            "text": "sa’ad da na yi tunanin wannan duka, nakan ji tsoronsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Allah ya sa zuciyata ta yi sanyi;",
            "poem": 1
          },
          {
            "text": "Maɗaukaki ya tsorata ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Duk da haka duhun bai sa in yi shiru ba,",
            "poem": 1
          },
          {
            "text": "duhun da ya rufe mini fuska.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
