  "chapter": {
    "number": 40,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ubangiji ya ce wa Ayuba,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Mai neman sa wa wani laifi zai iya ja da Maɗaukaki?",
            "poem": 1
          },
          {
            "text": "Bari mai tuhumar Allah yă amsa masa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          "Sai Ayuba ya amsa wa Ubangiji,"
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ai, ni ba a bakin kome nake ba ne, ta yaya zan iya amsa maka?",
            "poem": 1
          },
          {
            "text": "Na rufe bakina da hannuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na yi magana sau ɗaya amma ba ni da amsa,",
            "poem": 1
          },
          {
            "text": "sau biyu, amma ba zan ƙara cewa kome ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          "Sa’an nan Ubangiji ya yi wa Ayuba magana ta cikin guguwa,"
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ka tashi tsaye ka tsaya da ƙarfi kamar namiji;",
            "poem": 1
          },
          {
            "text": "zan yi maka tambaya",
            "poem": 2
          },
          {
            "text": "kuma za ka amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Ko za ka ƙi yarda da shari’ata?",
            "poem": 1
          },
          {
            "text": "Za ka ba ni laifi don ka nuna kai marar laifi ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ko hannunka irin na Allah ne,",
            "poem": 1
          },
          {
            "text": "kuma ko muryarka za tă iya tsawa kamar ta Allah?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sai ka yi wa kanka ado da ɗaukaka da girma,",
            "poem": 1
          },
          {
            "text": "ka yafa daraja da muƙami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka saki fushinka,",
            "poem": 1
          },
          {
            "text": "ka dubi dukan wani mai girman kai ka wulaƙanta shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka dubi duk wani mai girman kai ka ƙasƙantar da shi,",
            "poem": 1
          },
          {
            "text": "ka tattake mugaye a inda ka tsaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka bizne su duka tare",
            "poem": 1
          },
          {
            "text": "ka rufe fuskokinsu a cikin kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sa’an nan ni kaina zan shaida maka cewa",
            "poem": 1
          },
          {
            "text": "hannun damanka zai iya cetonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Dubi dorina,",
            "poem": 1
          },
          {
            "text": "wadda na halicce ku tare",
            "poem": 2
          },
          {
            "text": "kuma ciyawa take ci kamar sa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ga shi ƙarfinta yana a ƙugunta",
            "poem": 1
          },
          {
            "text": "ikonta yana cikin tsokar cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Wutsiyarta tana da ƙarfi kamar itacen al’ul;",
            "poem": 1
          },
          {
            "text": "jijiyoyin cinyoyinta suna haɗe a wuri ɗaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ƙasusuwanta bututun tagulla ne,",
            "poem": 1
          },
          {
            "text": "haƙarƙarinta kamar sandunan ƙarfe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Tana ta farko cikin ayyukan Allah,",
            "poem": 1
          },
          {
            "text": "Mahaliccinta kaɗai yake iya tunkarar ta da takobi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Tuddai su suke tanada mata abinci",
            "poem": 1
          },
          {
            "text": "a inda duk namun jeji suke wasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Tana kwanciya a ƙarƙashin inuwar itacen lotus",
            "poem": 1
          },
          {
            "text": "ta ɓuya cikin kyauro da fadama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Inuwa ta rufe ta da ƙaddaji,",
            "poem": 1
          },
          {
            "text": "itatuwan wardi na rafi, sun kewaye ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sa’ad da kogi ya cika yana hauka, ba tă damu ba;",
            "poem": 1
          },
          {
            "text": "ba abin da zai same ta ko da a gaban bakinta Urdun yake wucewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ko akwai wanda zai iya kama ta ba ta kallo,",
            "poem": 1
          },
          {
            "text": "ko kuma a kama ta da tarko a huda hancinta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
