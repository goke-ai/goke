  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "Ayuba ya yi magana"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Bayan wannan Ayuba ya buɗe baki ya la’anta ranar da aka haife shi."
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "Ayuba ya ce,"
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“A hallaka ranar da aka haife ni,",
            "poem": 1
          },
          {
            "text": "da kuma daren da aka ce, ‘An haifi jariri namiji!’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari ranan nan ta zama duhu;",
            "poem": 1
          },
          {
            "text": "kada Allah yă kula da ita;",
            "poem": 2
          },
          {
            "text": "kada rana tă yi haske a wannan rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari duhu da inuwa mai duhu ta sāke rufe ta;",
            "poem": 1
          },
          {
            "text": "gizagizai kuma su rufe ta;",
            "poem": 2
          },
          {
            "text": "duhu kuma ya rufe haskenta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari duhu mai yawa yă rufe daren nan;",
            "poem": 1
          },
          {
            "text": "kada a haɗa ta cikin kwanakin shekara,",
            "poem": 2
          },
          {
            "text": "ko kuma cikin kwanakin watanni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bari daren yă zama marar amfani;",
            "poem": 1
          },
          {
            "text": "kada a ji wata sowa ta farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari waɗanda suke la’anta ranaku su la’anta wannan rana",
            "poem": 1
          },
          {
            "text": "su waɗanda suke umartar dodon ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bari taurarinta na safe su zama duhu;",
            "poem": 1
          },
          {
            "text": "bari ranar tă yi ta jiran ganin haske",
            "poem": 2
          },
          {
            "text": "amma kada tă gani,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "gama ba tă hana uwata ɗaukar cikina,",
            "poem": 1
          },
          {
            "text": "don ta hana ni shan wahalan nan ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Me ya sa ban mutu ba da za a haife ni,",
            "poem": 1
          },
          {
            "text": "ko kuma in mutu sa’ad da ana haihuwata ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Me ya sa aka haife ni,",
            "poem": 1
          },
          {
            "text": "aka tanada nono na sha na rayu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Da yanzu ina kwance cikin salama;",
            "poem": 1
          },
          {
            "text": "da ina barcina cikin salama",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "tare da sarakuna da mashawarta a cikin ƙasa,",
            "poem": 1
          },
          {
            "text": "waɗanda suka gina wa kansu wuraren da yanzu duk sun rushe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "da shugabanni waɗanda suke da zinariya,",
            "poem": 1
          },
          {
            "text": "waɗanda suka cika gidajensu da azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko kuma don me ba a ɓoye ni a cikin ƙasa kamar jaririn da aka haifa ba rai ba,",
            "poem": 1
          },
          {
            "text": "kamar jaririn da bai taɓa ganin hasken rana ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "A wurin mugaye za su daina yin mugunta,",
            "poem": 1
          },
          {
            "text": "gajiyayyu kuma za su huta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Waɗanda aka daure za su sami jin daɗin;",
            "poem": 1
          },
          {
            "text": "an sake su ba za su sāke jin ana tsawata masu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Manyan da ƙanana suna a can,",
            "poem": 1
          },
          {
            "text": "bawa kuma ya sami ’yanci daga wurin maigidansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Don me ake ba da haske ga waɗanda suke cikin ƙunci,",
            "poem": 1
          },
          {
            "text": "rai kuma ga masu ɗacin rai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "ga waɗanda suke neman mutuwa amma ba su samu ba,",
            "poem": 1
          },
          {
            "text": "waɗanda suke nemanta kamar wani abu mai daraja a ɓoye,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "waɗanda suke farin ciki",
            "poem": 1
          },
          {
            "text": "sa’ad da suka kai kabari?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Don me aka ba mutum rai,",
            "poem": 1
          },
          {
            "text": "mutumin da bai san wani abu game da kansa ba,",
            "poem": 2
          },
          {
            "text": "mutumin da Allah ya kange shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Baƙin ciki ya ishe ni maimakon abinci;",
            "poem": 1
          },
          {
            "text": "ina ta yin nishi ba fasawa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Abin da nake tsoro ya faru da ni;",
            "poem": 1
          },
          {
            "text": "abin da ba na so ya same ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ba ni da salama, ba natsuwa;",
            "poem": 1
          },
          {
            "text": "ba ni da hutu, sai wahala kawai.”",
            "poem": 2
          }
        ]
      }
    ],
