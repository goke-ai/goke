  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "“Mutum bai sha wahalar aiki ba a duniya?",
            "poem": 1
          },
          {
            "text": "Rayuwarsa ba kamar ta wanda aka yi hayarsa ba ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar yadda bawa yakan jira yamma ta yi,",
            "poem": 1
          },
          {
            "text": "ko kuma kamar yadda wanda aka yi hayarsa yakan jira a biya shi kuɗin aikin da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Saboda haka rabona shi ne watanni na zama banza,",
            "poem": 1
          },
          {
            "text": "kowane dare kuwa sai ɓacin rai nake samu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Lokacin da na kwanta ina tunani, ‘Har sai yaushe zan tashi?’",
            "poem": 1
          },
          {
            "text": "Gari ya ƙi wayewa, ina ta jujjuyawa har safe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Jikina duk tsutsotsi da ƙuraje sun rufe shi,",
            "poem": 1
          },
          {
            "text": "fatar jikina ta ruɓe tana fitar da ruwan miki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Kwanakina suna wucewa da sauri, fiye da yadda ƙoshiyar masaƙa take wucewa da sauri,",
            "poem": 1
          },
          {
            "text": "za su kawo ga ƙarshe ba bege.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka tuna, ya Allah, raina numfashi ne kawai;",
            "poem": 1
          },
          {
            "text": "idanuna ba za su taɓa sāke ganin farin ciki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Idanun da suke ganina yanzu ba za su sāke ganina ba;",
            "poem": 1
          },
          {
            "text": "za ku neme ni amma ba za ku same ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kamar yadda girgije yakan ɓace yă tafi,",
            "poem": 1
          },
          {
            "text": "haka mutum yake shige zuwa kabari ba kuwa zai dawo ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba zai taɓa zuwa gidansa ba;",
            "poem": 1
          },
          {
            "text": "ba za a sāke san da shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Saboda haka ba zan yi shiru ba;",
            "poem": 1
          },
          {
            "text": "zan yi magana cikin ɓacin raina,",
            "poem": 2
          },
          {
            "text": "zan nuna ɓacin raina cikin ruhu, cikin ƙuncin raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ni teku ne, ko kuwa dodon ruwa,",
            "poem": 1
          },
          {
            "text": "don me kake tsaro na?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Lokacin da nake zato zan sami salama",
            "poem": 1
          },
          {
            "text": "in na kwanta a gadona don in huta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "duk da haka kana ba ni tsoro da mafarke-mafarke,",
            "poem": 1
          },
          {
            "text": "kana tsorata ni da wahayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Na gwammace a shaƙe ni in mutu",
            "poem": 1
          },
          {
            "text": "maimakon in kasance cikin wannan jiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba na so in zauna da rai; ba zan rayu ba har abada.",
            "poem": 1
          },
          {
            "text": "Ku rabu da ni; rayuwata ba ta da amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“Mene ne mutum har da ka kula da shi haka,",
            "poem": 1
          },
          {
            "text": "har ka mai da hankali a kansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "har kake duba shi kowace safiya,",
            "poem": 1
          },
          {
            "text": "kake kuma gwada shi koyaushe?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ba za ka ɗan daina kallo na ba",
            "poem": 1
          },
          {
            "text": "ko ka rabu da ni na ɗan lokaci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "In na yi zunubi, me na yi maka,",
            "poem": 1
          },
          {
            "text": "kai mai lura da mutane?",
            "poem": 2
          },
          {
            "text": "Don me ka sa ni a gaba?",
            "poem": 1
          },
          {
            "text": "Na zame maka kaya mai nauyi ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Me ya sa ba za ka gafarta mini laifofina ba?",
            "poem": 1
          },
          {
            "text": "Gama na kusa kwantawa cikin ƙasa;",
            "poem": 2
          },
          {
            "text": "za ka neme ni,",
            "poem": 1
          },
          {
            "text": "amma ba za ka same ni ba.”",
            "poem": 2
          }
        ]
      }
    ],
