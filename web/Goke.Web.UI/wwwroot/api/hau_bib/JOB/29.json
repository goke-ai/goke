  "chapter": {
    "number": 29,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ayuba ya ci gaba da jawabinsa,"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Da ma ina nan lokacin da ya wuce baya can,",
            "poem": 1
          },
          {
            "text": "kwanakin da Allah yake lura da ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "lokacin da fitilarsa take haske a kaina",
            "poem": 1
          },
          {
            "text": "na yi tafiya cikin duhu tare da haskensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kwanakin da nake tasowa,",
            "poem": 1
          },
          {
            "text": "lokacin da abokantakar Allah ta sa wa gidana albarka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "lokacin da Maɗaukaki yana tare da ni,",
            "poem": 1
          },
          {
            "text": "kuma ’ya’yana suna kewaye da ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "lokacin da ake zuba madara a inda nake takawa,",
            "poem": 1
          },
          {
            "text": "duwatsu kuma suna ɓulɓulo mini man zaitun.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Sa’ad da na je ƙofar birni na zauna",
            "poem": 1
          },
          {
            "text": "a bainin jama’a,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "matasan da suka gan ni sukan ja gefe",
            "poem": 1
          },
          {
            "text": "tsofaffi kuma suka tashi tsaye;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "sarakuna suka yi shiru",
            "poem": 1
          },
          {
            "text": "suka rufe bakunansu da hannuwansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Muryar manya ta yi tsit",
            "poem": 1
          },
          {
            "text": "harshensu ya manne a rufin bakunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Duk wanda ya ji ni ya yaba mini",
            "poem": 1
          },
          {
            "text": "waɗanda suka gan ni kuma sun amince da ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "domin na ceci matalauta waɗanda suka nemi taimako,",
            "poem": 1
          },
          {
            "text": "da marasa mahaifi waɗanda ba su da wanda zai taimake su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mutumin da yake bakin mutuwa ya sa mini albarka.",
            "poem": 1
          },
          {
            "text": "Na faranta wa gwauruwa zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Na yafa adalci ya zama suturata;",
            "poem": 1
          },
          {
            "text": "gaskiya ita ce rigata da rawanina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ni ne idon makafi",
            "poem": 1
          },
          {
            "text": "kuma ƙafa ga guragu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ni mahaifi ne ga masu bukata;",
            "poem": 1
          },
          {
            "text": "na tsaya wa baƙo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Na karya ƙarfin mugaye",
            "poem": 1
          },
          {
            "text": "na ƙwato waɗanda suke riƙe da haƙoransu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Na yi tunani cewa, ‘Zan mutu a cikin gidana,",
            "poem": 1
          },
          {
            "text": "kwanakina da yawa kamar turɓayar ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Jijiyoyina za su kai cikin ruwa,",
            "poem": 1
          },
          {
            "text": "kuma raɓa za tă kwanta a rassana dukan dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ɗaukakata za tă kasance tare da ni garau,",
            "poem": 1
          },
          {
            "text": "bakana koyaushe sabo ne a hannuna.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Mutane suna mai da hankali su saurare ni,",
            "poem": 1
          },
          {
            "text": "suna yin shiru don su ji shawarata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Bayan da na yi magana, ba su ƙara ce kome ba.",
            "poem": 1
          },
          {
            "text": "Maganata ta shige su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sukan jira ni kamar yadda ake jiran ruwan sama.",
            "poem": 1
          },
          {
            "text": "Sukan sha daga cikin maganganuna kamar mai shan ruwan bazara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sa’ad da na yi musu murmushi da ƙyar sukan yarda;",
            "poem": 1
          },
          {
            "text": "hasken fuskata yana da daraja a gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Na zaɓar masu inda za su bi na kuma zauna kamar sarkinsu;",
            "poem": 1
          },
          {
            "text": "na zauna kamar sarki a cikin rundunansu;",
            "poem": 2
          },
          {
            "text": "ina nan kamar mai yi wa masu makoki ta’aziyya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
