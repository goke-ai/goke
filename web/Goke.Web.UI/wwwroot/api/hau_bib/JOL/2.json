  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "heading",
        "content": [
          "Rundunar fāra"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku busa ƙaho a cikin Sihiyona;",
            "poem": 1
          },
          {
            "text": "ku yi karar amo a tsaunina mai tsarki.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Bari dukan mazaunan ƙasar su yi rawan jiki,",
            "poem": 1
          },
          {
            "text": "gama ranar Ubangiji tana zuwa.",
            "poem": 2
          },
          {
            "text": "Tana gab da faruwa",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "rana ce ta baƙin duhu ƙirin,",
            "poem": 1
          },
          {
            "text": "ranar gizagizai ce baƙi ƙirin.",
            "poem": 2
          },
          {
            "text": "Babbar rundunar mayaƙa mai ƙarfi tana zuwa",
            "poem": 1
          },
          {
            "text": "kamar ketowar alfijir a kan duwatsu",
            "poem": 2
          },
          {
            "text": "yadda ba a taɓa ganin irinta ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa za a ƙara ganin irinta ba har tsararraki masu zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "A gabansu wuta tana ci,",
            "poem": 1
          },
          {
            "text": "a bayansu ga harshen wuta yana ci,",
            "poem": 2
          },
          {
            "text": "A gabansu ƙasa ta yi kamar gonar Eden,",
            "poem": 1
          },
          {
            "text": "a bayansu kuma jeji ne wofi,",
            "poem": 2
          },
          {
            "text": "babu abin da ya kuɓuce musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Suna da kamannin dawakai;",
            "poem": 1
          },
          {
            "text": "suna gudu kamar dokin yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Da motsi kamar na kekunan yaƙi",
            "poem": 1
          },
          {
            "text": "sun tsallake ƙwanƙolin duwatsu,",
            "poem": 2
          },
          {
            "text": "kamar ƙarar harshen wuta mai cin tattaka,",
            "poem": 1
          },
          {
            "text": "kamar runduna mai ƙarfi wadda ta ja dāgār yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Da ganinsu, al’ummai sun kamu da azaba;",
            "poem": 1
          },
          {
            "text": "kowace fuska ta yanƙwane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sukan auka kamar jarumawa;",
            "poem": 1
          },
          {
            "text": "sukan hau katanga kamar sojoji.",
            "poem": 2
          },
          {
            "text": "Kowa yana takawa bisa ga tsari,",
            "poem": 1
          },
          {
            "text": "ba mai kaucewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ba sa turin juna,",
            "poem": 1
          },
          {
            "text": "kowane yakan miƙe gaba.",
            "poem": 2
          },
          {
            "text": "Sukan kutsa cikin abokan gāba",
            "poem": 1
          },
          {
            "text": "ba mai tsai da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sukan ruga cikin birni,",
            "poem": 1
          },
          {
            "text": "suna gudu a kan katanga.",
            "poem": 2
          },
          {
            "text": "Sukan hau gidaje,",
            "poem": 1
          },
          {
            "text": "sukan shiga ta tagogi kamar ɓarayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "A gabansu duniya takan girgiza,",
            "poem": 1
          },
          {
            "text": "sararin sama kuma yakan jijjigu,",
            "poem": 2
          },
          {
            "text": "rana da wata su yi duhu,",
            "poem": 1
          },
          {
            "text": "taurari kuma ba sa ba da haske.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji ya yi tsawa",
            "poem": 1
          },
          {
            "text": "wa shugaban mayaƙansa;",
            "poem": 2
          },
          {
            "text": "sojojinsa sun fi a ƙirge",
            "poem": 1
          },
          {
            "text": "masu ƙarfi ne kuma su waɗanda suke biyayya da umarninsa.",
            "poem": 2
          },
          {
            "text": "Ranar Ubangiji da girma take;",
            "poem": 1
          },
          {
            "text": "mai banrazana.",
            "poem": 1
          },
          {
            "text": "Wa zai iya jure mata?",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ku kyakkece zuciyarku"
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Ko yanzu”, in ji Ubangiji,",
            "poem": 1
          },
          {
            "text": "“Ku juyo gare ni da dukan zuciyarku,",
            "poem": 2
          },
          {
            "text": "da azumi da kuka da makoki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ku kyakkece zuciyarku",
            "poem": 1
          },
          {
            "text": "ba rigunanku ba.",
            "poem": 2
          },
          {
            "text": "Ku juyo ga Ubangiji Allahnku,",
            "poem": 1
          },
          {
            "text": "gama shi mai alheri ne mai tausayi kuma",
            "poem": 2
          },
          {
            "text": "mai jinkirin fushi da yawan ƙauna,",
            "poem": 1
          },
          {
            "text": "yakan kuma janye daga aika da bala’i.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Wa ya sani? Ko zai juya yă kuma ji tausayi",
            "poem": 1
          },
          {
            "text": "yă sa mana albarka",
            "poem": 2
          },
          {
            "text": "ta wurin hadaya ta gari da hadaya ta sha",
            "poem": 1
          },
          {
            "text": "wa Ubangiji Allahnku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "A busa ƙaho a Sihiyona,",
            "poem": 1
          },
          {
            "text": "a yi shelar azumi mai tsarki,",
            "poem": 2
          },
          {
            "text": "a kira tsarkakan taro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "A tattara mutane;",
            "poem": 1
          },
          {
            "text": "ku tsarkake taron;",
            "poem": 2
          },
          {
            "text": "ku kawo dattawa wuri ɗaya;",
            "poem": 1
          },
          {
            "text": "ku kuma tara yara,",
            "poem": 2
          },
          {
            "text": "da waɗanda suke shan mama.",
            "poem": 2
          },
          {
            "text": "Bari ango yă bar ɗakinsa",
            "poem": 1
          },
          {
            "text": "amarya kuma lolokinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Bari firistocin da suke yin hidima a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "su yi kuka tsakanin filin haikali da bagade.",
            "poem": 2
          },
          {
            "text": "Bari su ce, “Ka cece mutanenka, ya Ubangiji.",
            "poem": 1
          },
          {
            "text": "Kada ka bar gādonka yă zama abin dariya,",
            "poem": 2
          },
          {
            "text": "da abin ba’a a cikin al’ummai.",
            "poem": 2
          },
          {
            "text": "Me zai sa a ce a cikin mutane, ‘Ina Allahnsu yake?’ ”",
            "poem": 1
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Amsar Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ta haka Ubangiji zai yi kishin ƙasarsa",
            "poem": 1
          },
          {
            "text": "yă kuma ji tausayin mutanensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          "Ubangiji zai amsa",
          {
            "noteId": 856
          },
          "musu ya ce,",
          {
            "text": "“Ina aika da hatsi, sabon ruwan inabi, da mai,",
            "poem": 1
          },
          {
            "text": "isashe da zai ƙosar da ku sosai;",
            "poem": 2
          },
          {
            "text": "ba kuma zan ƙara maishe ku",
            "poem": 1
          },
          {
            "text": "abin dariya ga al’ummai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Zan kori sojojin arewa nesa da ku,",
            "poem": 1
          },
          {
            "text": "in tura su cikin busasshiyar ƙasa marar amfani kuma,",
            "poem": 2
          },
          {
            "text": "kuma da sawunsu na gaba zan tura su zuwa gabashin teku",
            "poem": 1
          },
          {
            "noteId": 857
          },
          {
            "text": "da kuma sawunsu na baya tura su zuwa yammanci a Bahar Rum.",
            "poem": 2
          },
          {
            "noteId": 858
          },
          {
            "text": "Warinsu kuma zai bazu;",
            "poem": 1
          },
          {
            "text": "ɗoyinsu zai tashi.”",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Tabbatacce ya yi al’amura masu girma.",
            "poem": 1
          },
          {
            "noteId": 859
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kada ki ji tsoro, ya ƙasa;",
            "poem": 2
          },
          {
            "text": "ki yi murna ki kuma yi farin ciki.",
            "poem": 2
          },
          {
            "text": "Tabbatacce Ubangiji ya yi abubuwa masu girma.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Kada ku ji tsoro, ya ku namun jeji,",
            "poem": 2
          },
          {
            "text": "gama wuraren kiwo sun yi kore shar.",
            "poem": 2
          },
          {
            "text": "Itatuwa suna ba da ’ya’yansu;",
            "poem": 1
          },
          {
            "text": "itacen ɓaure da na inabi suna ba da amfaninsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ku yi murna, ya ku mutanen Sihiyona,",
            "poem": 1
          },
          {
            "text": "ku yi farin ciki cikin Ubangiji Allahnku,",
            "poem": 2
          },
          {
            "text": "gama ya ba ku",
            "poem": 1
          },
          {
            "text": "ruwan bazara cikin adalci.",
            "poem": 2
          },
          {
            "noteId": 860
          },
          {
            "text": "Yakan aika muku yayyafi a yalwace,",
            "poem": 1
          },
          {
            "text": "na bazara da na kaka, kamar dā.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Masussukai za su cika da hatsi;",
            "poem": 1
          },
          {
            "text": "randuna za su cika da sabon ruwan inabi da mai suna zuba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "“Zan mayar muku da abin da fāra suka ci a waɗannan shekaru",
            "poem": 1
          },
          {
            "text": "waɗanda ɗango da fāra masu gaigayewa,",
            "poem": 2
          },
          {
            "text": "da kuma sauran fāra da tarin fāra",
            "poem": 2
          },
          {
            "noteId": 861
          },
          {
            "text": "babban mayaƙan da na aika don su fāɗa muku.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Za ku sami a wadace ku ci, har sai kun ƙoshi,",
            "poem": 1
          },
          {
            "text": "za ku kuma yabi sunan Ubangiji Allahnku,",
            "poem": 2
          },
          {
            "text": "wanda ya yi muku ayyukan banmamaki;",
            "poem": 2
          },
          {
            "text": "mutanena ba za su ƙara shan kunya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Sa’an nan za ku sani ina cikin Isra’ila,",
            "poem": 1
          },
          {
            "text": "cewa ni ne Ubangiji Allahnku,",
            "poem": 2
          },
          {
            "text": "babu wani kuma;",
            "poem": 2
          },
          {
            "text": "mutanena ba za su ƙara shan kunya ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ranar Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "“Daga baya kuma,",
            "poem": 1
          },
          {
            "text": "zan zuba Ruhuna a bisan dukan mutane.",
            "poem": 2
          },
          {
            "text": "’Ya’yanku maza da mata za su yi annabci,",
            "poem": 1
          },
          {
            "text": "tsofaffinku za su yi mafarkai,",
            "poem": 2
          },
          {
            "text": "matasanku za su ga wahayoyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Har ma a bisan bayina, maza da mata,",
            "poem": 1
          },
          {
            "text": "zan zuba Ruhuna a kwanakin nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Zan nuna abubuwan banmamaki a cikin sammai",
            "poem": 1
          },
          {
            "text": "da kuma a kan duniya,",
            "poem": 2
          },
          {
            "text": "za a ga jini da wuta da murtukewar hayaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Rana za tă duhunta",
            "poem": 1
          },
          {
            "text": "wata kuma yă zama jini",
            "poem": 2
          },
          {
            "text": "kafin isowar babbar ranan nan mai banrazana ta Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Amma dukan waɗanda suka nemi",
            "poem": 1
          },
          {
            "text": "Ubangiji za su tsira.",
            "poem": 2
          },
          {
            "text": "Kamar yadda Ubangiji ya ce,",
            "poem": 1
          },
          {
            "text": "gama a Dutsen Sihiyona da Urushalima",
            "poem": 2
          },
          {
            "text": "akwai ceto,",
            "poem": 1
          },
          {
            "text": "a cikin waɗannan da Ubangiji ya kira.",
            "poem": 2
          }
        ]
      }
    ],
