  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Maganar Ubangiji wadda ta zo wurin Yowel ɗan Fetuwel."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "heading",
        "content": [
          "Mamayar da fāra ta yi"
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku ji wannan, ku dattawa,",
            "poem": 1
          },
          {
            "text": "ku kasa kunne, dukan waɗanda suke zaune a ƙasar.",
            "poem": 2
          },
          {
            "text": "Ko wani abu makamancin haka ya taɓa faruwa a kwanakinku",
            "poem": 1
          },
          {
            "text": "ko a kwanakin kakanninku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku faɗa wa ’ya’yanku,",
            "poem": 1
          },
          {
            "text": "bari kuma ’ya’yanku su faɗa wa ’ya’yansu,",
            "poem": 2
          },
          {
            "text": "’ya’yansu kuma su faɗa wa tsara ta gaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Abin da ɗango ya bari",
            "poem": 1
          },
          {
            "text": "fāri masu girma sun cinye;",
            "poem": 2
          },
          {
            "text": "abin da fāri masu girma suka bari,",
            "poem": 1
          },
          {
            "text": "burduduwa ta cinye;",
            "poem": 2
          },
          {
            "text": "abin da burduduwa ta bari sauran kwari",
            "poem": 1
          },
          {
            "noteId": 850
          },
          {
            "text": "sun cinye.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku farka, ku bugaggu, ku yi kuka!",
            "poem": 1
          },
          {
            "text": "Ku yi kuka da ƙarfi, ku dukan mashayan ruwan inabi;",
            "poem": 2
          },
          {
            "text": "ku yi kuka mai ƙarfi saboda sabon ruwan inabi,",
            "poem": 1
          },
          {
            "text": "gama an riga an ƙwace ta daga leɓunanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Wata al’umma ta mamaye ƙasata,",
            "poem": 1
          },
          {
            "text": "tana da ƙarfi ba ta kuma ƙidayuwa;",
            "poem": 2
          },
          {
            "text": "tana da haƙoran zaki,",
            "poem": 1
          },
          {
            "text": "da zagar zakanya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ta mayar da kuringar inabina kango",
            "poem": 1
          },
          {
            "text": "ta kuma lalatar da itatuwan ɓaurena.",
            "poem": 2
          },
          {
            "text": "Ta ɓamɓare bayansu duka",
            "poem": 1
          },
          {
            "text": "ta kuma jefar da su",
            "poem": 2
          },
          {
            "text": "ta bar rassansu fari fat.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku yi makoki kamar budurwa",
            "poem": 1
          },
          {
            "noteId": 851
          },
          {
            "text": "a cikin tsummoki",
            "poem": 2
          },
          {
            "text": "tana baƙin ciki domin mijinta",
            "poem": 1
          },
          {
            "noteId": 852
          },
          {
            "text": "na ƙuruciyarta.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Hadayun hatsi da hadayun sha",
            "poem": 1
          },
          {
            "text": "an yanke su daga gidan Ubangiji.",
            "poem": 2
          },
          {
            "text": "Firistoci suna makoki,",
            "poem": 1
          },
          {
            "text": "su waɗanda suke yi wa Ubangiji hidima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Filaye sun zama marasa amfani,",
            "poem": 1
          },
          {
            "text": "ƙasa ta bushe;",
            "poem": 2
          },
          {
            "noteId": 853
          },
          {
            "text": "an lalatar da hatsi,",
            "poem": 1
          },
          {
            "text": "sabon ruwan inabin ya bushe,",
            "poem": 2
          },
          {
            "text": "mai kuma ba amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku fid da zuciya, ku manoma,",
            "poem": 1
          },
          {
            "text": "ku yi ihu, ku masu noma inabi;",
            "poem": 2
          },
          {
            "text": "ku yi baƙin ciki saboda alkama da sha’ir,",
            "poem": 1
          },
          {
            "text": "saboda an lalata girbin filaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kuringar inabin ta bushe",
            "poem": 1
          },
          {
            "text": "itacen ɓaure kuma ya yi yaushi,",
            "poem": 2
          },
          {
            "text": "’ya’yan rumman, itacen dabino da itacen gawasa,",
            "poem": 1
          },
          {
            "text": "dukan itatuwan filaye, sun bushe.",
            "poem": 2
          },
          {
            "text": "Tabbatacce farin cikin ’yan adam",
            "poem": 1
          },
          {
            "text": "ya bushe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Kira don makoki"
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ku sa tsummoki, ya firistoci, ku yi makoki;",
            "poem": 1
          },
          {
            "text": "ku yi ihu, ku da kuke yin hidima a gaban bagade.",
            "poem": 2
          },
          {
            "text": "Zo, ku kwana saye da tsummoki,",
            "poem": 1
          },
          {
            "text": "ku waɗanda kuke yi wa Allahna hidima,",
            "poem": 2
          },
          {
            "text": "gama an yanke hadayun hatsi da hadayun sha",
            "poem": 1
          },
          {
            "text": "daga gidan Allahnku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ku yi shelar azumi mai tsarki;",
            "poem": 1
          },
          {
            "text": "ku kira tsarkakan taro.",
            "poem": 2
          },
          {
            "text": "Ku kira dattawa",
            "poem": 1
          },
          {
            "text": "da kuma dukan mazaunan ƙasar",
            "poem": 2
          },
          {
            "text": "zuwa gidan Ubangiji Allahnku,",
            "poem": 1
          },
          {
            "text": "ku kuma yi kuka ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kaito saboda wannan rana!",
            "poem": 1
          },
          {
            "text": "Gama ranar Ubangiji ta kusa,",
            "poem": 2
          },
          {
            "text": "za tă zo kamar hallaka daga wurin Maɗaukaki.",
            "poem": 1
          },
          {
            "noteId": 854
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba a yanke abinci",
            "poem": 1
          },
          {
            "text": "a idanunmu,",
            "poem": 2
          },
          {
            "text": "farin ciki da kuma murna",
            "poem": 1
          },
          {
            "text": "daga gidan Allahnmu ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Iri suna ta yanƙwanewa",
            "poem": 1
          },
          {
            "text": "a busasshiyar ƙasa",
            "poem": 2
          },
          {
            "noteId": 855
          },
          {
            "text": "Ɗakunan ajiya sun lalace,",
            "poem": 1
          },
          {
            "text": "an rurrushe rumbunan hatsin,",
            "poem": 2
          },
          {
            "text": "gama hatsi ya ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ji yadda dabbobi suke nishi!",
            "poem": 1
          },
          {
            "text": "Garkunan shanu sun ruɗe",
            "poem": 2
          },
          {
            "text": "saboda ba su da ciyawa,",
            "poem": 1
          },
          {
            "text": "har garkunan tumaki ma suna shan wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "A gare ka, ya Ubangiji, nake kira,",
            "poem": 1
          },
          {
            "text": "gama wuta ta cinye wurin kiwo",
            "poem": 2
          },
          {
            "text": "harshen wuta kuma ya ƙone dukan itatuwan jeji.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Har ma namun jeji suna haki gare ka;",
            "poem": 1
          },
          {
            "text": "rafuffuka sun bushe",
            "poem": 2
          },
          {
            "text": "wuta kuma ta cinye wurin kiwo a jeji.",
            "poem": 2
          }
        ]
      }
    ],
