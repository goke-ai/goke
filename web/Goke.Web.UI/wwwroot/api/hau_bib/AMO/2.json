  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Ga abin da Ubangiji ya ce,",
          {
            "text": "“Saboda zunubai uku na Mowab,",
            "poem": 1
          },
          {
            "text": "har guda huɗu ma, ba zan fasa hukunta su ba.",
            "poem": 2
          },
          {
            "text": "Gama ya ƙone ƙasusuwan sarkin Edom",
            "poem": 1
          },
          {
            "text": "suka zama sai ka ce toka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan sa wuta a Mowab",
            "poem": 1
          },
          {
            "text": "da za tă ƙone kagarun Keriyot",
            "poem": 2
          },
          {
            "noteId": 252
          },
          {
            "text": "Mowab za tă gangara cikin hayaniya mai girma",
            "poem": 1
          },
          {
            "text": "cikin kururuwar yaƙi da kuma ƙarar ƙaho.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Zan hallaka mai mulkinta",
            "poem": 1
          },
          {
            "text": "zan kuma kashe shugabanninta.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          "Ga abin da Ubangiji ya ce,",
          {
            "text": "“Saboda zunubai uku na Yahuda,",
            "poem": 1
          },
          {
            "text": "har guda huɗu ma, ba zan fasa hukunta su ba.",
            "poem": 2
          },
          {
            "text": "Gama sun ƙi bin dokar Ubangiji",
            "poem": 1
          },
          {
            "text": "ba su kuma yi biyayya da ƙa’idodinsa ba,",
            "poem": 2
          },
          {
            "text": "domin allolin ƙarya sun ruɗe su,",
            "poem": 1
          },
          {
            "text": "allolin da kakanninsu suka bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zan sa wuta a Yahuda",
            "poem": 1
          },
          {
            "text": "da za tă ƙone kagarun Urushalima.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Hukunci a kan Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          "Ga abin da Ubangiji ya ce,",
          {
            "text": "“Saboda zunubai uku na Isra’ila,",
            "poem": 1
          },
          {
            "text": "har guda huɗu ma, ba zan fasa hukunta su ba.",
            "poem": 2
          },
          {
            "text": "Don sun sayar da adalai waɗanda",
            "poem": 1
          },
          {
            "text": "suka kāsa biyan bashinsu.",
            "poem": 2
          },
          {
            "text": "Sun kuma sayar da matalauta",
            "poem": 1
          },
          {
            "text": "waɗanda bashinsu bai ma kai ko kuɗin bi-labi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sun tattake kawunan matalauta",
            "poem": 1
          },
          {
            "text": "kamar yadda suke taka laka",
            "poem": 2
          },
          {
            "text": "suka kuma danne wa marasa galihu gaskiya.",
            "poem": 2
          },
          {
            "text": "Uba da ɗa su na kwana da yarinya guda,",
            "poem": 1
          },
          {
            "text": "suna kuma ɓata sunana mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Suna kwanciya kurkusa da kowane bagade",
            "poem": 1
          },
          {
            "text": "a kan tufafin da suka karɓe jingina.",
            "poem": 2
          },
          {
            "text": "A gidajen allolinsu",
            "poem": 1
          },
          {
            "text": "sukan sha ruwan inabin da suka karɓo daga wurin waɗanda suka ci wa tara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Na hallaka mutumin Amoriyawa a gabansu,",
            "poem": 1
          },
          {
            "text": "ko da yake ya yi dogo kamar itacen al’ul",
            "poem": 2
          },
          {
            "text": "kuma mai ƙarfi kamar itacen oak.",
            "poem": 2
          },
          {
            "text": "Na hallaka ’ya’yan itatuwansa daga sama,",
            "poem": 1
          },
          {
            "text": "da kuma jijiyoyinsa daga ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Na fitar da ku daga ƙasar Masar,",
            "poem": 1
          },
          {
            "text": "na kuma bishe ku tsawon shekaru arba’in a cikin hamada",
            "poem": 2
          },
          {
            "text": "don in ba ku ƙasar Amoriyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Na kuma tā da annabawa daga cikin ’ya’yanku maza",
            "poem": 1
          },
          {
            "text": "waɗansu kuma su zama keɓaɓɓu daga cikin samarinku.",
            "poem": 2
          },
          {
            "text": "Ba haka ba ne, mutanen Isra’ila?”",
            "poem": 1
          },
          {
            "text": "In ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Amma kuka sa keɓaɓɓun suka sha ruwan inabi",
            "poem": 1
          },
          {
            "text": "kuka kuma umarci annabawa kada su yi annabci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Saboda haka, yanzu zan murƙushe ku",
            "poem": 1
          },
          {
            "text": "kamar yadda amalanke yakan murƙushe sa’ad da aka yi masa labtun hatsi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Masu gudu da sauri ba za su tsira ba,",
            "poem": 1
          },
          {
            "text": "masu ƙarfi ba za su iya yin amfani da ƙarfinsu ba,",
            "poem": 2
          },
          {
            "text": "jarumi kuma ba zai iya ceton ransa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "’Yan baka ba za su iya dāgewa ba,",
            "poem": 1
          },
          {
            "text": "masu saurin gudu ba za su tsira ba",
            "poem": 2
          },
          {
            "text": "mahayin dawakai kuma ba zai tsere da ransa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ko jarumawa mafi jaruntaka",
            "poem": 1
          },
          {
            "text": "za su gudu tsirara a ranan nan,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
