  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "heading",
        "content": [
          "Isra’ila ba ta koma ga Allah ba"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku kasa kunne ga wannan, ya ku shanun Bashan a kan Dutsen Samariya,",
            "poem": 1
          },
          {
            "text": "ku matan da kuke cin zalin matalauta, kuke kuma danne matalauta,",
            "poem": 2
          },
          {
            "text": "kuna kuma ce wa mazanku, “Ku kawo mana abin sha!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji Mai Iko Duka ya rantse da tsarkinsa.",
            "poem": 1
          },
          {
            "text": "“Tabbatacce lokaci yana zuwa",
            "poem": 2
          },
          {
            "text": "da za a jawo ku da ƙugiyoyi,",
            "poem": 1
          },
          {
            "text": "na ƙarshenku za a kama da ƙugiyar kifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Dukanku za ku wuce ta kai tsaye",
            "poem": 1
          },
          {
            "text": "ta inda katangar ta tsage,",
            "poem": 2
          },
          {
            "text": "za a jefar da ku a Harmon,”",
            "poem": 2
          },
          {
            "noteId": 255
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "“Ku tafi Betel ku yi ta aikata zunubi;",
            "poem": 1
          },
          {
            "text": "ku je Gilgal ku ƙara yin zunubi.",
            "poem": 2
          },
          {
            "text": "Ku kawo hadayunku kowace safiya,",
            "poem": 1
          },
          {
            "text": "zakkarku kowace shekara uku.",
            "poem": 2
          },
          {
            "noteId": 256
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku ƙona burodinku mai yisti kamar hadaya ta godiya,",
            "poem": 1
          },
          {
            "text": "ku yi fariya game da hadayunku na yarda rai,",
            "poem": 2
          },
          {
            "text": "ku yi taƙama game da su, ya ku Isra’ilawa,",
            "poem": 1
          },
          {
            "text": "gama abin da kuke jin daɗin aikata ke nan,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji Mai Iko Duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Na bar ku da yunwa",
            "poem": 1
          },
          {
            "noteId": 257
          },
          {
            "text": "a kowace birni,",
            "poem": 1
          },
          {
            "text": "da kuma rashin abinci a kowane gari,",
            "poem": 2
          },
          {
            "text": "duk da haka ba ku juyo gare ni ba,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Na kuma hana muku ruwan sama",
            "poem": 1
          },
          {
            "text": "tun shuke-shuken suna wata uku kafin lokacin girbi.",
            "poem": 2
          },
          {
            "text": "Na sa aka yi ruwan sama a wani gari,",
            "poem": 1
          },
          {
            "text": "sai na hana a yi a wani gari.",
            "poem": 2
          },
          {
            "text": "Wata gona ta sami ruwan sama;",
            "poem": 1
          },
          {
            "text": "wata gona kuma ta bushe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Mutane suna tangaɗi daga gari zuwa gari suna neman ruwa",
            "poem": 1
          },
          {
            "text": "amma ba su sami isashen ruwan sha ba,",
            "poem": 2
          },
          {
            "text": "duk da haka ba ku juyo gare ni ba,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Sau da yawa na ɓata gonakinku",
            "poem": 1
          },
          {
            "text": "da fumfuna da kuma cuta.",
            "poem": 2
          },
          {
            "text": "Fāri suka cinye itatuwanku na inabi da na ɓaure, da na zaitun",
            "poem": 2
          },
          {
            "text": "duk da haka ba ku juyo gare ni ba,”",
            "poem": 1
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "“Na aiko muku annoba",
            "poem": 1
          },
          {
            "text": "yadda na yi a Masar.",
            "poem": 2
          },
          {
            "text": "Na karkashe samarinku da takobi,",
            "poem": 1
          },
          {
            "text": "tare da kamammun dawakanku.",
            "poem": 2
          },
          {
            "text": "Na cika hancinku da warin sansaninku,",
            "poem": 1
          },
          {
            "text": "duk da haka ba ku juyo gare ni ba”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Na hallaka waɗansunku",
            "poem": 1
          },
          {
            "text": "kamar",
            "poem": 2
          },
          {
            "noteId": 258
          },
          {
            "text": "yadda na hallaka Sodom da Gomorra.",
            "poem": 2
          },
          {
            "text": "Kuna kama da itace mai cin wutar da na cire daga cikin wuta,",
            "poem": 1
          },
          {
            "text": "duk da haka ba ku juyo gare ni ba,”",
            "poem": 2
          },
          {
            "text": "in ji Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "“Saboda haka ga abin da zan yi da ku, ya Isra’ila,",
            "poem": 1
          },
          {
            "text": "don kuwa zan yi muku haka,",
            "poem": 2
          },
          {
            "text": "sai ku yi shirin gamuwa da Allahnku, ya Isra’ila.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Shi wanda ya yi duwatsu,",
            "poem": 1
          },
          {
            "text": "ya halicci iska,",
            "poem": 2
          },
          {
            "text": "ya kuma bayyana wa mutum tunaninsa,",
            "poem": 2
          },
          {
            "text": "shi wanda ya juya safiya ta zama duhu",
            "poem": 1
          },
          {
            "text": "yana takawa a wurare masu tsawo na duniya,",
            "poem": 2
          },
          {
            "text": "Ubangiji Allah Maɗaukaki ne sunansa.",
            "poem": 2
          }
        ]
      }
    ],
