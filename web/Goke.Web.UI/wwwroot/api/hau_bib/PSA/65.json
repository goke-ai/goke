  "chapter": {
    "number": 65,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda. Wata waƙa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabo ya dace",
            "poem": 1
          },
          {
            "noteId": 1171
          },
          {
            "text": "da kai, ya Allah, a Sihiyona;",
            "poem": 1
          },
          {
            "text": "a gare ka za mu cika alkawuranmu",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya kai wanda yake jin addu’a",
            "poem": 1
          },
          {
            "text": "a gare ka dukan mutane za su zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da zunubai suka sha ƙarfinmu,",
            "poem": 1
          },
          {
            "text": "ka gafarta",
            "poem": 2
          },
          {
            "noteId": 1172
          },
          {
            "text": "laifofinmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Masu albarka ne waɗanda ka zaɓa",
            "poem": 1
          },
          {
            "text": "ka kawo kusa don su zauna a filayenka!",
            "poem": 2
          },
          {
            "text": "Mun cika da abubuwa masu kyau na gidanka,",
            "poem": 1
          },
          {
            "text": "na haikalinka mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka amsa mana da ayyuka masu banmamaki na adalci,",
            "poem": 1
          },
          {
            "text": "Ya Allah Mai Cetonmu,",
            "poem": 2
          },
          {
            "text": "begen dukan iyakar duniya",
            "poem": 1
          },
          {
            "text": "da kuma na tekuna masu nesa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "wanda ya yi duwatsu ta wurin ikonka,",
            "poem": 1
          },
          {
            "text": "bayan ka kintsa kanka da ƙarfi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "wanda ya kwantar da rurin tekuna,",
            "poem": 1
          },
          {
            "text": "rurin raƙumansu,",
            "poem": 2
          },
          {
            "text": "da kuma tumbatsar al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Waɗanda suke zama can da nesa sukan ji tsoron manyan ayyukanka;",
            "poem": 1
          },
          {
            "text": "inda safe ke haskaka yamma kuma ta shuɗe",
            "poem": 2
          },
          {
            "text": "kakan sa a yi waƙoƙin farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kana kula da ƙasa kana kuma yi mata banruwa;",
            "poem": 1
          },
          {
            "text": "kana azurta ta a yalwace.",
            "poem": 2
          },
          {
            "text": "Rafuffukan Allah sun cika da ruwa",
            "poem": 1
          },
          {
            "text": "don su ba mutane hatsi,",
            "poem": 2
          },
          {
            "text": "don haka ne ka ƙaddara.",
            "poem": 2
          },
          {
            "noteId": 1173
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka kwarara ta da ruwa ka kuma baje kunyoyinta;",
            "poem": 1
          },
          {
            "text": "ka sa ta yi laushi da yayyafi ka kuma albarkaci tsire-tsirenta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Saboda alherinka, ya Allah, an sami kaka mai albarka,",
            "poem": 1
          },
          {
            "text": "amalankenka kuwa sun cika har suna zuba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Makiyayan hamada sun cika har suna zuba;",
            "poem": 1
          },
          {
            "text": "tuddai sun rufu da murna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wurin dausayin kiwo sun rufu da garkuna",
            "poem": 1
          },
          {
            "text": "kwari kuma sun cika da hatsi;",
            "poem": 2
          },
          {
            "text": "suna sowa don farin ciki.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1171,
        "caller": "+",
        "text": "Ko kuwa kan jira; ma’anar Ibraniyanci na wannan kalma ba a tabbatar ba.",
        "reference": {
          "chapter": 65,
          "verse": 1
        }
      },
      {
        "noteId": 1172,
        "caller": "+",
        "text": "Ko kuwa ka yi kafara domin",
        "reference": {
          "chapter": 65,
          "verse": 3
        }
      },
      {
        "noteId": 1173,
        "caller": "+",
        "text": "Ko kuwa don haka ne ka shirya ƙasar",
        "reference": {
          "chapter": 65,
          "verse": 9
        }
      }
    ]
