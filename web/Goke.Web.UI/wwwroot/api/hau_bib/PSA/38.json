  "chapter": {
    "number": 38,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda. Roƙo ne."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, kada ka tsawata mini cikin fushinka",
            "poem": 1
          },
          {
            "text": "ko ka hore ni cikin hasalarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Gama kibiyoyinka sun soke ni,",
            "poem": 1
          },
          {
            "text": "hannunka kuma ya fāɗo a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Saboda hasalarka babu lafiya a jikina;",
            "poem": 1
          },
          {
            "text": "ƙasusuwana ba lafiya saboda zunubina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Laifofina sun mamaye ni",
            "poem": 1
          },
          {
            "text": "kamar nauyin da ya sha ƙarfin ɗauka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Miyakuna sun ruɓe suna kuma wari",
            "poem": 1
          },
          {
            "text": "saboda wawancina na zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "An tanƙware ni aka kuma ƙasƙantar da ni;",
            "poem": 1
          },
          {
            "text": "dukan yini ina ta kuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bayana yana fama da zazzaɓi;",
            "poem": 1
          },
          {
            "text": "babu lafiya a jikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Na gaji sharkaf an kuma ragargaza ni;",
            "poem": 1
          },
          {
            "text": "ina nishi da wahala a cikin zuciyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Dukan bukatata tana a shimfiɗe a gabanka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ajiyar zuciyata ba ta ɓoyuwa daga gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Zuciyata na bugu, ƙarfina kuma ya ƙare,",
            "poem": 1
          },
          {
            "text": "har ma haske ya rabu da idanuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Abokaina da maƙwabtana sun guje ni saboda miyakuna;",
            "poem": 1
          },
          {
            "text": "maƙwabtana ba sa zuwa kusa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Waɗanda suke neman raina sun sa tarkonsu,",
            "poem": 1
          },
          {
            "text": "waɗanda suke so su cuce ni suna zance lalatar da ni;",
            "poem": 2
          },
          {
            "text": "yini sukutum suna ƙulla mini maƙarƙashiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ni kamar kurma ne, wanda ba ya ji,",
            "poem": 1
          },
          {
            "text": "kamar bebe, wanda ba ya iya buɗe bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Na zama kamar mutumin da ba ya ji,",
            "poem": 1
          },
          {
            "text": "wanda bakinsa ba ya iya ba da amsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Na dogara gare ka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "za ka amsa, ya Ubangiji Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Gama na ce, “Kada ka bar su su yi farin ciki a kaina",
            "poem": 1
          },
          {
            "text": "ko su yi kirari a kaina sa’ad da ƙafata ta yi santsi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gama ina gab da fāɗuwa,",
            "poem": 1
          },
          {
            "text": "kuma cikin azaba nake kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Na furta laifina;",
            "poem": 1
          },
          {
            "text": "na damu da zunubina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Da yawa ne masu gāba da ni da ƙarfi;",
            "poem": 1
          },
          {
            "text": "waɗanda suke kina ba dalili sun yi yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Waɗanda suke sāka alherina da mugunta,",
            "poem": 1
          },
          {
            "text": "suna cin zarafina",
            "poem": 2
          },
          {
            "text": "sa’ad da nake bin abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ya Ubangiji, kada ka yashe ni;",
            "poem": 1
          },
          {
            "text": "kada ka yi nesa da ni, ya Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zo da sauri ka taimake ni,",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji Mai Cetona.",
            "poem": 2
          }
        ]
      }
    ],
