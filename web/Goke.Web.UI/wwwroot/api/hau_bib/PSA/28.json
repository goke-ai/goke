  "chapter": {
    "number": 28,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A gare ka nake kira,",
            "poem": 1
          },
          {
            "text": "ya Ubangiji Dutsena;",
            "poem": 2
          },
          {
            "text": "kada ka yi mini kunnen ƙashi.",
            "poem": 2
          },
          {
            "text": "Gama in ka yi shiru,",
            "poem": 1
          },
          {
            "text": "zan zama kamar waɗanda suka gangara rami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka ji kukata ta neman jinƙai",
            "poem": 1
          },
          {
            "text": "yayinda nake kira ka don neman taimako,",
            "poem": 2
          },
          {
            "text": "yayinda nake daga hannuwana",
            "poem": 1
          },
          {
            "text": "wajen Wurinka Mafi Tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Kada ka ja ni tare da mugaye,",
            "poem": 1
          },
          {
            "text": "tare da masu yin mugunta,",
            "poem": 2
          },
          {
            "text": "masu magana kamar ta alheri ce da maƙwabtansu",
            "poem": 1
          },
          {
            "text": "amma suna riƙe da su a zukatansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka sāka musu da ayyukansu",
            "poem": 1
          },
          {
            "text": "da kuma don mugun aikinsu;",
            "poem": 2
          },
          {
            "text": "ka sāka musu saboda abin da hannuwansu suka yi",
            "poem": 1
          },
          {
            "text": "ka kuma mayar musu abin da ya dace da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Da yake ba su kula da ayyukan Ubangiji",
            "poem": 1
          },
          {
            "text": "da abin da hannuwansa suka yi ba,",
            "poem": 2
          },
          {
            "text": "zai rushe su",
            "poem": 1
          },
          {
            "text": "ba kuwa zai ƙara gina su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yabo ya tabbata ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama ya ji kukata na neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ubangiji shi ne ƙarfina da garkuwata;",
            "poem": 1
          },
          {
            "text": "zuciyata ta amince da shi, kuma na sami taimako.",
            "poem": 2
          },
          {
            "text": "Zuciyata ta yi tsalle don farin ciki",
            "poem": 1
          },
          {
            "text": "zan kuwa yi godiya gare shi cikin waƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji shi ne ƙarfin mutanensa,",
            "poem": 1
          },
          {
            "text": "kagarar ceto domin shafaffensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka cece mutanenka ka kuma albarkace gādonka;",
            "poem": 1
          },
          {
            "text": "ka zama mai kiwonsu ka kuma riƙe su har abada.",
            "poem": 2
          }
        ]
      }
    ],
