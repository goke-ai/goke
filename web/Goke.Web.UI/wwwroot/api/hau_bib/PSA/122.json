  "chapter": {
    "number": 122,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa. Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na yi farin ciki tare da waɗanda suka ce da ni,",
            "poem": 1
          },
          {
            "text": "“Bari mu tafi gidan Ubangiji.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ƙafafunmu suna tsaye",
            "poem": 1
          },
          {
            "text": "a ƙofofinki, ya Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "An gina Urushalima kamar birnin",
            "poem": 1
          },
          {
            "text": "da aka yi a harhaɗe wuri guda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "A can ne kabilu suke haurawa,",
            "poem": 1
          },
          {
            "text": "kabilan Ubangiji,",
            "poem": 2
          },
          {
            "text": "don su yabi sunan Ubangiji",
            "poem": 1
          },
          {
            "text": "bisa ga farillan da aka ba wa Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "A can kursiyoyin shari’a yake tsaye,",
            "poem": 1
          },
          {
            "text": "kursiyoyin gidan Dawuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ku yi addu’a don salamar Urushalima,",
            "poem": 1
          },
          {
            "text": "“Bari waɗanda suke ƙaunarki su zauna lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bari salama ta kasance a katangarki",
            "poem": 1
          },
          {
            "text": "zaman lafiya kuma a fadodinki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Saboda ’yan’uwana da kuma abokaina,",
            "poem": 1
          },
          {
            "text": "zan ce, “Salama tă kasance tare da ke.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Saboda gidan Ubangiji Allahnmu,",
            "poem": 1
          },
          {
            "text": "zan nemi wadatarki.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
