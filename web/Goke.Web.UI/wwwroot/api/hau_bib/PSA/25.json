  "chapter": {
    "number": 25,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A gare ka Ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "na miƙa raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "A gare ka na dogara, ya Allahna.",
            "poem": 1
          },
          {
            "text": "Kada ka bari in sha kunya,",
            "poem": 2
          },
          {
            "text": "ko ka bar abokan gābana su yi nasara a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba wanda yake sa bege a gare ka",
            "poem": 1
          },
          {
            "text": "da zai taɓa shan kunya,",
            "poem": 2
          },
          {
            "text": "amma za su sha kunya",
            "poem": 1
          },
          {
            "text": "su da suke tayarwa babu dalili.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka nuna mini hanyoyinka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ka koya mini hanyoyinka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "ka bi da ni cikin gaskiyarka ka kuma koya mini,",
            "poem": 1
          },
          {
            "text": "gama kai ne Allah Mai cetona,",
            "poem": 2
          },
          {
            "text": "kuma begena yana a kanka dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka tuna, ya Ubangiji da jinƙai da kuma ƙaunarka mai girma,",
            "poem": 1
          },
          {
            "text": "gama suna nan tun dā.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kada ka tuna da zunuban ƙuruciyata",
            "poem": 1
          },
          {
            "text": "da kuma hanyoyin tawayena;",
            "poem": 2
          },
          {
            "text": "bisa ga ƙaunarka ka tuna da ni,",
            "poem": 1
          },
          {
            "text": "gama kai nagari ne, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji nagari da mai adalci ne;",
            "poem": 1
          },
          {
            "text": "saboda haka yakan koyar da masu zunubi a hanyoyinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yakan bi da masu tawali’u cikin abin da yake daidai",
            "poem": 1
          },
          {
            "text": "ya kuma koyar da su hanyoyinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dukan hanyoyin Ubangiji ƙaunatattu ne da kuma aminci",
            "poem": 1
          },
          {
            "text": "ga waɗanda suke kiyaye abin da alkawari ya bukaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Saboda sunanka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ka gafarta laifina, ko da yake mai girma ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "To wane ne mai tsoron Ubangiji?",
            "poem": 1
          },
          {
            "text": "Zai koyar da shi a hanyar da ya zaɓa masa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zai ci kwanakinsa a wadace,",
            "poem": 1
          },
          {
            "text": "kuma zuriyarsa za su gāji ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ubangiji yakan amince da waɗanda suke tsoronsa;",
            "poem": 1
          },
          {
            "text": "yakan sa su san alkawarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idanuna kullum suna a kan Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama shi ne kaɗai zai kuɓutar da ƙafafuna daga tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ka juye wurina ka kuma yi mini jinƙai,",
            "poem": 1
          },
          {
            "text": "gama na kaɗaice ina kuma wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Damuwoyin zuciyata sun ninka;",
            "poem": 1
          },
          {
            "text": "ka ’yantar da ni daga wahalata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ka dubi wahalata da kuma azabata",
            "poem": 1
          },
          {
            "text": "ka ɗauke mini dukan zunubaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Dubi yadda abokan gābana sun ƙaru",
            "poem": 1
          },
          {
            "text": "da kuma yadda suka ƙara ƙina!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka tsare raina ka kuma kuɓutar da ni;",
            "poem": 1
          },
          {
            "text": "kada ka bari in sha kunya,",
            "poem": 2
          },
          {
            "text": "gama na nemi mafaka daga gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Bari mutunci da adalci su tsare ni,",
            "poem": 1
          },
          {
            "text": "domin begena yana a kanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ka fanshi Isra’ila, ya Allah,",
            "poem": 1
          },
          {
            "text": "daga dukan wahalarsu!",
            "poem": 2
          }
        ]
      }
    ],
