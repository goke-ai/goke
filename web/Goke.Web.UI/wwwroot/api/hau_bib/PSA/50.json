  "chapter": {
    "number": 50,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Asaf."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Maɗaukaki, Allah, Ubangiji,",
            "poem": 1
          },
          {
            "text": "ya yi magana ya kuma kira duniya",
            "poem": 2
          },
          {
            "text": "daga fitowar rana zuwa inda take fāɗuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Daga Sihiyona, cikakkiya a kyau,",
            "poem": 1
          },
          {
            "text": "Allah na haskakawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Allahnmu yana zuwa",
            "poem": 1
          },
          {
            "text": "ba kuwa zai yi shiru ba;",
            "poem": 2
          },
          {
            "text": "wuta mai cinyewa a gabansa,",
            "poem": 1
          },
          {
            "text": "babban hadari kuma ya kewaye shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya kira sammai da suke bisa,",
            "poem": 1
          },
          {
            "text": "da duniya, don yă shari’anta mutanensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Ku tattara mini shafaffuna,",
            "poem": 1
          },
          {
            "text": "waɗanda suka yi alkawari da ni ta wurin hadaya.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sammai kuwa sun yi shelar adalcinsa",
            "poem": 1
          },
          {
            "text": "gama Allah kansa alƙali ne. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ku ji, ya mutanena, zan kuwa yi magana,",
            "poem": 1
          },
          {
            "text": "Ya Isra’ila, zan kuwa ba da shaida a kanku.",
            "poem": 2
          },
          {
            "text": "Ni ne Allah, Allahnku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ba na tsawata muku saboda hadayunku",
            "poem": 1
          },
          {
            "text": "ko kuwa hadayunku na ƙonawa, waɗanda kuka taɓa kawo a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ba na bukatan bijimi daga turkenku",
            "poem": 1
          },
          {
            "text": "ko awaki daga garkunanku,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "gama kowace dabbar kurmi nawa ne,",
            "poem": 1
          },
          {
            "text": "da kuma shanu a kan dubban tuddai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Na san kowane tsuntsun da yake a duwatsu",
            "poem": 1
          },
          {
            "text": "kuma halittun filaye nawa ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Da a ce ina jin yunwa ai, ba sai na faɗa muku ba,",
            "poem": 1
          },
          {
            "text": "gama duniyar nawa ne, da kome da yake cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ina cin naman bijimai ne",
            "poem": 1
          },
          {
            "text": "ko ina shan jinin awaki ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Ku miƙa hadayar godiya ga Allah,",
            "poem": 1
          },
          {
            "text": "ku cika alkawuranku ga Mafi Ɗaukaka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ku kira gare ni a ranar wahala;",
            "poem": 1
          },
          {
            "text": "zan cece ku, za ku kuwa girmama ni.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          "Amma ga mugaye, Allah ya ce,",
          {
            "text": "“Wace dama ce kuke da ita na haddace dokokina",
            "poem": 1
          },
          {
            "text": "ko na yin maganar alkawarina a leɓunanku?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kun ƙi umarnina",
            "poem": 1
          },
          {
            "text": "kuka kuma zubar da kalmomina a bayanku",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Sa’ad da kuka ga ɓarawo, kukan haɗa kai da shi;",
            "poem": 1
          },
          {
            "text": "kukan haɗa kai da mazinata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kuna amfani da bakunanku don mugunta",
            "poem": 1
          },
          {
            "text": "kuna kuma gyara harshenku don ruɗu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kuna ci gaba da magana a kan ɗan’uwanku",
            "poem": 1
          },
          {
            "text": "ku kuma yi maganar ƙarya a kan ɗan mahaifinku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kun yi waɗannan abubuwa na kuwa yi shiru;",
            "poem": 1
          },
          {
            "text": "kun ɗauka gaba ɗaya ni kamar ku ne.",
            "poem": 2
          },
          {
            "text": "Amma zan tsawata muku",
            "poem": 1
          },
          {
            "text": "in kuma zarge ku a fuskarku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Ku lura da wannan, ku da kuka manta da Allah,",
            "poem": 1
          },
          {
            "text": "ko kuwa in yayyage ku kucu-kucu, ba kuma wanda zai cece ku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Shi wanda ya miƙa hadayun godiya yakan girmama ni,",
            "poem": 1
          },
          {
            "text": "ya kuma shirya hanya saboda in nuna masa",
            "poem": 2
          },
          {
            "noteId": 1152
          },
          {
            "text": "ceton Allah.”",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1152,
        "caller": "+",
        "text": "Ko kuwa gare shi kuma wanda ya lura da hanyarsa / zan nuna",
        "reference": {
          "chapter": 50,
          "verse": 23
        }
      }
    ]
