        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1215
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Allah a cikin wurinsa mai tsarki;",
            "poem": 1
          },
          {
            "text": "yabe shi a cikin sammai na ikonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yabe shi saboda ayyukansa masu iko;",
            "poem": 1
          },
          {
            "text": "yabe shi saboda mafificin girmansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Yabe shi da ƙarar kakaki,",
            "poem": 1
          },
          {
            "text": "yabe shi da garaya da molo,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "yabe shi da ganga kuna taka rawa,",
            "poem": 1
          },
          {
            "text": "yabe shi da kayan kiɗi na tsirkiya kuna kuma busa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "yabe shi da kuge mai ƙara,",
            "poem": 1
          },
          {
            "text": "yabe shi da kuge masu ƙara sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari kowane abu mai numfashi yă yabi Ubangiji.",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          }
