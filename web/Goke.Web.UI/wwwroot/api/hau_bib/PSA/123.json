  "chapter": {
    "number": 123,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na tā da idanuna gare ka,",
            "poem": 1
          },
          {
            "text": "gare ka da kursiyinka yake cikin sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar yadda idanun bayi suna duban hannun maigidansu,",
            "poem": 1
          },
          {
            "text": "kamar yadda idanun baiwa suna duban hannun uwargijiyarta,",
            "poem": 2
          },
          {
            "text": "haka idanunmu suna duban Ubangiji Allahnmu,",
            "poem": 1
          },
          {
            "text": "sai ya nuna mana jinƙansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka yi mana jinƙai, ya Ubangiji, ka yi mana jinƙai,",
            "poem": 1
          },
          {
            "text": "gama mun jimre da reni mai yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mun jimre da wulaƙanci",
            "poem": 1
          },
          {
            "text": "daga masu girman kai,",
            "poem": 2
          },
          {
            "text": "reni mai yawa daga masu fariya.",
            "poem": 2
          }
        ]
      }
    ],
