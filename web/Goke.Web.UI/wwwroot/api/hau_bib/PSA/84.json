  "chapter": {
    "number": 84,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Bisa ga gittit.",
          {
            "noteId": 1183
          },
          "Na ’Ya’yan Kora maza. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ina misalin kyan wurin zamanka,",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji Maɗaukaki!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Raina yana marmari, har yana suma,",
            "poem": 1
          },
          {
            "text": "don filayen gidan Ubangiji;",
            "poem": 2
          },
          {
            "text": "zuciyata da namana na tā da murya",
            "poem": 1
          },
          {
            "text": "domin Allah mai rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Har tsada ma ta sami gida,",
            "poem": 1
          },
          {
            "text": "tsatsewa kuma ta yi wa kanta sheƙa,",
            "poem": 2
          },
          {
            "text": "inda za tă ƙyanƙyashe ’ya’yanta,",
            "poem": 2
          },
          {
            "text": "wuri kusa da bagadenka,",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji Maɗaukaki, Sarkina da kuma Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Masu albarka ne waɗanda suke zama a gidanka;",
            "poem": 1
          },
          {
            "text": "kullum suna ta yabonka. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Masu albarka ne waɗanda ƙarfinsu yana daga gare ka,",
            "poem": 1
          },
          {
            "text": "waɗanda suka kafa zukatansu a yin tafiya zuwa wuri mai tsarki ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yayinda suke wuce ta Kwarin Baka,",
            "poem": 1
          },
          {
            "text": "sukan mai da shi wurin maɓulɓulai;",
            "poem": 2
          },
          {
            "text": "ruwan sama na farko kuma kan rufe shi da tafkuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Suna ta ƙara ƙarfi,",
            "poem": 1
          },
          {
            "text": "har sai kowanne ya bayyana a gaban Allah a Sihiyona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka ji addu’ata, ya Ubangiji Allah Maɗaukaki;",
            "poem": 1
          },
          {
            "text": "ka saurare ni, ya Allah na Yaƙub. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka dubi garkuwarmu, ya Allah;",
            "poem": 1
          },
          {
            "text": "ka duba da alheri a kan shafaffenka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Rana guda a filayen gidan sun fi",
            "poem": 1
          },
          {
            "text": "dubu a wani wuri dabam;",
            "poem": 2
          },
          {
            "text": "zan gwammaci in zama mai tsaron ƙofa a gidan Allahna",
            "poem": 1
          },
          {
            "text": "da in zauna a tentunan mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama Ubangiji Allah rana ne da kuma garkuwa;",
            "poem": 1
          },
          {
            "text": "Ubangiji yakan yi alheri da kuma daraja;",
            "poem": 2
          },
          {
            "text": "ba ya hana kowane abu mai kyau",
            "poem": 1
          },
          {
            "text": "wa waɗanda suke aikata abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ya Ubangiji Maɗaukaki,",
            "poem": 1
          },
          {
            "text": "mai albarka ne mutumin da ya dogara gare ka.",
            "poem": 2
          }
        ]
      }
    ],
