  "chapter": {
    "number": 61,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da kayan kiɗi masu tsirkiya. Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji kukata, ya Allah;",
            "poem": 1
          },
          {
            "text": "ka saurari addu’ata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Daga iyakar duniya na yi kira gare ka,",
            "poem": 1
          },
          {
            "text": "na yi kira yayinda zuciyata ta karai;",
            "poem": 2
          },
          {
            "text": "ka bishe ni zuwa dutsen da ya fi ni tsayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama kai ne mafakata,",
            "poem": 1
          },
          {
            "text": "hasumiya mai ƙarfi gāba da maƙiyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ina marmari in zauna a tentinka har abada",
            "poem": 1
          },
          {
            "text": "in sami mafaka a cikin inuwar fikafikanka. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama ka ji alkawarina, ya Allah;",
            "poem": 1
          },
          {
            "text": "ka ba ni gādo na waɗanda suke tsoron sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka ƙara kwanakin ran sarki,",
            "poem": 1
          },
          {
            "text": "shekarunsa su kasance a zamanai masu yawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bari yă yi mulki a gaban Allah har abada;",
            "poem": 1
          },
          {
            "text": "ka sa ƙaunarka da amincinka su tsare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sa’an nan zan riƙa rera yabo ga sunanka",
            "poem": 1
          },
          {
            "text": "in kuma cika alkawarina kowace rana.",
            "poem": 2
          }
        ]
      }
    ],
