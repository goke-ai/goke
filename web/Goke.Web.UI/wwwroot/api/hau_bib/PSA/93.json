  "chapter": {
    "number": 93,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji yana mulki, yana sanye da ɗaukaka;",
            "poem": 1
          },
          {
            "text": "Ubangiji yana sanye da ɗaukaka yana kuma sanye da ƙarfi.",
            "poem": 2
          },
          {
            "text": "An kafa duniya daram; ba za a iya matsar da ita ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "An kafa kursiyin tun da daɗewa;",
            "poem": 1
          },
          {
            "text": "kana nan tun fil azal.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Tekuna sun taso, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "tekuna sun ta da muryarsu;",
            "poem": 2
          },
          {
            "text": "tekuna sun tā da ta raƙumansu masu tumbatsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mafi ƙarfi fiye da tsawan manyan ruwaye,",
            "poem": 1
          },
          {
            "text": "mafi ƙarfi fiye da ikon raƙuman ruwan teku,",
            "poem": 2
          },
          {
            "text": "Ubangiji mai zama a bisa mai girma ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ƙa’idodinka suna nan daram;",
            "poem": 1
          },
          {
            "text": "tsarki ya yi wa gidanka ado",
            "poem": 2
          },
          {
            "text": "har kwanaki marar ƙarewa, ya Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
