  "chapter": {
    "number": 114,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sa’ad da Isra’ila ya fito daga Masar,",
            "poem": 1
          },
          {
            "text": "gidan Yaƙub daga mutane masu baƙon harshe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yahuda ya zama wuri mai tsarki na Allah,",
            "poem": 1
          },
          {
            "text": "Isra’ila mallakarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Teku ya kalla ya kuma gudu,",
            "poem": 1
          },
          {
            "text": "Urdun ya juye da baya;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "duwatsu suka yi tsalle kamar raguna,",
            "poem": 1
          },
          {
            "text": "tuddai kamar tumaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Me ya sa, ya teku, kika gudu,",
            "poem": 1
          },
          {
            "text": "Ya Urdun, ka juya baya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "ku duwatsu, kuka yi tsalle kamar raguna,",
            "poem": 1
          },
          {
            "text": "ku tuddai, kamar tumaki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ki yi rawar jiki, ya duniya, a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "a gaban Allah na Yaƙub,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "wanda ya juye dutse ya zama tafki,",
            "poem": 1
          },
          {
            "text": "dutse mai ƙarfi zuwa maɓulɓulan ruwa.",
            "poem": 2
          }
        ]
      }
    ],
