  "chapter": {
    "number": 8,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Bisa ga gittit.",
          {
            "noteId": 1133
          },
          "Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, shugabanmu,",
            "poem": 1
          },
          {
            "text": "sunanka da girma take a cikin dukan duniya!",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ka kafa ɗaukakarka",
            "poem": 1
          },
          {
            "text": "bisa sammai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Daga leɓunan yara da jarirai",
            "poem": 1
          },
          {
            "text": "ka kafa yabo domin su sa abokan gābanka",
            "poem": 2
          },
          {
            "text": "da masu ɗaukan fansa su yi shiru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da na dubi sammai,",
            "poem": 1
          },
          {
            "text": "aikin yatsotsinka,",
            "poem": 2
          },
          {
            "text": "wata da taurari",
            "poem": 1
          },
          {
            "text": "waɗanda ka ajiye a wurarensu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "wane ne mutum da kake tunawa da shi,",
            "poem": 1
          },
          {
            "text": "ɗan mutum da kake lura da shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka yi shi ƙasa kaɗan da Allah",
            "poem": 1
          },
          {
            "noteId": 1134
          },
          {
            "text": "ka yi masa rawani da ɗaukaka da girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka mai da shi mai mulki bisa ayyukan hannuwanka;",
            "poem": 1
          },
          {
            "text": "ka sa kome a ƙarƙashin ƙafafunsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "dukan shanu da tumaki,",
            "poem": 1
          },
          {
            "text": "da kuma namun jeji,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "tsuntsayen sararin sama",
            "poem": 1
          },
          {
            "text": "da kifin teku,",
            "poem": 2
          },
          {
            "text": "da dukan abin da yake yawo a ƙarƙashin ruwan teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya Ubangiji, shugabanmu,",
            "poem": 1
          },
          {
            "text": "sunanka da girma take a cikin dukan duniya!",
            "poem": 2
          }
        ]
      }
