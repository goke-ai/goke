  "chapter": {
    "number": 55,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da kayan kiɗi masu tsirkiya. Wani maskil",
          {
            "noteId": 1157
          },
          "ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji addu’ata, ya Allah,",
            "poem": 1
          },
          {
            "text": "kada ka ƙyale roƙona;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "ka ji ni ka kuma amsa mini.",
            "poem": 2
          },
          {
            "text": "Tunanina yana damuna na kuma gaji tilis",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "hankalina ya tashi saboda yawan surutan masu ƙina,",
            "poem": 2
          },
          {
            "text": "saboda danniyar mugaye.",
            "poem": 2
          },
          {
            "text": "Gama sukan jawo mini wahala,",
            "poem": 1
          },
          {
            "text": "suna jin haushina suna ƙina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zuciyata tana wahala a cikina;",
            "poem": 1
          },
          {
            "text": "tsorace-tsoracen mutuwa sun sha kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Tsoro da rawan jiki sun kama ni;",
            "poem": 1
          },
          {
            "text": "razana ta sha kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na ce, “Kash, da a ce ina da fikafikan kurciya mana!",
            "poem": 1
          },
          {
            "text": "Ai, da na yi firiya na tafi na huta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "da na tafi can da nisa",
            "poem": 1
          },
          {
            "text": "na zauna a hamada; Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "da na hanzarta na tafi wurin mafakata,",
            "poem": 1
          },
          {
            "text": "nesa da muguwar iska da hadiri.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka rikitar da mugaye, ya Ubangiji, ka birkitar da maganarsu,",
            "poem": 1
          },
          {
            "text": "gama na ga rikici da faɗa a cikin birni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dare da rana suna yawo a kan katanga;",
            "poem": 1
          },
          {
            "text": "mugun hali da zargi suna a cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Rundunar hallaka suna aiki a cikin birni;",
            "poem": 1
          },
          {
            "text": "barazana da ƙarairayi ba sa taɓa barin titunanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Da a ce abokin gāba ne ke zagina,",
            "poem": 1
          },
          {
            "text": "da na jure da shi;",
            "poem": 2
          },
          {
            "text": "da a ce maƙiyi yana tā da kansa a kaina,",
            "poem": 1
          },
          {
            "text": "da na ɓoye daga gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Amma kai ne, mutum kamar ni,",
            "poem": 1
          },
          {
            "text": "abokina, abokina na kurkusa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "wanda na taɓa jin daɗin zumunci da shi sosai",
            "poem": 1
          },
          {
            "text": "yayinda muke tafiya tare",
            "poem": 2
          },
          {
            "text": "a taron jama’a a gidan Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari mutuwa ta ɗauki abokan gābana ba labari;",
            "poem": 1
          },
          {
            "text": "bari su gangara da rai zuwa cikin kabari,",
            "poem": 2
          },
          {
            "text": "gama mugunta tana samun masauƙi a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Amma na kira ga Allah,",
            "poem": 1
          },
          {
            "text": "Ubangiji kuwa ya cece ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Safe, rana da yamma",
            "poem": 1
          },
          {
            "text": "ina kuka da nishi,",
            "poem": 2
          },
          {
            "text": "yakan kuwa ji muryata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yakan fisshe ni lafiya",
            "poem": 1
          },
          {
            "text": "daga yaƙin da ake yi da ni,",
            "poem": 2
          },
          {
            "text": "ko da yake da yawa suna gāba da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Allah, yana mulki har abada,",
            "poem": 1
          },
          {
            "text": "zai ji su yă kuma azabtar da su, Sela",
            "poem": 2
          },
          {
            "text": "mutanen da ba sa taɓa canja hanyoyinsu",
            "poem": 1
          },
          {
            "text": "kuma ba sa tsoron Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Abokina ya kai wa abokansa hari;",
            "poem": 1
          },
          {
            "text": "ya tā da alkawarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Maganarsa tana da laushi kamar man zaitun,",
            "poem": 1
          },
          {
            "text": "duk da haka yaƙi yana a cikin zuciyarsa;",
            "poem": 2
          },
          {
            "text": "kalmominsa sun fi mai sulɓi,",
            "poem": 1
          },
          {
            "text": "duk da haka takuba ne zārarru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ku kawo damuwoyinku ga Ubangiji",
            "poem": 1
          },
          {
            "text": "zai kuwa riƙe ku;",
            "poem": 2
          },
          {
            "text": "ba zai taɓa barin",
            "poem": 1
          },
          {
            "text": "mai adalci yă fāɗi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Amma kai, ya Allah, za ka kawar da mugaye",
            "poem": 1
          },
          {
            "text": "zuwa cikin ramin lalacewa;",
            "poem": 2
          },
          {
            "text": "masu kisa da mutane masu ruɗu",
            "poem": 1
          },
          {
            "text": "ba za su kai rabin kwanakin rayuwarsu ba.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Amma ni dai, na dogara gare ka.",
            "poem": 1
          }
        ]
      }
    ],
