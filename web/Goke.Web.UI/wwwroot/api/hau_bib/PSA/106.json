  "chapter": {
    "number": 106,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1194
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yi godiya ga Ubangiji, gama nagari ne shi;",
            "poem": 1
          },
          {
            "text": "ƙaunarsa madawwamiya ce har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Wane ne zai furta manyan ayyukan Ubangiji",
            "poem": 1
          },
          {
            "text": "ko yă furta cikakken yabonsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Masu albarka ne waɗanda suke yin adalci,",
            "poem": 1
          },
          {
            "text": "waɗanda kullum suke yin abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka tuna da ni, ya Ubangiji, sa’ad da ka nuna alheri ga mutanenka,",
            "poem": 1
          },
          {
            "text": "ka zo ka taimake ni sa’ad da ka cece su,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "don in ji daɗin nasarar zaɓaɓɓunka,",
            "poem": 1
          },
          {
            "text": "don in sami rabo cikin farin cikin al’ummarka",
            "poem": 2
          },
          {
            "text": "in kuma shiga gādonka cikin yin yabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mun yi zunubi, kamar yadda kakanninmu suka yi;",
            "poem": 1
          },
          {
            "text": "mun yi ba daidai ba muka kuma aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sa’ad da kakanninmu suke a Masar,",
            "poem": 1
          },
          {
            "text": "ba su damu da mu’ujizanka ba;",
            "poem": 2
          },
          {
            "text": "ba su tuna yawan alheranka ba,",
            "poem": 1
          },
          {
            "text": "suka kuma yi tayarwa a teku, Jan Teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk da haka ya cece su saboda sunansa,",
            "poem": 1
          },
          {
            "text": "don yă sanar da ikonsa mai girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya tsawata wa Jan Teku, ya kuwa bushe;",
            "poem": 1
          },
          {
            "text": "ya bi da su ta cikin zurfafa sai ka ce a hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya cece su daga hannun maƙiyi;",
            "poem": 1
          },
          {
            "text": "daga hannun abokin gāba ya fanshe su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ruwaye suka rufe abokan gābansu;",
            "poem": 1
          },
          {
            "text": "babu ko ɗaya da ya tsira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa’an nan suka gaskata alkawarinsa",
            "poem": 1
          },
          {
            "text": "suka kuma rera yabonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Amma nan da nan suka manta abin da ya yi",
            "poem": 1
          },
          {
            "text": "ba su kuwa jira shawararsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "A cikin hamada suka bar sha’awarsu ta mamaye su",
            "poem": 1
          },
          {
            "text": "a ƙasar da babu kome suka gwada Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sai ya ba su abin da suka roƙa,",
            "poem": 1
          },
          {
            "text": "amma ya aika musu da muguwar cuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "A sansani suka ji kishin Musa",
            "poem": 1
          },
          {
            "text": "da kuma Haruna, wanda Ubangiji ya keɓe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ƙasa ta buɗe ta haɗiye Datan",
            "poem": 1
          },
          {
            "text": "ta binne iyalin Abiram.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Wuta ta ƙuno a cikin mabiyansu;",
            "poem": 1
          },
          {
            "text": "harshen wuta ya cinye mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "A Horeb suka yi ɗan maraƙi",
            "poem": 1
          },
          {
            "text": "suka yi wa gunkin zubi daga ƙarfe sujada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Suka sauke Ɗaukakarsu",
            "poem": 1
          },
          {
            "text": "saboda siffar bijimi, wanda yake cin ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Suka manta da Allahn da ya cece su,",
            "poem": 1
          },
          {
            "text": "wanda ya aikata manyan abubuwa a Masar,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "mu’ujizai a ƙasar Ham",
            "poem": 1
          },
          {
            "text": "ayyukan banrazana a Jan Teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Don haka ya ce zai hallaka su,",
            "poem": 1
          },
          {
            "text": "amma Musa, zaɓaɓɓensa,",
            "poem": 2
          },
          {
            "text": "ya yi godo a gabansa",
            "poem": 1
          },
          {
            "text": "don yă kau da hasalarsa daga hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sai suka rena ƙasa mai ni’ima;",
            "poem": 1
          },
          {
            "text": "ba su gaskata alkawarinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Suka yi gunaguni a tentunansu",
            "poem": 1
          },
          {
            "text": "ba su kuwa yi biyayya da Ubangiji ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Saboda haka ya rantse musu ya kuma ɗaga hannu",
            "poem": 1
          },
          {
            "text": "cewa zai sa su mutu a cikin hamada,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "ya sa zuriyarsu su mutu a cikin al’ummai",
            "poem": 1
          },
          {
            "text": "ya kuma watsar da su cikin dukan ƙasashe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Suka haɗa kai da Ba’al-Feyor",
            "poem": 1
          },
          {
            "text": "suka kuma ci hadayun da aka miƙa wa allolin da ba su da rai;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "suka tsokane Ubangiji ya yi fushi ta wurin mugayen ayyukansu,",
            "poem": 1
          },
          {
            "text": "sai annoba ta ɓarke a cikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Amma Finehas ya miƙe tsaye ya ɗauki mataki,",
            "poem": 1
          },
          {
            "text": "sai annobar ta daina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "An ayana masa wannan a matsayin adalci",
            "poem": 1
          },
          {
            "text": "har zamanai marar matuƙa masu zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "A ruwan Meriba suka ba Ubangiji fushi,",
            "poem": 1
          },
          {
            "text": "sai wahala ta zo wa Musa saboda su;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "saboda sun yi tayarwa a kan Ruhun Allah,",
            "poem": 1
          },
          {
            "text": "har mugayen kalmomi suka fito daga leɓunan Musa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Ba su hallakar da mutanen",
            "poem": 1
          },
          {
            "text": "yadda Ubangiji ya umarce su ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "amma suka yi cuɗanya da al’ummai",
            "poem": 1
          },
          {
            "text": "suka ɗauki al’adunsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Suka yi wa gumakansu sujada,",
            "poem": 1
          },
          {
            "text": "waɗanda suka zama tarko gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Suka miƙa ’ya’yansu maza hadaya",
            "poem": 1
          },
          {
            "text": "’yan matansu kuma ga aljanu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Suka zub da jini marar laifi,",
            "poem": 1
          },
          {
            "text": "jinin ’ya’yansu maza da mata,",
            "poem": 2
          },
          {
            "text": "waɗanda suka miƙa hadaya ga gumakan Kan’ana,",
            "poem": 1
          },
          {
            "text": "ƙasar kuwa ta ƙazantu ta wurin jininsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Suka ƙazantar da kansu ta wurin abin da suka yi;",
            "poem": 1
          },
          {
            "text": "ta wurin ayyukansu suka yi karuwanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Saboda haka Ubangiji ya yi fushi da mutanensa",
            "poem": 1
          },
          {
            "text": "ya ji ƙyamar gādonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Ya miƙa su ga al’ummai,",
            "poem": 1
          },
          {
            "text": "maƙiyansu kuma suka yi mulki a kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "Abokan gābansu suka danne su",
            "poem": 1
          },
          {
            "text": "suka sa su a ƙarƙashin ikonsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "Sau da yawa ya cece su,",
            "poem": 1
          },
          {
            "text": "amma sun nace su yi tawaye",
            "poem": 2
          },
          {
            "text": "suka kuma lalace cikin zunubinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 44,
        "content": [
          {
            "text": "Amma ya lura da wahalarsu",
            "poem": 1
          },
          {
            "text": "sa’ad da ya ji kukansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 45,
        "content": [
          {
            "text": "saboda su ya tuna da alkawarinsa",
            "poem": 1
          },
          {
            "text": "kuma daga yawan ƙaunarsa ya ji tausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 46,
        "content": [
          {
            "text": "Ya sa aka ji tausayinsu",
            "poem": 1
          },
          {
            "text": "a wurin dukan waɗanda suka kame su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 47,
        "content": [
          {
            "text": "Ka cece mu, Ubangiji Allahnmu,",
            "poem": 1
          },
          {
            "text": "ka kuma tattara mu daga al’ummai,",
            "poem": 2
          },
          {
            "text": "don mu yi wa sunanka mai tsarki godiya",
            "poem": 1
          },
          {
            "text": "mu kuma ɗaukaka cikin yabonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 48,
        "content": [
          {
            "text": "Yabo ga Ubangiji, Allah na Isra’ila,",
            "poem": 1
          },
          {
            "text": "daga madawwami zuwa madawwami.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Bari dukan mutane su ce, “Amin!”",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabo ga Ubangiji.",
            "poem": 1
          }
        ]
      }
    ],
