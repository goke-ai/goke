  "chapter": {
    "number": 37,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kada ka tsorata saboda mugayen mutane",
            "poem": 1
          },
          {
            "text": "ko ka yi kishin waɗanda suka aikata mugunta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "gama kamar ciyawa za su bushe,",
            "poem": 1
          },
          {
            "text": "kamar ɗanyun ganyaye za su mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka dogara ga Ubangiji ka kuma aikata alheri;",
            "poem": 1
          },
          {
            "text": "yi zama cikin ƙasar ka kuma more makiyaya mai lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka ji daɗinka a cikin Ubangiji",
            "poem": 1
          },
          {
            "text": "zai kuwa biya bukatun zuciyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka sa kanka a hanyar Ubangiji;",
            "poem": 1
          },
          {
            "text": "ka kuma dogara gare shi zai kuwa yi wannan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zai sa adalcinka yă haskaka kamar hasken safiya,",
            "poem": 1
          },
          {
            "text": "gaskiyarka kuma kamar rana a tsaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka natsu a gaban Ubangiji",
            "poem": 1
          },
          {
            "text": "ka kuma jira da haƙuri gare shi;",
            "poem": 2
          },
          {
            "text": "kada ka tsorata sa’ad da mutane ke nasara a hanyoyinsu,",
            "poem": 1
          },
          {
            "text": "sa’ad da suke aikata mugayen shirye-shiryensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ka yi fushi kada kuma ka yi hasala;",
            "poem": 1
          },
          {
            "text": "kada ka tsorata, wannan yakan kai ga mugunta ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gama za a datse mugayen mutane,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke sa zuciya ga Ubangiji za su gāji ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "A ɗan ƙanƙanen lokaci, mugaye za su shuɗe;",
            "poem": 1
          },
          {
            "text": "ko ka neme su, ba za a same su ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma masu tawali’u za su gāji ƙasar",
            "poem": 1
          },
          {
            "text": "su kuma zauna da cikakkiyar salama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mugaye sukan shirya wa adalai maƙarƙashiya",
            "poem": 1
          },
          {
            "text": "su ciji baki a kansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "amma Ubangiji yakan yi dariyar mugaye,",
            "poem": 1
          },
          {
            "text": "gama ya sani ranarsu tana zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Mugaye sukan zare takobi",
            "poem": 1
          },
          {
            "text": "su ja baka",
            "poem": 2
          },
          {
            "text": "don su kashe matalauta da masu bukata,",
            "poem": 1
          },
          {
            "text": "don su kashe waɗanda hanyoyinsu daidai suke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma takubansu za su soki zukatansu,",
            "poem": 1
          },
          {
            "text": "kuma bakkunansu za su kakkarye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ƙanƙanen abin da mai adalci yake da shi",
            "poem": 1
          },
          {
            "text": "ya fi arzikin mugaye yawa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "gama za a kakkarya ikon mugaye,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji zai riƙe mai adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Kwanakin marasa zarge suna sane ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "kuma gādonsu zai dawwama har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "A lokutan masifu ba za su yanƙwane ba;",
            "poem": 1
          },
          {
            "text": "a kwanakin yunwa za su sami a yalwace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Amma mugaye za su hallaka,",
            "poem": 1
          },
          {
            "text": "Abokan gāban Ubangiji za su zama kamar kyan gonaki,",
            "poem": 2
          },
          {
            "text": "za su ɓace, za su ɓace kamar hayaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Mugaye kan yi rance ba sa kuma biya,",
            "poem": 1
          },
          {
            "text": "amma masu adalci suna bayar hannu sake;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "waɗanda Ubangiji ya sa wa albarka za su gāji ƙasar,",
            "poem": 1
          },
          {
            "text": "amma waɗanda ya la’anta, za a kore su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "In Ubangiji ya ji daɗin hanyar da mutum yake bi,",
            "poem": 1
          },
          {
            "text": "zai sa sawu su kahu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "ko ya yi tuntuɓe, ba zai fāɗi ba,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji yakan riƙe shi da hannunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Dā ni yaro ne amma yanzu na tsufa,",
            "poem": 1
          },
          {
            "text": "duk da haka ban taɓa ganin an yashe masu adalci ba",
            "poem": 2
          },
          {
            "text": "ko a ce ’ya’yansu suna roƙon burodi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Kullum suna bayar hannu sake suna kuma ba da bashi ba da wahala ba,",
            "poem": 1
          },
          {
            "text": "za a yi wa ’ya’yansu albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ku juyo daga mugunta ku yi alheri;",
            "poem": 1
          },
          {
            "text": "sa’an nan za ku zauna a ƙasar har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Gama Ubangiji yana ƙaunar masu aikata daidai",
            "poem": 1
          },
          {
            "text": "kuma ba zai yashe amintattunsa ba.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Za a hallaka masu aikata mugunta gaba ɗaya,",
            "poem": 1
          },
          {
            "text": "’ya’yan mugaye za su hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Masu adalci za su gāji ƙasar",
            "poem": 1
          },
          {
            "text": "su kuma zauna a cikinta har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Bakin mutum mai adalci yakan yi magana da hikima,",
            "poem": 1
          },
          {
            "text": "harshensa kuwa yakan yi maganar abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Dokar Allahnsa tana a cikin zuciyarsa;",
            "poem": 1
          },
          {
            "text": "ƙafafunsa ba sa santsi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Mugaye suna fako suna jira masu adalci,",
            "poem": 1
          },
          {
            "text": "suna ƙoƙari neman ransu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "amma Ubangiji ba zai bar su a ikonsu ba",
            "poem": 1
          },
          {
            "text": "ko ya bari a hukunta su sa’ad da aka kawo su shari’a ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Ku sa zuciya ga Ubangiji",
            "poem": 1
          },
          {
            "text": "ku kuma kiyaye hanyarsa.",
            "poem": 2
          },
          {
            "text": "Zai ɗaukaka ku ku ci gādon ƙasar,",
            "poem": 1
          },
          {
            "text": "sa’ad da aka kawar da mugaye, za ka gani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Na ga wani mugu, azzalumi,",
            "poem": 1
          },
          {
            "text": "yana yaɗuwa kamar ɗanyen itace a asalin ƙasarsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "amma yakan mutu nan da nan kuma ba ya ƙara kasancewa;",
            "poem": 1
          },
          {
            "text": "ko an neme shi, ba za a same shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Ka dubi marasa zargi, ka lura da adali;",
            "poem": 1
          },
          {
            "text": "akwai sa zuciya domin mutum mai salama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Amma za a hallaka dukan masu zunubi;",
            "poem": 1
          },
          {
            "text": "za a yanke sa zuciya ta mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Ceton adalai kan zo daga Ubangiji;",
            "poem": 1
          },
          {
            "text": "shi ne mafaka a lokacin wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Ubangiji yakan taimake su yă kuma cece su;",
            "poem": 1
          },
          {
            "text": "yakan kuɓutar da su daga mugaye yă kuma cece su,",
            "poem": 2
          },
          {
            "text": "domin sukan nemi mafaka daga gare shi.",
            "poem": 2
          }
        ]
      }
    ],
