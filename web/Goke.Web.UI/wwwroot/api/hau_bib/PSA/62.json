  "chapter": {
    "number": 62,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Don Yedutun. Zaburar Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Raina na samun hutu a wurin Allah ne kaɗai;",
            "poem": 1
          },
          {
            "text": "cetona na zuwa daga gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Shi kaɗai ne dutsena da cetona;",
            "poem": 1
          },
          {
            "text": "shi ne kagarata, ba zan jijjigu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Har yaushe za ku tasar wa mutum guda?",
            "poem": 1
          },
          {
            "text": "Dukanku ne za ku kā da shi",
            "poem": 2
          },
          {
            "text": "wannan jinganannen bango, wannan rusasshen katanga?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sun kintsa sosai su tumɓuke shi",
            "poem": 1
          },
          {
            "text": "daga matsayinsa mai martaba;",
            "poem": 2
          },
          {
            "text": "suna jin daɗi yin ƙarairayi.",
            "poem": 2
          },
          {
            "text": "Sukan sa wa mutum albarka da bakinsu,",
            "poem": 1
          },
          {
            "text": "amma a zuciyarsu la’antawa suke yi. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka nemi hutu, ya raina, a wurin Allah kaɗai;",
            "poem": 1
          },
          {
            "text": "dogarata kan zo daga gare shi ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Shi ne kaɗai dutsena da cetona;",
            "poem": 1
          },
          {
            "text": "shi ne kagarata, ba zan jijjigu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Cetona da girmata sun dangana ga Allah ne,",
            "poem": 1
          },
          {
            "noteId": 1169
          },
          {
            "text": "shi ne dutsena mai ƙarfi, mafakata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku dogara a gare shi a duk lokuta, ya mutane;",
            "poem": 1
          },
          {
            "text": "ku faɗi albarkaci bakin zukatanku a gare shi,",
            "poem": 2
          },
          {
            "text": "gama Allah ne mafakarmu. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Talakawa dai kamar shaƙar iska suke,",
            "poem": 1
          },
          {
            "text": "Attajirai dai kamar shirim suke;",
            "poem": 2
          },
          {
            "text": "in aka auna a ma’auni, su ba wani abu ba ne;",
            "poem": 1
          },
          {
            "text": "dukansu dai kamar shaƙar iska ne kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kada ku dogara a kan ƙwace",
            "poem": 1
          },
          {
            "text": "ko yin fariya a kayan sata;",
            "poem": 2
          },
          {
            "text": "ko arzikinku ya ƙaru,",
            "poem": 1
          },
          {
            "text": "kada ku sa zuciyarku a kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Abu guda Allah ya ce,",
            "poem": 1
          },
          {
            "text": "abubuwa biyu na ji,",
            "poem": 2
          },
          {
            "text": "“Cewa kai, ya Allah, kake mai ƙarfi,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "kuma cewa kai, ya Ubangiji, mai ƙauna ne.",
            "poem": 2
          },
          {
            "text": "Tabbatacce za ka sāka wa kowane mutum",
            "poem": 1
          },
          {
            "text": "bisa ga abin da ya yi.”",
            "poem": 2
          }
        ]
      }
    ],
