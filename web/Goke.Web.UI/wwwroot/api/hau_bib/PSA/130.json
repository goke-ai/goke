  "chapter": {
    "number": 130,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Daga cikin zurfafa na yi kuka gare ka, ya Ubangiji;",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya Ubangiji, ka ji muryata.",
            "poem": 2
          },
          {
            "text": "Bari kunnuwanka su saurara",
            "poem": 1
          },
          {
            "text": "ga kukata ta neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "In kai, ya Ubangiji, za ka lissafta zunubai,",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, wa zai tsaya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Amma tare da kai akwai gafartawa,",
            "poem": 1
          },
          {
            "text": "saboda haka ake tsoronka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zan jira Ubangiji, raina zai jira,",
            "poem": 1
          },
          {
            "text": "kuma a cikin maganarsa na sa zuciyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Raina na jiran Ubangiji",
            "poem": 1
          },
          {
            "text": "fiye da yadda mai tsaro yakan jira safiya,",
            "poem": 2
          },
          {
            "text": "fiye da yadda mai tsaro yakan jira safiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya Isra’ila, sa zuciya ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama tare da Ubangiji akwai ƙauna marar ƙarewa",
            "poem": 2
          },
          {
            "text": "kuma tare da shi akwai cikakkiyar fansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Shi kansa zai fanshi Isra’ila",
            "poem": 1
          },
          {
            "text": "daga dukan zunubansu.",
            "poem": 2
          }
        ]
      }
    ],
