  "chapter": {
    "number": 145,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ce ta yabo. Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan ɗaukaka ka, ya Allahna, Sarki;",
            "poem": 1
          },
          {
            "text": "zan yabi sunanka har abada abadin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kowace rana zan yabe ka",
            "poem": 1
          },
          {
            "text": "in kuma ɗaukaka sunanka har abada abadin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ubangiji da girma yake ya kuma cancanci yabo",
            "poem": 1
          },
          {
            "text": "girmansa ya fi ƙarfin ganewar mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Tsara guda za tă yi maganar ayyukanka ga wata tsara;",
            "poem": 1
          },
          {
            "text": "za su yi magana game da manyan ayyukanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Za su yi zancen ɗaukakarka mai daraja,",
            "poem": 1
          },
          {
            "text": "zan kuma yi tunani a kan ayyukanka masu banmamaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Za su yi magana game da ikon ayyukanka masu bantsoro,",
            "poem": 1
          },
          {
            "text": "zan kuma yi shelar manyan ayyukanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Za su yi bikin yalwar alherinka",
            "poem": 1
          },
          {
            "text": "suka kuma rera adalcinka da farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji mai alheri da kuma tausayi,",
            "poem": 1
          },
          {
            "text": "mai jinkirin fushi cike kuma da ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ubangiji nagari ne ga duka;",
            "poem": 1
          },
          {
            "text": "yana tausayin dukan abubuwan da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dukan abubuwan da ka yi za su yabe ka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "tsarkakanka za su ɗaukaka ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Za su yi maganar ɗaukakar mulkinka",
            "poem": 1
          },
          {
            "text": "za su kuma yi zancen ikonka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "saboda dukan mutane su san manyan ayyukanka",
            "poem": 1
          },
          {
            "text": "da ɗaukakar darajar mulkinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Mulkinka madawwamin mulki ne,",
            "poem": 1
          },
          {
            "text": "sarautarka kuma za tă dawwama cikin dukan zamanai.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ubangiji mai aminci ne ga dukan alkawuransa",
            "poem": 1
          },
          {
            "text": "mai ƙauna kuma ga dukan abubuwan da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ubangiji yana riƙe da dukan waɗanda suka faɗi",
            "poem": 1
          },
          {
            "text": "yana kuma ɗaga dukan waɗanda aka rusunar da su ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idanun kowa yana dogara gare ka,",
            "poem": 1
          },
          {
            "text": "kana kuma ba su abincinsu a lokacin da ya dace.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ka buɗe hannunka",
            "poem": 1
          },
          {
            "text": "ka kuma ƙosar da sha’awar kowane abu mai rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ubangiji mai adalci ne cikin dukan hanyoyinsa",
            "poem": 1
          },
          {
            "text": "yana kuma nuna ƙauna ga dukan abubuwan da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ubangiji yana kusa da kowa da ya kira gare shi,",
            "poem": 1
          },
          {
            "text": "ga duk wanda ya kira gare shi cikin gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Yakan cika sha’awar waɗanda suke tsoronsa;",
            "poem": 1
          },
          {
            "text": "yakan ji kukansu yă kuma cece su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ubangiji yakan lura da dukan waɗanda suke ƙaunarsa,",
            "poem": 1
          },
          {
            "text": "amma dukan mugaye zai hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Bakina zai yi magana cikin yabon Ubangiji.",
            "poem": 1
          },
          {
            "text": "Bari kowace halitta ta yabi sunansa mai tsarki",
            "poem": 2
          },
          {
            "text": "har abada abadin.",
            "poem": 2
          }
        ]
      }
    ],
