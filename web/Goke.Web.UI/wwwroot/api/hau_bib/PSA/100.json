  "chapter": {
    "number": 100,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ce. Don yin godiya."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku yi sowa don farin ciki ga Ubangiji, dukan duniya.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yi wa Ubangiji sujada da murna;",
            "poem": 2
          },
          {
            "text": "ku zo gabansa da waƙoƙin farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku san cewa Ubangiji shi ne Allah.",
            "poem": 1
          },
          {
            "text": "Shi ne ya yi mu, mu kuwa nasa ne;",
            "poem": 2
          },
          {
            "text": "mu mutanensa ne, tumakin makiyayarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku shiga ƙofofinsa da godiya",
            "poem": 1
          },
          {
            "text": "filayen gidansa kuma da yabo;",
            "poem": 2
          },
          {
            "text": "ku gode masa ku kuma yabi sunansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama Ubangiji yana da kyau kuma ƙaunarsa madawwamiya ce har abada;",
            "poem": 1
          },
          {
            "text": "amincinsa na cin gaba a dukan zamanai.",
            "poem": 2
          }
        ]
      }
    ],
