  "chapter": {
    "number": 137,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A bakin kogunan Babilon muka zauna muka yi kuka",
            "poem": 1
          },
          {
            "text": "sa’ad da muka tuna da Sihiyona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "A can a kan rassan itatuwa",
            "poem": 1
          },
          {
            "text": "muka rataye garayunmu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "gama a can masu kamunmu suka sa mu yi waƙoƙi,",
            "poem": 1
          },
          {
            "text": "masu ba mu azaba suka nema waƙoƙin farin ciki;",
            "poem": 2
          },
          {
            "text": "suka ce, “Ku rera mana ɗaya daga cikin waƙoƙin Sihiyona!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Yaya za mu rera waƙoƙin Ubangiji",
            "poem": 1
          },
          {
            "text": "a baƙuwar ƙasa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "In na manta da ke, ya Urushalima,",
            "poem": 1
          },
          {
            "text": "bari hannuna na dama manta da iyawarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari harshena yă manne wa rufin bakina",
            "poem": 1
          },
          {
            "text": "in ban tuna da ke ba,",
            "poem": 2
          },
          {
            "text": "in ban so Urushalima",
            "poem": 1
          },
          {
            "text": "farin cikin mafi girma ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka tuna, ya Ubangiji, abin da mutanen Edom suka yi",
            "poem": 1
          },
          {
            "text": "a ranar da Urushalima ta fāɗi.",
            "poem": 2
          },
          {
            "text": "Suka yi ihu suka ce, “A ragargaza ta,",
            "poem": 1
          },
          {
            "text": "A ragargaza ta har tushenta!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya Diyar Babilon, an ƙaddara ke zuwa hallaka,",
            "poem": 1
          },
          {
            "text": "mai farin ciki ne wanda ya sāka miki",
            "poem": 2
          },
          {
            "text": "saboda abin da kika yi mana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "shi da ya ƙwace jariranki",
            "poem": 1
          },
          {
            "text": "ya fyaɗa su a kan duwatsu.",
            "poem": 2
          }
        ]
      }
    ],
