  "chapter": {
    "number": 79,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Asaf."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Allah, al’ummai sun mamaye gādonka;",
            "poem": 1
          },
          {
            "text": "sun ƙazantar da haikalinka mai tsarki,",
            "poem": 2
          },
          {
            "text": "sun bar Urushalima kufai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sun ba da gawawwakin bayinka",
            "poem": 1
          },
          {
            "text": "kamar abinci ga tsuntsayen sararin sama,",
            "poem": 2
          },
          {
            "text": "nama jikin tsarkakanka ga namun jejin duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sun zubar da jini kamar ruwa",
            "poem": 1
          },
          {
            "text": "ko’ina a Urushalima,",
            "poem": 2
          },
          {
            "text": "kuma babu wani da zai binne matattu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mun zama abin reni ga maƙwabta,",
            "poem": 1
          },
          {
            "text": "abin ba’a da reni ga waɗanda suke kewaye da mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Har yaushe, ya Ubangiji za ka yi ta fushi? Har abada ne?",
            "poem": 1
          },
          {
            "text": "Har yaushe kishinka zai yi ta ƙuna kamar wuta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka zuba fushinka a kan al’umman",
            "poem": 1
          },
          {
            "text": "da ba su yarda da kai ba,",
            "poem": 2
          },
          {
            "text": "a kan mulkokin",
            "poem": 1
          },
          {
            "text": "da ba sa kira bisa sunanka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "gama sun cinye Yaƙub",
            "poem": 1
          },
          {
            "text": "suka lalatar da ƙasar zamansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ka riƙe zunubai kakanni a kanmu;",
            "poem": 1
          },
          {
            "text": "bari jinƙanka yă zo da sauri yă sadu da mu,",
            "poem": 2
          },
          {
            "text": "gama mun fid da zuciya sarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka taimake mu, ya Allah Mai Cetonmu,",
            "poem": 1
          },
          {
            "text": "saboda ɗaukakar sunanka;",
            "poem": 2
          },
          {
            "text": "ka cece mu ka kuma gafarta mana zunubanmu",
            "poem": 1
          },
          {
            "text": "saboda sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Don me al’ummai za su ce,",
            "poem": 1
          },
          {
            "text": "“Ina Allahnsu yake?”",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "A idanunmu, ka sanar wa al’ummai",
            "poem": 1
          },
          {
            "text": "cewa kana ɗaukan fansar jinin bayinka da aka zubar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bari nishe-nishen ’yan kurkuku su zo gabanka;",
            "poem": 1
          },
          {
            "text": "ta wurin ƙarfin hannunka ka kiyaye waɗanda aka yanke wa hukuncin mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka sāka a cinyoyin maƙwabtanmu sau bakwai",
            "poem": 1
          },
          {
            "text": "zage-zagen da suka yi ta yi maka, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sa’an nan mu mutanenka, tumakin makiyayarka,",
            "poem": 1
          },
          {
            "text": "za mu yabe ka har abada;",
            "poem": 2
          },
          {
            "text": "daga tsara zuwa tsara",
            "poem": 1
          },
          {
            "text": "za mu yi ta ba da labarin yabonka.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
