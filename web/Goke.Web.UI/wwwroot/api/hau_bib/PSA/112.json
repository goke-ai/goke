  "chapter": {
    "number": 112,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1197
          },
          {
            "lineBreak": true
          },
          {
            "text": "Mai albarka ne mutumin da yake tsoron Ubangiji,",
            "poem": 1
          },
          {
            "text": "wanda yakan sami farin ciki mai girma a umarnansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "’Ya’yansa za su zama manya a ƙasar;",
            "poem": 1
          },
          {
            "text": "tsaran masu aikata gaskiya za su sami albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Wadata da arziki suna a cikin gidansa,",
            "poem": 1
          },
          {
            "text": "adalcinsa zai dawwama har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ko a cikin duhu haske kan haskaka wa mai aikata gaskiya,",
            "poem": 1
          },
          {
            "text": "mai alheri mai tausayi da kuma mai adalci.",
            "poem": 2
          },
          {
            "noteId": 1198
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Abu mai kyau zai zo masa shi da yake kyauta yake kuma ba da bashi hannu sake,",
            "poem": 1
          },
          {
            "text": "shi da yake yin al’amuransa cikin gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Tabbatacce ba zai taɓa jijjigu ba;",
            "poem": 1
          },
          {
            "text": "za a tuna da mai adalci har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba zai ji tsoron labari marar daɗi ba;",
            "poem": 1
          },
          {
            "text": "zuciyarsa tsayayyiya ce, tana dogara ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Zuciyarsa tana da kāriya, ba zai ji tsoro ba;",
            "poem": 1
          },
          {
            "text": "a ƙarshe zai zama mai nasara a kan maƙiyansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya rarraba kyautansa ga matalauta,",
            "poem": 1
          },
          {
            "text": "adalcinsa zai dawwama har abada;",
            "poem": 2
          },
          {
            "text": "za a ɗaga ƙahonsa",
            "poem": 2
          },
          {
            "noteId": 1199
          },
          {
            "text": "sama da bangirma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Mugun mutum zai gani yă kuma yi fushi,",
            "poem": 1
          },
          {
            "text": "zai ciza haƙora yă kuma lalace;",
            "poem": 2
          },
          {
            "text": "sha’awace-sha’awacen mugaye za su zo ga ƙarshe.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
