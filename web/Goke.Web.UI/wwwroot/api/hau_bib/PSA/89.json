  "chapter": {
    "number": 89,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Maskil",
          {
            "noteId": 1187
          },
          "na Etan dangin Ezra."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan rera game da ƙauna mai girma ta Ubangiji har abada;",
            "poem": 1
          },
          {
            "text": "da bakina zan sanar da amincinka",
            "poem": 2
          },
          {
            "text": "a dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan furta cewa ƙaunarka tana nan daram har abada,",
            "poem": 1
          },
          {
            "text": "cewa ka kafa amincinka a sama kanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka ce, “Na yi alkawari da zaɓaɓɓena,",
            "poem": 1
          },
          {
            "text": "na rantse wa Dawuda bawana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "cewa ‘Zan kafa zuriyarka har abada",
            "poem": 1
          },
          {
            "text": "in kuma sa kursiyinka yă tsaya daram dukan zamanai.’ ” Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sammai na yabon abubuwan banmamakinka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "amincinka shi ma, a cikin taron tsarkakanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama wane ne a sarari za a iya kwatanta da Ubangiji?",
            "poem": 1
          },
          {
            "text": "Wane ne yake kamar Ubangiji a cikin talikan samaniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Cikin taron tsarkaka Allah ne aka fi tsoro;",
            "poem": 1
          },
          {
            "text": "shi ne mafi bantsoro fiye da dukan waɗanda suka kewaye shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya Ubangiji Allah Maɗaukaki, wane ne kamar ka?",
            "poem": 1
          },
          {
            "text": "Kai mai iko ne, ya Ubangiji, kuma amincinka ya kewaye ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kana mulkin teku mai tumbatsa;",
            "poem": 1
          },
          {
            "text": "sa’ad da raƙuma sun tashi, kakan kwantar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka ragargaza Rahab kamar waɗanda aka kashe;",
            "poem": 1
          },
          {
            "text": "da hannunka mai ƙarfi ka watsar da abokan gābanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sammai naka ne, haka kuma duniya;",
            "poem": 1
          },
          {
            "text": "ka kafa duniya da dukan abin da yake cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka halicce arewa da kudu;",
            "poem": 1
          },
          {
            "text": "Tabor da Hermon suna rera don farin ciki ga sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Hannunka mai iko ne;",
            "poem": 1
          },
          {
            "text": "hannunka yana da ƙarfi, hannunka na dama ya sami ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Adalci da gaskiya su ne tushen kursiyinka;",
            "poem": 1
          },
          {
            "text": "ƙauna da aminci suna tafiya a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Masu albarka ne waɗanda suka koyi yin maka kirari",
            "poem": 1
          },
          {
            "text": "waɗanda suke tafiya cikin hasken da yake gabanka, Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Suna farin ciki a cikin sunanka dukan yini;",
            "poem": 1
          },
          {
            "text": "suna samun ɗaukaka cikin adalcinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gama kai ne ɗaukakarsu da ƙarfinsu,",
            "poem": 1
          },
          {
            "text": "kuma ta wurin alherinka ka ɗaukaka ƙahonka.",
            "poem": 2
          },
          {
            "noteId": 1188
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Tabbatacce, garkuwarmu ta Ubangiji ce,",
            "poem": 1
          },
          {
            "text": "ta sarkinmu ce, da kuma ta Mai Tsarki na Isra’ila ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ka taɓa yin magana cikin wahayi,",
            "poem": 1
          },
          {
            "text": "ga mutanenka masu aminci ka ce,",
            "poem": 2
          },
          {
            "text": "“Na ba wa jarumi ƙarfi;",
            "poem": 1
          },
          {
            "text": "na ɗaukaka saurayi daga cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Na sami Dawuda bawana;",
            "poem": 1
          },
          {
            "text": "da mai na mai tsarki na shafe shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Hannuna zai kasance tare da shi;",
            "poem": 1
          },
          {
            "text": "tabbatacce hannuna zai ƙarfafa shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Babu abokin gāban da zai sa yă biya haraji;",
            "poem": 1
          },
          {
            "text": "babu mugun mutumin da zai danne shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Zan murƙushe maƙiyansa a gabansa",
            "poem": 1
          },
          {
            "text": "in kashe dukan abokan gābansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Amintacciya ƙaunata za tă kasance tare da shi,",
            "poem": 1
          },
          {
            "text": "kuma ta wurin sunana za a ɗaukaka ƙahonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Zan sa hannunsa a bisa teku,",
            "poem": 1
          },
          {
            "text": "hannunsa na dama a bisa koguna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Zai yi kira gare ni yă ce, ‘Kai ne Mahaifina,",
            "poem": 1
          },
          {
            "text": "Allahna, Dutse mai cetona.’",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Zan kuma naɗa shi ɗan farina,",
            "poem": 1
          },
          {
            "text": "mafi ɗaukaka cikin sarakunan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Zan ci gaba da ƙaunarsa har abada,",
            "poem": 1
          },
          {
            "text": "alkawarina da shi ba zai taɓa fasa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Zan kafa zuriyarsa har abada,",
            "poem": 1
          },
          {
            "text": "kursiyinsa muddin sammai suna nan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "“In ’ya’yansa maza suka yashe dokata",
            "poem": 1
          },
          {
            "text": "ba su kuwa bi ƙa’idodina ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "in suka take ƙa’idodina",
            "poem": 1
          },
          {
            "text": "suka kuma kāsa kiyaye umarnaina,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "zan hukunta zunubinsu da sanda,",
            "poem": 1
          },
          {
            "text": "laifinsu da bulala;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "amma ba zan ɗauke ƙaunata daga gare shi ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa zan taɓa rasa cika amincina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Ba zan take alkawarina ba",
            "poem": 1
          },
          {
            "text": "ko in canja abin da leɓunana suka ambata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Sau ɗaya ba ƙari, na rantse da tsarkina,",
            "poem": 1
          },
          {
            "text": "ba kuwa zan yi ƙarya wa Dawuda ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "cewa zuriyarsa za tă ci gaba har abada",
            "poem": 1
          },
          {
            "text": "kuma kursiyinsa zai dawwama a gabana kamar rana;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "zai kahu har abada kamar wata,",
            "poem": 1
          },
          {
            "text": "amintacciyar shaida a cikin sarari.” Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Amma ka ƙi, ka yi ƙyama",
            "poem": 1
          },
          {
            "text": "ka kuma yi fushi sosai da shafaffenka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Ka soke alkawarin da ka yi da bawanka",
            "poem": 1
          },
          {
            "text": "ka kuma ƙazantar da rawaninsa a ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Ka rurrushe dukan katangansa",
            "poem": 1
          },
          {
            "text": "ka sa kagaransa suka zama kufai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Dukan waɗanda suka wuce sun washe shi;",
            "poem": 1
          },
          {
            "text": "ya zama abin dariya wajen maƙwabtansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "Ka ɗaukaka hannun dama na maƙiyansa;",
            "poem": 1
          },
          {
            "text": "ka sa dukan abokan gābansa suna farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "Ka juye bakin takobinsa",
            "poem": 1
          },
          {
            "text": "ba ka kuma taimake shi a cikin yaƙi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 44,
        "content": [
          {
            "text": "Ka kawo ƙarshen darajarsa",
            "poem": 1
          },
          {
            "text": "ka kuma jefar da kursiyinsa ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 45,
        "content": [
          {
            "text": "Ka rage kwanakin ƙuruciyarsa;",
            "poem": 1
          },
          {
            "text": "ka rufe shi da mayafin kunya. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 46,
        "content": [
          {
            "text": "Har yaushe, ya Ubangiji za ka ɓoye? Za ka ɓoye har abada ne?",
            "poem": 1
          },
          {
            "text": "Har yaushe fushinka zai yi ta ci kamar wuta?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 47,
        "content": [
          {
            "text": "Ka tuna yadda raina mai wucewa ne.",
            "poem": 1
          },
          {
            "text": "Gama ka halicce dukan mutane ba amfani!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 48,
        "content": [
          {
            "text": "Wanda mutum ne zai rayu da ba zai ga mutuwa ba,",
            "poem": 1
          },
          {
            "text": "ko yă cece kansa daga ikon kabari? Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 49,
        "content": [
          {
            "text": "Ya Ubangiji, ina ƙaunar mai girma ta dā,",
            "poem": 1
          },
          {
            "text": "wadda cikin amincinka ka rantse wa Dawuda?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 50,
        "content": [
          {
            "text": "Ka tuna, Ubangiji, yadda aka yi wa bawanka ba’a,",
            "poem": 1
          },
          {
            "text": "yadda na jimre a zuciyata da zage-zagen dukan al’ummai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 51,
        "content": [
          {
            "text": "zage-zagen da abokan gābanka suka yi mini, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "da suka yi wa kowane matakin da shafaffenka ya ɗauka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 52,
        "content": [
          {
            "text": "Yabo ya tabbata ga Ubangiji har abada!",
            "poem": 1
          },
          "Amin kuma Amin."
        ]
      }
    ],
