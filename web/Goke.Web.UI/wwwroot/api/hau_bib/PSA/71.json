  "chapter": {
    "number": 71,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A gare ka, ya Ubangiji, na nemi mafaka;",
            "poem": 1
          },
          {
            "text": "kada ka taɓa sa in sha kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka kuɓutar da ni ka cece ni cikin adalcinka;",
            "poem": 1
          },
          {
            "text": "ka juya kunnenka gare ni ka kuma cece ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka zama dutsena da kagarata,",
            "poem": 1
          },
          {
            "text": "inda kullum zan je.",
            "poem": 2
          },
          {
            "text": "Ka ba da umarni a cece ni,",
            "poem": 1
          },
          {
            "text": "gama kai ne dutsen ɓuyana da katangata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka cece ni, ya Allahna, daga hannun mugaye,",
            "poem": 1
          },
          {
            "text": "da kuma daga ikon mugaye da masu mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama kai ne abin sa zuciyata, ya Ubangiji Mai Iko Duka,",
            "poem": 1
          },
          {
            "text": "ƙarfin zuciyata tun ina yaro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Daga haihuwa na dogara gare ka;",
            "poem": 1
          },
          {
            "text": "kai ka kawo ni daga cikin mahaifiyata.",
            "poem": 2
          },
          {
            "text": "Kullayaumi zan yabe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na zama kamar abin sa zuciya ga yawanci,",
            "poem": 1
          },
          {
            "text": "amma kai ne katangata mai ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bakina ya cika da yabonka,",
            "poem": 1
          },
          {
            "text": "ina furta darajarka dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka yar da ni sa’ad da na tsufa;",
            "poem": 1
          },
          {
            "text": "kada ka yashe ni sa’ad da ƙarfina ya ƙare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama abokan gābana suna magana a kaina;",
            "poem": 1
          },
          {
            "text": "waɗanda suke jira su kashe ni suna haɗa baki tare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suna cewa, “Allah ya yashe shi;",
            "poem": 1
          },
          {
            "text": "mu fafare shi mu kama shi,",
            "poem": 2
          },
          {
            "text": "gama ba wanda zai kuɓutar da shi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kada ka yi nisa da ni, ya Allah;",
            "poem": 1
          },
          {
            "text": "zo da sauri, ya Allahna, ka taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Bari masu zagina su hallaka da kunya;",
            "poem": 1
          },
          {
            "text": "bari waɗanda suke so su cutar da ni",
            "poem": 2
          },
          {
            "text": "su sha ba’a da kuma kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Amma game da ni, kullayaumi zan kasance da sa zuciya;",
            "poem": 1
          },
          {
            "text": "zan yabe ka sau da sau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bakina zai ba da labarin adalcinka,",
            "poem": 1
          },
          {
            "text": "zai yi maganar cetonka dukan yini,",
            "poem": 2
          },
          {
            "text": "ko da yake ban san yawansa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Zan zo in furta in kuma yi shelar ayyukanka masu girma, ya Ubangiji Mai Iko Duka;",
            "poem": 1
          },
          {
            "text": "zan yi shelar adalcinka, naka kaɗai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Tun ina yaro, ya Allah, ka koya mini",
            "poem": 1
          },
          {
            "text": "har wa yau ina furta ayyukanka masu banmamaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ko sa’ad da na tsufa da furfura,",
            "poem": 1
          },
          {
            "text": "kada ka yashe ni, ya Allah,",
            "poem": 2
          },
          {
            "text": "sai na furta ikonka ga tsara mai zuwa,",
            "poem": 1
          },
          {
            "text": "ƙarfinka ga dukan waɗanda suke zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Adalcinka ya kai sararin sama, ya Allah,",
            "poem": 1
          },
          {
            "text": "kai da ka yi manyan abubuwa.",
            "poem": 2
          },
          {
            "text": "Wane ne kamar ka, ya Allah?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ko da yake ka sa na ga wahaloli,",
            "poem": 1
          },
          {
            "text": "masu yawa da kuma masu ɗaci,",
            "poem": 2
          },
          {
            "text": "za ka sāke mayar mini da rai;",
            "poem": 2
          },
          {
            "text": "daga zurfafan duniya",
            "poem": 1
          },
          {
            "text": "za ka sāke tā da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Za ka ƙara girmana",
            "poem": 1
          },
          {
            "text": "ka sāke ta’azantar da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zan yabe ka da garaya",
            "poem": 1
          },
          {
            "text": "saboda amincinka, ya Allah;",
            "poem": 2
          },
          {
            "text": "zan rera yabo gare ka da molo,",
            "poem": 1
          },
          {
            "text": "Ya Mai Tsarki na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Leɓunana za su yi sowa don farin ciki",
            "poem": 1
          },
          {
            "text": "sa’ad da na rera yabo gare ka,",
            "poem": 2
          },
          {
            "text": "ni, wanda ka fansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Harshena zai ba da labarin ayyukanka masu adalci",
            "poem": 1
          },
          {
            "text": "dukan yini,",
            "poem": 2
          },
          {
            "text": "gama waɗanda suka so su cutar da ni",
            "poem": 1
          },
          {
            "text": "sun sha kunya suka kuma rikice.",
            "poem": 2
          }
        ]
      }
    ],
