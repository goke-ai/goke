  "chapter": {
    "number": 17,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Addu’a ce ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji, ya Ubangiji, roƙona na adalci;",
            "poem": 1
          },
          {
            "text": "ka saurari kukata.",
            "poem": 2
          },
          {
            "text": "Ka kasa kunne ga addu’ata,",
            "poem": 1
          },
          {
            "text": "ba ta fitowa daga leɓuna masu ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari fiffitawata tă zo daga gare ka;",
            "poem": 1
          },
          {
            "text": "bari idanunka su ga abin da yake daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko ka duba zuciyata,",
            "poem": 1
          },
          {
            "text": "ka kuma bincike ni da dare,",
            "poem": 2
          },
          {
            "text": "ko ka gwada ni, ba za ka sami kome ba;",
            "poem": 1
          },
          {
            "text": "na yanke shawara cewa bakina ba zai yi zunubi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Game da ayyukan mutane kuwa,",
            "poem": 1
          },
          {
            "text": "ta wurin maganar leɓunanka na kiyaye kaina",
            "poem": 2
          },
          {
            "text": "daga hanyoyin tashin hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sawuna sun kama hanyoyinka",
            "poem": 1
          },
          {
            "text": "ƙafafu kuwa ba za su yi santsi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na kira gare ka, ya Allah, gama za ka amsa mini;",
            "poem": 1
          },
          {
            "text": "ka kasa kunne ka kuma ji addu’ata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka nuna mini girmar ƙaunarka mai banmamaki,",
            "poem": 1
          },
          {
            "text": "kai da kake ceton waɗanda suke neman mafaka daga abokan gābansu",
            "poem": 2
          },
          {
            "text": "da hannunka na dama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka kiyaye ni yadda ake kiyaye ido;",
            "poem": 1
          },
          {
            "text": "ka ɓoye ni cikin inuwar fikafikanka",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "daga mugaye waɗanda suke kai mini hari,",
            "poem": 1
          },
          {
            "text": "daga abokan gāba masu mutuwa waɗanda suka kewaye ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sun rufe zukatansu marar tausayi,",
            "poem": 1
          },
          {
            "text": "da bakunansu suna magana da fariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sun sa mini ido, yanzu sun kewaye ni,",
            "poem": 1
          },
          {
            "text": "a shirye suke, su jefa ni a ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Suna kama da zaki mai yunwan abinci,",
            "poem": 1
          },
          {
            "text": "kamar babban zaki mai fako a maɓuya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka tashi, ya Ubangiji, ka yi arangama da su, ka durƙusar da su;",
            "poem": 1
          },
          {
            "text": "ka cece ni daga mugaye ta wurin takobinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ya Ubangiji, da hannunka ka cece ni daga irin mutanen nan,",
            "poem": 1
          },
          {
            "text": "daga mutanen duniyan nan waɗanda ladarsu yana a wannan rayuwa ne.",
            "poem": 2
          },
          {
            "text": "Kakan cika yunwan waɗanda kake so;",
            "poem": 1
          },
          {
            "text": "’ya’yansu suna da isashe",
            "poem": 2
          },
          {
            "text": "suna kuma ajiyar wadata wa ’ya’yansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma ni, cikin adalci zan ga fuskarka;",
            "poem": 1
          },
          {
            "text": "sa’ad da na farka, zan gamsu da ganin kamanninka.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
