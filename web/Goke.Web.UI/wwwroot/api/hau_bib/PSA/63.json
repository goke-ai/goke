  "chapter": {
    "number": 63,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda. Sa’ad da yake a hamadar Yahuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Allah, kai ne Allahna,",
            "poem": 1
          },
          {
            "text": "da nacewa na neme ka;",
            "poem": 2
          },
          {
            "text": "raina yana ƙishinka,",
            "poem": 1
          },
          {
            "text": "jikina yana marmarinka,",
            "poem": 2
          },
          {
            "text": "cikin busasshiyar ƙasar da ta zozaye",
            "poem": 1
          },
          {
            "text": "inda babu ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Na gan ka a wuri mai tsarki",
            "poem": 1
          },
          {
            "text": "na kuma dubi ikonka da ɗaukakarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Domin ƙaunarka ta fi rai kyau,",
            "poem": 1
          },
          {
            "text": "leɓunana za su ɗaukaka ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zan yabe ka muddin raina,",
            "poem": 1
          },
          {
            "text": "kuma a cikin sunanka zai ɗaga hannuwana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Raina zai ƙoshi kamar da abinci mafi kyau;",
            "poem": 1
          },
          {
            "text": "da leɓunan rerawa bakina zai yabe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "A gadona na tuna da kai;",
            "poem": 1
          },
          {
            "text": "ina tunaninka dukan dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Domin kai ne mai taimakona,",
            "poem": 1
          },
          {
            "text": "ina rera a cikin inuwar fikafikanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Raina ya manne maka;",
            "poem": 1
          },
          {
            "text": "hannunka na dama yana riƙe da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Su da suke neman raina za su hallaka;",
            "poem": 1
          },
          {
            "text": "za su gangara zuwa zurfafan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Za a bayar da su ga takobi",
            "poem": 1
          },
          {
            "text": "su kuma zama abincin karnukan jeji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma sarki zai yi farin ciki ga Allah;",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suke rantse da sunan Allah za su yabe shi,",
            "poem": 2
          },
          {
            "text": "amma za a rufe bakunan maƙaryata.",
            "poem": 2
          }
        ]
      }
    ],
