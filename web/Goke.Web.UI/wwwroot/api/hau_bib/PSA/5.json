  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Don Busa. Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka saurare kalmomina, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ka ji ajiyar zuciyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka saurare kukata na neman taimako,",
            "poem": 1
          },
          {
            "text": "Sarkina da Allahna,",
            "poem": 2
          },
          {
            "text": "gama gare ka nake addu’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Da safe, ya Ubangiji, ka ji muryata;",
            "poem": 1
          },
          {
            "text": "da safe na gabatar da bukatuna a gabanka",
            "poem": 2
          },
          {
            "text": "in kuma jira da sa zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kai ba Allahn da yake jin daɗin mugu ba ne;",
            "poem": 1
          },
          {
            "text": "gama kana gāba da dukan masu aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Masu fariya ba za su iya tsaya",
            "poem": 1
          },
          {
            "text": "a gabanka ba.",
            "poem": 2
          },
          {
            "text": "Kana ƙin duk masu aikata abin da ba daidai ba.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kakan hallaka masu yin ƙarya.",
            "poem": 2
          },
          {
            "text": "Masu kisankai da mutane masu ruɗu",
            "poem": 1
          },
          {
            "text": "Ubangiji yana ƙyama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Amma ni, ta wurin jinƙanka mai girma,",
            "poem": 1
          },
          {
            "text": "zan shiga gidanka;",
            "poem": 2
          },
          {
            "text": "da bangirma zan durƙusa",
            "poem": 1
          },
          {
            "text": "ga haikalinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka bi da ni, ya Ubangiji, cikin adalcinka",
            "poem": 1
          },
          {
            "text": "saboda abokan gābana,",
            "poem": 2
          },
          {
            "text": "ka fayyace hanyarka a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Babu ko kalma guda daga bakinsu da za a dogara da ita;",
            "poem": 1
          },
          {
            "text": "marmarinsu kawai shi ne su hallakar da waɗansu.",
            "poem": 2
          },
          {
            "text": "Maƙogwaronsu buɗaɗɗen kabari ne;",
            "poem": 1
          },
          {
            "text": "da harshensu suna faɗin ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka furta su masu laifi, ya Allah!",
            "poem": 1
          },
          {
            "text": "Bari makircinsu yă zama fāɗuwarsu.",
            "poem": 2
          },
          {
            "text": "Ka kore su saboda yawan zunubansu,",
            "poem": 1
          },
          {
            "text": "saboda sun tayar maka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma bari dukan waɗanda suke neman mafaka gare ka su yi murna;",
            "poem": 1
          },
          {
            "text": "bari kullum su yi ta rerawa saboda farin ciki.",
            "poem": 2
          },
          {
            "text": "Ka buɗe kāriyarka a bisansu,",
            "poem": 1
          },
          {
            "text": "domin waɗanda suke ƙaunar sunanka su yi farin ciki a cikinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gama tabbatacce, ya Ubangiji, kakan albarkaci adalai;",
            "poem": 1
          },
          {
            "text": "kakan kewaye su da tagomashinka kamar garkuwa.",
            "poem": 2
          }
        ]
      }
    ],
