  "chapter": {
    "number": 6,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da kayan kiɗi masu tsirkiya. Bisa ga sheminit.",
          {
            "noteId": 1130
          },
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, kada ka tsawata mini cikin fushinka",
            "poem": 1
          },
          {
            "text": "ko ka hore ni cikin hasalarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka yi mini jinƙai, Ubangiji, gama na suma;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, ka warkar da ni, gama ƙasusuwana suna zafin ciwo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Raina yana cikin wahala.",
            "poem": 1
          },
          {
            "text": "Har yaushe, ya Ubangiji, har yaushe?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka juyo, ya Ubangiji, ka cece ni;",
            "poem": 1
          },
          {
            "text": "ka cece ni saboda madawwamiyar ƙaunarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Babu wanda yakan tuna da kai sa’ad da ya mutu.",
            "poem": 1
          },
          {
            "text": "Wa ke yabonka daga kabari?",
            "poem": 2
          },
          {
            "noteId": 1131
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na gaji tiƙis daga nishi.",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Dukan dare na jiƙe gadona da kuka",
            "poem": 1
          },
          {
            "text": "na jiƙe kujerata da hawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Idanuna sun rasa ƙarfi da baƙin ciki;",
            "poem": 1
          },
          {
            "text": "sun rasa ƙarfi saboda dukan abokan gābana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku tafi daga gare ni, dukanku masu aikata mugunta,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji ya ji kukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ubangiji ya ji kukata saboda jinƙansa;",
            "poem": 1
          },
          {
            "text": "Ubangiji ya karɓi addu’ata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dukan abokan gābana za su sha kunya su kuma karaya;",
            "poem": 1
          },
          {
            "text": "za su juya da kunya nan da nan.",
            "poem": 2
          }
        ]
      }
    ],
