  "chapter": {
    "number": 15,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji, wa zai zauna cikin wuri mai tsarkinka?",
            "poem": 1
          },
          {
            "text": "Wa zai zauna a kan tudunka mai tsarki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sai wanda ba shi da laifi",
            "poem": 1
          },
          {
            "text": "kuma yana yin abin da yake daidai,",
            "poem": 2
          },
          {
            "text": "wanda yake faɗin gaskiya daga zuciyarsa",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "ba ya kuwa ɓata sunan wani da harshensa,",
            "poem": 1
          },
          {
            "text": "wanda ba ya yi wa maƙwabcinsa mugunta",
            "poem": 2
          },
          {
            "text": "ba ya kuwa baza jita-jita a kan ɗan’uwansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "wanda yake ƙin mugun mutum",
            "poem": 1
          },
          {
            "text": "amma yakan girmama masu tsoron Ubangiji,",
            "poem": 2
          },
          {
            "text": "yakan cika alkawarinsa",
            "poem": 1
          },
          {
            "text": "ko da ma ya zafe shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "wanda yake ba da rance ba tare da ruwa ba",
            "poem": 1
          },
          {
            "text": "kuma ba ya karɓan cin hanci don yă kā da marar laifi.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Shi wanda yake yin waɗannan abubuwa",
            "poem": 1
          },
          {
            "text": "ba zai taɓa jijjiguwa ba.",
            "poem": 2
          }
        ]
      }
    ],
