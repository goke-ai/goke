  "chapter": {
    "number": 24,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Duniya ta Ubangiji ce da kome da yake cikinta,",
            "poem": 1
          },
          {
            "text": "duniya, da dukan waɗanda suke zama a cikinta;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "gama ya gina ta a kan tekuna",
            "poem": 1
          },
          {
            "text": "ya kafa ta a kan ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Wa zai iya hawan tudun Ubangiji?",
            "poem": 1
          },
          {
            "text": "Wa zai iya tsaya a wurinsa mai tsarki?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sai wanda yake da hannu mai tsabta da kuma tsabtar zuciya,",
            "poem": 1
          },
          {
            "text": "wanda ba ya ba da ransa ga bautar gunki",
            "poem": 2
          },
          {
            "text": "ko ya rantse bisa abin da yake ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zai sami albarka daga Ubangiji",
            "poem": 1
          },
          {
            "text": "da fiffitawa daga Allah Mai cetonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Irin tsaran waɗanda suke nemansa ke nan,",
            "poem": 1
          },
          {
            "text": "waɗanda suke neman fuskarka, ya Allah na Yaƙub. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ku ɗaga kawunanku, ya ku ƙofofi;",
            "poem": 1
          },
          {
            "text": "ku ɗagu, ku daɗaɗɗun ƙofofi,",
            "poem": 2
          },
          {
            "text": "don Sarkin ɗaukaka yă shiga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Wane ne wannan Sarkin ɗaukaka?",
            "poem": 1
          },
          {
            "text": "Ubangiji ne mai ƙarfi mai iko,",
            "poem": 2
          },
          {
            "text": "Ubangiji mai girma a yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku ɗaga kawunanku, ya ku ƙofofi;",
            "poem": 1
          },
          {
            "text": "ku ɗagu, ku daɗaɗɗun ƙofofi,",
            "poem": 2
          },
          {
            "text": "don Sarkin ɗaukaka yă shiga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Wane ne shi, wannan Sarkin ɗaukaka?",
            "poem": 1
          },
          {
            "text": "Ubangiji Maɗaukaki,",
            "poem": 2
          },
          {
            "text": "shi ne Sarkin ɗaukaka. Sela",
            "poem": 2
          }
        ]
      }
    ],
