  "chapter": {
    "number": 97,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji yana mulki, bari duniya tă yi murna;",
            "poem": 1
          },
          {
            "text": "bari tsibirai masu nesa su yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Gizagizai da baƙin duhu sun kewaye shi;",
            "poem": 1
          },
          {
            "text": "adalci da gaskiya su ne tushen kursiyinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Wuta tana tafiya a gabansa",
            "poem": 1
          },
          {
            "text": "tana kuma cinye maƙiyansa a kowane gefe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Walƙiyarsa ta haskaka duniya;",
            "poem": 1
          },
          {
            "text": "duniya ta gani ta kuma yi rawar jiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duwatsu sun narke kamar kakin zuma a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "a gaban Ubangijin dukan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sammai sun yi shelar adalcinsa,",
            "poem": 1
          },
          {
            "text": "dukan mutane kuma suka ga ɗaukakarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dukan waɗanda suke bauta wa siffofi sun sha kunya,",
            "poem": 1
          },
          {
            "text": "waɗanda suke fariya da gumaka,",
            "poem": 2
          },
          {
            "text": "ku yi masa sujada, dukanku alloli!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Sihiyona ta ji ta kuma yi farin ciki",
            "poem": 1
          },
          {
            "text": "kuma dukan ƙauyukan Yahuda suna murna",
            "poem": 2
          },
          {
            "text": "saboda hukunce-hukuncenka, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gama kai, ya Ubangiji, kai ne Mafi Ɗaukaka a bisa dukan duniya;",
            "poem": 1
          },
          {
            "text": "ana darjanta ka fiye da dukan alloli.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Bari masu ƙaunar Ubangiji su ƙi mugunta,",
            "poem": 1
          },
          {
            "text": "gama yana tsaron rayukan amintattunsa",
            "poem": 2
          },
          {
            "text": "yana kuma kuɓutar da su daga hannun mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "An haskaka haske a kan masu adalci",
            "poem": 1
          },
          {
            "text": "da kuma farin ciki a kan masu gaskiya a zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku yi farin ciki a cikin Ubangiji, ku da kuke masu adalci,",
            "poem": 1
          },
          {
            "text": "ku kuma yabi sunansa mai tsarki.",
            "poem": 2
          }
        ]
      }
    ],
