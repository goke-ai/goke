  "chapter": {
    "number": 31,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "A gare ka, ya Ubangiji, na nemi mafaka;",
            "poem": 1
          },
          {
            "text": "kada ka bari in taɓa shan kunya;",
            "poem": 2
          },
          {
            "text": "ka cece ni cikin rahamarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka juye kunnenka gare ni,",
            "poem": 1
          },
          {
            "text": "ka zo da sauri ka cece ni;",
            "poem": 2
          },
          {
            "text": "ka zama dutsen mafakata,",
            "poem": 1
          },
          {
            "text": "mafaka mai ƙarfi na cetona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Da yake kai ne dutsena da kuma kagarata,",
            "poem": 1
          },
          {
            "text": "saboda sunanka ka bi da ni ka kuma jagorance ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka ’yantar da ni daga tarkon da aka sa mini,",
            "poem": 1
          },
          {
            "text": "gama kai ne mafakata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Cikin hannuwanka na miƙa ruhuna;",
            "poem": 1
          },
          {
            "text": "ka cece ni, ya Ubangiji Allah na gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na ƙi waɗanda suke manne wa gumakan banza;",
            "poem": 1
          },
          {
            "text": "na dogara ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zan yi murna in kuma yi farin ciki a cikin ƙaunarka,",
            "poem": 1
          },
          {
            "text": "gama ka ga azabata",
            "poem": 2
          },
          {
            "text": "ka kuma san wahalar raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ba ka ba da ni ga abokin gāba ba",
            "poem": 1
          },
          {
            "text": "amma ka sa ƙafafuna a wuri mai sarari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka yi mini jinƙai, ya Ubangiji, gama ina cikin damuwa;",
            "poem": 1
          },
          {
            "text": "idanuna sun gaji da baƙin ciki,",
            "poem": 2
          },
          {
            "text": "raina da jikina sun tafke tilis.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Baƙin ciki ya rufe raina",
            "poem": 1
          },
          {
            "text": "shekaruna sun cika da nishi;",
            "poem": 2
          },
          {
            "text": "ƙarfina ya karai saboda azaba,",
            "poem": 1
          },
          {
            "text": "ƙasusuwana kuma sun gaji tiƙis.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Saboda dukan abokan gābana,",
            "poem": 1
          },
          {
            "text": "Na zama tamƙar abin reni na maƙwabtana;",
            "poem": 2
          },
          {
            "text": "na zama abin tsoro ga abokaina,",
            "poem": 1
          },
          {
            "text": "waɗanda suka gan ni a titi sukan gudu daga gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "An manta da ni sai ka ce na mutu;",
            "poem": 1
          },
          {
            "text": "na zama kamar fasasshen kasko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama nakan ji raɗe-raɗen mutane masu yawa;",
            "poem": 1
          },
          {
            "text": "akwai tsoro a kowane gefe;",
            "poem": 2
          },
          {
            "text": "suna ƙulla maƙarƙashiya a kaina",
            "poem": 1
          },
          {
            "text": "suna shirya su ɗauke raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Amma na dogara gare ka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "na ce, “Kai ne Allahna.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Lokutana suna a hannuwanka;",
            "poem": 1
          },
          {
            "text": "ka cece ni daga abokan gābana",
            "poem": 2
          },
          {
            "text": "da kuma daga waɗanda suke fafara ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Bari fuskarka ta haskaka a kan bawanka;",
            "poem": 1
          },
          {
            "text": "ka cece ni da ƙaunarka marar ƙarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka bari in sha kunya, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama na yi kuka gare ka;",
            "poem": 2
          },
          {
            "text": "amma bari mugaye su sha kunya",
            "poem": 1
          },
          {
            "text": "su kuma kwanta shiru a cikin kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Bari a rufe leɓunan ƙarairayinsu,",
            "poem": 1
          },
          {
            "text": "gama da fariya da reni",
            "poem": 2
          },
          {
            "text": "suna magana da girman kai a kan adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Alherinka da girma yake,",
            "poem": 1
          },
          {
            "text": "wanda ka ajiye domin waɗanda suke tsoronka,",
            "poem": 2
          },
          {
            "text": "wanda ka mayar a gaban mutane",
            "poem": 1
          },
          {
            "text": "a kan waɗanda suke neman mafaka daga gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Cikin inuwar kasancewarka ka ɓoye su",
            "poem": 1
          },
          {
            "text": "daga makircin mutane;",
            "poem": 2
          },
          {
            "text": "a wurin zamanka ka kiyaye su lafiya",
            "poem": 1
          },
          {
            "text": "daga harsuna masu zagi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yabo ya tabbata ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama ya nuna ƙaunarsa mai banmamaki gare ni",
            "poem": 2
          },
          {
            "text": "sa’ad da aka yi mini kwanto kewaye da birni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Cikin tsorona na ce,",
            "poem": 1
          },
          {
            "text": "“An yanke ni daga gabanka!”",
            "poem": 2
          },
          {
            "text": "Duk da haka ka ji kukata na neman jinƙai",
            "poem": 1
          },
          {
            "text": "sa’ad da na kira gare ka don taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ku ƙaunaci Ubangiji, dukanku tsarkakansa!",
            "poem": 1
          },
          {
            "text": "Ubangiji yakan adana amintattu,",
            "poem": 2
          },
          {
            "text": "amma masu girman kai yakan sāka musu cikakke.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ku yi ƙarfin hali ku kuma ƙarfafa,",
            "poem": 1
          },
          {
            "text": "dukanku masu sa bege a kan Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
