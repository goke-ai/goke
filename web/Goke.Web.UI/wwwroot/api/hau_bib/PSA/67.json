  "chapter": {
    "number": 67,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Tare da kayan kiɗi masu tsirkiya. Zabura. Waƙa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Bari Allah yă yi mana alheri yă kuma albarkace mu",
            "poem": 1
          },
          {
            "text": "yă kuma sa fuskarsa ta haskaka a kanmu, Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "don a san hanyoyinka a duniya,",
            "poem": 1
          },
          {
            "text": "cetonka kuma a cikin dukan al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari mutane su yabe ka, ya Allah;",
            "poem": 1
          },
          {
            "text": "bari dukan mutane su yabe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari al’ummai su yi murna su kuma rera don farin ciki,",
            "poem": 1
          },
          {
            "text": "gama kana mulkin mutanenka da adalci",
            "poem": 2
          },
          {
            "text": "kana kuma bi da al’umman duniya. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari mutane su yabe ka, ya Allah;",
            "poem": 1
          },
          {
            "text": "bari dukan mutane su yabe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’an nan ƙasa za tă ba da girbinta",
            "poem": 1
          },
          {
            "text": "Allah kuma, Allahnmu, zai albarkace mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Allah yă sa mana albarka,",
            "poem": 1
          },
          {
            "text": "dukan iyakar duniya kuma su ji tsoronsa.",
            "poem": 2
          }
        ]
      }
    ],
