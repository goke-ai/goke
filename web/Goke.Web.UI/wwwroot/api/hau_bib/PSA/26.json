  "chapter": {
    "number": 26,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka nuna rashin laifina, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama na yi rayuwa marar zargi;",
            "poem": 2
          },
          {
            "text": "Na dogara ga Ubangiji",
            "poem": 1
          },
          {
            "text": "ba tare da kaucewa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka jarraba ni, ya Ubangiji, ka kuma gwada ni,",
            "poem": 1
          },
          {
            "text": "ka bincike zuciyata da tunanina;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "gama ƙaunarka kullum tana a gabana,",
            "poem": 1
          },
          {
            "text": "kuma ina cin gaba da tafiya a cikin gaskiyarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba na zama tare da masu ruɗu,",
            "poem": 1
          },
          {
            "text": "ko in yi tarayya da masu riya;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "na ƙi jinin taron masu aikata mugunta",
            "poem": 1
          },
          {
            "text": "na ƙi in zauna tare da mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na wanke hannuwana cikin rashin laifi,",
            "poem": 1
          },
          {
            "text": "ina yawo a bagadenka Ya Ubangiji,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "ina shelar yabonka da ƙarfi",
            "poem": 1
          },
          {
            "text": "ina faɗin dukan ayyukanka masu banmamaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ina ƙaunar gidan da kake zama, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "wurin da ɗaukakarka ke zaune.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka ɗauke raina tare da masu zunubi",
            "poem": 1
          },
          {
            "text": "raina tare da masu son yin kisankai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "waɗanda akwai mugayen dabaru a hannuwansu,",
            "poem": 1
          },
          {
            "text": "waɗanda hannuwansu na dama suna cike da cin hanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma na yi rayuwa marar zargi;",
            "poem": 1
          },
          {
            "text": "ka cece ni ka kuma yi mini jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ƙafafuna suna tsaye daram;",
            "poem": 1
          },
          {
            "text": "cikin taro mai girma zan yabi Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
