  "chapter": {
    "number": 91,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Shi wanda yake zama a wurin Mafi Ɗaukaka",
            "poem": 1
          },
          {
            "text": "zai huta a cikin inuwar Maɗaukaki.",
            "poem": 2
          },
          {
            "noteId": 1189
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan ce game da Ubangiji, “Shi ne mafakata da kagarata,",
            "poem": 1
          },
          {
            "text": "Allahna, wanda nake dogara.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Tabbatacce zai cece ka",
            "poem": 1
          },
          {
            "text": "daga tarkon mai farauta",
            "poem": 2
          },
          {
            "text": "da kuma daga cututtuka masu kisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zai rufe ka da fikafikansa,",
            "poem": 1
          },
          {
            "text": "a ƙarƙashin fikafikansa kuwa za ka sami mafaka;",
            "poem": 2
          },
          {
            "text": "amincinsa zai zama maka garkuwa da katanga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba za ka ji tsoron razanar dare,",
            "poem": 1
          },
          {
            "text": "ko kibiyoyi da suke firiya da rana ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "ko bala’in da yake aukowa cikin duhu,",
            "poem": 1
          },
          {
            "text": "ko annobar da take hallakarwa da tsakar rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dubu za su iya fāɗuwa a gefenka,",
            "poem": 1
          },
          {
            "text": "dubu goma a hannun damanka,",
            "poem": 2
          },
          {
            "text": "amma ba abin da zai zo kusa da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Za ka dai gan da idanunka",
            "poem": 1
          },
          {
            "text": "yadda ake hukunta mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In ka mai da Mafi Ɗaukaka wurin zamanka,",
            "poem": 1
          },
          {
            "text": "har ma Ubangiji wanda yake mafakata,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "to, babu wani mugun abin da zai same ka,",
            "poem": 1
          },
          {
            "text": "ba masifar da za tă zo kusa da tentinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama zai umarci mala’ikunsa game da kai",
            "poem": 1
          },
          {
            "text": "don su tsare ka a dukan hanyoyinka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "za su tallafe ka da hannuwansu,",
            "poem": 1
          },
          {
            "text": "don kada ka buga ƙafarka a kan dutse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Za ka taka zaki da gamsheƙa;",
            "poem": 1
          },
          {
            "text": "za ka tattake babban zaki da maciji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ubangiji ya ce, “Domin ya ƙaunace ni, zan kuɓutar da shi;",
            "poem": 1
          },
          {
            "text": "zan kiyaye shi, gama ya yarda da sunana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zai kira bisa sunana, zan kuma amsa masa;",
            "poem": 1
          },
          {
            "text": "zan kasance tare da shi a lokacin wahala,",
            "poem": 2
          },
          {
            "text": "zan kuɓutar da shi in kuma girmama shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Da tsawon rai zan ƙosar da shi",
            "poem": 1
          },
          {
            "text": "in kuma nuna masa cetona.”",
            "poem": 2
          }
        ]
      }
    ],
