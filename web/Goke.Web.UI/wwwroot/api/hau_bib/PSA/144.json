  "chapter": {
    "number": 144,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabo ya tabbata ga Ubangiji dutsena,",
            "poem": 1
          },
          {
            "text": "wanda ya horar da hannuwana don yaƙi,",
            "poem": 2
          },
          {
            "text": "yatsotsina don faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Shi ne Allah mai ƙaunata da kuma kagarata,",
            "poem": 1
          },
          {
            "text": "katangata da mai cetona,",
            "poem": 2
          },
          {
            "text": "garkuwata, wanda nake neman mafaka daga gare shi,",
            "poem": 1
          },
          {
            "text": "wanda ya sa mutane a ƙarƙashina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya Ubangiji, wane ne mutum da ka kula da shi,",
            "poem": 1
          },
          {
            "text": "ɗan mutum da har za ka yi tunaninsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mutum yana kama da numfashi;",
            "poem": 1
          },
          {
            "text": "kwanakinsa suna wucewa kamar inuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka tsage sammanka, ya Ubangiji, ka sauko;",
            "poem": 1
          },
          {
            "text": "ka taɓa duwatsu, domin su yi hayaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka aiko da walƙiya ka watsar da abokan gāba;",
            "poem": 1
          },
          {
            "text": "ka karɓa kibiyoyinka ka sa su gudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka miƙa hannunka daga bisa;",
            "poem": 1
          },
          {
            "text": "ka cece ni ka kuma kuɓutar da ni",
            "poem": 2
          },
          {
            "text": "daga manyan ruwaye,",
            "poem": 1
          },
          {
            "text": "daga hannuwan baƙi",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "waɗanda bakunansu sun cika da ƙarya,",
            "poem": 1
          },
          {
            "text": "waɗanda hannuwansu na dama masu ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Zan rera sabuwar waƙa gare ka, ya Allah;",
            "poem": 1
          },
          {
            "text": "a kan molo mai tsirkiya goma zan yi maka kiɗi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "ga Wannan wanda yake ba wa sarakuna nasara,",
            "poem": 1
          },
          {
            "text": "wanda ya cece bawansa Dawuda.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Daga takobin kisa.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka cece ni ka kuma kuɓutar da ni",
            "poem": 1
          },
          {
            "text": "daga hannuwan baƙi",
            "poem": 2
          },
          {
            "text": "waɗanda bakunansu sun cika da ƙarya,",
            "poem": 1
          },
          {
            "text": "waɗanda hannuwansu na dama masu ruɗu ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ta haka ’ya’yanmu maza a ƙuruciyarsu",
            "poem": 1
          },
          {
            "text": "za su zama kamar tsire-tsiren da aka kula da su,",
            "poem": 2
          },
          {
            "text": "’ya’yanmu mata kuma za su zama kamar ginshiƙai",
            "poem": 1
          },
          {
            "text": "da sassaƙa don adon fada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Rumbunanmu za su cika",
            "poem": 1
          },
          {
            "text": "da kowane irin tanadi.",
            "poem": 2
          },
          {
            "text": "Tumakinmu za su ƙaru ninki dubu,",
            "poem": 1
          },
          {
            "text": "ninki dubu goma-goma a filayenmu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "shanunmu za su ja kaya masu nauyi.",
            "poem": 2
          },
          {
            "noteId": 1209
          },
          {
            "text": "Ba za a sami tashin hankali a katangarmu ba,",
            "poem": 1
          },
          {
            "text": "ba zuwan zaman bauta,",
            "poem": 2
          },
          {
            "text": "ba jin kukan damuwa a titunanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Masu albarka ne mutanen da wannan zai zama haka;",
            "poem": 1
          },
          {
            "text": "masu albarka ne mutanen da Allah ne Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
