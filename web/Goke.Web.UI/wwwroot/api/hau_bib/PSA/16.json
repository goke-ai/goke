  "chapter": {
    "number": 16,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Miktam ne",
          {
            "noteId": 1137
          },
          "na Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka kiyaye ni, ya Allah,",
            "poem": 1
          },
          {
            "text": "gama a cikinka nake samun mafaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Na ce wa Ubangiji, “Kai ne shugabana;",
            "poem": 1
          },
          {
            "text": "in ba tare da kai ba, ba ni da wani abu mai kyau.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Game da tsarkakan da suke cikin ƙasar kuwa,",
            "poem": 1
          },
          {
            "text": "su ne masu ɗaukakar da dukan farin cikina ya dangana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Baƙin ciki zai ƙaru wa waɗanda suke bin waɗansu alloli.",
            "poem": 1
          },
          {
            "text": "Ba zan zuba musu hadayarsu ta jini ba",
            "poem": 2
          },
          {
            "text": "ko in ambaci sunayensu da bakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji, ka ba ni rabona da kwaf ɗin na;",
            "poem": 1
          },
          {
            "text": "ka kiyaye rabona,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Iyakoki sun fāɗo mini a wurare masu daɗi;",
            "poem": 1
          },
          {
            "text": "tabbatacce ina da gādo mai bansha’awa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zan yabi Ubangiji, wanda yake ba ni shawara;",
            "poem": 1
          },
          {
            "text": "ko da dare ma zuciyata kan koya mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kullum nakan sa Ubangiji a gabana.",
            "poem": 1
          },
          {
            "text": "Gama yana a hannun damana, ba zan jijjigu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Saboda haka zuciyata tana murna harshena kuma yana farin ciki;",
            "poem": 1
          },
          {
            "text": "jikina kuma zai zauna lafiya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "domin ba za ka yashe ni a kabari ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa za ka bar Mai Tsarkinka yă ruɓa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka sanar da ni hanyar rai;",
            "poem": 1
          },
          {
            "text": "za ka cika ni da farin ciki a gabanka,",
            "poem": 2
          },
          {
            "text": "da madawwamin jin daɗi a hannun damarka.",
            "poem": 2
          }
        ]
      }
    ],
