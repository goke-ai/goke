  "chapter": {
    "number": 108,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙa ce. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zuciyata tsayayyiya ce, ya Allah;",
            "poem": 1
          },
          {
            "text": "zan rera in kuma yi kiɗi da dukan raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku farka, garaya da molo!",
            "poem": 1
          },
          {
            "text": "Zan farkar da rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Zan yabe ka, ya Ubangiji, a cikin al’ummai;",
            "poem": 1
          },
          {
            "text": "zan rera game da kai cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama ƙaunarka da girma take, bisa fiye da sammai;",
            "poem": 1
          },
          {
            "text": "amincinka ya kai sarari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "A ɗaukaka ka, ya Allah, a bisa sammai,",
            "poem": 1
          },
          {
            "text": "bari kuma ɗaukakarka ta kasance a bisa dukan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka cece mu ka kuma taimake mu da hannunka na dama,",
            "poem": 1
          },
          {
            "text": "domin waɗanda kake ƙauna su kuɓuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Allah ya yi magana daga wurinsa mai tsarki,",
            "poem": 1
          },
          {
            "text": "“Ciki nasara zan raba Shekem",
            "poem": 2
          },
          {
            "text": "in kuma auna Kwarin Sukkot.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Gileyad nawa ne, Manasse nawa ne;",
            "poem": 1
          },
          {
            "text": "Efraim shi hulan kwanona,",
            "poem": 2
          },
          {
            "text": "Yahuda ne sandana na sarauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mowab shi ne kwanon wankina,",
            "poem": 1
          },
          {
            "text": "a kan Edom zan jefa takalmina;",
            "poem": 2
          },
          {
            "text": "a bisa Filistiya zan yi kirari cikin nasara.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Wa zai kawo ni birni mai katanga?",
            "poem": 1
          },
          {
            "text": "Wa zai jagorance ni zuwa Edom?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ba kai ba ne, ya Allah, kai da ka ƙi mu",
            "poem": 1
          },
          {
            "text": "ba ka kuwa fita tare da mayaƙanmu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka ba mu taimako a kan abokin gāba,",
            "poem": 1
          },
          {
            "text": "gama taimakon mutum banza ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Tare da Allah za mu yi nasara,",
            "poem": 1
          },
          {
            "text": "zai kuma tattaka abokan gābanmu.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
