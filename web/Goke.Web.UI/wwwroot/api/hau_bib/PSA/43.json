  "chapter": {
    "number": 43,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka nuna ni marar laifi ne, ya Allah,",
            "poem": 1
          },
          {
            "text": "ka kuma nemi hakkina",
            "poem": 2
          },
          {
            "text": "a kan al’ummai marasa sanin Allah.",
            "poem": 2
          },
          {
            "text": "Ka kuɓutar da ni daga",
            "poem": 1
          },
          {
            "text": "masu ruɗu da mugayen mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kai ne Allah mafakata.",
            "poem": 1
          },
          {
            "text": "Me ya sa ka ƙi ni?",
            "poem": 2
          },
          {
            "text": "Me zai sa in yi ta yawo ina makoki,",
            "poem": 1
          },
          {
            "text": "a danne a hannun abokin gāba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka aiko da haskenka da gaskiyarka,",
            "poem": 1
          },
          {
            "text": "bari su bishe ni",
            "poem": 2
          },
          {
            "text": "bari su kawo ni ga dutsenka mai tsarki,",
            "poem": 1
          },
          {
            "text": "zuwa wurin da kake zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sa’an nan zan tafi bagaden Allah,",
            "poem": 1
          },
          {
            "text": "ga Allah, farin cikina da murnata.",
            "poem": 2
          },
          {
            "text": "Zan yabe ka da garaya,",
            "poem": 1
          },
          {
            "text": "Ya Allah, Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Me ya sa kake baƙin ciki, ya raina?",
            "poem": 1
          },
          {
            "text": "Me ya sa ka damu a cikina?",
            "poem": 2
          },
          {
            "text": "Ka dogara ga Allah,",
            "poem": 1
          },
          {
            "text": "gama zai sāke yabe shi,",
            "poem": 2
          },
          {
            "text": "Mai Cetona da Allahna.",
            "poem": 2
          }
        ]
      }
    ],
