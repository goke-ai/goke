  "chapter": {
    "number": 23,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji ne yake kiwona, ba zan rasa kome ba,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yakan sa in kwanta a makiyaya mai ɗanyar ciyawa,",
            "poem": 2
          },
          {
            "text": "yakan bi da ni kusa da ruwaye marar hayaniya,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "yakan maido da raina.",
            "poem": 2
          },
          {
            "text": "Yakan bi da ni a hanyoyin adalci",
            "poem": 1
          },
          {
            "text": "saboda sunansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ko da na yi tafiya",
            "poem": 1
          },
          {
            "text": "ta kwari na inuwar mutuwa,",
            "poem": 2
          },
          {
            "noteId": 1138
          },
          {
            "text": "ba zan ji tsoron mugu ba,",
            "poem": 1
          },
          {
            "text": "gama kana tare da ni;",
            "poem": 2
          },
          {
            "text": "bulalarka na dūka da kuma sandanka na tafiya,",
            "poem": 1
          },
          {
            "text": "za su yi mini ta’aziyya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka shirya mini tebur",
            "poem": 1
          },
          {
            "text": "a gaban abokan gābana.",
            "poem": 2
          },
          {
            "text": "Ka shafe kaina da mai;",
            "poem": 1
          },
          {
            "text": "kwaf nawa ya cika har yana zuba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Tabbatacce alheri da ƙauna za su bi",
            "poem": 1
          },
          {
            "text": "dukan kwanakin raina,",
            "poem": 2
          },
          {
            "text": "zan kuwa zauna a gidan Ubangiji",
            "poem": 1
          },
          {
            "text": "har abada.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1138,
        "caller": "+",
        "text": "Ko kuwa ta kwarin mafi duhu duka",
