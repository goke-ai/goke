  "chapter": {
    "number": 77,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Don Yedutun. Na Asaf. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na yi kuka ga Allah don taimako;",
            "poem": 1
          },
          {
            "text": "na yi kuka ga Allah don yă ji ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sa’ad da nake cikin damuwa, na nemi Ubangiji;",
            "poem": 1
          },
          {
            "text": "da dare na miƙa hannuwa ba gajiya",
            "poem": 2
          },
          {
            "text": "raina kuma ya ƙi yă ta’azantu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Na tuna da kai, ya Allah, na kuma yi nishi;",
            "poem": 1
          },
          {
            "text": "na yi nishi, ƙarfina kuwa duk ya raunana. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ka hana idanuna rufewa;",
            "poem": 1
          },
          {
            "text": "na damu ƙwarai har ba na iya magana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na yi tunani kwanakin da suka wuce,",
            "poem": 1
          },
          {
            "text": "shekarun da suka wuce da daɗewa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "na tuna da waƙoƙina da dare.",
            "poem": 1
          },
          {
            "text": "Zuciyata ta yi nishi, ƙarfina kuwa ya nemi yă sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Ubangiji zai ƙi ne har abada?",
            "poem": 1
          },
          {
            "text": "Ba zai taɓa nuna alherinsa kuma ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙaunarsa marar ƙarewa ta ɓace ke nan har abada?",
            "poem": 1
          },
          {
            "text": "Alkawarinsa ya kāsa ke nan a dukan lokaci?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Allah ya manta yă yi jinƙai?",
            "poem": 1
          },
          {
            "text": "Cikin fushinsa ya janye tausayinsa ne?” Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sai na yi tunani, “Zan yi roƙo saboda wannan,",
            "poem": 1
          },
          {
            "text": "shekarun da Mafi Ɗaukaka ya miƙa hannunsa na dama.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Zan tuna da ayyukan Ubangiji;",
            "poem": 1
          },
          {
            "text": "I, zan tuna mu’ujizanka na tun dā.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Zan yi tunani a kan dukan ayyukanka",
            "poem": 1
          },
          {
            "text": "in lura da dukan manyan abubuwan da ka aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Hanyoyinka, ya Allah, masu tsarki ne.",
            "poem": 1
          },
          {
            "text": "Wanda allah ne yake da girma kamar Allahnmu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kai ne Allahn da yakan aikata mu’ujizai;",
            "poem": 1
          },
          {
            "text": "ka nuna ikonka a cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Da hannunka mai ƙarfi ka fanshi mutanenka,",
            "poem": 1
          },
          {
            "text": "zuriyar Yaƙub da Yusuf. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ruwaye sun gan ka, ya Allah,",
            "poem": 1
          },
          {
            "text": "ruwaye sun gan ka suka firgita;",
            "poem": 2
          },
          {
            "text": "zurfafan gaske sun girgiza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Gizagizai sun sauko da ruwa,",
            "poem": 1
          },
          {
            "text": "sararin sama suka buga tsawa;",
            "poem": 2
          },
          {
            "text": "kibiyoyinka suka yi ta kai komo da walƙiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Aka ji tsawanka a cikin guguwa,",
            "poem": 1
          },
          {
            "text": "walƙiyarka ta haskaka duniya;",
            "poem": 2
          },
          {
            "text": "duniya ta yi rawar jiki ta girgiza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Hanyarka ta bi ta cikin teku,",
            "poem": 1
          },
          {
            "text": "hanyarka ta bi cikin manyan ruwaye,",
            "poem": 2
          },
          {
            "text": "duk da haka ba a ga sawunka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka bi da mutanenka kamar garke",
            "poem": 1
          },
          {
            "text": "ta hannun Musa da Haruna.",
            "poem": 2
          }
        ]
      }
    ],
