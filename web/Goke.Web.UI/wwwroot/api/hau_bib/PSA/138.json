  "chapter": {
    "number": 138,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan yabe ka, ya Ubangiji, da dukan zuciyata;",
            "poem": 1
          },
          {
            "text": "a gaban “alloli” zan rera yabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan rusuna ta wajen haikalinka mai tsarki",
            "poem": 1
          },
          {
            "text": "zan kuma yabi sunanka",
            "poem": 2
          },
          {
            "text": "saboda ƙaunarka da amincinka,",
            "poem": 2
          },
          {
            "text": "saboda ka ɗaukaka a bisa kome",
            "poem": 1
          },
          {
            "text": "sunanka da kuma maganarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da na kira, ka amsa mini;",
            "poem": 1
          },
          {
            "text": "ka sa na zama mai ƙarfin hali ka kuma ƙarfafa ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari dukan sarakunan duniya su yabe ka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "sa’ad da suka ji maganganun bakinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari su rera game da hanyoyin Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama ɗaukakar Ubangiji da girma take.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ko da yake Ubangiji yana bisa, yakan dubi kāsassu,",
            "poem": 1
          },
          {
            "text": "amma tun da nesa ya san masu girman kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ko da na yi tafiya a tsakiyar wahala,",
            "poem": 1
          },
          {
            "text": "kana kiyaye raina;",
            "poem": 2
          },
          {
            "text": "ka miƙa hannunka a kan fushin maƙiyana,",
            "poem": 1
          },
          {
            "text": "da hannunka na dama ka cece ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji zai cika manufarsa a kaina;",
            "poem": 1
          },
          {
            "text": "ƙaunarka, ya Ubangiji, madawwamiya ce har abada,",
            "poem": 2
          },
          {
            "text": "kada ka ƙyale ayyukan hannuwanka.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
