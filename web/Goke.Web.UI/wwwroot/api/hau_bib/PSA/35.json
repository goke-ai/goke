  "chapter": {
    "number": 35,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yi hamayya, ya Ubangiji, da waɗanda suke hamayya da ni;",
            "poem": 1
          },
          {
            "text": "yi faɗa da waɗanda suke faɗa da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka ɗauki garkuwa da kuma makami;",
            "poem": 1
          },
          {
            "text": "ka tashi ka taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka ɗaga māshi da kuma abin da ake jefa",
            "poem": 1
          },
          {
            "noteId": 1144
          },
          {
            "text": "a kan waɗanda suke fafarata.",
            "poem": 2
          },
          {
            "text": "Ka ce wa raina,",
            "poem": 1
          },
          {
            "text": "“Ni ne cetonka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari waɗanda suke neman raina",
            "poem": 1
          },
          {
            "text": "su sha kunya a kuma kunyatar da su;",
            "poem": 2
          },
          {
            "text": "bari waɗanda suke shirya lalacewata",
            "poem": 1
          },
          {
            "text": "su juya da baya su ruɗe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari su zama kamar yayi a gaban iska,",
            "poem": 1
          },
          {
            "text": "mala’ikan Ubangiji kuma yana korarsu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "bari hanyarsu tă yi duhu ta kuma yi santsi,",
            "poem": 1
          },
          {
            "text": "mala’ikan Ubangiji kuma yana fafararsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Da yake sun ɓoye tarko domina ba dalili",
            "poem": 1
          },
          {
            "text": "kuma babu dalili suka haƙa mini rami,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "bari lalaci yă kama su ba zato,",
            "poem": 1
          },
          {
            "text": "bari tarkon da suka ɓoye yă kama su,",
            "poem": 2
          },
          {
            "text": "bari su fāɗa cikin ramin, yă kai ga lalacinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Sa’an nan raina zai cika da farin ciki a cikin Ubangiji",
            "poem": 1
          },
          {
            "text": "in yi kuma murna a cikin cetonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dukan raina zai ce,",
            "poem": 1
          },
          {
            "text": "“Wane ne kamar ka, ya Ubangiji?",
            "poem": 2
          },
          {
            "text": "Ka kuɓutar da matalauta daga waɗanda suka fi ƙarfinsu,",
            "poem": 1
          },
          {
            "text": "matalauta da masu bukata daga waɗanda suke musu fashi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Shaidu marasa imani sun fito;",
            "poem": 1
          },
          {
            "text": "suna mini tambaya a kan abubuwan da ban san kome a kai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Suna sāka alherin da na yi musu da mugunta",
            "poem": 1
          },
          {
            "text": "suka bar raina da nadama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duk da haka sa’ad da suke ciwo, na sanya rigar makoki",
            "poem": 1
          },
          {
            "text": "na ƙasƙantar da kaina da azumi.",
            "poem": 2
          },
          {
            "text": "Sa’ad da aka mayar mini da addu’o’i babu amsa,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "nakan yi ta yawo ina makoki",
            "poem": 2
          },
          {
            "text": "sai ka ce yadda nake yi wa abokina ko ɗan’uwana.",
            "poem": 2
          },
          {
            "text": "Nakan sunkuyar da kaina cikin baƙin ciki",
            "poem": 1
          },
          {
            "text": "sai ka ce ina kuka domin mahaifiyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma sa’ad da na yi tuntuɓe, sukan taru suna murna;",
            "poem": 1
          },
          {
            "text": "masu kai hari sun taru a kaina sa’ad da ban sani ba.",
            "poem": 2
          },
          {
            "text": "Suna ɓata mini suna ba tsagaitawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kamar marasa sani Allah suna mini riyar ba’a;",
            "poem": 1
          },
          {
            "text": "Suna hararata da ƙiyayya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ya Ubangiji, har yaushe za ka ci gaba da zuba ido kawai?",
            "poem": 1
          },
          {
            "text": "Ka kuɓutar da raina daga farmakinsu,",
            "poem": 2
          },
          {
            "text": "raina mai daraja daga waɗannan zakoki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zan yi godiya cikin taro mai girma;",
            "poem": 1
          },
          {
            "text": "cikin ɗumbun mutane zan yabe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kada ka bar maƙaryatan nan,",
            "poem": 1
          },
          {
            "text": "su yi farin ciki a kaina;",
            "poem": 2
          },
          {
            "text": "kada ka bar waɗanda suke ƙina ba dalili,",
            "poem": 1
          },
          {
            "text": "su ji daɗin baƙin cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ba sa maganar salama",
            "poem": 1
          },
          {
            "text": "sukan ƙirƙiro zage-zagen ƙarya",
            "poem": 2
          },
          {
            "text": "a kan waɗanda suka zama shiru a ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sukan wage mini bakinsu suna cewa, “Allah yă ƙara!",
            "poem": 1
          },
          {
            "text": "Da idanunmu mun gani.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ya Ubangiji, ka ga wannan; kada ka yi shiru.",
            "poem": 1
          },
          {
            "text": "Kada ka yi nisa da ni, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ka farka, ka kuma tashi ka kāre ni!",
            "poem": 1
          },
          {
            "text": "Ka yi mini faɗa, ya Allahna da shugabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka nuna ni marar laifi ne ciki adalcinka,",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji Allahna; kada ka bari su yi farin ciki a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Kada ka bari su ce wa kansu, “Allah yă ƙara, dā ma abin da mun so ke nan!”",
            "poem": 1
          },
          {
            "text": "Ko su ce, “Mun haɗiye shi.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Bari dukan waɗanda suke farin ciki a kaina a wahalata",
            "poem": 1
          },
          {
            "text": "su sha kunya su kuma ruɗe;",
            "poem": 2
          },
          {
            "text": "bari dukan waɗanda suke ɗaukar kansu sun fi ni",
            "poem": 1
          },
          {
            "text": "su sha kunya da wulaƙanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Bari waɗanda suke murna saboda nasarata",
            "poem": 1
          },
          {
            "text": "su yi sowa don farin ciki da murna;",
            "poem": 2
          },
          {
            "text": "bari kullum su riƙa cewa, “A ɗaukaka Ubangiji,",
            "poem": 1
          },
          {
            "text": "wanda yake farin ciki da zaman lafiyar bawansa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Harshena zai yi zancen adalcinka",
            "poem": 1
          },
          {
            "text": "da kuma yabonka dukan yini.",
            "poem": 2
          }
        ]
      }
    ],
