  "chapter": {
    "number": 107,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku yi godiya ga Ubangiji, gama nagari ne shi;",
            "poem": 1
          },
          {
            "text": "ƙaunarsa madawwamiya ce har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari fansassu na Ubangiji su faɗa wannan,",
            "poem": 1
          },
          {
            "text": "su da aka fansa daga hannun maƙiyi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "su da ya tattara daga ƙasashe,",
            "poem": 1
          },
          {
            "text": "daga gabas da yamma, daga arewa da kudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Waɗansu sun yi ta yawo a jejin hamada,",
            "poem": 1
          },
          {
            "text": "ba su sami hanya zuwa birnin da za su zauna ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sun ji yunwa da ƙishirwa,",
            "poem": 1
          },
          {
            "text": "suka kuma fid da zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’an nan suka yi kuka ga Ubangiji cikin wahalarsu,",
            "poem": 1
          },
          {
            "text": "ya kuma cece su daga damuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya bishe su ta miƙaƙƙiyar hanya",
            "poem": 1
          },
          {
            "text": "zuwa birnin da za su zauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari su yi godiya ga Ubangiji saboda ƙaunarsa marar ƙarewa",
            "poem": 1
          },
          {
            "text": "da kuma ayyukansa masu banmamaki saboda mutane,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "gama yana shayar da masu ƙishirwa",
            "poem": 1
          },
          {
            "text": "yana kuma ƙosar da mayunwata da abubuwa masu kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Waɗansu sun zauna a cikin duhu da kuma zurfin ɓacin rai,",
            "poem": 1
          },
          {
            "text": "’yan kurkuku suna wahala cikin sarƙoƙin ƙarfe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "gama sun yi tayarwa a kan maganar Allah",
            "poem": 1
          },
          {
            "text": "suka ƙi shawarar Mafi Ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Saboda haka ya ba da su ga aiki mai wuya;",
            "poem": 1
          },
          {
            "text": "suka yi tuntuɓe, kuma ba mai taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Sa’an nan suka yi kuka ga Ubangiji cikin wahalarsu,",
            "poem": 1
          },
          {
            "text": "ya kuwa cece su daga damuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ya fitar da su daga duhu da zurfin ɓaci rai",
            "poem": 1
          },
          {
            "text": "ya tsintsinke sarƙoƙinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari su yi godiya ga Ubangiji saboda ƙaunarsa marar ƙarewa",
            "poem": 1
          },
          {
            "text": "da kuma ayyukansa masu banmamaki saboda mutane,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "gama ya farfashe ƙofofin tagulla",
            "poem": 1
          },
          {
            "text": "ya kuma ragargaza ƙyamaren ƙarfe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Waɗansu suka zama wawaye ta wurin hanyoyinsu na tayarwa",
            "poem": 1
          },
          {
            "text": "suka kuwa sha wahala saboda laifofinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ba su so su ga abinci ba",
            "poem": 1
          },
          {
            "text": "suka kuwa kai bakin mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Sa’an nan suka yi kuka ga Ubangiji cikin wahalarsu,",
            "poem": 1
          },
          {
            "text": "ya kuwa cece su daga damuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ya ba da umarninsa ya kuma warkar da su",
            "poem": 1
          },
          {
            "text": "ya kuɓutar da su daga kabari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Bari su yi godiya ga Ubangiji saboda ƙaunarsa marar ƙarewa",
            "poem": 1
          },
          {
            "text": "da kuma ayyukansa masu banmamaki saboda mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Bari su miƙa hadaya ta godiya",
            "poem": 1
          },
          {
            "text": "su kuma ba da labarin ayyukansa da waƙoƙin farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Waɗansu suka yi tafiya a teku cikin jiragen ruwa;",
            "poem": 1
          },
          {
            "text": "su ’yan kasuwa ne a manyan ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sun ga ayyukan Ubangiji,",
            "poem": 1
          },
          {
            "text": "ayyukansa masu banmamaki a cikin zurfin teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Gama ya yi magana ya kuma sa iska mai ƙarfi ta tashi",
            "poem": 1
          },
          {
            "text": "ya ɗaga raƙuman ruwa sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Suka hau zuwa sammai suka kuma tsinduma cikin zurfafa;",
            "poem": 1
          },
          {
            "text": "a cikin azabarsu sai ƙarfin halinsu ya karai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Suka yi tangaɗi suna tuntuɓe kamar bugaggu;",
            "poem": 1
          },
          {
            "text": "suka kuma kai ga ƙarshen dabararsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Sai suka yi kuka ga Ubangiji cikin wahalarsu,",
            "poem": 1
          },
          {
            "text": "ya kuwa fitar da su daga damuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ya kwantar da hadiri suka yi tsit;",
            "poem": 1
          },
          {
            "text": "raƙuman ruwan teku suka yi shiru.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Suka yi murna sa’ad da wuri ya kwanta,",
            "poem": 1
          },
          {
            "text": "ya kuma bishe su zuwa inda suka so su kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Bari su yi godiya ga Ubangiji saboda ƙaunarsa marar ƙarewa",
            "poem": 1
          },
          {
            "text": "da kuma ayyukansa masu banmamaki saboda mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Bari su ɗaukaka shi cikin taron mutane",
            "poem": 1
          },
          {
            "text": "su kuma yabe shi cikin taron dattawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ya mai da koguna suka zama hamada,",
            "poem": 1
          },
          {
            "text": "maɓulɓulai masu gudu suka zama ƙasa mai ƙishirwa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "ƙasa mai amfani kuma suka zama gishiri marar amfani,",
            "poem": 1
          },
          {
            "text": "saboda muguntar waɗanda suka zauna a can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Ya mai da hamada ya zama tafkunan ruwa",
            "poem": 1
          },
          {
            "text": "busasshiyar ƙasa kuma zuwa maɓulɓulai masu gudu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "a can ya kai mayunwata su yi zama,",
            "poem": 1
          },
          {
            "text": "ya kuma samo birnin da za su zauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Suka yi shuka a gonaki suka dasa inabi",
            "poem": 1
          },
          {
            "text": "suka kuma girbe amfani gona;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "ya albarkace su, yawansu kuma ya ƙaru,",
            "poem": 1
          },
          {
            "text": "bai kuwa bar garkunansu suka ragu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Sa’an nan yawansu ya ragu, aka kuma ƙasƙantar da su",
            "poem": 1
          },
          {
            "text": "ta wurin danniya, bala’i da kuma baƙin ciki;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "shi da yake kawo reni a kan manyan mutane",
            "poem": 1
          },
          {
            "text": "ya sa suka yi ta yawo a cikin jejin da ba hanya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Amma ya fid da mabukata daga wahalarsu",
            "poem": 1
          },
          {
            "text": "ya kuma ƙara iyalansu da tumakinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "Masu yin gaskiya suka gani suka yi farin ciki",
            "poem": 1
          },
          {
            "text": "amma dukan mugaye suka rufe bakunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "Duk mai hikima, bari yă ji waɗannan abubuwa",
            "poem": 1
          },
          {
            "text": "yă kuma lura da ƙauna mai girma ta Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
