  "chapter": {
    "number": 86,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Addu’ar Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji, ya Ubangiji, ka kuma amsa mini,",
            "poem": 1
          },
          {
            "text": "gama ni matalauci ne mai bukata kuma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka tsare raina, gama na ba da kaina gare ka.",
            "poem": 1
          },
          {
            "text": "Kai ne Allahna; ka ceci bawanka",
            "poem": 2
          },
          {
            "text": "wanda ya dogara gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka yi mini jinƙai, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama na yi kira gare ka dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka ba bawanka farin ciki",
            "poem": 1
          },
          {
            "text": "gama gare ka, ya Ubangiji,",
            "poem": 2
          },
          {
            "text": "na miƙa raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kai mai gafartawa da kuma mai alheri ne, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "cike da ƙauna ga dukan waɗanda suke kira gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka ji addu’ata, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ka saurari kukata na neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "A lokacin wahala zan yi kira gare ka,",
            "poem": 1
          },
          {
            "text": "gama za ka amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "A cikin alloli babu kamar ka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "babu ayyukan da za a kwatanta da naka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Dukan al’umman da ka yi",
            "poem": 1
          },
          {
            "text": "za su zo su yi sujada a gabanka, ya Ubangiji;",
            "poem": 2
          },
          {
            "text": "za su kawo ɗaukaka ga sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama kai mai girma ne kana kuma aikata ayyuka masu banmamaki;",
            "poem": 1
          },
          {
            "text": "kai kaɗai ne Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka koya mini hanyarka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "zan kuwa yi tafiya cikin gaskiyarka;",
            "poem": 2
          },
          {
            "text": "ka ba ni zuciya wadda ba tă rabu ba,",
            "poem": 1
          },
          {
            "text": "don in ji tsoron sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Zan yabe ka, ya Ubangiji Allahna, da dukan zuciyata;",
            "poem": 1
          },
          {
            "text": "zan ɗaukaka sunanka har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama ƙaunarka da girma take gare ni;",
            "poem": 1
          },
          {
            "text": "kai ka cece ni daga zurfafa,",
            "poem": 2
          },
          {
            "text": "daga mazaunin matattu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Masu girman kai suna kai mini hari, ya Allah;",
            "poem": 1
          },
          {
            "text": "ƙungiyar marasa imani suna neman raina,",
            "poem": 2
          },
          {
            "text": "mutanen da ba su kula da kai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma kai, ya Ubangiji, kai Allah mai tausayi ne da kuma mai alheri,",
            "poem": 1
          },
          {
            "text": "mai jinkirin fushi, mai yawan ƙauna da aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ka juyo gare ni ka yi mini jinƙai;",
            "poem": 1
          },
          {
            "text": "ka ba wa bawanka ƙarfi;",
            "poem": 2
          },
          {
            "text": "ka ceci ni gama na bauta maka",
            "poem": 1
          },
          {
            "text": "yadda mahaifiyata ta yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ka ba ni alamar alherinka,",
            "poem": 1
          },
          {
            "text": "don abokan gābana su gani su kuma sha kunya,",
            "poem": 2
          },
          {
            "text": "gama kai, ya Ubangiji, ka taimake ni ka kuma ta’azantar da ni.",
            "poem": 2
          }
        ]
      }
    ],
