  "chapter": {
    "number": 33,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku rera da farin ciki ga Ubangiji ku adalai;",
            "poem": 1
          },
          {
            "text": "daidai ne masu gaskiya su yabe shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku yabi Ubangiji da garaya;",
            "poem": 1
          },
          {
            "text": "ku yi kiɗi gare shi da molo mai tsirkiya goma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku rera masa sabuwar waƙa;",
            "poem": 1
          },
          {
            "text": "ku yi kiɗi da gwaninta, ku kuma yi sowa don farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama maganar Ubangiji daidai ne da kuma gaskiya;",
            "poem": 1
          },
          {
            "text": "yana da aminci cikin kome da yake yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji yana ƙaunar adalci",
            "poem": 1
          },
          {
            "text": "duniya ta cika da ƙaunarsa marar ƙarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ta wurin maganar Ubangiji aka yi sammai,",
            "poem": 1
          },
          {
            "text": "rundunar taurarinsu kuwa da numfashin bakinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya tattara ruwan teku cikin tuluna;",
            "poem": 1
          },
          {
            "noteId": 1143
          },
          {
            "text": "ya sa zurfafa cikin gidajen ajiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari dukan duniya ta ji tsoron Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari dukan mutanen duniya su girmama shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gama ya yi magana, abu ya kuwa kasance;",
            "poem": 1
          },
          {
            "text": "ya umarta, ya kuwa tsaya daram.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ubangiji yakan soke shirye-shiryen al’ummai;",
            "poem": 1
          },
          {
            "text": "yakan wofintar da manufofin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma shirye-shiryen Ubangiji kan tsaya daram har abada,",
            "poem": 1
          },
          {
            "text": "manufofin zuciyarsa kuwa har dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mai farin ciki ce al’ummar da Allah ne Ubangijinta,",
            "poem": 1
          },
          {
            "text": "mutanen da ya zaɓa don gādonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Daga sama Ubangiji ya duba",
            "poem": 1
          },
          {
            "text": "ya kuwa ga dukan ’yan adam;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "daga mazauninsa yana lura",
            "poem": 1
          },
          {
            "text": "da dukan waɗanda suke zama a duniya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "shi da ya yi zukatan duka,",
            "poem": 1
          },
          {
            "text": "wanda yake kula da kome da suke yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Babu sarkin da ake ceto ta wurin yawan mayaƙansa;",
            "poem": 1
          },
          {
            "text": "ba jarumin da kan kuɓuta ta wurin yawan ƙarfinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Dogara a kan doki don ceto banza ne;",
            "poem": 1
          },
          {
            "text": "duk da yawan ƙarfinsa ba ya ceto.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Amma idanun Ubangiji suna a kan wanda yake tsoronsa,",
            "poem": 1
          },
          {
            "text": "a kan waɗanda suke sa zuciya cikin ƙaunarsa marar ƙarewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "don yă cece su daga mutuwa",
            "poem": 1
          },
          {
            "text": "ya bar su da rai a lokacin yunwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Muna jiran Ubangiji da bege;",
            "poem": 1
          },
          {
            "text": "shi ne taimakonmu da garkuwarmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "A cikinsa zukatanmu na farin ciki,",
            "poem": 1
          },
          {
            "text": "gama mun dogara cikin sunansa mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Bari ƙaunarka marar ƙarewa ta zauna a kanmu, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ko ma da muke sa begenmu a gare ka.",
            "poem": 2
          }
        ]
      }
    ],
