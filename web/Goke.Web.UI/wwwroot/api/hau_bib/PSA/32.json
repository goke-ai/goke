  "chapter": {
    "number": 32,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda. Maskil",
          {
            "noteId": 1142
          },
          "ne."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mai farin ciki ne shi",
            "poem": 1
          },
          {
            "text": "wanda aka gafarta masa laifofinsa,",
            "poem": 2
          },
          {
            "text": "wanda aka shafe zunubansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Mai farin ciki ne mutumin",
            "poem": 1
          },
          {
            "text": "da Ubangiji ba ya lissafin zunubinsa a kansa",
            "poem": 2
          },
          {
            "text": "wanda kuma babu ruɗu a ruhunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da na yi shiru,",
            "poem": 1
          },
          {
            "text": "ƙasusuwana sun yi ta mutuwa",
            "poem": 2
          },
          {
            "text": "cikin nishina dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama dare da rana",
            "poem": 1
          },
          {
            "text": "hannunka yana da nauyi a kaina;",
            "poem": 2
          },
          {
            "text": "an shanye ƙarfina ƙaf",
            "poem": 1
          },
          {
            "text": "sai ka ce a zafin bazara. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sa’an nan na furta zunubina a gare ka",
            "poem": 1
          },
          {
            "text": "ban kuwa ɓoye laifina ba.",
            "poem": 2
          },
          {
            "text": "Na ce, “Zan furta",
            "poem": 1
          },
          {
            "text": "laifofina ga Ubangiji.”",
            "poem": 2
          },
          {
            "text": "Ka kuwa gafarta",
            "poem": 1
          },
          {
            "text": "laifin zunubina. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda haka bari duk mai tsoron Allah yă yi addu’a gare ka",
            "poem": 1
          },
          {
            "text": "yayinda kake samuwa;",
            "poem": 2
          },
          {
            "text": "tabbatacce sa’ad da manyan ruwaye suka taso,",
            "poem": 1
          },
          {
            "text": "ba za su kai wurinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kai ne wurin ɓuyata;",
            "poem": 1
          },
          {
            "text": "za ka tsare ni daga wahala",
            "poem": 2
          },
          {
            "text": "ka kewaye ni da waƙoƙin ceto. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Zan umarce ka in kuma koyar da kai a hanyar da za ka bi;",
            "poem": 1
          },
          {
            "text": "Zan ba ka shawara in kuma lura da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka zama kamar doki ko doki,",
            "poem": 1
          },
          {
            "text": "wanda ba su da azanci",
            "poem": 2
          },
          {
            "text": "wanda dole sai an bi da su da linzami da ragama",
            "poem": 1
          },
          {
            "text": "in ba haka ba, ba za su zo wurinka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Azaban mugu da yawa suke,",
            "poem": 1
          },
          {
            "text": "amma ƙaunar Ubangiji marar ƙarewa",
            "poem": 2
          },
          {
            "text": "kan kewaye mutumin da ya dogara gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku yi farin ciki a cikin Ubangiji ku kuma yi murna, ku adalai;",
            "poem": 1
          },
          {
            "text": "ku rera, dukanku waɗanda zuciyarku take daidai!",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1142,
        "caller": "+",
        "text": "Kan magana, mai yiwuwa wata kalmar kiɗi ce.",
