  "chapter": {
    "number": 34,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda. Sa’ad da ya yi kamar ya haukace a gaban Abimelek, Wanda ya kore shi, ya kuwa tafi."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan gode wa Ubangiji kullayaumi;",
            "poem": 1
          },
          {
            "text": "yabonsa kullum za su kasance a leɓunana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Raina zai yi fariya a cikin Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari waɗanda suke wahala su ji su kuma yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku ɗaukaka Ubangiji tare da ni;",
            "poem": 1
          },
          {
            "text": "bari mu ɗaukaka sunansa tare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Na nemi Ubangiji, ya kuwa amsa mini;",
            "poem": 1
          },
          {
            "text": "ya cece ni daga dukan tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Waɗanda suke dubansa sukan haskaka;",
            "poem": 1
          },
          {
            "text": "fuskokinsu ba sa rufuwa da kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Wannan matalauci ya yi kira, Ubangiji kuwa ya ji shi;",
            "poem": 1
          },
          {
            "text": "ya cece shi daga dukan wahalarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Mala’ikan Ubangiji ya kafa sansani kewaye da waɗanda suke tsoronsa,",
            "poem": 1
          },
          {
            "text": "ya kuwa cece su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku gwada ku gani cewa Ubangiji yana da kyau;",
            "poem": 1
          },
          {
            "text": "mai albarka ne mutumin da yake neman mafaka a gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku ji tsoron Ubangiji, ku tsarkakansa,",
            "poem": 1
          },
          {
            "text": "gama masu tsoronsa ba sa rasa kome.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Zakoki za su iya rasa ƙarfi su kuma ji yunwa,",
            "poem": 1
          },
          {
            "text": "amma waɗanda suke neman Ubangiji ba sa rasa abu mai kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku zo, ’ya’yana, ku saurare ni;",
            "poem": 1
          },
          {
            "text": "zan koya muku tsoron Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Duk waninku da yake ƙaunar rayuwa",
            "poem": 1
          },
          {
            "text": "yana kuma so yă ga kwanaki masu kyau,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "ka kiyaye harshenka daga mugunta",
            "poem": 1
          },
          {
            "text": "da kuma leɓunanku daga faɗar ƙarairayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Juyo daga mugunta ku yi alheri;",
            "poem": 1
          },
          {
            "text": "nemi salama ku kuma yi ƙoƙarin samunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Idanun Ubangiji suna a kan masu adalci",
            "poem": 1
          },
          {
            "text": "kuma kunnuwansa suna sauraran kukansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "fuskar Ubangiji yana gāba da waɗanda suke aikata mugunta,",
            "poem": 1
          },
          {
            "text": "don yă sa a manta da su a duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Adalai kan yi kuka, Ubangiji kuwa yakan ji su;",
            "poem": 1
          },
          {
            "text": "yakan cece su daga dukan wahalarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ubangiji yana kusa da waɗanda suka karai",
            "poem": 1
          },
          {
            "text": "ya kuma cece waɗanda aka ragargaza a ruhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Adali zai iya kasance da wahala da yawa,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji yakan cece shi daga dukansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "yakan tsare dukan ƙasusuwansa,",
            "poem": 1
          },
          {
            "text": "ba ko ɗayansu da zai karye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Mugunta zai kashe mugu;",
            "poem": 1
          },
          {
            "text": "za a hukunta abokan gāban adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ubangiji yakan cece bayinsa;",
            "poem": 1
          },
          {
            "text": "ba wanda yake neman mafaka a wurinsa da za a hukunta.",
            "poem": 2
          }
        ]
      }
    ],
