  "chapter": {
    "number": 143,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, ka ji addu’ata,",
            "poem": 1
          },
          {
            "text": "ka saurari kukata don neman jinƙai;",
            "poem": 2
          },
          {
            "text": "cikin amincinka da adalcinka",
            "poem": 1
          },
          {
            "text": "ka amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kada ka gabatar da bawanka a gaban shari’a,",
            "poem": 1
          },
          {
            "text": "gama babu wani mai rai da yake adali a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Abokin gāba yana fafarata,",
            "poem": 1
          },
          {
            "text": "ya murƙushe ni har ƙasa;",
            "poem": 2
          },
          {
            "text": "ya sa ina zama a cikin duhu",
            "poem": 1
          },
          {
            "text": "kamar waɗanda suka mutu tun tuni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ta haka ƙarfina ya ƙare a cikina",
            "poem": 1
          },
          {
            "text": "zuciyata ta damu ƙwarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na tuna da kwanakin baya",
            "poem": 1
          },
          {
            "text": "na yi tunani a kan dukan ayyukanka",
            "poem": 2
          },
          {
            "text": "na kuma lura da abin da hannuwanka suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Na buɗe hannuwana gare ka;",
            "poem": 1
          },
          {
            "text": "raina yana jin ƙishinka kamar busasshiyar ƙasa. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka amsa mini da sauri, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ƙarfina ya ƙare.",
            "poem": 2
          },
          {
            "text": "Kada ka ɓoye fuskarka daga gare ni",
            "poem": 1
          },
          {
            "text": "in ba haka ba zan zama kamar waɗanda suka gangara zuwa rami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari safiya ta kawo mini maganar ƙaunarka marar ƙarewa,",
            "poem": 1
          },
          {
            "text": "gama na sa zuciyata a gare ka.",
            "poem": 2
          },
          {
            "text": "Ka nuna mini hanyar da zan bi,",
            "poem": 1
          },
          {
            "text": "gama a gare ka na miƙa raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka cece ni daga abokan gābana, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama na ɓoye kaina a gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka koya mini in yi nufinka,",
            "poem": 1
          },
          {
            "text": "gama kai ne Allahna;",
            "poem": 2
          },
          {
            "text": "bari nagarin Ruhunka",
            "poem": 1
          },
          {
            "text": "yă bi da ni a ƙasar da ba gargaɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Saboda sunanka, ya Ubangiji, ka kiyaye raina;",
            "poem": 1
          },
          {
            "text": "a cikin adalcinka, ka fid da ni daga wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "A cikin ƙaunarka marar ƙarewa, ka rufe bakunan abokan gābana;",
            "poem": 1
          },
          {
            "text": "ka hallaka dukan maƙiyana,",
            "poem": 2
          },
          {
            "text": "gama ni bawanka ne.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
