  "chapter": {
    "number": 142,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Maskil ne",
          {
            "noteId": 1208
          },
          "ta Dawuda. Sa’ad da yake cikin kogo. Addu’a ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na yi kuka mai ƙarfi ga Ubangiji;",
            "poem": 1
          },
          {
            "text": "na tā da muryata ga Ubangiji neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Na kawo gunagunina a gabansa;",
            "poem": 1
          },
          {
            "text": "a gabansa na faɗa wahalata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da ƙarfina ya kāre a cikina,",
            "poem": 1
          },
          {
            "text": "kai ne wanda ya san hanyata.",
            "poem": 2
          },
          {
            "text": "A hanyar da nake tafiya",
            "poem": 1
          },
          {
            "text": "mutane sun kafa mini tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Duba ta damata ka gani;",
            "poem": 1
          },
          {
            "text": "babu wanda ya kula da ni.",
            "poem": 2
          },
          {
            "text": "Ba ni da mafaka;",
            "poem": 1
          },
          {
            "text": "babu wanda ya kula da raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Na yi kuka gare ka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "Na ce, “Kai ne mafakata,",
            "poem": 2
          },
          {
            "text": "rabona a ƙasar masu rai.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka saurari kukata,",
            "poem": 1
          },
          {
            "text": "gama ina cikin matsananciyar bukata;",
            "poem": 2
          },
          {
            "text": "ka cece ni daga waɗanda suke fafarata,",
            "poem": 1
          },
          {
            "text": "gama sun fi ni ƙarfi sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka ’yantar da ni daga kurkuku,",
            "poem": 1
          },
          {
            "text": "don in yabi sunanka.",
            "poem": 2
          },
          {
            "text": "Ta haka masu adalci za su taru kewaye da ni",
            "poem": 1
          },
          {
            "text": "saboda alherinka gare ni.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
