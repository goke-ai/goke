  "chapter": {
    "number": 99,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji yana mulki,",
            "poem": 1
          },
          {
            "text": "bari al’ummai su yi rawan jiki;",
            "poem": 2
          },
          {
            "text": "yana zaune a kursiyi tsakanin kerubobi,",
            "poem": 1
          },
          {
            "text": "bari duniya ta girgiza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji mai girma yana a Sihiyona;",
            "poem": 1
          },
          {
            "text": "an ɗaukaka shi a bisa dukan al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari mu yabi girmanka da sunanka mai banrazana,",
            "poem": 1
          },
          {
            "text": "shi mai tsarki ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sarki mai iko ne, yana ƙaunar adalci",
            "poem": 1
          },
          {
            "text": "ka kafa gaskiya;",
            "poem": 2
          },
          {
            "text": "a cikin Yaƙub ka yi",
            "poem": 1
          },
          {
            "text": "abin da yake mai adalci da kuma daidai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku ɗaukaka Ubangiji Allahnmu",
            "poem": 1
          },
          {
            "text": "ku kuma yi masa sujada a wurin sa ƙafafunsa;",
            "poem": 2
          },
          {
            "text": "shi mai tsarki ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Musa da Haruna suna cikin firistocinsa,",
            "poem": 1
          },
          {
            "text": "Sama’ila yana cikin waɗanda suka kira bisa sunansa;",
            "poem": 2
          },
          {
            "text": "sun kira ga Ubangiji",
            "poem": 1
          },
          {
            "text": "ya kuwa amsa musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya yi magana da su daga ginshiƙin girgije;",
            "poem": 1
          },
          {
            "text": "ya kiyaye farillansa da ƙa’idodin da ya ba su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya Ubangiji Allahnmu,",
            "poem": 1
          },
          {
            "text": "ka amsa musu;",
            "poem": 2
          },
          {
            "text": "ka kasance wa Isra’ila Allah mai gafartawa,",
            "poem": 1
          },
          {
            "text": "ko da yake ka hukunta ayyukansu marasa kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku ɗaukaka Ubangiji Allahnmu",
            "poem": 1
          },
          {
            "text": "ku kuma yi sujada a dutsensa mai tsarki,",
            "poem": 2
          },
          {
            "text": "gama Ubangiji Allahnmu mai tsarki ne.",
            "poem": 2
          }
        ]
      }
    ],
