  "chapter": {
    "number": 74,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Maskil",
          {
            "noteId": 1180
          },
          "na Asaf."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Me ya sa ka ƙi mu har abada, ya Allah?",
            "poem": 1
          },
          {
            "text": "Me ya sa fushinka yake a kan tumakin kiwonka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka tuna da mutanen da ka saya tun da daɗewa,",
            "poem": 1
          },
          {
            "text": "kabilar gādonka, wadda ka fansa,",
            "poem": 2
          },
          {
            "text": "Dutsen Sihiyona, inda ka zauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka juye sawunka wajen waɗannan madawwamin kufai,",
            "poem": 1
          },
          {
            "text": "dukan wannan hallakar da abokin gāba ya yi wa wuri mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Maƙiyanka sun yi ruri a inda ka sadu da mu;",
            "poem": 1
          },
          {
            "text": "suka kakkafa tutotinsu a matsayin alamu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sun yi kamar mutane masu wāshin gatura",
            "poem": 1
          },
          {
            "text": "don yanka itatuwa a kurmi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sun ragargaje dukan sassaƙar katako",
            "poem": 1
          },
          {
            "text": "da gatura da kuma gudumarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Suka ƙone wurinka mai tsarki ƙurmus;",
            "poem": 1
          },
          {
            "text": "suka ƙazantar da mazaunin Sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Suna cewa a zukatansu, “Za mu murƙushe su sarai!”",
            "poem": 1
          },
          {
            "text": "Suka ƙone ko’ina aka yi wa Allah sujada a ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ba a ba mu wata alama mai banmamaki ba;",
            "poem": 1
          },
          {
            "text": "ba sauran annabawan da suka ragu,",
            "poem": 2
          },
          {
            "text": "kuma babu waninmu da ya sani har yaushe wannan zai ci gaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Har yaushe abokan gāba za su yi mana ba’a, ya Allah?",
            "poem": 1
          },
          {
            "text": "Maƙiya za su ci gaba da ɓata sunanka har abada ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Me ya sa ka janye hannunka, hannunka na dama?",
            "poem": 1
          },
          {
            "text": "Ka fid da shi daga rigarka ka hallaka su!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma kai, ya Allah, kai ne sarki tun da daɗewa;",
            "poem": 1
          },
          {
            "text": "ka kawo ceto a kan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kai ne ka raba teku ta wurin ikonka;",
            "poem": 1
          },
          {
            "text": "ka farfashe kawunan dodo a cikin ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kai ne ka murƙushe kawunan dodon ruwa",
            "poem": 1
          },
          {
            "text": "ka kuma ba da shi yă zama abinci ga halittun hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kai ne ka bubbuɗe maɓulɓulai da rafuffuka;",
            "poem": 1
          },
          {
            "text": "ka busar da koguna masu ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Yini naka ne, dare kuma naka ne;",
            "poem": 1
          },
          {
            "text": "ka kafa rana da wata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kai ne ka kafa dukan iyakokin duniya;",
            "poem": 1
          },
          {
            "text": "ka yi rani da damina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ka tuna da yadda abokin gāba ya yi maka ba’a, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "yadda wawaye suka ɓata sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Kada ka ba da ran kurciyarka ga namun jeji;",
            "poem": 1
          },
          {
            "text": "kada ka manta har abada da rayukan mutanenka masu shan azaba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka kula da alkawarinka,",
            "poem": 1
          },
          {
            "text": "domin akwai tashin hankali a kowane lungu mai duhu na ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kada ka bar waɗanda ake danniya su sha kunya;",
            "poem": 1
          },
          {
            "text": "bari matalauta da mabukata su yabe sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ka tashi, ya Allah, ka kāre muradinka;",
            "poem": 1
          },
          {
            "text": "ka tuna yadda wawaye suka yi maka ba’a dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Kada ka ƙyale surutan ban haushi na maƙiyanka,",
            "poem": 1
          },
          {
            "text": "ihun abokan gābanka, waɗanda suke ci gaba da yi.",
            "poem": 2
          }
        ]
      }
    ],
