  "chapter": {
    "number": 78,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Maskil",
          {
            "noteId": 1181
          },
          "na Asaf."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya mutanena, ku ji koyarwata;",
            "poem": 1
          },
          {
            "text": "ku saurari kalmomin bakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan buɗe bakina da misalai,",
            "poem": 1
          },
          {
            "text": "zan faɗi ɓoyayyun abubuwa, abubuwan dā,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "abin da muka ji muka kuma sani,",
            "poem": 1
          },
          {
            "text": "abubuwan da kakanninmu suka faɗa mana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba za mu ɓoye su wa ’ya’yanmu ba;",
            "poem": 1
          },
          {
            "text": "za mu faɗa wa tsara mai zuwa",
            "poem": 2
          },
          {
            "text": "ayyukan da suka zama yabo na Ubangiji,",
            "poem": 1
          },
          {
            "text": "ikonsa, da abubuwan banmamakin da ya aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ya kafa ƙa’idodi wa Yaƙub",
            "poem": 1
          },
          {
            "text": "ya kuma kafa doka a cikin Isra’ila,",
            "poem": 2
          },
          {
            "text": "wadda ya umarce kakanni-kakanninmu",
            "poem": 1
          },
          {
            "text": "su koya wa ’ya’yansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "don tsara na biye su san su,",
            "poem": 1
          },
          {
            "text": "har da ’ya’yan da ba a riga an haifa ba,",
            "poem": 2
          },
          {
            "text": "su kuma su faɗa wa ’ya’yansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ta haka za su dogara ga Allah",
            "poem": 1
          },
          {
            "text": "ba kuwa za su manta da ayyukansa ba",
            "poem": 2
          },
          {
            "text": "amma za su kiyaye umarnansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ba za su zama kamar kakanni kakanninsu ba,",
            "poem": 1
          },
          {
            "text": "masu taurinkai da kuma tsara masu tayarwa,",
            "poem": 2
          },
          {
            "text": "waɗanda zukatansu ba su yi biyayya ga Allah ba,",
            "poem": 1
          },
          {
            "text": "waɗanda zukatansu ba su yi aminci ga Allah ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Mutanen Efraim, ko da yake suna da bakkuna,",
            "poem": 1
          },
          {
            "text": "suka juya da baya a ranar yaƙi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "ba su kiyaye alkawarin Allah ba",
            "poem": 1
          },
          {
            "text": "suka kuma ƙi su yi rayuwa ta wurin dokarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suka manta da abin da ya aikata,",
            "poem": 1
          },
          {
            "text": "abubuwan banmamakin da ya nuna musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ya yi mu’ujizai a idanun kakanninsu",
            "poem": 1
          },
          {
            "text": "a ƙasar Masar, a yankin Zowan.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ya raba teku ya kuma bi da su ciki;",
            "poem": 1
          },
          {
            "text": "ya sa ruwa ya tsaya daram kamar bango.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ya bishe su da girgije da rana",
            "poem": 1
          },
          {
            "text": "da kuma haske daga wuta dukan dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ya tsage duwatsu a cikin hamada",
            "poem": 1
          },
          {
            "text": "ya kuma ba su ruwaye a yalwace kamar tekuna;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "ya fid da rafuffuka daga dutsen da ya tsaga",
            "poem": 1
          },
          {
            "text": "ya sa ruwa ya gudu kamar koguna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Amma suka ci gaba da yin masa zunubi,",
            "poem": 1
          },
          {
            "text": "suna tayarwa a cikin hamada a kan Mafi Ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Da gangan suka gwada Allah",
            "poem": 1
          },
          {
            "text": "ta wurin neman abincin da suke kwaɗayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Suka yi magana a kan Allah,",
            "poem": 1
          },
          {
            "text": "suna cewa, “Allah zai iya",
            "poem": 2
          },
          {
            "text": "shimfiɗa tebur a cikin hamada?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Sa’ad da ya bugi dutse,",
            "poem": 1
          },
          {
            "text": "ruwa ya ɓulɓulo,",
            "poem": 2
          },
          {
            "text": "rafuffuka suka yi gudu a yalwace.",
            "poem": 2
          },
          {
            "text": "Amma zai iya ba mu abinci?",
            "poem": 1
          },
          {
            "text": "Zai iya tanada wa mutanensa nama?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sa’ad da Ubangiji ya ji su, ya yi fushi ƙwarai;",
            "poem": 1
          },
          {
            "text": "wutarsa ta ɓarke a kan Yaƙub,",
            "poem": 2
          },
          {
            "text": "hasalarsa kuwa ta tashi a kan Isra’ila,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "gama ba su gaskata ga Allah ba",
            "poem": 1
          },
          {
            "text": "ko su dogara ga cetonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk da haka ya ba da umarni ga sarari a bisa",
            "poem": 1
          },
          {
            "text": "ya kuma buɗe ƙofofin sammai;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "ya sauko da Manna wa mutanensa don su ci,",
            "poem": 1
          },
          {
            "text": "ya ba su hatsin sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Mutane suka ci burodin mala’iku;",
            "poem": 1
          },
          {
            "text": "ya aika musu dukan abincin da za su iya ci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ya saki iskar gabas daga sammai",
            "poem": 1
          },
          {
            "text": "ya kuma saki iskar yamma ta wurin ikonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ya sauko da nama a kansu kamar ƙura,",
            "poem": 1
          },
          {
            "text": "tsuntsaye masu firiya kamar yashi a bakin teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ya sa suka sauka a cikin sansaninsu,",
            "poem": 1
          },
          {
            "text": "ko’ina kewaye da tentunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Suka ci har suka sami fiye da abin da ya ishe su,",
            "poem": 1
          },
          {
            "text": "gama ya ba su abin da suka yi kwaɗayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Amma kafin su juyo daga abincin da suka yi kwaɗayi,",
            "poem": 1
          },
          {
            "text": "kai tun ma yana a bakunansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "fushin Allah ya ƙuna a kansu;",
            "poem": 1
          },
          {
            "text": "ya karkashe waɗanda suka fi ƙiba a cikinsu,",
            "poem": 2
          },
          {
            "text": "yana yankan matasan Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Duk da haka, suka ci gaba da yin zunubi;",
            "poem": 1
          },
          {
            "text": "duk da abubuwan banmamakinsa, ba su gaskata ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Saboda haka ya sa kwanakinsu suka ƙare a banza",
            "poem": 1
          },
          {
            "text": "shekarunsu kuma cikin masifa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "A duk sa’ad da Allah ya kashe su, sai su neme shi;",
            "poem": 1
          },
          {
            "text": "sukan juyo a natse gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Sun tuna cewa Allah ne Dutsensu,",
            "poem": 1
          },
          {
            "text": "cewa Allah Mafi Ɗaukaka ne Mai fansarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Amma sai su yi ta yin masa zaƙin baki,",
            "poem": 1
          },
          {
            "text": "suna masa ƙarya da harsunansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "zukatansu ba sa biyayya gare shi,",
            "poem": 1
          },
          {
            "text": "ba su da aminci ga alkawarinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Duk da haka ya kasance mai jinƙai;",
            "poem": 1
          },
          {
            "text": "ya gafarta laifofinsu",
            "poem": 2
          },
          {
            "text": "bai kuwa hallaka su ba.",
            "poem": 2
          },
          {
            "text": "Sau da sau ya janye fushinsa",
            "poem": 1
          },
          {
            "text": "bai kuwa sa fushinsa yă ƙuna ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Ya tuna cewa su naman jiki ne kawai,",
            "poem": 1
          },
          {
            "text": "iska mai wucewa da ba ta dawowa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Sau da yawa sun tayar masa a cikin hamada",
            "poem": 1
          },
          {
            "text": "suka kuma ɓata masa rai a jeji!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Sau da sau suka riƙa gwada Allah;",
            "poem": 1
          },
          {
            "text": "suka tsokane Mai Tsarki na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "Ba su tuna da ikonsa,",
            "poem": 1
          },
          {
            "text": "a ranar da ya fanshe su daga mai danniya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "ranar da ya nuna mu’ujizansa a Masar",
            "poem": 1
          },
          {
            "text": "abubuwan banmamakinsa a yankin Zowan ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 44,
        "content": [
          {
            "text": "Ya mai da kogunansu suka zama jini;",
            "poem": 1
          },
          {
            "text": "ba su iya sha daga rafuffuka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 45,
        "content": [
          {
            "text": "Ya aika da tarin ƙudajen da suka cinye su,",
            "poem": 1
          },
          {
            "text": "da kwaɗin da suka wahalshe su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 46,
        "content": [
          {
            "text": "Ya ba da hatsinsu ga fāra,",
            "poem": 1
          },
          {
            "text": "amfanin gonakinsu ga ɗango.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 47,
        "content": [
          {
            "text": "Ya lalace inabinsu da ƙanƙara",
            "poem": 1
          },
          {
            "text": "itatuwan al’ul nasu kuma da jaura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 48,
        "content": [
          {
            "text": "Ya miƙa shanunsu ga ƙanƙara,",
            "poem": 1
          },
          {
            "text": "tumakinsu ga aradun tsawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 49,
        "content": [
          {
            "text": "Ya saki musu fushinsa mai zafi,",
            "poem": 1
          },
          {
            "text": "hasalarsa, zafin rai da kuma ɓacin ransa,",
            "poem": 2
          },
          {
            "text": "ƙungiyar mala’iku masu hallakarwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 50,
        "content": [
          {
            "text": "Ya shirya hanya wa fushinsa;",
            "poem": 1
          },
          {
            "text": "bai tsare ransu daga mutuwa ba",
            "poem": 2
          },
          {
            "text": "amma ya miƙa su ga annoba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 51,
        "content": [
          {
            "text": "Ya bugi kowane ɗan fari na Masar,",
            "poem": 1
          },
          {
            "text": "mafari ƙarfin mazantakansu a tentunan Ham.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 52,
        "content": [
          {
            "text": "Amma ya fitar da mutanensa kamar garke;",
            "poem": 1
          },
          {
            "text": "ya bi da su kamar tumaki ta cikin hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 53,
        "content": [
          {
            "text": "Ya bi da su lafiya ƙalau, don kada su ji tsoro;",
            "poem": 1
          },
          {
            "text": "amma teku ya cinye abokan gābansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 54,
        "content": [
          {
            "text": "Ta haka ya kawo su iyakar ƙasa mai tsarki,",
            "poem": 1
          },
          {
            "text": "zuwa ƙasar tudun da hannunsa na dama ya kame.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 55,
        "content": [
          {
            "text": "Ya kori al’ummai a gabansu",
            "poem": 1
          },
          {
            "text": "ya rarraba ƙasashensu gare su a matsayin gādo;",
            "poem": 2
          },
          {
            "text": "ya zaunar da kabilan Isra’ila a gidajensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 56,
        "content": [
          {
            "text": "Amma suka gwada Allah",
            "poem": 1
          },
          {
            "text": "suka tayar wa Mafi Ɗaukaka;",
            "poem": 2
          },
          {
            "text": "ba su kiyaye ƙa’idodinsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 57,
        "content": [
          {
            "text": "Kamar kakanninsu suka zama marasa biyayya da marasa aminci,",
            "poem": 1
          },
          {
            "text": "marar tabbas kamar tanƙwararren baka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 58,
        "content": [
          {
            "text": "Suka ba shi haushi da masujadansu na kan tudu;",
            "poem": 1
          },
          {
            "text": "suka tayar da kishinsa da gumakansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 59,
        "content": [
          {
            "text": "Sa’ad da Allah ya ji su, ya yi fushi ƙwarai;",
            "poem": 1
          },
          {
            "text": "ya ƙi Isra’ila gaba ɗaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 60,
        "content": [
          {
            "text": "Ya yashe tabanakul na Shilo,",
            "poem": 1
          },
          {
            "text": "tentin da ya kafa a cikin mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 61,
        "content": [
          {
            "text": "Ya aika da akwatin alkawarin ƙarfinsa zuwa bauta,",
            "poem": 1
          },
          {
            "text": "darajarsa zuwa cikin hannuwan abokin gāba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 62,
        "content": [
          {
            "text": "Ya ba da mutanensa ga takobi;",
            "poem": 1
          },
          {
            "text": "ya yi fushi ƙwarai da gādonsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 63,
        "content": [
          {
            "text": "Wuta ta cinye matasansu maza,",
            "poem": 1
          },
          {
            "text": "’yan matansu kuma ba su da waƙoƙin aure;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 64,
        "content": [
          {
            "text": "aka karkashe firistocinsu,",
            "poem": 1
          },
          {
            "text": "gwaurayensu kuwa ba su iya makoki ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 65,
        "content": [
          {
            "text": "Sa’an nan Ubangiji ya farka sai ka ce daga barcinsa,",
            "poem": 1
          },
          {
            "text": "kamar yadda mutum kan farka daga buguwar ruwan inabi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 66,
        "content": [
          {
            "text": "Ya kori abokan gābansa;",
            "poem": 1
          },
          {
            "text": "ya sa suka sha madawwamiyar kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 67,
        "content": [
          {
            "text": "Sa’an nan ya ƙi tentunan Yusuf,",
            "poem": 1
          },
          {
            "text": "bai zaɓi kabilar Efraim ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 68,
        "content": [
          {
            "text": "amma ya zaɓi kabilar Yahuda,",
            "poem": 1
          },
          {
            "text": "Dutsen Sihiyona, wanda ya ƙaunaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 69,
        "content": [
          {
            "text": "Ya gina wurinsa mai tsarki kamar bisa,",
            "poem": 1
          },
          {
            "text": "kamar duniyar da ya kafa har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 70,
        "content": [
          {
            "text": "Ya zaɓi Dawuda bawansa",
            "poem": 1
          },
          {
            "text": "ya kuma ɗauke shi daga ɗakin tumaki;",
            "poem": 2
          }
