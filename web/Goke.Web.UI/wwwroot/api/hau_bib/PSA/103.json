  "chapter": {
    "number": 103,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji, ya raina;",
            "poem": 1
          },
          {
            "text": "dukan abin da yake cikin cikina, yabi sunansa mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Yabi Ubangiji, ya raina,",
            "poem": 1
          },
          {
            "text": "kada kuma ka manta dukan alheransa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "wanda yake gafarta dukan zunubai",
            "poem": 1
          },
          {
            "text": "yake kuma warkar da dukan cututtuka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "wanda ya fanshi ranka daga rami",
            "poem": 1
          },
          {
            "text": "ya naɗa maka rawani da ƙauna da kuma tausayi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wanda ya ƙosar da kai da abubuwa masu kyau",
            "poem": 1
          },
          {
            "text": "domin a sabunta ƙuruciyarka kamar na gaggafa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ubangiji yana aikata adalci",
            "poem": 1
          },
          {
            "text": "da kuma gaskiya ga duk waɗanda aka danne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya sanar da hanyoyinsa wa Musa,",
            "poem": 1
          },
          {
            "text": "ayyukansa ga mutanen Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ubangiji mai tausayi ne da kuma alheri,",
            "poem": 1
          },
          {
            "text": "mai jinkirin fushi, cike da ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ba zai yi ta zargi ba",
            "poem": 1
          },
          {
            "text": "ba kuwa zai yi ta jin fushi har abada ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "ba ya yin da mu gwargwadon zunubanmu",
            "poem": 1
          },
          {
            "text": "ko yă sāka mana bisa ga laifofinmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Gama kamar yadda sammai suke can bisa duniya,",
            "poem": 1
          },
          {
            "text": "haka girmar ƙaunarsa yake wa masu tsoronsa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "kamar yadda gabas yake daga yamma,",
            "poem": 1
          },
          {
            "text": "haka ya cire laifofinmu daga gare mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Kamar yadda mahaifi yake jin tausayin ’ya’yansa,",
            "poem": 1
          },
          {
            "text": "haka Ubangiji yake jin tausayin waɗanda suke tsoronsa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "gama ya san yadda aka yi mu,",
            "poem": 1
          },
          {
            "text": "ya tuna cewa mu ƙura ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Game da mutum dai, kwanakinsa suna kamar ciyawa",
            "poem": 1
          },
          {
            "text": "da suke haɓaka kamar fure a gona;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "iska kan hura a kansa sai ya ɓace",
            "poem": 1
          },
          {
            "text": "ba a kuwa sāke tuna da inda dā yake.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Amma daga madawwami zuwa madawwami",
            "poem": 1
          },
          {
            "text": "ƙaunar Ubangiji tana tare da waɗanda suke tsoronsa,",
            "poem": 2
          },
          {
            "text": "adalcinsa kuma tare da ’ya’yansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "tare da waɗanda suke kiyaye alkawarinsa",
            "poem": 1
          },
          {
            "text": "suna kuma tuna su yi biyayya da farillansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ubangiji ya kafa kursiyinsa a sama,",
            "poem": 1
          },
          {
            "text": "masarautarsa kuwa na mulki a bisa duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Yabi Ubangiji, ku mala’ikunsa,",
            "poem": 1
          },
          {
            "text": "ku jarumawa masu yi masa aiki,",
            "poem": 2
          },
          {
            "text": "waɗanda suke yin biyayya da maganarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Yabi Ubangiji, dukanku rundunarsa ta sama,",
            "poem": 1
          },
          {
            "text": "ku bayinsa waɗanda kuke aikata nufinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Yabi Ubangiji, dukanku ayyukansa",
            "poem": 1
          },
          {
            "text": "ko’ina a mulkinsa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji, ya raina.",
            "poem": 1
          }
        ]
      }
    ],
