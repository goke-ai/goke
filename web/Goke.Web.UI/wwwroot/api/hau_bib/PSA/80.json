  "chapter": {
    "number": 80,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Mai muryar “Lilin Alkawari.” Na Asaf. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji mu, ya Makiyayin Isra’ila,",
            "poem": 1
          },
          {
            "text": "kai da ka bishe Yusuf kamar garke.",
            "poem": 2
          },
          {
            "text": "Kai da kake zaune a kursiyi tsakanin kerubobi,",
            "poem": 1
          },
          {
            "text": "ka haskaka",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "a gaban Efraim, Benyamin da Manasse.",
            "poem": 2
          },
          {
            "text": "Ka tā da ƙarfinka;",
            "poem": 1
          },
          {
            "text": "ka zo ka cece mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka mai da mu, ya Allah;",
            "poem": 1
          },
          {
            "text": "ka sa fuskarka ta haskaka a kanmu,",
            "poem": 2
          },
          {
            "text": "za mu kuwa cetu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya Ubangiji Allah Maɗaukaki,",
            "poem": 1
          },
          {
            "text": "har yaushe fushinka zai yi ta ƙuna",
            "poem": 2
          },
          {
            "text": "a kan addu’o’in mutanenka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka ciyar da su da burodin hawaye;",
            "poem": 1
          },
          {
            "text": "ka sa suka sha hawaye ta cikakken kwaf.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka mai da mu abin faɗa ga maƙwabtanmu,",
            "poem": 1
          },
          {
            "text": "kuma abokan gābanmu suna mana ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka mai da mu, ya Allah Maɗaukaki;",
            "poem": 1
          },
          {
            "text": "ka sa fuskarka ta haskaka a kanmu",
            "poem": 2
          },
          {
            "text": "za mu kuwa cetu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka fitar da inabi daga Masar;",
            "poem": 1
          },
          {
            "text": "ka kori al’ummai ka kuma dasa shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka gyara wuri saboda shi,",
            "poem": 1
          },
          {
            "text": "ya kuwa yi saiwa ya cike ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Aka rufe duwatsu da inuwarsa,",
            "poem": 1
          },
          {
            "text": "manya-manyan itatuwan al’ul da rassansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ya miƙe rassansa zuwa Teku",
            "poem": 1
          },
          {
            "text": "tohonsa har zuwa Kogi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Me ya sa ka rurrushe bangayensa",
            "poem": 1
          },
          {
            "text": "don duk masu wucewa su tsinke ’ya’yan inabinsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Aladu daga kurmi suna ɓarnatar da shi",
            "poem": 1
          },
          {
            "text": "halittun gonaki kuma suna cinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka komo wurinmu, ya Allah Maɗaukaki!",
            "poem": 1
          },
          {
            "text": "Ka duba daga sama ka gani!",
            "poem": 2
          },
          {
            "text": "Ka lura da wannan inabi,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "saiwar da hannun damarka ya dasa,",
            "poem": 2
          },
          {
            "text": "ɗan da ka renar wa kanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "An yanke inabinka, an ƙone shi da wuta;",
            "poem": 1
          },
          {
            "text": "a tsawatawarka mutanenka sun hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Bari hannunka yă zauna a kan mutumin da yake hannun damarka,",
            "poem": 1
          },
          {
            "text": "ɗan mutum da ka renar wa kanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ta haka ba za mu juye mu bar ka ba;",
            "poem": 1
          },
          {
            "text": "ka rayar da mu, za mu kuwa kira bisa sunanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ka mai da mu, ya Ubangiji Allah Maɗaukaki;",
            "poem": 1
          },
          {
            "text": "ka sa fuskarka ta haskaka a kanmu,",
            "poem": 2
          },
          {
            "text": "za mu kuwa cetu.",
            "poem": 2
          }
        ]
      }
