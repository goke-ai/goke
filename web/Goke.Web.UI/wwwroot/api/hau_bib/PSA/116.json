  "chapter": {
    "number": 116,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ina ƙaunar Ubangiji, gama ya ji muryata;",
            "poem": 1
          },
          {
            "text": "ya ji kukata ta neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Domin ya juye kunnensa gare ni,",
            "poem": 1
          },
          {
            "text": "zan kira gare shi muddin ina da rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Igiyoyin mutuwa sun shaƙe ni,",
            "poem": 1
          },
          {
            "text": "wahalar kabari sun zo a kaina;",
            "poem": 2
          },
          {
            "text": "na cika da wahala da ɓacin rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sai na kira ga sunan Ubangiji na ce,",
            "poem": 1
          },
          {
            "text": "“Ya Ubangiji, ka cece ni!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ubangiji mai alheri ne da kuma mai adalci;",
            "poem": 1
          },
          {
            "text": "Allahnmu yana cike da tausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ubangiji yana tsare masu tawali’u;",
            "poem": 1
          },
          {
            "text": "sa’ad da nake cikin tsananin bukata, ya cece ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka kwantar da hankali, ya raina,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji mai alheri ne a gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Gama kai, ya Ubangiji, ka ceci raina daga mutuwa,",
            "poem": 1
          },
          {
            "text": "idanuna daga hawaye,",
            "poem": 2
          },
          {
            "text": "ƙafafuna daga tuntuɓe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "don in iya tafiya a gaban Ubangiji",
            "poem": 1
          },
          {
            "text": "a ƙasar masu rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Na gaskata, saboda haka na ce,",
            "poem": 1
          },
          {
            "text": "“An azabtar da ni ƙwarai.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kuma cikin rikicewana na ce,",
            "poem": 1
          },
          {
            "text": "“Dukan mutane maƙaryata ne.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yaya zan sāka wa Ubangiji",
            "poem": 1
          },
          {
            "text": "saboda dukan alherinsa gare ni?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zan daga kwaf na ceto",
            "poem": 1
          },
          {
            "text": "in kuma kira ga sunan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zan cika alkawurana ga Ubangiji",
            "poem": 1
          },
          {
            "text": "a gaban dukan mutanensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Abu mai daraja a gaban Ubangiji",
            "poem": 1
          },
          {
            "text": "shi ne mutuwar tsarkakansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ya Ubangiji, da gaske ni bawanka ne;",
            "poem": 1
          },
          {
            "text": "ni bawanka ne, ɗan baiwarka;",
            "poem": 2
          },
          {
            "text": "ka ’yantar da ni daga sarƙoƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zan yi hadayar godiya gare ka",
            "poem": 1
          },
          {
            "text": "in kuma kira bisa sunan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zan cika alkawurana ga Ubangiji",
            "poem": 1
          },
          {
            "text": "a gaban dukan mutanensa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "a filayen gidan Ubangiji,",
            "poem": 1
          },
          {
            "text": "a tsakiyarki, ya Urushalima.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1202
          }
        ]
