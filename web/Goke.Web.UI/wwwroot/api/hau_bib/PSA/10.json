  "chapter": {
    "number": 10,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Don me, ya Ubangiji, kake tsaya can da nesa?",
            "poem": 1
          },
          {
            "text": "Me ya sa kake ɓoye kanka a lokutan wahala?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Cikin fariyarsa mugun mutum yakan cuci marasa ƙarfi,",
            "poem": 1
          },
          {
            "text": "waɗanda yake kama cikin makircin da ya shirya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Yakan yi taƙama da ƙulle-ƙullen zuciyarsa;",
            "poem": 1
          },
          {
            "text": "yana albarkaci mai haɗama yana kuma ƙin Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Cikin ɗaga kai mutum ba ya neman Allah;",
            "poem": 1
          },
          {
            "text": "cikin tunaninsa ba ya ba da wata dama saboda Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Hanyoyinsa kullum sukan yi nasara;",
            "poem": 1
          },
          {
            "text": "yana da girman kai kuma dokokinka suna nesa da shi;",
            "poem": 2
          },
          {
            "text": "yakan yi wa dukan abokan gābansa duban reni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yakan ce wa kansa, “Ba abin da zai girgiza ni;",
            "poem": 1
          },
          {
            "text": "kullum zan yi murna ba zan taɓa shiga wahala ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bakinsa ya cika da zage-zage da ƙarairayi da kuma barazana;",
            "poem": 1
          },
          {
            "text": "wahala da mugunta suna a ƙarƙashin harshensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yakan yi kwanto kusa da ƙauyuka;",
            "poem": 1
          },
          {
            "text": "daga kwanton yakan kashe marar laifi.",
            "poem": 2
          },
          {
            "text": "Yana kallon waɗanda za su shiga hannunsa a ɓoye.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yakan yi kwanto a ɓoye kamar zaki.",
            "poem": 2
          },
          {
            "text": "Yakan yi kwanto don yă kama marasa ƙarfi;",
            "poem": 1
          },
          {
            "text": "yakan kama marasa ƙarfi yă ja su cikin ragarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Yakan ragargaza waɗanda suka shiga hannu, su fāɗi;",
            "poem": 1
          },
          {
            "text": "sukan fāɗi a ƙarƙashin ƙarfinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Yakan ce wa kansa, “Ai, Allah ya manta;",
            "poem": 1
          },
          {
            "text": "ya rufe fuskarsa ba ya gani.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka tashi, Ubangiji! Ka hukunta miyagu, ya Allah.",
            "poem": 1
          },
          {
            "text": "Kada ka manta da marasa ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Don me mugun mutum zai ƙi Allah?",
            "poem": 1
          },
          {
            "text": "Don me yakan ce wa kansa,",
            "poem": 2
          },
          {
            "text": "“Allah ba zai nemi hakki daga gare ni ba”?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Amma kai, ya Allah, kana gani wahala da baƙin ciki;",
            "poem": 1
          },
          {
            "text": "kana lura da yadda suke ɗaukansu a hannu.",
            "poem": 2
          },
          {
            "text": "Marar taimako kan danƙa kansa gare ka;",
            "poem": 1
          },
          {
            "text": "kai ne mai taimakon marayu",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ka karye hannun mugaye da kuma mugun mutum;",
            "poem": 1
          },
          {
            "text": "ka nemi hakki daga gare shi saboda muguntar",
            "poem": 2
          },
          {
            "text": "da ba za a gane ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ubangiji Sarkin har abada abadin ne;",
            "poem": 1
          },
          {
            "text": "al’ummai za su hallaka daga ƙasarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kakan ji, ya Ubangiji sha’awar mai shan wahala;",
            "poem": 1
          },
          {
            "text": "kakan ƙarfafa su, ka kuma saurari kukansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "kana kāre marayu da waɗanda aka danne,",
            "poem": 1
          },
          {
            "text": "domin mutum, wanda yake na duniya",
            "poem": 2
          },
          {
            "text": "kada ƙara haddasa wata razana.",
            "poem": 2
          }
        ]
      }
    ],
