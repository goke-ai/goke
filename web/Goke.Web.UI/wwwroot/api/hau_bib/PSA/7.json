  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Wani shiggayiyon",
          {
            "noteId": 1132
          },
          "ta Dawuda, wanda Ya Rera wa Ubangiji game da Kush mutumin Benyamin."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji Allahna, na zo neman mafaka a wurinka;",
            "poem": 1
          },
          {
            "text": "ka cece ni ka kuɓutar da ni daga dukan waɗanda suke bi na,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "in ba haka ba za su yayyage ni kamar zaki",
            "poem": 1
          },
          {
            "text": "su ɓarke ni kucu-kucu ba tare da wani da zai cece ni ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya Ubangiji Allahna, in na yi kuskure",
            "poem": 1
          },
          {
            "text": "aka kuwa sami laifi a hannuwana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "in na yi mugunta ga wanda yake zaman lafiya da ni",
            "poem": 1
          },
          {
            "text": "ko kuwa ba da wani dalilin cuci abokin gābana,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "to, bari abokin gābana yă bi yă kuma cim mini;",
            "poem": 1
          },
          {
            "text": "bari yă tattake raina a ƙasa",
            "poem": 2
          },
          {
            "text": "ya sa in kwana a ƙura. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka tashi, ya Ubangiji, cikin fushinka;",
            "poem": 1
          },
          {
            "text": "ka tashi gāba da fushin abokan gābana.",
            "poem": 2
          },
          {
            "text": "Ka farka, Allahna, ka umarta adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bari taron mutane su taru kewaye da kai.",
            "poem": 1
          },
          {
            "text": "Ka yi mulki a bisansu daga bisa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "bari Ubangiji mai shari’ar mutane.",
            "poem": 2
          },
          {
            "text": "Ka shari’anta ni Ya Ubangiji, bisa ga adalcina,",
            "poem": 1
          },
          {
            "text": "bisa ga mutuncina, ya Mafi Ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya Allah mai adalci,",
            "poem": 1
          },
          {
            "text": "wanda yake binciken tunani da zukata,",
            "poem": 2
          },
          {
            "text": "ka kawo ƙarshen rikicin mugaye",
            "poem": 1
          },
          {
            "text": "ka kuma sa adalai su zauna lafiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Garkuwata shi ne Allah Mafi Ɗaukaka,",
            "poem": 1
          },
          {
            "text": "wanda yake ceton masu tsabtar zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Allah alƙali ne mai adalci,",
            "poem": 1
          },
          {
            "text": "Allahn da yakan bayyana fushinsa kowace rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "In mutum bai tuba ba,",
            "poem": 1
          },
          {
            "text": "Allah zai wasa takobinsa;",
            "poem": 2
          },
          {
            "text": "zai tanƙware yă kuma ɗaura bakansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ya shirya makamansa masu dafi;",
            "poem": 1
          },
          {
            "text": "ya shirya kibiyoyinsa masu wuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Wanda yake da cikin mugunta",
            "poem": 1
          },
          {
            "text": "ya kuma ɗauki cikin damuwa yakan haifi ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Wanda ya haƙa rami",
            "poem": 1
          },
          {
            "text": "yakan fāɗa cikin ramin da ya haƙa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Damuwar da ya ja yakan sāke nannaɗe a kansa;",
            "poem": 1
          },
          {
            "text": "fitinarsa takan sauka a kansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zan gode wa Ubangiji saboda adalcinsa",
            "poem": 1
          },
          {
            "text": "zan kuma rera yabo ga sunan Ubangiji Mafi Ɗaukaka.",
            "poem": 2
          }
        ]
      }
    ],
