  "chapter": {
    "number": 19,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sammai suna shelar ɗaukakar Allah;",
            "poem": 1
          },
          {
            "text": "sararin sama suna furta aikin hannuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kowace rana tana yin jawabi;",
            "poem": 1
          },
          {
            "text": "kowane dare yana nuna sani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba magana, ba kalmar da aka hurta,",
            "poem": 1
          },
          {
            "text": "ba wani amon da aka ji daga gare su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Duk da haka muryarsu tana kaiwa ga dukan duniya,",
            "poem": 1
          },
          {
            "text": "kalmominsu zuwa iyakokin duniya.",
            "poem": 2
          },
          {
            "text": "A sammai Allah ya kafa tenti domin rana,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "wanda yake kamar ango mai fitowa daga rumfarsa,",
            "poem": 2
          },
          {
            "text": "kamar gwani ɗan wasan da yake farin ciki yă yi tsere.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Takan taso daga ƙarshen sammai",
            "poem": 1
          },
          {
            "text": "ta kewaye zuwa wancan;",
            "poem": 2
          },
          {
            "text": "babu abin da yake ɓuya wa zafinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Dokar Ubangiji cikakkiya ce,",
            "poem": 1
          },
          {
            "text": "takan wartsakar da rai.",
            "poem": 2
          },
          {
            "text": "Farillan Ubangiji abin dogara ne,",
            "poem": 1
          },
          {
            "text": "suna mai da hikima da sauƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙa’idodin Ubangiji daidai ne,",
            "poem": 1
          },
          {
            "text": "suna ba da farin ciki ga zuciya.",
            "poem": 2
          },
          {
            "text": "Umarnan Ubangiji haske ne",
            "poem": 1
          },
          {
            "text": "suna ba da haske ga idanu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Tsoron Ubangiji yakan kawo tsabtar zuciya,",
            "poem": 1
          },
          {
            "text": "zai kasance har abada.",
            "poem": 2
          },
          {
            "text": "Farillan Ubangiji tabbatattu ne,",
            "poem": 1
          },
          {
            "text": "kuma gaba ɗaya masu adalci ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sun fi zinariya daraja,",
            "poem": 1
          },
          {
            "text": "fiye da zalla zinariya nesa;",
            "poem": 2
          },
          {
            "text": "sun fi zuma zaƙi",
            "poem": 1
          },
          {
            "text": "fiye da zuma daga kaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ta wurinsu ana gargaɗe bawanka;",
            "poem": 1
          },
          {
            "text": "a kiyaye su akwai lada mai girma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Wane ne zai iya rabe kurakuransa?",
            "poem": 1
          },
          {
            "text": "Ya gafarta ɓoyayyun laifofinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka kiyaye bawanka daga zunubin ganganci;",
            "poem": 1
          },
          {
            "text": "kada ka bari su yi mulki a kaina.",
            "poem": 2
          },
          {
            "text": "Ta haka zan zama marar laifi;",
            "poem": 1
          },
          {
            "text": "marar laifi na babban tawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bari kalmomin bakina da tunanin zuciyata",
            "poem": 1
          },
          {
            "text": "su zama abin gamsuwa a gabanka,",
            "poem": 2
          },
          {
            "text": "Ya Ubangiji, Dutsena da Mai fansata.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
