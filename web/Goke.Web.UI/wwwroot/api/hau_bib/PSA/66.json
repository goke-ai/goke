  "chapter": {
    "number": 66,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda. Waƙa. Zabura."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku yi sowa ta farin ciki ga Allah, dukan duniya!",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku rera ɗaukaka ga sunansa;",
            "poem": 2
          },
          {
            "text": "ku sa yabonsa yă zama da ɗaukaka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku ce wa Allah, “Ayyukanka da banmamaki suke!",
            "poem": 1
          },
          {
            "text": "Ikonka da girma yake",
            "poem": 2
          },
          {
            "text": "har abokan gābanka suna durƙusa a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Dukan duniya sun rusuna a gabanka",
            "poem": 1
          },
          {
            "text": "suna rera yabo gare ka,",
            "poem": 2
          },
          {
            "text": "suna rera yabo ga sunanka.” Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku zo ku ga abin da Allah ya yi,",
            "poem": 1
          },
          {
            "text": "ayyukansa masu banmamaki a madadin mutum!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya juya teku zuwa busasshiyar ƙasa,",
            "poem": 1
          },
          {
            "text": "sun wuce cikin ruwaye da ƙafa,",
            "poem": 2
          },
          {
            "text": "ku zo, mu yi farin ciki a cikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yana mulki har abada ta wurin ikonsa,",
            "poem": 1
          },
          {
            "text": "idanunsa suna duban al’ummai,",
            "poem": 2
          },
          {
            "text": "kada ’yan tawaye su tayar masa. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku yabi Allahnku, ya mutane,",
            "poem": 1
          },
          {
            "text": "bari a ji ƙarar yabonsa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "ya adana rayukanmu",
            "poem": 1
          },
          {
            "text": "ya kuma kiyaye ƙafafunmu daga santsi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama kai, ya Allah, ka gwada mu;",
            "poem": 1
          },
          {
            "text": "ka tace mu kamar azurfa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka kawo mu cikin kurkuku",
            "poem": 1
          },
          {
            "text": "ka kuma jibga kaya masu nauyi a bayanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka bar mutane suka hau a kawunanmu;",
            "poem": 1
          },
          {
            "text": "mun bi ta wuta da ruwa,",
            "poem": 2
          },
          {
            "text": "amma ka kawo mu zuwa wurin yalwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zan zo haikalinka da hadayun ƙonawa",
            "poem": 1
          },
          {
            "text": "zan kuwa cika alkawurana gare ka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "alkawuran da leɓunana suka yi alkawari bakina kuma ya faɗa",
            "poem": 1
          },
          {
            "text": "sa’ad da nake cikin wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zan miƙa kitsen dabbobi gare ka",
            "poem": 1
          },
          {
            "text": "da kuma baye-baye na raguna;",
            "poem": 2
          },
          {
            "text": "zan miƙa bijimai da awaki. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ku zo ku saurara, dukanku waɗanda suke tsoron Allah;",
            "poem": 1
          },
          {
            "text": "bari in faɗa muku abin da ya yi mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Na yi kuka gare shi da bakina;",
            "poem": 1
          },
          {
            "text": "yabonsa yana a harshena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Da a ce na ji daɗin zunubi a zuciyata,",
            "poem": 1
          },
          {
            "text": "da Ubangiji ba zai saurara ba;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "amma tabbatacce Allah ya saurara",
            "poem": 1
          },
          {
            "text": "ya kuma ji muryata a cikin addu’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Yabo ga Allah,",
            "poem": 1
          },
          {
            "text": "wanda bai ƙi addu’ata ba",
            "poem": 2
          },
          {
            "text": "ko yă janye ƙaunarsa daga gare ni!",
            "poem": 2
          }
        ]
      }
    ],
