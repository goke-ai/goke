  "chapter": {
    "number": 101,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan rera wa ƙauna da adalcinka;",
            "poem": 1
          },
          {
            "text": "gare ka, ya Ubangiji, zan rera yabo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zan yi hankali ga yin rayuwa marar zargi,",
            "poem": 1
          },
          {
            "text": "yaushe za ka zo gare ni?",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Zan bi da sha’anin gidana",
            "poem": 1
          },
          {
            "text": "da zuciya marar abin zargi",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba zan kafa a gaban idanuna 1",
            "poem": 1
          },
          {
            "text": "wani abu marar kyau ba.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Na ƙi jinin ayyukan mutane marasa aminci;",
            "poem": 1
          },
          {
            "text": "ba za su manne mini ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mutane masu mugun zuciya za su nesa da ni;",
            "poem": 1
          },
          {
            "text": "ba abin da zai haɗa ni da mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duk wanda ya yi ɓatanci wa maƙwabcinsa a ɓoye",
            "poem": 1
          },
          {
            "text": "shi za a kashe;",
            "poem": 2
          },
          {
            "text": "duk mai renin wayo da mai girman kai,",
            "poem": 1
          },
          {
            "text": "ba zan jure masa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Idanuna za su kasance a kan amintattu a cikin ƙasar,",
            "poem": 1
          },
          {
            "text": "don su zauna tare da ni;",
            "poem": 2
          },
          {
            "text": "tafiyarsa ba ta da zargi",
            "poem": 1
          },
          {
            "text": "zai yi mini hidima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Babu mai ruɗun",
            "poem": 1
          },
          {
            "text": "da zai zauna a gidana;",
            "poem": 2
          },
          {
            "text": "babu mai ƙaryan",
            "poem": 1
          },
          {
            "text": "da zai tsaya a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kowace safiya zan rufe bakunan",
            "poem": 1
          },
          {
            "text": "dukan mugaye a ƙasar;",
            "poem": 2
          },
          {
            "text": "zan yanke kowane mai aikata mugunta",
            "poem": 1
          },
          {
            "text": "daga birnin Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
