  "chapter": {
    "number": 48,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙa ce. Zabura ta ’ya’yan Kora maza."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji mai girma ne, kuma mafificin yabo,",
            "poem": 1
          },
          {
            "text": "a birnin Allahnmu, dutsensa mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kyakkyawa ce cikin tsayinta,",
            "poem": 1
          },
          {
            "text": "abin farin cikin dukan duniya.",
            "poem": 2
          },
          {
            "text": "Kamar ƙwanƙoli mafi tsayi na Zafon",
            "poem": 1
          },
          {
            "noteId": 1150
          },
          {
            "text": "ne Dutsen Sihiyona,",
            "poem": 1
          },
          {
            "text": "birnin",
            "poem": 2
          },
          {
            "noteId": 1151
          },
          {
            "text": "Babban Sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Allah yana cikin fadodinta;",
            "poem": 1
          },
          {
            "text": "ya nuna kansa mafaka ce gare ta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sa’ad da sarakuna suka haɗa rundunoni,",
            "poem": 1
          },
          {
            "text": "sa’ad da suka yi gaba tare,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "sun gan ta suka kuwa yi mamaki;",
            "poem": 1
          },
          {
            "text": "suka gudu don tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Rawar jiki ya kama su a can,",
            "poem": 1
          },
          {
            "text": "zafi kamar na mace mai naƙuda.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka hallaka su kamar jiragen ruwan Tarshish",
            "poem": 1
          },
          {
            "text": "da iskar gabas ta wargaje.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yadda muka ji,",
            "poem": 1
          },
          {
            "text": "haka muka gani",
            "poem": 2
          },
          {
            "text": "a cikin birnin Ubangiji Maɗaukaki,",
            "poem": 1
          },
          {
            "text": "a cikin birnin Allahnmu.",
            "poem": 2
          },
          {
            "text": "Allah ya sa ta zauna lafiya",
            "poem": 1
          },
          {
            "text": "har abada. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Cikin haikalinka, ya Allah,",
            "poem": 1
          },
          {
            "text": "mun yi tunani a kan ƙaunarka marar ƙarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kamar sunanka, ya Allah,",
            "poem": 1
          },
          {
            "text": "yabonka ya kai iyakokin duniya;",
            "poem": 2
          },
          {
            "text": "hannunka na dama ya cika da adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Dutsen Sihiyona ya yi farin ciki,",
            "poem": 1
          },
          {
            "text": "ƙauyukan Yahuda suna murna",
            "poem": 2
          },
          {
            "text": "saboda hukuntanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Yi tafiya cikin Sihiyona, ku kewaye ta,",
            "poem": 1
          },
          {
            "text": "ku ƙirga hasumiyoyinta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "ku lura da katangarta da kyau,",
            "poem": 1
          },
          {
            "text": "ku dubi fadodinta,",
            "poem": 2
          },
          {
            "text": "don ku faɗe su",
            "poem": 1
          },
          {
            "text": "ga tsara mai zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Gama wannan Allah shi ne Allahnmu har abada abadin;",
            "poem": 1
          },
          {
            "text": "zai zama jagorarmu har zuwa ƙarshe.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1150,
        "caller": "+",
        "text": "Zafon yana nufin dutse mai tsarki ko kuwa gefen arewa.",
