  "chapter": {
    "number": 147,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1211
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yana da kyau a rera yabai ga Allahnmu,",
            "poem": 1
          },
          {
            "text": "abu mai daɗi ne daidai ne kuma a yabe shi!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji ya gina Urushalima;",
            "poem": 1
          },
          {
            "text": "ya tattara kamammu na Isra’ilan da aka kai bauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya warkar da masu raunanar zuciya",
            "poem": 1
          },
          {
            "text": "ya ɗaɗɗaura miyakunsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya lissafta yawan taurari",
            "poem": 1
          },
          {
            "text": "ya kuma kira kowannensu da suna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Shugabanmu mai girma ne mai iko duka;",
            "poem": 1
          },
          {
            "text": "ganewarsa ba shi da iyaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ubangiji yana kula da masu sauƙinkai",
            "poem": 1
          },
          {
            "text": "yakan yar da mugaye a ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Rera wa Ubangiji waƙar godiya;",
            "poem": 1
          },
          {
            "text": "ku kada garaya ga Allahnmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya rufe sararin sama da gizagizai;",
            "poem": 1
          },
          {
            "text": "yana tanada wa duniya ruwan sama",
            "poem": 2
          },
          {
            "text": "yana kuma sa ciyawa tă yi girma a kan tuddai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yakan tanada wa shanu abinci",
            "poem": 1
          },
          {
            "text": "da kuma saboda ’ya’yan hankaki sa’ad da suka yi kira.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Jin daɗinsa ba ya a ƙarfin doki,",
            "poem": 1
          },
          {
            "text": "balle farin cikinsa yă kasance a ƙafafun mutum;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji yakan yi farin ciki a waɗanda suke tsoronsa,",
            "poem": 1
          },
          {
            "text": "waɗanda suke sa zuciya a ƙaunarsa marar ƙarewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ki ɗaukaka Ubangiji, ya Urushalima;",
            "poem": 1
          },
          {
            "text": "ki yabi Allahnki, ya Sihiyona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama yana ƙarfafa ƙyamaren ƙofofinki",
            "poem": 1
          },
          {
            "text": "yana kuma albarkace mutanenki a cikinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yana ba da salama ga iyakokinki",
            "poem": 1
          },
          {
            "text": "yana kuma ƙosar da ke da alkama mafi kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Yana ba da umarninsa ga duniya;",
            "poem": 1
          },
          {
            "text": "maganarsa tana tafiya da sauri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Yana shimfiɗa ƙanƙara kamar ulu",
            "poem": 1
          },
          {
            "text": "yă kuma watsar da hazo kamar toka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Yana zuba ƙanƙara kamar ƙananan duwatsu.",
            "poem": 1
          },
          {
            "text": "Wa zai iya jure wa sanyin da ya aiko?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yakan aiki maganarsa ta kuwa narkar da su;",
            "poem": 1
          },
          {
            "text": "yakan tā da iskarsa, ruwaye kuwa su gudu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ya bayyana maganarsa ga Yaƙub,",
            "poem": 1
          },
          {
            "text": "dokokinsa da ƙa’idodinsa ga Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Bai yi wannan ga wata al’umma ba;",
            "poem": 1
          },
          {
            "text": "ba su san dokokinsa ba.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          }
        ]
      }
    ],
