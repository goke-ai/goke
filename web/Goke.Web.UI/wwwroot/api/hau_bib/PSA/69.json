  "chapter": {
    "number": 69,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da muryar “Lilin.” Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka cece ni, ya Allah,",
            "poem": 1
          },
          {
            "text": "gama ruwa ya kai wuyata",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Na nutse cikin laka mai zurfi,",
            "poem": 1
          },
          {
            "text": "inda babu wurin tsayawa.",
            "poem": 2
          },
          {
            "text": "Na shiga cikin ruwaye masu zurfi;",
            "poem": 1
          },
          {
            "text": "rigyawa ya sha kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Na gaji da kira ina neman taimako;",
            "poem": 1
          },
          {
            "text": "maƙogwarona ya bushe",
            "poem": 2
          },
          {
            "text": "idanuna sun dushe,",
            "poem": 1
          },
          {
            "text": "suna neman Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Waɗanda suke ƙina ba dalili",
            "poem": 1
          },
          {
            "text": "sun fi gashin kaina yawa;",
            "poem": 2
          },
          {
            "text": "da yawa ne abokan gābana babu dalili,",
            "poem": 1
          },
          {
            "text": "su da suke nema su hallaka ni.",
            "poem": 2
          },
          {
            "text": "An tilasta mini in",
            "poem": 1
          },
          {
            "text": "mayar da abin da ban sata ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka san wautata, ya Allah;",
            "poem": 1
          },
          {
            "text": "laifina ba a ɓoye yake daga gare ka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari waɗanda suke sa zuciya gare ka",
            "poem": 1
          },
          {
            "text": "kada su sha kunya saboda ni,",
            "poem": 2
          },
          {
            "text": "Ya Ubangiji, Ubangiji Maɗaukaki;",
            "poem": 2
          },
          {
            "text": "bari waɗanda suke neman ka",
            "poem": 1
          },
          {
            "text": "kada su sha kunya saboda ni,",
            "poem": 2
          },
          {
            "text": "Ya Allah na Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Gama na jimre da ba’a saboda kai,",
            "poem": 1
          },
          {
            "text": "kunya kuma ta rufe fuskata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ni baƙo ne a cikin ’yan’uwana,",
            "poem": 1
          },
          {
            "text": "bare kuma ga ’ya’yan mahaifiyata maza;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "gama himma da nake yi wa gidanka yana ƙunata,",
            "poem": 1
          },
          {
            "text": "kuma zagi na masu zaginka yana fāɗuwa a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sa’ad da na yi kuka na kuma yi azumi",
            "poem": 1
          },
          {
            "text": "dole in jimre da ba’a;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "sa’ad da na sanya rigunan makoki,",
            "poem": 1
          },
          {
            "text": "mutane suna maishe ni abin dariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Masu zama a ƙofa suna mini ba’a,",
            "poem": 1
          },
          {
            "text": "na zama waƙa a bakin bugaggu da giya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Amma na yi addu’a gare ka, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "a lokacin da ka ga dama;",
            "poem": 2
          },
          {
            "text": "a cikin ƙaunarka mai girma, ya Allah,",
            "poem": 1
          },
          {
            "text": "ka amsa mini da tabbacin ceto.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka fid da ni daga laka,",
            "poem": 1
          },
          {
            "text": "kada ka bari in nutse;",
            "poem": 2
          },
          {
            "text": "ka cece ni daga waɗanda suke ƙina,",
            "poem": 1
          },
          {
            "text": "daga rurin ruwaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Kada ka bar rigyawa yă sha kaina",
            "poem": 1
          },
          {
            "text": "ko zurfafa su haɗiye ni",
            "poem": 2
          },
          {
            "text": "ko rami yă rufe bakinsa a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ka amsa mini, ya Ubangiji cikin alherin ƙaunarka;",
            "poem": 1
          },
          {
            "text": "cikin jinƙanka mai girma ka juyo gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka ɓoye fuskarka daga bawanka;",
            "poem": 1
          },
          {
            "text": "ka amsa mini da sauri, gama ina cikin wahala.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ka zo kusa ka kuɓutar da ni;",
            "poem": 1
          },
          {
            "text": "ka fanshe ni saboda maƙiyana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ka san yadda ake mini ba’a, ake kunyatar da ni da kuma yadda nake shan kunya;",
            "poem": 1
          },
          {
            "text": "dukan abokan gābana suna a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ba’a ta sa zuciyata ta karai",
            "poem": 1
          },
          {
            "text": "ta bar ni ba mataimaki;",
            "poem": 2
          },
          {
            "text": "Na nemi a ji tausayina, amma ban sami ko ɗaya ba,",
            "poem": 1
          },
          {
            "text": "na nemi masu ta’aziyya, amma ban sami ko ɗaya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sun sa abin ɗaci cikin abincina",
            "poem": 1
          },
          {
            "text": "suka kuma ba ni ruwan inabi mai tsami sa’ad da nake jin ƙishi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Bari teburin da aka shirya a gabansu yă zama musu tarko;",
            "poem": 1
          },
          {
            "text": "bari yă zama sakamakon laifi da kuma",
            "poem": 2
          },
          {
            "noteId": 1175
          },
          {
            "text": "tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Bari idanunsu yă dushe don kada su gani,",
            "poem": 1
          },
          {
            "text": "bayansu kuma yă tanƙware har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka kwarara fushinka a kansu;",
            "poem": 1
          },
          {
            "text": "bari fushinka mai zafi yă ci musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Bari wurinsu yă zama kufai;",
            "poem": 1
          },
          {
            "text": "kada ka bar wani yă zauna a tentunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Gama sun tsananta wa waɗanda ka hukunta",
            "poem": 1
          },
          {
            "text": "suna kuma taɗin wahalar waɗanda ka ji musu rauni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ka neme su da laifi a kan laifi;",
            "poem": 1
          },
          {
            "text": "kada ka bar su su sami rabo a cikin cetonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Bari a shafe su sarai daga littafin rai",
            "poem": 1
          },
          {
            "text": "kada a kuma lissafta su tare da adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ina cikin zafi da kuma azaba;",
            "poem": 1
          },
          {
            "text": "bari cetonka, ya Allah, yă tsare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Zan yabe sunan Allah cikin waƙa",
            "poem": 1
          },
          {
            "text": "in kuma ɗaukaka shi tare wurin yin godiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Wannan zai gamshi Ubangiji fiye da saniya,",
            "poem": 1
          },
          {
            "text": "fiye da bijimi da ƙahoninsa da kuma kofatansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Matalauta za su gani su kuma yi murna,",
            "poem": 1
          },
          {
            "text": "ku da kuke neman Allah, bari zukatanku su rayu!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Ubangiji yakan ji masu bukata",
            "poem": 1
          },
          {
            "text": "ba ya kuwa ƙyale kamammun mutanensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Bari sama da ƙasa su yabe shi,",
            "poem": 1
          },
          {
            "text": "tekuna da dukan abin da yake motsi a cikinsu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "gama Allah zai cece Sihiyona",
            "poem": 1
          },
          {
            "text": "yă sāke gina biranen Yahuda.",
            "poem": 2
          },
          {
            "text": "Sa’an nan mutane za su zauna a can su mallake ta,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "’ya’yan bayinsa za su gāje ta,",
            "poem": 2
          },
          {
            "text": "waɗanda kuma suna ƙaunar sunansa za su zauna a can.",
            "poem": 2
          }
        ]
      }
    ],
