  "chapter": {
    "number": 45,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da salon “Lili.” Na ’ya’yan Kora maza. Maskil",
          {
            "noteId": 1148
          },
          "Waƙar Aure."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zuciyata ta cika da kyakkyawan kan magana",
            "poem": 1
          },
          {
            "text": "yayinda nake rera ayoyina wa sarki;",
            "poem": 2
          },
          {
            "text": "harshena ne alƙalamin ƙwararren marubuci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kai ne mafi kyau cikin mutane",
            "poem": 1
          },
          {
            "text": "an kuma shafe leɓunanka da alheri,",
            "poem": 2
          },
          {
            "text": "da yake Allah ya albarkace ka har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka ɗaura takobinka a gefenka, ya jarumi;",
            "poem": 1
          },
          {
            "text": "ka rufe kanka da ɗaukaka da kuma daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Cikin darajarka ka hau zuwa nasara",
            "poem": 1
          },
          {
            "text": "a madadin gaskiya, tawali’u da adalci;",
            "poem": 2
          },
          {
            "text": "bari hannunka na dama yă nuna ayyukan banmamaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari kibiyoyinka masu tsini su huda zukatan abokan gāban sarki;",
            "poem": 1
          },
          {
            "text": "bari al’ummai su fāɗi ƙarƙashin ƙafafunka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kursiyinka, ya Allah, zai kasance har abada abadin;",
            "poem": 1
          },
          {
            "text": "sandar adalci zai zama sandar mulkinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Kana ƙaunar abin da yake daidai kana kuma ƙin mugunta;",
            "poem": 1
          },
          {
            "text": "saboda haka Allah, Allahnka, ya sa ka a bisa abokanka",
            "poem": 2
          },
          {
            "text": "ta wurin shafe ka da man farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Dukan rigunanka suna ƙanshin turaren mur da na aloyes, da na kashiya;",
            "poem": 1
          },
          {
            "text": "daga kowace fadan da aka yi masa ado da hauren giwa",
            "poem": 2
          },
          {
            "text": "kaɗe-kaɗen tsirkiya kan sa ka murna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "’Ya’yan sarki mata suna cikin matan da ake girmama;",
            "poem": 1
          },
          {
            "text": "a hannun damarka kuwa ga amarya, sarauniya saye da ofir zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ki saurara, ya ke diya, ki lura ku kuma kasa kunne,",
            "poem": 1
          },
          {
            "text": "Ki manta da mutanenki da gidan mahaifinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sarki ya cika da sha’awar kyanki;",
            "poem": 1
          },
          {
            "text": "ki girmama shi, gama shi ne maigidanki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Diyar Taya za tă zo da kyauta,",
            "poem": 1
          },
          {
            "text": "mawadata za su nemi tagomashinki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gimbiya tana fada, kyakkyawa ce ainun;",
            "poem": 1
          },
          {
            "text": "an saƙa rigarta da zaren zinariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Cikin riguna masu ado aka kai ta wurin sarki;",
            "poem": 1
          },
          {
            "text": "abokanta budurwai suna biye da ita",
            "poem": 2
          },
          {
            "text": "aka kuwa kawo su gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Aka bi da su cikin farin ciki da murna;",
            "poem": 1
          },
          {
            "text": "suka shiga fadan sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "’Ya’yanka maza za su maye matsayin kakanninka;",
            "poem": 1
          },
          {
            "text": "za ka sa su yi mulki a duk fāɗin ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zan sa a tuna da kai a dukan zamanai;",
            "poem": 1
          },
          {
            "text": "saboda haka al’ummai za su yabe ka har abada abadin.",
            "poem": 2
          }
        ]
      }
    ],
