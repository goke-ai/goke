  "chapter": {
    "number": 140,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka cece ni, ya Ubangiji, daga mugaye;",
            "poem": 1
          },
          {
            "text": "ka tsare ni daga mutane masu rikici,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "masu shirya maƙarƙashiya a zukatansu",
            "poem": 1
          },
          {
            "text": "suna kuma kawo yaƙi kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Suna sa harsunansu su yi kaifi kamar na maciji;",
            "poem": 1
          },
          {
            "text": "dafin gamsheƙa yana a leɓunansu. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka kiyaye ni, ya Ubangiji, daga hannuwan mugaye;",
            "poem": 1
          },
          {
            "text": "ka tsare ni daga mutane masu rikici",
            "poem": 2
          },
          {
            "text": "waɗanda suke shirin kwashe ni a ƙafafu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Masu girman kai sun sa mini tarko;",
            "poem": 1
          },
          {
            "text": "sun shimfiɗa igiyoyin ragarsu",
            "poem": 2
          },
          {
            "text": "sun kuma shirya mini tarko a hanyata. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya Ubangiji, na ce maka, “Kai ne Allahna.”",
            "poem": 1
          },
          {
            "text": "Ka ji kukata ta neman jinƙai, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya Ubangiji Mai Iko Duka, mai fansana mai ƙarfi,",
            "poem": 1
          },
          {
            "text": "wanda yake garkuwoyin kaina a ranar yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ka biya wa mugaye bukatunsu, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "kada ka bar shirinsu su yi nasara,",
            "poem": 2
          },
          {
            "text": "in ba haka ba za su yi fariya. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bari kawunan waɗanda suka kewaye ni",
            "poem": 1
          },
          {
            "text": "su rufu da masifun da leɓunansu suka jawo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Bari garwashin wuta yă zubo a kansu;",
            "poem": 1
          },
          {
            "text": "bari a jefar da su cikin wuta,",
            "poem": 2
          },
          {
            "text": "cikin rami mai zurfi, kada su sāke tashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kada masu ɓata suna su taɓa kahu a ƙasar;",
            "poem": 1
          },
          {
            "text": "bari masifa ta farauci mutane masu rikici.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Na san cewa Ubangiji ya shirya wa matalauta adalci",
            "poem": 1
          },
          {
            "text": "yana kuma yi wa mabukata adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Tabbatacce masu adalci za su yabi sunanka",
            "poem": 1
          },
          {
            "text": "masu aikata gaskiya kuma za su zauna a gabanka.",
            "poem": 2
          }
        ]
      }
    ],
