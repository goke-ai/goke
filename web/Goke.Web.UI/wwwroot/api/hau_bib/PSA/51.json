  "chapter": {
    "number": 51,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda. Sa’ad da annabi Natan ya zo wurinsa bayan Dawuda ya yi zina da Batsheba."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka yi mini jinƙai, ya Allah,",
            "poem": 1
          },
          {
            "text": "bisa ga ƙaunarka marar ƙarewa;",
            "poem": 2
          },
          {
            "text": "bisa ga tausayinka mai girma",
            "poem": 1
          },
          {
            "text": "ka shafe laifofina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka wanke dukan kurakuraina",
            "poem": 1
          },
          {
            "text": "ka tsarkake ni daga zunubina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama ina sane da laifofina",
            "poem": 1
          },
          {
            "text": "zunubaina kuma kullum suna a gabana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kai kaɗai na yi wa zunubi",
            "poem": 1
          },
          {
            "text": "na yi abin da yake mugu a idonka,",
            "poem": 2
          },
          {
            "text": "ta haka an tabbatar kai mai gaskiya sa’ad da ka yi magana",
            "poem": 1
          },
          {
            "text": "aka kuma nuna kai mai adalci ne sa’ad da ka hukunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Tabbatacce ni mai zunubi ne tun haihuwa",
            "poem": 1
          },
          {
            "text": "mai zunubi daga lokacin da mahaifiyata ta yi cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Tabbatacce kana son gaskiya a sassan ciki;",
            "poem": 1
          },
          {
            "text": "ka koya mini hikima a wuri can ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka tsarkake ni da hizzob, zan kuwa zama tsab;",
            "poem": 1
          },
          {
            "text": "ka wanke ni, zan kuma fi dusan ƙanƙara fari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari in ji farin ciki da murna;",
            "poem": 1
          },
          {
            "text": "bari ƙasusuwan da ka ragargaza su yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka ɓoye fuskarka daga zunubaina",
            "poem": 1
          },
          {
            "text": "ka kuma shafe dukan kurakuraina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka halitta zuciya mai tsabta a cikina, ya Allah,",
            "poem": 1
          },
          {
            "text": "ka kuma sabunta tsayayyen ruhu a cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kada ka fid da ni daga gabanka",
            "poem": 1
          },
          {
            "text": "ko ka ɗauke Ruhunka Mai Tsarki daga gare ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka mayar mini farin cikin cetonka",
            "poem": 1
          },
          {
            "text": "ka kuma ba ni ruhun biyayya, yă riƙe ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ta haka zan koyar wa masu laifi hanyoyinka,",
            "poem": 1
          },
          {
            "text": "masu zunubi kuma za su komo gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka cece ni daga laifin jini, ya Allah,",
            "poem": 1
          },
          {
            "text": "Allahn da ya cece ni,",
            "poem": 2
          },
          {
            "text": "harshena kuwa zai rera adalcinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ya Ubangiji, ka buɗe leɓunana,",
            "poem": 1
          },
          {
            "text": "bakina kuwa zai furta yabonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ba ka farin ciki a hadaya, ai da na kawo;",
            "poem": 1
          },
          {
            "text": "ba ka jin daɗin hadayun ƙonawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Hadayun Allah su ne karyayyen ruhu;",
            "poem": 1
          },
          {
            "text": "karyayyiya da kuma zuciya mai tuba,",
            "poem": 2
          },
          {
            "text": "Ya Allah, ba za ka ƙi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Cikin jin daɗinka ka sa Sihiyona ta yi nasara;",
            "poem": 1
          },
          {
            "text": "ka gina katangar Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Ta haka za a kasance da hadayu masu adalci,",
            "poem": 1
          },
          {
            "text": "hadayun ƙonawa ɗungum don su faranta ka;",
            "poem": 2
          },
          {
            "text": "sa’an nan za a miƙa bijimai a bagadenka.",
            "poem": 2
          }
        ]
      }
    ],
