  "chapter": {
    "number": 102,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Addu’ar mutum mai shan wahala. Sa’ad da ya rasa ƙarfi ya kuma yi makoki a gaban Ubangiji."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji addu’ata, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari kukata ta neman taimako ta zo gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kada ka ɓoye fuskarka daga gare ni",
            "poem": 1
          },
          {
            "text": "sa’ad da nake cikin damuwa.",
            "poem": 2
          },
          {
            "text": "Ka juye kunnenka gare ni;",
            "poem": 1
          },
          {
            "text": "sa’ad da na yi kira, ka amsa mini da sauri.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama kwanakina sun ɓace kamar hayaƙi;",
            "poem": 1
          },
          {
            "text": "ƙasusuwana suna ƙuna kamar jan wuta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zuciyata ta kamu da ciwo ta kuma bushe kamar ciyawa;",
            "poem": 1
          },
          {
            "text": "na manta in ci abinci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Saboda nishina mai ƙarfi",
            "poem": 1
          },
          {
            "text": "na rame na bar ƙasusuwa kawai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ni kamar mujiyar jeji ne,",
            "poem": 1
          },
          {
            "text": "kamar mujiya a kufai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na kwanta a faɗake; na zama",
            "poem": 1
          },
          {
            "text": "kamar tsuntsun da yake shi kaɗai a kan rufin ɗaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Dukan yini abokan gābana suna tsokanata;",
            "poem": 1
          },
          {
            "text": "waɗanda suke mini ba’a suna amfani da sunana yă zama abin la’ana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Gama ina cin toka a matsayin abincina",
            "poem": 1
          },
          {
            "text": "ina kuma gauraye abin sha nawa da hawaye",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "saboda fushinka mai girma,",
            "poem": 1
          },
          {
            "text": "gama ka ɗaga ni sama ka yar a gefe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kwanakina suna kamar inuwar yamma;",
            "poem": 1
          },
          {
            "text": "na bushe kamar ciyawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma kai, ya Ubangiji, kana zaune a kursiyinka har abada;",
            "poem": 1
          },
          {
            "text": "sunan da ka yi zai dawwama a dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Za ka tashi ka kuma ji tausayin Sihiyona,",
            "poem": 1
          },
          {
            "text": "gama lokaci ne na nuna alheri gare ta;",
            "poem": 2
          },
          {
            "text": "ƙayyadadden lokacin ya zo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Gama duwatsunta suna da daraja ga bayinka;",
            "poem": 1
          },
          {
            "text": "ƙurarta kawai kan sa su ji tausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Al’ummai za su ji tsoron sunan Ubangiji,",
            "poem": 1
          },
          {
            "text": "dukan sarakunan duniya za su girmama ɗaukakarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Gama Ubangiji zai sāke gina Sihiyona",
            "poem": 1
          },
          {
            "text": "ya kuma bayyana a ɗaukakarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zai amsa addu’ar marasa ƙarfi;",
            "poem": 1
          },
          {
            "text": "ba zai ƙyale roƙonsu ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Bari a rubuta wannan don tsara mai zuwa,",
            "poem": 1
          },
          {
            "text": "cewa mutanen da ba a riga an halitta ba za su yabi Ubangiji,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Ubangiji ya duba ƙasa daga wurinsa mai tsarki a bisa,",
            "poem": 1
          },
          {
            "text": "daga sama ya hangi duniya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "don yă ji nishe-nishen ’yan kurkuku",
            "poem": 1
          },
          {
            "text": "yă kuma saki waɗanda aka yanke musu hukuncin mutuwa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Saboda haka za a furta sunan Ubangiji a Sihiyona",
            "poem": 1
          },
          {
            "text": "yabonsa kuma a Urushalima",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "sa’ad da mutane da mulkoki",
            "poem": 1
          },
          {
            "text": "suka tattaru don su yi wa Ubangiji sujada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Cikin rayuwata, ya karye ƙarfina;",
            "poem": 1
          },
          {
            "text": "ya gajartar da kwanakina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Sai na ce,",
            "poem": 1
          },
          {
            "text": "“Kada ka ɗauke ni a tsakiyar kwanakina, ya Allah;",
            "poem": 1
          },
          {
            "text": "shekarunka suna bi cikin dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "A farkon fari ka kafa tushen duniya,",
            "poem": 1
          },
          {
            "text": "sammai kuma aikin hannuwanka ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Za su hallaka, amma za ka ci gaba;",
            "poem": 1
          },
          {
            "text": "duk za su tsufe kamar riga.",
            "poem": 2
          },
          {
            "text": "Kamar riga za ka canja su",
            "poem": 1
          },
          {
            "text": "za a kuwa zubar da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Amma kana nan yadda kake,",
            "poem": 1
          },
          {
            "text": "kuma shekarunka ba za su taɓa ƙarewa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "’Ya’yan bayinka za su zauna a gabanka;",
            "poem": 1
          },
          {
            "text": "zuriyarsu za su kahu a gabanka.”",
            "poem": 2
          }
        ]
      }
    ],
