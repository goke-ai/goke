  "chapter": {
    "number": 1,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mai farin ciki ne mutumin",
            "poem": 1
          },
          {
            "text": "da ba ya aiki da shawarar mugaye",
            "poem": 2
          },
          {
            "text": "ko yă yi abin da masu zunubi suke yi",
            "poem": 1
          },
          {
            "text": "ko yă zauna tare da masu yin ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Amma yana jin daɗin bin dokar Ubangiji,",
            "poem": 1
          },
          {
            "text": "kuma yana ta nazarinta dare da rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Yana kama da itacen da aka shuka kusa da maɓulɓulan ruwa,",
            "poem": 1
          },
          {
            "text": "wanda yake ba da amfani a daidai lokaci",
            "poem": 2
          },
          {
            "text": "wanda kuma ganyensa ba sa bushewa.",
            "poem": 1
          },
          {
            "text": "Duk abin da yake yi, yakan yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba haka yake da mugaye ba!",
            "poem": 1
          },
          {
            "text": "Su kamar yayi ne",
            "poem": 2
          },
          {
            "text": "da iska take kwashewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Saboda haka mugaye ba za su iya tsayawa a shari’a ba,",
            "poem": 1
          },
          {
            "text": "balle a sami masu zunubi a taron adalai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama Ubangiji yana lura da yadda adalai suke yin abubuwa,",
            "poem": 1
          },
          {
            "text": "amma ayyukan mugaye za su kai su ga hallaka.",
            "poem": 2
          }
        ]
      }
    ],
