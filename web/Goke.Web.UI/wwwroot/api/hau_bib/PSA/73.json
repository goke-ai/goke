  "chapter": {
    "number": 73,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ta Asaf."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Tabbatacce Allah mai alheri ne ga Isra’ila,",
            "poem": 1
          },
          {
            "text": "ga waɗanda suke masu tsabta a zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Amma game da ni, ƙafafuna suna gab da yin santsi;",
            "poem": 1
          },
          {
            "text": "tafin ƙafana ya yi kusan zamewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Gama na yi kishin masu girman kai",
            "poem": 1
          },
          {
            "text": "sa’ad da na ga cin gaban da masu mugunta suke yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ba sa yin wata fama;",
            "poem": 1
          },
          {
            "text": "jikunansu lafiya suke da kuma ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ba sa shan wata wahalar da sauran mutane ke sha;",
            "poem": 1
          },
          {
            "text": "ba su da damuwa irin na ’yan adam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda girman kai ya zama musu abin wuya;",
            "poem": 1
          },
          {
            "text": "tā da hankali ya zama musu riga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Daga mugayen zukatansu laifi kan fito",
            "poem": 1
          },
          {
            "text": "mugaye ƙulle-ƙullen da suke cikin zukatansu ba su da iyaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Suna ba’a, suna faɗin mugayen abubuwa;",
            "poem": 1
          },
          {
            "text": "cikin girman kan suna barazana yin danniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bakunansu na cewa sama na su ne,",
            "poem": 1
          },
          {
            "text": "kuma harsunansu sun mallaki duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Saboda haka mutanensu sun juya gare su",
            "poem": 1
          },
          {
            "text": "suna kuma shan ruwa a yalwace.",
            "poem": 2
          },
          {
            "noteId": 1179
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suna cewa, “Yaya Allah zai sani?",
            "poem": 1
          },
          {
            "text": "Mafi Ɗaukaka yana da sani ne?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ga yadda mugaye suke,",
            "poem": 1
          },
          {
            "text": "kullum ba su da damuwa, arzikinsu yana ta ƙaruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Tabbatacce a banza na bar zuciyata da tsabta;",
            "poem": 1
          },
          {
            "text": "a banza na wanke hannuwa don nuna rashin laifi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Dukan yini na sha annoba;",
            "poem": 1
          },
          {
            "text": "an hukunta ni kowace safiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Da na ce, “Zan faɗa haka,”",
            "poem": 1
          },
          {
            "text": "da na bashe ’ya’yanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Sa’ad da na yi ƙoƙari in gane wannan,",
            "poem": 1
          },
          {
            "text": "sai ya zama danniya a gare ni",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "sai da na shiga wuri mai tsarki na Allah;",
            "poem": 1
          },
          {
            "text": "sa’an nan na gane abin da ƙarshensu zai zama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Tabbatacce ka sa su a ƙasa mai santsi;",
            "poem": 1
          },
          {
            "text": "ka jefar da su ga hallaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Duba yadda suka hallaka farat ɗaya,",
            "poem": 1
          },
          {
            "text": "razana ta share su gaba ɗaya!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kamar yadda mafarki yake sa’ad da mutum ya farka,",
            "poem": 1
          },
          {
            "text": "haka yake sa’ad da ka farka, ya Ubangiji,",
            "poem": 2
          },
          {
            "text": "za ka rena su kamar almarai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sa’ad da zuciyata ta ɓaci",
            "poem": 1
          },
          {
            "text": "hankalina kuma ya tashi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "na zama marar azanci da jahili;",
            "poem": 1
          },
          {
            "text": "na zama kamar dabba a gabanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Duk da haka kullum ina tare da kai;",
            "poem": 1
          },
          {
            "text": "ka riƙe ni a hannun damana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ka bishe ni da shawararka,",
            "poem": 1
          },
          {
            "text": "bayan haka kuma za ka kai ni cikin ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Wa nake da shi a sama in ba kai ba?",
            "poem": 1
          },
          {
            "text": "Ba na kuma sha’awar kome a duniya in ban da kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Jikina da zuciyata za su iya raunana,",
            "poem": 1
          },
          {
            "text": "amma Allah ne ƙarfin zuciyata",
            "poem": 2
          },
          {
            "text": "da kuma rabona har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Waɗanda suke nesa da kai za su hallaka;",
            "poem": 1
          },
          {
            "text": "kakan hallaka dukan waɗanda suke maka rashin aminci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Amma game da ni, yana da kyau in kasance kusa da Allah.",
            "poem": 1
          },
          {
            "text": "Na mai da Ubangiji Mai Iko Duka mafakata;",
            "poem": 2
          },
          {
            "text": "zan yi shelar dukan ayyukanka.",
            "poem": 2
          }
        ]
      }
    ],
