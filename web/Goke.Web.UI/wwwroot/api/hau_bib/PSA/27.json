  "chapter": {
    "number": 27,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji ne haskena da cetona,",
            "poem": 1
          },
          {
            "text": "wa zan ji tsoro?",
            "poem": 2
          },
          {
            "text": "Ubangiji ne mafakar raina,",
            "poem": 1
          },
          {
            "text": "wane ne zan ji tsoro?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sa’ad da mugaye suka tasar mini",
            "poem": 1
          },
          {
            "text": "don su cinye ni,",
            "poem": 2
          },
          {
            "text": "sa’ad da abokan gābana da maƙiyina suka kawo mini hari,",
            "poem": 1
          },
          {
            "text": "sun yi tuntuɓe suka fāɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko da yake mayaƙa sun kewaye ni,",
            "poem": 1
          },
          {
            "text": "zuciyata ba za tă ji tsoro ba;",
            "poem": 2
          },
          {
            "text": "ko da yake ya ɓarke a kaina,",
            "poem": 1
          },
          {
            "text": "duk da haka zan ƙarfafa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Abu guda na roƙi Ubangiji,",
            "poem": 1
          },
          {
            "text": "wannan shi ne na nema,",
            "poem": 2
          },
          {
            "text": "cewa in zauna a gidan Ubangiji",
            "poem": 1
          },
          {
            "text": "dukan kwanakin raina,",
            "poem": 2
          },
          {
            "text": "in dubi kyan Ubangiji",
            "poem": 1
          },
          {
            "text": "in kuma neme shi a cikin haikalinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama a lokacin wahala,",
            "poem": 1
          },
          {
            "text": "zai kiyaye ni lafiya a wurin zamansa;",
            "poem": 2
          },
          {
            "text": "zai ɓoye ni cikin inuwar tabanakul nasa",
            "poem": 1
          },
          {
            "text": "ya kuma sa ni can a bisa dutse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’an nan kaina zai ɗaukaka",
            "poem": 1
          },
          {
            "text": "a bisa abokan gābana waɗanda suka kewaye ni;",
            "poem": 2
          },
          {
            "text": "a tabanakul nasa zan miƙa hadaya da sowa ta farin ciki;",
            "poem": 1
          },
          {
            "text": "zan rera in kuma yi kiɗi ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ka ji muryata sa’ad da na yi kira, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ka yi mini jinƙai ka kuma amsa mini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Zuciyata kan faɗa game da kai, “Nemi fuskarsa!”",
            "poem": 1
          },
          {
            "text": "Fuskarka, Ubangiji, zan nema.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ka ɓoye fuskarka daga gare ni,",
            "poem": 1
          },
          {
            "text": "kada ka kore bawanka daga gare ka cikin fushi;",
            "poem": 2
          },
          {
            "text": "kai ne ka kasance mai taimakona.",
            "poem": 2
          },
          {
            "text": "Kada ka ƙi ni ko ka yashe ni,",
            "poem": 1
          },
          {
            "text": "Ya Allah Mai cetona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ko da mahaifina da mahaifiyata sun yashe ni,",
            "poem": 1
          },
          {
            "text": "Ubangiji zai karɓe ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka koya mini hanyarka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "ka bi da ni a miƙaƙƙiyar hanya",
            "poem": 2
          },
          {
            "text": "saboda masu danne ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kada ka ba da ni da sha’awar maƙiyina,",
            "poem": 1
          },
          {
            "text": "gama masu shaidar ƙarya sun taso a kaina,",
            "poem": 2
          },
          {
            "text": "suna numfasa tashin hankali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Har yanzu ina da ƙarfin gwiwa a wannan cewa",
            "poem": 1
          },
          {
            "text": "zan ga alherin Ubangiji;",
            "poem": 2
          },
          {
            "text": "a ƙasar masu rai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ka yi ƙarfin hali ka yi ƙarfin zuciya",
            "poem": 2
          },
          {
            "text": "ka kuma dogara ga Ubangiji.",
            "poem": 2
          }
        ]
      }
    ],
