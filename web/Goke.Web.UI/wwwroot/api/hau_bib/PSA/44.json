  "chapter": {
    "number": 44,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Ta ’ya’yan Kora maza. Maskil",
          {
            "noteId": 1147
          },
          "ne."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Mun ji da kunnuwanmu, ya Allah;",
            "poem": 1
          },
          {
            "text": "kakanninmu sun faɗa mana",
            "poem": 2
          },
          {
            "text": "abin da ka aikata a kwanakinsu,",
            "poem": 1
          },
          {
            "text": "tun dā can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Da hannunka ka kori al’ummai",
            "poem": 1
          },
          {
            "text": "ka kuma dasa kakanninmu;",
            "poem": 2
          },
          {
            "text": "ka ragargaza mutanen",
            "poem": 1
          },
          {
            "text": "ka kuma sa kakanninmu suka haɓaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ba da takobinsu ba ne suka ci ƙasar,",
            "poem": 1
          },
          {
            "text": "ba kuwa ƙarfin hannunsu ne ya ba su nasara ba;",
            "poem": 2
          },
          {
            "text": "hannun damanka ne, ƙarfin hannunka,",
            "poem": 1
          },
          {
            "text": "da kuma hasken fuskarka, gama ka ƙaunace su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kai ne Sarkina da kuma Allahna,",
            "poem": 1
          },
          {
            "text": "wanda ya ba da nasarori wa Yaƙub.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ta wurinka mun tura abokan gābanmu baya;",
            "poem": 1
          },
          {
            "text": "ta wurin sunanka muka tattake maƙiyanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ba na dogara ga bakana,",
            "poem": 1
          },
          {
            "text": "takobina ba ya kawo nasara;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "amma kana ba mu nasara a kan abokan gābanmu,",
            "poem": 1
          },
          {
            "text": "ka sa abokan gābanmu suka sha kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "A cikin Allah muke fariyarmu dukan yini,",
            "poem": 1
          },
          {
            "text": "kuma za mu yabi sunanka har abada. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Amma yanzu ka ƙi mu ka kuma ƙasƙantar da mu;",
            "poem": 1
          },
          {
            "text": "ba ka ƙara fita tare da mayaƙanmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka sa muka gudu a gaban abokin gāba,",
            "poem": 1
          },
          {
            "text": "kuma abokan gābanmu suka washe mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka ba da mu a cinye kamar tumaki",
            "poem": 1
          },
          {
            "text": "ka kuma watsar da mu a cikin al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ka sayar da mutanenka a kuɗin da bai taka ƙara ya karye ba",
            "poem": 1
          },
          {
            "text": "babu wata riba daga sayar da su da ka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka mai da mu abin dariya ga maƙwabtanmu,",
            "poem": 1
          },
          {
            "text": "abin dariya da reni ga waɗanda suke kewaye da mu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka sa muka zama abin ba’a a cikin al’ummai;",
            "poem": 1
          },
          {
            "text": "mutanen suna kaɗa mana kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Dukan yini ina cikin wulaƙanci,",
            "poem": 1
          },
          {
            "text": "fuskata kuma ta rufu da kunya",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "saboda ba’ar waɗanda suke zagi suke kuma ƙina,",
            "poem": 1
          },
          {
            "text": "saboda abokan gābana, waɗanda suka sha alwashi sai sun yi ramuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Dukan wannan ya faru da mu,",
            "poem": 1
          },
          {
            "text": "ko da yake ba mu manta da kai ba",
            "poem": 2
          },
          {
            "text": "ko mu kasance masu ƙarya ga alkawarinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zukatanmu ba su juya baya;",
            "poem": 1
          },
          {
            "text": "ƙafafunmu ba su kauce daga hanyarka ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Amma ka ragargaza mu ka kuma maishe mu abin farautar karnukan jeji",
            "poem": 1
          },
          {
            "text": "ka kuma rufe mu cikin duhu baƙi ƙirin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Da a ce mun manta da sunan Allahnmu",
            "poem": 1
          },
          {
            "text": "ko mun miƙa hannuwanmu ga baƙin alloli,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "da Allah bai gane ba,",
            "poem": 1
          },
          {
            "text": "da yake ya san asiran zuciya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Duk da haka saboda kai mun fuskanci mutuwa dukan yini;",
            "poem": 1
          },
          {
            "text": "aka ɗauke mu kamar tumakin da za a yanka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ka farka, ya Ubangiji! Don me kake barci?",
            "poem": 1
          },
          {
            "text": "Ta da kanka! Kada ka ƙi mu har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Me ya sa ka ɓoye fuskarka",
            "poem": 1
          },
          {
            "text": "ka manta da azabanmu da kuma danniyar da ake mana?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "An kai mu ƙasa zuwa ƙura;",
            "poem": 1
          },
          {
            "text": "jikunanmu sun manne da ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ka tashi ka taimake mu;",
            "poem": 1
          },
          {
            "text": "ka cece mu saboda ƙaunarka marar ƙarewa.",
            "poem": 2
          }
        ]
      }
    ],
