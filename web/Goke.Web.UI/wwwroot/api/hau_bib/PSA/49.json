  "chapter": {
    "number": 49,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Na ’ya’yan Kora maza. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku ji wannan, dukanku mutane;",
            "poem": 1
          },
          {
            "text": "ku saurara, dukanku waɗanda suke zama a wannan duniya,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "babba da yaro",
            "poem": 1
          },
          {
            "text": "mai arziki da talaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bakina zai yi maganar hikima;",
            "poem": 1
          },
          {
            "text": "magana daga zuciyata za tă ba da ganewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zan juye kunnena ga karin magana;",
            "poem": 1
          },
          {
            "text": "da garaya zan ƙarfafa kacici-kacicina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Don me zan ji tsoro sa’ad da mugayen kwanaki suka zo,",
            "poem": 1
          },
          {
            "text": "sa’ad da mugaye masu ruɗu suka kewaye ni,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "waɗanda suka dogara ga arzikinsu",
            "poem": 1
          },
          {
            "text": "suna kuma fariya a kan yawan arzikinsu?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ba wani da zai iya ceton ran wani",
            "poem": 1
          },
          {
            "text": "ko yă ba wa Allah kuɗin fansa saboda shi,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "kuɗin fansa domin rai yana da tsada,",
            "poem": 1
          },
          {
            "text": "babu abin da za a biya da ya taɓa isa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "da zai sa yă ci gaba da rayuwa har abada",
            "poem": 1
          },
          {
            "text": "yă hana shi shigan kabari yă ruɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Gama kowa na iya ganin masu hikima na mutuwa;",
            "poem": 1
          },
          {
            "text": "wawaye da marasa azanci su ma kan hallaka",
            "poem": 2
          },
          {
            "text": "su bar wa waɗansu arzikinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kaburburansu za su ci gaba da zama gidajensu har abada,",
            "poem": 1
          },
          {
            "text": "Can za su kasance har zamanai marasa ƙarewa,",
            "poem": 2
          },
          {
            "text": "ko da yake sun ba wa filaye sunayen kansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma mutum, kome arzikinsa, ba ya dawwama;",
            "poem": 1
          },
          {
            "text": "shi kamar dabbobi ne da suke mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Wannan ne ƙaddarar waɗanda suke dogara a kansu,",
            "poem": 1
          },
          {
            "text": "da kuma ta mabiyansu, waɗanda suka tabbatar da faɗinsu. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Kamar tumaki an ƙaddara su ga kabari;",
            "poem": 1
          },
          {
            "text": "za su kuwa zama abincin mutuwa",
            "poem": 2
          },
          {
            "text": "amma masu gaskiya za su yi mulki a kansu da safe.",
            "poem": 2
          },
          {
            "text": "Kamanninsu za su ruɓe a cikin kabari,",
            "poem": 1
          },
          {
            "text": "nesa da gidajensu masu tsada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Amma Allah zai ceci raina daga kabari;",
            "poem": 1
          },
          {
            "text": "tabbatacce zai ɗauke ni zuwa wurinsa. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kada ka razana da yawa sa’ad da mutum ya yi arziki",
            "poem": 1
          },
          {
            "text": "sa’ad da darajar gidansa ta ƙaru;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "gama ba zai ɗauki kome tare da shi sa’ad da ya mutu ba,",
            "poem": 1
          },
          {
            "text": "darajarsa ba za tă gangara tare da shi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ko da yake yayinda yake a raye ya ɗauka kansa mai albarka ne,",
            "poem": 1
          },
          {
            "text": "mutane kuma sun yabe ka sa’ad da kake cin nasara,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "zai gamu da tsarar kakanninsa,",
            "poem": 1
          },
          {
            "text": "waɗanda ba za su taɓa ganin hasken rayuwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Mutumin da yake da arziki ba tare da ganewa ba",
            "poem": 1
          },
          {
            "text": "shi kamar dabbobi ne da suke mutuwa.",
            "poem": 2
          }
        ]
      }
    ],
