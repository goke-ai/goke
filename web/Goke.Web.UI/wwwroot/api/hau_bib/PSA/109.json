  "chapter": {
    "number": 109,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Ta Dawuda. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Allah, wanda nake yabo,",
            "poem": 1
          },
          {
            "text": "kada ka yi shiru,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "gama mugaye da masu ruɗu",
            "poem": 1
          },
          {
            "text": "sun buɗe bakunansu a kaina;",
            "poem": 2
          },
          {
            "text": "sun yi magana a kaina da harsunan ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Da kalmomin ƙiyayya sun kewaye ni;",
            "poem": 1
          },
          {
            "text": "sun tasar mini ba dalili.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "A maimakon ƙauna sun sāka mini da zargi,",
            "poem": 1
          },
          {
            "text": "amma ni mutum ne mai addu’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sun sāka mini alheri da mugunta,",
            "poem": 1
          },
          {
            "text": "ƙauna kuma da ƙiyayya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka naɗa mugun mutum yă yi hamayya da shi;",
            "poem": 1
          },
          {
            "text": "bari mai zargi yă tsaya a hannun damansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sa’ad da aka yi masa shari’a, bari a same shi da laifi,",
            "poem": 1
          },
          {
            "text": "bari kuma addu’o’insa su hukunta shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari kwanakinsa su zama kaɗan;",
            "poem": 1
          },
          {
            "text": "bari wani yă ɗauki wurinsa na shugabanci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bari ’ya’yansa su zama marayu",
            "poem": 1
          },
          {
            "text": "matarsa kuma gwauruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Bari ’ya’yansa su zama masu yawo suna bara;",
            "poem": 1
          },
          {
            "text": "bari a yi ta koransu daga gidajensu da suke kufai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bari mai binsa bashi yă ƙwace dukan abin da yake da shi;",
            "poem": 1
          },
          {
            "text": "bari baƙi su washe amfanin aikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bari kada kowa yă yi masa alheri",
            "poem": 1
          },
          {
            "text": "ko yă ji tausayin marayunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Bari duk zuriyarsa su mutu,",
            "poem": 1
          },
          {
            "text": "a shafe sunayensu daga tsara mai zuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bari a tuna da laifin kakanninsa a gaban Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari kada a taɓa shafe zunubin mahaifiyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari zunubansu su kasance a gaban Ubangiji kullum,",
            "poem": 1
          },
          {
            "text": "don yă sa a manta da su daga duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Gama bai taɓa yin tunanin yin alheri ba,",
            "poem": 1
          },
          {
            "text": "amma ya tsananta wa matalauta",
            "poem": 2
          },
          {
            "text": "da mabukata da kuma masu fid da zuciya har suka mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Yana jin daɗin la’antarwa,",
            "poem": 1
          },
          {
            "text": "bari yă dawo a kansa;",
            "poem": 2
          },
          {
            "text": "ba ya son sa albarka,",
            "poem": 1
          },
          {
            "text": "bari kada kowa yă sa masa albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ya sa la’antarwa kamar rigarsa;",
            "poem": 1
          },
          {
            "text": "ta shiga cikin jikinsa kamar ruwa,",
            "poem": 2
          },
          {
            "text": "cikin ƙasusuwansa kamar mai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Bari tă zama kamar mayafin da aka ɗaura kewaye da shi,",
            "poem": 1
          },
          {
            "text": "kamar ɗamara da aka ɗaura kewaye da shi har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Bari wannan yă zama sakayyar Ubangiji ga masu zargina,",
            "poem": 1
          },
          {
            "text": "ga waɗanda suke mugayen maganganu a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Amma kai, ya Ubangiji Mai Iko Duka,",
            "poem": 1
          },
          {
            "text": "ka yi da ni da kyau saboda sunanka;",
            "poem": 2
          },
          {
            "text": "ta alherin ƙaunarka, ka cece ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Gama ni matalauci ne mai bukata kuma,",
            "poem": 1
          },
          {
            "text": "zuciyata kuwa ta yi rauni a cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Na ɓace kamar inuwar yamma;",
            "poem": 1
          },
          {
            "text": "ana kakkaɓe ni kamar fāra.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Gwiwoyina suna mutuwa saboda azumi;",
            "poem": 1
          },
          {
            "text": "jikina ya rame ba kuma ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Na zama abin dariya ga masu zargina;",
            "poem": 1
          },
          {
            "text": "sa’ad da suka gan ni, suka kaɗa kawunansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ka taimake ni, ya Ubangiji Allahna;",
            "poem": 1
          },
          {
            "text": "ka cece ni bisa ga ƙaunarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Bari su san cewa hannunka ne,",
            "poem": 1
          },
          {
            "text": "cewa kai ne, ya Ubangiji, ka yi shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Za su iya la’anta, amma kai za ka sa albarka;",
            "poem": 1
          },
          {
            "text": "sa’ad da suka tasar za su sha kunya,",
            "poem": 2
          },
          {
            "text": "amma bawanka zai yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Masu zargina za su sha kunya",
            "poem": 1
          },
          {
            "text": "za a rufe su da kunya kamar mayafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Da bakina zan ɗaukaka Ubangiji sosai;",
            "poem": 1
          },
          {
            "text": "cikin babban taro zan yabe shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Gama yana tsaya a hannun damar mai bukata,",
            "poem": 1
          },
          {
            "text": "don yă cece ransa daga waɗanda suke hukunta shi.",
            "poem": 2
          }
        ]
      }
    ],
