  "chapter": {
    "number": 125,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Waɗanda suke dogara ga Ubangiji suna kama da Dutsen Sihiyona,",
            "poem": 1
          },
          {
            "text": "wanda ba ya jijjiguwa amma dawwammame ne har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Kamar duwatsun da sun kewaye Urushalima,",
            "poem": 1
          },
          {
            "text": "haka Ubangiji ya kewaye mutanensa",
            "poem": 2
          },
          {
            "text": "yanzu da har abada kuma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sandar mulkin mugaye ba zai ci gaba da kasance",
            "poem": 1
          },
          {
            "text": "a kan ƙasar da take rabon adalai ba,",
            "poem": 2
          },
          {
            "text": "domin kada masu adalci su yi amfani",
            "poem": 1
          },
          {
            "text": "da hannuwansu su aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka yi alheri, ya Ubangiji, ga waɗanda suke nagartattu,",
            "poem": 1
          },
          {
            "text": "ga waɗanda suke masu aikata gaskiya a zuciyarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Amma waɗanda suka juye ga karkatattun hanyoyi",
            "poem": 1
          },
          {
            "text": "Ubangiji zai kore su tare da masu aikata mugunta.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Salama tă kasance tare da Isra’ila.",
            "poem": 1
          }
        ]
      }
    ],
