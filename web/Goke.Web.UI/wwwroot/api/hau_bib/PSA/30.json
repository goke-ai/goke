  "chapter": {
    "number": 30,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ce. Wata waƙa. Don keɓewar haikali.",
          {
            "noteId": 1141
          },
          "Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zan girmama ka Ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama ka tsamo ni daga zurfafa",
            "poem": 2
          },
          {
            "text": "ba ka bar abokan gābana sun yi farin ciki a kaina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya Ubangiji Allahna, na yi kira gare ka don taimako",
            "poem": 1
          },
          {
            "text": "ka kuwa warkar da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya Ubangiji, ka dawo da ni daga kabari;",
            "poem": 1
          },
          {
            "text": "ka kiyaye ni daga gangarawa zuwa cikin rami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku rera ga Ubangiji, ku tsarkakansa;",
            "poem": 1
          },
          {
            "text": "ku yabi sunansa mai tsarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama fushinsa na ɗan lokaci ne",
            "poem": 1
          },
          {
            "text": "amma alherinsa har matuƙa ne;",
            "poem": 2
          },
          {
            "text": "mai yiwuwa a yi kuka da dare",
            "poem": 1
          },
          {
            "text": "amma farin ciki kan zo da safe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sa’ad da nake lafiya, na ce,",
            "poem": 1
          },
          {
            "text": "“Ba zan jijjigu ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ya Ubangiji, sa’ad da ka yi mini alheri,",
            "poem": 1
          },
          {
            "text": "ka sa katangar dutsena ya tsaya daram;",
            "poem": 2
          },
          {
            "text": "amma sa’ad da ka ɓoye fuskarka,",
            "poem": 1
          },
          {
            "text": "sai in cika da tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "A gare ka, ya Ubangiji, na yi kira;",
            "poem": 1
          },
          {
            "text": "a gare ka Ubangiji na yi kukan neman jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "“Wace riba ce a hallakata,",
            "poem": 1
          },
          {
            "text": "a kuma gangarawa ta zuwa cikin rami?",
            "poem": 2
          },
          {
            "text": "Ƙura za tă yabe ka ne?",
            "poem": 1
          },
          {
            "text": "Za tă iya yin shelar amincinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ka ji, ya Ubangiji, ka kuwa yi mini jinƙai;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, ka zama taimakona.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ka mai da kukata ta zama rawa;",
            "poem": 1
          },
          {
            "text": "ka tuɓe rigar makokina ka sa mini na farin ciki,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "don zuciyata za tă iya rera gare ka ba kuwa za tă yi shiru ba.",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji Allahna, zan yi maka godiya har abada.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
