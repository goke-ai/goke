  "chapter": {
    "number": 126,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sa’ad da Ubangiji ya dawo da kamammu zuwa Sihiyona,",
            "poem": 1
          },
          {
            "text": "mun kasance kamar mutanen da suka yi mafarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bakunanmu sun cika da dariya,",
            "poem": 1
          },
          {
            "text": "harsunanmu da waƙoƙin farin ciki.",
            "poem": 2
          },
          {
            "text": "Sai ana faɗi a cikin al’ummai,",
            "poem": 1
          },
          {
            "text": "“Ubangiji ya aikata manyan abubuwa dominsu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ubangiji ya aikata manyan abubuwa dominmu,",
            "poem": 1
          },
          {
            "text": "mun kuwa cika da farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ka maido da wadatarmu, ya Ubangiji",
            "poem": 1
          },
          {
            "text": "kamar rafuffuka a Negeb.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Waɗanda suka yi shuka da hawaye",
            "poem": 1
          },
          {
            "text": "za su yi girbi da waƙoƙin farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Shi da ya fita yana kuka,",
            "poem": 1
          },
          {
            "text": "riƙe da iri don shuki,",
            "poem": 2
          },
          {
            "text": "zai dawo da waƙoƙin farin ciki,",
            "poem": 1
          },
          {
            "text": "ɗauke da dammuna.",
            "poem": 2
          }
        ]
      }
    ],
