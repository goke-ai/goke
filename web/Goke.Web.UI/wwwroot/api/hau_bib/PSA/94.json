  "chapter": {
    "number": 94,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, Allahn da yake ramuwa,",
            "poem": 1
          },
          {
            "text": "Ya Allah wanda yake ramuwa, ka haskaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka tashi, ya Alƙalin duniya;",
            "poem": 1
          },
          {
            "text": "ka sāka wa masu girman kai abin da ya dace da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Har yaushe mugaye, ya Ubangiji",
            "poem": 1
          },
          {
            "text": "har yaushe mugaye za su yi ta murna?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Suna ta yin maganganun fariya;",
            "poem": 1
          },
          {
            "text": "dukan masu aikata mugunta sun cika da fariya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Suna murƙushe mutanenka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "suna danne gādonka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Suna kashe gwauraye da kuma baƙi;",
            "poem": 1
          },
          {
            "text": "suna kisan marayu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Suna ce, “Ubangiji ba ya gani;",
            "poem": 1
          },
          {
            "text": "Allah na Yaƙub bai kula ba.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku mai da hankali, ku marasa azanci a cikin mutane;",
            "poem": 1
          },
          {
            "text": "ku wawaye, yaushe za ku zama masu hikima?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Shi da ya sa kunne ba don a ji ba ne?",
            "poem": 1
          },
          {
            "text": "Shi da ya yi ido ba don yă gani ba ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Shi da yake yi wa al’ummai horo ba ya hukunci ne?",
            "poem": 1
          },
          {
            "text": "Shi da yake koya wa mutum ba shi da sani ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji ya san tunanin mutum;",
            "poem": 1
          },
          {
            "text": "ya san cewa tunaninsu banza ne.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Mai albarka ne mutumin da ka yi masa horo, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "mutumin da ka koyar daga dokarka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "kana ba shi sauƙi a lokacin wahala,",
            "poem": 1
          },
          {
            "text": "sai har an haƙa rami wa mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Gama Ubangiji ba zai ƙi mutanensa ba;",
            "poem": 1
          },
          {
            "text": "ba zai taɓa yashe gādonsa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Za a sāke kafa hukunci a kan adalci,",
            "poem": 1
          },
          {
            "text": "kuma dukan masu adalci a zuciya za su bi shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Wane ne zai yi gāba da mugaye domina?",
            "poem": 1
          },
          {
            "text": "Wane ne zai ɗauki matsayi ya yi gāba da masu aikata mugunta domina?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Da ba don Ubangiji ya yi mini taimako ba,",
            "poem": 1
          },
          {
            "text": "da tuni na zauna shiru a wurin mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Sa’ad da na ce, “Ƙafata na santsi,”",
            "poem": 1
          },
          {
            "text": "ƙaunarka, ya Ubangiji, ta riƙe ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Sa’ad da alhini ya yi yawa a cikina,",
            "poem": 1
          },
          {
            "text": "ta’aziyyarka ta kawo farin ciki wa raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Zai yiwu kursiyin da ya cika da lalaci yă haɗa kai da kai,",
            "poem": 1
          },
          {
            "text": "wanda yake kawo azaba ta wurin abin da ya zartar?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Sun yi ƙungiya tare a kan mai adalci",
            "poem": 1
          },
          {
            "text": "suka yanke wa marar laifi hukuncin mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Amma Ubangiji ya zama kagarata,",
            "poem": 1
          },
          {
            "text": "Allahna kuma dutsen da nake samun mafaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Zai sāka musu saboda zunubansu",
            "poem": 1
          },
          {
            "text": "yă kuma hallaka su saboda muguntarsu;",
            "poem": 2
          },
          {
            "text": "Ubangiji Allahnmu zai hallaka su.",
            "poem": 2
          }
        ]
      }
    ],
