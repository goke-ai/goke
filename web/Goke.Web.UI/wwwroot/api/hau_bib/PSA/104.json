  "chapter": {
    "number": 104,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji, ya raina.",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ya Ubangiji Allahna, kana da girma ƙwarai;",
            "poem": 1
          },
          {
            "text": "kana saye da daraja da ɗaukaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji ya naɗe kansa da haske kamar riga",
            "poem": 1
          },
          {
            "text": "ya shimfiɗa sammai kamar tenti",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "ya kafa ginshiƙan ɗakin samansa a kan ruwaye.",
            "poem": 2
          },
          {
            "text": "Ya maido da gizagizai suka zama keken yaƙinsa",
            "poem": 1
          },
          {
            "text": "yana hawa a kan fikafikan iska.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ya mai da iska suka zama ’yan saƙonsa",
            "poem": 1
          },
          {
            "text": "harsunan wuta kuma bayinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ya kafa duniya a kan tussanta;",
            "poem": 1
          },
          {
            "text": "ba za a iya matsar da ita ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka rufe ta da zurfi kamar da riga",
            "poem": 1
          },
          {
            "text": "ruwaye sun tsaya a bisa duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Amma a tsawatawarka ruwaye suka gudu",
            "poem": 1
          },
          {
            "text": "da jin ƙarar tsawanka suka ruga da gudu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "suka gudu a bisa duwatsu,",
            "poem": 1
          },
          {
            "text": "suka gangara zuwa cikin kwaruruka,",
            "poem": 2
          },
          {
            "text": "zuwa wurin da ka shirya musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka kafa iyakar da ba a iya tsallakawa;",
            "poem": 1
          },
          {
            "text": "ba za su ƙara rufe duniya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya sa maɓulɓulai suka zuba ruwa cikin kwaruruka;",
            "poem": 1
          },
          {
            "text": "yana gudu tsakanin duwatsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Suna ba da ruwa ga dukan namun jeji;",
            "poem": 1
          },
          {
            "text": "jakunan jeji suna kashe ƙishirwansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Tsuntsaye sarari suna sheƙunansu kusa da ruwan;",
            "poem": 1
          },
          {
            "text": "suna rera cikin rassa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Yana wa duwatsu banruwa daga ɗakinsa na sama;",
            "poem": 1
          },
          {
            "text": "ƙasa tana ƙoshiya da amfanin aikinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Yana sa ciyawa tă yi girma saboda shanu,",
            "poem": 1
          },
          {
            "text": "tsire-tsire domin mutum ya nome,",
            "poem": 2
          },
          {
            "text": "suna fid da abinci daga ƙasa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "ruwan inabi yakan sa zuciyar mutum tă yi murna,",
            "poem": 1
          },
          {
            "text": "mai kuwa yakan sa fuska tă yi haske,",
            "poem": 2
          },
          {
            "text": "abinci kuma da yake riƙe zuciyarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ana yi wa itatuwan Ubangiji banruwa sosai,",
            "poem": 1
          },
          {
            "text": "al’ul na Lebanon da ya shuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "A can tsuntsaye suke sheƙunnansu;",
            "poem": 1
          },
          {
            "text": "shamuwa tana da gidanta a itatuwan fir.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Manyan duwatsu na awakin jeji ne;",
            "poem": 1
          },
          {
            "text": "tsagaggun duwatsun mafaka ne ga rema.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Wata ne ke ƙididdigar lokuta,",
            "poem": 1
          },
          {
            "text": "rana kuma ta san sa’ad da za tă fāɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka yi duhu, sai ya zama dare,",
            "poem": 1
          },
          {
            "text": "sai dukan namun jeji a kurmi suka fito a maƙe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Zakoki sun yi ruri sa’ad da suke farauta",
            "poem": 1
          },
          {
            "text": "suna kuma neman abincinsu daga Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Rana ta fito, sai suka koma shiru;",
            "poem": 1
          },
          {
            "text": "suka koma suka kwanta a kogwanninsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Mutum yakan tafi aikinsa,",
            "poem": 1
          },
          {
            "text": "zuwa wurin aikinsa har yamma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ina misalin yawan aikinka, ya Ubangiji!",
            "poem": 1
          },
          {
            "text": "Cikin hikima ka yi su duka;",
            "poem": 2
          },
          {
            "text": "duniya ta cika da halittunka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Akwai teku, babba da kuma fāɗi,",
            "poem": 1
          },
          {
            "text": "cike da halittun da suka wuce ƙirga,",
            "poem": 2
          },
          {
            "text": "abubuwa masu rai babba da ƙarami.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "A can jiragen ruwa suna kai komo,",
            "poem": 1
          },
          {
            "text": "kuma dodon ruwan da ka yi, yă yi wasa a can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Waɗannan duka suna dogara gare ka",
            "poem": 1
          },
          {
            "text": "don ka ba su abincinsu a daidai lokaci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Sa’ad da ba su da shi,",
            "poem": 1
          },
          {
            "text": "sai su tattara shi;",
            "poem": 2
          },
          {
            "text": "sa’ad da ka buɗe hannunka,",
            "poem": 1
          },
          {
            "text": "sukan ƙoshi da abubuwa masu kyau.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Sa’ad da ka ɓoye fuskarka,",
            "poem": 1
          },
          {
            "text": "sai su razana;",
            "poem": 2
          },
          {
            "text": "sa’ad da ka ɗauke numfashinsu,",
            "poem": 1
          },
          {
            "text": "sai su mutu su kuma koma ga ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Sa’ad da ka aika da Ruhunka,",
            "poem": 1
          },
          {
            "text": "sai su halittu,",
            "poem": 2
          },
          {
            "text": "su kuma sabunta fuskar duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Bari ɗaukakar Ubangiji ta dawwama har abada;",
            "poem": 1
          },
          {
            "text": "bari Ubangiji yă yi farin ciki cikin aikinsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "shi wanda ya dubi duniya, sai ta razana,",
            "poem": 1
          },
          {
            "text": "wanda ya taɓa duwatsu, sai suka yi hayaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "Zan rera ga Ubangiji dukan raina;",
            "poem": 1
          },
          {
            "text": "zan rera yabo ga Allahna muddin ina raye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Bari tunanina yă gamshe shi,",
            "poem": 1
          },
          {
            "text": "yayinda nake farin ciki a cikin Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "Amma bari masu zunubi su ɓace daga duniya",
            "poem": 1
          },
          {
            "text": "mugaye kuma kada a ƙara ganinsu.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji, ya raina.",
            "poem": 1
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1192
          }
        ]
      }
