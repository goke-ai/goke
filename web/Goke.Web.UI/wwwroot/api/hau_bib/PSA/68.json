    "title": "Zabura",
    "order": 19,
    "numberOfChapters": 150,
    "sha256": "e78067311fcd1738fecf41d9125bd907b5108451faa2568b2f100137459efee1",
    "firstChapterApiLink": "/api/hau_bib/PSA/1.json",
    "lastChapterApiLink": "/api/hau_bib/PSA/150.json",
