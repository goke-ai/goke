  },
  "chapter": {
    "number": 105,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku yi godiya ga Ubangiji, ku kira bisa sunansa;",
            "poem": 1
          },
          {
            "text": "ku sanar a cikin al’ummai abin da ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku rera gare shi, ku rera yabo gare shi;",
            "poem": 1
          },
          {
            "text": "ku faɗa dukan abubuwan mamakin da ya aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku ɗaukaka a cikin sunansa mai tsarki;",
            "poem": 1
          },
          {
            "text": "bari zukatan waɗanda suke neman Ubangiji su yi farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku sa rai ga Ubangiji da kuma ƙarfinsa;",
            "poem": 1
          },
          {
            "text": "ku nemi fuskarsa kullum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ku tuna da abubuwan mamakin da ya yi,",
            "poem": 1
          },
          {
            "text": "mu’ujizansa, da kuma hukunce-hukuncen da ya zartar,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ya ku zuriyar Ibrahim bawansa,",
            "poem": 1
          },
          {
            "text": "Ya ku ’ya’yan Yaƙub, zaɓaɓɓensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Shi ne Ubangiji Allahnmu;",
            "poem": 1
          },
          {
            "text": "kuma hukunce-hukuncensa suna a cikin dukan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Yana tuna da alkawarinsa har abada,",
            "poem": 1
          },
          {
            "text": "maganar da ya umarta, har tsararraki dubu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "alkawarin da ya yi da Ibrahim,",
            "poem": 1
          },
          {
            "text": "rantsuwar da ya yi wa Ishaku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya tabbatar da shi ga Yaƙub a matsayin ƙa’ida,",
            "poem": 1
          },
          {
            "text": "Isra’ila a matsayin madawwamin alkawari,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "“Gare ka zan ba da ƙasar Kan’ana",
            "poem": 1
          },
          {
            "text": "a matsayin rabo za ka yi gādo.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sa’ad da suke kima kawai,",
            "poem": 1
          },
          {
            "text": "kima sosai, da kuma baƙi a cikinta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "suka yi ta yawo daga al’umma zuwa al’umma,",
            "poem": 1
          },
          {
            "text": "daga masarauta zuwa wata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bai bar kowa yă danne su ba;",
            "poem": 1
          },
          {
            "text": "saboda su, ya tsawata wa sarakuna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Kada ku taɓa shafaffena;",
            "poem": 1
          },
          {
            "text": "kada ku yi wa annabawa lahani.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Ya sauko da yunwa a kan ƙasa",
            "poem": 1
          },
          {
            "text": "ya kuma lalace dukan tanadinsu na abinci;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "ya kuma aiki mutum a gabansu,",
            "poem": 1
          },
          {
            "text": "Yusuf, da aka sayar a matsayin bawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Suka raunana ƙafafunsa da sarƙa",
            "poem": 1
          },
          {
            "text": "aka sa wuyansa cikin ƙarafa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "sai abin da ya rigafaɗi ya cika",
            "poem": 1
          },
          {
            "text": "sai da maganar Ubangiji ta tabbatar da shi mai gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Sarki ya aika aka kuma sake shi,",
            "poem": 1
          },
          {
            "text": "mai mulkin mutane ya ’yantar da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ya mai da shi shugaban gidansa,",
            "poem": 1
          },
          {
            "text": "mai mulki a bisa dukan abin da ya mallaka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "don yă umarci sarakunansa yadda ya ga dama",
            "poem": 1
          },
          {
            "text": "yă kuma koya wa dattawa hikima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Sa’an nan Isra’ila ya shiga Masar;",
            "poem": 1
          },
          {
            "text": "Yaƙub ya yi zama kamar baƙo a ƙasar Ham.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ubangiji ya mai da mutanensa suka yi ta haihuwa;",
            "poem": 1
          },
          {
            "text": "ya sa suka yi yawa suka fi ƙarfin maƙiyansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "waɗanda ya juya zukatansu su ƙi mutanensa",
            "poem": 1
          },
          {
            "text": "don su haɗa baki a kan bayinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Ya aiki Musa bawansa,",
            "poem": 1
          },
          {
            "text": "da Haruna, wanda ya zaɓa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Suka yi mu’ujizansa a cikinsu,",
            "poem": 1
          },
          {
            "text": "abubuwan mamakinsa a cikin ƙasar Ham.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Ya aiko da duhu ya kuma sa ƙasar tă yi duhu,",
            "poem": 1
          },
          {
            "text": "ba domin sun yi tawaye a kan maganarsa ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ya mai da ruwaye suka zama jini,",
            "poem": 1
          },
          {
            "text": "ya sa kifayensu suka mutu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Ƙasarsu ta yi ta fid da kwaɗi,",
            "poem": 1
          },
          {
            "text": "waɗanda suka haura cikin ɗakunan kwana na masu mulkinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Ya yi magana, sai tarin ƙudaje suka fito,",
            "poem": 1
          },
          {
            "text": "cinnaku kuma ko’ina a ƙasar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          {
            "text": "Ya mai da ruwan samansu ya zama ƙanƙara,",
            "poem": 1
          },
          {
            "text": "da walƙiya ko’ina a ƙasarsu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          {
            "text": "ya lalace inabinsu da itatuwan ɓaurensu",
            "poem": 1
          },
          {
            "text": "ya ragargaza itatuwan ƙasarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 34,
        "content": [
          {
            "text": "Ya yi magana, sai fāri ɗango suka fito,",
            "poem": 1
          },
          {
            "text": "fāran da ba su ƙidayuwa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 35,
        "content": [
          {
            "text": "suka cinye kowane abu mai ruwan kore a cikin ƙasarsu,",
            "poem": 1
          },
          {
            "text": "suka cinye amfanin gonarsu",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 36,
        "content": [
          {
            "text": "Sa’an nan ya karkashe dukan ’yan fari a cikin ƙasarsu,",
            "poem": 1
          },
          {
            "text": "nunan fari na dukan mazantakarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 37,
        "content": [
          {
            "text": "Ya fitar da Isra’ila, ɗauke da azurfa da zinariya,",
            "poem": 1
          },
          {
            "text": "kuma daga cikin kabilansu babu wani da ya kāsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 38,
        "content": [
          {
            "text": "Masar ta yi murna sa’ad da suka tafi,",
            "poem": 1
          },
          {
            "text": "saboda tsoron Isra’ila ya fāɗo musu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 39,
        "content": [
          {
            "text": "Ya shimfiɗa girgije kamar mayafi,",
            "poem": 1
          },
          {
            "text": "da kuma wuta don ta ba su haske da dare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 40,
        "content": [
          {
            "text": "Suka roƙa, ya kuwa ba su makware",
            "poem": 1
          },
          {
            "text": "ya kuma ƙosar da su da abinci daga sama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 41,
        "content": [
          {
            "text": "Ya buɗe dutse, sai ruwa ya ɓulɓulo,",
            "poem": 1
          },
          {
            "text": "kamar kogi ya gudu zuwa cikin hamada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 42,
        "content": [
          {
            "text": "Ya tuna da alkawarinsa mai tsarki",
            "poem": 1
          },
          {
            "text": "da ya ba wa bawansa Ibrahim.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 43,
        "content": [
          {
            "text": "Ya fitar da mutanensa da farin ciki,",
            "poem": 1
          },
          {
            "text": "zaɓaɓɓunsa da sowa ta farin ciki;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 44,
        "content": [
          {
            "text": "ya ba su ƙasashen al’ummai,",
            "poem": 1
          },
          {
            "text": "suka kuma sami gādon abin da waɗansu sun sha wahala a kai,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 45,
        "content": [
          {
            "text": "don su kiyaye farillansa",
            "poem": 1
          },
          {
            "text": "su kuma kiyaye dokokinsa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabo ga Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1193
          }
        ]
      }
    ],
