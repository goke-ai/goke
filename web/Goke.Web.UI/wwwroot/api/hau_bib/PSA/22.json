  "chapter": {
    "number": 22,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da salon “Matar Zomon Safiya.” Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Allahna, ya Allahna, don me ka yashe ni?",
            "poem": 1
          },
          {
            "text": "Me ya sa ka yi nisa da cetona,",
            "poem": 2
          },
          {
            "text": "ka yi nesa daga kalmomin nishina?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya Allahna, na yi kuka da rana, amma ba ka amsa ba,",
            "poem": 1
          },
          {
            "text": "da dare kuma ban yi shiru ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duk da haka kana a kursiyi a matsayin Mai Tsarkin nan;",
            "poem": 1
          },
          {
            "text": "kai ne yabon Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "A gare ka ne kakanninmu suka sa bege;",
            "poem": 1
          },
          {
            "text": "sun dogara ka kuwa cece su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sun yi kuka gare ka suka kuma sami ceto;",
            "poem": 1
          },
          {
            "text": "a gare ka suka dogara kuma ba su sha kunya ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Amma ni dai tsutsa ne ba mutum ba,",
            "poem": 1
          },
          {
            "text": "wanda mutane suke yi wa ba’a suka kuma rena shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Duk wanda ya gan ni yakan yi mini ba’a;",
            "poem": 1
          },
          {
            "text": "suna yin mini ashar, suna kaɗa kansu suna cewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Ya dogara ga Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari Ubangiji yă cece shi.",
            "poem": 2
          },
          {
            "text": "Bari yă cece shi,",
            "poem": 1
          },
          {
            "text": "da yake yana jin daɗinsa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk da haka ka fitar da ni daga ciki;",
            "poem": 1
          },
          {
            "text": "ka sa na dogara gare ka, ko ma a ƙirjin mahaifiyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Daga haihuwa an jefa ni a kanka;",
            "poem": 1
          },
          {
            "text": "daga cikin mahaifiyata kai ne Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kada ka yi nesa da ni,",
            "poem": 1
          },
          {
            "text": "gama wahala na kusa",
            "poem": 2
          },
          {
            "text": "kuma babu wani da zai taimaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Bijimai masu yawa sun kewaye ni;",
            "poem": 1
          },
          {
            "text": "bijimai masu ƙarfi na Bashan sun sa ni a tsaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zakoki masu ruri suna yayyage abin da suka kama",
            "poem": 1
          },
          {
            "text": "sun buɗe bakunansu a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "An zubar da ni kamar ruwa,",
            "poem": 1
          },
          {
            "text": "kuma dukan ƙasusuwana sun fiffito daga mahaɗai.",
            "poem": 2
          },
          {
            "text": "Zuciyata ta zama kaki;",
            "poem": 1
          },
          {
            "text": "ta narke a cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ƙarfina ya bushe kamar kasko,",
            "poem": 1
          },
          {
            "text": "harshena kuma ya manne wa dasashina na sama;",
            "poem": 2
          },
          {
            "text": "ka kwantar da ni a ƙurar mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Karnuka sun kewaye ni;",
            "poem": 1
          },
          {
            "text": "ƙungiyar mugaye sun sa ni a tsaka,",
            "poem": 2
          },
          {
            "text": "sun soki hannuwana da ƙafafuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Zan iya ƙirga ƙasusuwana;",
            "poem": 1
          },
          {
            "text": "mutane suna farin ciki a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Sun raba rigunana a tsakaninsu",
            "poem": 1
          },
          {
            "text": "suka kuma jefa ƙuri’a a kan rigunana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Amma kai, ya Ubangiji, kada ka yi nisa;",
            "poem": 1
          },
          {
            "text": "Ya Ƙarfina zo da sauri don ka taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Ka ceci raina daga takobi,",
            "poem": 1
          },
          {
            "text": "raina mai daraja daga ikon karnuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ka cece ni daga bakin zakoki;",
            "poem": 1
          },
          {
            "text": "ka cece ni daga ƙahonin ɓauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zan furta sunanka ga ’yan’uwana;",
            "poem": 1
          },
          {
            "text": "cikin taron masu sujada zan yabe ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ku da kuke tsoron Ubangiji, ku yabe shi!",
            "poem": 1
          },
          {
            "text": "Dukanku zuriyar Yaƙub, ku girmama shi!",
            "poem": 2
          },
          {
            "text": "Ku girmama shi, dukanku zuriyar Isra’ila!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Gama bai rena ko yă ƙyale",
            "poem": 1
          },
          {
            "text": "wahalar masu shan wuya ba;",
            "poem": 2
          },
          {
            "text": "bai ɓoye fuskarsa daga gare shi ba",
            "poem": 1
          },
          {
            "text": "amma ya saurari kukansa na neman taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Daga gare ka yabona yake zuwa cikin babban taro;",
            "poem": 1
          },
          {
            "text": "a gaban waɗanda suke tsoronka zan cika alkawarina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Matalauta za su ci su ƙoshi;",
            "poem": 1
          },
          {
            "text": "su da suke neman Ubangiji za su yabe shi,",
            "poem": 2
          },
          {
            "text": "bari zukatanku su rayu har abada!",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Dukan iyakokin duniya",
            "poem": 1
          },
          {
            "text": "za su tuna su kuma juya ga Ubangiji,",
            "poem": 2
          },
          {
            "text": "kuma dukan iyalan al’ummai",
            "poem": 1
          },
          {
            "text": "za su rusuna a gabansa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "gama mulki na Ubangiji ne",
            "poem": 1
          },
          {
            "text": "kuma yana mulki a bisa al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Dukan attajiran duniya za su yi biki su kuma yi sujada;",
            "poem": 1
          },
          {
            "text": "dukan waɗanda suka gangara zuwa ƙura za su durƙusa a gabansa,",
            "poem": 2
          },
          {
            "text": "waɗanda ba za su iya bar kansu da rai ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          {
            "text": "Zuriya masu zuwa za su yi masa hidima;",
            "poem": 1
          },
          {
            "text": "za a faɗa wa zuriya na nan gaba game da Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          {
            "text": "Za su yi shelar adalcinsa",
            "poem": 1
          },
          {
            "text": "ga mutanen da ba a riga an haifa ba,",
            "poem": 2
          },
          {
            "text": "gama ya aikata shi.",
            "poem": 2
          }
        ]
      }
    ],
