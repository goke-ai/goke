  "chapter": {
    "number": 2,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Me ya sa ƙasashe suke haɗa baki",
            "poem": 1
          },
          {
            "text": "mutane kuma suke ƙulla shawarwarin banza?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Sarakunan duniya sun ɗauki matsayi",
            "poem": 1
          },
          {
            "text": "masu mulki sun taru gaba ɗaya",
            "poem": 2
          },
          {
            "text": "suna gāba da Ubangiji da kuma Shafaffensa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Suna cewa, “Bari mu tsittsinke sarƙoƙinsu,",
            "poem": 1
          },
          {
            "text": "mu kuma ’yantar da kamammu daga kangin bautar Allah.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mai zama a kursiyi a sama yana dariya;",
            "poem": 1
          },
          {
            "text": "Ubangiji yana musu ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sa’an nan ya tsawata musu cikin fushinsa",
            "poem": 1
          },
          {
            "text": "ya kuma razanar da su cikin hasalarsa, yana cewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“Na kafa Sarkina a kan kursiyi",
            "poem": 1
          },
          {
            "text": "a kan Sihiyona, dutsena mai tsarki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          "Sarki ya yi shelar umarnin Ubangiji.",
          {
            "text": "Ubangiji ya ce mini, “Kai Ɗana ne;",
            "poem": 1
          },
          {
            "text": "yau na zama Mahaifinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka tambaye ni",
            "poem": 1
          },
          {
            "text": "zan kuwa sa al’ummai su zama gādonka,",
            "poem": 2
          },
          {
            "text": "iyakokin duniya su zama mallakarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Za ka yi mulkinsu da sandan ƙarfe;",
            "poem": 1
          },
          {
            "text": "za ka farfashe su kucu-kucu kamar tukunyar laka.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Saboda haka, ku sarakuna, ku yi wayo;",
            "poem": 1
          },
          {
            "text": "ku shiga hankalinku, ku masu mulkin duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku bauta wa Ubangiji da tsoro",
            "poem": 1
          },
          {
            "text": "ku kuma yi farin ciki kuna rawar jiki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ku sumbaci Ɗan, don kada yă yi fushi",
            "poem": 1
          },
          {
            "text": "ku hallaka a abubuwan da kuke yi,",
            "poem": 2
          },
          {
            "text": "gama fushinsa zai iya kuna farat ɗaya.",
            "poem": 1
          },
          {
            "text": "Masu farin ciki ne dukan waɗanda suke neman mafaka daga gare shi.",
            "poem": 2
          }
        ]
      }
    ],
