  "chapter": {
    "number": 42,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Maskil",
          {
            "noteId": 1145
          },
          "ne na ’Ya’yan Kora maza."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kamar yadda barewa take marmarin ruwan rafuffuka,",
            "poem": 1
          },
          {
            "text": "haka raina yake marmarinka, ya Allah.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Raina yana ƙishin Allah, Allah mai rai.",
            "poem": 1
          },
          {
            "text": "Yaushe zan tafi in sadu da Allah ne?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Hawayena ne sun zama abincina",
            "poem": 1
          },
          {
            "text": "dare da rana,",
            "poem": 2
          },
          {
            "text": "yayinda mutane suke ce da ni dukan yini,",
            "poem": 1
          },
          {
            "text": "“Ina Allahnka ɗin?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Waɗannan abubuwa ne nakan tuna",
            "poem": 1
          },
          {
            "text": "sa’ad da nake faɗin abin da yake a raina,",
            "poem": 2
          },
          {
            "text": "yadda dā nakan tafi tare da taron jama’a,",
            "poem": 1
          },
          {
            "text": "ina bishe su a jere zuwa gidan Allah,",
            "poem": 2
          },
          {
            "text": "da sowa ta farin ciki da kuma godiya",
            "poem": 1
          },
          {
            "text": "a cikin taron biki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Me ya sa kake baƙin ciki, ya raina?",
            "poem": 1
          },
          {
            "text": "Me ya sa ka damu a cikina?",
            "poem": 2
          },
          {
            "text": "Ka dogara ga Allah,",
            "poem": 1
          },
          {
            "text": "gama zai sāke yabe shi,",
            "poem": 2
          },
          {
            "text": "Mai Cetona da kuma Allahna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Raina",
            "poem": 1
          },
          {
            "noteId": 1146
          },
          {
            "text": "yana baƙin ciki a cikina;",
            "poem": 1
          },
          {
            "text": "saboda haka zan tuna da kai",
            "poem": 2
          },
          {
            "text": "daga ƙasar Urdun,",
            "poem": 1
          },
          {
            "text": "a ƙwanƙolin Hermon, daga Dutsen Mizar.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zurfi kan kira zurfi",
            "poem": 1
          },
          {
            "text": "cikin rurin matsirgar ruwanka;",
            "poem": 2
          },
          {
            "text": "dukan raƙuma da igiyoyi",
            "poem": 1
          },
          {
            "text": "sun sha kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Da rana Ubangiji yakan nuna ƙaunarsa,",
            "poem": 1
          },
          {
            "text": "da dare waƙarsa tana tare da ni,",
            "poem": 2
          },
          {
            "text": "addu’a ga Allah na raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Na ce wa Allah Dutsena,",
            "poem": 1
          },
          {
            "text": "“Me ya sa ka manta da ni?",
            "poem": 2
          },
          {
            "text": "Me zai sa in yi ta yawo ina makoki,",
            "poem": 1
          },
          {
            "text": "a danne a hannun abokin gāba?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ƙasusuwana suna jin jiki da wahala",
            "poem": 1
          },
          {
            "text": "yayinda maƙiyana suna mini ba’a,",
            "poem": 2
          },
          {
            "text": "suna ce mini dukan yini,",
            "poem": 1
          },
          {
            "text": "“Ina Allahnka ɗin?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
