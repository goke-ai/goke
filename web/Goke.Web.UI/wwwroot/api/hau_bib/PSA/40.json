  "chapter": {
    "number": 40,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Ta Dawuda. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Na jira da haƙuri ga Ubangiji;",
            "poem": 1
          },
          {
            "text": "ya juya wurina ya kuma ji kukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya ɗaga ni daga rami marar fāɗi,",
            "poem": 1
          },
          {
            "text": "daga laka da taɓo;",
            "poem": 2
          },
          {
            "text": "ya sa ƙafafuna a kan dutse",
            "poem": 1
          },
          {
            "text": "ya kuma ba ni tsayayyen wuri don in tsaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya sa sabuwar waƙa a bakina,",
            "poem": 1
          },
          {
            "text": "waƙar yabo ga Allahna.",
            "poem": 2
          },
          {
            "text": "Da yawa za su gani su tsorata",
            "poem": 1
          },
          {
            "text": "su kuma dogara ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mai albarka ne mutumin",
            "poem": 1
          },
          {
            "text": "da ya mai da Ubangiji abin dogararsa,",
            "poem": 2
          },
          {
            "text": "wanda ba ya kula da masu girman kai,",
            "poem": 1
          },
          {
            "text": "waɗanda suka juya ga allolin ƙarya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Da yawa ne, ya Ubangiji Allahna,",
            "poem": 1
          },
          {
            "text": "abubuwan banmamakin da ka aikata.",
            "poem": 2
          },
          {
            "text": "Abubuwan da ka shirya mana.",
            "poem": 2
          },
          {
            "text": "Ba wanda zai iya faɗa maka su;",
            "poem": 1
          },
          {
            "text": "a ce zan yi magana in faɗe su,",
            "poem": 2
          },
          {
            "text": "za su wuce gaban misali a furta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Hadaya da sadaka ba ka sha’awa,",
            "poem": 1
          },
          {
            "text": "amma kunnuwana ka huda;",
            "poem": 2
          },
          {
            "text": "hadayun ƙonawa da hadayun zunubi ba ka bukata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sa’an nan na ce, “Ga ni, na zo,",
            "poem": 1
          },
          {
            "text": "kamar yadda yake a rubuce game da ni cikin littafi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ina sha’awar aikata nufinka, ya Allahna;",
            "poem": 1
          },
          {
            "text": "dokar tana cikin zuciyata.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Na yi shelar adalcinka cikin babban taro;",
            "poem": 1
          },
          {
            "text": "ba na rufe leɓunana,",
            "poem": 2
          },
          {
            "text": "kamar yadda ka sani, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ba na ɓoye adalcinka cikin zuciyata;",
            "poem": 1
          },
          {
            "text": "ina maganar amincinka da cetonka.",
            "poem": 2
          },
          {
            "text": "Ban ɓoye ƙaunarka da gaskiyarka",
            "poem": 1
          },
          {
            "text": "a gaban taron jama’arka mai girma ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Kada ka hana mini jinƙanka, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "bari ƙaunarka da gaskiyarka kullum su kāre ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gama damuwoyin da suka wuce misali sun kewaye ni;",
            "poem": 1
          },
          {
            "text": "zunubaina sun mamaye ni, kuma ba na iya gani.",
            "poem": 2
          },
          {
            "text": "Sun fi gashin kaina yawa,",
            "poem": 1
          },
          {
            "text": "har ma na fid da zuciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Ka ji daɗin cetona, ya Ubangiji;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, ka zo da sauri ka taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bari masu neman raina",
            "poem": 1
          },
          {
            "text": "su sha kunya su kuma rikice;",
            "poem": 2
          },
          {
            "text": "bari dukan waɗanda suke neman lalacewata",
            "poem": 1
          },
          {
            "text": "su koma baya da kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari masu ce mini, “Allah yă ƙara!”",
            "poem": 1
          },
          {
            "text": "Su sha mamaki saboda kunyar da za su sha.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Amma bari dukan masu nemanka",
            "poem": 1
          },
          {
            "text": "su yi farin ciki su kuma yi murna a cikinka;",
            "poem": 2
          },
          {
            "text": "bari waɗanda suke ƙaunar cetonka kullum su ce,",
            "poem": 1
          },
          {
            "text": "“Ubangiji mai girma ne!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ni dai matalauci ne da mai bukata;",
            "poem": 1
          },
          {
            "text": "bari Ubangiji yă tuna da ni.",
            "poem": 2
          },
          {
            "text": "Kai ne taimakona da mai cetona;",
            "poem": 1
          },
          {
            "text": "Ya Allahna, kada ka jinkirta.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
