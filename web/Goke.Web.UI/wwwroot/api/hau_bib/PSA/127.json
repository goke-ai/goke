  "chapter": {
    "number": 127,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa. Ta Solomon."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "In ba Ubangiji ne ya gina gida ba,",
            "poem": 1
          },
          {
            "text": "masu gininta suna wahala a banza ne.",
            "poem": 2
          },
          {
            "text": "In ba Ubangiji ne yake tsaron birni ba,",
            "poem": 1
          },
          {
            "text": "masu tsaro suna yin tsaro a banza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Banza ne ka farka da wuri",
            "poem": 1
          },
          {
            "text": "ka koma da latti,",
            "poem": 2
          },
          {
            "text": "kana fama don abincin da za ka ci,",
            "poem": 1
          },
          {
            "text": "gama yakan ba da barci ga waɗanda yake ƙauna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "’Ya’ya maza gādo ne daga Ubangiji,",
            "poem": 1
          },
          {
            "text": "yara lada ne daga gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kamar kibiyoyi a hannun jarumi",
            "poem": 1
          },
          {
            "text": "haka ’ya’ya mazan da aka haifa wa mutum a ƙuruciya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Mai albarka ne mutumin",
            "poem": 1
          },
          {
            "text": "da korinsa sun cika da su.",
            "poem": 2
          },
          {
            "text": "Ba za a kunyata su ba",
            "poem": 1
          },
          {
            "text": "sa’ad da suke ƙarawa da abokan gābansu a ɗakin shari’a.",
            "poem": 2
          }
        ]
      }
    ],
