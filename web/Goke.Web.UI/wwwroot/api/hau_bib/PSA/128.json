  "chapter": {
    "number": 128,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Masu albarka ne dukan masu tsoron Ubangiji,",
            "poem": 1
          },
          {
            "text": "waɗanda suke tafiya a hanyoyinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Za ka ci amfanin aikinka;",
            "poem": 1
          },
          {
            "text": "albarku da wadata za su zama naka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Matarka za tă zama kamar kuringar inabi mai ’ya’ya",
            "poem": 1
          },
          {
            "text": "a cikin gidanka;",
            "poem": 2
          },
          {
            "text": "’ya’yanka maza za su zama kamar tohon zaitun",
            "poem": 1
          },
          {
            "text": "kewaye da teburinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ta haka mai albarka yake",
            "poem": 1
          },
          {
            "text": "wanda yake tsoron Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari Ubangiji ya albarkace ka daga Sihiyona",
            "poem": 1
          },
          {
            "text": "dukan kwanakin ranka;",
            "poem": 2
          },
          {
            "text": "bari ka ga wadatar Urushalima,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "bari kuma ka rayu ka ga ’ya’ya ’ya’yanka.",
            "poem": 1
          },
          {
            "text": "Salama tă kasance tare da Isra’ila.",
            "poem": 2
          }
        ]
      }
    ],
