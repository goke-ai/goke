  "chapter": {
    "number": 132,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, ka tuna da Dawuda",
            "poem": 1
          },
          {
            "text": "da kuma dukan irin wuyan da ya jimre.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ya yi rantsuwa ga Ubangiji",
            "poem": 1
          },
          {
            "text": "ya kuma yi alkawari ga Maɗaukaki na Yaƙub cewa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Ba zan shiga gidana",
            "poem": 1
          },
          {
            "text": "ko in kwanta a gado ba,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "ba zan ba wa idanuna barci ba,",
            "poem": 1
          },
          {
            "text": "ba gyangyaɗi wa idanuna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "sai na sami wuri wa Ubangiji,",
            "poem": 1
          },
          {
            "text": "mazauni domin Maɗaukaki na Yaƙub.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Mun ji haka a Efrata,",
            "poem": 1
          },
          {
            "text": "muka yi ƙaro da shi a filayen Ya’ar,",
            "poem": 2
          },
          {
            "noteId": 1204
          },
          {
            "text": ",",
            "poem": 2
          },
          {
            "noteId": 1205
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "“Bari mu tafi wurin zamansa;",
            "poem": 1
          },
          {
            "text": "bari mu yi sujada a wurin sa ƙafafunsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "ka tashi, ya Ubangiji, ka kuma zo wurin hutunka,",
            "poem": 1
          },
          {
            "text": "kai da akwatin alkawarin ƙarfinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Bari a suturta firistocinka da adalci;",
            "poem": 1
          },
          {
            "text": "bari tsarkakanka su rera don farin ciki.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Saboda Dawuda bawanka,",
            "poem": 1
          },
          {
            "text": "kada ka ƙi shafaffenka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ubangiji ya rantse wa Dawuda",
            "poem": 1
          },
          {
            "text": "tabbataccen rantsuwa cewa ba zai janye ba cewa,",
            "poem": 2
          },
          {
            "text": "“Ɗaya daga cikin zuriyarka",
            "poem": 1
          },
          {
            "text": "zan sa a kan kursiyinka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "in ’ya’yanka maza za su kiyaye alkawari",
            "poem": 1
          },
          {
            "text": "da farillan da na koya musu,",
            "poem": 2
          },
          {
            "text": "to ’ya’yansu maza za su zauna",
            "poem": 1
          },
          {
            "text": "a kan kursiyinka har abada abadin.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama Ubangiji ya zaɓi Sihiyona,",
            "poem": 1
          },
          {
            "text": "ya so ta zama mazauninsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Wannan shi ne wurin hutuna har abada abadin;",
            "poem": 1
          },
          {
            "text": "a nan zan zauna ina mulki gama ina son ta,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "zan albarkace ta da tanade-tanade masu yawa;",
            "poem": 1
          },
          {
            "text": "matalautanta za su ƙoshi da abinci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Zan suturta firistocinta da ceto,",
            "poem": 1
          },
          {
            "text": "tsarkakanta kuma kullum za su rera don farin ciki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "“A nan zan sa ƙaho",
            "poem": 1
          },
          {
            "noteId": 1206
          },
          {
            "text": "ya yi girma wa Dawuda",
            "poem": 1
          },
          {
            "text": "in kuma kafa fitila saboda shafaffena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Zan suturta abokan gābansa da kunya,",
            "poem": 1
          },
          {
            "text": "amma rawanin da yake a kansa zai yi ta walƙiya.”",
            "poem": 2
          }
        ]
      }
    ],
