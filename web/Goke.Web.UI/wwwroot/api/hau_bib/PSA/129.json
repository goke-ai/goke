  "chapter": {
    "number": 129,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Sun yi mini danniya ƙwarai tun ina ƙarami,",
            "poem": 1
          },
          {
            "text": "bari Isra’ila yă ce,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "sun yi mini danniya ƙwarai tun ina ƙarami,",
            "poem": 1
          },
          {
            "text": "amma ba su yi nasara a kaina ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Manoma sun nome bayana",
            "poem": 1
          },
          {
            "text": "suka yi kunyoyinsu da tsayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Amma Ubangiji mai adalci ne;",
            "poem": 1
          },
          {
            "text": "ya ’yantar da ni daga igiyoyin mugaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari dukan waɗanda suke ƙin Sihiyona",
            "poem": 1
          },
          {
            "text": "a juye da su baya da kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari su zama kamar ciyawa a kan rufi,",
            "poem": 1
          },
          {
            "text": "wadda takan bushe kafin tă yi girma;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "da ita mai girbi ba ya iya cika hannuwansa,",
            "poem": 1
          },
          {
            "text": "balle wanda yake tarawa yă cika hannuwansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada masu wuce su ce,",
            "poem": 1
          },
          {
            "text": "“Albarkar Ubangiji ta kasance a kanku;",
            "poem": 2
          },
          {
            "text": "muna sa muku albarka a cikin sunan Ubangiji.”",
            "poem": 2
          }
        ]
      }
    ],
