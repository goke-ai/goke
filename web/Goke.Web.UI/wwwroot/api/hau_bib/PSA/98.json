  "chapter": {
    "number": 98,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku rera sabuwar waƙa ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama ya yi abubuwa masu banmamaki;",
            "poem": 2
          },
          {
            "text": "hannunsa na dama da hannunsa mai tsarki",
            "poem": 1
          },
          {
            "text": "sun yi masa aikin ceto.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ubangiji ya sanar da cetonsa",
            "poem": 1
          },
          {
            "text": "ya kuma bayyana adalcinsa ga al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya tuna da ƙaunarsa",
            "poem": 1
          },
          {
            "text": "da kuma amincinsa ga gidan Isra’ila;",
            "poem": 2
          },
          {
            "text": "dukan iyakar duniya sun ga",
            "poem": 1
          },
          {
            "text": "ceton Allahnmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ku yi sowa don farin ciki ga Ubangiji, dukan duniya,",
            "poem": 1
          },
          {
            "text": "ku ɓarke da waƙa ta murna tare da kiɗi;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "ku yi kiɗi ga Ubangiji da garaya,",
            "poem": 1
          },
          {
            "text": "da garaya da ƙarar rerawa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "tare da bushe-bushe da karar ƙahon rago,",
            "poem": 1
          },
          {
            "text": "ku yi sowa don farin ciki a gaban Ubangiji, Sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Bari teku su yi ruri, da kuma kome da yake cikinsa,",
            "poem": 1
          },
          {
            "text": "duniya da kuma kome da yake cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Bari koguna su tafa hannuwansu,",
            "poem": 1
          },
          {
            "text": "bari duwatsu su rera tare don farin ciki;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "bari su rera a gaban Ubangiji,",
            "poem": 1
          },
          {
            "text": "gama yana zuwa domin yă hukunta duniya.",
            "poem": 2
          },
          {
            "text": "Zai hukunta duniya da adalci",
            "poem": 1
          },
          {
            "text": "mutane kuma cikin gaskiya.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
