  "chapter": {
    "number": 115,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ba gare mu ba, ya Ubangiji, ba gare mu ba",
            "poem": 1
          },
          {
            "text": "amma ga sunanka yă sami ɗaukaka,",
            "poem": 2
          },
          {
            "text": "saboda ƙaunarka da amincinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Me ya sa al’ummai suke cewa,",
            "poem": 1
          },
          {
            "text": "“Ina Allahnsu?”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Allahnmu yana a sama;",
            "poem": 1
          },
          {
            "text": "yana yin duk abin da ya ga dama.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Amma gumakansu azurfa da zinariya ne,",
            "poem": 1
          },
          {
            "text": "da hannuwan mutane suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Suna da bakuna, amma ba sa magana,",
            "poem": 1
          },
          {
            "text": "idanu, amma ba sa gani;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "suna da kunnuwa, amma ba sa ji,",
            "poem": 1
          },
          {
            "text": "hanci, amma ba sa jin ƙanshi",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "suna da hannuwa, amma ba sa iya taɓa kome,",
            "poem": 1
          },
          {
            "text": "ƙafafu, amma ba sa iya tafiya;",
            "poem": 2
          },
          {
            "text": "ba sa iya ce wani abu da maƙogwaronsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Masu yinsu za su zama kamar su,",
            "poem": 1
          },
          {
            "text": "haka kuma zai kasance da duk wanda ya dogara da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya gidan Isra’ila, ku dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "shi ne mai taimakonsu da garkuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ya gidan Haruna, ku dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "shi ne mai taimakonsu da garkuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ku da kuke tsoronsa, ku dogara ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "shi ne mai taimakonsu da garkuwarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ubangiji yakan tuna da mu zai kuma albarkace mu.",
            "poem": 1
          },
          {
            "text": "Zai albarkace gidan Isra’ila,",
            "poem": 2
          },
          {
            "text": "zai albarkace gidan Haruna,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "zai albarkace waɗanda suke tsoron Ubangiji,",
            "poem": 1
          },
          {
            "text": "manya da ƙanana duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Bari Ubangiji yă sa ku ƙaru,",
            "poem": 1
          },
          {
            "text": "da ku da ’ya’yanku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari Ubangiji yă albarkace ku,",
            "poem": 1
          },
          {
            "text": "shi Mahalicci sama da ƙasa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Saman sammai na Ubangiji ne,",
            "poem": 1
          },
          {
            "text": "amma ya ba da duniya ga mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ba matattu ba ne masu yabon Ubangiji,",
            "poem": 1
          },
          {
            "text": "waɗanda suke gangara zuwa wurin da ake shiru;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "mu ne masu ɗaukaka Ubangiji,",
            "poem": 1
          },
          {
            "text": "yanzu da har abada kuma.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1201
          }
        ]
      }
