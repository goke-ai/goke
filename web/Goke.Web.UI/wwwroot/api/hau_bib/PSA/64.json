  "chapter": {
    "number": 64,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka ji ni, ya Allah, yayinda nake faɗin abin da yake damuna;",
            "poem": 1
          },
          {
            "text": "ka tsare raina daga barazanan abokin gāba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka ɓoye ni daga ƙulle-ƙullen mugaye,",
            "poem": 1
          },
          {
            "text": "daga daure dauren wannan taro masu aikata mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sukan wāsa harsunansu kamar takuba",
            "poem": 1
          },
          {
            "text": "su harba kalmominsu kamar kibiyoyi masu kisa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sukan yin kwanto su harbi marar laifi;",
            "poem": 1
          },
          {
            "text": "sukan yi harbi nan da nan, ba tsoro.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Sukan ƙarfafa juna a mugayen ƙulle-ƙullensu,",
            "poem": 1
          },
          {
            "text": "sukan yi magana yadda za su ɓoye tarkunansu;",
            "poem": 2
          },
          {
            "text": "su ce, “Wa zai gan su?”",
            "poem": 2
          },
          {
            "noteId": 1170
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sukan yi ƙulle-ƙullen rashin adalci su ce,",
            "poem": 1
          },
          {
            "text": "“Mun gama ƙulla cikakkiyar maƙarƙashiya tsab!”",
            "poem": 2
          },
          {
            "text": "Zuciyar mutum da tunaninsa, suna da wuyar ganewa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Amma Allah zai harbe su da kibiyoyi;",
            "poem": 1
          },
          {
            "text": "nan da nan za a buge su su fāɗi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Zai juya harshensu a kansu",
            "poem": 1
          },
          {
            "text": "yă kuma kawo su ga hallaka;",
            "poem": 2
          },
          {
            "text": "duk waɗanda suka gan su za su kaɗa kai, suna musu ba’a.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Dukan mutane za su ji tsoro;",
            "poem": 1
          },
          {
            "text": "za su yi shelar ayyukan Allah",
            "poem": 2
          },
          {
            "text": "su kuma yi tunanin abin da ya aikata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Bari masu adalci su yi farin ciki a cikin Ubangiji",
            "poem": 1
          },
          {
            "text": "su kuma nemi mafaka a gare shi;",
            "poem": 2
          },
          {
            "text": "bari dukan masu gaskiya a zuciya su yabe shi!",
            "poem": 2
          }
        ]
      }
    ],
