  "chapter": {
    "number": 113,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1200
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ku yabe shi, ya ku bayin Ubangiji,",
            "poem": 1
          },
          {
            "text": "ku yabi sunan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari a yabi sunan Ubangiji,",
            "poem": 1
          },
          {
            "text": "yanzu da har abada kuma.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Daga fitowar rana zuwa inda take fāɗuwa,",
            "poem": 1
          },
          {
            "text": "a yabi sunan Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ana ɗaukaka Ubangiji a bisa dukan al’ummai,",
            "poem": 1
          },
          {
            "text": "ɗaukakarsa a bisa sammai",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Wane ne yake kamar Ubangiji Allahnmu,",
            "poem": 1
          },
          {
            "text": "Wannan mai zama a kursiyi can bisa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "wanda yake sunkuya yă dubi",
            "poem": 1
          },
          {
            "text": "sammai da duniya?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Yakan tā da matalauta daga ƙura",
            "poem": 1
          },
          {
            "text": "yakan ɗaga mabukata daga tarin toka;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "ya zaunar da su tare da sarakuna,",
            "poem": 1
          },
          {
            "text": "tare da sarakunan mutanensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Yakan zaunar da matar da ba haihuwa a gidanta",
            "poem": 1
          },
          {
            "text": "ta zama kamar mahaifiyar ’ya’ya mai farin ciki.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          }
        ]
      }
    ],
