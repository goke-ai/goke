  "chapter": {
    "number": 131,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Waƙar haurawa. Ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Zuciyata ba mai girman kai ba ce, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "idanuna ba sa fariya;",
            "poem": 2
          },
          {
            "text": "ban dami kaina da manyan al’amura ba",
            "poem": 1
          },
          {
            "text": "ko abubuwan da suka sha ƙarfina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Amma na haƙura na kuma kwantar da raina;",
            "poem": 1
          },
          {
            "text": "kamar yaron da aka yaye tare da mahaifiyarsa,",
            "poem": 2
          },
          {
            "text": "kamar yaron da aka yaye haka raina yake a cikina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ya Isra’ila, sa zuciyarka ga Ubangiji",
            "poem": 1
          },
          {
            "text": "yanzu da har abada kuma.",
            "poem": 2
          }
        ]
      }
    ],
