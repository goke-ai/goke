  "chapter": {
    "number": 20,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Zabura ta Dawuda."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ubangiji ya amsa maka sa’ad da ka yi kira cikin wahala;",
            "poem": 1
          },
          {
            "text": "bari sunan Allah na Yaƙub yă kiyaye ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari yă aiko maka da taimako daga wuri mai tsarki",
            "poem": 1
          },
          {
            "text": "yă kuma ba ka gudummawa daga Sihiyona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari yă tuna da dukan sadakokinka",
            "poem": 1
          },
          {
            "text": "yă kuma karɓi hadayunka na ƙonawa. Sela",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari yă biya maka bukatan ranka",
            "poem": 1
          },
          {
            "text": "yă kuma sa dukan shirye-shiryenka su yi nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Za mu yi sowa ta farin ciki sa’ad da ka yi nasara",
            "poem": 1
          },
          {
            "text": "mu kuma ɗaga tutotinmu a cikin sunan Allahnmu.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Bari Ubangiji yă biya maka dukan bukatunka.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Yanzu na san cewa,",
            "poem": 1
          },
          {
            "text": "Ubangiji yakan cece shafaffensa.",
            "poem": 2
          },
          {
            "text": "Yakan amsa masa daga samansa mai tsarki",
            "poem": 1
          },
          {
            "text": "da ikon ceto na hannun damansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Waɗansu sun dogara a kekunan yaƙi waɗansu kuma a dawakai,",
            "poem": 1
          },
          {
            "text": "amma mu, mun dogara a cikin sunan Ubangiji Allahnmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Za a durƙusar da su, su kuma fāɗi,",
            "poem": 1
          },
          {
            "text": "amma mu za mu tashi mu tsaya daram.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya Ubangiji, ka ba da nasara ga sarki!",
            "poem": 1
          },
          {
            "text": "Ka amsa mana sa’ad da muka yi kira!",
            "poem": 2
          }
        ]
      }
    ],
