  "chapter": {
    "number": 70,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Ta Dawuda. Roƙo."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka hanzarta, ya Allah, ka cece ni;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, zo da sauri ka taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari masu neman raina",
            "poem": 1
          },
          {
            "text": "su sha kunya su kuma rikice;",
            "poem": 2
          },
          {
            "text": "bari dukan masu sha’awar gani lalacewata",
            "poem": 1
          },
          {
            "text": "su juye baya da kunya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari masu ce mini, “Allah yă ƙara!”",
            "poem": 1
          },
          {
            "text": "Su juye baya saboda kunyansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Amma bari dukan masu nemanka",
            "poem": 1
          },
          {
            "text": "su yi farin ciki su kuma yi murna a cikinka;",
            "poem": 2
          },
          {
            "text": "bari waɗanda suke ƙaunar cetonka kullum su ce,",
            "poem": 1
          },
          {
            "text": "“Bari Allah yă sami ɗaukaka!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Duk da haka ni matalauci ne da kuma mai bukata;",
            "poem": 1
          },
          {
            "text": "ka zo da sauri gare ni, ya Allah.",
            "poem": 2
          },
          {
            "text": "Kai ne mai taimakona da mai cetona;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, kada ka yi jinkiri.",
            "poem": 2
          }
        ]
      }
    ],
