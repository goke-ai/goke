  "chapter": {
    "number": 72,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Ta Solomon."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka tanada sarki da shari’arka ta gaskiya, ya Allah,",
            "poem": 1
          },
          {
            "text": "ɗan sarki da adalcinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zai",
            "poem": 1
          },
          {
            "noteId": 1176
          },
          {
            "text": "shari’anta mutanenka da adalci,",
            "poem": 1
          },
          {
            "text": "marasa ƙarfinka da shari’ar gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Duwatsu za su kawo wadata ga mutane,",
            "poem": 1
          },
          {
            "text": "tuddai kuma su ba da amfani na adalci.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zai kāre marasa ƙarfi a cikin mutane",
            "poem": 1
          },
          {
            "text": "yă kuma cece ’ya’yan masu bukata;",
            "poem": 2
          },
          {
            "text": "zai murƙushe masu danniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zai jimre muddin rana tana nan,",
            "poem": 1
          },
          {
            "text": "muddin akwai wata, har dukan zamanai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Zai zama kamar ruwan sama mai fāɗuwa a filin ciyayin da aka yanka,",
            "poem": 1
          },
          {
            "text": "kamar yayyafi mai ba wa duniya ruwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "A kwanakinsa adalai za su haɓaka",
            "poem": 1
          },
          {
            "text": "wadata za tă yalwata har sai babu sauran wata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Zai yi mulki daga teku zuwa teku",
            "poem": 1
          },
          {
            "text": "kuma daga Kogi",
            "poem": 2
          },
          {
            "noteId": 1177
          },
          {
            "text": "zuwa iyakar duniya.",
            "poem": 2
          },
          {
            "noteId": 1178
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kabilun hamada za su rusuna a gabansa",
            "poem": 1
          },
          {
            "text": "abokan gābansa kuwa za su lashe ƙura.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sarakunan Tarshish da na bakin kogi masu nisa",
            "poem": 1
          },
          {
            "text": "za su ba da gandu gare shi;",
            "poem": 2
          },
          {
            "text": "sarakunan Sheba da Seba",
            "poem": 1
          },
          {
            "text": "za su ba shi kyautai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Dukan sarakuna za su rusuna masa",
            "poem": 1
          },
          {
            "text": "kuma dukan al’ummai za su bauta masa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Gama zai ceci masu bukatan da suka yi kuka,",
            "poem": 1
          },
          {
            "text": "marasa ƙarfin da ba su da mai taimako.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zai ji tausayin gajiyayyu da masu bukata",
            "poem": 1
          },
          {
            "text": "yă ceci masu bukata daga mutuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zai kuɓutar da su daga danniya da rikici,",
            "poem": 1
          },
          {
            "text": "gama jininsu yake a gabansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Bari yă yi doguwar rayuwa!",
            "poem": 1
          },
          {
            "text": "Bari a ba shi zinariya daga Sheba.",
            "poem": 2
          },
          {
            "text": "Bari mutane su riƙa yin addu’a dominsa",
            "poem": 1
          },
          {
            "text": "su kuma albarkace shi dukan yini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Bari hatsi yă yalwata a duk fāɗin ƙasar;",
            "poem": 1
          },
          {
            "text": "bari yă cika bisan tuddai.",
            "poem": 2
          },
          {
            "text": "Bari ’ya’yan itatuwansa su haɓaka kamar Lebanon;",
            "poem": 1
          },
          {
            "text": "bari yă bazu kamar ciyayi a gona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Bari sunansa yă dawwama har abada;",
            "poem": 1
          },
          {
            "text": "bari yă ci gaba muddin rana tana nan.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Dukan al’ummai za su sami albarka ta wurinsa,",
            "poem": 1
          },
          {
            "text": "za su kuma ce da shi mai albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yabo ya tabbata ga Ubangiji Allah, Allah na Isra’ila,",
            "poem": 1
          },
          {
            "text": "wanda shi kaɗai ya aikata abubuwa masu banmamaki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Yabo ya tabbata ga sunansa mai ɗaukaka har abada;",
            "poem": 1
          },
          {
            "text": "bari dukan duniya ta cika da ɗaukakarsa.",
            "poem": 2
          },
          "Amin kuma Amin."
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Wannan ya kammala addu’o’in Dawuda ɗan Yesse.",
            "poem": 1
          }
        ]
      }
    ],
