  "chapter": {
    "number": 56,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Da murya “Kurciya a Itatuwan Oak Mai Nisa.” Ta Dawuda. Wani miktam.",
          {
            "noteId": 1158
          },
          "Sa’ad da Filistiyawa suka kama shi a birnin Gat."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka yi mini jinƙai,",
            "poem": 1
          },
          {
            "text": "ya Allah, gama mutane sun tasar mini da zafi;",
            "poem": 2
          },
          {
            "text": "dukan yini suna matsa harinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Masu ɓata sunana suna bina dukan yini;",
            "poem": 1
          },
          {
            "text": "da yawa suna kai mini hari cikin fariyarsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Sa’ad da nake tsoro, zan dogara gare ka.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Ga Allah wanda maganarsa nake yabo",
            "poem": 2
          },
          {
            "text": "ga Allah na dogara; ba zan ji tsoro ba.",
            "poem": 1
          },
          {
            "text": "Me mutum mai mutuwa zai yi mini?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Dukan yini sun yi ta juya maganata;",
            "poem": 1
          },
          {
            "text": "kullum suna ƙulle-ƙulle su cuce ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Sun haɗa baki, sun ɓoye,",
            "poem": 1
          },
          {
            "text": "suna kallon takawata",
            "poem": 2
          },
          {
            "text": "suna a shirye su ɗauki raina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Sam, kada ka bari su kuɓuce;",
            "poem": 1
          },
          {
            "text": "cikin fushinka, ya Allah, ka saukar da al’ummai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ka lissafta makokina;",
            "poem": 1
          },
          {
            "text": "ka jera hawayena a littafinka,",
            "poem": 2
          },
          {
            "noteId": 1159
          },
          {
            "text": "ba a rubuce suke a cikin littafinka ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ta haka abokan gābana za su juya da baya",
            "poem": 1
          },
          {
            "text": "sa’ad da na nemi taimako.",
            "poem": 2
          },
          {
            "text": "Ta haka zan san cewa Allah yana tare da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ga Allah, wanda nake yabon maganarsa,",
            "poem": 1
          },
          {
            "text": "ga Ubangiji, wanda nake yabon maganarsa,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "ga Allah na dogara; ba zan ji tsoro ba.",
            "poem": 1
          },
          {
            "text": "Me mutum zai iya yi mini?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Ina ƙarƙashin alkawari gare ka, ya Allah;",
            "poem": 1
          },
          {
            "text": "zan miƙa hadayuna na godiya gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama ka cece ni",
            "poem": 1
          },
          {
            "noteId": 1160
          },
          {
            "text": "daga mutuwa",
            "poem": 1
          },
          {
            "text": "da kuma ƙafafun daga tuntuɓe,",
            "poem": 2
          },
          {
            "text": "don in yi tafiya a gaban Allah",
            "poem": 1
          },
          {
            "text": "cikin hasken rai.",
            "poem": 2
          },
          {
            "noteId": 1161
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1158,
        "caller": "+",
        "text": "Kan magana, mai yiwuwa wata kalmar waƙa ce.",
        "reference": {
          "chapter": 56,
          "verse": 0
        }
      },
      {
        "noteId": 1159,
        "caller": "+",
        "text": "Ko kuwa / ka sa hawayena a salkan ruwan inabinka",
        "reference": {
          "chapter": 56,
          "verse": 8
        }
      },
      {
        "noteId": 1160,
        "caller": "+",
        "text": "Ko kuwa raina",
        "reference": {
          "chapter": 56,
          "verse": 13
        }
      },
      {
        "noteId": 1161,
        "caller": "+",
        "text": "Ko kuwa a ƙasar masu rai",
        "reference": {
          "chapter": 56,
          "verse": 13
        }
      }
