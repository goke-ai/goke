  "chapter": {
    "number": 139,
    "content": [
      {
        "type": "hebrew_subtitle",
        "content": [
          "Don mai bi da kaɗe-kaɗe. Ta Dawuda. Zabura ce."
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ya Ubangiji, ka bincike ni",
            "poem": 1
          },
          {
            "text": "ka kuwa san ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka san sa’ad da na zauna da sa’ad da na tashi;",
            "poem": 1
          },
          {
            "text": "ka san tunanina daga nesa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ka san fitata da kuma kwanciyata;",
            "poem": 1
          },
          {
            "text": "ka saba da dukan hanyoyina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kafin in yi magana da harshena",
            "poem": 1
          },
          {
            "text": "ka santa gaba ɗaya, ya Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Ka kewaye ni, gaba da baya;",
            "poem": 1
          },
          {
            "text": "ka sa hannunka a kaina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Irin wannan sanin game da ni ya fi ƙarfin magana,",
            "poem": 1
          },
          {
            "text": "ya fi ƙarfi in gane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ina zan tafi daga Ruhunka?",
            "poem": 1
          },
          {
            "text": "Ina zan gudu in tafi daga gabanka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "In na haura zuwa sammai, kana a can;",
            "poem": 1
          },
          {
            "text": "in na yi gado a zurfafa, kana a can.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "In na tashi a fikafikan safiya,",
            "poem": 1
          },
          {
            "text": "in na sauka a gefe mai nisa na teku,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "can ma hannunka zai bishe ni,",
            "poem": 1
          },
          {
            "text": "hannunka na dama zai riƙe ni gam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "In na ce, “Tabbatacce duhu zai ɓoye ni",
            "poem": 1
          },
          {
            "text": "haske kuma zai zama dare kewaye da ni,”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "duhu ma ba zai zama duhu gare ka ba;",
            "poem": 1
          },
          {
            "text": "dare zai haskaka kamar rana,",
            "poem": 2
          },
          {
            "text": "gama duhu ya yi kamar haske gare ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Gama ka halicci ciki-cikina;",
            "poem": 1
          },
          {
            "text": "ka gina ni gaba ɗaya a cikin mahaifar mahaifiyata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ina yabonka domin yadda ka yi ni abin tsoro ne da kuma abin mamaki;",
            "poem": 1
          },
          {
            "text": "ayyukanka suna da banmamaki,",
            "poem": 2
          },
          {
            "text": "na san da haka sosai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Ƙasusuwana ba a ɓoye suke a gare ka ba",
            "poem": 1
          },
          {
            "text": "sa’ad da aka yi ni asirce.",
            "poem": 2
          },
          {
            "text": "Sa’ad da saƙa ni gaba ɗaya a zurfafan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Idanunka sun ga jikina marar fasali;",
            "poem": 1
          },
          {
            "text": "dukan kwanakin da aka tsara mini a rubuce suke a littafinka",
            "poem": 2
          },
          {
            "text": "kafin ɗayansu yă kasance.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Tunaninka suna da daraja gare ni, ya Allah!",
            "poem": 1
          },
          {
            "text": "Yawansu ba su da iyaka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "A ce zan iya ƙirgansu,",
            "poem": 1
          },
          {
            "text": "za su fi yashin teku yawa.",
            "poem": 2
          },
          {
            "text": "Sa’ad da na farka, ina nan tare da kai har yanzu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Da kawai za ka kashe mugaye, ya Allah!",
            "poem": 1
          },
          {
            "text": "Ku rabu da ni, ku masu kisankai!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Suna magana game da kai da mugun nufi;",
            "poem": 1
          },
          {
            "text": "maƙiyanka suna ɗaukan sunanka a banza.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Ba ina ƙin masu ƙinka ba, ya Ubangiji,",
            "poem": 1
          },
          {
            "text": "ina kuma ƙyamar waɗanda suke tayar maka ba?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Ba ni da wani abu da nake musu sai kiyaye kawai;",
            "poem": 1
          },
          {
            "text": "na ɗauke su abokan gābana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ka bincike ni, ya Allah ka kuma san zuciyata;",
            "poem": 1
          },
          {
            "text": "ka gwada ni ka kuma san damuwata.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Duba ko akwai wani laifi a cikina,",
            "poem": 1
          },
          {
            "text": "ka bishe ni a madawwamiyar hanya.",
            "poem": 2
          }
        ]
      }
    ],
