  "chapter": {
    "number": 118,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku gode wa Ubangiji, gama nagari ne shi;",
            "poem": 1
          },
          {
            "text": "ƙaunarsa madawwamiya ce har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari Isra’ila yă ce,",
            "poem": 1
          },
          {
            "text": "“Ƙaunarsa madawwamiya ce har abada.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari gidan Haruna yă ce,",
            "poem": 1
          },
          {
            "text": "“Ƙaunarsa madawwamiya ce har abada.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Bari waɗanda suke tsoron Ubangiji su ce,",
            "poem": 1
          },
          {
            "text": "“Ƙaunarsa madawwamiya ce har abada.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Cikin azabata na yi kuka ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ya kuwa amsa ta wurin ’yantar da ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ubangiji yana tare da ni; ba zan ji tsoro ba.",
            "poem": 1
          },
          {
            "text": "Me mutum zai yi mini?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ubangiji yana tare da ni; shi ne mai taimakona.",
            "poem": 1
          },
          {
            "text": "Zan yi nasara a kan abokan gābana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ya fi kyau in nemi mafaka a wurin Ubangiji",
            "poem": 1
          },
          {
            "text": "da in dogara ga mutum.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ya fi kyau in nemi mafaka a wurin Ubangiji",
            "poem": 1
          },
          {
            "text": "da in dogara ga sarakuna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Dukan al’ummai sun kewaye ni,",
            "poem": 1
          },
          {
            "text": "amma a cikin sunan Ubangiji na hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Sun kewaye ni a kowane gefe,",
            "poem": 1
          },
          {
            "text": "amma a cikin sunan Ubangiji na hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Sun rufe ni kamar ƙudan zuma,",
            "poem": 1
          },
          {
            "text": "amma suka mutu nan da nan kamar ƙayayyuwa masu cin wuta;",
            "poem": 2
          },
          {
            "text": "a cikin sunan Ubangiji na hallaka su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "An ture ni baya na kusa fāɗuwa,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji ya taimake ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ubangiji ne ƙarfina da waƙata;",
            "poem": 1
          },
          {
            "text": "ya zama mai cetona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sowa ta farin ciki da nasara",
            "poem": 1
          },
          {
            "text": "sun fito a cikin tentunan adalai,",
            "poem": 2
          },
          {
            "text": "“Hannun dama na Ubangiji ya aikata manyan abubuwa!",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "An ɗaga hannun dama na Ubangiji sama;",
            "poem": 2
          },
          {
            "text": "hannun dama na Ubangiji ya aikata manyan abubuwa!”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Ba zan mutu ba amma zan rayu,",
            "poem": 1
          },
          {
            "text": "zan kuwa yi shelar abin da Ubangiji ya yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Ubangiji ya hore ni sosai,",
            "poem": 1
          },
          {
            "text": "amma bai ba da ni ga mutuwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Buɗe mini ƙofofin adalci;",
            "poem": 1
          },
          {
            "text": "zan shiga in kuma yi godiya ga Ubangiji.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Wannan ne ƙofar Ubangiji",
            "poem": 1
          },
          {
            "text": "inda adalai za su shiga.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Zan yi maka godiya, domin ka amsa mini;",
            "poem": 1
          },
          {
            "text": "ka zama mai cetona.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Zabura Dutsen da magina suka ƙi",
            "poem": 1
          },
          {
            "text": "ya zama mai amfani;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Ubangiji ne ya yi haka,",
            "poem": 1
          },
          {
            "text": "kuma abu mai daraja ne a idanunmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Wannan ita ce ranar da Ubangiji ya yi;",
            "poem": 1
          },
          {
            "text": "bari mu yi farin ciki mu kuma yi murna a cikinta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Ya Ubangiji, ka cece mu;",
            "poem": 1
          },
          {
            "text": "Ya Ubangiji, ka ba mu nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Mai albarka ne shi mai zuwa cikin sunan Ubangiji.",
            "poem": 1
          },
          {
            "text": "Daga gidan Ubangiji muna sa muku albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "Ubangiji shi ne Allah",
            "poem": 1
          },
          {
            "text": "ya kuma sa haskensa ya haskaka a kanmu.",
            "poem": 2
          },
          {
            "text": "Da kwanoni a hannunmu, muka shiga jerin gwanon biki",
            "poem": 1
          },
          {
            "text": "ku kai su ƙahoni na bagade.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "Kai ne Allahna, zan kuwa yi maka godiya;",
            "poem": 1
          },
          {
            "text": "kai ne Allahna, zan kuwa ɗaukaka ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Ku gode wa Ubangiji, gama nagari ne shi;",
            "poem": 1
          },
          {
            "text": "ƙaunarsa madawwamiya ce har abada.",
            "poem": 2
          }
        ]
      }
