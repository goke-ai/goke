  "chapter": {
    "number": 149,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          },
          {
            "noteId": 1214
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ku rera sabuwar waƙa ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "yabonsa a cikin taron tsarkaka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Bari Isra’ila su yi farin ciki da Mahaliccinsu;",
            "poem": 1
          },
          {
            "text": "bari mutanen Sihiyona su yi murna da Sarkinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Bari su yabi sunansa tare da rawa",
            "poem": 1
          },
          {
            "text": "suna kuma yin kiɗi gare shi da ganga da garaya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama Ubangiji yana jin daɗin mutanensa;",
            "poem": 1
          },
          {
            "text": "yakan darjanta masu sauƙinkai da ceto.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Bari tsarkaka su yi farin ciki a wannan bangirma",
            "poem": 1
          },
          {
            "text": "su kuma rera don farin ciki a kan gadajensu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Bari yabon Allah yă kasance a bakunansu",
            "poem": 1
          },
          {
            "text": "takobi mai kaifi kuma a hannuwansu,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "don su ɗau fansa a kan al’ummai",
            "poem": 1
          },
          {
            "text": "da kuma hukunci a kan mutane,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "don su ɗaura sarakuna da sarƙoƙi,",
            "poem": 1
          },
          {
            "text": "manyan garinsu da sarƙoƙin ƙarfe,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "don su yi hukuncin da aka rubuta a kansu.",
            "poem": 1
          },
          {
            "text": "Wannan ne ɗaukakar dukan tsarkakansa.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Yabi Ubangiji.",
            "poem": 1
          }
        ]
      }
    ],
