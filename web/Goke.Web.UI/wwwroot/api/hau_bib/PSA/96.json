  "chapter": {
    "number": 96,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ku rera sabuwar waƙa ga Ubangiji;",
            "poem": 1
          },
          {
            "text": "ku rera ga Ubangiji, ku duniya duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ku rera ga Ubangiji, ku yabe sunansa;",
            "poem": 1
          },
          {
            "text": "ku yi shelar cetonsa kowace rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ku furta ɗaukakarsa a cikin al’ummai,",
            "poem": 1
          },
          {
            "text": "manyan ayyukansa a cikin dukan mutane.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Gama da girma Ubangiji yake, ya kuma cancanci yabo;",
            "poem": 1
          },
          {
            "text": "tilas a ji tsoronsa fiye da dukan alloli.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gama dukan allolin al’ummai gumaka ne,",
            "poem": 1
          },
          {
            "text": "amma Ubangiji ne ya yi sammai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Daraja da ɗaukaka suna a gabansa;",
            "poem": 1
          },
          {
            "text": "ƙarfi da ɗaukaka suna a cikin tsarkakar wurinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Ku ba wa Ubangiji, ya iyalan al’ummai",
            "poem": 1
          },
          {
            "text": "ku ba wa Ubangiji ɗaukaka da kuma ƙarfi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ku ba wa Ubangiji ɗaukakar da ta dace da sunansa;",
            "poem": 1
          },
          {
            "text": "ku kawo sadaka ku kuma zo cikin filayen gidansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku bauta wa Ubangiji da darajar tsarkinsa;",
            "poem": 1
          },
          {
            "text": "ku yi rawar jiki a gabansa, dukan duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ku faɗa cikin al’ummai, “Ubangiji yana mulki.”",
            "poem": 1
          },
          {
            "text": "Duniya ta kahu daram, ba za a iya matsar da ita ba;",
            "poem": 2
          },
          {
            "text": "zai yi wa mutane hukunci da gaskiya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Bari sammai su yi farin ciki, bari duniya tă yi murna;",
            "poem": 1
          },
          {
            "text": "bari teku tă yi ruri, da kuma dukan abin da yake cikinsa;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "bari gonaki su yi tsalle da murna, da kuma kome da yake cikinsu.",
            "poem": 1
          },
          {
            "text": "Ta haka dukan itatuwan kurmi za su rera don farin ciki;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "za su rera a gaban Ubangiji, gama yana zuwa,",
            "poem": 1
          },
          {
            "text": "yana zuwa don yă hukunta duniya.",
            "poem": 2
          },
          {
            "text": "Zai hukunta duniya cikin adalci",
            "poem": 1
          },
          {
            "text": "mutane kuma cikin amincinsa.",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": []
  },
