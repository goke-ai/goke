  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "heading",
        "content": [
          "Hikima"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Suna mai kyau ya fi turare mai ƙanshi,",
            "poem": 1
          },
          {
            "text": "kuma ranar mutuwa ta fi ranar haihuwa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Gara a tafi gidan makoki",
            "poem": 1
          },
          {
            "text": "da a je gidan biki,",
            "poem": 2
          },
          {
            "text": "gama mutuwa ce ƙaddarar kowane mutum;",
            "poem": 1
          },
          {
            "text": "ya kamata masu rai su lura da haka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Baƙin ciki ya fi dariya,",
            "poem": 1
          },
          {
            "text": "gama baƙin ciki yakan kawo gyara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zuciyar masu hikima tana a gidan makoki,",
            "poem": 1
          },
          {
            "text": "amma zuciya wawaye tana a gidan shagali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Gara ka saurari tsawatawar mai hikima",
            "poem": 1
          },
          {
            "text": "da ka saurari waƙar wawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Kamar ƙarar ƙayar da take karce gindin tukunya,",
            "poem": 1
          },
          {
            "text": "haka dariyar wawaye take.",
            "poem": 2
          },
          {
            "text": "Wannan ma ba shi da amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zalunci yakan mai da mutum mai hikima wawa,",
            "poem": 1
          },
          {
            "text": "cin hanci kuma yakan lalace hali.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Ƙarshen abu ya fi farkonsa,",
            "poem": 1
          },
          {
            "text": "haƙuri kuma ya fi girman kai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kada ranka yă yi saurin tashi,",
            "poem": 1
          },
          {
            "text": "gama fushi yana zama a cinyar wawaye.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kada ka ce, “Me ya sa kwanakin dā sun fi waɗannan?”",
            "poem": 1
          },
          {
            "text": "Gama ba daidai ba ne a yi irin waɗannan tambayoyi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Hikima, kamar gādo, abu mai kyau ne",
            "poem": 1
          },
          {
            "text": "tana kuma da amfani ga waɗanda suka ga rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Hikima mafaka ce",
            "poem": 1
          },
          {
            "text": "takan kāre mutum kamar yadda kuɗi suke yi.",
            "poem": 2
          },
          {
            "text": "Kiyayewar da hikima takan yi wa mai ita",
            "poem": 1
          },
          {
            "text": "ita ce amfanin ilimi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          "Ku lura da abin da Allah ya yi.",
          {
            "text": "Wa zai iya miƙe",
            "poem": 1
          },
          {
            "text": "abin da ya tanƙware?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Sa’ad da al’amura suke tafiya daidai, ka yi farin ciki,",
            "poem": 1
          },
          {
            "text": "amma sa’ad da suka lalace, ka tuna,",
            "poem": 2
          },
          {
            "text": "Allah ne ya yi wancan",
            "poem": 1
          },
          {
            "text": "shi ne kuma ya yi wannan.",
            "poem": 2
          },
          {
            "text": "Saboda haka, mutum ba zai san",
            "poem": 1
          },
          {
            "text": "wani abu game da nan gabansa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          "A cikin rayuwan nan ta rashin amfani nawa, na lura da waɗannan abubuwa biyu,",
          {
            "text": "mai adalci yana hallakawa cikin adalcinsa,",
            "poem": 1
          },
          {
            "text": "mai mugunta kuma yana tsawon rai cikin muguntarsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kada ka cika yin adalci, fiye da kima,",
            "poem": 1
          },
          {
            "text": "kada kuma ka cika yin hikima,",
            "poem": 2
          },
          {
            "text": "don me za ka hallaka kanka!",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Kada ka cika yin mugunta,",
            "poem": 1
          },
          {
            "text": "kada kuma ka cika yin wauta,",
            "poem": 2
          },
          {
            "text": "don me za ka mutu kafin lokacinka?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Yana da kyau ka kama ɗaya",
            "poem": 1
          },
          {
            "text": "ba tare da ka saki wancan ba.",
            "poem": 2
          },
          {
            "text": "Mai tsoron Allah zai guji wuce gona da iri.",
            "poem": 2
          },
          {
            "noteId": 298
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Hikima takan sa mutum guda mai hikima yă yi ƙarfi",
            "poem": 1
          },
          {
            "text": "fiye da masu mulki goma a cikin birni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Babu mai adalci a duniya",
            "poem": 1
          },
          {
            "text": "wanda yake yin abin da yake daidai da bai taɓa yin zunubi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "Kada ka mai da hankali ga dukan abin da mutane suke faɗi,",
            "poem": 1
          },
          {
            "text": "in ba haka ba wata rana za ka ji bayinka suna zaginka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "Gama kai kanka ka sani",
            "poem": 1
          },
          {
            "text": "cewa sau da yawa ka zagi waɗansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          "Dukan waɗannan na gwada su ta wurin hikima na kuma ce,",
          {
            "text": "“Na ƙudurta in zama mai hikima,”",
            "poem": 1
          },
          {
            "text": "amma abin ya fi ƙarfina.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Ko da me hikima take,",
            "poem": 1
          },
          {
            "text": "Abin ya yi mana zurfi ƙwarai, yana da wuyar ganewa,",
            "poem": 2
          },
          {
            "text": "wa zai iya gane shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "Saboda haka na mai da hankalina ga fahimi,",
            "poem": 1
          },
          {
            "text": "don in bincika in nemi hikima da yadda aka tsara abubuwa,",
            "poem": 2
          },
          {
            "text": "in kuma fahimci wawancin mugunta",
            "poem": 1
          },
          {
            "text": "da haukar wauta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Sai na iske wani abin da ya fi mutuwa ɗaci",
            "poem": 1
          },
          {
            "text": "mace wadda take tarko ne,",
            "poem": 2
          },
          {
            "text": "wadda zuciyarta tarko ne",
            "poem": 1
          },
          {
            "text": "wadda kuma hannuwanta sarƙa ne.",
            "poem": 2
          },
          {
            "text": "Mutumin da ya gamshi Allah zai tsere mata,",
            "poem": 1
          },
          {
            "text": "amma za tă kama mai zunubi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          "Malami ya ce, “Duba, abin da na gane ke nan.",
          {
            "text": "“Na tara abu guda da wani, don in gane tsarin abubuwa,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          {
            "text": "yayinda nake cikin nema",
            "poem": 2
          },
          {
            "text": "amma ban samu ba,",
            "poem": 2
          },
          {
            "text": "sai na sami adali guda cikin dubu,",
            "poem": 1
          },
          {
            "text": "amma ba mace mai adalci guda a cikinsu duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          {
            "text": "Wannan ne kaɗai abin da na gane.",
            "poem": 1
          },
          {
            "text": "Allah ya yi mutum tsab",
            "poem": 2
          },
          {
            "text": "amma sai muka rikitar da kanmu.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
