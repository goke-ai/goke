  "chapter": {
    "number": 11,
    "content": [
      {
        "type": "heading",
        "content": [
          "Burodi a bisa ruwaye"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ka jefa burodinka a bisa ruwaye,",
            "poem": 1
          },
          {
            "text": "gama bayan kwanaki masu yawa, za ka sāke samunsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Ka raba abin hannunka ga mutum bakwai, I, har ma takwas,",
            "poem": 1
          },
          {
            "text": "gama ba ka san bala’in da zai auko wa ƙasar ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "In gizagizai sun cika da ruwa,",
            "poem": 1
          },
          {
            "text": "sukan zub da ruwan sama bisa duniya.",
            "poem": 2
          },
          {
            "text": "Itace ya fāɗi, ko wajen kudu ne, ko wajen arewa,",
            "poem": 1
          },
          {
            "text": "inda ya fāɗi a nan zai kwanta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Duk mai la’akari da iska, ba zai yi shuka ba,",
            "poem": 1
          },
          {
            "text": "mai la’akari da gizagizai kuma, ba zai yi girbi ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kamar yadda ba ka san hanyar iska ba,",
            "poem": 1
          },
          {
            "text": "ko yadda aka siffanta jiki a cikin mahaifiya,",
            "poem": 2
          },
          {
            "text": "haka ba za ka fahimci aikin Allah",
            "poem": 1
          },
          {
            "text": "Mahaliccin dukan abubuwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ka shuka irinka da safe,",
            "poem": 1
          },
          {
            "text": "da yamma kuma kada ka janye hannunka,",
            "poem": 2
          },
          {
            "text": "gama ba ka san wanda zai yi albarka ba,",
            "poem": 1
          },
          {
            "text": "ko wannan ko wancan,",
            "poem": 2
          },
          {
            "text": "ko kuma duka biyunsu su yi albarka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Ka tuna da mahaliccinka a ƙuruciyarka"
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Haske da yana da kyau,",
            "poem": 1
          },
          {
            "text": "abu mai kyau ne kuma idanu su dubi rana.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kome tsawon rayuwar mutum,",
            "poem": 1
          },
          {
            "text": "bari yă more su duka.",
            "poem": 2
          },
          {
            "text": "Amma bari kuma yă tuna da kwanakin duhu,",
            "poem": 1
          },
          {
            "text": "gama su ma za su yi yawa.",
            "poem": 2
          },
          {
            "text": "Duk abin da zai faru ba shi da amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ka yi murna, kai matashi, a ƙuruciyarka,",
            "poem": 1
          },
          {
            "text": "bari zuciyarka kuma tă yi farin ciki a kwanakin ƙuruciyarka.",
            "poem": 2
          },
          {
            "text": "Ka bi shawarar zuciyarka",
            "poem": 1
          },
          {
            "text": "da kuma duk abin da idanunka suka gani,",
            "poem": 2
          },
          {
            "text": "amma ka sani fa, cikin dukan al’amuran nan",
            "poem": 1
          },
          {
            "text": "Allah zai shari’anta ka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Saboda haka, ka fid da tsoro daga zuciyarka",
            "poem": 1
          },
          {
            "text": "ka kakkaɓe duk wani abin da ya dami rayuwarka,",
            "poem": 2
          },
          {
            "text": "gama ƙuruciya da ƙarfi ba su da amfani.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      }
    ],
