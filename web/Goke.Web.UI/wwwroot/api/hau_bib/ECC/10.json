  "chapter": {
    "number": 10,
    "content": [
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Kamar yadda matattun ƙudaje sukan ɓata ƙanshin turare,",
            "poem": 1
          },
          {
            "text": "haka ’yar wauta takan ɓata hikima da daraja.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "Zuciyar mai hikima takan karkata ga yin abin da yake daidai,",
            "poem": 1
          },
          {
            "text": "amma zuciyar wawa takan karkata ga yin mugun abu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Ko yayinda yake tafiya a kan hanya",
            "poem": 1
          },
          {
            "text": "wawa yakan nuna cewa ba shi da hankali,",
            "poem": 2
          },
          {
            "text": "yakan nuna wa kowa wawancinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "In hankalin mai mulki ya tashi game da kai,",
            "poem": 1
          },
          {
            "text": "kada ka bar inda kake,",
            "poem": 2
          },
          {
            "text": "gama kwantar da hankali yakan sa a yafe manyan laifofi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Akwai muguntar da na gani a duniya,",
            "poem": 1
          },
          {
            "text": "irin kuskuren da yake fitowa daga masu mulki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Akan sa wawaye a manyan matsayi,",
            "poem": 1
          },
          {
            "text": "yayinda masu arziki suna ƙarƙashi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Na taɓa ganin bayi a kan dawakai,",
            "poem": 1
          },
          {
            "text": "yayinda ’ya’yan sarki suna takawa a ƙasa kamar bayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Duk wanda ya haƙa rami shi ne zai fāɗa a ciki;",
            "poem": 1
          },
          {
            "text": "duk wanda ya rushe katanga, shi maciji zai sara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Duk mai farfasa duwatsu shi za su yi wa rauni;",
            "poem": 1
          },
          {
            "text": "duk mai faskaren itace yana cikin hatsarinsu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "In gatari ya dakushe",
            "poem": 1
          },
          {
            "text": "ba a kuma wasa shi ba,",
            "poem": 2
          },
          {
            "text": "dole a yi amfani da ƙarfi da yawa,",
            "poem": 1
          },
          {
            "text": "amma ƙwarewa yana kawo nasara.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "In maciji ya sari mutum kafin a ba shi makarin gardi,",
            "poem": 1
          },
          {
            "text": "ina amfanin maganin?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Kalmomi daga bakin mai hikima alheri ne,",
            "poem": 1
          },
          {
            "text": "amma maganganun wawa za su hallaka shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Farkon maganarsa wauta ce,",
            "poem": 1
          },
          {
            "text": "ƙarshenta kuma takan zama muguwar hauka,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "wawa kuma yakan yi ta surutu.",
            "poem": 2
          },
          {
            "lineBreak": true
          },
          {
            "text": "Ba wanda ya san abin da zai zo",
            "poem": 1
          },
          {
            "text": "wa zai iya faɗa masa abin da zai faru bayan rasuwarsa?",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Aikin wawa yakan gajiyar da shi,",
            "poem": 1
          },
          {
            "text": "har bai san hanyar zuwa gari ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Kaitonki, ya ke ƙasa wadda sarkinki bawa ne",
            "poem": 1
          },
          {
            "noteId": 299
          },
          {
            "text": "wadda kuma hakimanta ke ta shagali tun da safe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Mai albarka ce, ya ke ƙasa wadda sarkinki haifaffen gidan sarauta ne,",
            "poem": 1
          },
          {
            "text": "wadda hakimanta suke samun abincinsu a daidai lokacin",
            "poem": 2
          },
          {
            "text": "don samun ƙarfi ba don buguwa ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "In mutum rago ne, sai tsaiko yă lotsa,",
            "poem": 1
          },
          {
            "text": "in hannuwansa ba masa yin kome, ɗaki yakan yi yoyo.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Akan shirya abinci don jin daɗi,",
            "poem": 1
          },
          {
            "text": "ruwan inabi kuwa don faranta zuciya,",
            "poem": 2
          },
          {
            "text": "amma kuɗi ne amsar kome.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Kada ka zagi sarki ko da a cikin tunaninka ne,",
            "poem": 1
          },
          {
            "text": "ko ka zagi mai arziki ko da a ɗakin kwananka ne,",
            "poem": 2
          },
          {
            "text": "gama tsuntsun sararin sama zai iya ɗauki maganarka,",
            "poem": 1
          },
          {
            "text": "tsuntsu mai fikafikai zai sanar da abin da ka ce.",
            "poem": 2
          }
        ]
      }
    ],
