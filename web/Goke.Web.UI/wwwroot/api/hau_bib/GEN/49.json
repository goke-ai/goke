  "chapter": {
    "number": 49,
    "content": [
      {
        "type": "heading",
        "content": [
          "Yaƙub ya albarkaci ’ya’yansa maza"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sai Yaƙub ya kira ’ya’yansa maza ya ce, “Ku tattaru don in faɗa muku abin da zai faru gare ku, a kwanaki masu zuwa."
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Ku tattaru, ku saurara, ’ya’yan Yaƙub maza;",
            "poem": 1
          },
          {
            "text": "ku saurari mahaifinku, Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "“Ruben, kai ne ɗan farina,",
            "poem": 1
          },
          {
            "text": "ƙarfina, alamar farko ta ƙarfina,",
            "poem": 2
          },
          {
            "text": "mafi matsayi, kuma mafi iko.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mai tumbatsa kamar ruwa, amma ba za ka ƙara zama mai daraja ba,",
            "poem": 1
          },
          {
            "text": "gama ka hau gadon mahaifinka",
            "poem": 2
          },
          {
            "text": "ka hau kujerata, ka kuma ƙazantar da shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "“Simeyon da Lawi ’yan’uwa ne,",
            "poem": 1
          },
          {
            "text": "takubansu makamai ne na tā da hankali.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Ba zan shiga shawararsu ba,",
            "poem": 1
          },
          {
            "text": "ba zan shiga taronsu ba,",
            "poem": 2
          },
          {
            "text": "gama sun kashe maza cikin fushinsu",
            "poem": 1
          },
          {
            "text": "cikin ganin dama suka kashe bijimai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "La’ananne ne fushinsu, mai tsanani ne ƙwarai,",
            "poem": 1
          },
          {
            "text": "hasalarsu kuwa, muguwa ce ƙwarai!",
            "poem": 2
          },
          {
            "text": "Zan warwatsa su cikin Yaƙub",
            "poem": 1
          },
          {
            "text": "in kuma daidaita su cikin Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "“Yahuda,",
            "poem": 1
          },
          {
            "noteId": 557
          },
          {
            "text": "’yan’uwanka za su yabe ka;",
            "poem": 1
          },
          {
            "text": "hannuwanka za su kasance a wuyan abokan gābanka,",
            "poem": 2
          },
          {
            "text": "’ya’yan mahaifinka maza za su rusuna maka.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Kai ɗan zaki ne, ya Yahuda,",
            "poem": 1
          },
          {
            "text": "ka dawo daga farauta, ɗana.",
            "poem": 2
          },
          {
            "text": "Kamar zaki, yakan kwanta a miƙe,",
            "poem": 1
          },
          {
            "text": "kamar zakanya, wa yake da ƙarfin halin tashe shi?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Kursiyi ba zai tashi daga Yahuda ba,",
            "poem": 1
          },
          {
            "text": "ba kuwa sandan mulki daga tsakani ƙafafunsa ba,",
            "poem": 2
          },
          {
            "text": "sai ya zo ga wanda yake mai shi",
            "poem": 1
          },
          {
            "noteId": 558
          },
          {
            "text": ".",
            "poem": 1
          },
          {
            "text": "Biyayyar al’umma kuwa tasa ce.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Zai daure jakinsa a kuringa,",
            "poem": 1
          },
          {
            "text": "aholakinsa a rassa mafi kyau;",
            "poem": 2
          },
          {
            "text": "zai wanke tufafinsa cikin ruwan inabi",
            "poem": 1
          },
          {
            "text": "rigunansa cikin inabi ja wur kamar jini.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Idanunsa za su duhunce fiye da ruwan inabi,",
            "poem": 1
          },
          {
            "text": "haƙorarsa farare kamar madara.",
            "poem": 2
          },
          {
            "noteId": 559
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Zebulun zai zauna a bakin teku,",
            "poem": 1
          },
          {
            "text": "yă zama tasar jiragen ruwa;",
            "poem": 2
          },
          {
            "text": "iyakarsa za tă nausa zuwa Sidon.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "“Issakar doki",
            "poem": 1
          },
          {
            "noteId": 560
          },
          {
            "text": "mai ƙarfi,",
            "poem": 1
          },
          {
            "text": "kwance tsakanin buhunan sirdi.",
            "poem": 2
          },
          {
            "noteId": 561
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Sa’ad da ya ga yadda wurin hutunsa yana da kyau",
            "poem": 1
          },
          {
            "text": "da kuma daɗin da ƙasarsa take,",
            "poem": 2
          },
          {
            "text": "zan tanƙware kafaɗarsa ga nauyi",
            "poem": 1
          },
          {
            "text": "yă miƙa kai ga aikin dole.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "“Dan",
            "poem": 1
          },
          {
            "noteId": 562
          },
          {
            "text": "zai tanada adalci wa mutanensa",
            "poem": 1
          },
          {
            "text": "kamar ɗaya cikin kabilan Isra’ila.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Dan zai zama maciji a gefen hanya,",
            "poem": 1
          },
          {
            "text": "kububuwa a bakin hanya,",
            "poem": 2
          },
          {
            "text": "da take saran ɗiɗɗigen doki",
            "poem": 1
          },
          {
            "text": "domin mahayinsa yă fāɗi da baya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "“Ina zuba ido ga cetonka, ya Ubangiji.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "“Masu fashi za su fāɗa wa Gad,",
            "poem": 1
          },
          {
            "noteId": 563
          },
          {
            "text": "amma zai runtume su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "“Abincin Asher zai zama a wadace,",
            "poem": 1
          },
          {
            "text": "zai yi tanadin abinci iri-iri da suka dace don sarki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 21,
        "content": [
          {
            "text": "“Naftali sakakkiyar barewa ce",
            "poem": 1
          },
          {
            "text": "da take haihuwar kyawawan ’ya’ya.",
            "poem": 2
          },
          {
            "noteId": 564
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 22,
        "content": [
          {
            "text": "“Yusuf kuringa ce mai ba da amfani.",
            "poem": 1
          },
          {
            "text": "Kuringa mai ba da amfani kusa da rafi",
            "poem": 2
          },
          {
            "text": "wadda rassanta na hawan bango.",
            "poem": 1
          },
          {
            "noteId": 565
          }
        ]
      },
      {
        "type": "verse",
        "number": 23,
        "content": [
          {
            "text": "Da ɗaci rai mahara suka fāɗa masa;",
            "poem": 1
          },
          {
            "text": "suka harbe shi babu tausayi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 24,
        "content": [
          {
            "text": "Amma bakansa yana nan daram",
            "poem": 1
          },
          {
            "text": "hannuwansa masu ƙarfi ba sa jijjiguwa",
            "poem": 2
          },
          {
            "noteId": 566
          },
          {
            "text": "saboda hannun Maɗaukaki na Yaƙub,",
            "poem": 1
          },
          {
            "text": "saboda Makiyayi, Dutsen Isra’ila,",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 25,
        "content": [
          {
            "text": "saboda Allah na mahaifinka, wanda ya taimake ka,",
            "poem": 1
          },
          {
            "text": "saboda Maɗaukaki,",
            "poem": 2
          },
          {
            "noteId": 567
          },
          {
            "text": "wanda yake albarkace ka",
            "poem": 2
          },
          {
            "text": "da albarkar sama da take bisa",
            "poem": 1
          },
          {
            "text": "albarkun zurfafa da suke ƙarƙashin ƙasa",
            "poem": 2
          },
          {
            "text": "albarkun mama da kuma mahaifa.",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 26,
        "content": [
          {
            "text": "Albarkun mahaifi suna da girma fiye",
            "poem": 1
          },
          {
            "text": "da albarkun daɗaɗɗun duwatsu",
            "poem": 2
          },
          {
            "text": "fiye",
            "poem": 1
          },
          {
            "noteId": 568
          },
          {
            "text": "da yalwar madawwaman tuddai.",
            "poem": 1
          },
          {
            "text": "Bari dukan waɗannan su zauna a kan Yusuf,",
            "poem": 2
          },
          {
            "text": "a goshin ɗan sarki a cikin",
            "poem": 1
          },
          {
            "noteId": 569
          },
          {
            "text": "’yan’uwansa.",
            "poem": 1
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 27,
        "content": [
          {
            "text": "“Benyamin kyarkeci ne mai kisa;",
            "poem": 1
          },
          {
            "text": "da safe yakan cinye abin da ya farauto",
            "poem": 2
          },
          {
            "text": "da yamma yakan raba ganima.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 28,
        "content": [
          "Dukan waɗannan su ne kabilu goma sha biyu na Isra’ila, kuma abin da mahaifinsu ya faɗa musu ke nan sa’ad da ya albarkace su, yana ba kowane albarkar da ta dace da shi."
        ]
      },
      {
        "type": "heading",
        "content": [
          "Mutuwar Yaƙub"
        ]
      },
      {
        "type": "verse",
        "number": 29,
        "content": [
          "Sa’an nan ya ba su waɗannan umarnai ya ce, “Ina gab da a tara ni ga mutanena. Ku binne ni tare da kakannina a kogon da yake cikin filin Efron mutumin Hitti,"
        ]
      },
      {
        "type": "verse",
        "number": 30,
        "content": [
          "kogon da yake cikin filin Makfela, kusa da Mamre a Kan’ana, wanda Ibrahim ya saya tare da filin, yă zama makabarta daga Efron mutumin Hitti."
        ]
      },
      {
        "type": "verse",
        "number": 31,
        "content": [
          "A can aka binne Ibrahim da matarsa Saratu, a can aka binne Ishaku da matarsa Rebeka, a can kuma na binne Liyatu."
        ]
      },
      {
        "type": "verse",
        "number": 32,
        "content": [
          "Filin tare da kogon da yake ciki, an saya daga Hittiyawa.”",
          {
            "noteId": 570
          }
        ]
      },
      {
        "type": "verse",
        "number": 33,
        "content": [
          "Sa’ad da Yaƙub ya gama ba da umarnan ga ’ya’yansa maza, sai ya ɗaga ƙafafunsa zuwa gado, ya ja numfashinsa na ƙarshe, aka kuwa tara shi ga mutanensa."
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 557,
        "caller": "+",
        "text": "Yahuda ya yi kamar ya fito daga Ibraniyanci na yabo ne.",
        "reference": {
          "chapter": 49,
          "verse": 8
        }
      },
      {
        "noteId": 558,
        "caller": "+",
        "text": "Ko kuwa sai Shilo ya zo; ko kuwa sai ya zo ga girma ya dace.",
        "reference": {
          "chapter": 49,
          "verse": 10
        }
      },
      {
        "noteId": 559,
        "caller": "+",
        "text": "Ko kuwa zai zama marar walƙiya daga ruwan inabi, haƙorarsa farare daga madara",
        "reference": {
          "chapter": 49,
          "verse": 12
        }
      },
      {
        "noteId": 560,
        "caller": "+",
        "text": "Ko kuwa mai ƙarfi",
        "reference": {
          "chapter": 49,
          "verse": 14
        }
      },
      {
        "noteId": 561,
        "caller": "+",
        "text": "Ko kuwa sansanin wuta",
        "reference": {
          "chapter": 49,
          "verse": 14
        }
      },
      {
        "noteId": 562,
        "caller": "+",
        "text": "Dan a nan yana nufin yakan tanada adalci.",
        "reference": {
          "chapter": 49,
          "verse": 16
        }
      },
      {
        "noteId": 563,
        "caller": "+",
        "text": "Gad na iya nufin fāɗawa da kuma ƙungiyar mahara.",
        "reference": {
          "chapter": 49,
          "verse": 19
        }
      },
      {
        "noteId": 564,
        "caller": "+",
        "text": "Ko kuwa yakan faɗa kyawawan kalmomi",
        "reference": {
          "chapter": 49,
          "verse": 21
        }
      },
      {
        "noteId": 565,
        "caller": "+",
        "text": "Ko kuwa Yusuf aholakin jeji ne, aholakin jeji kusa da rafi, jakin jeji a tudun mai kunyoyi",
        "reference": {
          "chapter": 49,
          "verse": 22
        }
      },
      {
        "noteId": 566,
        "caller": "+",
        "text": "Ko kuwa mahara za su fāɗa, za su harba, za su rage, za su tsaya",
        "reference": {
          "chapter": 49,
          "verse": 24
        }
      },
      {
        "noteId": 567,
        "caller": "+",
        "text": "Da Ibraniyanci Shaddai",
        "reference": {
          "chapter": 49,
          "verse": 25
        }
      },
      {
        "noteId": 568,
        "caller": "+",
        "text": "Ko kuwa kakana, mai girma kamar",
        "reference": {
          "chapter": 49,
          "verse": 26
        }
      },
      {
        "noteId": 569,
        "caller": "+",
        "text": "Ko kuwa wanda aka raba da",
        "reference": {
          "chapter": 49,
          "verse": 26
        }
      },
      {
        "noteId": 570,
        "caller": "+",
        "text": "Ko kuwa ’ya’ya mazan Het",
        "reference": {
          "chapter": 49,
          "verse": 32
        }
      }
    ]
  },
