  "chapter": {
    "number": 3,
    "content": [
      {
        "type": "heading",
        "content": [
          "An Tsawata wa Shugabanni da Annabawa"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "Sa’an nan na ce,",
          {
            "text": "“Ku kasa kunne, ku shugabannin Yaƙub,",
            "poem": 1
          },
          {
            "text": "ku masu mulkin gidan Isra’ila.",
            "poem": 2
          },
          {
            "text": "Ya kamata ku san shari’a,",
            "poem": 1
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "ku da kuke ƙin abu mai kyau kuke ƙaunar mugunta,",
            "poem": 2
          },
          {
            "text": "ku da kuke feɗe mutanena",
            "poem": 2
          },
          {
            "text": "kuke tuge nama daga ƙasusuwansu;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "ku da kuke cin naman mutanena,",
            "poem": 1
          },
          {
            "text": "ku feɗe fatar jikinsu",
            "poem": 2
          },
          {
            "text": "kuke kakkarya ƙasusuwansu,",
            "poem": 2
          },
          {
            "text": "kuke yayyanka su gunduwa-gunduwa kamar naman da za a toya,",
            "poem": 1
          },
          {
            "text": "kamar naman da za a sa a dafa.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Sa’an nan za su kira ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "amma ba zai amsa musu ba.",
            "poem": 2
          },
          {
            "text": "A wannan lokaci zai ɓoye fuskarsa daga gare su",
            "poem": 1
          },
          {
            "text": "saboda irin muguntar da suka yi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          "Ga abin da Ubangiji ya faɗa,",
          {
            "text": "“Game da annabawa",
            "poem": 1
          },
          {
            "text": "masu ɓad da mutanena,",
            "poem": 2
          },
          {
            "text": "in wani ya ciyar da su,",
            "poem": 1
          },
          {
            "text": "sai su ce akwai ‘salama’",
            "poem": 2
          },
          {
            "text": "amma in bai ciyar da su ba,",
            "poem": 1
          },
          {
            "text": "a shirye suke su kai masa hari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Saboda haka dare yana zuwa a bisanku, ba tare da wahayi ba,",
            "poem": 1
          },
          {
            "text": "kuma duhu, ba tare da duba ba.",
            "poem": 2
          },
          {
            "text": "Rana za tă fāɗi wa annabawa,",
            "poem": 1
          },
          {
            "text": "yini kuma zai zama musu duhu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Masu gani za su ji kunya,",
            "poem": 1
          },
          {
            "text": "masu duba kuma za su ji taƙaici.",
            "poem": 2
          },
          {
            "text": "Dukansu za su rufe fuskokinsu",
            "poem": 1
          },
          {
            "text": "gama ba amsa daga Allah.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Amma game da ni, ina cike da iko",
            "poem": 1
          },
          {
            "text": "ta wurin Ruhun Ubangiji",
            "poem": 2
          },
          {
            "text": "da kuma adalci da ƙarfi,",
            "poem": 2
          },
          {
            "text": "don a sanar da Yaƙub laifofinsa,",
            "poem": 1
          },
          {
            "text": "ga Isra’ila kuma zunubinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Ku ji wannan, ku shugabannin gidan Yaƙub,",
            "poem": 1
          },
          {
            "text": "ku masu mulkin gidan Isra’ila,",
            "poem": 2
          },
          {
            "text": "ku da kuke ƙyamar gaskiya,",
            "poem": 1
          },
          {
            "text": "kuka karkatar duk abin da yake na gaskiya;",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "kuka gina Sihiyona ta wurin zub da jini,",
            "poem": 1
          },
          {
            "text": "Urushalima kuma ta wurin mugunta.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Hukunce-hukuncen shugabannin ƙasar na cin hanci ne,",
            "poem": 1
          },
          {
            "text": "firistocinta kuma suna koyarwa don a biya su,",
            "poem": 2
          },
          {
            "text": "annabawanta kuwa suna yin annabci don neman kuɗi.",
            "poem": 2
          },
          {
            "text": "Duk da haka suna jingina a kan Ubangiji suna cewa,",
            "poem": 1
          },
          {
            "text": "“Ba Ubangiji yana tare da mu ba?",
            "poem": 2
          },
          {
            "text": "Ba bala’in da zai zo mana.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Don haka, saboda ku,",
            "poem": 1
          },
          {
            "text": "za a nome Sihiyona kamar gona,",
            "poem": 2
          },
          {
            "text": "Urushalima kuma ta zama tarin juji,",
            "poem": 1
          },
          {
            "text": "tudun haikali kuwa zai zama kurmin ƙayayyuwa.",
            "poem": 2
          }
        ]
      }
    ],
