        "reference": {
          "chapter": 5,
          "verse": 2
        }
      },
      {
        "noteId": 1014,
        "caller": "+",
        "text": "Ko kuwa daga madawwamin kwanaki",
        "reference": {
          "chapter": 5,
          "verse": 2
        }
      },
      {
        "noteId": 1015,
        "caller": "+",
        "text": "Ko kuwa ragargaza",
        "reference": {
          "chapter": 5,
          "verse": 6
        }
      },
      {
        "noteId": 1016,
        "caller": "+",
        "text": "Ko kuwa Nimrod a bakin ƙofofinta",
        "reference": {
          "chapter": 5,
          "verse": 6
        }
      },
      {
