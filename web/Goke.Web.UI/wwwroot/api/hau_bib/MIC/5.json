  "chapter": {
    "number": 5,
    "content": [
      {
        "type": "heading",
        "content": [
          "An yi alkawarin mai mulki daga Betlehem"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Ki tattara sojojinki, ya ke birnin mayaƙa,",
            "poem": 1
          },
          {
            "noteId": 1011
          },
          {
            "text": "gama an kewaye mu da yaƙi.",
            "poem": 2
          },
          {
            "text": "Za su bugi kumatun mai mulkin",
            "poem": 1
          },
          {
            "text": "Isra’ila da sandar ƙarfe.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "“Amma ke, Betlehem ta Efrata,",
            "poem": 1
          },
          {
            "text": "ko da yake ke ƙarama ce daga cikin zuriyarki",
            "poem": 2
          },
          {
            "noteId": 1012
          },
          {
            "text": "a Yahuda,",
            "poem": 2
          },
          {
            "text": "daga cikinki wani zai zo domina",
            "poem": 1
          },
          {
            "text": "wanda zai yi mulkin Isra’ila,",
            "poem": 2
          },
          {
            "text": "wanda asalinsa",
            "poem": 1
          },
          {
            "noteId": 1013
          },
          {
            "text": "tun fil azal ne.”",
            "poem": 2
          },
          {
            "noteId": 1014
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Saboda haka za a yashe Isra’ila",
            "poem": 1
          },
          {
            "text": "har sai wadda take naƙuda ta haihu",
            "poem": 2
          },
          {
            "text": "sauran ’yan’uwansa kuma sun dawo",
            "poem": 1
          },
          {
            "text": "su haɗu da Isra’ilawa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Zai tsaya yă yi kiwon garkensa",
            "poem": 1
          },
          {
            "text": "da ƙarfin Ubangiji,",
            "poem": 2
          },
          {
            "text": "cikin girman sunan Ubangiji Allahnsa.",
            "poem": 2
          },
          {
            "text": "Za su kuma zauna lafiya, gama girmansa",
            "poem": 1
          },
          {
            "text": "za tă kai har ƙarshen duniya.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Zai kuma zama salamarsu.",
            "poem": 1
          },
          {
            "text": "Sa’ad da Assuriyawa suka kawo wa ƙasarmu hari",
            "poem": 2
          },
          {
            "text": "suka tattake kagarunmu,",
            "poem": 2
          },
          {
            "text": "za mu tā da makiyaya bakwai,",
            "poem": 1
          },
          {
            "text": "har ma shugabannin mutane takwas su yi gāba da su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Za su yi mulkin",
            "poem": 1
          },
          {
            "noteId": 1015
          },
          {
            "text": "ƙasar Assuriya da takobi,",
            "poem": 1
          },
          {
            "text": "ƙasar Nimrod kuma da zaran takobi.",
            "poem": 2
          },
          {
            "noteId": 1016
          },
          {
            "text": "Zai cece mu daga hannun Assuriyawa",
            "poem": 1
          },
          {
            "text": "sa’ad da suka kawo wa ƙasarmu hari",
            "poem": 2
          },
          {
            "text": "suka kuma tattake zuwa cikin iyakokinmu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Raguwar Yaƙub za tă kasance",
            "poem": 1
          },
          {
            "text": "a tsakiyar mutane masu yawa",
            "poem": 2
          },
          {
            "text": "kamar raɓa daga Ubangiji,",
            "poem": 1
          },
          {
            "text": "kamar yayyafi a kan ciyawa,",
            "poem": 2
          },
          {
            "text": "wanda ba ya jiran mutum",
            "poem": 1
          },
          {
            "text": "ko kuma yă dakata wa ɗan adam.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Raguwar Yaƙub za tă kasance tare da al’ummai,",
            "poem": 1
          },
          {
            "text": "a cikin mutane masu yawa,",
            "poem": 2
          },
          {
            "text": "kamar zaki a cikin sauran namun jeji,",
            "poem": 1
          },
          {
            "text": "kamar ɗan zaki cikin garken tumaki,",
            "poem": 2
          },
          {
            "text": "wanda yake tattaka yă kuma yi kaca-kaca da su sa’ad da yake ratsa a cikinsu,",
            "poem": 1
          },
          {
            "text": "ba kuwa wanda zai cece su.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Za a ɗaga hannunka cikin nasara a kan abokan gābanka,",
            "poem": 1
          },
          {
            "text": "za a hallaka maƙiyanka duka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          "“A wannan rana,” in ji Ubangiji",
          {
            "text": "“Zan hallaka dawakanku daga cikinku,",
            "poem": 1
          },
          {
            "text": "in kuma rurrushe kekunan yaƙinku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Zan hallaka biranen ƙasarku",
            "poem": 1
          },
          {
            "text": "in yi rugu-rugu da dukan katangunku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Zan kawar da maitarku,",
            "poem": 1
          },
          {
            "text": "ba za a ƙara yin sihiri ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Zan sassare dukan gumakan da kuka sassaƙa",
            "poem": 1
          },
          {
            "text": "da keɓaɓɓun duwatsunku a cikinku,",
            "poem": 2
          },
          {
            "text": "nan gaba ba za ku ƙara rusuna",
            "poem": 1
          },
          {
            "text": "wa aikin hannuwanku ba.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Zan tumɓuke daga gare ku ginshiƙan Asheranku",
            "poem": 1
          },
          {
            "noteId": 1017
          },
          {
            "text": "in kuma rurrushe biranenku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "Zan yi ramuwa cikin fushi da hasala",
            "poem": 1
          },
          {
            "text": "a kan al’umman da ba su yi mini biyayya ba.”",
            "poem": 2
          }
        ]
      }
    ],
    "footnotes": [
      {
        "noteId": 1011,
        "caller": "+",
