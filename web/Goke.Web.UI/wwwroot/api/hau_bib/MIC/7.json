  "chapter": {
    "number": 7,
    "content": [
      {
        "type": "heading",
        "content": [
          "Baƙin cikin Isra’ila"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          {
            "text": "Tawa ta ƙare!",
            "poem": 1
          },
          {
            "text": "Ina kama da wanda yake tattara ’ya’yan itatuwa",
            "poem": 1
          },
          {
            "text": "a lokacin kalar ’ya’yan inabi;",
            "poem": 2
          },
          {
            "text": "babu sauran nonon inabin da za a tsinka a ci,",
            "poem": 1
          },
          {
            "text": "babu kuma ’ya’yan ɓaure na farko-farkon da raina yake marmari.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          {
            "text": "An kawar da masu tsoron Allah daga ƙasar;",
            "poem": 1
          },
          {
            "text": "babu sauran mai adalcin da ya rage.",
            "poem": 2
          },
          {
            "text": "Dukan mutane suna kwanto don su zub da jini;",
            "poem": 1
          },
          {
            "text": "kowa yana farautar ɗan’uwansa da tarko.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Dukan hannuwansu sun gwaninta wajen yin mugunta;",
            "poem": 1
          },
          {
            "text": "shugabanni suna nema a ba su kyautai,",
            "poem": 2
          },
          {
            "text": "alƙalai suna nema a ba su cin hanci,",
            "poem": 1
          },
          {
            "text": "masu iko suna faɗar son zuciyarsu,",
            "poem": 2
          },
          {
            "text": "duk suna ƙulla makirci tare.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Mafi kyau a cikinsu yana kama da ƙaya,",
            "poem": 1
          },
          {
            "text": "mafi gaskiyarsu ya fi shingen ƙaya muni.",
            "poem": 2
          },
          {
            "text": "Ranar da Allah zai ziyarce ku ta zo,",
            "poem": 1
          },
          {
            "text": "ranar da masu gadinku za su hura ƙaho.",
            "poem": 2
          },
          {
            "text": "Yanzu ne lokacin ruɗewarku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Kada ka yarda da maƙwabci;",
            "poem": 1
          },
          {
            "text": "kada ka sa begenka ga abokai.",
            "poem": 2
          },
          {
            "text": "Ko ma wadda take kwance a ƙirjinka,",
            "poem": 1
          },
          {
            "text": "ka yi hankali da kalmominka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "Gama ɗa yakan ce wannan ba mahaifinsa ba ne,",
            "poem": 1
          },
          {
            "text": "diya kuma takan tayar wa mahaifiyarta,",
            "poem": 2
          },
          {
            "text": "matar ɗa takan yi gāba da uwar mijinta,",
            "poem": 1
          },
          {
            "text": "abokan gāban mutum su ne iyalin cikin gidansa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Amma game da ni, zan sa bege ga Ubangiji,",
            "poem": 1
          },
          {
            "text": "ina sauraron Allah Mai Cetona;",
            "poem": 2
          },
          {
            "text": "Allahna kuwa zai ji ni.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Isra’ila za tă tashi"
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Kada ku yi farin ciki, ku maƙiyana!",
            "poem": 1
          },
          {
            "text": "Ko da yake na fāɗi, zan tashi.",
            "poem": 2
          },
          {
            "text": "Ko da yake na zauna a cikin duhu,",
            "poem": 1
          },
          {
            "text": "Ubangiji zai zama haskena.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Domin na yi masa zunubi,",
            "poem": 1
          },
          {
            "text": "zan fuskanci fushin Ubangiji,",
            "poem": 2
          },
          {
            "text": "har sai ya dubi batuna",
            "poem": 1
          },
          {
            "text": "ya kuma tabbatar da ’yancina.",
            "poem": 2
          },
          {
            "text": "Zai kawo ni zuwa wurin haske;",
            "poem": 1
          },
          {
            "text": "zan ga adalcinsa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Sa’an nan maƙiyina zai gani",
            "poem": 1
          },
          {
            "text": "yă kuma sha kunya,",
            "poem": 2
          },
          {
            "text": "shi da yake ce da ni",
            "poem": 1
          },
          {
            "text": "“Ina Ubangiji Allahnka?”",
            "poem": 2
          },
          {
            "text": "Zai gani, yă kuma ji kunya.",
            "poem": 1
          },
          {
            "text": "Ko yanzu ma za a tattake shi",
            "poem": 2
          },
          {
            "text": "kamar taɓo a tituna.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Ranar gina katangarka tana zuwa,",
            "poem": 1
          },
          {
            "text": "a ranar za a fadada iyakokinka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "A wannan rana mutane za su zo gare ka",
            "poem": 1
          },
          {
            "text": "daga Assuriya da kuma biranen Masar,",
            "poem": 2
          },
          {
            "text": "daga Masar ma har zuwa Yuferites",
            "poem": 1
          },
          {
            "text": "daga teku zuwa teku,",
            "poem": 2
          },
          {
            "text": "kuma daga dutse zuwa dutse.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "Duniya za tă zama kufai saboda mazaunanta,",
            "poem": 1
          },
          {
            "text": "saboda ayyukansu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Addu’a da yabo"
        ]
      },
      {
        "type": "verse",
        "number": 14,
        "content": [
          {
            "text": "Ka yi kiwon mutanenka da sandarka,",
            "poem": 1
          },
          {
            "text": "garken gādonka,",
            "poem": 2
          },
          {
            "text": "wanda yake zaune shi kaɗai a kurmi,",
            "poem": 1
          },
          {
            "text": "a ƙasa mai kyau ta kiwo,",
            "poem": 2
          },
          {
            "noteId": 1022
          },
          {
            "text": "bari su yi kiwo a Bashan da Gileyad",
            "poem": 1
          },
          {
            "text": "kamar a kwanakin dā.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 15,
        "content": [
          {
            "text": "“Kamar a kwanakin da kuka fito daga Masar,",
            "poem": 1
          },
          {
            "text": "zan nuna musu al’ajabaina.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 16,
        "content": [
          {
            "text": "Al’ummai za su gani su kuma ji kunya,",
            "poem": 1
          },
          {
            "text": "za a kuma ƙwace musu dukan ikonsu.",
            "poem": 2
          },
          {
            "text": "Za su kama bakinsu",
            "poem": 1
          },
          {
            "text": "kunnuwansu kuma za su zama kurame.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 17,
        "content": [
          {
            "text": "Za su lashi ƙura kamar maciji,",
            "poem": 1
          },
          {
            "text": "kamar dabbobi masu rarrafe a ƙasa.",
            "poem": 2
          },
          {
            "text": "Za su fito daga maɓuyarsu da rawan jiki,",
            "poem": 1
          },
          {
            "text": "za su juya cikin tsoro ga Ubangiji Allahnmu",
            "poem": 2
          },
          {
            "text": "su kuma ji tsoronku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 18,
        "content": [
          {
            "text": "Wane ne Allah kamar ka,",
            "poem": 1
          },
          {
            "text": "wanda yake yafe zunubi yă kuma gafarta laifofin mutanensa da suka ragu?",
            "poem": 2
          },
          {
            "text": "Ba ka zama mai fushi har abada",
            "poem": 2
          },
          {
            "text": "amma kana marmari ka nuna jinƙai.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 19,
        "content": [
          {
            "text": "Za ka sāke jin tausayinmu;",
            "poem": 1
          },
          {
            "text": "za ka tattake zunubanmu a ƙarƙashin sawunka",
            "poem": 2
          },
          {
            "text": "ka kuma tura dukan kurakuranmu zuwa cikin zurfafan teku.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 20,
        "content": [
          {
            "text": "Za ka yi wa Yaƙub aminci,",
            "poem": 1
          },
          {
            "text": "ka kuma nuna jinƙai ga Ibrahim,",
            "poem": 2
          },
          {
            "text": "kamar yadda ka yi alkawari da rantsuwa ga kakanninmu",
            "poem": 1
          },
          {
            "text": "tun a kwanankin dā.",
            "poem": 2
          }
        ]
      }
    ],
