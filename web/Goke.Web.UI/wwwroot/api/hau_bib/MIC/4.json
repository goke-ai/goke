  "chapter": {
    "number": 4,
    "content": [
      {
        "type": "heading",
        "content": [
          "Dutsen Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 1,
        "content": [
          "A kwanakin ƙarshe",
          {
            "text": "za a kafa dutsen haikalin Ubangiji",
            "poem": 1
          },
          {
            "text": "yă zama babba a cikin duwatsu.",
            "poem": 2
          },
          {
            "text": "Za a ɗaga shi sama da tuddai,",
            "poem": 1
          },
          {
            "text": "mutane kuma za su riƙa ɗunguma zuwa gare shi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 2,
        "content": [
          "Al’ummai da yawa za su zo su ce,",
          {
            "text": "“Ku zo, bari mu haura zuwa dutsen Ubangiji,",
            "poem": 1
          },
          {
            "text": "zuwa gidan Allah na Yaƙub.",
            "poem": 2
          },
          {
            "text": "Zai koya mana hanyoyinsa,",
            "poem": 1
          },
          {
            "text": "don mu yi tafiya cikin hanyoyinsa.”",
            "poem": 2
          },
          {
            "text": "Doka za tă fita daga Sihiyona,",
            "poem": 1
          },
          {
            "text": "maganar Ubangiji kuma daga Urushalima.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 3,
        "content": [
          {
            "text": "Zai shari’anta tsakanin mutane",
            "poem": 1
          },
          {
            "text": "yă kuma sulhunta tsakanin manyan al’ummai nesa da kuma kusa.",
            "poem": 2
          },
          {
            "text": "Har su mai da takubansu su zama garemani,",
            "poem": 1
          },
          {
            "text": "māsunsu kuma su zama wuƙaƙen askin itace.",
            "poem": 2
          },
          {
            "text": "Al’umma ba za tă ɗauki takobi gāba da wata al’umma ba,",
            "poem": 2
          },
          {
            "text": "ko a yi horarwa don yaƙi.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 4,
        "content": [
          {
            "text": "Kowa zai zauna a tushen kuringar inabinsa",
            "poem": 1
          },
          {
            "text": "da tushen ɓaurensa,",
            "poem": 2
          },
          {
            "text": "kuma ba wanda zai tsoratar da su,",
            "poem": 1
          },
          {
            "text": "gama Ubangiji Maɗaukaki ne ya faɗa.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 5,
        "content": [
          {
            "text": "Dukan al’ummai za su iya tafiya",
            "poem": 1
          },
          {
            "text": "a cikin sunan allolinsu;",
            "poem": 2
          },
          {
            "text": "mu dai za mu yi tafiya a cikin sunan Ubangiji",
            "poem": 1
          },
          {
            "text": "Allahnmu har abada abadin.",
            "poem": 2
          }
        ]
      },
      {
        "type": "heading",
        "content": [
          "Shirin Ubangiji"
        ]
      },
      {
        "type": "verse",
        "number": 6,
        "content": [
          {
            "text": "“A wannan rana,” in ji Ubangiji,",
            "poem": 1
          },
          {
            "text": "“zan tattara guragu;",
            "poem": 2
          },
          {
            "text": "zan kuma tara masu zaman bauta,",
            "poem": 1
          },
          {
            "text": "da waɗanda na sa suka damu.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 7,
        "content": [
          {
            "text": "Zan mai da guragu su zama raguwa,",
            "poem": 1
          },
          {
            "text": "waɗanda aka kora, su zama al’umma mai ƙarfi.",
            "poem": 2
          },
          {
            "text": "Ubangiji zai yi mulkinsu a Dutsen Sihiyona",
            "poem": 1
          },
          {
            "text": "daga wannan rana da kuma har abada.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 8,
        "content": [
          {
            "text": "Game da ke, ya hasumiyar tsaron garke,",
            "poem": 1
          },
          {
            "text": "Ya mafaka",
            "poem": 2
          },
          {
            "noteId": 1010
          },
          {
            "text": "Diyar Sihiyona,",
            "poem": 2
          },
          {
            "text": "za a maido miki da mulkinki na dā,",
            "poem": 1
          },
          {
            "text": "sarauta kuma za tă zo wa Diyar Urushalima.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 9,
        "content": [
          {
            "text": "Don me yanzu kike kuka da ƙarfi,",
            "poem": 1
          },
          {
            "text": "ba ki da sarki ne?",
            "poem": 2
          },
          {
            "text": "Masu shawararki sun hallaka ne,",
            "poem": 1
          },
          {
            "text": "da zafi ya cika ki kamar mace mai naƙuda?",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 10,
        "content": [
          {
            "text": "Ki yi birgima cikin zafin azaba, ya Diyar Sihiyona,",
            "poem": 1
          },
          {
            "text": "kamar macen da take naƙuda,",
            "poem": 2
          },
          {
            "text": "don yanzu dole ki bar birni",
            "poem": 1
          },
          {
            "text": "ki kafa sansani a filin Allah.",
            "poem": 2
          },
          {
            "text": "Za ki tafi Babilon;",
            "poem": 1
          },
          {
            "text": "a can za a kuɓutar da ki.",
            "poem": 2
          },
          {
            "text": "A can ne Ubangiji",
            "poem": 1
          },
          {
            "text": "zai fanshe ki daga hannun maƙiyanki.",
            "poem": 2
          }
        ]
      },
      {
        "type": "line_break"
      },
      {
        "type": "verse",
        "number": 11,
        "content": [
          {
            "text": "Amma yanzu al’ummai da yawa",
            "poem": 1
          },
          {
            "text": "suna gāba da ke.",
            "poem": 2
          },
          {
            "text": "Suna cewa, “Bari a ƙazantar da ita,",
            "poem": 1
          },
          {
            "text": "bari mu zuba wa Sihiyona ido.”",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 12,
        "content": [
          {
            "text": "Amma ba su san",
            "poem": 1
          },
          {
            "text": "tunanin Ubangiji ba;",
            "poem": 2
          },
          {
            "text": "ba su fahimci shirinsa ba,",
            "poem": 1
          },
          {
            "text": "shi da ya tattara su kamar dammuna a masussuka.",
            "poem": 2
          }
        ]
      },
      {
        "type": "verse",
        "number": 13,
        "content": [
          {
            "text": "“Ki tashi ki yi sussuka, ya Diyar Sihiyona,",
            "poem": 1
          },
          {
            "text": "gama zan ba ki ƙahonin ƙarfe;",
            "poem": 2
          },
          {
            "text": "zan ba ki kofatan tagulla",
            "poem": 1
          },
          {
            "text": "domin ki ragargaje al’ummai masu yawa.”",
            "poem": 2
          },
          {
            "text": "Za ki ba Ubangiji dukan dukiyarsu da suka tara ta hanyar zamba,",
            "poem": 1
          },
          {
            "text": "wadatarsu kuma ga Ubangiji dukan duniya.",
            "poem": 2
          }
        ]
      }
    ],
